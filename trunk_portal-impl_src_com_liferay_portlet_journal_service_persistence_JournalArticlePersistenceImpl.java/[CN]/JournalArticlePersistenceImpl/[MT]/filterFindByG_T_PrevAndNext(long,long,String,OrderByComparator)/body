{
  if (!InlineSQLHelperUtil.isEnabled(groupId)) {
    return findByG_T_PrevAndNext(id,groupId,templateId,orderByComparator);
  }
  JournalArticle journalArticle=findByPrimaryKey(id);
  Session session=null;
  try {
    session=openSession();
    JournalArticle[] array=new JournalArticleImpl[3];
    array[0]=filterGetByG_T_PrevAndNext(session,journalArticle,groupId,templateId,orderByComparator,true);
    array[1]=journalArticle;
    array[2]=filterGetByG_T_PrevAndNext(session,journalArticle,groupId,templateId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
