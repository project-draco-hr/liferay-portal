{
  JournalArticle journalArticle=findByPrimaryKey(id);
  Session session=null;
  try {
    session=openSession();
    JournalArticle[] array=new JournalArticleImpl[3];
    array[0]=getByG_L_PrevAndNext(session,journalArticle,groupId,layoutUuid,orderByComparator,true);
    array[1]=journalArticle;
    array[2]=getByG_L_PrevAndNext(session,journalArticle,groupId,layoutUuid,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
