{
  if (!InlineSQLHelperUtil.isEnabled(groupId)) {
    return findByG_P_M_PrevAndNext(folderId,groupId,parentFolderId,mountPoint,orderByComparator);
  }
  DLFolder dlFolder=findByPrimaryKey(folderId);
  Session session=null;
  try {
    session=openSession();
    DLFolder[] array=new DLFolderImpl[3];
    array[0]=filterGetByG_P_M_PrevAndNext(session,dlFolder,groupId,parentFolderId,mountPoint,orderByComparator,true);
    array[1]=dlFolder;
    array[2]=filterGetByG_P_M_PrevAndNext(session,dlFolder,groupId,parentFolderId,mountPoint,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
