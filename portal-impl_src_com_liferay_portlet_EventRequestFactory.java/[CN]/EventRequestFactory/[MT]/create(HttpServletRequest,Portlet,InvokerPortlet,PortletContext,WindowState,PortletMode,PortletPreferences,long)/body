{
  if (PropsValues.COMMONS_POOL_ENABLED) {
    if (_log.isDebugEnabled()) {
      _log.debug("Borrowing:\t" + _instance._pool.getNumIdle() + "\t"+ _instance._pool.getNumActive());
    }
  }
  EventRequestImpl eventReqImpl=null;
  if (PropsValues.COMMONS_POOL_ENABLED) {
    eventReqImpl=(EventRequestImpl)_instance._pool.borrowObject();
  }
 else {
    eventReqImpl=new EventRequestImpl();
  }
  eventReqImpl.init(req,portlet,invokerPortlet,portletCtx,windowState,portletMode,prefs,plid);
  return eventReqImpl;
}
