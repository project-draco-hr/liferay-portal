{
  final List<Path> paths=new ArrayList<>();
  FileSystem fileSystem=FileSystems.getDefault();
  final PathMatcher pathMatcher=fileSystem.getPathMatcher("glob:" + pattern);
  Files.walkFileTree(Paths.get(baseDirName),new SimpleFileVisitor<Path>(){
    @Override public FileVisitResult visitFile(    Path filePath,    BasicFileAttributes basicFileAttributes) throws IOException {
      if (pathMatcher.matches(filePath)) {
        paths.add(filePath);
        if (paths.size() == limit) {
          return FileVisitResult.TERMINATE;
        }
      }
      return FileVisitResult.CONTINUE;
    }
  }
);
  return paths;
}
