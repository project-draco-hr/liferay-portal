{
  DDMFormField ddmFormField=_ddmFormFields.get(index);
  Map<String,List<DDMFormFieldValue>> ddmFormFieldValuesMap=ddmFormValues.getDDMFormFieldValuesMap();
  final DDMFormFieldValueRenderer ddmFieldValueRenderer=DDMFormFieldTypeServicesTrackerUtil.getDDMFormFieldValueRenderer(ddmFormField.getType());
  List<DDMFormFieldValue> ddmFormFieldValues=ddmFormFieldValuesMap.get(ddmFormField.getName());
  if (ddmFormFieldValues == null) {
    ddmFormFieldValues=Collections.emptyList();
  }
  List<String> renderedDDMFormFielValues=ListUtil.toList(ddmFormFieldValues,new Function<DDMFormFieldValue,String>(){
    @Override public String apply(    DDMFormFieldValue ddmFormFieldValue){
      return ddmFieldValueRenderer.render(ddmFormFieldValue,_liferayPortletRequest.getLocale());
    }
  }
);
  return StringUtil.merge(renderedDDMFormFielValues,StringPool.COMMA_AND_SPACE);
}
