{
  int count=0;
  List<PanelCategory> panelCategories=_panelCategoryRegistry.getChildPanelCategories(panelCategoryKey,permissionChecker,group);
  for (  PanelCategory panelCategory : panelCategories) {
    count+=panelCategory.getNotificationsCount(this,permissionChecker,group,user);
  }
  Iterable<PanelApp> panelApps=_panelAppRegistry.getPanelApps(panelCategoryKey,permissionChecker,group);
  for (  PanelApp panelApp : panelApps) {
    count+=panelApp.getNotificationsCount(user);
  }
  return count;
}
