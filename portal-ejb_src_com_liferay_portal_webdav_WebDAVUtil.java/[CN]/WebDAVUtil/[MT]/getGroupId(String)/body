{
  String[] pathArray=getPathArray(path);
  if (pathArray.length <= 1) {
    return 0;
  }
 else {
    try {
      String companyId=pathArray[0];
      String groupName=pathArray[1];
      Group group=GroupLocalServiceUtil.getGroup(companyId,groupName);
      return group.getGroupId();
    }
 catch (    Exception e) {
      _log.error(e,e);
      return 0;
    }
  }
}
