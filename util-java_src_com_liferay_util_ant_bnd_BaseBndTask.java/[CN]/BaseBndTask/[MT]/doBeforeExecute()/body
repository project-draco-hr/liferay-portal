{
  if ((_bndRootFile == null) || !_bndRootFile.exists() || _bndRootFile.isDirectory()) {
    if (_bndRootFile != null) {
      _project.log("bndRootFile is either missing or is a directory " + _bndRootFile.getAbsolutePath(),Project.MSG_ERR);
    }
    throw new Exception("bndRootFile is not set correctly");
  }
  _bndRootFile=_bndRootFile.getAbsoluteFile();
}
