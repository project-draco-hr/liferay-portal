{
  if (servletContextName == null) {
    if (Validator.isNull(beanIdentifier)) {
      return methodHandler.invoke(true);
    }
 else {
      Object bean=PortalBeanLocatorUtil.locate(beanIdentifier);
      return methodHandler.invoke(bean);
    }
  }
  Thread currentThread=Thread.currentThread();
  ClassLoader contextClassLoader=currentThread.getContextClassLoader();
  try {
    ClassLoader classLoader=(ClassLoader)PortletBeanLocatorUtil.locate(servletContextName,"portletClassLoader");
    currentThread.setContextClassLoader(classLoader);
    if (Validator.isNull(beanIdentifier)) {
      return methodHandler.invoke(true);
    }
 else {
      Object bean=PortletBeanLocatorUtil.locate(servletContextName,beanIdentifier);
      return methodHandler.invoke(bean);
    }
  }
  finally {
    currentThread.setContextClassLoader(contextClassLoader);
  }
}
