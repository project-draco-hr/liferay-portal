{
  StringBundler sb=new StringBundler(5);
  boolean visible=ddmFormFieldRenderingContext.isVisible();
  sb.append("<div class=\"");
  if (!visible) {
    sb.append("hide ");
  }
  sb.append("lfr-ddm-form-field-container\">");
  sb.append(ddmFormFieldHTML);
  sb.append("</div>");
  return sb.toString();
}
