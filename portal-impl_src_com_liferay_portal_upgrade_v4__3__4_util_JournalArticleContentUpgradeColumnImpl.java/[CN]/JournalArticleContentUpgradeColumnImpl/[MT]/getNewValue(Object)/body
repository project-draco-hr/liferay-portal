{
  String oldContent=(String)oldValue;
  String newContent=oldContent;
  String structureId=(String)_structureIdColumn.getOldValue();
  if (Validator.isNull(structureId)) {
    if (Validator.isNotNull(oldContent) && (oldContent.indexOf("<static-content") == -1)) {
      String defaultLanguageId=LocaleUtil.toLanguageId(LocaleUtil.getDefault());
      newContent=LocalizationUtil.updateLocalization(StringPool.BLANK,"static-content",oldContent,defaultLanguageId,defaultLanguageId,true);
    }
  }
  return newContent;
}
