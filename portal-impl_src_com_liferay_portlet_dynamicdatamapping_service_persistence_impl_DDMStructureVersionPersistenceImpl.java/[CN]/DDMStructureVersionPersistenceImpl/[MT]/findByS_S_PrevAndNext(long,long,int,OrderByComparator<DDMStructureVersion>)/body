{
  DDMStructureVersion ddmStructureVersion=findByPrimaryKey(structureVersionId);
  Session session=null;
  try {
    session=openSession();
    DDMStructureVersion[] array=new DDMStructureVersionImpl[3];
    array[0]=getByS_S_PrevAndNext(session,ddmStructureVersion,structureId,status,orderByComparator,true);
    array[1]=ddmStructureVersion;
    array[2]=getByS_S_PrevAndNext(session,ddmStructureVersion,structureId,status,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
