{
  if (primary) {
    Iterator itr=phonePersistence.findByC_C_C_P(companyId,classNameId,classPK,primary).iterator();
    while (itr.hasNext()) {
      Phone phone=(Phone)itr.next();
      if ((phoneId <= 0) || (phone.getPhoneId() != phoneId)) {
        phone.setPrimary(false);
        phonePersistence.update(phone);
      }
    }
  }
}
