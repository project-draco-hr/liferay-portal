{
  if (a == b) {
    return true;
  }
  if (a == null || b == null) {
    return false;
  }
  for (Class<?> x=a; x != null; x=x.getSuperclass()) {
    if (x == b) {
      return true;
    }
    if (b.isInterface()) {
      Class<?>[] interfaces=x.getInterfaces();
      for (int i=0; i < interfaces.length; i++) {
        if (isSubclass(interfaces[i],b)) {
          return true;
        }
      }
    }
  }
  return false;
}
