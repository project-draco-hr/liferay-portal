{
  if (ddmFormValues == null) {
    return null;
  }
  com.liferay.portlet.dynamicdatamapping.model.DDMForm translatedDDMForm=translate(ddmFormValues.getDDMForm());
  com.liferay.portlet.dynamicdatamapping.storage.DDMFormValues translatedDDMFormValues=new com.liferay.portlet.dynamicdatamapping.storage.DDMFormValues(translatedDDMForm);
  translatedDDMFormValues.setAvailableLocales(ddmFormValues.getAvailableLocales());
  translatedDDMFormValues.setDefaultLocale(ddmFormValues.getDefaultLocale());
  for (  DDMFormFieldValue ddmFormFieldValue : ddmFormValues.getDDMFormFieldValues()) {
    translatedDDMFormValues.addDDMFormFieldValue(translate(ddmFormFieldValue));
  }
  return translatedDDMFormValues;
}
