{
  if (ddmFormFieldOptions == null) {
    return null;
  }
  DDMFormFieldOptions translatedDDMFormFieldOptions=new DDMFormFieldOptions();
  translatedDDMFormFieldOptions.setDefaultLocale(ddmFormFieldOptions.getDefaultLocale());
  Map<String,com.liferay.portlet.dynamicdatamapping.model.LocalizedValue> options=ddmFormFieldOptions.getOptions();
  for (  String optionValue : options.keySet()) {
    com.liferay.portlet.dynamicdatamapping.model.LocalizedValue localizedValue=options.get(optionValue);
    for (    Locale locale : localizedValue.getAvailableLocales()) {
      translatedDDMFormFieldOptions.addOptionLabel(optionValue,locale,localizedValue.getString(locale));
    }
  }
  return translatedDDMFormFieldOptions;
}
