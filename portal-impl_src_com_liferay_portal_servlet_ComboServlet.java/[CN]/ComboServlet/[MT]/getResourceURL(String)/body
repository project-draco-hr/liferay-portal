{
  ModulePath modulePath=new ModulePath(modulePathString);
  ServletContext servletContext=getServletContextFromPath(modulePath.getModuleContextPath());
  URL url=servletContext.getResource(modulePath.getResourcePath());
  if (url == null) {
    throw new ServletException("Resource " + modulePath.getResourcePath() + " not found in "+ modulePath.getModuleContextPath());
  }
  return url;
}
