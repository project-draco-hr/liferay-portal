{
  Resource resource=findByPrimaryKey(resourceId);
  Session session=null;
  try {
    session=openSession();
    Resource[] array=new ResourceImpl[3];
    array[0]=getByCodeId_PrevAndNext(session,resource,codeId,orderByComparator,true);
    array[1]=resource;
    array[2]=getByCodeId_PrevAndNext(session,resource,codeId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
