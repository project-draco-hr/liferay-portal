{
  Object[] finderArgs=new Object[]{new Long(codeId)};
  Long count=(Long)FinderCacheUtil.getResult(FINDER_PATH_COUNT_BY_CODEID,finderArgs,this);
  if (count == null) {
    Session session=null;
    try {
      session=openSession();
      StringBundler query=new StringBundler();
      query.append(_SQL_COUNT_RESOURCE_WHERE);
      query.append(_FINDER_COLUMN_CODEID_CODEID_2);
      Query q=session.createQuery(query.toString());
      QueryPos qPos=QueryPos.getInstance(q);
      qPos.add(codeId);
      count=(Long)q.uniqueResult();
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      if (count == null) {
        count=Long.valueOf(0);
      }
      FinderCacheUtil.putResult(FINDER_PATH_COUNT_BY_CODEID,finderArgs,count);
      closeSession(session);
    }
  }
  return count.intValue();
}
