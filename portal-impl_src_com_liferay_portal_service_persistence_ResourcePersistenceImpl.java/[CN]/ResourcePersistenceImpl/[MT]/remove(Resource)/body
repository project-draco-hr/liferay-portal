{
  FinderCache.clearCache(Resource.class.getName());
  Session session=null;
  try {
    session=openSession();
    session.delete(resource);
    session.flush();
    return resource;
  }
 catch (  Exception e) {
    throw HibernateUtil.processException(e);
  }
 finally {
    closeSession(session);
  }
}
