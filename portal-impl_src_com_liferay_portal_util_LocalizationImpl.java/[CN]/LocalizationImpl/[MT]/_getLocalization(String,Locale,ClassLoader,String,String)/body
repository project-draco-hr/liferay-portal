{
  ResourceBundle resourceBundle=ResourceBundleUtil.getBundle(bundleName,locale,classLoader);
  String value=null;
  if (resourceBundle.containsKey(key)) {
    try {
      value=resourceBundle.getString(key);
      value=new String(value.getBytes(StringPool.ISO_8859_1),StringPool.UTF8);
    }
 catch (    Exception e) {
    }
  }
  if (Validator.isNotNull(value)) {
    value=LanguageResources.fixValue(value);
  }
 else {
    value=LanguageUtil.get(locale,key,defaultValue);
  }
  return value;
}
