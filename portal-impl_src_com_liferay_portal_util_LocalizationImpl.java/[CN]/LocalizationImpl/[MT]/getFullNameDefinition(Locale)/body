{
  String[] userNameFields=StringUtil.split(LanguageUtil.get(locale,"lang.user.name.fields"));
  String userNameRequiredFields=LanguageUtil.get(locale,"lang.user.name.required.fields");
  FullNameDefinition fullNameDefinition=new FullNameDefinition();
  for (  String userNameField : userNameFields) {
    FullNameField fullNameField=new FullNameField();
    fullNameField.setName(userNameField);
    boolean required=StringUtil.contains(userNameRequiredFields,userNameField);
    fullNameField.setRequired(required);
    String testOptionsProperty="lang.user.name." + userNameField + ".options";
    String optionsString=LanguageUtil.get(locale,testOptionsProperty,StringPool.BLANK);
    if (!optionsString.isEmpty()) {
      fullNameField.setOptions(StringUtil.split(optionsString));
    }
    fullNameDefinition.addField(fullNameField);
  }
  return fullNameDefinition;
}
