{
  ThemeDisplay themeDisplay=(ThemeDisplay)request.getAttribute(WebKeys.THEME_DISPLAY);
  try {
    request.setAttribute(INFORMATION_MESSAGES_LINKED_LAYOUT,isLinkedLayout(themeDisplay));
    request.setAttribute(INFORMATION_MESSAGES_MODIFIED_LAYOUT,isModifiedLayout(themeDisplay));
  }
 catch (  PortalException pe) {
    _log.error(pe);
  }
  return super.includeIcon(request,response);
}
