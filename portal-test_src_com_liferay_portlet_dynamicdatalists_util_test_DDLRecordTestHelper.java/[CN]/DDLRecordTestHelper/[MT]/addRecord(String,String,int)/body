{
  DDMStructure ddmStructure=_ddlRecordSet.getDDMStructure();
  DDMFormValues ddmFormValues=createDDMFormValues(ddmStructure.getDDMForm());
  DDMFormFieldValue nameDDMFormFieldValue=createLocalizedTextDDMFormFieldValue("name",name);
  ddmFormValues.addDDMFormFieldValue(nameDDMFormFieldValue);
  DDMFormFieldValue descriptionDDMFormFieldValue=createLocalizedTextDDMFormFieldValue("description",description);
  ddmFormValues.addDDMFormFieldValue(descriptionDDMFormFieldValue);
  return addRecord(ddmFormValues,workflowAction);
}
