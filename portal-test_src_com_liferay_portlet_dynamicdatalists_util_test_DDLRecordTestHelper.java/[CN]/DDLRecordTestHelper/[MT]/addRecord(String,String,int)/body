{
  Field nameField=new Field(_ddlRecordSet.getDDMStructureId(),"name",name);
  nameField.setDefaultLocale(LocaleUtil.ENGLISH);
  Fields fields=new Fields();
  fields.put(nameField);
  Field descriptionField=new Field(_ddlRecordSet.getDDMStructureId(),"description",description);
  descriptionField.setDefaultLocale(LocaleUtil.ENGLISH);
  fields.put(descriptionField);
  return addRecord(_ddlRecordSet.getRecordSetId(),fields,workflowAction);
}
