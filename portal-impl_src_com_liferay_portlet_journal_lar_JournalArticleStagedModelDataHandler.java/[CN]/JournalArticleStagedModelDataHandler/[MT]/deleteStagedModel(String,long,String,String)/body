{
  JournalArticleResource articleResource=JournalArticleResourceLocalServiceUtil.fetchArticleResource(uuid,groupId);
  if (articleResource == null) {
    return;
  }
  JSONObject extraDataJSONObject=JSONFactoryUtil.createJSONObject(extraData);
  if (Validator.isNull(extraData) || extraDataJSONObject.getBoolean("inTrash")) {
    JournalArticleLocalServiceUtil.deleteArticle(groupId,articleResource.getArticleId(),null);
  }
 else {
    double version=extraDataJSONObject.getDouble("version");
    JournalArticle article=JournalArticleLocalServiceUtil.getArticle(groupId,articleResource.getArticleId(),version);
    JournalArticleLocalServiceUtil.deleteArticle(article);
  }
}
