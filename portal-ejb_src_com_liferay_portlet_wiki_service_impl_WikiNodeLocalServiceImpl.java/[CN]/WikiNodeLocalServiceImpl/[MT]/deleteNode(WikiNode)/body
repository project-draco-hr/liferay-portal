{
  try {
    Indexer.deletePages(node.getCompanyId(),node.getNodeId());
  }
 catch (  IOException ioe) {
    _log.error(ioe.getMessage());
  }
catch (  ParseException pe) {
    _log.error(pe.getMessage());
  }
  WikiPageLocalServiceUtil.deletePages(node.getNodeId());
  ResourceLocalServiceUtil.deleteResource(node.getCompanyId(),WikiNode.class.getName(),Resource.TYPE_CLASS,Resource.SCOPE_INDIVIDUAL,node.getPrimaryKey().toString());
  WikiNodeUtil.remove(node.getNodeId());
}
