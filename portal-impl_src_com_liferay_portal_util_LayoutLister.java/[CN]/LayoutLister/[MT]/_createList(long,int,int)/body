{
  List<Layout> layouts=LayoutLocalServiceUtil.getLayouts(_groupId,_privateLayout,parentLayoutId);
  for (int i=0; i < layouts.size(); i++) {
    Layout layout=layouts.get(i);
    if (i == 0) {
      depth++;
      if (depth > _depth) {
        _depth=depth;
      }
    }
    StringBuilder sb=new StringBuilder();
    sb.append(++_nodeId).append("|");
    sb.append(parentId).append("|");
    if ((i + 1) == layouts.size()) {
      sb.append("1");
    }
 else {
      sb.append("0");
    }
    sb.append("|");
    sb.append(layout.getPlid()).append("|");
    sb.append(layout.getName(_locale)).append("|");
    sb.append("11");
    sb.append("|");
    sb.append(depth);
    _list.add(sb.toString());
    _createList(layout.getLayoutId(),_nodeId,depth);
  }
}
