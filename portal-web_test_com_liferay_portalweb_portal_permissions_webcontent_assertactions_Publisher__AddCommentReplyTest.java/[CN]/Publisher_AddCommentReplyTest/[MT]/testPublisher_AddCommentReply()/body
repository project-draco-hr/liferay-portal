{
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Web Content Display Permissions Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.click(RuntimeVariables.replace("link=Web Content Display Permissions Test Page"));
  selenium.waitForPageToLoad("30000");
  selenium.click("link=Post Reply");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("//table[2]/tbody/tr/td/div/textarea")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.typeKeys("//table[2]/tbody/tr/td/div/textarea",RuntimeVariables.replace("This is a publisher test comment repl."));
  selenium.type("//table[2]/tbody/tr/td/div/textarea",RuntimeVariables.replace("This is a publisher test comment reply."));
  selenium.click(RuntimeVariables.replace("//td[2]/table[2]/tbody/tr/td/input[1]"));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isTextPresent("Your request processed successfully."));
  assertTrue(selenium.isTextPresent("This is a publisher test comment reply."));
}
