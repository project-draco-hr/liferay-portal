{
  try {
    ExpandoTable table=getTable();
    if (secure) {
      ExpandoColumnServiceUtil.addColumn(table.getTableId(),name,type,defaultValue);
    }
 else {
      ExpandoColumnLocalServiceUtil.addColumn(table.getTableId(),name,type,defaultValue);
    }
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
}
