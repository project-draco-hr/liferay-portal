{
  if (Validator.isNull(value)) {
    return;
  }
  if (like) {
    value=StringUtil.replace(value,StringPool.PERCENT,StringPool.BLANK);
  }
  value=StringUtil.replace(value,StringPool.STAR,StringPool.BLANK);
  try {
    QueryParser queryParser=new QueryParser(_version,field,getAnalyzer());
    Query query=queryParser.parse(value);
    _includeIfUnique(booleanQuery,query,BooleanClause.Occur.SHOULD,like);
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
}
