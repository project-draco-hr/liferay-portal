{
  IndexAccessor indexAccessor=_indexAccessorMap.get(companyId);
  if (indexAccessor != null) {
    return indexAccessor;
  }
synchronized (this) {
    indexAccessor=_indexAccessorMap.get(companyId);
    if (indexAccessor == null) {
      indexAccessor=new IndexAccessorImpl(companyId);
      _indexAccessorMap.put(companyId,indexAccessor);
    }
  }
  if (!_loadIndexFromClusterEnabled()) {
    return indexAccessor;
  }
synchronized (indexAccessor) {
    InputStream inputStream=null;
    try {
      Address bootupAddress=selectBootupClusterAddress(companyId,IndexAccessor.DEFAULT_LOCAL_LAST_GENERATION);
      if (bootupAddress != null) {
        inputStream=getLoadIndexesInputStreamFromCluster(companyId,bootupAddress);
        indexAccessor.loadIndex(inputStream);
      }
      indexAccessor.enableDumpIndex();
    }
 catch (    Exception e) {
      _log.error("Unable to load index for company: " + indexAccessor.getCompanyId(),e);
    }
 finally {
      if (inputStream != null) {
        try {
          inputStream.close();
        }
 catch (        IOException ioe) {
          _log.error("Unable to close inputstream: " + indexAccessor.getCompanyId(),ioe);
        }
      }
    }
  }
  return indexAccessor;
}
