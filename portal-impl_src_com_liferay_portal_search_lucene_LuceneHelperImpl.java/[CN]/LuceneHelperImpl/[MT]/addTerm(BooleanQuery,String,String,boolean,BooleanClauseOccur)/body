{
  if (Validator.isNull(value)) {
    return;
  }
  if (like) {
    value=StringUtil.replace(value,StringPool.PERCENT,StringPool.BLANK);
  }
  try {
    QueryParser queryParser=new QueryParser(getVersion(),field,getAnalyzer());
    value=KeywordsUtil.escape(value);
    Query query=queryParser.parse(value);
    BooleanClause.Occur occur=null;
    if (booleanClauseOccur.equals(BooleanClauseOccur.MUST)) {
      occur=BooleanClause.Occur.MUST;
    }
 else     if (booleanClauseOccur.equals(BooleanClauseOccur.MUST_NOT)) {
      occur=BooleanClause.Occur.MUST_NOT;
    }
 else {
      occur=BooleanClause.Occur.SHOULD;
    }
    _includeIfUnique(booleanQuery,query,occur,like);
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
}
