{
  if (!entity.hasFinderClass() || _packagePath.equals("com.liferay.counter")) {
    _removeFinderBaseImpl(entity);
    return;
  }
  File finderImplFile=new File(_outputPath + "/service/persistence/impl/" + entity.getName()+ "FinderImpl.java");
  if (finderImplFile.exists()) {
    String content=_read(finderImplFile);
    content=StringUtil.replace(content,"import com.liferay.portal.service.persistence.impl." + "BasePersistenceImpl;\n","");
    content=StringUtil.replace(content,"BasePersistenceImpl<" + entity.getName() + ">",entity.getName() + "FinderBaseImpl");
    ToolsUtil.writeFileRaw(finderImplFile,content,_modifiedFileNames);
  }
  JavaClass javaClass=_getJavaClass(finderImplFile.getPath());
  Map<String,Object> context=_getContext();
  context.put("entity",entity);
  context=_putDeprecatedKeys(context,javaClass);
  String content=_processTemplate(_tplFinderBaseImpl,context);
  File ejbFile=new File(_outputPath + "/service/persistence/impl/" + entity.getName()+ "FinderBaseImpl.java");
  ToolsUtil.writeFile(ejbFile,content,_author,_modifiedFileNames);
}
