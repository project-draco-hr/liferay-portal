{
  try {
    List<MDRRuleGroupInstance> mdrRuleGroupInstances=_mdrRuleGroupInstanceLocalService.getRuleGroupInstances(Layout.class.getName(),layout.getPlid());
    for (    MDRRuleGroupInstance mdrRuleGroupInstance : mdrRuleGroupInstances) {
      _mdrRuleGroupInstanceLocalService.deleteMDRRuleGroupInstance(mdrRuleGroupInstance);
    }
  }
 catch (  Exception e) {
    throw new ModelListenerException(e);
  }
}
