{
  if (Validator.isNull(structureId)) {
    _ddmTemplate.setClassPK(0);
    return;
  }
  try {
    DDMStructure ddmStructure=DDMStructureLocalServiceUtil.getStructure(getGroupId(),PortalUtil.getClassNameId(JournalArticle.class),structureId,true);
    _ddmTemplate.setClassPK(ddmStructure.getPrimaryKey());
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
}
