{
  TaskMgmtInstance taskMgmtInstance=executionContext.getTaskMgmtInstance();
  SwimlaneInstance swimlaneInstance=taskMgmtInstance.getSwimlaneInstance(swimlane);
  String userId=swimlaneInstance.getActorId();
  UserSoap user=getUserService().getUserById(GetterUtil.getLong(userId));
  TaskInstance taskInstance=executionContext.getTaskInstance();
  if (_log.isInfoEnabled()) {
    _log.info("Task is " + taskInstance.getName() + " waiting for "+ user.getEmailAddress());
  }
}
