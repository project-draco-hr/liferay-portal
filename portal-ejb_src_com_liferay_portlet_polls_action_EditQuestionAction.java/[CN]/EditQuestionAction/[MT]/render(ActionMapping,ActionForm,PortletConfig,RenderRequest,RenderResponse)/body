{
  try {
    ActionUtil.getQuestion(req);
  }
 catch (  Exception e) {
    if (e != null && e instanceof NoSuchQuestionException || e instanceof PrincipalException) {
      SessionErrors.add(req,e.getClass().getName());
      return mapping.findForward("portlet.polls.error");
    }
 else {
      throw e;
    }
  }
  return mapping.findForward(getForward(req,"portlet.polls.edit_question"));
}
