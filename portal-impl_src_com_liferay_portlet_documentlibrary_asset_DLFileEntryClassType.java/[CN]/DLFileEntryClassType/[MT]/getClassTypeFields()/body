{
  try {
    List<ClassTypeField> classTypeFields=new ArrayList<ClassTypeField>();
    DLFileEntryType dlFileEntryType=DLFileEntryTypeLocalServiceUtil.getDLFileEntryType(getClassTypeId());
    List<DDMStructure> ddmStructures=dlFileEntryType.getDDMStructures();
    for (    DDMStructure ddmStructure : ddmStructures) {
      classTypeFields.addAll(super.getClassTypeFields(ddmStructure));
    }
    return classTypeFields;
  }
 catch (  NoSuchFileEntryTypeException e) {
    throw new NoSuchClassTypeException(e);
  }
catch (  PortalException e) {
    throw e;
  }
catch (  SystemException e) {
    throw e;
  }
}
