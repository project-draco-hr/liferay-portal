{
  _authenticators.put(PropsKeys.AUTH_PIPELINE_PRE,new Authenticator[0]);
  _authenticators.put(PropsKeys.AUTH_PIPELINE_POST,new Authenticator[0]);
  _authFailures.put(PropsKeys.AUTH_FAILURE,new AuthFailure[0]);
  _authFailures.put(PropsKeys.AUTH_MAX_FAILURES,new AuthFailure[0]);
  Registry registry=RegistryUtil.getRegistry();
  Filter filter=registry.getFilter("(&(objectClass=" + Authenticator.class.getName() + ")(key=*))");
  _authenticatorServiceTracker=registry.trackServices(filter,new AuthenticatorServiceTrackerCustomizer());
  _authenticatorServiceTracker.open();
  filter=registry.getFilter("(&(objectClass=" + AuthFailure.class.getName() + ")(key=*))");
  _authFailureServiceTracker=registry.trackServices(filter,new AuthFailureServiceTrackerCustomizer());
  _authFailureServiceTracker.open();
}
