{
  Registry registry=RegistryUtil.getRegistry();
  Filter authFailureFilter=registry.getFilter("(&(key=*)(objectClass=" + AuthFailure.class.getName() + "))");
  _authFailureServiceTracker=registry.trackServices(authFailureFilter,new AuthFailureServiceTrackerCustomizer());
  _authFailureServiceTracker.open();
  Filter authenticatorFilter=registry.getFilter("(&(key=*)(objectClass=" + Authenticator.class.getName() + "))");
  _authenticatorServiceTracker=registry.trackServices(authenticatorFilter,new AuthenticatorServiceTrackerCustomizer());
  _authenticatorServiceTracker.open();
}
