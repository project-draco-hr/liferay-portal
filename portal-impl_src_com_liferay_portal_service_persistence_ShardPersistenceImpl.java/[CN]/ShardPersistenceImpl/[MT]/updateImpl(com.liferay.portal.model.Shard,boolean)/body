{
  Session session=null;
  try {
    session=openSession();
    BatchSessionUtil.update(session,shard,merge);
    shard.setNew(false);
    return shard;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
    FinderCacheUtil.clearCache(Shard.class.getName());
  }
}
