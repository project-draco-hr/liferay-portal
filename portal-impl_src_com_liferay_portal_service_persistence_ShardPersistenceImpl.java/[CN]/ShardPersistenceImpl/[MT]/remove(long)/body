{
  Session session=null;
  try {
    session=openSession();
    Shard shard=(Shard)session.get(ShardImpl.class,new Long(shardId));
    if (shard == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + shardId);
      }
      throw new NoSuchShardException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + shardId);
    }
    return remove(shard);
  }
 catch (  NoSuchShardException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
