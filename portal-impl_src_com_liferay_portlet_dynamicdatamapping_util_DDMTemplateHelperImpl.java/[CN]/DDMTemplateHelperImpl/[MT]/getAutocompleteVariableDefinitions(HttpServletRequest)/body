{
  List<TemplateVariableDefinition> variableDefinitions=new UniqueList<TemplateVariableDefinition>();
  TemplateResource templateResource=new StringTemplateResource(_TEMPLATE_ID,_TEMPLATE_CONTENT);
  Template template=TemplateManagerUtil.getTemplate(TemplateConstants.LANG_TYPE_FTL,templateResource,TemplateContextType.STANDARD);
  template.prepare(request);
  for (  String key : template.getKeys()) {
    Object value=template.get(key);
    if (value == null) {
      continue;
    }
    TemplateVariableDefinition variableDefinition=new TemplateVariableDefinition(key,value.getClass(),key);
    variableDefinitions.add(variableDefinition);
  }
  return variableDefinitions;
}
