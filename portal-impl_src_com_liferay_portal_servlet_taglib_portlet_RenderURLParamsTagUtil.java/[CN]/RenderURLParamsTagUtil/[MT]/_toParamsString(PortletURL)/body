{
  StringMaker sm=new StringMaker();
  String url=portletURL.toString();
  String queryString=Http.getQueryString(url);
  StringTokenizer st=new StringTokenizer(queryString,StringPool.AMPERSAND);
  while (st.hasMoreTokens()) {
    String token=st.nextToken();
    if (Validator.isNotNull(token)) {
      String[] kvp=StringUtil.split(token,StringPool.EQUAL);
      if ((kvp != null) && (kvp.length > 0)) {
        String key=kvp[0];
        String value=StringPool.BLANK;
        if (kvp.length > 1) {
          value=kvp[1];
        }
        value=HttpUtil.decodeURL(value);
        sm.append("<input name=\"");
        sm.append(key);
        sm.append("\" type=\"hidden\" value=\"");
        sm.append(value);
        sm.append("\" />");
      }
    }
  }
  return sm.toString();
}
