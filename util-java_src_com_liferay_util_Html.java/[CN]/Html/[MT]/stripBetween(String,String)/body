{
  StringBuffer sb=new StringBuffer();
  String tagBegin="<" + tag;
  String tagEnd="</" + tag + ">";
  int x=0;
  int y=text.indexOf(tagBegin);
  while (y != -1) {
    sb.append(text.substring(x,y));
    x=text.indexOf(tagEnd,y) + tagEnd.length();
    y=text.indexOf(tagBegin,x);
  }
  if (y == -1) {
    sb.append(text.substring(x,text.length()));
  }
  return sb.toString();
}
