{
  if (text == null) {
    return null;
  }
  StringMaker sm=new StringMaker(text.length());
  for (int i=0; i < text.length(); i++) {
    char c=text.charAt(i);
switch (c) {
case '&':
      sm.append("&amp;");
    break;
case '<':
  sm.append("&lt;");
break;
case '>':
sm.append("&gt;");
break;
case '\"':
sm.append("&#034;");
break;
case '\'':
sm.append("&#039;");
break;
case ',':
sm.append("&#044;");
break;
default :
sm.append(c);
break;
}
}
return sm.toString();
}
