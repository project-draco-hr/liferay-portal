{
  if (text == null) {
    return null;
  }
  StringMaker sm=new StringMaker(text.length());
  int x=0;
  int y=text.indexOf("<!--");
  while (y != -1) {
    sm.append(text.substring(x,y));
    x=text.indexOf("-->",y) + 3;
    y=text.indexOf("<!--",x);
  }
  if (y == -1) {
    sm.append(text.substring(x,text.length()));
  }
  return sm.toString();
}
