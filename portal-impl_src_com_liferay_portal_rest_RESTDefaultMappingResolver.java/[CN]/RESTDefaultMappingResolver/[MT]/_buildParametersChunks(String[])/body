{
  StringBundler sb=new StringBundler(parameterNames.length * 5 - 1);
  for (int i=0; i < parameterNames.length; i++) {
    String parameterName=parameterNames[i];
    String chunk=null;
    if (_includeParameterNames) {
      chunk=_nameToPathChunk(parameterName) + _parameterNameValueSeparator;
    }
 else {
      chunk=StringPool.BLANK;
    }
    if (i != 0) {
      chunk=StringPool.SLASH.concat(chunk);
    }
    sb.append(chunk);
    sb.append("${");
    sb.append(parameterName);
    sb.append('}');
  }
  return sb.toString();
}
