{
  Session session=null;
  try {
    session=openSession();
    StringMaker query=new StringMaker();
    query.append("FROM com.liferay.portlet.documentlibrary.model.DLFolder WHERE ");
    if (parentFolderId == null) {
      query.append("parentFolderId IS NULL");
    }
 else {
      query.append("parentFolderId = ?");
    }
    query.append(" AND ");
    if (name == null) {
      query.append("name IS NULL");
    }
 else {
      query.append("name = ?");
    }
    query.append(" ");
    query.append("ORDER BY ");
    query.append("parentFolderId ASC").append(", ");
    query.append("name ASC");
    Query q=session.createQuery(query.toString());
    q.setCacheable(true);
    int queryPos=0;
    if (parentFolderId != null) {
      q.setString(queryPos++,parentFolderId);
    }
    if (name != null) {
      q.setString(queryPos++,name);
    }
    List list=q.list();
    if (list.size() == 0) {
      return null;
    }
    DLFolder dlFolder=(DLFolder)list.get(0);
    return dlFolder;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
