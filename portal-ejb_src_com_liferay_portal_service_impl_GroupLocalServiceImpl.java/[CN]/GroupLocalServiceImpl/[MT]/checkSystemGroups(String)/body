{
  String[] systemGroups=PortalUtil.getSystemGroups();
  for (int i=0; i < systemGroups.length; i++) {
    Group group=null;
    try {
      group=GroupFinder.findByC_N(companyId,systemGroups[i]);
    }
 catch (    NoSuchGroupException nsge) {
      group=addGroup(UserImpl.getDefaultUserId(companyId),null,null,systemGroups[i],null,null,null);
    }
    if (group.getName().equals(GroupImpl.GUEST)) {
      LayoutSet layoutSet=LayoutSetLocalServiceUtil.getLayoutSet(LayoutImpl.PUBLIC + group.getGroupId());
      if (layoutSet.getPageCount() == 0) {
        addDefaultLayouts(group);
      }
    }
  }
}
