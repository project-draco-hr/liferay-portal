import cgi
import os
import fckeditor
print 'Content-Type: text/html'
print ''
print '<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">\n<html>\n\t<head>\n\t\t<title>FCKeditor - Sample</title>\n\t\t<meta http-equiv="Content-Type" content="text/html; charset=utf-8">\n\t\t<meta name="robots" content="noindex, nofollow">\n\t\t<link href="../sample.css" rel="stylesheet" type="text/css" />\n\t</head>\n\t<body>\n\t\t<h1>FCKeditor - Python - Sample 1</h1>\n\t\tThis sample displays a normal HTML form with an FCKeditor with full features \n\t\tenabled.\n\t\t<hr>\n\t\t<form action="sampleposteddata.py" method="post" target="_blank">\n'
try:
    sBasePath = os.environ.get('SCRIPT_NAME')
    sBasePath = sBasePath[0:sBasePath.find('_samples')]
    oFCKeditor = fckeditor.FCKeditor('FCKeditor1')
    oFCKeditor.BasePath = sBasePath
    oFCKeditor.Value = 'This is some <strong>sample text</strong>. You are using <a href="http://www.fckeditor.net/">FCKeditor</a>.'
    print oFCKeditor.Create()
except Exception as e:
    print e
print '\n\t\t\t<br>\n\t\t\t<input type="submit" value="Submit">\n\t\t</form>\n'
print '<hr>'
for key in os.environ.keys():
    print ('%s: %s<br>' % (key, os.environ.get(key, '')))
print '<hr>'
print '\n\t</body>\n</html>\n'
