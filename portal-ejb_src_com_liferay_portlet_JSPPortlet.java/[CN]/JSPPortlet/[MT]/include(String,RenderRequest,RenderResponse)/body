{
  PortletRequestDispatcher prd=getPortletContext().getRequestDispatcher(Constants.TEXT_HTML_DIR + path);
  if (prd == null) {
    _log.error(path + " is not a valid include");
  }
 else {
    prd.include(req,res);
  }
  if (copyRequestParameters) {
    PortalUtil.clearRequestParameters(req);
  }
}
