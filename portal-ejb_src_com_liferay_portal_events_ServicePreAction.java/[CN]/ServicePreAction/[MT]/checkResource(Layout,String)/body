{
  try {
    ResourceLocalServiceUtil.getResource(companyId,Layout.class.getName(),Resource.TYPE_CLASS,Resource.SCOPE_INDIVIDUAL,layout.getLayoutId());
  }
 catch (  NoSuchResourceException nsre) {
    ResourceLocalServiceUtil.addResources(companyId,layout.getGroupId(),null,Layout.class.getName(),layout.getPrimaryKey().toString(),false,false,false);
  }
}
