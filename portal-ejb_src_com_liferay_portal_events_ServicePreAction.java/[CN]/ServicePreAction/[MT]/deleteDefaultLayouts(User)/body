{
  if (user.hasPrivateLayouts()) {
    Group userGroup=user.getGroup();
    LayoutLocalServiceUtil.deleteLayouts(Layout.PRIVATE + userGroup.getGroupId());
  }
  if (user.hasPublicLayouts()) {
    Group userGroup=user.getGroup();
    LayoutLocalServiceUtil.deleteLayouts(Layout.PUBLIC + userGroup.getGroupId());
  }
}
