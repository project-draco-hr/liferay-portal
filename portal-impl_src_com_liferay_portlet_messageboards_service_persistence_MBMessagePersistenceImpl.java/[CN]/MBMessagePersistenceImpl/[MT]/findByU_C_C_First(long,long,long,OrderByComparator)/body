{
  List<MBMessage> list=findByU_C_C(userId,classNameId,classPK,0,1,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(8);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("userId=");
    msg.append(userId);
    msg.append(", classNameId=");
    msg.append(classNameId);
    msg.append(", classPK=");
    msg.append(classPK);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchMessageException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
