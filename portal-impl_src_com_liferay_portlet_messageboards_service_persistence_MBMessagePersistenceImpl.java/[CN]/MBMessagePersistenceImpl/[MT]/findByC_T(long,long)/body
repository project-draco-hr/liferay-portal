{
  Object[] finderArgs=new Object[]{new Long(categoryId),new Long(threadId)};
  Object result=FinderCacheUtil.getResult(FINDER_PATH_FIND_BY_C_T,finderArgs,this);
  if (result == null) {
    Session session=null;
    try {
      session=openSession();
      StringBuilder query=new StringBuilder();
      query.append("FROM com.liferay.portlet.messageboards.model.MBMessage WHERE ");
      query.append("categoryId = ?");
      query.append(" AND ");
      query.append("threadId = ?");
      query.append(" ");
      query.append("ORDER BY ");
      query.append("createDate ASC, ");
      query.append("messageId ASC");
      Query q=session.createQuery(query.toString());
      QueryPos qPos=QueryPos.getInstance(q);
      qPos.add(categoryId);
      qPos.add(threadId);
      List<MBMessage> list=q.list();
      cacheResult(list);
      FinderCacheUtil.putResult(FINDER_PATH_FIND_BY_C_T,finderArgs,list);
      return list;
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      closeSession(session);
    }
  }
 else {
    return (List<MBMessage>)result;
  }
}
