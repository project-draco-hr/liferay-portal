{
  MBMessage mbMessage=findByPrimaryKey(messageId);
  Session session=null;
  try {
    session=openSession();
    MBMessage[] array=new MBMessageImpl[3];
    array[0]=getByT_A_PrevAndNext(session,mbMessage,threadId,answer,orderByComparator,true);
    array[1]=mbMessage;
    array[2]=getByT_A_PrevAndNext(session,mbMessage,threadId,answer,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
