{
  Object[] finderArgs=new Object[]{new Long(groupId),new Long(categoryId),new Integer(status)};
  Long count=(Long)FinderCacheUtil.getResult(FINDER_PATH_COUNT_BY_G_C_S,finderArgs,this);
  if (count == null) {
    Session session=null;
    try {
      session=openSession();
      StringBundler query=new StringBundler();
      query.append(_SQL_COUNT_MBMESSAGE_WHERE);
      query.append(_FINDER_COLUMN_G_C_S_GROUPID_2);
      query.append(_FINDER_COLUMN_G_C_S_CATEGORYID_2);
      query.append(_FINDER_COLUMN_G_C_S_STATUS_2);
      Query q=session.createQuery(query.toString());
      QueryPos qPos=QueryPos.getInstance(q);
      qPos.add(groupId);
      qPos.add(categoryId);
      qPos.add(status);
      count=(Long)q.uniqueResult();
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      if (count == null) {
        count=Long.valueOf(0);
      }
      FinderCacheUtil.putResult(FINDER_PATH_COUNT_BY_G_C_S,finderArgs,count);
      closeSession(session);
    }
  }
  return count.intValue();
}
