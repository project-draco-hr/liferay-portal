{
  List<MBMessage> list=findByT_A(threadId,answer,0,1,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(6);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("threadId=");
    msg.append(threadId);
    msg.append(", answer=");
    msg.append(answer);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchMessageException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
