{
  List<MBMessage> list=findByG_C_T_A(groupId,categoryId,threadId,answer,0,1,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(10);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("groupId=");
    msg.append(groupId);
    msg.append(", categoryId=");
    msg.append(categoryId);
    msg.append(", threadId=");
    msg.append(threadId);
    msg.append(", answer=");
    msg.append(answer);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchMessageException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
