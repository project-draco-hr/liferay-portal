{
  if (gitDir != null) {
    return gitDir;
  }
  String projectDir=project.getProperty("project.dir");
  if (projectDir == null) {
    projectDir=project.getProperty("lp.portal.project.dir");
  }
  if (projectDir == null) {
    throw new BuildException("Unable to locate .git directory",location);
  }
  return new File(projectDir,".git");
}
