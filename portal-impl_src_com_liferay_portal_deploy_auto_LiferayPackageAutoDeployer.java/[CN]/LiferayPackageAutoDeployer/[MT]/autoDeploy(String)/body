{
  try {
    ZipFile zipFile=new ZipFile(new File(baseDir + StringPool.SLASH + file));
    Enumeration enu=zipFile.entries();
    while (enu.hasMoreElements()) {
      ZipEntry entry=(ZipEntry)enu.nextElement();
      String fileName=entry.getName();
      if (!fileName.endsWith(".war") && !fileName.endsWith(".zip") && !fileName.endsWith(".xml")) {
        continue;
      }
      if (_log.isInfoEnabled()) {
        _log.info("Extracting " + fileName + " from "+ file);
      }
      InputStream is=zipFile.getInputStream(entry);
      FileUtil.write(baseDir + StringPool.SLASH + fileName,is);
    }
  }
 catch (  Exception e) {
    throw new AutoDeployException(e);
  }
}
