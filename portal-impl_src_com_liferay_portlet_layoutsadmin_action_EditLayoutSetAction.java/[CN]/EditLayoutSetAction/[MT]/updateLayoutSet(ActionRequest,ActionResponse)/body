{
  ThemeDisplay themeDisplay=(ThemeDisplay)actionRequest.getAttribute(WebKeys.THEME_DISPLAY);
  long layoutSetId=ParamUtil.getLong(actionRequest,"layoutSetId");
  long liveGroupId=ParamUtil.getLong(actionRequest,"liveGroupId");
  long stagingGroupId=ParamUtil.getLong(actionRequest,"stagingGroupId");
  boolean privateLayout=ParamUtil.getBoolean(actionRequest,"privateLayout");
  updateMergePages(actionRequest);
  updateLogo(actionRequest,liveGroupId,stagingGroupId,layoutSetId,privateLayout);
  updateLookAndFeel(actionRequest,themeDisplay.getCompanyId(),liveGroupId,stagingGroupId,privateLayout,0);
}
