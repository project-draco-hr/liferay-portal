{
  try {
    checkPermissions(actionRequest);
  }
 catch (  PrincipalException pe) {
    return;
  }
  String cmd=ParamUtil.getString(actionRequest,Constants.CMD);
  try {
    if (cmd.equals(Constants.UPDATE)) {
      updateLayoutSet(actionRequest,actionResponse);
    }
    String closeRedirect=ParamUtil.getString(actionRequest,"closeRedirect");
    if (Validator.isNotNull(closeRedirect)) {
      LiferayPortletConfig liferayPortletConfig=(LiferayPortletConfig)portletConfig;
      SessionMessages.add(actionRequest,liferayPortletConfig.getPortletId() + SessionMessages.KEY_SUFFIX_CLOSE_REDIRECT,closeRedirect);
    }
    sendRedirect(actionRequest,actionResponse);
  }
 catch (  Exception e) {
    if (e instanceof PrincipalException || e instanceof SystemException) {
      SessionErrors.add(actionRequest,e.getClass());
      setForward(actionRequest,"portlet.layouts_admin.error");
    }
 else     if (e instanceof FileSizeException || e instanceof ImageTypeException || e instanceof UploadException) {
      SessionErrors.add(actionRequest,e.getClass());
    }
 else {
      throw e;
    }
  }
}
