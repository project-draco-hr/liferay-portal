  return LayoutLocalServiceUtil.addLayout(TestPropsValues.getUserId(),groupId,false,LayoutConstants.DEFAULT_PARENT_LAYOUT_ID,name,null,"This is a test page.",LayoutConstants.TYPE_PORTLET,false,friendlyURL,serviceContext);
