{
  if (!Validator.isGregorianDate(month,day,year)) {
    throw pe;
  }
 else {
    Calendar cal=null;
    if (timeZone == null) {
      cal=new GregorianCalendar();
    }
 else {
      cal=new GregorianCalendar(timeZone);
    }
    if ((hour == -1) || (min == -1)) {
      cal.set(year,month,day);
    }
 else {
      cal.set(year,month,day,hour,min,0);
    }
    Date date=cal.getTime();
    return date;
  }
}
