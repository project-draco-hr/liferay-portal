{
  ThemeDisplay themeDisplay=(ThemeDisplay)req.getAttribute(WebKeys.THEME_DISPLAY);
  Company company=themeDisplay.getCompany();
  String topicId=ParamUtil.getString(req,"topicId");
  double version=ParamUtil.getDouble(req,"version");
  String url="http://" + company.getPortalURL() + themeDisplay.getPathMain()+ "/message_boards/find_message?topicId="+ topicId;
  String rss=MBMessageLocalServiceUtil.getTopicMessagesCountRSS(topicId,0,SearchContainer.DEFAULT_DELTA,version,url);
  return rss.getBytes();
}
