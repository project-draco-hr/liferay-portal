{
  JournalArticle article=JournalArticleLocalServiceUtil.getLatestArticle(classPK);
  long groupId=article.getGroupId();
  DDMStructure ddmStructure=DDMStructureLocalServiceUtil.getStructure(PortalUtil.getSiteGroupId(groupId),PortalUtil.getClassNameId(JournalArticle.class),article.getStructureId(),true);
  List<DDMStructure> ddmStructures=DDMStructureLocalServiceUtil.getJournalFolderStructures(PortalUtil.getCurrentAndAncestorSiteGroupIds(groupId),containerModelId,true);
  for (  DDMStructure curDDMStructure : ddmStructures) {
    if (curDDMStructure.getStructureId() == ddmStructure.getStructureId()) {
      return;
    }
  }
  throw new RestoreEntryException(RestoreEntryException.NOT_VALID_CONTAINER);
}
