{
  GradleUtil.applyPlugin(project,CSSBuilderPlugin.class);
  GradleUtil.applyPlugin(project,WarPlugin.class);
  WarPluginConvention warPluginConvention=GradleUtil.getConvention(project,WarPluginConvention.class);
  Configuration parentThemesConfiguration=_addConfigurationParentThemes(project);
  Configuration themeBuilderConfiguration=_addConfigurationThemeBuilder(project);
  BuildThemeTask buildThemeTask=_addTaskBuildTheme(project,parentThemesConfiguration,warPluginConvention);
  _configureTaskBuildCSS(buildThemeTask);
  _configureTaskWar(buildThemeTask);
  _configureTasksBuildTheme(project,themeBuilderConfiguration);
}
