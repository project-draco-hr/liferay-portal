{
  long groupId=ParamUtil.getLong(req,"groupId");
  Group group=GroupLocalServiceUtil.getGroup(groupId);
  boolean mergeGuestPublicPages=ParamUtil.getBoolean(req,"mergeGuestPublicPages");
  Properties props=group.getTypeSettingsProperties();
  props.setProperty("mergeGuestPublicPages",String.valueOf(mergeGuestPublicPages));
  GroupServiceUtil.updateGroup(groupId,group.getTypeSettings());
}
