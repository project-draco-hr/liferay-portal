{
  long liveGroupId=ParamUtil.getLong(req,"liveGroupId");
  String publicVirtualHost=ParamUtil.getString(req,"publicVirtualHost");
  LayoutSetServiceUtil.updateVirtualHost(liveGroupId,false,publicVirtualHost);
  String privateVirtualHost=ParamUtil.getString(req,"privateVirtualHost");
  LayoutSetServiceUtil.updateVirtualHost(liveGroupId,true,privateVirtualHost);
  String friendlyURL=ParamUtil.getString(req,"friendlyURL");
  Group group=GroupLocalServiceUtil.getGroup(liveGroupId);
  GroupServiceUtil.updateGroup(liveGroupId,group.getName(),group.getDescription(),group.getType(),friendlyURL,group.isActive());
}
