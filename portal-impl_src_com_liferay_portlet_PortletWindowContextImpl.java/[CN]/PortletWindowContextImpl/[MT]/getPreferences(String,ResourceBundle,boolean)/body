{
  try {
    PortletPreferencesIds portletPreferencesIds=PortletPreferencesFactoryUtil.getPortletPreferencesIds(_request,_portletModel.getPortletId());
    PortletPreferences portletPreferences=PortletPreferencesLocalServiceUtil.getPreferences(portletPreferencesIds);
    PortletPreferencesWrapper portletPreferencesWrapper=new PortletPreferencesWrapper(portletPreferences,_lifecycle);
    return portletPreferencesWrapper;
  }
 catch (  PortalException ex) {
    throw new PortletWindowContextException(ex);
  }
catch (  SystemException ex) {
    throw new PortletWindowContextException(ex);
  }
}
