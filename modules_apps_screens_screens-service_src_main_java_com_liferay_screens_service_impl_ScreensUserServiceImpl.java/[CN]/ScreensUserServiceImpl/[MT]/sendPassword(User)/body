{
  ServiceContext serviceContext=ServiceContextThreadLocal.getServiceContext();
  populateServiceContext(user.getCompanyId(),serviceContext);
  userLocalService.sendPassword(user.getCompanyId(),user.getEmailAddress(),null,null,null,null,serviceContext);
  Company company=companyPersistence.findByPrimaryKey(user.getCompanyId());
  return company.isSendPassword();
}
