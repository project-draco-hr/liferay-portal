{
  if (serviceContext.getPathMain() == null) {
    serviceContext.setPathMain(PortalUtil.getPathMain());
  }
  if (serviceContext.getPlid() == 0) {
    long plid=layoutLocalService.getDefaultPlid(serviceContext.getScopeGroupId(),false);
    serviceContext.setPlid(plid);
  }
  if (serviceContext.getScopeGroupId() == 0) {
    Group guestGroup=groupLocalService.getGroup(companyId,GroupConstants.GUEST);
    serviceContext.setScopeGroupId(guestGroup.getGroupId());
  }
}
