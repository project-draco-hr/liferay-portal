{
  ThemeDisplay themeDisplay=(ThemeDisplay)portletRequest.getAttribute(WebKeys.THEME_DISPLAY);
  try {
    MBGroupServiceSettings mbGroupServiceSettings=MBGroupServiceSettings.getInstance(themeDisplay.getScopeGroupId());
    if (!mbGroupServiceSettings.isEmailMessageAddedEnabled() && !mbGroupServiceSettings.isEmailMessageUpdatedEnabled()) {
      return null;
    }
    MBCategory category=ActionUtil.getCategory(portletRequest);
    boolean subscribed=_subscriptionLocalService.isSubscribed(themeDisplay.getCompanyId(),themeDisplay.getUserId(),MBCategory.class.getName(),category.getCategoryId());
    return new CategorySubscriptionPortletConfigurationIcon(portletRequest,category,subscribed);
  }
 catch (  Exception e) {
  }
  return null;
}
