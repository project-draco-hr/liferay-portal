{
  selenium.selectWindow("null");
  selenium.selectFrame("relative=top");
  selenium.open("/web/guest/home/");
  selenium.clickAt("link=Joe Bloggs",RuntimeVariables.replace("Joe Bloggs"));
  selenium.waitForPageToLoad("30000");
  selenium.clickAt("//a[@id='_2_displaySettingsLink']",RuntimeVariables.replace("Display Settings"));
  selenium.waitForVisible("//select[@name='_2_timeZoneId']");
  selenium.select("//select[@name='_2_timeZoneId']",RuntimeVariables.replace("(UTC ) Coordinated Universal Time"));
  selenium.clickAt("//input[@value='Save']",RuntimeVariables.replace("Save"));
  selenium.waitForPageToLoad("30000");
  assertEquals(RuntimeVariables.replace("Your request completed successfully."),selenium.getText("//div[@class='portlet-msg-success']"));
  assertEquals("(UTC ) Coordinated Universal Time",selenium.getSelectedLabel("//select[@name='_2_timeZoneId']"));
}
