{
  try {
    _appDir=appDir;
    _classDir=classDir;
    DirectoryScanner ds=new DirectoryScanner();
    ds.setBasedir(appDir);
    ds.setIncludes(new String[]{"**\\*.jsp"});
    ds.scan();
    String[] fileNames=ds.getIncludedFiles();
    Arrays.sort(fileNames);
    _compile(fileNames);
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}
