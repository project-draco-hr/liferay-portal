{
  RecordSetSearchTerms searchTerms=(RecordSetSearchTerms)searchContainer.getSearchTerms();
  if (searchTerms.isAdvancedSearch()) {
    return DDLRecordSetServiceUtil.searchCount(_ddlFormAdminRequestHelper.getCompanyId(),_ddlFormAdminRequestHelper.getScopeGroupId(),searchTerms.getName(),searchTerms.getDescription(),DDLRecordSetConstants.SCOPE_FORMS,searchTerms.isAndOperator());
  }
 else {
    return DDLRecordSetServiceUtil.searchCount(_ddlFormAdminRequestHelper.getCompanyId(),_ddlFormAdminRequestHelper.getScopeGroupId(),searchTerms.getKeywords(),DDLRecordSetConstants.SCOPE_FORMS);
  }
}
