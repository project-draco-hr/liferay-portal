{
  FileTree fileTree=formatXMLTask.getSource();
  if (!fileTree.isEmpty()) {
    return;
  }
  BuildXSDTask buildXSDTask=(BuildXSDTask)GradleUtil.getTask(formatXMLTask.getProject(),XSDBuilderPlugin.BUILD_XSD_TASK_NAME);
  formatXMLTask.setSource(buildXSDTask.getInputDir());
  formatXMLTask.include("**/*.xsd");
}
