{
  long globalGroupId=getGroupId(companyId,GroupConstants.GLOBAL_FRIENDLY_URL);
  if (globalGroupId == 0) {
    return;
  }
  String friendlyURL=getNewFriendlyURL(companyId,globalGroupId);
  if (_log.isInfoEnabled()) {
    _log.info("Modifying friendlyURL " + GroupConstants.GLOBAL_FRIENDLY_URL + " of groupId "+ globalGroupId+ " to "+ friendlyURL);
  }
  try (PreparedStatement ps=connection.prepareStatement("update Group_ set friendlyURL = ? where groupId = ?")){
    ps.setString(1,friendlyURL);
    ps.setLong(2,globalGroupId);
    ps.execute();
  }
 }
