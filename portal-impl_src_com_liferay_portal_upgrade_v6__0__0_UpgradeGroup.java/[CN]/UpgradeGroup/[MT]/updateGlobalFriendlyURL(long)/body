{
  long groupId=getGroupId(companyId,GroupConstants.GLOBAL_FRIENDLY_URL);
  if (groupId == 0) {
    return;
  }
  String friendlyURL=getNewFriendlyURL(companyId,groupId);
  if (_log.isInfoEnabled()) {
    _log.info("Updating friendly URL " + GroupConstants.GLOBAL_FRIENDLY_URL + " of global group "+ groupId+ " to "+ friendlyURL);
  }
  try (PreparedStatement ps=connection.prepareStatement("update Group_ set friendlyURL = ? where groupId = ?")){
    ps.setString(1,friendlyURL);
    ps.setLong(2,groupId);
    ps.execute();
  }
 }
