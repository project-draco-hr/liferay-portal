{
  DDMContent ddmContent=DDMContentLocalServiceUtil.getContent(classPK);
  DDMStorageLink ddmStorageLink=DDMStorageLinkLocalServiceUtil.getClassStorageLink(ddmContent.getPrimaryKey());
  DDMStructure ddmStructure=DDMStructureLocalServiceUtil.getStructure(ddmStorageLink.getStructureId());
  DDMFormValues ddmFormValues=DDMFormValuesJSONDeserializerUtil.deserialize(ddmStructure.getDDMForm(),ddmContent.getData());
  return ddmFormValues;
}
