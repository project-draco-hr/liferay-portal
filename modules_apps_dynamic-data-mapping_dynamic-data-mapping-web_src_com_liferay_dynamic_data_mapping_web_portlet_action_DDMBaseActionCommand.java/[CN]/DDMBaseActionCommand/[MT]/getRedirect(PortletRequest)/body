{
  String redirect=ParamUtil.getString(portletRequest,"redirect");
  String closeRedirect=ParamUtil.getString(portletRequest,"closeRedirect");
  if (Validator.isNull(closeRedirect)) {
    return redirect;
  }
  redirect=HttpUtil.setParameter(redirect,"closeRedirect",closeRedirect);
  SessionMessages.add(portletRequest,PortalUtil.getPortletId(portletRequest) + SessionMessages.KEY_SUFFIX_CLOSE_REDIRECT,closeRedirect);
  return redirect;
}
