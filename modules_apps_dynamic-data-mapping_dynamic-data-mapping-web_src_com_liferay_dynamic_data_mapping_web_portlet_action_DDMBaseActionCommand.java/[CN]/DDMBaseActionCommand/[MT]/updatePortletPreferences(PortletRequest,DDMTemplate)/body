{
  PortletPreferences portletPreferences=getStrictPortletSetup(portletRequest);
  if (portletPreferences == null) {
    return;
  }
  String templateType=template.getType();
  if (templateType.equals(DDMTemplateConstants.TEMPLATE_TYPE_DISPLAY)) {
    portletPreferences.setValue("displayDDMTemplateId",String.valueOf(template.getTemplateId()));
  }
 else {
    portletPreferences.setValue("formDDMTemplateId",String.valueOf(template.getTemplateId()));
  }
  portletPreferences.store();
}
