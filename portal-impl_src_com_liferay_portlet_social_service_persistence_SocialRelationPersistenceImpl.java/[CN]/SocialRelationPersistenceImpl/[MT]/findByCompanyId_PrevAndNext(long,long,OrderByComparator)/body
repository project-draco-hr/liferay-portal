{
  SocialRelation socialRelation=findByPrimaryKey(relationId);
  int count=countByCompanyId(companyId);
  Session session=null;
  try {
    session=openSession();
    StringMaker query=new StringMaker();
    query.append("FROM com.liferay.portlet.social.model.SocialRelation WHERE ");
    query.append("companyId = ?");
    query.append(" ");
    if (obc != null) {
      query.append("ORDER BY ");
      query.append(obc.getOrderBy());
    }
    Query q=session.createQuery(query.toString());
    int queryPos=0;
    q.setLong(queryPos++,companyId);
    Object[] objArray=QueryUtil.getPrevAndNext(q,count,obc,socialRelation);
    SocialRelation[] array=new SocialRelationImpl[3];
    array[0]=(SocialRelation)objArray[0];
    array[1]=(SocialRelation)objArray[1];
    array[2]=(SocialRelation)objArray[2];
    return array;
  }
 catch (  Exception e) {
    throw HibernateUtil.processException(e);
  }
 finally {
    closeSession(session);
  }
}
