{
  Property companyIdProperty=PropertyFactoryUtil.forName("companyId");
  dynamicQuery.add(companyIdProperty.eq(companyId));
  Property displayDateProperty=PropertyFactoryUtil.forName("displayDate");
  dynamicQuery.add(displayDateProperty.lt(new Date()));
  Property statusProperty=PropertyFactoryUtil.forName("status");
  Integer[] indexableStatus=new Integer[]{WorkflowConstants.STATUS_APPROVED,WorkflowConstants.STATUS_IN_TRASH};
  dynamicQuery.add(statusProperty.in(indexableStatus));
}
