{
  String[] validEmails={"email@domain.com","firstname.lastname@domain.com","firstname+lastname@domain.com","123456789@domain.com","email@domain-one.com","____@domain.com","email@domain.name","firstname-lastname@domain.com"};
  for (  String validEmail : validEmails) {
    assertTrue(Validator.isEmailAddress(validEmail));
  }
  String[] invalidEmails={"domain","#$%^&.com","joe smith <email@domain.com","email.domain.com","email@domain@domain.com","email@domain.com (joe smith)","email@domain"};
  for (  String invalidEmail : invalidEmails) {
    assertFalse(Validator.isEmailAddress(invalidEmail));
  }
}
