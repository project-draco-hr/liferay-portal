{
  String numberOfApprovalStages=PropsUtil.get(PropsUtil.TASKS_NUMBER_OF_APPROVAL_STAGES);
  try {
    PortletPreferences prefs=getPreferences(companyId,groupId);
    return GetterUtil.getInteger(prefs.getValue("number-of-approval-stages",numberOfApprovalStages));
  }
 catch (  Exception e) {
    if (_log.isDebugEnabled()) {
      _log.debug(e,e);
    }
  }
  return GetterUtil.getInteger(numberOfApprovalStages);
}
