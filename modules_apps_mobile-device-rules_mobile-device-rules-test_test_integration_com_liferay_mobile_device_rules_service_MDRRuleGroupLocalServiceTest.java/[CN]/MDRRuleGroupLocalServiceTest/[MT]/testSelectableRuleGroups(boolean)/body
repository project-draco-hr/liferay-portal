{
  Layout layout=LayoutTestUtil.addLayout(_group);
  LinkedHashMap<String,Object> params=new LinkedHashMap<>();
  if (includeGlobalGroup) {
    params.put("includeGlobalScope",Boolean.TRUE);
  }
  List<MDRRuleGroup> ruleGroups=MDRRuleGroupLocalServiceUtil.searchByKeywords(layout.getGroupId(),StringPool.BLANK,params,false,QueryUtil.ALL_POS,QueryUtil.ALL_POS);
  if (includeGlobalGroup) {
    Assert.assertTrue(ruleGroups.contains(_ruleGroup));
  }
 else {
    Assert.assertFalse(ruleGroups.contains(_ruleGroup));
  }
}
