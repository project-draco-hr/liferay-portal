{
  long groupId=ParamUtil.getLong(portletRequest,"groupId");
  String articleId=ParamUtil.getString(portletRequest,"articleId");
  double version=ParamUtil.getDouble(portletRequest,"version",JournalArticleConstants.VERSION_DEFAULT);
  JournalArticle article=JournalArticleServiceUtil.getArticle(groupId,articleId,version);
  HttpServletRequest request=PortalUtil.getHttpServletRequest(portletRequest);
  request.setAttribute(WebKeys.JOURNAL_ARTICLE,article);
  JournalUtil.addRecentArticle(portletRequest,article);
}
