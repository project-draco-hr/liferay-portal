{
  Project project=buildFileRule.getProject();
  project.setProperty("build.theme.diffs.dir",diffsDir.getAbsolutePath());
  project.setProperty("build.theme.name",name);
  project.setProperty("build.theme.output.dir",outputDir.getAbsolutePath());
  if (parentDir != null) {
    project.setProperty("build.theme.parent.dir",parentDir.getAbsolutePath());
  }
  project.setProperty("build.theme.parent.name",parentName);
  project.setProperty("build.theme.template.extension",templateExtension);
  project.setProperty("build.theme.unstyled.dir",unstyledDir.getAbsolutePath());
  project.executeTarget("build-theme");
}
