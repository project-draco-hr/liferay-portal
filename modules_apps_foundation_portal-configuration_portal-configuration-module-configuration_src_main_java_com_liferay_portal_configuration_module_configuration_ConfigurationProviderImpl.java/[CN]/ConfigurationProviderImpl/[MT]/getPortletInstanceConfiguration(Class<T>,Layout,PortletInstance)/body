{
  String configurationPid=_getConfigurationPid(clazz);
  String portletInstanceKey=portletInstance.getPortletInstanceKey();
  if (Validator.isNotNull(configurationPid)) {
    return getConfiguration(clazz,new PortletInstanceSettingsLocator(layout,portletInstanceKey,configurationPid));
  }
 else {
    return getConfiguration(clazz,new PortletInstanceSettingsLocator(layout,portletInstanceKey));
  }
}
