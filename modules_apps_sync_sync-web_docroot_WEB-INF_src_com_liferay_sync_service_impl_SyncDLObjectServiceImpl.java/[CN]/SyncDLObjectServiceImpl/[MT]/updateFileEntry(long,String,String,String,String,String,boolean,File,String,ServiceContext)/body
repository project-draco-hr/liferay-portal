{
  try {
    FileEntry fileEntry=dlAppLocalService.getFileEntry(fileEntryId);
    SyncUtil.checkSyncEnabled(fileEntry.getGroupId());
    checkFileEntry(fileEntry);
    serviceContext.setCommand(Constants.UPDATE);
    fileEntry=dlAppService.updateFileEntry(fileEntryId,sourceFileName,mimeType,title,description,changeLog,majorVersion,file,serviceContext);
    return toSyncDLObject(fileEntry,SyncDLObjectConstants.EVENT_UPDATE);
  }
 catch (  PortalException pe) {
    throw new PortalException(SyncUtil.buildExceptionMessage(pe),pe);
  }
}
