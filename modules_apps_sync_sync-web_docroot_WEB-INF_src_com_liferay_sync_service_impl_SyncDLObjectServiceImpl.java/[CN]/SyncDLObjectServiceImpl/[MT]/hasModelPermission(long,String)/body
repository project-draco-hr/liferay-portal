{
  PermissionChecker permissionChecker=getPermissionChecker();
  long[] roleIds=permissionChecker.getRoleIds(permissionChecker.getUserId(),groupId);
  if (roleIds.length == 0) {
    return false;
  }
  if (ResourcePermissionLocalServiceUtil.hasResourcePermission(permissionChecker.getCompanyId(),name,ResourceConstants.SCOPE_COMPANY,String.valueOf(permissionChecker.getCompanyId()),roleIds,ActionKeys.VIEW) || ResourcePermissionLocalServiceUtil.hasResourcePermission(permissionChecker.getCompanyId(),name,ResourceConstants.SCOPE_GROUP_TEMPLATE,String.valueOf(GroupConstants.DEFAULT_PARENT_GROUP_ID),roleIds,ActionKeys.VIEW) || ResourcePermissionLocalServiceUtil.hasResourcePermission(permissionChecker.getCompanyId(),name,ResourceConstants.SCOPE_GROUP,String.valueOf(groupId),roleIds,ActionKeys.VIEW)) {
    return true;
  }
  return false;
}
