{
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Page Comments Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.click(RuntimeVariables.replace("link=Page Comments Test Page"));
  selenium.waitForPageToLoad("30000");
  selenium.click("link=Add Comment");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("//input[@value='Cancel']")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.click("//input[@value='Cancel']");
  assertFalse(selenium.isTextPresent("Your request processed successfully."));
  assertFalse(selenium.isElementPresent("link=This is a null comment cancel test."));
}
