{
  try {
    UserUtil.findByPrimaryKey(statsUser.getUserId());
    long groupId=context.getGroupId();
    BlogsStatsUserLocalServiceUtil.updateStatsUser(groupId,statsUser.getUserId(),statsUser.getLastPostDate());
  }
 catch (  NoSuchUserException nsue) {
    _log.error("Could not find the user for stats " + statsUser.getStatsUserId());
  }
}
