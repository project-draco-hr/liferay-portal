{
  Locale defaultLocale=ddmFormLayout.getDefaultLocale();
  for (  DDMFormLayoutPage ddmFormLayoutPage : ddmFormLayout.getDDMFormLayoutPages()) {
    LocalizedValue title=ddmFormLayoutPage.getTitle();
    if (!defaultLocale.equals(title.getDefaultLocale())) {
      throw new DDMFormLayoutValidationException("Invalid default locale set for page title. Page titles " + "default locale should be equal to DDM Form Layout " + "default locale");
    }
  }
}
