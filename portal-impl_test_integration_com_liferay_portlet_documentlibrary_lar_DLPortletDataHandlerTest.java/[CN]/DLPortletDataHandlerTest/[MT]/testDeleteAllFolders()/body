{
  Group group=GroupTestUtil.addGroup();
  Folder parentFolder=DLAppTestUtil.addFolder(group.getGroupId(),DLFolderConstants.DEFAULT_PARENT_FOLDER_ID,"parent");
  Folder childFolder=DLAppTestUtil.addFolder(group.getGroupId(),parentFolder.getFolderId(),"child");
  DLAppServiceUtil.moveFolderToTrash(childFolder.getFolderId());
  DLAppServiceUtil.moveFolderToTrash(parentFolder.getFolderId());
  DLAppServiceUtil.deleteFolder(parentFolder.getFolderId());
  GroupLocalServiceUtil.deleteGroup(group);
  int foldersCount=DLFolderLocalServiceUtil.getFoldersCount(group.getGroupId(),DLFolderConstants.DEFAULT_PARENT_FOLDER_ID);
  Assert.assertEquals(0,foldersCount);
}
