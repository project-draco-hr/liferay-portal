{
  String freeMarkerTemplateId=template.getCompanyId() + template.getGroupId() + template.getTemplateId();
  TemplateResourceLoaderUtil.clearCache(TemplateManager.FREEMARKER,freeMarkerTemplateId);
  JournalContentUtil.clearCache();
  CacheUtil.clearCache(template.getCompanyId());
  TemplateResourceLoaderUtil.clearCache(TemplateManager.VELOCITY,freeMarkerTemplateId);
}
