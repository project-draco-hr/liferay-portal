{
  String freeMarkerTemplateId=template.getCompanyId() + template.getGroupId() + template.getTemplateId();
  TemplateResourceLoaderUtil.clearCache(TemplateConstants.LANG_TYPE_FTL,freeMarkerTemplateId);
  JournalContentUtil.clearCache();
  CacheUtil.clearCache(template.getCompanyId());
  TemplateResourceLoaderUtil.clearCache(TemplateConstants.LANG_TYPE_VM,freeMarkerTemplateId);
}
