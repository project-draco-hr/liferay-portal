{
  KBArticle kbArticle=(KBArticle)portletRequest.getAttribute(KBWebKeys.KNOWLEDGE_BASE_KB_ARTICLE);
  boolean enableKBArticleHistory=GetterUtil.getBoolean(portletRequest.getAttribute("init.jsp-enableKBArticleHistory"));
  if (enableKBArticleHistory && (kbArticle.isApproved() || !kbArticle.isFirstVersion())) {
    return true;
  }
  return false;
}
