{
  DLFileVersion dlFileVersion=_dlFileVersionLocalService.fetchDLFileVersion(fileVersionId);
  if (dlFileVersion != null) {
    return dlFileVersion.getRepositoryId();
  }
  RepositoryEntry repositoryEntry=_repositoryEntryLocalService.fetchRepositoryEntry(fileVersionId);
  if (repositoryEntry != null) {
    return repositoryEntry.getRepositoryId();
  }
  throw new InvalidRepositoryIdException("No repository associated with file version " + fileVersionId);
}
