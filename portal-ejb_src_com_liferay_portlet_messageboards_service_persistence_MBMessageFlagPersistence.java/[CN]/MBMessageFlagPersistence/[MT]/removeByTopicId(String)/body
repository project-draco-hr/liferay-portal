{
  Session session=null;
  try {
    session=openSession();
    StringBuffer query=new StringBuffer();
    query.append("FROM com.liferay.portlet.messageboards.model.MBMessageFlag WHERE ");
    if (topicId == null) {
      query.append("topicId IS NULL");
    }
 else {
      query.append("topicId = ?");
    }
    query.append(" ");
    Query q=session.createQuery(query.toString());
    int queryPos=0;
    if (topicId != null) {
      q.setString(queryPos++,topicId);
    }
    Iterator itr=q.list().iterator();
    while (itr.hasNext()) {
      MBMessageFlag mbMessageFlag=(MBMessageFlag)itr.next();
      session.delete(mbMessageFlag);
    }
    session.flush();
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
