{
  MBMessageFlag mbMessageFlag=findByPrimaryKey(mbMessageFlagPK);
  int count=countByUserId(userId);
  Session session=null;
  try {
    session=openSession();
    StringMaker query=new StringMaker();
    query.append("FROM com.liferay.portlet.messageboards.model.MBMessageFlag WHERE ");
    if (userId == null) {
      query.append("userId IS NULL");
    }
 else {
      query.append("userId = ?");
    }
    query.append(" ");
    if (obc != null) {
      query.append("ORDER BY ");
      query.append(obc.getOrderBy());
    }
    Query q=session.createQuery(query.toString());
    q.setCacheable(true);
    int queryPos=0;
    if (userId != null) {
      q.setString(queryPos++,userId);
    }
    Object[] objArray=QueryUtil.getPrevAndNext(q,count,obc,mbMessageFlag);
    MBMessageFlag[] array=new MBMessageFlagImpl[3];
    array[0]=(MBMessageFlag)objArray[0];
    array[1]=(MBMessageFlag)objArray[1];
    array[2]=(MBMessageFlag)objArray[2];
    return array;
  }
 catch (  Exception e) {
    throw HibernateUtil.processException(e);
  }
 finally {
    closeSession(session);
  }
}
