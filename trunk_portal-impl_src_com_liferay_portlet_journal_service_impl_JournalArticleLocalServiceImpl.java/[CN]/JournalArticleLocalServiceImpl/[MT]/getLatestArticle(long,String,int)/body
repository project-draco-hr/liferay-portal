{
  List<JournalArticle> articles=null;
  OrderByComparator orderByComparator=new ArticleVersionComparator();
  if (status == WorkflowConstants.STATUS_ANY) {
    articles=journalArticlePersistence.findByG_A(groupId,articleId,0,1,orderByComparator);
  }
 else {
    articles=journalArticlePersistence.findByG_A_ST(groupId,articleId,status,0,1,orderByComparator);
  }
  if (articles.size() == 0) {
    throw new NoSuchArticleException("No JournalArticle with the key {groupId=" + groupId + ", articleId="+ articleId+ ", status="+ status+ "}");
  }
  return articles.get(0);
}
