{
  String definition=ParamUtil.getString(request,DDMConstants.DEFINITION);
  String fieldName=ParamUtil.getString(request,DDMConstants.FIELD_NAME);
  DDMForm ddmForm=DDMFormJSONDeserializerUtil.deserialize(definition);
  Map<String,DDMFormField> ddmFormFieldsMap=ddmForm.getDDMFormFieldsMap(true);
  return ddmFormFieldsMap.get(fieldName);
}
