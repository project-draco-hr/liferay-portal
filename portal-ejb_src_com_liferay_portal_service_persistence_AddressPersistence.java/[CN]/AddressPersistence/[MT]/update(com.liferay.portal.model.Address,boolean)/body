{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(address);
    }
 else {
      if (address.isNew()) {
        session.save(address);
      }
    }
    session.flush();
    address.setNew(false);
    return address;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
