{
  if (isAccessGrantedByRuntimePortlet(request)) {
    return true;
  }
  if (isAccessGrantedByPortletOnPage(request,layout,portlet)) {
    return true;
  }
  if (isLayoutConfigurationAllowed(request,layout,portlet)) {
    return true;
  }
  if (isAccessGrantedByPortletAuthenticationToken(request,layout,portlet)) {
    return true;
  }
  return false;
}
