{
  String currentDate=DateUtil.getCurrentDate("yyyy-MM-dd",LocaleUtil.getDefault());
  String log4jXMLFile=PropsValues.LIFERAY_HOME + "/logs/liferay." + currentDate+ ".log";
  String content=FileUtil.read(log4jXMLFile);
  Pattern pattern=Pattern.compile(text);
  Matcher matcher=pattern.matcher(content);
  while (!matcher.find()) {
    throw new Exception("\"" + text + "\" is not present in console");
  }
}
