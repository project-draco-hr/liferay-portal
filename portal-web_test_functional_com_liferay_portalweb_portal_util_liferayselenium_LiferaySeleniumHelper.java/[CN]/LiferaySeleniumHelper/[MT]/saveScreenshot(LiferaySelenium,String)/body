{
  if (_screenshotFileName.equals(fileName)) {
    _screenshotCount++;
  }
 else {
    _screenshotCount=0;
    _screenshotFileName=fileName;
  }
  File file=new File(liferaySelenium.getProjectDir() + "portal-web\\test-results\\" + "functional\\"+ _screenshotFileName+ "\\"+ _screenshotFileName+ _screenshotCount+ ".jpg");
  file.mkdirs();
  Robot robot=new Robot();
  Toolkit toolkit=Toolkit.getDefaultToolkit();
  Rectangle rectangle=new Rectangle(toolkit.getScreenSize());
  BufferedImage bufferedImage=robot.createScreenCapture(rectangle);
  ImageIO.write(bufferedImage,"jpg",file);
}
