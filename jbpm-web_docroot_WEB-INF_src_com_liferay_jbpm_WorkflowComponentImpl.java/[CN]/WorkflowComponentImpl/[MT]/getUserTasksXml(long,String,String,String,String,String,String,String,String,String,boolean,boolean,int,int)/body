{
  List tasks=getUserTasks(instanceId,taskName,definitionName,assignedTo,gtCreateDate,ltCreateDate,gtStartDate,ltStartDate,gtEndDate,ltEndDate,hideEndedTasks,andOperator,begin,end);
  Document doc=DocumentHelper.createDocument();
  Element root=doc.addElement("result");
  for (int i=0; i < tasks.size(); i++) {
    TaskInstance task=(TaskInstance)tasks.get(i);
    createElement(task,root);
  }
  return doc.asXML();
}
