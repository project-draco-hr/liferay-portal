{
  Lock writeLock=_cometHandlerPoolRWLock.writeLock();
  try {
    writeLock.lock();
    Iterator<Map.Entry<String,CometHandler>> comethandlerPoolIterator=_cometHandlerPool.entrySet().iterator();
    while (comethandlerPoolIterator.hasNext()) {
      Map.Entry<String,CometHandler> entry=comethandlerPoolIterator.next();
      CometHandler cometHandler=entry.getValue();
      if (cometHandler != null) {
        cometHandler.destroy();
      }
      comethandlerPoolIterator.remove();
    }
  }
  finally {
    writeLock.unlock();
  }
}
