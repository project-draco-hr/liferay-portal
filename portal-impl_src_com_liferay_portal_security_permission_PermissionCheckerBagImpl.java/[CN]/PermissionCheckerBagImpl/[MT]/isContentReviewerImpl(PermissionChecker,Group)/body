{
  if (permissionChecker.isCompanyAdmin() || permissionChecker.isGroupAdmin(group.getGroupId())) {
    return true;
  }
  if (RoleLocalServiceUtil.hasUserRole(getUserId(),group.getCompanyId(),RoleConstants.PORTAL_CONTENT_REVIEWER,true)) {
    return true;
  }
  if (group.isSite()) {
    if (UserGroupRoleLocalServiceUtil.hasUserGroupRole(getUserId(),group.getGroupId(),RoleConstants.SITE_CONTENT_REVIEWER,true)) {
      return true;
    }
  }
  return false;
}
