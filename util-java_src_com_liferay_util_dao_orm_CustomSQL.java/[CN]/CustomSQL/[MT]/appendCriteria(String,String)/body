{
  if (criteria == null) {
    return sql;
  }
  int pos=sql.indexOf(_GROUP_BY_CLAUSE);
  if (pos != -1) {
    return sql.substring(0,pos + 1).concat(criteria).concat(sql.substring(pos + 1));
  }
  pos=sql.indexOf(_ORDER_BY_CLAUSE);
  if (pos != -1) {
    return sql.substring(0,pos + 1).concat(criteria).concat(sql.substring(pos + 1));
  }
  return sql.concat(criteria);
}
