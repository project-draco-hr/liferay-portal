{
  ClassLoader classLoader=CustomSQL.class.getClassLoader();
  if (PortalClassLoaderUtil.getClassLoader() == classLoader) {
    Properties propsUtil=PortalUtil.getPortalProperties();
    return StringUtil.split(propsUtil.getProperty("custom.sql.configs"));
  }
  if (classLoader.getResource("portlet.properties") != null) {
    Configuration configuration=ConfigurationFactoryUtil.getConfiguration(classLoader,"portlet");
    return ArrayUtil.append(StringUtil.split(configuration.get("custom.sql.configs")),"custom-sql/default.xml");
  }
  return new String[]{"custom-sql/default.xml"};
}
