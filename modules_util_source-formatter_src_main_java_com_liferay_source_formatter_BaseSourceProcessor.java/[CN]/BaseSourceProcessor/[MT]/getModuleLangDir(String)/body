{
  int x=moduleLocation.lastIndexOf(StringPool.SLASH);
  String baseModuleName=moduleLocation.substring(0,x);
  int y=baseModuleName.lastIndexOf(StringPool.SLASH);
  baseModuleName=baseModuleName.substring(y + 1,baseModuleName.length());
  String moduleLangDir=moduleLocation.substring(0,x + 1) + baseModuleName + "-lang";
  File dir=new File(moduleLangDir);
  if (!dir.exists() && moduleLangDir.contains("/modules/ee/")) {
    moduleLangDir=StringUtil.replaceFirst(moduleLangDir,"/modules/ee/","/modules/");
  }
  return moduleLangDir;
}
