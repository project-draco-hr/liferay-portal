{
  SocialActivityDefinition activityDefinition=socialActivitySettingLocalService.getActivityDefinition(activity.getGroupId(),activity.getClassName(),activity.getType());
  if (activity.getType() == SocialActivityConstants.TYPE_DELETE) {
    if (activity.getParentClassPK() == 0) {
      return true;
    }
 else {
      return false;
    }
  }
  if (activityDefinition != null) {
    return activityDefinition.isLogActivity();
  }
  if (activity.getType() < SocialActivityConstants.INTERNAL_TYPES_START) {
    return true;
  }
  return false;
}
