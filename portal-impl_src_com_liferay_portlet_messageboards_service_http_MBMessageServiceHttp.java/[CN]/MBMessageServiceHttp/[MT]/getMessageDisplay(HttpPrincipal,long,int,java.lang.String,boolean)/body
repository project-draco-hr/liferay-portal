{
  try {
    MethodKey methodKey=new MethodKey(MBMessageServiceUtil.class.getName(),"getMessageDisplay",long.class,int.class,java.lang.String.class,boolean.class);
    MethodHandler methodHandler=new MethodHandler(methodKey,messageId,status,threadView,includePrevAndNext);
    Object returnObj=null;
