{
  if (isBlankOrNullString(user) || isBlankOrNullString(delegationEmail)) {
    throw new IllegalArgumentException();
  }
  logger.log(Level.INFO,"Deleting the email delegate " + delegationEmail + " for user "+ user+ " ...");
  URL deleteUrl=new URL(Constants.PROTOCOL + "://" + Constants.APPS_APIS_DOMAIN+ Constants.APPS_APIS_URL+ "/"+ domain+ "/"+ user+ "/"+ Constants.DELEGATION+ "/"+ delegationEmail);
  delete(deleteUrl);
  logger.log(Level.INFO,"Successfully deleted an email delegate.");
}
