{
  JSONArray optionsValuesJSONArray=_selectDDMFormFieldValueAccessor.getValue(ddmFormFieldValue,locale);
  DDMFormFieldOptions ddmFormFieldOptions=getDDMFormFieldOptions(ddmFormFieldValue);
  StringBundler sb=new StringBundler(optionsValuesJSONArray.length() * 2);
  for (int i=0; i < optionsValuesJSONArray.length(); i++) {
    if (i > 0) {
      sb.append(StringPool.COMMA_AND_SPACE);
    }
    LocalizedValue optionLabel=ddmFormFieldOptions.getOptionLabels(optionsValuesJSONArray.getString(i));
    sb.append(optionLabel.getString(locale));
  }
  return sb.toString();
}
