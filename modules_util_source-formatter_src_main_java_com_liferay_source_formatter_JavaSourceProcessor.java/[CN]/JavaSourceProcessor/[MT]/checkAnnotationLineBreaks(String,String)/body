{
  Matcher matcher=_annotationLineBreakPattern1.matcher(annotation);
  if (matcher.find()) {
    String replacement=StringUtil.replaceFirst(annotation,matcher.group(1),StringPool.BLANK,matcher.start());
    return StringUtil.replace(content,annotation,replacement);
  }
  matcher=_annotationLineBreakPattern2.matcher(annotation);
  if (matcher.find()) {
    String replacement=StringUtil.replaceFirst(annotation,matcher.group(1),StringPool.SPACE,matcher.start());
    return StringUtil.replace(content,annotation,replacement);
  }
  return content;
}
