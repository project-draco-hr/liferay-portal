{
  if (fileName.contains("Log")) {
    return;
  }
  Matcher matcher=_logLevelPattern.matcher(content);
  while (matcher.find()) {
    int pos=matcher.start();
    while (true) {
      pos=content.lastIndexOf(StringPool.NEW_LINE + StringPool.TAB,pos - 1);
      char c=content.charAt(pos + 2);
      if (c != CharPool.TAB) {
        break;
      }
    }
    String codeBlock=content.substring(pos,matcher.start());
    String s="_log.is" + StringUtil.upperCaseFirstLetter(matcher.group(2)) + "Enabled()";
    if (codeBlock.contains(s) ^ !s.equals("_log.isErrorEnabled()")) {
      int lineCount=getLineCount(content,matcher.start(1));
      if (codeBlock.contains(s)) {
        processErrorMessage(fileName,"Do not use _log.isErrorEnabled(): " + fileName + " "+ lineCount);
      }
 else {
        processErrorMessage(fileName,"Use " + s + ": "+ fileName+ " "+ lineCount);
      }
    }
  }
}
