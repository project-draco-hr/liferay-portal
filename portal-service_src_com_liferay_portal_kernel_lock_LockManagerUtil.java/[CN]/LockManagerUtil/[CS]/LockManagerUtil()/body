{
  Registry registry=RegistryUtil.getRegistry();
  registry.registerService(LockManager.class,new LockManagerImpl());
  ServiceTracker<LockManager,LockManager> serviceTracker=registry.trackServices(LockManager.class);
  serviceTracker.open();
  try {
    _lockHelper=serviceTracker.waitForService(0);
  }
 catch (  Exception e) {
    throw new IllegalStateException("Unable to initialize lock manager util",e);
  }
 finally {
    serviceTracker.close();
  }
}
