{
  PermissionChecker permissionChecker=themeDisplay.getPermissionChecker();
  if (!hasPermissions(permissionChecker,activity,ActionKeys.VIEW,themeDisplay)) {
    return null;
  }
  String groupName=StringPool.BLANK;
  if (activity.getGroupId() != themeDisplay.getScopeGroupId()) {
    groupName=getGroupName(activity.getGroupId(),themeDisplay);
  }
  String link=getLink(activity,themeDisplay);
  Object[] titleArguments=getTitleArguments(groupName,activity,link,getTitle(activity,themeDisplay),themeDisplay);
  String titlePattern=getTitlePattern(groupName,activity);
  String title=themeDisplay.translate(titlePattern,titleArguments);
  String body=getBody(activity,themeDisplay);
  return new SocialActivityFeedEntry(link,title,body);
}
