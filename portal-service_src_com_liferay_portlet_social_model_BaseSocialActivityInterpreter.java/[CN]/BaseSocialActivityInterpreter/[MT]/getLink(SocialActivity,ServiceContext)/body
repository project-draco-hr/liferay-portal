{
  TrashHandler trashHandler=TrashHandlerRegistryUtil.getTrashHandler(getClassName(activity));
  long classPK=getClassPK(activity);
  if ((trashHandler != null) && (trashHandler.isInTrash(classPK) || trashHandler.isInTrashContainer(classPK))) {
    PortletURL portletURL=TrashUtil.getViewContentURL(getClassName(activity),classPK,serviceContext.getRequest());
    return portletURL.toString();
  }
  StringBundler sb=new StringBundler(4);
  sb.append(serviceContext.getPortalURL());
  sb.append(serviceContext.getPathMain());
  sb.append(getPath(activity));
  sb.append(classPK);
  return sb.toString();
}
