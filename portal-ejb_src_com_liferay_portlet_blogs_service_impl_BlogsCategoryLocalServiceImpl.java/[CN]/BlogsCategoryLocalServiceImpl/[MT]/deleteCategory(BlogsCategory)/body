{
  Iterator itr=BlogsCategoryUtil.findByParentCategoryId(category.getCategoryId()).iterator();
  while (itr.hasNext()) {
    BlogsCategory curCategory=(BlogsCategory)itr.next();
    deleteCategory(curCategory);
  }
  itr=BlogsEntryUtil.findByCategoryId(category.getCategoryId()).iterator();
  while (itr.hasNext()) {
    BlogsEntry entry=(BlogsEntry)itr.next();
    entry.setCategoryId(BlogsCategory.DEFAULT_PARENT_CATEGORY_ID);
    BlogsEntryUtil.update(entry);
    try {
      Indexer.updateEntry(entry.getCompanyId(),entry.getGroupId(),entry.getUserId(),category.getCategoryId(),entry.getEntryId(),entry.getTitle(),entry.getContent());
    }
 catch (    IOException ioe) {
      _log.error(ioe.getMessage());
    }
  }
  ResourceLocalServiceUtil.deleteResource(category.getCompanyId(),BlogsCategory.class.getName(),Resource.TYPE_CLASS,Resource.SCOPE_INDIVIDUAL,category.getPrimaryKey().toString());
  BlogsCategoryUtil.remove(category.getCategoryId());
}
