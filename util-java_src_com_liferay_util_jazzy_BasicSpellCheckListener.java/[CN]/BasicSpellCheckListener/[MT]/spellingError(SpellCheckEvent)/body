{
  List<String> suggestions=new ArrayList<String>();
  List<Word> words=(List<Word>)event.getSuggestions();
  for (  Word word : words) {
    suggestions.add(word.getWord());
  }
  int pos=event.getWordContextPosition();
  if (pos >= 0) {
    if ((pos == 0) || ((pos > 0) && (!_isInsideHtmlTag(pos)) && (_text.charAt(pos - 1) != '&')&& (event.getInvalidWord().length() > 1))) {
      _invalidWords.add(new InvalidWord(event.getInvalidWord(),suggestions,event.getWordContext(),pos));
    }
  }
}
