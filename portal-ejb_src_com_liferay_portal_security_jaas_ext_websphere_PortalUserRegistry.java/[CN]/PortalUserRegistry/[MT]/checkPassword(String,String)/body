{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection(Constants.DATA_SOURCE);
    StringBuffer query=new StringBuffer();
    query.append("SELECT password_ ");
    query.append("FROM User_ WHERE ");
    query.append("userId = ?");
    ps=con.prepareStatement(query.toString());
    ps.setString(1,userId);
    rs=ps.executeQuery();
    if (rs.next()) {
      if (!password.equals(rs.getString(1))) {
        throw new PasswordCheckFailedException("Passwords do not match");
      }
    }
 else {
      throw new PasswordCheckFailedException("User with the id " + userId + " does not exist");
    }
  }
 catch (  Exception e) {
    throw new CustomRegistryException(e);
  }
 finally {
    DataAccess.cleanUp(con,ps,rs);
  }
  return userId;
}
