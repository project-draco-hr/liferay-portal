{
  try {
    AccountFinder accountFinder=AccountFinderLocator.getAccountFinderInstance();
    return accountFinder.findAccount(user,password,accountName);
  }
 catch (  Exception e) {
    _log.error("Error obtaining the account for user " + user.getUserId() + " with prefix "+ accountName+ ". The default will be used. ",e);
    return new MailAccount("Default",user.getUserId(),password,user.getEmailAddress());
  }
}
