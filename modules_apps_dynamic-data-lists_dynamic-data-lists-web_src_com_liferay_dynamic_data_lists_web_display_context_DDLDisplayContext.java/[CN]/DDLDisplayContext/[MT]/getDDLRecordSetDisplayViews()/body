{
  if (_ddlRecordDisplayViews == null) {
    DDLServiceConfiguration ddlServiceConfiguration=_ddlRequestHelper.getDDLServiceConfiguration();
    _ddlRecordDisplayViews=StringUtil.split(PrefsParamUtil.getString(_ddlRequestHelper.getPortletPreferences(),_ddlRequestHelper.getRenderRequest(),"displayViews",StringUtil.merge(ddlServiceConfiguration.supportedDisplayView())));
  }
  return _ddlRecordDisplayViews;
}
