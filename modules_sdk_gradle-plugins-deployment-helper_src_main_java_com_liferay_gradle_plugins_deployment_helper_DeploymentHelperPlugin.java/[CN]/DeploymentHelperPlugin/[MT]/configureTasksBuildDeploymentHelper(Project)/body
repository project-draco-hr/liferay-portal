{
  TaskContainer taskContainer=project.getTasks();
  taskContainer.withType(BuildDeploymentHelperTask.class,new Action<BuildDeploymentHelperTask>(){
    @Override public void execute(    BuildDeploymentHelperTask buildDeploymentHelperTask){
      configureTaskBuildDeploymentHelperClasspath(buildDeploymentHelperTask);
    }
  }
);
}
