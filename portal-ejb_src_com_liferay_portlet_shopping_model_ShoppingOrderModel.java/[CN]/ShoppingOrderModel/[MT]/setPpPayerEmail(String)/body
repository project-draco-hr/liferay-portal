{
  if (((ppPayerEmail == null) && (_ppPayerEmail != null)) || ((ppPayerEmail != null) && (_ppPayerEmail == null)) || ((ppPayerEmail != null) && (_ppPayerEmail != null) && !ppPayerEmail.equals(_ppPayerEmail))) {
    if (!XSS_ALLOW_PPPAYEREMAIL) {
      ppPayerEmail=XSSUtil.strip(ppPayerEmail);
    }
    _ppPayerEmail=ppPayerEmail;
    setModified(true);
  }
}
