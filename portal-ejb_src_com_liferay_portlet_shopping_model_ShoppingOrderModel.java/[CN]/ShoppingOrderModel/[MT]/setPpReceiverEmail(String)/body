{
  if (((ppReceiverEmail == null) && (_ppReceiverEmail != null)) || ((ppReceiverEmail != null) && (_ppReceiverEmail == null)) || ((ppReceiverEmail != null) && (_ppReceiverEmail != null) && !ppReceiverEmail.equals(_ppReceiverEmail))) {
    if (!XSS_ALLOW_PPRECEIVEREMAIL) {
      ppReceiverEmail=XSSUtil.strip(ppReceiverEmail);
    }
    _ppReceiverEmail=ppReceiverEmail;
    setModified(true);
  }
}
