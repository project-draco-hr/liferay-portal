{
  try {
    DDMStructure ddmStructure=DDMStructureLocalServiceUtil.getStructure(PortalUtil.getSiteGroupId(_article.getGroupId()),PortalUtil.getClassNameId(JournalArticle.class),_article.getDDMStructureKey(),true);
    String content=_article.getContent();
    DDMFormValues ddmFormValues=FieldsToDDMFormValuesConverterUtil.convert(ddmStructure,JournalConverterUtil.getDDMFields(ddmStructure,content));
    return ddmFormValues;
  }
 catch (  Exception e) {
    throw new PortalException("Unable to read fields for article " + _article.getId(),e);
  }
}
