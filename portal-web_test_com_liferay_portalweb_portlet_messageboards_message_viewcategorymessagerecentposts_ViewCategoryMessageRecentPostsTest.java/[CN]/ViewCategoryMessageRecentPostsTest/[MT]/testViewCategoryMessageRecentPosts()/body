{
  selenium.open("/web/guest/home/");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isVisible("link=Message Boards Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.saveScreenShotAndSource();
  selenium.clickAt("link=Message Boards Test Page",RuntimeVariables.replace("Message Boards Test Page"));
  selenium.waitForPageToLoad("30000");
  selenium.saveScreenShotAndSource();
  selenium.clickAt("link=Recent Posts",RuntimeVariables.replace("Recent Posts"));
  selenium.waitForPageToLoad("30000");
  selenium.saveScreenShotAndSource();
  assertEquals(RuntimeVariables.replace("MB Category Thread Message Subject"),selenium.getText("//td[1]/a"));
  assertEquals(RuntimeVariables.replace("Joe Bloggs"),selenium.getText("//td[2]/a"));
  assertEquals(RuntimeVariables.replace("1"),selenium.getText("//td[3]/a"));
  assertTrue(selenium.isVisible("//td[4]/a"));
  assertTrue(selenium.isPartialText("//td[5]/a","By: Joe Bloggs"));
}
