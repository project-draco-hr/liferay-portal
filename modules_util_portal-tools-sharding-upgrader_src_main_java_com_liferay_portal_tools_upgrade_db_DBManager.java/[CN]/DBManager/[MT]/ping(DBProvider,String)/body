{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    DataSource dataSource=dbProvider.getDataSource();
    con=dataSource.getConnection();
    ps=con.prepareStatement(sql);
    rs=ps.executeQuery();
    return rs.next();
  }
  finally {
    cleanUp(con,ps,rs);
  }
}
