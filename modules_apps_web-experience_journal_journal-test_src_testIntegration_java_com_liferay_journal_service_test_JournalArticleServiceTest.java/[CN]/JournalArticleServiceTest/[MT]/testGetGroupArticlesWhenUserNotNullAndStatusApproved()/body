{
  List<JournalArticle> expectedArticles=addArticles(2,RandomTestUtil.randomString());
  expectedArticles.add(0,_article);
  _article=updateArticleStatus(_article,WorkflowConstants.STATUS_DRAFT);
  int count=JournalArticleServiceUtil.getGroupArticlesCount(_group.getGroupId(),_article.getUserId(),JournalFolderConstants.DEFAULT_PARENT_FOLDER_ID,WorkflowConstants.STATUS_APPROVED);
  Assert.assertEquals(3,count);
  List<JournalArticle> articles=JournalArticleServiceUtil.getGroupArticles(_group.getGroupId(),_article.getUserId(),JournalFolderConstants.DEFAULT_PARENT_FOLDER_ID,WorkflowConstants.STATUS_APPROVED,QueryUtil.ALL_POS,QueryUtil.ALL_POS,null);
  Assert.assertEquals(expectedArticles,articles);
}
