{
  if (!_translate) {
    return null;
  }
  if (limit == 3) {
    return null;
  }
  Language fromLanguage=Language.fromString(_getMicrosoftLanguageId(fromLanguageId));
  Language toLanguage=Language.fromString(_getMicrosoftLanguageId(toLanguageId));
  if (toLanguage == null) {
    return null;
  }
  String toText=null;
