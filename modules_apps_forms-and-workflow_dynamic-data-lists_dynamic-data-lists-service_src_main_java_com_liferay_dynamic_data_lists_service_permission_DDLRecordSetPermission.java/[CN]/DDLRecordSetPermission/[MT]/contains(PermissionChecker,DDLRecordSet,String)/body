{
  String portletId=PortletProviderUtil.getPortletId(DDLRecord.class.getName(),PortletProvider.Action.EDIT);
  if (!actionId.equals(DDLActionKeys.ADD_RECORD) && (recordSet.getScope() == DDLRecordSetConstants.SCOPE_DYNAMIC_DATA_LISTS)) {
    Boolean hasPermission=StagingPermissionUtil.hasPermission(permissionChecker,recordSet.getGroupId(),DDLRecordSet.class.getName(),recordSet.getRecordSetId(),portletId,actionId);
    if (hasPermission != null) {
      return hasPermission.booleanValue();
    }
  }
  if (permissionChecker.hasOwnerPermission(recordSet.getCompanyId(),DDLRecordSet.class.getName(),recordSet.getRecordSetId(),recordSet.getUserId(),actionId)) {
    return true;
  }
  return permissionChecker.hasPermission(recordSet.getGroupId(),DDLRecordSet.class.getName(),recordSet.getRecordSetId(),actionId);
}
