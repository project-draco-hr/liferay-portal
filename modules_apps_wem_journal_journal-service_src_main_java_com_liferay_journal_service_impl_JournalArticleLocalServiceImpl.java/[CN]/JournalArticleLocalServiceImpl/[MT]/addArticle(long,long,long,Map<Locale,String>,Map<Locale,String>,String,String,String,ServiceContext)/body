{
  User user=userPersistence.findByPrimaryKey(userId);
  Calendar calendar=CalendarFactoryUtil.getCalendar(user.getTimeZone());
  int displayDateMonth=calendar.get(Calendar.MONTH);
  int displayDateDay=calendar.get(Calendar.DAY_OF_MONTH);
  int displayDateYear=calendar.get(Calendar.YEAR);
  int displayDateHour=calendar.get(Calendar.HOUR_OF_DAY);
  int displayDateMinute=calendar.get(Calendar.MINUTE);
  return journalArticleLocalService.addArticle(userId,groupId,folderId,JournalArticleConstants.CLASSNAME_ID_DEFAULT,0,StringPool.BLANK,true,1,titleMap,descriptionMap,content,ddmStructureKey,ddmTemplateKey,null,displayDateMonth,displayDateDay,displayDateYear,displayDateHour,displayDateMinute,0,0,0,0,0,true,0,0,0,0,0,true,true,false,null,null,null,null,serviceContext);
}
