{
  ThemeDisplay themeDisplay=(ThemeDisplay)request.getAttribute(WebKeys.THEME_DISPLAY);
  long workflowInstanceId=ParamUtil.getLong(request,"workflowInstanceId");
  WorkflowInstance workflowInstance=null;
  if (workflowInstanceId > 0) {
    workflowInstance=WorkflowInstanceManagerUtil.getWorkflowInstance(themeDisplay.getCompanyId(),workflowInstanceId);
  }
  request.setAttribute(WebKeys.WORKFLOW_INSTANCE,workflowInstance);
}
