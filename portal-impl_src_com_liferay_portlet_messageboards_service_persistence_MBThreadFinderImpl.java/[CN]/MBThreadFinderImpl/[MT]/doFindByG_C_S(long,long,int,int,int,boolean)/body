{
  Session session=null;
  try {
    session=openSession();
    String sql=CustomSQLUtil.get(FIND_BY_G_C_S);
    if (status != WorkflowConstants.STATUS_ANY) {
      sql=StringUtil.replace(sql,"[$STATUS$]","AND (MBThread.status = ?)");
    }
 else {
      sql=StringUtil.replace(sql,"[$STATUS$]",StringPool.BLANK);
    }
    if (inlineSQLHelper) {
      sql=InlineSQLHelperUtil.replacePermissionCheck(sql,MBMessage.class.getName(),"MBMessage.messageId","MBMessage.userId",groupId);
    }
    SQLQuery q=session.createSQLQuery(sql);
    q.addEntity("MBThread",MBThreadImpl.class);
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(groupId);
    qPos.add(categoryId);
    if (status != WorkflowConstants.STATUS_ANY) {
      qPos.add(status);
    }
    return (List<MBThread>)QueryUtil.list(q,getDialect(),start,end);
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
 finally {
    closeSession(session);
  }
}
