{
  PACLPolicy paclPolicy=PACLPolicyManager.getPACLPolicy(portletClassLoader);
  if (paclPolicy == null) {
    return;
  }
  Permission permission=new PortalHookPermission(name,portletClassLoader,subject);
  if (!paclPolicy.implies(permission)) {
    throw new SecurityException(permission.toString());
  }
}
