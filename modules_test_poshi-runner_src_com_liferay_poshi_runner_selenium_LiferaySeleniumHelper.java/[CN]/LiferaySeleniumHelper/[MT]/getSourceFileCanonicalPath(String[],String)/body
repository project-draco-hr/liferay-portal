{
  String filePath=null;
  for (  String baseDirName : baseDirNames) {
    String uncheckedFilePath=PoshiRunnerGetterUtil.getCanonicalPath(baseDirName + FileUtil.getSeparator() + fileName);
    if (FileUtil.exists(uncheckedFilePath)) {
      if (filePath != null) {
        throw new Exception("Duplicate file names found at\n" + fileName + "\n"+ uncheckedFilePath);
      }
      filePath=uncheckedFilePath;
    }
  }
  if (filePath == null) {
    throw new Exception("File not found " + fileName);
  }
  return filePath;
}
