{
  long classNameId1=RandomTestUtil.randomLong();
  addDisplayTemplate(classNameId1,0,StringUtil.randomString());
  addDisplayTemplate(classNameId1,0,StringUtil.randomString());
  addDisplayTemplate(classNameId1,0,StringUtil.randomString());
  long classNameId2=RandomTestUtil.randomLong();
  addDisplayTemplate(classNameId2,0,StringUtil.randomString());
  addDisplayTemplate(classNameId2,0,StringUtil.randomString());
  int count=DDMTemplateLocalServiceUtil.searchCount(TestPropsValues.getCompanyId(),new long[]{group.getGroupId()},new long[]{classNameId1},null,0,null,null,null);
  Assert.assertEquals(3,count);
  count=DDMTemplateLocalServiceUtil.searchCount(TestPropsValues.getCompanyId(),new long[]{group.getGroupId()},new long[]{classNameId1,classNameId2},null,0,null,null,null);
  Assert.assertEquals(5,count);
}
