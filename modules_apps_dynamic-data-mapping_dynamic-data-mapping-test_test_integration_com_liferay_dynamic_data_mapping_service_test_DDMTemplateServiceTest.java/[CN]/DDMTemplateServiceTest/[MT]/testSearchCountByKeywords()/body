{
  int initialCount=DDMTemplateLocalServiceUtil.searchCount(TestPropsValues.getCompanyId(),group.getGroupId(),_CLASS_NAME_ID,0,0,null,null,null);
  addDisplayTemplate(_CLASS_NAME_ID,0,_RESOURCE_CLASS_NAME_ID,"Test Template","Test Template");
  int count=DDMTemplateLocalServiceUtil.searchCount(TestPropsValues.getCompanyId(),group.getGroupId(),_CLASS_NAME_ID,0,_RESOURCE_CLASS_NAME_ID,"Test",null,null);
  Assert.assertEquals(initialCount + 1,count);
}
