{
  int initialCount=DDMTemplateLocalServiceUtil.getTemplatesCount(group.getGroupId(),_CLASS_NAME_ID,0);
  DDMTemplate template=addDisplayTemplate(_CLASS_NAME_ID,0,_RESOURCE_CLASS_NAME_ID,"Test Template","Test Template");
  copyTemplate(template);
  int count=DDMTemplateLocalServiceUtil.getTemplatesCount(group.getGroupId(),_CLASS_NAME_ID,0);
  Assert.assertEquals(initialCount + 2,count);
}
