{
  int initialCount=DDMTemplateLocalServiceUtil.searchCount(TestPropsValues.getCompanyId(),group.getGroupId(),_classNameId,0,0,"Test Template",null,null,null,null,false);
  addDisplayTemplate(_classNameId,0,_resourceClassNameId,"Test Template","Test Template");
  int count=DDMTemplateLocalServiceUtil.searchCount(TestPropsValues.getCompanyId(),group.getGroupId(),_classNameId,0,_resourceClassNameId,"Test Template",null,null,null,null,false);
  Assert.assertEquals(initialCount + 1,count);
}
