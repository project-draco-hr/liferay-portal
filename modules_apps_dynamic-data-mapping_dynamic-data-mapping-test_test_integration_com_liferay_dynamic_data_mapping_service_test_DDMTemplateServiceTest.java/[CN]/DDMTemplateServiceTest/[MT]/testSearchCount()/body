{
  int initialCount=DDMTemplateLocalServiceUtil.searchCount(TestPropsValues.getCompanyId(),group.getGroupId(),_CLASS_NAME_ID,0,0,"Test Template",null,null,null,null,false);
  addDisplayTemplate(_CLASS_NAME_ID,0,_RESOURCE_CLASS_NAME_ID,"Test Template","Test Template");
  int count=DDMTemplateLocalServiceUtil.searchCount(TestPropsValues.getCompanyId(),group.getGroupId(),_CLASS_NAME_ID,0,_RESOURCE_CLASS_NAME_ID,"Test Template",null,null,null,null,false);
  Assert.assertEquals(initialCount + 1,count);
}
