{
  if (amazonClientException instanceof AmazonServiceException) {
    AmazonServiceException ase=(AmazonServiceException)amazonClientException;
    StringBundler sb=new StringBundler(11);
    sb.append("{errorCode=");
    sb.append(ase.getErrorCode());
    sb.append(", errorType=");
    sb.append(ase.getErrorType());
    sb.append(", message=");
    sb.append(ase.getMessage());
    sb.append(", requestId=");
    sb.append(ase.getRequestId());
    sb.append(", statusCode=");
    sb.append(ase.getStatusCode());
    sb.append("}");
    return new SystemException(sb.toString());
  }
 else {
    return new SystemException(amazonClientException.getMessage(),amazonClientException);
  }
}
