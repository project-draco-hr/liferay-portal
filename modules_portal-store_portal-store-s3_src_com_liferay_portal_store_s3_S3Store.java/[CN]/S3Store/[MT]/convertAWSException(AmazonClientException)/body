{
  if (amazonClientException instanceof AmazonServiceException) {
    AmazonServiceException se=(AmazonServiceException)amazonClientException;
    return new SystemException("An error occurred in AWS: " + se.getMessage() + " - HTTP Code: "+ se.getStatusCode()+ " - AWS Error Code: "+ se.getErrorCode()+ " - Error Type: "+ se.getErrorType()+ " - Request ID: "+ se.getRequestId(),se);
  }
 else {
    return new SystemException("An error occurred in the AWS client: " + amazonClientException.getMessage(),amazonClientException);
  }
}
