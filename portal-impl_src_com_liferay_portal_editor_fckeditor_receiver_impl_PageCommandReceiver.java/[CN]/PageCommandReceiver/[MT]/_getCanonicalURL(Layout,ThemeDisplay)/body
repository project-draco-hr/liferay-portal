{
  String layoutFullURL=PortalUtil.getLayoutFullURL(layout,themeDisplay,false);
  String relativeURL=PortalUtil.getCanonicalURL(layoutFullURL,themeDisplay,layout,true);
  String portalURL=PortalUtil.getPortalURL(layout,themeDisplay);
  relativeURL=relativeURL.substring(portalURL.length());
  return relativeURL;
}
