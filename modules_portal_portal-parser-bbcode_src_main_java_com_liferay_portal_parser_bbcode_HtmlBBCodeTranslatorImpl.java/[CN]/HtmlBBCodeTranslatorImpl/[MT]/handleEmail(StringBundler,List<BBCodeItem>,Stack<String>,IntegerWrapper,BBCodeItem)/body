{
  sb.append("<a href=\"");
  String href=bbCodeItem.getAttribute();
  if (href == null) {
    href=extractData(bbCodeItems,marker,"email",BBCodeParser.TYPE_DATA,false);
  }
  if (!href.startsWith("mailto:")) {
    href="mailto:" + href;
  }
  sb.append(HtmlUtil.escapeHREF(href));
  sb.append("\">");
  tags.push("</a>");
}
