{
  if (primary) {
    Iterator itr=EmailAddressUtil.findByC_C_C_P(companyId,classNameId,classPK,primary).iterator();
    while (itr.hasNext()) {
      EmailAddress emailAddress=(EmailAddress)itr.next();
      if ((emailAddressId <= 0) || (emailAddress.getEmailAddressId() != emailAddressId)) {
        emailAddress.setPrimary(false);
        EmailAddressUtil.update(emailAddress);
      }
    }
  }
}
