{
  template.put("displayStyle",ddmFormField.getProperty("displayStyle"));
  String placeholderString=StringPool.BLANK;
  LocalizedValue placeholder=(LocalizedValue)ddmFormField.getProperty("placeholder");
  if (placeholder != null) {
    placeholderString=placeholder.getString(ddmFormFieldRenderingContext.getLocale());
  }
  template.put("placeholder",placeholderString);
  String tooltipString=StringPool.BLANK;
  LocalizedValue tooltip=(LocalizedValue)ddmFormField.getProperty("tooltip");
  if (tooltip != null) {
    tooltipString=tooltip.getString(ddmFormFieldRenderingContext.getLocale());
  }
  template.put("tooltip",tooltipString);
}
