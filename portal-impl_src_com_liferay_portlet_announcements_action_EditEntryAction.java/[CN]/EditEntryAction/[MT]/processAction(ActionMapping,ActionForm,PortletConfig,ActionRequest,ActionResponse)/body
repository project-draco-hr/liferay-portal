{
  String cmd=ParamUtil.getString(req,Constants.CMD);
  PortletPreferences prefs=PortletPreferencesFactoryUtil.getPortletSetup(req,PortletKeys.ANNOUNCEMENTS);
  try {
    if (cmd.equals(Constants.ADD) || cmd.equals(Constants.UPDATE)) {
      updateEntry(req,prefs);
    }
 else     if (cmd.equals(Constants.DELETE)) {
      deleteEntry(req);
    }
    String redirect=ParamUtil.getString(req,"redirect");
    res.sendRedirect(redirect);
  }
 catch (  Exception e) {
    if (e instanceof AnnouncementEntryContentException || e instanceof AnnouncementEntryDisplayDateException || e instanceof AnnouncementEntryExpirationDateException|| e instanceof AnnouncementEntryTitleException|| e instanceof NoSuchEntryException|| e instanceof PrincipalException) {
      SessionErrors.add(req,e.getClass().getName());
    }
 else {
      throw e;
    }
  }
}
