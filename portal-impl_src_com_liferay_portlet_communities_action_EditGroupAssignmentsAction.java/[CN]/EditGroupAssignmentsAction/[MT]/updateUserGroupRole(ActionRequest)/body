{
  User user=PortalUtil.getSelectedUser(req,false);
  if (user == null) {
    return;
  }
  long groupId=ParamUtil.getLong(req,"groupId");
  long[] addRoleIds=StringUtil.split(ParamUtil.getString(req,"addRoleIds"),0L);
  long[] removeRoleIds=StringUtil.split(ParamUtil.getString(req,"removeRoleIds"),0L);
  UserGroupRoleServiceUtil.addUserGroupRoles(user.getUserId(),groupId,addRoleIds);
  UserGroupRoleServiceUtil.deleteUserGroupRoles(user.getUserId(),groupId,removeRoleIds);
}
