{
  Map<String,String[]> properties=new HashMap<>();
  JSONSerializer jsonSerializer=JSONFactoryUtil.createJSONSerializer();
  String[] serializableFields=ArrayUtil.append(_externalPropertyKeys,"desiredReturnTypes");
  jsonSerializer.include(serializableFields);
  properties.put(_prefix + JSON,new String[]{jsonSerializer.serialize(_itemSelectorCriterion)});
  return properties;
}
