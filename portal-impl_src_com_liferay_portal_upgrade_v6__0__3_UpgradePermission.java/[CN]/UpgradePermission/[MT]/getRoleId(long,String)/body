{
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    ps=connection.prepareStatement("select roleId from Role_ where companyId = ? and name = ?");
    ps.setLong(1,companyId);
    ps.setString(2,name);
    rs=ps.executeQuery();
    if (rs.next()) {
      return rs.getLong("roleId");
    }
    return 0;
  }
  finally {
    DataAccess.cleanUp(ps,rs);
  }
}
