{
  try (PreparedStatement ps=connection.prepareStatement("select roleId from Role_ where companyId = ? and name = ?")){
    ps.setLong(1,companyId);
    ps.setString(2,name);
    try (ResultSet rs=ps.executeQuery()){
      if (rs.next()) {
        return rs.getLong("roleId");
      }
      return 0;
    }
   }
 }
