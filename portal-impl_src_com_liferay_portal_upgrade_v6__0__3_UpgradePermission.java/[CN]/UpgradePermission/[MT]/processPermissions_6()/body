{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("SELECT " + "rp.companyId, rp.roleId, rp.primKey " + "FROM "+ "ResourcePermission rp, ResourceAction ra "+ "WHERE "+ "ra.name = 'com.liferay.portlet.journal' AND "+ "ra.name = rp.name AND "+ "ra.actionId = 'APPROVE_ARTICLE' AND "+ "rp.scope = 4 AND "+ "rp.actionIds >= ra.bitwiseValue AND "+ "rp.actionIds/ra.bitwiseValue % 2 = 1");
    rs=ps.executeQuery();
    while (rs.next()) {
      long companyId=rs.getLong("companyId");
      long roleId=rs.getLong("roleId");
      long groupId=GetterUtil.getLong(rs.getString("primKey"));
      processRoleUsers(companyId,roleId,groupId);
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
