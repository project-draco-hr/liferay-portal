{
  try (PreparedStatement ps=connection.prepareStatement("select count(*) from UserGroupRole where userId = ? and " + "groupId = ? and roleId = ?")){
    ps.setLong(1,userId);
    ps.setLong(2,groupId);
    ps.setLong(3,roleId);
    try (ResultSet rs=ps.executeQuery()){
      if (rs.next()) {
        int count=rs.getInt(1);
        if (count > 0) {
          return true;
        }
      }
      return false;
    }
   }
 }
