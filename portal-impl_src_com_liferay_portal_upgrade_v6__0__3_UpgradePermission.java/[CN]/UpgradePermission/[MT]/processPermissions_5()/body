{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("SELECT " + "rc.companyId, rp.roleId, r.primKey " + "FROM "+ "Resource_ r, "+ "ResourceCode rc, "+ "Permission_ p, "+ "Roles_Permissions rp "+ "WHERE "+ "r.codeId = rc.codeId AND "+ "rc.name = 'com.liferay.portlet.journal' AND "+ "rc.scope = 4 AND "+ "r.resourceId = p.resourceId AND "+ "p.actionId = 'APPROVE_ARTICLE' AND "+ "p.permissionId = rp.permissionId;");
    rs=ps.executeQuery();
    while (rs.next()) {
      long companyId=rs.getLong("companyId");
      long roleId=rs.getLong("roleId");
      long groupId=GetterUtil.getLong(rs.getString("primKey"));
      processRoleUsers(companyId,roleId,groupId);
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
  deleteLegacyPermissions_5();
}
