{
  Configuration portletPropertiesConfiguration=null;
  try {
    portletPropertiesConfiguration=ConfigurationFactoryUtil.getConfiguration(classLoader,"portlet");
  }
 catch (  Exception e) {
    if (_log.isDebugEnabled()) {
      _log.debug("Unable to read portlet.properties");
    }
    return;
  }
  String cacheConfigurationLocation=portletPropertiesConfiguration.get(PropsKeys.EHCACHE_SINGLE_VM_CONFIG_LOCATION);
  reconfigureCaches(classLoader,cacheConfigurationLocation,_SINGLE_VM_PORTAL_CACHE_MANAGER_BEAN_NAME);
  String clusterCacheConfigurationLocation=portletPropertiesConfiguration.get(PropsKeys.EHCACHE_MULTI_VM_CONFIG_LOCATION);
  reconfigureCaches(classLoader,clusterCacheConfigurationLocation,_MULTI_VM_PORTAL_CACHE_MANAGER_BEAN_NAME);
  String hibernateCacheConfigurationPath=portletPropertiesConfiguration.get(PropsKeys.NET_SF_EHCACHE_CONFIGURATION_RESOURCE_NAME);
  reconfigureHibernateCache(classLoader,hibernateCacheConfigurationPath);
}
