{
  try {
    Group group=GroupLocalServiceUtil.getGroup(arg.getCompanyId(),arg.getCurrentGroupName());
    DLFolder folder=_getFolder(group.getGroupId(),arg.getCurrentFolder());
    String userId=arg.getUserId();
    String folderId=folder.getFolderId();
    DLFolderPermission.check(PermissionThreadLocal.getPermissionChecker(),folderId,ActionKeys.ADD_DOCUMENT);
    DLFileEntryLocalServiceUtil.addFileEntry(userId,folderId,fileName,fileName,StringPool.BLANK,StringPool.BLANK,file,true,true);
  }
 catch (  Exception e) {
    throw new FCKException(e);
  }
  return "0";
}
