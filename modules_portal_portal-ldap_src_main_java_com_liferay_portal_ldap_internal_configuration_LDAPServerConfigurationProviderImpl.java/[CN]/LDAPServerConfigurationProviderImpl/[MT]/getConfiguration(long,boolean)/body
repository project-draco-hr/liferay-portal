{
  List<LDAPServerConfiguration> ldapServerConfigurations=getConfigurations(companyId,useDefault);
  LDAPServerConfiguration ldapServerConfiguration=null;
  if (!ldapServerConfigurations.isEmpty()) {
    ldapServerConfiguration=ldapServerConfigurations.get(0);
  }
 else {
    ldapServerConfiguration=Configurable.createConfigurable(getMetatype(),new HashMapDictionary<>());
  }
  return ldapServerConfiguration;
}
