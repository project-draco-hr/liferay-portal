{
  _checkPermission();
  Bundle bundle=_getBundle(bundleId);
  if (bundle == null) {
    throw new ModuleFrameworkException("No bundle with ID " + bundleId);
  }
  try {
    bundle.stop(options);
  }
 catch (  BundleException be) {
    _log.error(be,be);
    throw new ModuleFrameworkException(be);
  }
}
