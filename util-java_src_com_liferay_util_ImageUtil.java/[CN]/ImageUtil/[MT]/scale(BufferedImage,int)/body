{
  if ((image.getHeight() <= pixels) && (image.getWidth() <= pixels)) {
    return image;
  }
  double factor=0.1;
  if (image.getHeight() > image.getWidth()) {
    factor=(double)pixels / image.getHeight();
  }
 else {
    factor=(double)pixels / image.getWidth();
  }
  return scale(image,factor);
}
