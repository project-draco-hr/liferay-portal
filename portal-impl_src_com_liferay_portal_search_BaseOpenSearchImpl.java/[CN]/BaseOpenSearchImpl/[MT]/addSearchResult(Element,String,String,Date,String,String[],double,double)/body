{
  if (this.useRSS) {
    Element item=root.addElement("item");
    OpenSearchUtil.addElement(item,"title",OpenSearchUtil.NO_NAMESPACE,title);
    OpenSearchUtil.addElement(item,"link",OpenSearchUtil.NO_NAMESPACE,link);
    OpenSearchUtil.addElement(item,"description",OpenSearchUtil.NO_NAMESPACE,summary);
    OpenSearchUtil.addElement(item,"tags",OpenSearchUtil.NO_NAMESPACE,StringUtil.merge(tags));
    OpenSearchUtil.addElement(item,"ratings",OpenSearchUtil.NO_NAMESPACE,ratings);
    OpenSearchUtil.addElement(item,"score",OpenSearchUtil.RELEVANCE_NAMESPACE,score);
    return;
  }
  Element entry=OpenSearchUtil.addElement(root,"entry",OpenSearchUtil.DEFAULT_NAMESPACE);
  OpenSearchUtil.addElement(entry,"title",OpenSearchUtil.DEFAULT_NAMESPACE,title);
  Element entryLink=OpenSearchUtil.addElement(entry,"link",OpenSearchUtil.DEFAULT_NAMESPACE);
  entryLink.addAttribute("href",link);
  OpenSearchUtil.addElement(entry,"id",OpenSearchUtil.DEFAULT_NAMESPACE,"urn:uuid:" + PortalUUIDUtil.generate());
  OpenSearchUtil.addElement(entry,"updated",OpenSearchUtil.DEFAULT_NAMESPACE,updated);
  OpenSearchUtil.addElement(entry,"summary",OpenSearchUtil.DEFAULT_NAMESPACE,summary);
  OpenSearchUtil.addElement(entry,"tags",OpenSearchUtil.DEFAULT_NAMESPACE,StringUtil.merge(tags));
  OpenSearchUtil.addElement(entry,"ratings",OpenSearchUtil.DEFAULT_NAMESPACE,ratings);
  OpenSearchUtil.addElement(entry,"score",OpenSearchUtil.RELEVANCE_NAMESPACE,score);
}
