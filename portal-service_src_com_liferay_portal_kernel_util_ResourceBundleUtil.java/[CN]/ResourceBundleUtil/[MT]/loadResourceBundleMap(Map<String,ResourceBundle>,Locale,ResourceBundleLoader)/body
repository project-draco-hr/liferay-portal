{
  String languageId=LocaleUtil.toLanguageId(locale);
  String[] tokens=languageId.split("_");
  if (ArrayUtil.isEmpty(tokens)) {
    return;
  }
  String token=StringPool.BLANK;
  List<ResourceBundle> listBundles=new ArrayList<>();
  for (int i=0; i < tokens.length; i++) {
    if (i > 0) {
      token+="_";
    }
    token+=tokens[i];
    ResourceBundle resourceBundle=resourceBundleLoader.loadBundle(token);
    if (resourceBundle != null) {
      listBundles.add(resourceBundle);
    }
    if (!listBundles.isEmpty()) {
      resourceBundles.put(token,new AggregateResourceBundle(listBundles.toArray(new ResourceBundle[listBundles.size()])));
    }
  }
}
