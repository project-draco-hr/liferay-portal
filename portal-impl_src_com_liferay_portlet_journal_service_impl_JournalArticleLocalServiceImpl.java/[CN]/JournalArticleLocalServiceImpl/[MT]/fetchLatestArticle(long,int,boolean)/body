{
  JournalArticle article=null;
  OrderByComparator orderByComparator=new ArticleVersionComparator();
  if (status == WorkflowConstants.STATUS_ANY) {
    if (preferApproved) {
      article=journalArticlePersistence.fetchByR_ST_First(resourcePrimKey,WorkflowConstants.STATUS_APPROVED,orderByComparator);
    }
    if (article == null) {
      article=journalArticlePersistence.fetchByResourcePrimKey_First(resourcePrimKey,orderByComparator);
    }
  }
 else {
    article=journalArticlePersistence.fetchByR_ST_First(resourcePrimKey,status,orderByComparator);
  }
  return article;
}
