{
  Group companyGroup=groupLocalService.getCompanyGroup(article.getCompanyId());
  DDMStructure structure=null;
  try {
    structure=ddmStructurePersistence.findByG_C_S(PortalUtil.getSiteGroupId(article.getGroupId()),classNameLocalService.getClassNameId(JournalArticle.class),article.getStructureId());
  }
 catch (  NoSuchStructureException nsse) {
    structure=ddmStructurePersistence.findByG_C_S(companyGroup.getGroupId(),classNameLocalService.getClassNameId(JournalArticle.class),article.getStructureId());
  }
  return structure;
}
