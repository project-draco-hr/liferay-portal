{
  List<ObjectValuePair<Long,Integer>> dlArticleVersionStatusOVPs=new ArrayList<ObjectValuePair<Long,Integer>>(articles.size());
  for (  JournalArticle article : articles) {
    int status=article.getStatus();
    if (status == WorkflowConstants.STATUS_PENDING) {
      status=WorkflowConstants.STATUS_DRAFT;
    }
    ObjectValuePair<Long,Integer> dlFileVersionStatusOVP=new ObjectValuePair<Long,Integer>(article.getId(),status);
    dlArticleVersionStatusOVPs.add(dlFileVersionStatusOVP);
  }
  return dlArticleVersionStatusOVPs;
}
