{
  long classNameId=PortalUtil.getClassNameId(className);
  List<JournalArticle> articles=journalArticlePersistence.findByG_C_C(groupId,classNameId,classPK);
  if (articles.size() == 0) {
    throw new NoSuchArticleException("No approved JournalArticle with the key {groupId=" + groupId + ", className="+ className+ ", classPK="+ classPK+ "}");
  }
  return articles.get(0);
}
