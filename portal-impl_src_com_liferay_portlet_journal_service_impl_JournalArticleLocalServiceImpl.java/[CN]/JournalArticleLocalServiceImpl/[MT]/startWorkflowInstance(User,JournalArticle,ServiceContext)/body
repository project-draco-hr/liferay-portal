{
  Map<String,Serializable> workflowContext=new HashMap<String,Serializable>();
  workflowContext.put(WorkflowConstants.CONTEXT_URL,PortalUtil.getControlPanelFullURL(serviceContext.getScopeGroupId(),PortletKeys.JOURNAL,null));
  WorkflowHandlerRegistryUtil.startWorkflowInstance(user.getCompanyId(),article.getGroupId(),user.getUserId(),JournalArticle.class.getName(),article.getId(),article,serviceContext);
}
