{
  List articles=null;
  if (approved == null) {
    articles=journalArticlePersistence.findByG_A(groupId,articleId,0,1);
  }
 else {
    articles=journalArticlePersistence.findByG_A_A(groupId,articleId,approved.booleanValue(),0,1);
  }
  if (articles.size() == 0) {
    throw new NoSuchArticleException();
  }
  return (JournalArticle)articles.get(0);
}
