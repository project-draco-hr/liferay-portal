{
  JournalArticle article=getArticle(groupId,articleId,version);
  String content=GetterUtil.getString(article.getContent());
  if (content.indexOf("\\n") != -1) {
    content=StringUtil.replace(content,new String[]{"\\n","\\r"},new String[]{"\n","\r"});
    article.setContent(content);
    JournalArticleContent articleContent=new JournalArticleContent(article);
    ContentService contentService=MirageServiceFactory.getContentService();
    try {
      contentService.updateContent(articleContent,null);
    }
 catch (    CMSException ce) {
      _throwException(ce);
    }
  }
}
