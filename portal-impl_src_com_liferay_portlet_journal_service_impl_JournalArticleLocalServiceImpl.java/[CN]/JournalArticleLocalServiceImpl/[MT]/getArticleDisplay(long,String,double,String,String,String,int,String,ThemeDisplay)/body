{
  Date now=new Date();
  JournalArticle article=journalArticlePersistence.findByG_A_V(groupId,articleId,version);
  if (article.isExpired()) {
    Date expirationDate=article.getExpirationDate();
    if ((expirationDate != null) && expirationDate.before(now)) {
      return null;
    }
  }
  Date displayDate=article.getDisplayDate();
  if (displayDate.after(now)) {
    return null;
  }
  return getArticleDisplay(article,ddmTemplateKey,viewMode,languageId,page,xmlRequest,themeDisplay);
}
