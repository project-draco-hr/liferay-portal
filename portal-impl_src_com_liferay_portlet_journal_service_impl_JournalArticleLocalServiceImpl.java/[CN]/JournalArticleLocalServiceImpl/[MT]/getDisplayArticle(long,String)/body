{
  List<JournalArticle> articles=journalArticlePersistence.findByG_A_ST(groupId,articleId,WorkflowConstants.STATUS_APPROVED);
  if (articles.size() == 0) {
    throw new NoSuchArticleException("No approved article for groupId=" + groupId + " and "+ "articleId="+ articleId);
  }
  Date now=new Date();
  for (int i=0; i < articles.size(); i++) {
    JournalArticle article=articles.get(i);
    Date expirationDate=article.getExpirationDate();
    if (article.getDisplayDate().before(now) && ((expirationDate == null) || expirationDate.after(now))) {
      return article;
    }
  }
  return articles.get(0);
}
