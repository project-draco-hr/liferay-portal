{
  Map<String,Serializable> workflowContext=new HashMap<>();
  String portletId=PortletProviderUtil.getPortletId(JournalArticle.class.getName(),PortletProvider.Action.EDIT);
  workflowContext.put(WorkflowConstants.CONTEXT_URL,PortalUtil.getControlPanelFullURL(article.getGroupId(),portletId,null));
  WorkflowHandlerRegistryUtil.startWorkflowInstance(article.getCompanyId(),article.getGroupId(),userId,JournalArticle.class.getName(),article.getId(),article,serviceContext,workflowContext);
}
