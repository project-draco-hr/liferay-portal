{
  List<JournalArticle> articles=null;
  if (status == StatusConstants.ANY) {
    articles=journalArticlePersistence.findByG_UT(groupId,urlTitle,0,1);
  }
 else {
    articles=journalArticlePersistence.findByG_UT_S(groupId,urlTitle,status,0,1);
  }
  if (articles.size() == 0) {
    throw new NoSuchArticleException();
  }
  return articles.get(0);
}
