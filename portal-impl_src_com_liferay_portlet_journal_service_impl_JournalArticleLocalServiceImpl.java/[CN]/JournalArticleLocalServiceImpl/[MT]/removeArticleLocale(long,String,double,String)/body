{
  JournalArticle article=journalArticlePersistence.findByG_A_V(groupId,articleId,version);
  String title=article.getTitle();
  title=LocalizationUtil.removeLocalization(title,"static-content",languageId,true);
  article.setTitle(title);
  String description=article.getDescription();
  description=LocalizationUtil.removeLocalization(description,"static-content",languageId,true);
  article.setDescription(description);
  String content=article.getContent();
  Document document=article.getDocument();
  if (document != null) {
    content=JournalUtil.removeArticleLocale(document,content,languageId);
    article.setContent(content);
  }
  article.setModifiedDate(new Date());
  journalArticlePersistence.update(article);
  return article;
}
