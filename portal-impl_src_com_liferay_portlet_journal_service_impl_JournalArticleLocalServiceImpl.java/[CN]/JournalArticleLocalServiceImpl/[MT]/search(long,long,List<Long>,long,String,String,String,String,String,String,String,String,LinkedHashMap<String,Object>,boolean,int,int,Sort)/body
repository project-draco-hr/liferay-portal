{
  try {
    SearchContext searchContext=getSearchContext(companyId,groupId,folderIds,classNameId,articleId,title,description,content,type,status,ddmStructureKey,ddmTemplateKey,params,andSearch,start,end,sort);
    Indexer indexer=IndexerRegistryUtil.nullSafeGetIndexer(JournalArticle.class);
    return indexer.search(searchContext);
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
}
