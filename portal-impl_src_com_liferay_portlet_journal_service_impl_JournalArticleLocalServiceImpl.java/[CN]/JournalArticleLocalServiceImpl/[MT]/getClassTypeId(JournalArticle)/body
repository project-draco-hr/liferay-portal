{
  long classTypeId=0;
  try {
    JournalStructure structure=journalStructurePersistence.fetchByG_S(article.getGroupId(),article.getStructureId());
    if (structure == null) {
      Group companyGroup=groupLocalService.getCompanyGroup(article.getCompanyId());
      structure=journalStructurePersistence.fetchByG_S(companyGroup.getGroupId(),article.getStructureId());
    }
    if (structure != null) {
      classTypeId=structure.getId();
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
  return classTypeId;
}
