{
  List<JournalArticle> articles=null;
  if (status == StatusConstants.ANY) {
    articles=journalArticlePersistence.findByG_A(groupId,articleId,0,1);
  }
 else {
    articles=journalArticlePersistence.findByG_A_S(groupId,articleId,status,0,1);
  }
  if (articles.size() == 0) {
    throw new NoSuchArticleException();
  }
  return articles.get(0);
}
