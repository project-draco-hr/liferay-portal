{
  List<JournalArticle> articles=null;
  OrderByComparator orderByComparator=new ArticleVersionComparator();
  if (status == StatusConstants.ANY) {
    articles=journalArticlePersistence.findByR_S(resourcePrimKey,StatusConstants.APPROVED,0,1,orderByComparator);
    if (articles.size() == 0) {
      articles=journalArticlePersistence.findByR_S(resourcePrimKey,StatusConstants.PENDING,0,1,orderByComparator);
    }
  }
 else {
    articles=journalArticlePersistence.findByR_S(resourcePrimKey,status,0,1,orderByComparator);
  }
  if (articles.size() == 0) {
    throw new NoSuchArticleException();
  }
  return articles.get(0);
}
