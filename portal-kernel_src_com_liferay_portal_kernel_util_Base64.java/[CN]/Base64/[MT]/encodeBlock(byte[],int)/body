{
  int block=0;
  int slack=raw.length - offset - 1;
  int end=slack < 2 ? slack : 2;
  for (int i=0; i <= end; i++) {
    byte b=raw[offset + i];
    int neuter=b >= 0 ? ((int)(b)) : b + 256;
    block+=neuter << 8 * (2 - i);
  }
  char base64[]=new char[4];
  for (int i=0; i < 4; i++) {
    int sixbit=block >>> 6 * (3 - i) & 0x3f;
    base64[i]=getChar(sixbit);
  }
  if (slack < 1) {
    base64[2]=CharPool.EQUAL;
  }
  if (slack < 2) {
    base64[3]=CharPool.EQUAL;
  }
  return base64;
}
