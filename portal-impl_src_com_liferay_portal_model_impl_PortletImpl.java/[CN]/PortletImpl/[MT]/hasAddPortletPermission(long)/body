{
  try {
    if (_rolesArray.length == 0) {
      return true;
    }
 else     if (RoleLocalServiceUtil.hasUserRoles(userId,getCompanyId(),_rolesArray,true)) {
      return true;
    }
 else     if (RoleLocalServiceUtil.hasUserRole(userId,getCompanyId(),RoleImpl.ADMINISTRATOR,true)) {
      return true;
    }
 else {
      User user=UserLocalServiceUtil.getUserById(userId);
      if (user.isDefaultUser() && hasRoleWithName(RoleImpl.GUEST)) {
        return true;
      }
    }
  }
 catch (  Exception e) {
    _log.error(e);
  }
  return false;
}
