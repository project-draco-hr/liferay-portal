{
  if (Validator.isNotNull(getConfigurationActionClass())) {
    if (isWARFile()) {
      PortletContextWrapper pcw=PortletContextPool.get(getRootPortletId());
      return pcw.getConfigurationActionInstance();
    }
 else {
      return (ConfigurationAction)InstancePool.get(getConfigurationActionClass());
    }
  }
  return null;
}
