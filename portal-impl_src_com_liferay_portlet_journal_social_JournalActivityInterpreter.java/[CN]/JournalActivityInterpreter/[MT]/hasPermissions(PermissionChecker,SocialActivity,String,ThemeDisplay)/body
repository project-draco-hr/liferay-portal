{
  int activityType=activity.getType();
  if ((activityType == JournalActivityKeys.ADD_ARTICLE) && !JournalPermission.contains(permissionChecker,activity.getGroupId(),ActionKeys.ADD_ARTICLE)) {
    return false;
  }
 else   if (activityType == JournalActivityKeys.UPDATE_ARTICLE) {
    JournalArticle article=JournalArticleLocalServiceUtil.getArticle(activity.getClassPK());
    if (!JournalArticlePermission.contains(permissionChecker,article,ActionKeys.UPDATE)) {
      return false;
    }
  }
  return true;
}
