{
  try {
    String fromLanguage=ParamUtil.getString(actionRequest,"fromLanguage");
    String fromText=ParamUtil.getString(actionRequest,"text");
    String toLanguage=ParamUtil.getString(actionRequest,"toLanguage");
    if (Validator.isNotNull(fromText)) {
      Translation translation=TranslatorUtil.getTranslation(fromLanguage,toLanguage,fromText);
      actionRequest.setAttribute(WebKeys.TRANSLATOR_TRANSLATION,translation);
    }
  }
 catch (  WebCacheException wce) {
    Throwable cause=wce.getCause();
    if (cause instanceof MicrosoftTranslatorException) {
      SessionErrors.add(actionRequest,cause.getClass(),cause);
    }
 else {
      throw new PortletException(wce);
    }
  }
catch (  Exception e) {
    throw new PortletException(e);
  }
}
