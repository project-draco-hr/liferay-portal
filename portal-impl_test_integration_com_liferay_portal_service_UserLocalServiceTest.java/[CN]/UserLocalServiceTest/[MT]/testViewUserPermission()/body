{
  User user=UserTestUtil.addUser();
  Role role=RoleTestUtil.addRole(RoleConstants.TYPE_REGULAR);
  RoleTestUtil.addResourcePermission(role,User.class.getName(),ResourceConstants.SCOPE_COMPANY,String.valueOf(user.getCompanyId()),ActionKeys.VIEW);
  UserLocalServiceUtil.addRoleUser(role.getRoleId(),user);
  PermissionChecker permissionChecker=PermissionCheckerFactoryUtil.create(user);
  Assert.assertTrue(UserPermissionUtil.contains(permissionChecker,ResourceConstants.PRIMKEY_DNE,ActionKeys.VIEW));
}
