{
  if (value == null) {
    return null;
  }
  if (value.getClass() == Number.class) {
    return (Number)value;
  }
  try {
    String stringValue=value.toString().trim();
    return new BigDecimal(stringValue);
  }
 catch (  NumberFormatException nfex) {
    throw new TypeConversionException(value,nfex);
  }
}
