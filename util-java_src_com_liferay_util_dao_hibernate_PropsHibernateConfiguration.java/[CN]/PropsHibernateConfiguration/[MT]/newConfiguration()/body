{
  Configuration configuration=new Configuration();
  try {
    ExtPropertiesLoader extPropsLoader=ExtPropertiesLoader.getInstance(getClass().getClassLoader(),_propsName);
    ClassLoader classLoader=getClass().getClassLoader();
    String[] configs=StringUtil.split(extPropsLoader.get("hibernate.configs"));
    for (int i=0; i < configs.length; i++) {
      try {
        InputStream is=classLoader.getResourceAsStream(configs[i]);
        if (is != null) {
          configuration=configuration.addInputStream(is);
          is.close();
        }
      }
 catch (      Exception e) {
        _log.error(e.getMessage());
      }
    }
    configuration.setProperties(extPropsLoader.getProperties());
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
  return configuration;
}
