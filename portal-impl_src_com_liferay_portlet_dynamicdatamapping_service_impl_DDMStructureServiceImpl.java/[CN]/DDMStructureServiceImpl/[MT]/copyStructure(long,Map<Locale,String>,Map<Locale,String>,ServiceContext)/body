{
  DDMStructure structure=ddmStructurePersistence.findByPrimaryKey(structureId);
  DDMPermissionHandler ddmPermissionHandler=DDMUtil.getDDMPermissionHandler(structure.getClassNameId());
  DDMPermission.check(getPermissionChecker(),serviceContext.getScopeGroupId(),ddmPermissionHandler.getResourceName(structure.getClassNameId()),ddmPermissionHandler.getAddStructureActionId());
  return ddmStructureLocalService.copyStructure(getUserId(),structureId,nameMap,descriptionMap,serviceContext);
}
