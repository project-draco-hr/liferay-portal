{
  DDMStructure structure=ddmStructurePersistence.findByPrimaryKey(structureId);
  DDMDisplay ddmDisplay=DDMUtil.getDDMDisplay(structure.getClassNameId());
  DDMPermission.check(getPermissionChecker(),serviceContext.getScopeGroupId(),ddmDisplay.getResourceName(),ddmDisplay.getAddStructureActionId());
  return ddmStructureLocalService.copyStructure(getUserId(),structureId,serviceContext);
}
