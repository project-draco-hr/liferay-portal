{
  Set<String> authTokenIgnoreActions=AuthTokenWhitelistUtil.getPortletCSRFWhitelistActions();
  if (!authTokenIgnoreActions.contains(strutsAction)) {
    return false;
  }
  try {
    Portlet portlet=PortletLocalServiceUtil.getPortletById(companyId,ppid);
    if (portlet == null) {
      return false;
    }
    String strutsPath=strutsAction.substring(1,strutsAction.lastIndexOf(CharPool.SLASH));
    if (strutsPath.equals(portlet.getStrutsPath()) || strutsPath.equals(portlet.getParentStrutsPath())) {
      return true;
    }
  }
 catch (  Exception e) {
  }
  return false;
}
