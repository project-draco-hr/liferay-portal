{
  Session session=null;
  try {
    session=openSession();
    Layout layout=(Layout)session.get(Layout.class,layoutPK);
    if (layout == null) {
      if (_log.isWarnEnabled()) {
        _log.warn("No Layout exists with the primary key " + layoutPK.toString());
        throw new NoSuchLayoutException("No Layout exists with the primary key " + layoutPK.toString());
      }
    }
    return layout;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
