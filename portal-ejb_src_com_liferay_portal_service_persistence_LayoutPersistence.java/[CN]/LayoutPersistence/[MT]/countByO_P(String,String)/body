{
  Session session=null;
  try {
    session=openSession();
    StringBuffer query=new StringBuffer();
    query.append("SELECT COUNT(*) ");
    query.append("FROM Layout IN CLASS com.liferay.portal.service.persistence.LayoutHBM WHERE ");
    if (ownerId == null) {
      query.append("ownerId is null");
    }
 else {
      query.append("ownerId = ?");
    }
    query.append(" AND ");
    if (parentLayoutId == null) {
      query.append("parentLayoutId is null");
    }
 else {
      query.append("parentLayoutId = ?");
    }
    query.append(" ");
    Query q=session.createQuery(query.toString());
    int queryPos=0;
    if (ownerId != null) {
      q.setString(queryPos++,ownerId);
    }
    if (parentLayoutId != null) {
      q.setString(queryPos++,parentLayoutId);
    }
    Iterator itr=q.list().iterator();
    if (itr.hasNext()) {
      Long count=(Long)itr.next();
      if (count != null) {
        return count.intValue();
      }
    }
    return 0;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
