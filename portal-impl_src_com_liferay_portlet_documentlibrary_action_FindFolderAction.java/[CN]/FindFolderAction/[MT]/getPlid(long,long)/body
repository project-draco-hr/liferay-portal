{
  if (plid != LayoutConstants.DEFAULT_PLID) {
    try {
      Layout layout=LayoutLocalServiceUtil.getLayout(plid);
      LayoutTypePortlet layoutTypePortlet=(LayoutTypePortlet)layout.getLayoutType();
      if (layoutTypePortlet.hasPortletId(PortletKeys.DOCUMENT_LIBRARY)) {
        return plid;
      }
    }
 catch (    NoSuchLayoutException nsle) {
    }
  }
  DLFolder folder=DLFolderLocalServiceUtil.getFolder(folderId);
  plid=PortalUtil.getPlidFromPortletId(folder.getGroupId(),PortletKeys.DOCUMENT_LIBRARY);
  if (plid != LayoutConstants.DEFAULT_PLID) {
    return plid;
  }
 else {
    throw new NoSuchLayoutException("No page was found with the Document Library portlet.");
  }
}
