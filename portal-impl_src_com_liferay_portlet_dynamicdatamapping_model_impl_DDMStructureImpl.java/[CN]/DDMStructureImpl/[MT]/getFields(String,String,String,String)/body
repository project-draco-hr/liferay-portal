{
  try {
    Map<String,Map<String,String>> fieldsMap=_getFieldsMap(locale);
    Map<String,String> field=fieldsMap.get(fieldName);
    if (field != null) {
      String value=field.get(attributeName);
      if (Validator.equals(value,attributeValue)) {
        return field;
      }
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
  return null;
}
