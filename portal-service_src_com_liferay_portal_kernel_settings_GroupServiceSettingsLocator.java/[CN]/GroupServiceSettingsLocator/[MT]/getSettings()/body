{
  long companyId=getCompanyId(_groupId);
  Settings portalPropertiesSettings=_settingsLocatorHelper.getPortalPropertiesSettings();
  Settings configurationBeanSettings=_settingsLocatorHelper.getConfigurationBeanSettings(_serviceName,portalPropertiesSettings);
  Settings portalPreferencesSettings=_settingsLocatorHelper.getPortalPreferencesSettings(companyId,configurationBeanSettings);
  Settings companyPortletPreferencesSettings=_settingsLocatorHelper.getCompanyPortletPreferencesSettings(companyId,_serviceName,portalPreferencesSettings);
  return _settingsLocatorHelper.getGroupPortletPreferencesSettings(_groupId,_serviceName,companyPortletPreferencesSettings);
}
