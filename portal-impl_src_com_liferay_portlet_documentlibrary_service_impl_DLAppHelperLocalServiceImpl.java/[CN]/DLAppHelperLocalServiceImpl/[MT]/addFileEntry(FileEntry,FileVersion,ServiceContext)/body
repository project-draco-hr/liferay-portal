{
  long userId=fileEntry.getUserId();
  long groupId=fileEntry.getGroupId();
  long fileEntryId=fileEntry.getFileEntryId();
  if (PropsValues.DL_FILE_ENTRY_COMMENTS_ENABLED) {
    mbMessageLocalService.addDiscussionMessage(userId,fileEntry.getUserName(),groupId,DLFileEntryConstants.getClassName(),fileEntryId,WorkflowConstants.ACTION_PUBLISH);
  }
  dlSyncLocalService.addSync(fileEntry.getUuid(),fileEntry.getCompanyId(),fileEntry.getRepositoryId(),DLSyncConstants.FILE);
}
