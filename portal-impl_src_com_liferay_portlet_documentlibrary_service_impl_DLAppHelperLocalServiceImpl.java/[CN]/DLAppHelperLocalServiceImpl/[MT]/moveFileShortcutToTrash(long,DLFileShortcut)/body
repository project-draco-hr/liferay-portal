{
  int oldStatus=fileShortcut.getStatus();
  dlFileShortcutLocalService.updateStatus(userId,fileShortcut.getFileShortcutId(),WorkflowConstants.STATUS_IN_TRASH,new ServiceContext());
  socialActivityLocalService.addActivity(userId,fileShortcut.getGroupId(),DLFileShortcutConstants.getClassName(),fileShortcut.getFileShortcutId(),SocialActivityConstants.TYPE_MOVE_TO_TRASH,StringPool.BLANK,0);
  trashEntryLocalService.addTrashEntry(userId,fileShortcut.getGroupId(),DLFileShortcutConstants.getClassName(),fileShortcut.getFileShortcutId(),oldStatus,null,null);
  return fileShortcut;
}
