{
  boolean hasLock=dlFolderService.hasFolderLock(folder.getFolderId());
  Lock lock=null;
  if (!hasLock) {
    lock=dlFolderLocalService.lockFolder(userId,folder.getFolderId());
  }
  try {
    return doMoveFolderToTrash(userId,folder);
  }
  finally {
    if (!hasLock) {
      dlFolderLocalService.unlockFolder(folder.getGroupId(),folder.getFolderId(),lock.getUuid());
    }
  }
}
