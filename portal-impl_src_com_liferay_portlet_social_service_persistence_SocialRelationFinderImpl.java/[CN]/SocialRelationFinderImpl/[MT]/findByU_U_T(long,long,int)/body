    qPos.add(userId1);
    qPos.add(userId2);
    qPos.add(type);
    qPos.add(userId1);
    qPos.add(userId2);
    qPos.add(type);
    Iterator<SocialRelation> itr=q.list().iterator();
    if (itr.hasNext()) {
      SocialRelation relation=itr.next();
      return relation;
    }
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
 finally {
    HibernateUtil.closeSession(session);
  }
  StringMaker sm=new StringMaker();
