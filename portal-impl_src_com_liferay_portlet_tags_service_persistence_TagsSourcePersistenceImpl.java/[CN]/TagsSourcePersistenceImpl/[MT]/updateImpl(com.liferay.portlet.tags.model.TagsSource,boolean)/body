{
  Session session=null;
  try {
    session=openSession();
    if (merge) {
      session.merge(tagsSource);
    }
 else {
      if (tagsSource.isNew()) {
        session.save(tagsSource);
      }
    }
    session.flush();
    tagsSource.setNew(false);
    return tagsSource;
  }
 catch (  Exception e) {
    throw HibernateUtil.processException(e);
  }
 finally {
    closeSession(session);
    FinderCache.clearCache(TagsSource.class.getName());
  }
}
