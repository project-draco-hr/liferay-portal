{
  PmdExtension pmdExtension=GradleUtil.getExtension(project,PmdExtension.class);
  if (portalRootDir != null) {
    File ruleSetFile=new File(portalRootDir,"tools/sdk/dependencies/net.sourceforge.pmd/rulesets/java/" + "standard-rules.xml");
    pmdExtension.setRuleSetFiles(project.files(ruleSetFile));
  }
  List<String> ruleSets=Collections.emptyList();
  pmdExtension.setRuleSets(ruleSets);
}
