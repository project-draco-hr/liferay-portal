{
  File gitRepoDir=GradleUtil.getRootDir(project.getProjectDir(),".gitrepo");
  if (gitRepoDir == null) {
    return null;
  }
  String gitRepo;
  try {
    File gitRepoFile=new File(gitRepoDir,".gitrepo");
    gitRepo=new String(Files.readAllBytes(gitRepoFile.toPath()),StandardCharsets.UTF_8);
  }
 catch (  IOException ioe) {
    throw new UncheckedIOException(ioe);
  }
  if (!gitRepo.contains("mode = pull")) {
    return null;
  }
  String fileName=".version-overrides-" + project.getName() + ".properties";
  return new File(gitRepoDir.getParentFile(),fileName);
}
