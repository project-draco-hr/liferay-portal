{
  final String ciSassBinarySite=GradleUtil.getProperty(project,"nodejs.npm.ci.sass.binary.site",(String)null);
  if (Validator.isNull(ciSassBinarySite)) {
    return;
  }
  TaskContainer taskContainer=project.getTasks();
  taskContainer.withType(NpmInstallTask.class,new Action<NpmInstallTask>(){
    @Override public void execute(    NpmInstallTask npmInstallTask){
      _configureTaskExecuteNodeArgs(npmInstallTask,Collections.singletonMap(_SASS_BINARY_SITE_ARG,ciSassBinarySite));
    }
  }
);
}
