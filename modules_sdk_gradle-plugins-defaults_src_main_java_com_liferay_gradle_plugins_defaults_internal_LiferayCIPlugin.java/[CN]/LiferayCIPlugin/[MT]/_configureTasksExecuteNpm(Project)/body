{
  final String ciRegistry=GradleUtil.getProperty(project,"nodejs.npm.ci.registry",(String)null);
  if (Validator.isNull(ciRegistry)) {
    return;
  }
  TaskContainer taskContainer=project.getTasks();
  taskContainer.withType(ExecuteNpmTask.class,new Action<ExecuteNpmTask>(){
    @Override public void execute(    ExecuteNpmTask executeNpmTask){
      _configureTaskExecuteNpm(executeNpmTask,ciRegistry);
    }
  }
);
}
