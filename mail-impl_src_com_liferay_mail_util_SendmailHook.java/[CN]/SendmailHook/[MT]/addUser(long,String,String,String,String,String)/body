{
  String addUserCmd=PropsUtil.get(PropsUtil.MAIL_HOOK_SENDMAIL_ADD_USER);
  addUserCmd=StringUtil.replace(addUserCmd,"%1%",String.valueOf(userId));
  Runtime rt=Runtime.getRuntime();
  try {
    Process p=rt.exec(addUserCmd);
    ProcessUtil.close(p);
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
  updatePassword(userId,password);
  updateEmailAddress(userId,emailAddress);
}
