{
  PortletPreferences portletPreferences=PortletPreferencesFactoryUtil.fromXML(companyId,ownerId,ownerType,plid,portletId,xml);
  long linkToLayoutId=GetterUtil.getLong(portletPreferences.getValue("lfr-scope-layout-id",null));
  if (linkToLayoutId > 0) {
    String uuid=getLayoutUuid(plid,linkToLayoutId);
    if (uuid != null) {
      portletPreferences.setValue("lfr-scope-layout-uuid",uuid);
    }
    portletPreferences.reset("lfr-scope-layout-id");
  }
  return PortletPreferencesFactoryUtil.toXML(portletPreferences);
}
