{
  long plid=ParamUtil.getLong(portletRequest,"plid");
  Layout targetLayout=LayoutLocalServiceUtil.getLayout(plid);
  Group stagingGroup=targetLayout.getGroup();
  Group liveGroup=stagingGroup.getLiveGroup();
  Layout sourceLayout=LayoutLocalServiceUtil.getLayoutByUuidAndGroupId(targetLayout.getUuid(),liveGroup.getGroupId());
  copyPortlet(portletRequest,liveGroup.getGroupId(),stagingGroup.getGroupId(),sourceLayout.getPlid(),targetLayout.getPlid(),portlet.getPortletId());
}
