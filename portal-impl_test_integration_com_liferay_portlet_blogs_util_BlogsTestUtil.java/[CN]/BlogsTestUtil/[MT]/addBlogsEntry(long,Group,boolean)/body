  BlogsEntry blogsEntry=BlogsEntryLocalServiceUtil.addEntry(userId,title,description,content,displayDateMonth,displayDateDay,displayDateYear,displayDateHour,displayDateMinute,allowPingbacks,allowTrackbacks,trackbacks,smallImage,smallImageURL,smallImageFileName,smallImageInputStream,serviceContext);
