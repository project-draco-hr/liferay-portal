    BlogsEntryLocalServiceUtil.updateStatus(GetterUtil.getLong(PrincipalThreadLocal.getName()),blogsEntry.getEntryId(),WorkflowConstants.STATUS_APPROVED,serviceContext);
  }
  WorkflowThreadLocal.setEnabled(workflowThreadLocal);
  return blogsEntry;
}
