{
  Layout layout=LayoutTestUtil.addLayout(_group);
  String requestURI=PropsValues.LAYOUT_FRIENDLY_URL_PUBLIC_SERVLET_MAPPING + getPath(_group,layout);
  _request.setRequestURI(requestURI);
  _request.setAttribute(WebKeys.I18N_LANGUAGE_ID,"fr");
  _request.setPathInfo(StringPool.SLASH);
  testGetRedirect(_group.getFriendlyURL(),Portal.PATH_MAIN,new Object[]{"/en" + requestURI,true});
  testGetRedirect(getPath(_group,layout),Portal.PATH_MAIN,new Object[]{"/en" + requestURI,true});
}
