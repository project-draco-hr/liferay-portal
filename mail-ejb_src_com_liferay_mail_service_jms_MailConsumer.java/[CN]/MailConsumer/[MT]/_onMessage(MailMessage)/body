{
  InternetAddress[] auditTrail=InternetAddress.parse(PropsUtil.get(PropsUtil.MAIL_AUDIT_TRAIL));
  if (auditTrail.length > 0) {
    InternetAddress[] bcc=mailMessage.getBCC();
    if (bcc != null) {
      InternetAddress[] allBCC=new InternetAddress[bcc.length + auditTrail.length];
      System.arraycopy(bcc,0,allBCC,0,bcc.length);
      System.arraycopy(auditTrail,0,allBCC,bcc.length,auditTrail.length);
      mailMessage.setBCC(allBCC);
    }
 else {
      mailMessage.setBCC(auditTrail);
    }
  }
  MailEngine.send(mailMessage);
}
