{
  if (_descriptionMap != null) {
    return _descriptionMap;
  }
  Locale defaultLocale=LocaleThreadLocal.getDefaultLocale();
  try {
    Locale articleDefaultLocale=LocaleUtil.fromLanguageId(getDefaultLanguageId());
    LocaleThreadLocal.setDefaultLocale(articleDefaultLocale);
    _descriptionMap=JournalArticleLocalServiceUtil.getArticleDescriptionMap(getId());
    return _descriptionMap;
  }
  finally {
    LocaleThreadLocal.setDefaultLocale(defaultLocale);
  }
}
