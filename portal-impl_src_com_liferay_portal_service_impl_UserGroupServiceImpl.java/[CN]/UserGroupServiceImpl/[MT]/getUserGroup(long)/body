{
  if (!UserGroupPermissionUtil.contains(getPermissionChecker(),userGroupId,ActionKeys.VIEW) && !UserGroupPermissionUtil.contains(getPermissionChecker(),userGroupId,ActionKeys.UPDATE) && !UserGroupPermissionUtil.contains(getPermissionChecker(),userGroupId,ActionKeys.ASSIGN_USERS)) {
    throw new PrincipalException();
  }
  return userGroupLocalService.getUserGroup(userGroupId);
}
