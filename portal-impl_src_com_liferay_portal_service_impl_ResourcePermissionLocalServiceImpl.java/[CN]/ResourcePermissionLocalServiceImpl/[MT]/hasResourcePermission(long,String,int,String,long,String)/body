{
  ResourcePermission resourcePermission=null;
  for (  ResourcePermission permission : resourcePermissionPersistence.findByC_N_S_P(companyId,name,scope,primKey)) {
    if (permission.getRoleId() == roleId) {
      resourcePermission=permission;
      break;
    }
  }
  if (resourcePermission == null) {
    return false;
  }
  ResourceAction resourceAction=resourceActionLocalService.getResourceAction(name,actionId);
  if (hasActionId(resourcePermission,resourceAction)) {
    return true;
  }
 else {
    return false;
  }
}
