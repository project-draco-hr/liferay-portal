{
  List<ResourcePermission> resourcePermissions=resourcePermissionPersistence.findByC_N_S(companyId,name,scope);
  for (  ResourcePermission resourcePermission : resourcePermissions) {
    updateResourcePermission(companyId,name,scope,resourcePermission.getPrimKey(),roleId,0,new String[]{actionId},ResourcePermissionConstants.OPERATOR_REMOVE);
  }
  PermissionCacheUtil.clearResourceCache();
}
