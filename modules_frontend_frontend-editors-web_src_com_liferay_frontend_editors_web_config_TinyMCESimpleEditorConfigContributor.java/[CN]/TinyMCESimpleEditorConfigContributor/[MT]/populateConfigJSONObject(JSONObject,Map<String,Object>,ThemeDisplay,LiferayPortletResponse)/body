{
  super.populateConfigJSONObject(jsonObject,inputEditorTaglibAttributes,themeDisplay,liferayPortletResponse);
  boolean showSource=GetterUtil.getBoolean((String)inputEditorTaglibAttributes.get("liferay-ui:input-editor:showSource"));
  String plugins="contextmenu preview print";
  if (showSource) {
    plugins+=" code";
  }
  jsonObject.put("plugins",plugins);
  String toolbar="bold italic underline | " + "alignleft aligncenter alignright alignjustify | ";
  if (showSource) {
    toolbar+="code ";
  }
  toolbar+="preview print";
  jsonObject.put("toolbar",toolbar);
}
