{
  Bus bus=_createBus();
  BusFactory.setDefaultBus(bus);
  _registerCXFServlet(bus,_contextPath);
  try {
    Filter servicesFilter=_bundleContext.createFilter("(&(soap.address=*)(jaxws=true))");
    _serverServiceTracker=new ServiceTracker<>(_bundleContext,servicesFilter,new ServerServiceTrackerCustomizer(bus));
  }
 catch (  InvalidSyntaxException ise) {
    throw new RuntimeException(ise);
  }
  _serverServiceTracker.open();
}
