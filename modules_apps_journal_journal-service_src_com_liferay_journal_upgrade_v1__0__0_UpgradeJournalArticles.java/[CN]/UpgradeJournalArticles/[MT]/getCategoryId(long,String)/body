{
  if (Validator.isNull(type)) {
    return 0;
  }
  long groupId=getCompanyGroupId(companyId);
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select categoryId from AssetCategory where groupId = " + groupId + " and name = ?");
    ps.setString(1,type);
    rs=ps.executeQuery();
    while (rs.next()) {
      return rs.getLong("categoryId");
    }
    return 0;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
