{
  if (allowedClassNames == null) {
    allowedClassNames=new String[0];
  }
  for (  String allowedClassName : allowedClassNames) {
    if (Validator.isBlank(allowedClassName)) {
      continue;
    }
    ClassLoader classLoader=findClassLoader(allowedClassName,bundleContext);
    if (classLoader != null) {
      return classLoader;
    }
    if (_log.isWarnEnabled()) {
      Bundle bundle=bundleContext.getBundle();
      _log.warn("Bundle " + bundle.getSymbolicName() + " does not export "+ allowedClassName);
    }
  }
  return null;
}
