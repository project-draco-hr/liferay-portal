{
  selenium.open("/web/guest/home/");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Site Name")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.saveScreenShotAndSource();
  selenium.clickAt("link=Site Name",RuntimeVariables.replace("Site Name"));
  selenium.waitForPageToLoad("30000");
  selenium.saveScreenShotAndSource();
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isVisible("link=Web Content Display Test Page1")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.saveScreenShotAndSource();
  selenium.clickAt("link=Web Content Display Test Page1",RuntimeVariables.replace("Web Content Display Test Page1"));
  selenium.waitForPageToLoad("30000");
  selenium.saveScreenShotAndSource();
  assertEquals(RuntimeVariables.replace("Web Content Display"),selenium.getText("//span[@class='portlet-title-text']"));
  assertFalse(selenium.isTextPresent("WCD Web Content Content"));
  assertEquals(RuntimeVariables.replace("Select existing web content or add some web content to be displayed in this portlet."),selenium.getText("//div[@class='portlet-msg-info']"));
}
