{
  try {
    if ((portletPreferences.getPlid() > 0) && (portletPreferences.getOwnerType() == PortletKeys.PREFS_OWNER_TYPE_LAYOUT)) {
      Layout layout=LayoutLocalServiceUtil.fetchLayout(portletPreferences.getPlid());
      if (layout == null) {
        return;
      }
      layout.setModifiedDate(new Date());
      LayoutLocalServiceUtil.updateLayout(layout,false);
    }
  }
 catch (  Exception e) {
    _log.error("Error updating the layout modified date",e);
  }
}
