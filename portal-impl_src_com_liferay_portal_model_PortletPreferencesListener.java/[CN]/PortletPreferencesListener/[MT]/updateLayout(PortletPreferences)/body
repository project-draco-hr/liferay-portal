{
  try {
    if ((portletPreferences.getOwnerType() == PortletKeys.PREFS_OWNER_TYPE_LAYOUT) && (portletPreferences.getPlid() > 0)) {
      Layout layout=LayoutLocalServiceUtil.fetchLayout(portletPreferences.getPlid());
      if (layout == null) {
        return;
      }
      layout.setModifiedDate(new Date());
      LayoutLocalServiceUtil.updateLayout(layout,false);
    }
  }
 catch (  Exception e) {
    _log.error("Unable to update the layout's modified date",e);
  }
}
