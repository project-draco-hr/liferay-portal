{
  InvokerPortlet invokerPortlet=_invokerPortlet.create(portletModel,portlet,portletContext);
  MonitoringPortletImpl monitoringPortletImpl=new MonitoringPortletImpl(invokerPortlet,_singleDestinationMessageSender);
  monitoringPortletImpl.prepare(portletModel,portlet,portletContext);
  return monitoringPortletImpl;
}
