{
  DTBuilder db=new DTBuilder(d);
  db.year+=dur.year();
  db.month+=dur.month();
  db.day+=dur.day();
  if (dur instanceof TimeValue) {
    TimeValue tdur=(TimeValue)dur;
    db.hour+=tdur.hour();
    db.minute+=tdur.minute();
    db.second+=tdur.second();
    return db.toDateTime();
  }
 else   if (d instanceof TimeValue) {
    return db.toDateTime();
  }
  return db.toDate();
}
