{
  ConfiguredProducer configuredProducer=null;
  try {
    configuredProducer=ConfiguredProducerLocalServiceUtil.getConfiguredProducer(new ConfiguredProducerPK(_portalId,producerEntityId));
  }
 catch (  Exception e) {
    throw new WSRPConsumerException(e.getMessage());
  }
  if (configuredProducer == null) {
    throw new WSRPConsumerException("ProducerEntityManagerDBImpl.getProducerEntity(): " + "failed to load producer entity.  id=" + producerEntityId);
  }
  return populateConfiguredProducer(configuredProducer);
}
