{
  try {
    ConfiguredProducer configuredProducer=ConfiguredProducerLocalServiceUtil.getConfiguredProducer(new ConfiguredProducerPK(_portalId,producerEntityId));
    configuredProducer.setServiceDescription(serviceDescriptionXML);
    ConfiguredProducerLocalServiceUtil.updateConfiguredProducer(configuredProducer);
  }
 catch (  Exception e) {
    throw new WSRPConsumerException(e.getMessage());
  }
}
