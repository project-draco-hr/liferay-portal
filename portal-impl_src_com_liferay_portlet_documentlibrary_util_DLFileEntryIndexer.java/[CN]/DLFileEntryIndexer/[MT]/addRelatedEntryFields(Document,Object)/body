{
  DetachedComment detachedComment=(DetachedComment)obj;
  FileEntry fileEntry=null;
  try {
    fileEntry=DLAppLocalServiceUtil.getFileEntry(detachedComment.getClassPK());
  }
 catch (  Exception e) {
    return;
  }
  if (fileEntry instanceof LiferayFileEntry) {
    DLFileEntry dlFileEntry=(DLFileEntry)fileEntry.getModel();
    document.addKeyword(Field.FOLDER_ID,dlFileEntry.getFolderId());
    document.addKeyword(Field.HIDDEN,dlFileEntry.isInHiddenFolder());
    document.addKeyword(Field.TREE_PATH,StringUtil.split(dlFileEntry.getTreePath(),CharPool.SLASH));
  }
}
