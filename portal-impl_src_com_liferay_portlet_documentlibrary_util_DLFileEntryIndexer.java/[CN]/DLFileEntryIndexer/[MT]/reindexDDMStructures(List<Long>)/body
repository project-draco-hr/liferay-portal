{
  if (SearchEngineUtil.isIndexReadOnly() || !isIndexerEnabled()) {
    return;
  }
  try {
    List<DLFileEntry> dlFileEntries=DLFileEntryLocalServiceUtil.getDDMStructureFileEntries(ArrayUtil.toLongArray(ddmStructureIds));
    Indexer<DLFileEntry> indexer=IndexerRegistryUtil.nullSafeGetIndexer(DLFileEntry.class);
    for (    DLFileEntry dlFileEntry : dlFileEntries) {
      indexer.reindex(dlFileEntry);
    }
  }
 catch (  Exception e) {
    throw new SearchException(e);
  }
}
