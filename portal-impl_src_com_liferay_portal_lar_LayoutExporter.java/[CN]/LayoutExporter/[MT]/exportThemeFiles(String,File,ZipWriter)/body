{
  if ((dir == null) || (!dir.exists())) {
    return;
  }
  File[] files=dir.listFiles();
  for (int i=0; i < files.length; i++) {
    File file=files[i];
    if (file.isDirectory()) {
      exportThemeFiles(path + "/" + file.getName(),file,zipWriter);
    }
 else {
      zipWriter.addEntry(path + "/" + file.getName(),FileUtil.getBytes(file));
    }
  }
}
