{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement(_GET_DEFAULT_USER_ID);
    ps.setLong(1,companyId);
    ps.setBoolean(2,true);
    rs=ps.executeQuery();
    while (rs.next()) {
      return rs.getLong("userId");
    }
    return 0;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
