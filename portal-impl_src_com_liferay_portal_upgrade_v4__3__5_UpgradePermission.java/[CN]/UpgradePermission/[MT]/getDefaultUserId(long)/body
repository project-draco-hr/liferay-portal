{
  long userId=0;
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=HibernateUtil.getConnection();
    ps=con.prepareStatement(_GET_DEFAULT_USER_ID);
    ps.setLong(1,companyId);
    ps.setBoolean(2,true);
    rs=ps.executeQuery();
    while (rs.next()) {
      userId=rs.getLong("userId");
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
  return userId;
}
