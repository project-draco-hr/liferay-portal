{
  if (Validator.isNotNull(cmd)) {
    if (cmd.equals("delete") && (lte.getType() == LayoutTypeException.FIRST_LAYOUT)) {
      return themeDisplay.translate("you-cannot-delete-this-page-because-the-next-page-is-of-" + "type-x-and-it-cannot-be-the-first-page","layout.types." + lte.getLayoutType());
    }
    if ((cmd.equals("display_order") || cmd.equals("priority")) && (lte.getType() == LayoutTypeException.FIRST_LAYOUT)) {
      return themeDisplay.translate("you-cannot-move-this-page-because-the-resulting-order-" + "would-place-a-page-of-type-x-as-the-first-page","layout.types." + lte.getLayoutType());
    }
  }
  if (lte.getType() == LayoutTypeException.FIRST_LAYOUT) {
    return themeDisplay.translate("the-first-page-cannot-be-of-type-x","layout.types." + lte.getLayoutType());
  }
 else   if (lte.getType() == LayoutTypeException.NOT_PARENTABLE) {
    return themeDisplay.translate("a-page-cannot-become-a-child-of-a-page-that-is-not-" + "parentable");
  }
  return StringPool.BLANK;
}
