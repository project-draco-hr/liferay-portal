{
  File file=autoDeploymentContext.getFile();
  if (file.isDirectory()) {
    try {
      if (_log.isInfoEnabled()) {
        _log.info("Modifying themes for " + file.getPath());
      }
      deployDirectory(file,autoDeploymentContext.getContext(),false,autoDeploymentContext.getPluginPackage());
      if (_log.isInfoEnabled()) {
        _log.info("Themes for " + file.getPath() + " modified successfully");
      }
      return AutoDeployer.CODE_DEFAULT;
    }
 catch (    Exception e) {
      throw new AutoDeployException(e);
    }
  }
 else {
    return super.autoDeploy(autoDeploymentContext);
  }
}
