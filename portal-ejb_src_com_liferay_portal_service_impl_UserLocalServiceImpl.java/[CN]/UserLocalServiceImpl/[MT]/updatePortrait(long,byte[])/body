{
  long imageMaxSize=GetterUtil.getLong(PropsUtil.get(PropsUtil.USERS_IMAGE_MAX_SIZE));
  if ((imageMaxSize > 0) && ((bytes == null) || (bytes.length > imageMaxSize))) {
    throw new UserPortraitException();
  }
  User user=UserUtil.findByPrimaryKey(userId);
  ImageLocalUtil.put(user.getCompanyId() + ".portal.user." + userId,bytes);
}
