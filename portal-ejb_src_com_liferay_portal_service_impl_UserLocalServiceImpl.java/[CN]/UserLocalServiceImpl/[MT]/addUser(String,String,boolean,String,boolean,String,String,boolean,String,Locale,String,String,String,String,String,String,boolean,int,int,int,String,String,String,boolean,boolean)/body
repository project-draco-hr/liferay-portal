{
  User user=null;
  boolean create=true;
  if (checkExists) {
    try {
      getUserByEmailAddress(companyId,emailAddress);
      create=false;
    }
 catch (    NoSuchUserException nsue) {
    }
  }
  if (create) {
    try {
      user=addUser(creatorUserId,companyId,autoUserId,userId,autoPassword,password1,password2,passwordReset,emailAddress,locale,firstName,middleName,lastName,nickName,prefixId,suffixId,male,birthdayMonth,birthdayDay,birthdayYear,jobTitle,organizationId,locationId,sendEmail);
    }
 catch (    Exception e) {
      _log.error(e);
    }
  }
  return user;
}
