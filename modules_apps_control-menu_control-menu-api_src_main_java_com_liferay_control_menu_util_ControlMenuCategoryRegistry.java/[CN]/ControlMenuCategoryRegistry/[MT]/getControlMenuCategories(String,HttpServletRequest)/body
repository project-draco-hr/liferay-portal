{
  List<ControlMenuCategory> controlMenuCategories=getControlMenuCategories(controlMenuCategoryKey);
  if (controlMenuCategories.isEmpty()) {
    return controlMenuCategories;
  }
  return ListUtil.filter(controlMenuCategories,new PredicateFilter<ControlMenuCategory>(){
    @Override public boolean filter(    ControlMenuCategory controlMenuCategory){
      try {
        if (!controlMenuCategory.hasAccessPermission(request)) {
          return false;
        }
        List<ControlMenuEntry> controlMenuEntries=_controlMenuEntryRegistry.getControlMenuEntries(controlMenuCategory,request);
        if (controlMenuEntries.isEmpty()) {
          return false;
        }
        return true;
      }
 catch (      PortalException pe) {
        _log.error(pe,pe);
      }
      return false;
    }
  }
);
}
