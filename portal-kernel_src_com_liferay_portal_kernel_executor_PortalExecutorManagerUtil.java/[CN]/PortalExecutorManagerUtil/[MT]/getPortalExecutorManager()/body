{
  PortalRuntimePermission.checkGetBeanProperty(PortalExecutorManagerUtil.class);
  try {
    while (_portalExecutorManager == null) {
      Registry registry=RegistryUtil.getRegistry();
      _portalExecutorManager=registry.getService(PortalExecutorManager.class);
      if (_log.isDebugEnabled()) {
        _log.debug("Waiting for a PortalExecutorManager");
      }
      Thread.sleep(500);
    }
  }
 catch (  InterruptedException ie) {
  }
  return _portalExecutorManager;
}
