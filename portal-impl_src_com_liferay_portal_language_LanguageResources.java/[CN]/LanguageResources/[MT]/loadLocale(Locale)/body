{
  String[] names=StringUtil.split(_config.replace(StringPool.PERIOD,StringPool.SLASH));
  Map<String,String> languageMap=null;
  if (names.length > 0) {
    String localeName=locale.toString();
    languageMap=new HashMap<String,String>();
    for (int i=0; i < names.length; i++) {
      String name=names[i];
      StringBundler sb=new StringBundler(4);
      sb.append(name);
      if (localeName.length() > 0) {
        sb.append("_");
        sb.append(localeName);
      }
      sb.append(".properties");
      Properties properties=loadProperties(sb.toString());
      for (      Map.Entry<Object,Object> entry : properties.entrySet()) {
        languageMap.put((String)entry.getKey(),(String)entry.getValue());
      }
    }
  }
 else {
    languageMap=Collections.emptyMap();
  }
  _localeLanguageMap.put(locale,languageMap);
  return languageMap;
}
