{
  StringBundler sb=new StringBundler();
  try (UnsyncBufferedReader unsyncBufferedReader=new UnsyncBufferedReader(new UnsyncStringReader(content))){
    String line=null;
    int lineCount=0;
    boolean sortAttributes=true;
    while ((line=unsyncBufferedReader.readLine()) != null) {
      lineCount++;
      String trimmedLine=StringUtil.trimLeading(line);
      if (sortAttributes) {
        if (trimmedLine.startsWith(StringPool.LESS_THAN) && trimmedLine.endsWith(StringPool.GREATER_THAN) && !trimmedLine.startsWith("<%")&& !trimmedLine.startsWith("<!")) {
          line=sortAttributes(fileName,line,lineCount,false);
        }
 else         if (trimmedLine.startsWith("<![CDATA[") && !trimmedLine.endsWith("]]>")) {
          sortAttributes=false;
        }
      }
 else       if (trimmedLine.endsWith("]]>")) {
        sortAttributes=true;
      }
      sb.append(line);
      sb.append("\n");
    }
  }
   content=sb.toString();
  if (content.endsWith("\n")) {
    content=content.substring(0,content.length() - 1);
  }
  return content;
}
