{
  KaleoInstance kaleoInstance=findByPrimaryKey(kaleoInstanceId);
  Session session=null;
  try {
    session=openSession();
    KaleoInstance[] array=new KaleoInstanceImpl[3];
    array[0]=getByKDI_C_PrevAndNext(session,kaleoInstance,kaleoDefinitionId,completed,orderByComparator,true);
    array[1]=kaleoInstance;
    array[2]=getByKDI_C_PrevAndNext(session,kaleoInstance,kaleoDefinitionId,completed,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
