{
  _logger=new Logger(bundleContext);
  DB db=DBFactoryUtil.getDB();
  ServiceTrackerMapListener<String,UpgradeInfo,List<UpgradeInfo>> serviceTrackerMapListener=null;
  _releaseManagerConfiguration=Configurable.createConfigurable(ReleaseManagerConfiguration.class,properties);
  if (_releaseManagerConfiguration.autoUpgrade()) {
    serviceTrackerMapListener=new UpgradeInfoServiceTrackerMapListener();
  }
  _serviceTrackerMap=ServiceTrackerMapFactory.multiValueMap(bundleContext,UpgradeStep.class,"(&(upgrade.bundle.symbolic.name=*)(|(upgrade.db.type=any)" + "(upgrade.db.type=" + db.getType() + ")))",new PropertyServiceReferenceMapper<String,UpgradeStep>("upgrade.bundle.symbolic.name"),new UpgradeServiceTrackerCustomizer(bundleContext),Collections.reverseOrder(new PropertyServiceReferenceComparator<UpgradeStep>("upgrade.from.schema.version")),serviceTrackerMapListener);
  _serviceTrackerMap.open();
}
