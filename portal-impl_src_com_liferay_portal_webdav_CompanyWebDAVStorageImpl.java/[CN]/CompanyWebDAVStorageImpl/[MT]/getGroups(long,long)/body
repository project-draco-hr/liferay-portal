{
  List<Group> groups=new ArrayList<Group>();
  LinkedHashMap<String,Object> params=new LinkedHashMap<String,Object>();
  params.put("usersGroups",userId);
  groups.addAll(GroupLocalServiceUtil.search(companyId,null,null,params,QueryUtil.ALL_POS,QueryUtil.ALL_POS));
  groups.addAll(GroupLocalServiceUtil.getUserOrganizationsGroups(userId,QueryUtil.ALL_POS,QueryUtil.ALL_POS));
  groups.add(GroupLocalServiceUtil.getUserGroup(companyId,userId));
  return groups;
}
