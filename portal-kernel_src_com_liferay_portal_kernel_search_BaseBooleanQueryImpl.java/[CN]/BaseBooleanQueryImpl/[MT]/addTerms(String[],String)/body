{
  if (Validator.isNull(values)) {
    return Collections.emptyMap();
  }
  if (fields == null) {
    fields=new String[0];
  }
  Map<String,Query> queries=new HashMap<>((int)(fields.length / .75));
  for (  String field : fields) {
    Query query=addTerm(field,values);
    queries.put(field,query);
  }
  return queries;
}
