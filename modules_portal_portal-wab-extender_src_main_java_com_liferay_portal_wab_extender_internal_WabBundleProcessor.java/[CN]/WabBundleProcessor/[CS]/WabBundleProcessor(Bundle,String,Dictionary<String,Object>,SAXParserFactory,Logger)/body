{
  _bundle=bundle;
  _contextPath=contextPath;
  _properties=properties;
  if (_contextPath.indexOf('/') != 0) {
    throw new IllegalArgumentException("Context path must start with /");
  }
  _logger=logger;
  BundleWiring bundleWiring=_bundle.adapt(BundleWiring.class);
  _bundleClassLoader=new PassThroughClassLoader(bundleWiring.getClassLoader());
  _contextName=_contextPath.substring(1);
  _bundleContext=_bundle.getBundleContext();
  _webXMLDefinitionLoader=new WebXMLDefinitionLoader(_bundle,saxParserFactory,_logger);
}
