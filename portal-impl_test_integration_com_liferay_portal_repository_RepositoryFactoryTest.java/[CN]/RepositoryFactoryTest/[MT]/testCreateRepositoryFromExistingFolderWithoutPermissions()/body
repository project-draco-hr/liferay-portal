{
  DLFolder dlFolder=DLTestUtil.addFolder(_group.getGroupId());
  PermissionChecker originalPermissionChecker=PermissionThreadLocal.getPermissionChecker();
  try {
    PermissionThreadLocal.setPermissionChecker(ALWAYS_FAILING_PERMISSION_CHECKER);
    RepositoryFactoryUtil.create(dlFolder.getFolderId(),0,0);
  }
  finally {
    PermissionThreadLocal.setPermissionChecker(originalPermissionChecker);
  }
}
