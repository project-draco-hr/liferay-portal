{
  DDMTemplate template=ddmTemplatePersistence.findByPrimaryKey(templateId);
  DDMTemplatePermission.checkAddTemplatePermission(getPermissionChecker(),serviceContext.getScopeGroupId(),template.getClassNameId(),template.getResourceClassNameId());
  return ddmTemplateLocalService.copyTemplate(getUserId(),templateId,nameMap,descriptionMap,serviceContext);
}
