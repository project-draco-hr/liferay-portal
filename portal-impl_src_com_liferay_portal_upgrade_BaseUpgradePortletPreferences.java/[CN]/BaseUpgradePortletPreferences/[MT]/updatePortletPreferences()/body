{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("select portletPreferencesId, ownerId, ownerType, plid, " + "portletId, preferences from PortletPreferences where " + getUpdatePortletPreferencesWhereClause());
    rs=ps.executeQuery();
    while (rs.next()) {
      long portletPreferencesId=rs.getLong("portletPreferencesId");
      long ownerId=rs.getLong("ownerId");
      int ownerType=rs.getInt("ownerType");
      long plid=rs.getLong("plid");
      String portletId=rs.getString("portletId");
      String preferences=rs.getString("preferences");
      long companyId=0;
      if (ownerType == PortletKeys.PREFS_OWNER_TYPE_GROUP) {
        Object[] group=getGroup(ownerId);
        if (group != null) {
          companyId=group[1];
        }
      }
 else {
        Object[] layout=getLayout(plid);
        if (layout != null) {
          companyId=layout[1];
        }
      }
      if (companyId > 0) {
        String newPreferences=upgradePreferences(companyId,ownerId,ownerType,plid,portletId,preferences);
        updatePortletPreferences(portletPreferencesId,newPreferences);
      }
 else {
        deletePortletPreferences(portletPreferencesId);
      }
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
