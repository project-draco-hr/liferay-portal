{
  long messageId=message.getMessageId();
  String entryURL=Portal.FRIENDLY_URL_SEPARATOR + "blogs/" + entry.getUrlTitle();
  String body=message.getBody();
  String url=null;
  int start=body.indexOf("[url=");
  if (start > -1) {
    start+="[url=".length();
    int end=body.indexOf("]",start);
    if (end > -1) {
      url=body.substring(start,end);
    }
  }
  if (Validator.isNotNull(url)) {
    long companyId=message.getCompanyId();
    long userId=message.getUserId();
    int status=message.getStatus();
    long defaultUserId=UserLocalServiceUtil.getDefaultUserId(companyId);
    if ((userId == defaultUserId) && (status == StatusConstants.PENDING)) {
      _verifyTrackback(messageId,null,url,entryURL,true);
    }
  }
}
