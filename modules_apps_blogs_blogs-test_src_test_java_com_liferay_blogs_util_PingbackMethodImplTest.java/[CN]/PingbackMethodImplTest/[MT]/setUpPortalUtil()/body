{
  when(_portal.getLayoutFullURL(Matchers.anyLong(),Matchers.eq(BlogsPortletKeys.BLOGS))).thenReturn(_LAYOUT_FULL_URL);
  when(_portal.getPlidFromFriendlyURL(Matchers.eq(_COMPANY_ID),Matchers.anyString())).thenReturn(RandomTestUtil.randomLong());
  when(_portal.getScopeGroupId(Matchers.anyLong())).thenReturn(RandomTestUtil.randomLong());
  PortalUtil portalUtil=new PortalUtil();
  portalUtil.setPortal(_portal);
}
