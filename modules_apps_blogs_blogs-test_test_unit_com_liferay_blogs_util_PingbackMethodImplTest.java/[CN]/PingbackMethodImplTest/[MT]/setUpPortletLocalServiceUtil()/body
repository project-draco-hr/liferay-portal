{
  Portlet portlet=Mockito.mock(Portlet.class);
  when(portlet.getFriendlyURLMapperInstance()).thenReturn(_friendlyURLMapper);
  when(portlet.getFriendlyURLMapping()).thenReturn(_FRIENDLY_URL_MAPPING);
  when(_portletLocalService.getPortletById(BlogsPortletKeys.BLOGS)).thenReturn(portlet);
  when(_portletLocalService.getPortletById(Matchers.anyLong(),Matchers.eq(BlogsPortletKeys.BLOGS))).thenReturn(portlet);
}
