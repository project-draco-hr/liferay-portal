{
  DynamicQuery dynamicQuery=DynamicQueryFactoryUtil.forClass(Organization.class,PACLClassLoaderUtil.getPortalClassLoader());
  Property property=PropertyFactoryUtil.forName("organizationId");
  dynamicQuery.add(property.ge(startOrganizationId));
  dynamicQuery.add(property.lt(endOrganizationId));
  addReindexCriteria(dynamicQuery,companyId);
  List<Organization> organizations=OrganizationLocalServiceUtil.dynamicQuery(dynamicQuery);
  if (organizations.isEmpty()) {
    return;
  }
  Collection<Document> documents=new ArrayList<Document>(organizations.size());
  for (  Organization organization : organizations) {
    Document document=getDocument(organization);
    documents.add(document);
  }
  SearchEngineUtil.updateDocuments(getSearchEngineId(),companyId,documents);
}
