{
  try {
    SearchEngineRequest searchEngineRequest=new SearchEngineRequest(SearchEngineRequest.COMMAND_SEARCH,companyId,query,sort,start,end);
    String message=MessageBusUtil.sendSynchronizedMessage(DestinationNames.SEARCH,JSONUtil.serialize(searchEngineRequest));
    JSONObject jsonObj=new JSONObject(message);
    return (Hits)JSONUtil.deserialize(jsonObj.getString("hits"));
  }
 catch (  Exception e) {
    throw new SearchException(e);
  }
}
