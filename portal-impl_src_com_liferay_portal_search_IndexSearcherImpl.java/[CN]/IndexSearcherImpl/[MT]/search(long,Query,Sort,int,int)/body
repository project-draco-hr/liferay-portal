{
  try {
    SearchRequest searchRequest=new SearchRequest();
    searchRequest.setCommand(SearchRequest.COMMAND_SEARCH);
    searchRequest.setCompanyId(companyId);
    searchRequest.setQuery(query);
    searchRequest.setSort(sort);
    searchRequest.setStart(start);
    searchRequest.setEnd(end);
    Hits hits=(Hits)MessageBusUtil.sendSynchronousMessage(DestinationNames.SEARCH_READER,searchRequest);
    return hits;
  }
 catch (  Exception e) {
    throw new SearchException(e);
  }
}
