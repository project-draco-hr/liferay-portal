{
  DDMForm ddmForm=ddmStructure.getDDMForm();
  if (requireCaptcha) {
    DDMFormField captchaDDMFormField=new DDMFormField(_CAPTCHA_FIELD_NAME,"captcha");
    captchaDDMFormField.setProperty("url",createCaptchaResourceURL(renderResponse));
    ddmForm.addDDMFormField(captchaDDMFormField);
  }
  return ddmForm;
}
