{
  if (cause instanceof DDMFormRenderingException || cause instanceof CaptchaTextException || cause instanceof CaptchaMaxChallengesException|| cause instanceof NoSuchRecordSetException|| cause instanceof NoSuchStructureException|| cause instanceof NoSuchStructureLayoutException|| cause instanceof PortletPreferencesException|| cause instanceof PrincipalException|| cause instanceof StorageFieldValueException) {
    return true;
  }
  return false;
}
