{
  if (oldCounter == null) {
    return null;
  }
  oldCounter.setEndPeriod(SocialCounterPeriodUtil.getStartPeriod() - 1);
  socialActivityCounterPersistence.update(oldCounter,false);
  return createActivityCounter(oldCounter.getCompanyId(),oldCounter.getGroupId(),oldCounter.getClassNameId(),oldCounter.getClassPK(),oldCounter.getName(),oldCounter.getOwnerType(),oldCounter.getTotalValue());
}
