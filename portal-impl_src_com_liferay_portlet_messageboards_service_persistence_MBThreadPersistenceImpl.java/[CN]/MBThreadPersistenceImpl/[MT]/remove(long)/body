{
  Session session=null;
  try {
    session=openSession();
    MBThread mbThread=(MBThread)session.get(MBThreadImpl.class,new Long(threadId));
    if (mbThread == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + threadId);
      }
      throw new NoSuchThreadException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + threadId);
    }
    return remove(mbThread);
  }
 catch (  NoSuchThreadException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
