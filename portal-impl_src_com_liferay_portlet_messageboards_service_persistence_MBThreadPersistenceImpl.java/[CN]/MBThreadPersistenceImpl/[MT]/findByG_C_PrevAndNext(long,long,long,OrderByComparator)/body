{
  MBThread mbThread=findByPrimaryKey(threadId);
  Session session=null;
  try {
    session=openSession();
    MBThread[] array=new MBThreadImpl[3];
    array[0]=getByG_C_PrevAndNext(session,mbThread,groupId,categoryId,orderByComparator,true);
    array[1]=mbThread;
    array[2]=getByG_C_PrevAndNext(session,mbThread,groupId,categoryId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
