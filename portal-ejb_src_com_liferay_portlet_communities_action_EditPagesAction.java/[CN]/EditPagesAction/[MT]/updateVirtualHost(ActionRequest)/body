{
  long groupId=ParamUtil.getLong(req,"groupId");
  String publicOwnerId=LayoutImpl.PUBLIC + groupId;
  String publicVirtualHost=ParamUtil.getString(req,"publicVirtualHost");
  LayoutSetServiceUtil.updateVirtualHost(publicOwnerId,publicVirtualHost);
  String privateOwnerId=LayoutImpl.PRIVATE + groupId;
  String privateVirtualHost=ParamUtil.getString(req,"privateVirtualHost");
  LayoutSetServiceUtil.updateVirtualHost(privateOwnerId,privateVirtualHost);
  String friendlyURL=ParamUtil.getString(req,"friendlyURL");
  Group group=GroupLocalServiceUtil.getGroup(groupId);
  GroupServiceUtil.updateGroup(groupId,group.getName(),group.getDescription(),group.getType(),friendlyURL,group.isActive());
}
