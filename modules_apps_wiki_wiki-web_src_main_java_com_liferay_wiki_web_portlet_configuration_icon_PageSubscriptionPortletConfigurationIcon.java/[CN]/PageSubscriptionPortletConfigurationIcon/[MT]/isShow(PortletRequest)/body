{
  HttpServletRequest request=PortalUtil.getHttpServletRequest(portletRequest);
  WikiRequestHelper wikiRequestHelper=new WikiRequestHelper(request);
  WikiGroupServiceOverriddenConfiguration wikiGroupServiceOverriddenConfiguration=wikiRequestHelper.getWikiGroupServiceOverriddenConfiguration();
  if (WikiPagePermissionChecker.contains(wikiRequestHelper.getPermissionChecker(),_page,ActionKeys.SUBSCRIBE) && (wikiGroupServiceOverriddenConfiguration.emailPageAddedEnabled() || wikiGroupServiceOverriddenConfiguration.emailPageUpdatedEnabled())) {
    return true;
  }
  return false;
}
