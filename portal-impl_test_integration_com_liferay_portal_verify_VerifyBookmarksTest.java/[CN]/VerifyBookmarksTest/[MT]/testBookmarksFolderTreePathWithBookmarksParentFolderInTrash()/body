{
  Group group=GroupTestUtil.addGroup();
  BookmarksFolder grandparentFolder=BookmarksTestUtil.addFolder(group.getGroupId(),RandomTestUtil.randomString());
  BookmarksFolder parentFolder=BookmarksTestUtil.addFolder(group.getGroupId(),grandparentFolder.getFolderId(),RandomTestUtil.randomString());
  BookmarksTestUtil.addFolder(group.getGroupId(),parentFolder.getFolderId(),RandomTestUtil.randomString());
  BookmarksFolderLocalServiceUtil.moveFolderToTrash(TestPropsValues.getUserId(),parentFolder.getFolderId());
  BookmarksFolderLocalServiceUtil.deleteFolder(grandparentFolder.getFolderId(),false);
  doVerify();
}
