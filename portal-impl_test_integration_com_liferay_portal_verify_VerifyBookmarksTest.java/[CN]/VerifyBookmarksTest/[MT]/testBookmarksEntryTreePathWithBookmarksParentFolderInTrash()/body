{
  Group group=GroupTestUtil.addGroup();
  BookmarksFolder grandparentFolder=BookmarksTestUtil.addFolder(group.getGroupId(),ServiceTestUtil.randomString());
  BookmarksFolder parentFolder=BookmarksTestUtil.addFolder(group.getGroupId(),grandparentFolder.getFolderId(),ServiceTestUtil.randomString());
  ServiceContext serviceContext=ServiceTestUtil.getServiceContext(group.getGroupId());
  BookmarksTestUtil.addEntry(parentFolder.getFolderId(),true,serviceContext);
  BookmarksFolderLocalServiceUtil.moveFolderToTrash(TestPropsValues.getUserId(),parentFolder.getFolderId());
  BookmarksFolderLocalServiceUtil.deleteFolder(grandparentFolder.getFolderId(),false);
  doVerify();
}
