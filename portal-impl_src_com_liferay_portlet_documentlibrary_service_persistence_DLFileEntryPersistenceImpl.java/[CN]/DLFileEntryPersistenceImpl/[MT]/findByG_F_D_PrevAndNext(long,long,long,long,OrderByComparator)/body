{
  DLFileEntry dlFileEntry=findByPrimaryKey(fileEntryId);
  Session session=null;
  try {
    session=openSession();
    DLFileEntry[] array=new DLFileEntryImpl[3];
    array[0]=getByG_F_D_PrevAndNext(session,dlFileEntry,groupId,folderId,documentTypeId,orderByComparator,true);
    array[1]=dlFileEntry;
    array[2]=getByG_F_D_PrevAndNext(session,dlFileEntry,groupId,folderId,documentTypeId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
