{
  String languageId=_languageIdCache.get(companyId);
  if (languageId != null) {
    return languageId;
  }
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  languageId=StringPool.BLANK;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select languageId from User_ where defaultUser = ? and " + "companyId = " + companyId);
    ps.setBoolean(1,true);
    rs=ps.executeQuery();
    if (rs.next()) {
      languageId=rs.getString("languageId");
      _languageIdCache.put(companyId,languageId);
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
  return languageId;
}
