{
  if (_ddmTemplate == null) {
    ThemeDisplay themeDisplay=(ThemeDisplay)request.getAttribute(WebKeys.THEME_DISPLAY);
    String ddmTemplateKey=_ddmTemplateKey;
    if (Validator.isNull(_ddmTemplateKey)) {
      ddmTemplateKey=_DDM_TEMPLATE_KEY;
    }
    try {
      _ddmTemplate=DDMTemplateLocalServiceUtil.fetchTemplate(themeDisplay.getSiteGroupId(),PortalUtil.getClassNameId(BreadcrumbEntry.class.getName()),ddmTemplateKey,true);
    }
 catch (    PortalException e) {
      _log.error("Error obtaining DDM Template with key " + ddmTemplateKey);
    }
  }
  return _ddmTemplate;
}
