{
  selenium.selectWindow("null");
  selenium.selectFrame("relative=top");
  selenium.open("/web/joebloggs/home/");
  selenium.waitForVisible("link=Activities Page");
  selenium.clickAt("link=Activities Page",RuntimeVariables.replace("Activities Page"));
  selenium.waitForPageToLoad("30000");
  selenium.clickAt("link=Add Application",RuntimeVariables.replace("Add Application"));
  selenium.waitForElementPresent("//div[@title='Activities']/p/a");
  selenium.clickAt("//div[@title='Activities']/p/a",RuntimeVariables.replace("Add"));
  selenium.waitForVisible("//td[1]/div/div[1]/div");
  assertTrue(selenium.isVisible("//td[1]/div/div[1]/div"));
}
