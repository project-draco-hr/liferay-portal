{
  if (_liveGroupURL != null) {
    return _liveGroupURL;
  }
  _liveGroupURL=StringPool.BLANK;
  Group group=getGroup();
  if (group.isStagedRemotely()) {
    Layout layout=_themeDisplay.getLayout();
    try {
      _liveGroupURL=StagingUtil.getRemoteSiteURL(group,layout.isPrivateLayout());
    }
 catch (    PortalException pe) {
      _log.error(pe);
    }
  }
 else   if (group.isStagingGroup()) {
    Group liveGroup=StagingUtil.getLiveGroup(group.getGroupId());
    if (liveGroup != null) {
      _liveGroupURL=_groupURLProvider.getLiveGroupURL(liveGroup,_portletRequest);
    }
  }
  return _liveGroupURL;
}
