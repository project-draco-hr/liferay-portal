{
  ThemeDisplay themeDisplay=(ThemeDisplay)portletRequest.getAttribute(WebKeys.THEME_DISPLAY);
  long workflowTaskId=ParamUtil.getLong(portletRequest,"workflowTaskId");
  long assigneeUserId=ParamUtil.getLong(portletRequest,"assigneeUserId");
  String comment=ParamUtil.getString(portletRequest,"comment");
  WorkflowTaskManagerUtil.assignWorkflowTaskToUser(themeDisplay.getCompanyId(),themeDisplay.getUserId(),workflowTaskId,assigneeUserId,comment,null,null);
}
