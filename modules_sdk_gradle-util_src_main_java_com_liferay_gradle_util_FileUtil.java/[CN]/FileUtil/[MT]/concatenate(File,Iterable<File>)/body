{
  try (FileOutputStream fileOutputStream=new FileOutputStream(destinationFile);FileChannel destinationChannel=fileOutputStream.getChannel()){
    for (    File sourceFile : sourceFiles) {
      try (FileInputStream fileInputStream=new FileInputStream(sourceFile);FileChannel sourceChannel=fileInputStream.getChannel()){
        sourceChannel.transferTo(0,sourceChannel.size(),destinationChannel);
      }
     }
  }
 }
