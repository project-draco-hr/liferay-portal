{
  text=StringUtil.replace(text,"http://localhost:8080",TestPropsValues.PORTAL_URL);
  text=StringUtil.replace(text,"L:\\portal\\build\\",_sourceDir);
  text=StringUtil.replace(text,"\\test-output\\brochure\\","\\test-output\\" + SeleniumUtil.getTimestamp() + "\\"+ ThemeIds.getThemeId()+ "\\");
  text=StringUtil.replace(text,"//a[contains(@href, 'brochure_WAR_brochuretheme')]","//a[contains(@href, '" + ThemeIds.getThemeId() + "')]");
  if (TestPropsValues.TEST_DATABASE_MINIMAL) {
    text=StringUtil.replace(text,"Joe","Test");
    text=StringUtil.replace(text,"Bloggs","Test");
  }
  if (Validator.isNotNull(TestPropsValues.CLUSTER_NODE_1)) {
    text=StringUtil.replace(text,"[$CLUSTER_NODE_1$]",TestPropsValues.CLUSTER_NODE_1);
  }
  if (Validator.isNotNull(TestPropsValues.CLUSTER_NODE_2)) {
    text=StringUtil.replace(text,"[$CLUSTER_NODE_2$]",TestPropsValues.CLUSTER_NODE_2);
  }
  if (Validator.isNotNull(TestPropsValues.VM_HOST)) {
    text=StringUtil.replace(text,"[$VM_HOST$]",TestPropsValues.VM_HOST);
  }
  if (_contextReplace == null) {
    return text;
  }
 else {
    return _contextReplace.replace(text);
  }
}
