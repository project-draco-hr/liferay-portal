{
  long plid=ParamUtil.getLong(req,"plid");
  long groupId=ParamUtil.getLong(req,"groupId");
  boolean privateLayout=ParamUtil.getBoolean(req,"privateLayout");
  long layoutId=ParamUtil.getLong(req,"layoutId");
  long parentPlid=ParamUtil.getLong(req,"parentPlid");
  long parentLayoutId=ParamUtil.getLong(req,"parentLayoutId",LayoutConstants.DEFAULT_PARENT_LAYOUT_ID);
  if (plid <= 0) {
    LayoutServiceUtil.updateParentLayoutId(groupId,privateLayout,layoutId,parentLayoutId);
  }
 else {
    LayoutServiceUtil.updateParentLayoutId(plid,parentPlid);
  }
}
