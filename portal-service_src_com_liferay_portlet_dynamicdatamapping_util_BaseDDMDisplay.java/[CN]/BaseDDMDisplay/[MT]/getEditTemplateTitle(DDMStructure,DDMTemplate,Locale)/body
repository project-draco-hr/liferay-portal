{
  String title=StringPool.BLANK;
  if (structure != null) {
    if (template != null) {
      title=template.getName(locale) + " (" + structure.getName(locale)+ ")";
    }
 else {
      title=LanguageUtil.format(locale,"new-template-for-structure-x",structure.getName(locale),false);
    }
  }
 else   if (template != null) {
    title=template.getName(locale);
  }
 else {
    title=getDefaultEditTemplateTitle(locale);
  }
  return title;
}
