{
  ActionableDynamicQuery actionableDynamicQuery=_wikiNodeLocalService.getActionableDynamicQuery();
  actionableDynamicQuery.setCompanyId(companyId);
  actionableDynamicQuery.setPerformActionMethod(new ActionableDynamicQuery.PerformActionMethod<WikiNode>(){
    @Override public void performAction(    WikiNode node) throws PortalException {
      reindexPages(companyId,node.getGroupId(),node.getNodeId());
    }
  }
);
  actionableDynamicQuery.performActions();
}
