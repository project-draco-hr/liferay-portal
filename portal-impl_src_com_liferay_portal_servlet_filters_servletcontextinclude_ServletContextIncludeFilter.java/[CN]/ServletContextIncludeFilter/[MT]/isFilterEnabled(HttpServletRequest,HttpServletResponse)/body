{
  try {
    String requestPath=ThemeHelper.getRequestPath(getFilterConfig().getServletContext(),request);
    if (!requestPath.endsWith(".jsp")) {
      return false;
    }
    String servletContextIncludePath=(String)request.getAttribute(WebKeys.SERVLET_CONTEXT_INCLUDE_FILTER_PATH);
    if ((servletContextIncludePath != null) && servletContextIncludePath.equals(requestPath)) {
      return false;
    }
    Theme theme=(Theme)request.getAttribute(WebKeys.SERVLET_CONTEXT_INCLUDE_FILTER_THEME);
    if (theme == null) {
      theme=getTheme(request);
    }
    boolean resourceExists=ThemeHelper.resourceExists(getFilterConfig().getServletContext(),theme,requestPath);
    if ((theme != null) && resourceExists) {
      request.setAttribute(WebKeys.SERVLET_CONTEXT_INCLUDE_FILTER_THEME,theme);
      return true;
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
  return false;
}
