{
  if (SearchEngineUtil.isIndexReadOnly()) {
    return;
  }
  long companyId=GetterUtil.getLong(ids[0]);
  try {
    Iterator<WikiNode> nodesItr=wikiNodePersistence.findByCompanyId(companyId).iterator();
    while (nodesItr.hasNext()) {
      WikiNode node=nodesItr.next();
      long nodeId=node.getNodeId();
      Iterator<WikiPage> pagesItr=wikiPagePersistence.findByN_H(nodeId,true).iterator();
      while (pagesItr.hasNext()) {
        WikiPage page=pagesItr.next();
        long groupId=node.getGroupId();
        long resourcePrimKey=page.getResourcePrimKey();
        String title=page.getTitle();
        String content=page.getContent();
        Date modifiedDate=page.getModifiedDate();
        String[] tagsEntries=tagsEntryLocalService.getEntryNames(WikiPage.class.getName(),resourcePrimKey);
        try {
          Indexer.updatePage(companyId,groupId,resourcePrimKey,nodeId,title,content,modifiedDate,tagsEntries,page.getExpandoBridge());
        }
 catch (        SearchException se) {
          _log.error("Reindexing " + page.getPrimaryKey(),se);
        }
      }
    }
  }
 catch (  SystemException se) {
    throw se;
  }
catch (  Exception e) {
    throw new SystemException(e);
  }
}
