{
  result.append("{");
  String delim="";
  for (  Map.Entry<?,?> entry : map.entrySet()) {
    result.append(delim);
    final String name=String.valueOf(entry.getKey());
    appendString(result,name);
    result.append(":");
    final Object value=entry.getValue();
    appendValue(result,objectRefs,refpath + "/" + name,value);
    delim=", ";
  }
  result.append("}");
  return result;
}
