{
  Iterator itr=BookmarksFolderUtil.findByG_P(folder.getGroupId(),folder.getFolderId()).iterator();
  while (itr.hasNext()) {
    BookmarksFolder curFolder=(BookmarksFolder)itr.next();
    deleteFolder(curFolder);
  }
  BookmarksEntryLocalServiceUtil.deleteEntries(folder.getFolderId());
  ResourceLocalServiceUtil.deleteResource(folder.getCompanyId(),BookmarksFolder.class.getName(),ResourceImpl.SCOPE_INDIVIDUAL,folder.getPrimaryKey());
  BookmarksFolderUtil.remove(folder.getFolderId());
}
