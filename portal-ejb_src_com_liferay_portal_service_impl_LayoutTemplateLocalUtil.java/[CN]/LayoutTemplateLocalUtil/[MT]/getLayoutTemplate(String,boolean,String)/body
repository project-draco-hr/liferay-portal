{
  if (Validator.isNull(layoutTemplateId)) {
    return null;
  }
  LayoutTemplate layoutTemplate=null;
  if (themeId != null) {
    if (standard) {
      layoutTemplate=(LayoutTemplate)_getThemesStandard(themeId).get(layoutTemplateId);
    }
 else {
      layoutTemplate=(LayoutTemplate)_getThemesCustom(themeId).get(layoutTemplateId);
    }
    if (layoutTemplate != null) {
      return layoutTemplate;
    }
  }
  if (standard) {
    layoutTemplate=(LayoutTemplate)_warStandard.get(layoutTemplateId);
    if (layoutTemplate == null) {
      layoutTemplate=(LayoutTemplate)_portalStandard.get(layoutTemplateId);
    }
  }
 else {
    layoutTemplate=(LayoutTemplate)_warCustom.get(layoutTemplateId);
    if (layoutTemplate == null) {
      layoutTemplate=(LayoutTemplate)_portalCustom.get(layoutTemplateId);
    }
  }
  return layoutTemplate;
}
