{
  String ddmFormFieldType=sortField;
  if (ddmFormFieldType.startsWith(DDMIndexer.DDM_FIELD_PREFIX)) {
    ddmFormFieldType=getDDMFormFieldType(ddmFormFieldType);
  }
  return SortFactoryUtil.getSort(AssetEntry.class,getSortType(ddmFormFieldType),getOrderByCol(sortField,locale),!sortField.startsWith(DDMIndexer.DDM_FIELD_PREFIX),orderByType);
}
