{
  int label=1;
  while (label >= 1) {
switch (label) {
case 1:
      selenium.selectWindow("null");
    selenium.selectFrame("relative=top");
  selenium.open("/web/guest/home/");
selenium.clickAt("link=Blogs Permissions Page",RuntimeVariables.replace("Blogs Permissions Page"));
selenium.waitForPageToLoad("30000");
selenium.clickAt("//div[@class='entry-title']/h2/a",RuntimeVariables.replace("Blogs Entry Title Temporary"));
selenium.waitForPageToLoad("30000");
assertEquals(RuntimeVariables.replace("Permissions"),selenium.getText("//span[@class='taglib-text' and contains(.,'Permissions')]"));
selenium.clickAt("//span[@class='taglib-text' and contains(.,'Permissions')]",RuntimeVariables.replace("Permissions"));
selenium.waitForPageToLoad("30000");
boolean portletUpdateChecked=selenium.isChecked("//input[@id='portlet_ACTION_UPDATE']");
if (portletUpdateChecked) {
label=2;
continue;
}
selenium.clickAt("//input[@id='portlet_ACTION_UPDATE']",RuntimeVariables.replace("Portlet Update"));
case 2:
assertTrue(selenium.isChecked("//input[@id='portlet_ACTION_UPDATE']"));
selenium.clickAt("//input[@value='Save']",RuntimeVariables.replace("Save"));
selenium.waitForPageToLoad("30000");
assertEquals(RuntimeVariables.replace("Your request completed successfully."),selenium.getText("//div[@class='portlet-msg-success']"));
assertTrue(selenium.isChecked("//input[@id='portlet_ACTION_UPDATE']"));
case 100:
label=-1;
}
}
}
