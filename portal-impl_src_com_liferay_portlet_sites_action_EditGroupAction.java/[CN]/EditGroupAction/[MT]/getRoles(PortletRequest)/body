{
  List<Role> roles=new ArrayList<Role>();
  long[] siteRolesRoleIds=StringUtil.split(ParamUtil.getString(portletRequest,"siteRolesRoleIds"),0L);
  for (int i=0; i < siteRolesRoleIds.length; i++) {
    if (siteRolesRoleIds[i] == 0) {
      continue;
    }
    Role role=RoleLocalServiceUtil.getRole(siteRolesRoleIds[i]);
    roles.add(role);
  }
  return roles;
}
