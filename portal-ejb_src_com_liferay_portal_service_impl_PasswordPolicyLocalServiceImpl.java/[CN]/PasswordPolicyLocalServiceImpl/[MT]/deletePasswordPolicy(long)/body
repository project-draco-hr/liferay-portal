{
  PasswordPolicy passwordPolicy=PasswordPolicyUtil.findByPrimaryKey(passwordPolicyId);
  if (passwordPolicy.isDefaultPolicy()) {
    throw new RequiredPasswordPolicyException();
  }
  ResourceLocalServiceUtil.deleteResource(passwordPolicy.getCompanyId(),PasswordPolicy.class.getName(),ResourceImpl.SCOPE_INDIVIDUAL,passwordPolicy.getPasswordPolicyId());
  PasswordPolicyUtil.remove(passwordPolicyId);
}
