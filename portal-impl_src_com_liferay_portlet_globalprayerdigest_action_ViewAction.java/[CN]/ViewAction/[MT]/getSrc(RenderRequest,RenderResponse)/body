{
  String src=super.getSrc(renderRequest,renderResponse);
  TimeZone timeZone=TimeZoneUtil.getDefault();
  try {
    User user=PortalUtil.getUser(renderRequest);
    timeZone=user.getTimeZone();
  }
 catch (  Exception e) {
    _log.error(e);
  }
  Calendar cal=CalendarFactoryUtil.getCalendar(timeZone);
  src=src + "?which=chosenday&whichyear=" + cal.get(Calendar.YEAR)+ "&whichmonth="+ (cal.get(Calendar.MONTH) + 1)+ "&whichday="+ cal.get(Calendar.DATE);
  return src;
}
