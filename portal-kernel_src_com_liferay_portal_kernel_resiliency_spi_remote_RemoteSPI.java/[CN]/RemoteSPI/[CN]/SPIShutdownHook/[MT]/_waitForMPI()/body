{
  if (_log.isInfoEnabled()) {
    _log.info("Wait up to " + spiConfiguration.getShutdownTimeout() + " ms for MPI shutdown request");
  }
  try {
    if (countDownLatch.await(spiConfiguration.getShutdownTimeout(),TimeUnit.MILLISECONDS)) {
      if (_log.isInfoEnabled()) {
        _log.info("MPI shutdown request received");
      }
      return true;
    }
  }
 catch (  InterruptedException ie) {
  }
  if (_log.isInfoEnabled()) {
    _log.info("Proceed with SPI shutdown");
  }
  return false;
}
