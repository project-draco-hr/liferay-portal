{
  Assert.assertTrue(ShoppingItemPermission.contains(permissionChecker,_item,ActionKeys.VIEW));
  Assert.assertTrue(ShoppingItemPermission.contains(permissionChecker,_subitem,ActionKeys.VIEW));
  removePortletModelViewPermission(ResourceConstants.SCOPE_GROUP);
  Assert.assertFalse(ShoppingItemPermission.contains(permissionChecker,_item,ActionKeys.VIEW));
  Assert.assertFalse(ShoppingItemPermission.contains(permissionChecker,_subitem,ActionKeys.VIEW));
}
