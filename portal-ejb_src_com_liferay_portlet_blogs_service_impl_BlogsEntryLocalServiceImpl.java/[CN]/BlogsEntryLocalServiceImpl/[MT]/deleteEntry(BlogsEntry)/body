{
  try {
    Indexer.deleteEntry(entry.getCompanyId(),entry.getEntryId());
  }
 catch (  IOException ioe) {
    _log.error(ioe.getMessage());
  }
  MBMessageLocalServiceUtil.deleteDiscussionMessages(BlogsEntry.class.getName(),entry.getEntryId());
  ResourceLocalServiceUtil.deleteResource(entry.getCompanyId(),BlogsEntry.class.getName(),Resource.TYPE_CLASS,Resource.SCOPE_INDIVIDUAL,entry.getPrimaryKey().toString());
  BlogsEntryUtil.remove(entry.getEntryId());
}
