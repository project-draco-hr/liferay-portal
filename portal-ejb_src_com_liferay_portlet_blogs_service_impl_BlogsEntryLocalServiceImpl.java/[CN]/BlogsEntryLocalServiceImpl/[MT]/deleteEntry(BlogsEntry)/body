{
  try {
    Indexer.deleteEntry(entry.getCompanyId(),entry.getEntryId());
  }
 catch (  IOException ioe) {
    _log.error("Deleting index " + entry.getEntryId(),ioe);
  }
  MBMessageLocalServiceUtil.deleteDiscussionMessages(BlogsEntry.class.getName(),entry.getEntryId());
  ResourceLocalServiceUtil.deleteResource(entry.getCompanyId(),BlogsEntry.class.getName(),ResourceImpl.TYPE_CLASS,ResourceImpl.SCOPE_INDIVIDUAL,entry.getPrimaryKey().toString());
  BlogsEntryUtil.remove(entry.getEntryId());
}
