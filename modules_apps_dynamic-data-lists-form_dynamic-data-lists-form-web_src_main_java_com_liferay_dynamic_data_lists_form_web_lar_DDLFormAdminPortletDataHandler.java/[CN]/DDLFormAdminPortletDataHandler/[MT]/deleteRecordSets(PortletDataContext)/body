{
  List<DDLRecordSet> recordSets=_ddlRecordSetLocalService.search(portletDataContext.getCompanyId(),portletDataContext.getScopeGroupId(),null,DDLRecordSetConstants.SCOPE_FORMS,QueryUtil.ALL_POS,QueryUtil.ALL_POS,new DDLRecordSetNameComparator());
  for (  DDLRecordSet recordSet : recordSets) {
    _ddmStructureLocalService.deleteStructure(recordSet.getDDMStructureId());
    _ddlRecordSetLocalService.deleteRecordSet(recordSet);
  }
}
