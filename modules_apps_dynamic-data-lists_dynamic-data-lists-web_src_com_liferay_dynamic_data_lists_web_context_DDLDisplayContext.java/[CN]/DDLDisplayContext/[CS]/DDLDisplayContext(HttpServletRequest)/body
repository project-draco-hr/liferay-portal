{
  _ddlRequestHelper=new DDLRequestHelper(request);
  _renderRequest=(RenderRequest)request.getAttribute(JavaConstants.JAVAX_PORTLET_REQUEST);
  _portletPreferences=_renderRequest.getPreferences();
  if (Validator.isNotNull(getPortletResource())) {
    return;
  }
  DDLRecordSet recordSet=getRecordSet();
  if ((recordSet == null) || !hasViewPermission()) {
    _renderRequest.setAttribute(WebKeys.PORTLET_CONFIGURATOR_VISIBILITY,Boolean.TRUE);
  }
}
