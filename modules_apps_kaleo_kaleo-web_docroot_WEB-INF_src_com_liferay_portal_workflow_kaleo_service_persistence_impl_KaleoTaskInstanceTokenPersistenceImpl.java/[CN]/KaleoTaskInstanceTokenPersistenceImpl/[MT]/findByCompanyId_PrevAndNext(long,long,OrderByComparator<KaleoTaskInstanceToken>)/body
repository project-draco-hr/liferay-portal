{
  KaleoTaskInstanceToken kaleoTaskInstanceToken=findByPrimaryKey(kaleoTaskInstanceTokenId);
  Session session=null;
  try {
    session=openSession();
    KaleoTaskInstanceToken[] array=new KaleoTaskInstanceTokenImpl[3];
    array[0]=getByCompanyId_PrevAndNext(session,kaleoTaskInstanceToken,companyId,orderByComparator,true);
    array[1]=kaleoTaskInstanceToken;
    array[2]=getByCompanyId_PrevAndNext(session,kaleoTaskInstanceToken,companyId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
