{
  PortletDisplay portletDisplay=_themeDisplay.getPortletDisplay();
  PortletPreferences portletSetup=PortletPreferencesFactoryUtil.getStrictLayoutPortletSetup(_themeDisplay.getLayout(),portletDisplay.getId());
  boolean lfrWidgetShowAddAppLink=GetterUtil.getBoolean(portletSetup.getValue("lfrWidgetShowAddAppLink",null),PropsValues.THEME_PORTLET_SHARING_DEFAULT);
  if (lfrWidgetShowAddAppLink) {
    return true;
  }
  return false;
}
