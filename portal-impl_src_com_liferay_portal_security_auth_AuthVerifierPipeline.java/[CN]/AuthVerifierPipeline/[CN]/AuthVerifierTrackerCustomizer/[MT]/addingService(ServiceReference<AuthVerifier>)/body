{
  Registry registry=RegistryUtil.getRegistry();
  AuthVerifierConfiguration authVerifierConfiguration=new AuthVerifierConfiguration();
  AuthVerifier service=(AuthVerifier)registry.getService(serviceReference);
  String authVerifierClassName=service.getClass().getName();
  Properties properties=new Properties();
  for (  String key : serviceReference.getPropertyKeys()) {
    String value=GetterUtil.getString(serviceReference.getProperty(key));
    properties.put(key,value);
  }
  authVerifierConfiguration.setAuthVerifier(service);
  authVerifierConfiguration.setAuthVerifierClassName(authVerifierClassName);
  authVerifierConfiguration.setProperties(properties);
  _authVerifierConfigurations.add(0,authVerifierConfiguration);
  return authVerifierConfiguration;
}
