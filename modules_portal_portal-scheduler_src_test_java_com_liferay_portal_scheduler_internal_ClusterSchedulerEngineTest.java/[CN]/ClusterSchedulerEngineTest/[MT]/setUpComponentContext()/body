{
  _componentContext=Mockito.mock(ComponentContext.class);
  BundleContext bundleContext=Mockito.mock(BundleContext.class);
  Mockito.when(bundleContext.createFilter(Mockito.anyString())).thenReturn(Mockito.mock(Filter.class));
  Mockito.when(_componentContext.getBundleContext()).thenReturn(bundleContext);
