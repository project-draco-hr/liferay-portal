{
  try {
    Portlet portlet=(Portlet)_request.getAttribute(WebKeys.RENDER_PORTLET);
    PortletURL basePortletURL=PortletURLFactoryUtil.create(_request,PortletKeys.PORTLET_SHARING,_themeDisplay.getPlid(),PortletRequest.RESOURCE_PHASE);
    StringBundler sb=new StringBundler();
    sb.append("javascript:Liferay.PortletSharing.showWidgetInfo('");
    sb.append(PortalUtil.getWidgetURL(portlet,_themeDisplay));
    sb.append("', '");
    sb.append(basePortletURL);
    sb.append("');");
    return sb.toString();
  }
 catch (  PortalException pe) {
    return StringPool.BLANK;
  }
}
