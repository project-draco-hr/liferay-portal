{
  Map<Locale,String> map=LocalizationUtil.getLocalizationMap(preferences,"emailArticleApprovalGrantedBody");
  Locale defaultLocale=LocaleUtil.getSiteDefault();
  String defaultValue=map.get(defaultLocale);
  if (Validator.isNotNull(defaultValue)) {
    return map;
  }
  map.put(defaultLocale,ContentUtil.get(PropsUtil.get(PropsKeys.JOURNAL_EMAIL_ARTICLE_APPROVAL_GRANTED_BODY)));
  return map;
}
