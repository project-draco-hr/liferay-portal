{
  String emailArticleApprovalDeniedBody=preferences.getValue("email-article-approval-denied-body",StringPool.BLANK);
  if (Validator.isNotNull(emailArticleApprovalDeniedBody)) {
    return emailArticleApprovalDeniedBody;
  }
 else {
    return ContentUtil.get(PropsUtil.get(PropsKeys.JOURNAL_EMAIL_ARTICLE_APPROVAL_DENIED_BODY));
  }
}
