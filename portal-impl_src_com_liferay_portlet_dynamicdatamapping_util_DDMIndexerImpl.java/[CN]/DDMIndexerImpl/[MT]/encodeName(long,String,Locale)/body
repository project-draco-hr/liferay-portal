{
  StringBundler sb=new StringBundler(7);
  sb.append(DDM_FIELD_NAMESPACE);
  sb.append(StringPool.DOUBLE_UNDERLINE);
  sb.append(ddmStructureId);
  sb.append(StringPool.DOUBLE_UNDERLINE);
  sb.append(fieldName);
  if (locale != null) {
    sb.append(StringPool.UNDERLINE);
    sb.append(LocaleUtil.toLanguageId(locale));
  }
  return sb.toString();
}
