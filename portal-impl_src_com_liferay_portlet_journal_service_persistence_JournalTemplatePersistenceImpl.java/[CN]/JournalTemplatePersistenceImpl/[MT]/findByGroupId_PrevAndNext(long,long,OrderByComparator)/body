{
  JournalTemplate journalTemplate=findByPrimaryKey(id);
  int count=countByGroupId(groupId);
  Session session=null;
  try {
    session=openSession();
    StringMaker query=new StringMaker();
    query.append("FROM com.liferay.portlet.journal.model.JournalTemplate WHERE ");
    query.append("groupId = ?");
    query.append(" ");
    if (obc != null) {
      query.append("ORDER BY ");
      query.append(obc.getOrderBy());
    }
 else {
      query.append("ORDER BY ");
      query.append("templateId ASC");
    }
    Query q=session.createQuery(query.toString());
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(groupId);
    Object[] objArray=QueryUtil.getPrevAndNext(q,count,obc,journalTemplate);
    JournalTemplate[] array=new JournalTemplateImpl[3];
    array[0]=(JournalTemplate)objArray[0];
    array[1]=(JournalTemplate)objArray[1];
    array[2]=(JournalTemplate)objArray[2];
    return array;
  }
 catch (  Exception e) {
    throw HibernateUtil.processException(e);
  }
 finally {
    closeSession(session);
  }
}
