{
  JournalTemplate journalTemplate=findByPrimaryKey(id);
  Session session=null;
  try {
    session=openSession();
    JournalTemplate[] array=new JournalTemplateImpl[3];
    array[0]=getByG_S_PrevAndNext(session,journalTemplate,groupId,structureId,orderByComparator,true);
    array[1]=journalTemplate;
    array[2]=getByG_S_PrevAndNext(session,journalTemplate,groupId,structureId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
