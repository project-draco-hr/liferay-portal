{
  if (_log.isDebugEnabled()) {
    _log.debug("updatePassword");
  }
  MethodWrapper methodWrapper=new MethodWrapper(PropsValues.MAIL_HOOK_IMPL,"updatePassword",new Object[]{new LongWrapper(companyId),new LongWrapper(userId),password});
