{
  if (_log.isDebugEnabled()) {
    _log.debug("addForward");
  }
  MethodWrapper methodWrapper=new MethodWrapper(PropsValues.MAIL_HOOK_IMPL,"addForward",new Object[]{new LongWrapper(userId),filters,emailAddresses,new BooleanWrapper(leaveCopy)});
  Message message=new Message(MessageTypes.MAIL_MESSAGE);
  message.setPayload(methodWrapper);
  MessageBusUtil.sendMessage(DestinationNames.MAIL,message);
}
