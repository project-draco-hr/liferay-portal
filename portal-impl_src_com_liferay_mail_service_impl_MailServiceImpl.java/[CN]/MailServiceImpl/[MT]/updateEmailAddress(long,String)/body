{
  if (_log.isDebugEnabled()) {
    _log.debug("updateEmailAddress");
  }
  MethodWrapper methodWrapper=new MethodWrapper(PropsValues.MAIL_HOOK_IMPL,"updateEmailAddress",new Object[]{new LongWrapper(userId),emailAddress});
  Message message=new Message(MessageTypes.MAIL_MESSAGE);
  message.setPayload(methodWrapper);
  MessageBusUtil.sendMessage(DestinationNames.MAIL,message);
}
