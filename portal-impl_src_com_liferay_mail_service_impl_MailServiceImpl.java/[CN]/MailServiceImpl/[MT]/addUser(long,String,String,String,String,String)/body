{
  if (_log.isDebugEnabled()) {
    _log.debug("addUser");
  }
  MethodWrapper methodWrapper=new MethodWrapper(PropsValues.MAIL_HOOK_IMPL,"addUser",new Object[]{new LongWrapper(userId),password,firstName,middleName,lastName,emailAddress});
  Message message=new Message(MessageTypes.MAIL_MESSAGE);
  message.setPayload(methodWrapper);
  MessageBusUtil.sendMessage(DestinationNames.MAIL,message);
}
