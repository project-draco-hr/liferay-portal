{
  if (_log.isDebugEnabled()) {
    _log.debug("addVacationMessage");
  }
  MethodWrapper methodWrapper=new MethodWrapper(PropsValues.MAIL_HOOK_IMPL,"addVacationMessage",new Object[]{new LongWrapper(userId),emailAddress,vacationMessage});
  Message message=new Message(MessageTypes.MAIL_MESSAGE);
  message.setPayload(methodWrapper);
  MessageBusUtil.sendMessage(DestinationNames.MAIL,message);
}
