{
  Session session=null;
  try {
    session=openSession();
    MBTopicHBM mbTopicHBM=(MBTopicHBM)session.get(MBTopicHBM.class,topicId);
    if (mbTopicHBM == null) {
      _log.warn("No MBTopic exists with the primary key " + topicId.toString());
      throw new NoSuchTopicException("No MBTopic exists with the primary key " + topicId.toString());
    }
    return MBTopicHBMUtil.model(mbTopicHBM);
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
