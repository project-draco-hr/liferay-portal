{
  if (calledGetWriter) {
    throw new IllegalStateException("Unable obtain OutputStream because Writer is already in use");
  }
  if (_servletOutputStream != null) {
    return _servletOutputStream;
  }
  resetBuffer(true);
  _unsyncByteArrayOutputStream=new UnsyncByteArrayOutputStream();
  _servletOutputStream=new ServletOutputStreamAdapter(_unsyncByteArrayOutputStream);
  calledGetOutputStream=true;
  return _servletOutputStream;
}
