{
  User user=getUser();
  SyncDevice syncDevice=syncDeviceLocalService.fetchSyncDeviceByUuidAndCompanyId(uuid,user.getCompanyId());
  if (syncDevice == null) {
    syncDevice=SyncDeviceThreadLocal.getSyncDevice();
    return syncDeviceLocalService.addSyncDevice(user.getUserId(),syncDevice.getHostName(),type,buildNumber,featureSet);
  }
  if (syncDevice.getUserId() != user.getUserId()) {
    throw new PrincipalException();
  }
  return syncDeviceLocalService.updateSyncDevice(syncDevice.getSyncDeviceId(),syncDevice.getHostName(),type,buildNumber,featureSet,syncDevice.getStatus());
}
