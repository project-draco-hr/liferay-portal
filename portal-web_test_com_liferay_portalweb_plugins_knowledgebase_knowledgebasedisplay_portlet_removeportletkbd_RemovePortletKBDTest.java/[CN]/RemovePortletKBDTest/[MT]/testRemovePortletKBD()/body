{
  selenium.open("/web/guest/home/");
  selenium.clickAt("link=Knowledge Base Display Test Page",RuntimeVariables.replace("Knowledge Base Display Test Page"));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isVisible("//section"));
  selenium.clickAt("//img[@title='Remove']",RuntimeVariables.replace("Remove"));
  for (int second=0; ; second++) {
    if (second >= 90) {
      fail("timeout");
    }
    try {
      if ("Are you sure you want to remove this component?".equals(selenium.getConfirmation())) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  assertTrue(selenium.isElementNotPresent("//section"));
}
