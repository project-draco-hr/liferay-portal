{
  Mockito.doThrow(IOException.class).when(_http).URLtoString("__PROBLEM_URL__");
  long commentId=RandomTestUtil.randomLong();
  _linkbackConsumer.addNewTrackback(commentId,"__PROBLEM_URL__","__entryUrl__");
  _linkbackConsumer.verifyNewTrackbacks();
  Mockito.verify(_comments).deleteComment(commentId);
  Mockito.verify(_http).URLtoString("__PROBLEM_URL__");
}
