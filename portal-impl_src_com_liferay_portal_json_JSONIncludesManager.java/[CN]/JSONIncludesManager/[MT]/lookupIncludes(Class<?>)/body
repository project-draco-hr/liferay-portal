{
  String[] includes=_includesMap.get(type);
  if (includes != null) {
    return includes;
  }
  List<String> list=new ArrayList<String>();
  boolean strict=false;
  while (type != null) {
    JSONMode jsonModeAnnotation=type.getAnnotation(JSONMode.class);
    if ((jsonModeAnnotation != null) && jsonModeAnnotation.strict()) {
      _scanFieldsAndMethods(list,type,true);
      strict=true;
    }
 else     if (strict) {
      _scanFieldsAndMethods(list,type,true);
    }
    type=type.getSuperclass();
  }
  includes=_listToArray(list);
  _includesMap.put(type,includes);
  return includes;
}
