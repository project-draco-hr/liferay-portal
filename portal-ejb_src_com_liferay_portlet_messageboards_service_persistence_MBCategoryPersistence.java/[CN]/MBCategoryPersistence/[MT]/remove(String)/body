{
  Session session=null;
  try {
    session=openSession();
    MBCategory mbCategory=(MBCategory)session.get(MBCategory.class,categoryId);
    if (mbCategory == null) {
      _log.warn("No MBCategory exists with the primary key " + categoryId.toString());
      throw new NoSuchCategoryException("No MBCategory exists with the primary key " + categoryId.toString());
    }
    session.delete(mbCategory);
    session.flush();
    return mbCategory;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
