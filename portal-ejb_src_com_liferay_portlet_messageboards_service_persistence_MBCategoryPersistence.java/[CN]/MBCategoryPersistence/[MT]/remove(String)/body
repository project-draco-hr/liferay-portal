{
  Session session=null;
  try {
    session=openSession();
    MBCategoryHBM mbCategoryHBM=(MBCategoryHBM)session.get(MBCategoryHBM.class,categoryId);
    if (mbCategoryHBM == null) {
      _log.warn("No MBCategory exists with the primary key " + categoryId.toString());
      throw new NoSuchCategoryException("No MBCategory exists with the primary key " + categoryId.toString());
    }
    session.delete(mbCategoryHBM);
    session.flush();
    return MBCategoryHBMUtil.model(mbCategoryHBM);
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
