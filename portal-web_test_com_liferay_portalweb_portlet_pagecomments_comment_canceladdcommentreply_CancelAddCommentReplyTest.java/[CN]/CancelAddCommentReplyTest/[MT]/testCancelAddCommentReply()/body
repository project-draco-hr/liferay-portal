{
  selenium.open("/web/guest/home/");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Page Comments Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.clickAt("link=Page Comments Test Page",RuntimeVariables.replace(""));
  selenium.waitForPageToLoad("30000");
  selenium.clickAt("link=Post Reply",RuntimeVariables.replace(""));
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isVisible("_107_postReplyBody1")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  assertTrue(selenium.isVisible("_107_postReplyBody1"));
  selenium.type("_107_postReplyBody1",RuntimeVariables.replace("This is a test reply comment."));
  selenium.keyPress("_107_postReplyBody1",RuntimeVariables.replace("\\48"));
  selenium.keyPress("_107_postReplyBody1",RuntimeVariables.replace("\\8"));
  selenium.clickAt("//td[2]/table[2]/tbody/tr[1]/td/input[2]",RuntimeVariables.replace(""));
  assertFalse(selenium.isTextPresent("This is a test reply comment."));
  assertFalse(selenium.isVisible("_107_postReplyBody1"));
}
