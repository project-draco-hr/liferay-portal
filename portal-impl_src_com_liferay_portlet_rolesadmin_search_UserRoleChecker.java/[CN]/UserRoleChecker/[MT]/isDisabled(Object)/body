{
  User user=(User)obj;
  Set<Role> mandatoryRoles=MembershipPolicyUtil.getMandatoryRoles(user);
  if ((isChecked(user) && mandatoryRoles.contains(_role)) || (!isChecked(user) && !MembershipPolicyUtil.isMembershipAllowed(_role,user))) {
    return true;
  }
 else {
    return super.isDisabled(obj);
  }
}
