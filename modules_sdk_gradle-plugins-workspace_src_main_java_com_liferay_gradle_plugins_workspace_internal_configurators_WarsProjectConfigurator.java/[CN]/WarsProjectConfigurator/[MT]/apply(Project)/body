{
  WorkspaceExtension workspaceExtension=GradleUtil.getExtension((ExtensionAware)project.getGradle(),WorkspaceExtension.class);
  GradleUtil.applyPlugin(project,WarPlugin.class);
  War war=(War)GradleUtil.getTask(project,WarPlugin.WAR_TASK_NAME);
  _addRepositoryDefault(project);
  _addTaskDeploy(war,workspaceExtension);
  _configureRootTaskDistBundle(war,RootProjectConfigurator.DIST_BUNDLE_TAR_TASK_NAME);
  _configureRootTaskDistBundle(war,RootProjectConfigurator.DIST_BUNDLE_ZIP_TASK_NAME);
}
