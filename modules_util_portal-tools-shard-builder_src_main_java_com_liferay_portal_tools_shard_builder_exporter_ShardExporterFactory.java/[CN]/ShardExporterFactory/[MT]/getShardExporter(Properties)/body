{
  String dataSourceClassName=properties.getProperty("dataSourceClassName");
  if (_DATASOURCE_CLASS_NAME_MYSQL.equals(dataSourceClassName)) {
    return new MySQLProvider(properties);
  }
 else   if (_DATASOURCE_CLASS_NAME_POSTGRESQL.equals(dataSourceClassName) || _DATASOURCE_CLASS_NAME_POSTGRESQL_SIMPLE.equals(dataSourceClassName)) {
    return new PostgreSQLProvider(properties);
  }
  throw new DBProviderNotAvailableException();
}
