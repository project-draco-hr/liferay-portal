{
  try (PreparedStatement ps=connection.prepareStatement("select count(*) from ExpandoValue where companyId = ? and " + "tableId = ? and columnId = ? and rowId_ = ?")){
    ps.setLong(1,companyId);
    ps.setLong(2,tableId);
    ps.setLong(3,columnId);
    ps.setLong(4,rowId);
    try (ResultSet rs=ps.executeQuery()){
      while (rs.next()) {
        int count=rs.getInt(1);
        if (count > 0) {
          return true;
        }
      }
      return false;
    }
   }
 }
