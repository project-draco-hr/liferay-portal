{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("select * from ExpandoValue where companyId = ? and tableId =" + " ? and columnId = ? and rowId_ = ?");
    ps.setLong(1,companyId);
    ps.setLong(2,tableId);
    ps.setLong(3,columnId);
    ps.setLong(4,rowId);
    rs=ps.executeQuery();
    return rs.next();
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
