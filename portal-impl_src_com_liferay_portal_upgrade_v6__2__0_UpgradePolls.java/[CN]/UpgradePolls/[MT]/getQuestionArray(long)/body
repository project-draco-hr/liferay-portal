{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select groupId, companyId, userId, userName, createDate, " + "modifiedDate from PollsQuestion where questionId = ?");
    ps.setLong(1,questionId);
    rs=ps.executeQuery();
    if (rs.next()) {
      long groupId=rs.getLong("groupId");
      long companyId=rs.getLong("companyId");
      long userId=rs.getLong("companyId");
      long userName=rs.getLong("userName");
      Timestamp createDate=rs.getTimestamp("createDate");
      Timestamp modifiedDate=rs.getTimestamp("modifiedDate");
      return new Object[]{groupId,companyId,userId,userName,createDate,modifiedDate};
    }
    if (_log.isDebugEnabled()) {
      _log.debug("Unable to find question " + questionId);
    }
    return null;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
