{
  mdrRuleGroupInstancePersistence.remove(ruleGroupInstance);
  mdrActionLocalService.deleteActions(ruleGroupInstance.getRuleGroupInstanceId());
  systemEventLocalService.addSystemEvent(ruleGroupInstance.getGroupId(),MDRRuleGroupInstance.class.getName(),ruleGroupInstance.getRuleGroupInstanceId(),ruleGroupInstance.getUuid(),SystemEventConstants.TYPE_DELETE);
}
