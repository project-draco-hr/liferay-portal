{
  mdrRuleGroupInstancePersistence.remove(ruleGroupInstance);
  systemEventLocalService.addSystemEvent(0,ruleGroupInstance.getGroupId(),MDRRuleGroupInstance.class.getName(),ruleGroupInstance.getRuleGroupInstanceId(),ruleGroupInstance.getUuid(),null,SystemEventConstants.TYPE_DELETE,null);
  mdrActionLocalService.deleteActions(ruleGroupInstance.getRuleGroupInstanceId());
}
