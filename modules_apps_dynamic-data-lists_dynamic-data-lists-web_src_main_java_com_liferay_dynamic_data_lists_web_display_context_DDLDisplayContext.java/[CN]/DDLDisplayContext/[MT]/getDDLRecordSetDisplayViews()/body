{
  if (_ddlRecordDisplayViews == null) {
    _ddlRecordDisplayViews=StringUtil.split(PrefsParamUtil.getString(_ddlRequestHelper.getPortletPreferences(),_ddlRequestHelper.getRenderRequest(),"displayViews",StringUtil.merge(_ddlWebConfiguration.supportedDisplayView())));
  }
  return _ddlRecordDisplayViews;
}
