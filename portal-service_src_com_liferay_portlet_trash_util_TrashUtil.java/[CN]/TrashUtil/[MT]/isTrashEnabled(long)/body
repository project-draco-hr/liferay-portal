{
  Group group=GroupLocalServiceUtil.getGroup(groupId);
  if (group.isLayout()) {
    group=group.getParentGroup();
  }
  UnicodeProperties typeSettingsProperties=group.getTypeSettingsProperties();
  int trashEnabledCompany=PrefsPropsUtil.getInteger(group.getCompanyId(),PropsKeys.TRASH_ENABLED);
  if (trashEnabledCompany == TRASH_DISABLED) {
    return false;
  }
  int trashEnabledGroup=GetterUtil.getInteger(typeSettingsProperties.getProperty("trashEnabled"),TRASH_DEFAULT_VALUE);
  if ((trashEnabledGroup == TRASH_ENABLED) || ((trashEnabledCompany == TRASH_ENABLED_BY_DEFAULT) && (trashEnabledGroup == TRASH_DEFAULT_VALUE))) {
    return true;
  }
  return false;
}
