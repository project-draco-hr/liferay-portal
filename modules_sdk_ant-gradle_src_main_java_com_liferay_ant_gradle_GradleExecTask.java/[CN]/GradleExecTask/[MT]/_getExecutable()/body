{
  Project project=getProject();
  String fileName="gradlew";
  if (Os.isFamily(Os.FAMILY_WINDOWS)) {
    fileName+=".bat";
  }
  File dir=project.getBaseDir();
  while (dir != null) {
    File file=new File(dir,fileName);
    if (file.isFile()) {
      return file.getAbsolutePath();
    }
    dir=dir.getParentFile();
  }
  return null;
}
