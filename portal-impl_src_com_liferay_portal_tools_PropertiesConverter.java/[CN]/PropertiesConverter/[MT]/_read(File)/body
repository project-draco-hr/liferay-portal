{
  StringBuilder contents=new StringBuilder();
  try {
    BufferedReader input=new BufferedReader(new FileReader(file));
    try {
      String line=null;
      while ((line=input.readLine()) != null) {
        contents.append(line);
        contents.append("\n");
      }
    }
  finally {
      input.close();
    }
  }
 catch (  IOException ex) {
    ex.printStackTrace();
  }
  return contents.toString();
}
