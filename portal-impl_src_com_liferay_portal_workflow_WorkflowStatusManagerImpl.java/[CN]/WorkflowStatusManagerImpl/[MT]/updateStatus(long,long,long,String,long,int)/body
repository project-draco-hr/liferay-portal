{
  try {
    if (JournalArticle.class.getName().equals(className)) {
      JournalArticleLocalServiceUtil.updateStatus(userId,classPK,status);
    }
    if (status == StatusConstants.APPROVED) {
      WorkflowInstanceLinkLocalServiceUtil.deleteWorkflowInstanceLink(companyId,groupId,className,classPK);
    }
  }
 catch (  Exception e) {
    throw new WorkflowException(e);
  }
}
