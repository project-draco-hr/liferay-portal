{
  String suffix=getSuffix(population);
  StringBundler sb=new StringBundler(14);
  sb.append("drop database if exists ");
  sb.append(databaseName);
  sb.append(";\n");
  sb.append("create database ");
  sb.append(databaseName);
  sb.append(" character set utf8;\n");
  sb.append("use ");
  sb.append(databaseName);
  sb.append(";\n\n");
  sb.append(FileUtil.read(sqlDir + "/portal" + suffix+ "/portal"+ suffix+ "-mysql.sql"));
  sb.append("\n\n");
  sb.append(FileUtil.read(sqlDir + "/indexes/indexes-mysql.sql"));
  sb.append("\n\n");
  sb.append(FileUtil.read(sqlDir + "/sequences/sequences-mysql.sql"));
  return sb.toString();
}
