{
  String screenshotName=null;
  if (TestPropsValues.SAVE_SCREENSHOT) {
    screenshotName=getScreenshotFileName();
    captureEntirePageScreenshot(_OUTPUT_SCREENSHOTS_DIR + screenshotName + ".jpg","");
  }
  if (TestPropsValues.SAVE_SOURCE) {
    String content=getHtmlSource();
    screenshotName=getScreenshotFileName();
    FileUtil.write(_OUTPUT_SCREENSHOTS_DIR + screenshotName + ".html",content);
  }
}
