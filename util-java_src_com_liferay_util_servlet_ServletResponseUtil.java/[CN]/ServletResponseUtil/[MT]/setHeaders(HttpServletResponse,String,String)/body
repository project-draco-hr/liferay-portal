{
  if (_log.isDebugEnabled()) {
    _log.debug("Sending file of type " + contentType);
  }
  if (Validator.isNotNull(contentType)) {
    response.setContentType(contentType);
  }
  response.setHeader(HttpHeaders.CACHE_CONTROL,HttpHeaders.CACHE_CONTROL_PUBLIC_VALUE);
  response.setHeader(HttpHeaders.PRAGMA,HttpHeaders.PRAGMA_PUBLIC_VALUE);
  if (Validator.isNotNull(fileName)) {
    String contentDisposition="attachment; filename=\"" + fileName + "\"";
    boolean ascii=true;
    for (int i=0; i < fileName.length(); i++) {
      if (!CharUtils.isAscii(fileName.charAt(i))) {
        ascii=false;
        break;
      }
    }
    try {
      if (!ascii) {
        URLCodec codec=new URLCodec(StringPool.UTF8);
        String encodedFileName=StringUtil.replace(codec.encode(fileName),"+","%20");
        contentDisposition="attachment; filename*=UTF-8''" + encodedFileName;
      }
    }
 catch (    Exception e) {
      if (_log.isWarnEnabled()) {
        _log.warn(e);
      }
    }
    String extension=GetterUtil.getString(FileUtil.getExtension(fileName));
    if (extension.equals("pdf")) {
      contentDisposition=StringUtil.replace(contentDisposition,"attachment; ","inline; ");
    }
    response.setHeader(HttpHeaders.CONTENT_DISPOSITION,contentDisposition);
  }
}
