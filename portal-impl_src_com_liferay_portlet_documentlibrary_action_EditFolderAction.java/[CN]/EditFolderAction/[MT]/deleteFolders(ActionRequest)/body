{
  long folderId=ParamUtil.getLong(actionRequest,"folderId");
  if (folderId > 0) {
    DLAppServiceUtil.deleteFolder(folderId);
    AssetPublisherUtil.removeRecentFolderId(actionRequest,DLFileEntry.class.getName(),folderId);
  }
 else {
    long[] folderIds=StringUtil.split(ParamUtil.getString(actionRequest,"folderIds"),0L);
    for (int i=0; i < folderIds.length; i++) {
      DLAppServiceUtil.deleteFolder(folderIds[i]);
      AssetPublisherUtil.removeRecentFolderId(actionRequest,DLFileEntry.class.getName(),folderIds[i]);
    }
  }
}
