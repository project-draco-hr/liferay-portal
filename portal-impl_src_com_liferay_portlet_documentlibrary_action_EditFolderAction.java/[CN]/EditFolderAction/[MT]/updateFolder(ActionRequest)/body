{
  ThemeDisplay themeDisplay=(ThemeDisplay)actionRequest.getAttribute(WebKeys.THEME_DISPLAY);
  long folderId=ParamUtil.getLong(actionRequest,"folderId");
  long parentFolderId=ParamUtil.getLong(actionRequest,"parentFolderId");
  String name=ParamUtil.getString(actionRequest,"name");
  String description=ParamUtil.getString(actionRequest,"description");
  ServiceContext serviceContext=ServiceContextFactory.getInstance(DLFolder.class.getName(),actionRequest);
  if (folderId <= 0) {
    DLAppServiceUtil.addFolder(themeDisplay.getScopeGroupId(),parentFolderId,name,description,serviceContext);
  }
 else {
    DLAppServiceUtil.updateFolder(folderId,parentFolderId,name,description,serviceContext);
  }
}
