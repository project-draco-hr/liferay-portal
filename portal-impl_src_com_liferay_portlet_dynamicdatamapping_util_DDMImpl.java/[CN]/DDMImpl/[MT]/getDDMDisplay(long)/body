{
  List<DDMDisplay> ddmDisplays=DDMDisplayRegistryUtil.getDDMDisplays();
  for (  DDMDisplay ddmDisplay : ddmDisplays) {
    if (ArrayUtil.contains(ddmDisplay.getResourceClassNameIds(),classNameId)) {
      return ddmDisplay;
    }
  }
  throw new IllegalArgumentException("No DDM display registered for " + PortalUtil.getClassName(classNameId));
}
