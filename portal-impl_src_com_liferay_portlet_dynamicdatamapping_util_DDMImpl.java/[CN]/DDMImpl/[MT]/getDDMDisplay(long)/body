{
  ClassName className=ClassNameLocalServiceUtil.getClassName(classNameId);
  List<DDMDisplay> ddmDisplays=DDMDisplayRegistryUtil.getDDMDisplays();
  for (  DDMDisplay ddmDisplay : ddmDisplays) {
    if (ArrayUtil.contains(ddmDisplay.getClassNames(),className.getClassName())) {
      return ddmDisplay;
    }
  }
  throw new IllegalArgumentException("No DDMDisplay registered for " + className.getClassName());
}
