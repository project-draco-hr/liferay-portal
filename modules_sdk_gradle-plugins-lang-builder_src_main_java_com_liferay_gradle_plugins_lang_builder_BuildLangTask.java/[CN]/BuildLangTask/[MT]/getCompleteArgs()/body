{
  List<String> args=new ArrayList<>(getArgs());
  args.add("lang.dir=" + FileUtil.relativize(getLangDir(),getWorkingDir()));
  args.add("lang.file=" + getLangFileName());
  args.add("lang.plugin=" + isPlugin());
  File portalLanguagePropertiesFile=getPortalLanguagePropertiesFile();
  if (portalLanguagePropertiesFile != null) {
    args.add("lang.portal.language.properties.file=" + FileUtil.relativize(getPortalLanguagePropertiesFile(),getWorkingDir()));
  }
  args.add("lang.translate=" + isTranslate());
  String translateClientId=getTranslateClientId();
  if (Validator.isNotNull(translateClientId)) {
    args.add("lang.translate.client.id=" + translateClientId);
  }
  String translateClientSecret=getTranslateClientSecret();
  if (Validator.isNotNull(translateClientSecret)) {
    args.add("lang.translate.client.secret=" + translateClientSecret);
  }
  return args;
}
