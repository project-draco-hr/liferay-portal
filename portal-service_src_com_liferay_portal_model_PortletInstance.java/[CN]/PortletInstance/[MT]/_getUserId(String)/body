{
  int x=portletInstance.indexOf(_USER_SEPARATOR);
  int y=portletInstance.indexOf(_INSTANCE_SEPARATOR);
  if (x == -1) {
    return 0;
  }
  if (y != -1) {
    return GetterUtil.getLong(portletInstance.substring(x + _USER_SEPARATOR.length(),y));
  }
  return GetterUtil.getLong(portletInstance.substring(x + _USER_SEPARATOR.length()));
}
