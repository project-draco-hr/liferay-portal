{
  try {
    ClassLoader classLoader=clazz.getClassLoader();
    Enumeration<URL> enu=classLoader.getResources("META-INF/MANIFEST.MF");
    while (enu.hasMoreElements()) {
      URL url=enu.nextElement();
      Manifest manifest=new Manifest(url.openStream());
      Attributes attributes=manifest.getMainAttributes();
      String curBundleSymoblicName=attributes.getValue(Constants.BUNDLE_SYMBOLICNAME);
      if (Validator.isNotNull(curBundleSymoblicName) && curBundleSymoblicName.startsWith(bundleSymbolicName)) {
        return manifest;
      }
    }
  }
 catch (  IOException ioe) {
    _log.error(ioe,ioe);
  }
  return null;
}
