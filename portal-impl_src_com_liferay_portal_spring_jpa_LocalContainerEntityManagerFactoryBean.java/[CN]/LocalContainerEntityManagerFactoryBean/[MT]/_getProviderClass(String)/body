{
  Class clazz=null;
  if ("EclipseLink".equalsIgnoreCase(provider)) {
    clazz=Class.forName("org.springframework.orm.jpa.vendor." + "EclipseLinkJpaVendorAdapter");
  }
 else   if ("TopLink".equalsIgnoreCase(provider)) {
    clazz=Class.forName("org.springframework.orm.jpa.vendor.TopLinkJpaVendorAdapter");
  }
 else   if ("Hibernate".equalsIgnoreCase(provider)) {
    clazz=Class.forName("org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter");
  }
 else   if ("OpenJPA".equalsIgnoreCase(provider)) {
    clazz=Class.forName("org.springframework.orm.jpa.vendor.OpenJpaVendorAdapter");
  }
  return clazz;
}
