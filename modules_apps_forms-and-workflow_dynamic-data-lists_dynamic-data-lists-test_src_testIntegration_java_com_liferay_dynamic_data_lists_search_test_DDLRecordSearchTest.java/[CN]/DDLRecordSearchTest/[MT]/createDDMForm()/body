{
  DDMForm ddmForm=DDMFormTestUtil.createDDMForm(DDMFormTestUtil.createAvailableLocales(LocaleUtil.US),LocaleUtil.US);
  DDMFormField nameDDMFormField=DDMFormTestUtil.createTextDDMFormField("name",true,false,false);
  nameDDMFormField.setIndexType("keyword");
  ddmForm.addDDMFormField(nameDDMFormField);
  DDMFormField descriptionDDMFormField=DDMFormTestUtil.createTextDDMFormField("description",true,false,false);
  descriptionDDMFormField.setIndexType("text");
  ddmForm.addDDMFormField(descriptionDDMFormField);
  return ddmForm;
}
