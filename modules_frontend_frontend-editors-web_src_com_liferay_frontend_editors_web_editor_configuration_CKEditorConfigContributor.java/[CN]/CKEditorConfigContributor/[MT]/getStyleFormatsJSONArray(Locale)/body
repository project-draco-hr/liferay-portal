  jsonArray.put(getStyleFormatJSONObject(LanguageUtil.get(resourceBundle,"cited-work"),"cite",null));
  jsonArray.put(getStyleFormatJSONObject(LanguageUtil.get(resourceBundle,"computer-code"),"code",null));
