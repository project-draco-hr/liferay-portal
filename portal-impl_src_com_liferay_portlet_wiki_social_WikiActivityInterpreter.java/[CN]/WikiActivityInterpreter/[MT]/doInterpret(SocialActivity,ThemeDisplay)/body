{
  String creatorUserName=getUserName(activity.getUserId(),themeDisplay);
  int activityType=activity.getType();
  WikiPageResource pageResource=WikiPageResourceLocalServiceUtil.getPageResource(activity.getClassPK());
  String link=themeDisplay.getURLPortal() + themeDisplay.getPathMain() + "/wiki/find_page?pageResourcePrimKey="+ activity.getClassPK();
  String title=StringPool.BLANK;
  if (activity.getGroupId() == themeDisplay.getScopeGroupId()) {
    if (activityType == WikiActivityKeys.ADD_PAGE) {
      title=themeDisplay.translate("activity-wiki-add-page",creatorUserName);
    }
 else     if (activityType == WikiActivityKeys.UPDATE_PAGE) {
      title=themeDisplay.translate("activity-wiki-update-page",creatorUserName);
    }
  }
 else {
    Group group=GroupLocalServiceUtil.getGroup(activity.getGroupId());
    String groupName=group.getName();
    if (activityType == WikiActivityKeys.ADD_PAGE) {
      title=themeDisplay.translate("activity-wiki-add-page-in",new Object[]{creatorUserName,groupName});
    }
 else     if (activityType == WikiActivityKeys.UPDATE_PAGE) {
      title=themeDisplay.translate("activity-wiki-update-page-in",new Object[]{creatorUserName,groupName});
    }
  }
  StringBuilder sb=new StringBuilder();
  sb.append("<a href=\"");
  sb.append(link);
  sb.append("\">");
  sb.append(cleanContent(pageResource.getTitle()));
  sb.append("</a>");
  String body=sb.toString();
  return new SocialActivityFeedEntry(link,title,body);
}
