{
  IVideoPicture iVideoPicture=event.getPicture();
  Type type=Type.YUV420P;
  if (_iVideoResampler == null) {
    _iVideoResampler=IVideoResampler.make(_width,_height,type,iVideoPicture.getWidth(),iVideoPicture.getHeight(),iVideoPicture.getPixelType());
  }
  IVideoPicture resampledIVideoPicture=IVideoPicture.make(type,_width,_height);
  _iVideoResampler.resample(resampledIVideoPicture,iVideoPicture);
  IVideoPictureEvent iVideoPictureEvent=new VideoPictureEvent(event.getSource(),resampledIVideoPicture,event.getStreamIndex());
  super.onVideoPicture(iVideoPictureEvent);
  resampledIVideoPicture.delete();
}
