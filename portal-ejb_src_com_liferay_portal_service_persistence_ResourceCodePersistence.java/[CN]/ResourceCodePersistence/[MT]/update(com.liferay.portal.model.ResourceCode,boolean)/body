{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(resourceCode);
    }
 else {
      if (resourceCode.isNew()) {
        session.save(resourceCode);
      }
    }
    session.flush();
    resourceCode.setNew(false);
    return resourceCode;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
