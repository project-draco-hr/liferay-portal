{
  String portletId=_portletDisplay.getId();
  if (portletId.equals(PortletKeys.DOCUMENT_LIBRARY) || portletId.equals(PortletKeys.DOCUMENT_LIBRARY_ADMIN) || portletId.equals(PortletKeys.MEDIA_GALLERY_DISPLAY)|| portletId.equals(PortletKeys.DOCUMENT_LIBRARY_DISPLAY)|| portletId.equals(PortletKeys.MY_WORKFLOW_INSTANCES)|| portletId.equals(PortletKeys.MY_WORKFLOW_TASKS)|| portletId.equals(PortletKeys.TRASH)) {
    return true;
  }
  return ParamUtil.getBoolean(_request,"showAssetMetadata");
}
