{
  if (PropsValues.DISCUSSION_COMMENTS_MAX_COUNT <= 0) {
    return;
  }
  int discussionMessagesCount=getDiscussionMessagesCount(className,classPK,WorkflowConstants.STATUS_APPROVED);
  if (discussionMessagesCount >= PropsValues.DISCUSSION_COMMENTS_MAX_COUNT) {
    throw new DiscussionMessageNumberException();
  }
}
