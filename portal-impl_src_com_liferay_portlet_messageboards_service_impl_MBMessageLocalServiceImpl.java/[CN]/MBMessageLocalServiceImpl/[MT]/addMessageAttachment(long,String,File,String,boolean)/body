{
  MBMessage message=mbMessagePersistence.findByPrimaryKey(messageId);
  Folder folder=message.addAttachmentsFolder();
  PortletFileRepositoryUtil.addPortletFileEntry(message.getGroupId(),message.getUserId(),MBMessage.class.getName(),message.getMessageId(),PortletKeys.MESSAGE_BOARDS,folder.getFolderId(),file,fileName,mimeType,indexingEnabled);
}
