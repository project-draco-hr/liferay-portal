{
  MBMessage message=mbMessagePersistence.findByPrimaryKey(messageId);
  Folder folder=message.addAttachmentsFolder();
  String portletId=PortletProviderUtil.getPortletId(MBMessage.class.getName(),PortletProvider.Action.VIEW);
  PortletFileRepositoryUtil.addPortletFileEntry(message.getGroupId(),userId,MBMessage.class.getName(),message.getMessageId(),portletId,folder.getFolderId(),file,fileName,mimeType,true);
}
