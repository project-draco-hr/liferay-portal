{
  try {
    long classNameId=PortalUtil.getClassNameId(className);
    MBDiscussion discussion=MBDiscussionUtil.findByC_C(classNameId,classPK);
    List messages=MBMessageUtil.findByT_P(discussion.getThreadId(),MBMessageImpl.DEFAULT_PARENT_MESSAGE_ID);
    MBMessage message=(MBMessage)messages.get(0);
    deleteMessage(message.getMessageId());
    MBDiscussionUtil.remove(discussion.getDiscussionId());
  }
 catch (  NoSuchDiscussionException nsde) {
  }
}
