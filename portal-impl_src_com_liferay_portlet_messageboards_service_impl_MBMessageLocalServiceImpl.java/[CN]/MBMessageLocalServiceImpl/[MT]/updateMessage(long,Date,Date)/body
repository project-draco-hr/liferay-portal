{
  MBMessage message=mbMessagePersistence.findByPrimaryKey(messageId);
  message.setCreateDate(createDate);
  message.setModifiedDate(modifiedDate);
  mbMessagePersistence.update(message);
  MBThread thread=mbThreadPersistence.findByPrimaryKey(message.getThreadId());
  if (message.isAnonymous()) {
    thread.setLastPostByUserId(0);
  }
 else {
    thread.setLastPostByUserId(message.getUserId());
  }
  thread.setLastPostDate(modifiedDate);
  mbThreadPersistence.update(thread);
  MBCategory category=mbCategoryPersistence.findByPrimaryKey(message.getCategoryId());
  category.setLastPostDate(modifiedDate);
  mbCategoryPersistence.update(category);
  MBStatsUser statsUser=mbStatsUserPersistence.fetchByG_U(category.getGroupId(),message.getUserId());
  if (statsUser != null) {
    statsUser.setLastPostDate(modifiedDate);
    mbStatsUserPersistence.update(statsUser);
  }
  return message;
}
