{
  long threadId=0;
  long parentMessageId=0;
  String subject=String.valueOf(classPK);
  String body=subject;
  ServiceContext serviceContext=new ServiceContext();
  serviceContext.setWorkflowAction(workflowAction);
  boolean enabled=WorkflowThreadLocal.isEnabled();
