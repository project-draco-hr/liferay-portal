{
  boolean maxDiscussionMessageCountReached=false;
  int discussionMessagesCount=getDiscussionMessagesCount(className,classPK,WorkflowConstants.STATUS_APPROVED);
  if ((PropsValues.DISCUSSION_COMMENTS_MAX_NUMBER > 0) && (discussionMessagesCount >= PropsValues.DISCUSSION_COMMENTS_MAX_NUMBER)) {
    maxDiscussionMessageCountReached=true;
  }
  return maxDiscussionMessageCountReached;
}
