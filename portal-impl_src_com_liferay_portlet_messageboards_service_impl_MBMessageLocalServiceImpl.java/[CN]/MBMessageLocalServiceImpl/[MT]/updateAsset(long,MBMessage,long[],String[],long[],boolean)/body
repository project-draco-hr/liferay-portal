{
  boolean visible=false;
  if (assetEntryVisible && message.isApproved() && ((message.getClassNameId() == 0) || (message.getParentMessageId() != 0))) {
    visible=true;
  }
  AssetEntry assetEntry=assetEntryLocalService.updateEntry(userId,message.getGroupId(),message.getCreateDate(),message.getModifiedDate(),message.getWorkflowClassName(),message.getMessageId(),message.getUuid(),0,assetCategoryIds,assetTagNames,visible,null,null,null,ContentTypes.TEXT_HTML,message.getSubject(),null,null,null,null,0,0,null);
  assetLinkLocalService.updateLinks(userId,assetEntry.getEntryId(),assetLinkEntryIds,AssetLinkConstants.TYPE_RELATED);
}
