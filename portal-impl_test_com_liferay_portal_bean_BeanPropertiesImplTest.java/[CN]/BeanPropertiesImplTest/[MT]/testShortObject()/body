{
  Foo foo=new Foo();
  assertNull(foo.getShortObject());
  BeanPropertiesUtil.setProperty(foo,"shortObject",Short.valueOf((short)13));
  assertEquals(13,foo.getShortObject().shortValue());
  short value=BeanPropertiesUtil.getShort(foo,"shortObject",(short)-1);
  assertEquals(13,value);
  value=BeanPropertiesUtil.getShort(foo,_NONEXISTENT,(short)-1);
  assertEquals(-1,value);
}
