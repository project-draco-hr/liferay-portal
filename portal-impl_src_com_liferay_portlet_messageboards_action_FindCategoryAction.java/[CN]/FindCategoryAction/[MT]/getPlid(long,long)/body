{
  if (plid != LayoutConstants.DEFAULT_PLID) {
    try {
      Layout layout=LayoutLocalServiceUtil.getLayout(plid);
      LayoutTypePortlet layoutTypePortlet=(LayoutTypePortlet)layout.getLayoutType();
      if (layoutTypePortlet.hasPortletId(PortletKeys.MESSAGE_BOARDS)) {
        return plid;
      }
    }
 catch (    NoSuchLayoutException nsle) {
    }
  }
  MBCategory category=MBCategoryLocalServiceUtil.getCategory(categoryId);
  plid=PortalUtil.getPlidFromPortletId(category.getGroupId(),PortletKeys.MESSAGE_BOARDS);
  if (plid != LayoutConstants.DEFAULT_PLID) {
    return plid;
  }
  throw new NoSuchLayoutException("No page was found with the Message Boards portlet");
}
