{
  Organization organization=OrganizationLocalServiceUtil.getOrganization(organizationId);
  UserGroupRolePK userGroupRolePK=new UserGroupRolePK(userId,organization.getGroupId(),roleId);
  UserGroupRole userGroupRole=UserGroupRoleLocalServiceUtil.fetchUserGroupRole(userGroupRolePK);
  List<UserGroupRole> userGroupRoles=new ArrayList<UserGroupRole>();
  userGroupRoles.add(userGroupRole);
  try {
    checkRoles(null,userGroupRoles);
  }
 catch (  Exception e) {
    return true;
  }
  return false;
}
