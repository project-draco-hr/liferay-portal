{
  PermissionChecker permissionChecker=getPermissionChecker();
  if (permissionChecker.isCompanyAdmin()) {
    return groupLocalService.search(permissionChecker.getCompanyId(),null,null,null,0,max);
  }
  List<Group> groups=userPersistence.getGroups(permissionChecker.getUserId(),0,max);
  groups=ListUtil.copy(groups);
  Iterator<Group> itr=groups.iterator();
  while (itr.hasNext()) {
    Group group=itr.next();
    if (!GroupPermissionUtil.contains(permissionChecker,group.getGroupId(),actionId)) {
      itr.remove();
    }
  }
  return groups;
}
