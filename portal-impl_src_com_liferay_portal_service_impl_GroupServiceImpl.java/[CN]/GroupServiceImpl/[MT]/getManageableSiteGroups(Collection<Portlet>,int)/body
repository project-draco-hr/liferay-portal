{
  PermissionChecker permissionChecker=getPermissionChecker();
  if (permissionChecker.isCompanyAdmin()) {
    LinkedHashMap<String,Object> params=new LinkedHashMap<String,Object>();
    params.put("site",Boolean.TRUE);
    return ListUtil.unique(groupLocalService.search(permissionChecker.getCompanyId(),null,null,null,params,true,0,max));
  }
  Set<Group> groups=new LinkedHashSet<Group>();
  List<Group> userSitesGroups=getUserSitesGroups(null,max);
  Iterator<Group> itr=userSitesGroups.iterator();
  while (itr.hasNext()) {
    Group group=itr.next();
    if (group.isSite() && PortletPermissionUtil.hasControlPanelAccessPermission(permissionChecker,group.getGroupId(),portlets)) {
      groups.add(group);
    }
  }
  return new ArrayList<Group>(groups);
}
