{
  if (parentGroupId == GroupConstants.DEFAULT_PARENT_GROUP_ID) {
    PortalPermissionUtil.check(getPermissionChecker(),ActionKeys.ADD_COMMUNITY);
  }
 else {
    GroupPermissionUtil.check(getPermissionChecker(),parentGroupId,ActionKeys.ADD_COMMUNITY);
  }
  Group group=groupLocalService.addGroup(getUserId(),parentGroupId,null,0,liveGroupId,name,description,type,manualMembership,membershipRestriction,friendlyURL,site,inheritContent,active,serviceContext);
  if (site) {
    SiteMembershipPolicyUtil.verifyPolicy(group);
  }
  return group;
}
