{
  try {
    ActionUtil.getGroup(req);
    ActionUtil.getRole(req);
  }
 catch (  Exception e) {
    if (e instanceof NoSuchGroupException || e instanceof NoSuchRoleException || e instanceof PrincipalException) {
      SessionErrors.add(req,e.getClass().getName());
      return mapping.findForward("portlet.communities.error");
    }
 else {
      throw e;
    }
  }
  return mapping.findForward(getForward(req,"portlet.communities.edit_user_roles"));
}
