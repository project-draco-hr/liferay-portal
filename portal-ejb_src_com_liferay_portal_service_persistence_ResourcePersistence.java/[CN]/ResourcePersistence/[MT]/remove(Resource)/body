{
  Session session=null;
  try {
    session=openSession();
    session.delete(resource);
    session.flush();
    ResourcePool.removeByC_N_T_S_P(resource.getCompanyId(),resource.getName(),resource.getTypeId(),resource.getScope(),resource.getPrimKey());
    return resource;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
