{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(resource);
    }
 else {
      if (resource.isNew()) {
        session.save(resource);
      }
    }
    session.flush();
    resource.setNew(false);
    return resource;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
