{
  if (_querySuggestionsDisplayThreshold != null) {
    return _querySuggestionsDisplayThreshold;
  }
  _querySuggestionsDisplayThreshold=GetterUtil.getInteger(_portletPreferences.getValue("querySuggestionsDisplayThreshold",null),_indexSearchPropsValues.getQuerySuggestionScoresThreshold());
  if (_querySuggestionsDisplayThreshold < 0) {
    _querySuggestionsDisplayThreshold=_indexSearchPropsValues.getQuerySuggestionScoresThreshold();
  }
  return _querySuggestionsDisplayThreshold;
}
