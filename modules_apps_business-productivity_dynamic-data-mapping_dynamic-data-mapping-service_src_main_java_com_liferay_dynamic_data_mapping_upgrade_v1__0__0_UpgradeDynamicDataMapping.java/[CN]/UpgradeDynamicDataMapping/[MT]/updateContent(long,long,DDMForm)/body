{
  try (PreparedStatement ps=connection.prepareStatement("select companyId, data_ from DDMContent where contentId = " + "?")){
    ps.setLong(1,contentId);
    try (ResultSet rs=ps.executeQuery()){
      if (rs.next()) {
        long companyId=rs.getLong("companyId");
        String xml=rs.getString("data_");
        DDMFormValues ddmFormValues=getDDMFormValues(companyId,ddmForm,xml);
        String content=toJSON(ddmFormValues);
        content=renameInvalidDDMFormFieldNames(structureId,content);
        updateContent(contentId,content);
      }
    }
   }
 }
