{
  _bundleContext=bundleContext;
  EventUtil.start(_bundleContext);
  Filter filter=bundleContext.createFilter("(&(bean.id=" + ServletContext.class.getName() + ")(original.bean=*))");
  _servletContextTracker=new ServiceTracker<ServletContext,ServletContext>(bundleContext,filter,this);
  _servletContextTracker.open();
}
