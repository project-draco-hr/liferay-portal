{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select companyId, data_ from DDMContent where contentId = ?");
    ps.setLong(1,contentId);
    rs=ps.executeQuery();
    if (rs.next()) {
      long companyId=rs.getLong("companyId");
      String xml=rs.getString("data_");
      DDMFormValues ddmFormValues=getDDMFormValues(companyId,ddmForm,xml);
      updateContent(contentId,toJSON(ddmFormValues));
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
