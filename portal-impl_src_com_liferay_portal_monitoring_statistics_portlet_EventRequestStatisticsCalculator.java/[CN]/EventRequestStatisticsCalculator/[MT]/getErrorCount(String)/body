{
  CompanyStatistics companyStatistics=_ServerStatistics.getPortletContainerStatistics(companyWebId);
  long numErrors=0;
  Collection<RequestStatistics> portletsStatistics=companyStatistics.getEventStatistics();
  for (  RequestStatistics portletStatistics : portletsStatistics) {
    numErrors+=portletStatistics.getNumErrors();
  }
  return numErrors;
}
