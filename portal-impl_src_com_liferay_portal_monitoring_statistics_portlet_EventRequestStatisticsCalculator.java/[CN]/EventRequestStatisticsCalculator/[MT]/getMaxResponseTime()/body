{
  Collection<CompanyStatistics> companyStatistics=_ServerStatistics.getPortletContainerStatistics();
  long maxTime=0;
  for (  CompanyStatistics companyStatistic : companyStatistics) {
    Collection<RequestStatistics> portletsStatistics=companyStatistic.getEventStatistics();
    for (    RequestStatistics portletStatistics : portletsStatistics) {
      long tempMaxTime=portletStatistics.getMaxTime();
      if (tempMaxTime > maxTime) {
        maxTime=tempMaxTime;
      }
    }
  }
  return maxTime;
}
