{
  LocalProcessExecutor localProcessExecutor=new LocalProcessExecutor();
  try {
    List<Class<?>> classes=scanTestClasses();
    Assume.assumeFalse("No PACL test available, skip running.",classes.isEmpty());
    ProcessChannel<Result> processChannel=localProcessExecutor.execute(createProcessConfig(),new PACLTestsProcessCallable(classes));
    Future<Result> future=processChannel.getProcessNoticeableFuture();
    future.get();
  }
  finally {
    localProcessExecutor.destroy();
  }
}
