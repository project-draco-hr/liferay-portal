{
  SSLContextBuilder sslContextBuilder=SSLContexts.custom();
  sslContextBuilder.loadTrustMaterial(new TrustStrategy(){
    @Override public boolean isTrusted(    X509Certificate[] x509Certificates,    String authType){
      return true;
    }
  }
);
  return new SSLConnectionSocketFactory(sslContextBuilder.build(),new NoopHostnameVerifier());
}
