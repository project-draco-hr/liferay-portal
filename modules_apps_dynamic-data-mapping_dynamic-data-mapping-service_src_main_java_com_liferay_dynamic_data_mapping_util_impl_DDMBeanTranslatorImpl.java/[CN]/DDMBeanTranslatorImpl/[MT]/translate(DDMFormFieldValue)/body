{
  if (ddmFormFieldValue == null) {
    return null;
  }
  com.liferay.portlet.dynamicdatamapping.DDMFormFieldValue translatedDDMFormFieldValue=new com.liferay.portlet.dynamicdatamapping.DDMFormFieldValue();
  translatedDDMFormFieldValue.setInstanceId(ddmFormFieldValue.getInstanceId());
  translatedDDMFormFieldValue.setName(ddmFormFieldValue.getName());
  translatedDDMFormFieldValue.setValue(translate(ddmFormFieldValue.getValue()));
  for (  DDMFormFieldValue nestedFormFieldValue : ddmFormFieldValue.getNestedDDMFormFieldValues()) {
    translatedDDMFormFieldValue.addNestedDDMFormFieldValue(translate(nestedFormFieldValue));
  }
  return translatedDDMFormFieldValue;
}
