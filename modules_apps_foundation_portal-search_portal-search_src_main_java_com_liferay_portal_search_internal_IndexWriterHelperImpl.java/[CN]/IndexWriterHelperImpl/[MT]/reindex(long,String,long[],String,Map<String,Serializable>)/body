{
  if (Validator.isNull(className)) {
    return reindex(userId,jobName,companyIds,taskContextMap);
  }
  if (taskContextMap == null) {
    taskContextMap=new HashMap<>();
  }
  taskContextMap.put(ReindexBackgroundTaskConstants.CLASS_NAME,className);
  taskContextMap.put(ReindexBackgroundTaskConstants.COMPANY_IDS,companyIds);
  taskContextMap.put(BackgroundTaskContextMapConstants.DELETE_ON_SUCCESS,true);
  try {
    return _backgroundTaskManager.addBackgroundTask(userId,CompanyConstants.SYSTEM,jobName,ReindexSingleIndexerBackgroundTaskExecutor.class.getName(),taskContextMap,new ServiceContext());
  }
 catch (  PortalException pe) {
    throw new SearchException("Unable to schedule portal reindex",pe);
  }
}
