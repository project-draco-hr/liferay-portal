{
  if (name == null) {
    throw new IllegalArgumentException();
  }
  if (_invalid) {
    throw new IllegalStateException();
  }
  if (scope == PortletSession.PORTLET_SCOPE) {
    getSession().setAttribute(_getPortletScopeName(name),value);
  }
 else {
    getSession().setAttribute(name,value);
  }
}
