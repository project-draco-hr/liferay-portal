{
  DynamicQuery query=DynamicQueryFactoryUtil.forClass(MBStatsUser.class,MBStatsUserImpl.TABLE_NAME,PortalClassLoaderUtil.getClassLoader());
  query=query.setProjection(ProjectionFactoryUtil.sum("messageCount"));
  query=query.add(PropertyFactoryUtil.forName("userId").eq(userId));
  List<Object> results=mbStatsUserLocalService.dynamicQuery(query);
  return (Integer)results.get(0);
}
