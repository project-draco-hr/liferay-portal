{
  DynamicQuery query=DynamicQueryFactoryUtil.forClass(MBStatsUser.class,_MB_STATS_USER_TABLE_NAME,getClass().getClassLoader());
  query=query.setProjection(ProjectionFactoryUtil.sum(_MB_STATS_USER_MESSAGE_COUNT));
  query=query.add(PropertyFactoryUtil.forName(_MB_STATS_USER_USER_ID).eq(userId));
  List<Object> results=mbStatsUserLocalService.dynamicQuery(query);
  return (Integer)results.get(0);
}
