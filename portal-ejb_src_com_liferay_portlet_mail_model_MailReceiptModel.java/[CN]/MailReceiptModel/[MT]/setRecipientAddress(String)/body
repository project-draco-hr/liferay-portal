{
  if (((recipientAddress == null) && (_recipientAddress != null)) || ((recipientAddress != null) && (_recipientAddress == null)) || ((recipientAddress != null) && (_recipientAddress != null) && !recipientAddress.equals(_recipientAddress))) {
    if (!XSS_ALLOW_RECIPIENTADDRESS) {
      recipientAddress=XSSUtil.strip(recipientAddress);
    }
    _recipientAddress=recipientAddress;
  }
}
