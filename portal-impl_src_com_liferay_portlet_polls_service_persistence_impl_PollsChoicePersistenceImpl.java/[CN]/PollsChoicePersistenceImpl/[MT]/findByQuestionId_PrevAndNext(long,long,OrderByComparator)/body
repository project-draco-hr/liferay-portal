{
  PollsChoice pollsChoice=findByPrimaryKey(choiceId);
  Session session=null;
  try {
    session=openSession();
    PollsChoice[] array=new PollsChoiceImpl[3];
    array[0]=getByQuestionId_PrevAndNext(session,pollsChoice,questionId,orderByComparator,true);
    array[1]=pollsChoice;
    array[2]=getByQuestionId_PrevAndNext(session,pollsChoice,questionId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
