{
  when(_mbMessageDisplay.getThread()).thenReturn(_mbThread);
  when(_mbMessageLocalService.addDiscussionMessage(Matchers.anyLong(),Matchers.anyString(),Matchers.anyLong(),Matchers.anyString(),Matchers.anyLong(),Matchers.anyLong(),Matchers.anyLong(),Matchers.anyString(),Matchers.anyString(),(ServiceContext)Matchers.any())).thenReturn(_mbMessage);
  when(_mbMessageLocalService.getDiscussionMessageDisplay(Matchers.anyLong(),Matchers.anyLong(),Matchers.eq(BlogsEntry.class.getName()),Matchers.anyLong(),Matchers.eq(WorkflowConstants.STATUS_APPROVED))).thenReturn(_mbMessageDisplay);
  _mbCommentManagerImpl.setMBMessageLocalService(_mbMessageLocalService);
}
