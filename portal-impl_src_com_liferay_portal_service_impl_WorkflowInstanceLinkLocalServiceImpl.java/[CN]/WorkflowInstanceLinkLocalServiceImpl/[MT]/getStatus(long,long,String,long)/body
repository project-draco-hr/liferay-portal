{
  try {
    WorkflowInstanceLink workflowInstanceLink=getWorkflowInstanceLink(companyId,groupId,className,classPK);
    long workflowInstanceId=workflowInstanceLink.getWorkflowInstanceId();
    WorkflowInstance workflowInstance=WorkflowInstanceManagerUtil.getWorkflowInstance(workflowInstanceId);
    return workflowInstance.getCurrentNodeName();
  }
 catch (  NoSuchWorkflowInstanceLinkException nswile) {
    return null;
  }
}
