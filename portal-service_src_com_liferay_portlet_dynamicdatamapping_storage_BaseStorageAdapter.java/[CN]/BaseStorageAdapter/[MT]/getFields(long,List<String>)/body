{
  try {
    DDMStorageLink storageLink=DDMStorageLinkLocalServiceUtil.getClassStorageLink(classPK);
    Map<Long,Fields> fieldsMapByClasses=getFieldsMapByClasses(storageLink.getStructureId(),new long[]{classPK},fieldNames);
    return fieldsMapByClasses.get(classPK);
  }
 catch (  StorageException se) {
    throw se;
  }
catch (  Exception e) {
    throw new StorageException(e);
  }
}
