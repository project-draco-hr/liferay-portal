{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("select uuid_ from Layout where groupId = ? " + "AND friendlyURL = ?");
    ps.setLong(1,liveGroupId);
    ps.setString(2,friendlyURL);
    rs=ps.executeQuery();
    if (!rs.next()) {
      ps=con.prepareStatement("select uuid_ from Layout where groupId = ? " + "AND layoutId = ? AND privateLayout = ?");
      ps.setLong(1,liveGroupId);
      ps.setLong(2,layoutId);
      ps.setBoolean(3,privateLayout);
      rs=ps.executeQuery();
      rs.next();
    }
    String uuid=rs.getString("uuid_");
    runSQL("update Layout set uuid_ = '" + uuid + "' where"+ " plid = '"+ plid+ "';");
  }
 catch (  Exception e) {
  }
 finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
