{
  final File poshiPropertiesFile=poshiRunnerExtension.getPoshiPropertiesFile();
  if (poshiPropertiesFile.exists()) {
    project.copy(new Action<CopySpec>(){
      public void execute(      CopySpec copySpec){
        copySpec.from(poshiPropertiesFile);
        copySpec.into(project.getBuildDir());
        copySpec.rename(new Closure<String>(null){
          @SuppressWarnings("unused") public String doCall(          String fileName){
            return "poshi-runner-ext.properties";
          }
        }
);
      }
    }
);
    GradleUtil.addDependency(project,POSHI_RUNNER_CONFIGURATION_NAME,new File(project.getBuildDir(),"poshi-runner-ext.properties"));
  }
  GradleUtil.addDependency(project,POSHI_RUNNER_CONFIGURATION_NAME,"com.liferay","com.liferay.poshi.runner",poshiRunnerExtension.getVersion());
}
