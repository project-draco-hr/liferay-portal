{
  _elasticsearchConfiguration=Configurable.createConfigurable(ElasticsearchConfiguration.class,properties);
  _clusterName=_elasticsearchConfiguration.clusterName();
  _operationMode=_elasticsearchConfiguration.operationMode();
  if (!_elasticsearchConnections.containsKey(_operationMode)) {
    throw new IllegalArgumentException("No connection available for: " + _operationMode);
  }
}
