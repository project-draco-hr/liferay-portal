{
  DDMFormField ddmFormField=DDMFormTestUtil.createTextDDMFormField(name,false,false,true);
  _ddmForm.addDDMFormField(ddmFormField);
  DDMFormFieldValue ddmFormFieldValue=createDDMFormFieldValue(name,value);
  DDMFormValues formValues=DDMFormValuesTestUtil.createDDMFormValues(_ddmForm);
  formValues.addDDMFormFieldValue(ddmFormFieldValue);
  return formValues;
}
