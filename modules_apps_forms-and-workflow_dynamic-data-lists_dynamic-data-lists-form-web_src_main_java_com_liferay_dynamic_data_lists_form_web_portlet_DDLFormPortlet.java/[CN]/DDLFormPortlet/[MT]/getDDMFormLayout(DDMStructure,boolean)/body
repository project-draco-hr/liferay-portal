{
  DDMFormLayout ddmFormLayout=ddmStructure.getDDMFormLayout();
  if (requireCaptcha) {
    DDMFormLayoutPage lastDDMFormLayoutPage=getLastDDMFormLayoutPage(ddmFormLayout);
    DDMFormLayoutRow ddmFormLayoutRow=createFullColumnDDMFormLayoutRow(_DDM_FORM_FIELD_NAME_CAPTCHA);
    lastDDMFormLayoutPage.addDDMFormLayoutRow(ddmFormLayoutRow);
  }
  return ddmFormLayout;
}
