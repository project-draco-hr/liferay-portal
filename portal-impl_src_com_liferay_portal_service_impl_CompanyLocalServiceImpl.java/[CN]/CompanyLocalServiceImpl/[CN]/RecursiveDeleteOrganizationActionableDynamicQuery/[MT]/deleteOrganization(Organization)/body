{
  RecursiveDeleteOrganizationActionableDynamicQuery recursiveDeleteOrganizationActionableDynamicQuery=new RecursiveDeleteOrganizationActionableDynamicQuery();
  recursiveDeleteOrganizationActionableDynamicQuery.setCompanyId(organization.getCompanyId());
  recursiveDeleteOrganizationActionableDynamicQuery.setParentOrganizationId(organization.getOrganizationId());
