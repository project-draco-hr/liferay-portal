{
  RecursiveDeleteGroupActionableDynamicQuery recursiveDeleteGroupActionableDynamicQuery=new RecursiveDeleteGroupActionableDynamicQuery();
  recursiveDeleteGroupActionableDynamicQuery.setCompanyId(group.getCompanyId());
  recursiveDeleteGroupActionableDynamicQuery.setParentGroupId(group.getGroupId());
  recursiveDeleteGroupActionableDynamicQuery.performActions();
  groupLocalService.deleteGroup(group);
  LiveUsers.deleteGroup(group.getCompanyId(),group.getGroupId());
}
