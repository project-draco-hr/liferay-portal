{
  User user=getUser();
  DLFileEntryPermission.check(getPermissionChecker(),folderId,name,ActionKeys.DELETE);
  DLFileEntryPK pk=new DLFileEntryPK(folderId,name);
  boolean alreadyHasLock=LockServiceUtil.hasLock(DLFileEntry.class.getName(),pk,user.getUserId());
  if (!alreadyHasLock) {
    LockServiceUtil.lock(DLFileEntry.class.getName(),pk,user.getCompanyId(),user.getUserId(),DLFileEntry.LOCK_EXPIRATION_TIME);
  }
  DLFileEntryLocalServiceUtil.deleteFileEntry(folderId,name);
  if (!alreadyHasLock) {
    LockServiceUtil.unlock(DLFileEntry.class.getName(),pk);
  }
}
