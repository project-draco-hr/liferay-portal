{
  boolean emailBlogsAddedEnabled=ParamUtil.getBoolean(actionRequest,"emailBlogsAddedEnabled");
  String emailBlogsAddedSubject=ParamUtil.getString(actionRequest,"emailBlogsAddedSubject");
  String emailBlogsAddedBody=ParamUtil.getString(actionRequest,"emailBlogsAddedBody");
  if (Validator.isNull(emailBlogsAddedSubject)) {
    SessionErrors.add(actionRequest,"emailBlogsAddedSubject");
  }
 else   if (Validator.isNull(emailBlogsAddedBody)) {
    SessionErrors.add(actionRequest,"emailBlogsAddedBody");
  }
 else {
    preferences.setValue("email-blogs-added-enabled",String.valueOf(emailBlogsAddedEnabled));
    preferences.setValue("email-blogs-added-subject",emailBlogsAddedSubject);
    preferences.setValue("email-blogs-added-body",emailBlogsAddedBody);
  }
}
