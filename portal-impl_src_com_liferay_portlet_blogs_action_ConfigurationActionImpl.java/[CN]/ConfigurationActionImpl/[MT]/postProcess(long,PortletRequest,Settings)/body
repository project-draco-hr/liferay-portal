{
  BlogsSettings blogsSettings=new BlogsSettings(settings);
  removeDefaultValue(portletRequest,settings,"emailFromAddress",blogsSettings.getEmailFromAddress());
  removeDefaultValue(portletRequest,settings,"emailFromName",blogsSettings.getEmailFromName());
  String languageId=LocaleUtil.toLanguageId(LocaleUtil.getSiteDefault());
  removeDefaultValue(portletRequest,settings,"emailEntryAddedBody_" + languageId,blogsSettings.getEmailEntryAddedBody());
  removeDefaultValue(portletRequest,settings,"emailEntryAddedSubject_" + languageId,blogsSettings.getEmailEntryAddedSubject());
  removeDefaultValue(portletRequest,settings,"emailEntryUpdatedBody_" + languageId,blogsSettings.getEmailEntryUpdatedBody());
  removeDefaultValue(portletRequest,settings,"emailEntryUpdatedSubject_" + languageId,blogsSettings.getEmailEntryUpdatedSubject());
}
