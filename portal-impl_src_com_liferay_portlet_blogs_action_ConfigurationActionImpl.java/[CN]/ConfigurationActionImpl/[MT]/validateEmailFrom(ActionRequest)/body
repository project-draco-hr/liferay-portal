{
  String emailFromName=getParamProperty(actionRequest,"emailFromName");
  String emailFromAddress=getParamProperty(actionRequest,"emailFromAddress");
  if (Validator.isNull(emailFromName)) {
    SessionErrors.add(actionRequest,"emailFromName");
  }
 else   if (!Validator.isEmailAddress(emailFromAddress) && !Validator.isVariableTerm(emailFromAddress)) {
    SessionErrors.add(actionRequest,"emailFromAddress");
  }
}
