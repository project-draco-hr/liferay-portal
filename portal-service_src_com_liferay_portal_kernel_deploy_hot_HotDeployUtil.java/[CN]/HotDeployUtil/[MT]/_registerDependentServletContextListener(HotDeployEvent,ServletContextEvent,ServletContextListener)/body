{
  String servletContextName=event.getServletContextName();
synchronized (_dependentServletContexts) {
    Set<_DependentServletContext> dependentServletContexts=_dependentServletContexts.get(servletContextName);
    if (dependentServletContexts == null) {
      dependentServletContexts=new HashSet<_DependentServletContext>();
      _dependentServletContexts.put(servletContextName,dependentServletContexts);
    }
    dependentServletContexts.add(new _DependentServletContext(event.getContextClassLoader(),servletContextEvent,servletContextListener));
  }
}
