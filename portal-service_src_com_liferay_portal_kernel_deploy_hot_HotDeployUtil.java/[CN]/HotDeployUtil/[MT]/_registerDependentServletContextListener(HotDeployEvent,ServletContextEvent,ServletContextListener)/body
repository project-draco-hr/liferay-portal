{
  String servletContextName=hotDeployEvent.getServletContextName();
synchronized (_dependentServletContexts) {
    Set<DependentServletContext> dependentServletContexts=_dependentServletContexts.get(servletContextName);
    if (dependentServletContexts == null) {
      dependentServletContexts=new HashSet<DependentServletContext>();
      _dependentServletContexts.put(servletContextName,dependentServletContexts);
    }
    DependentServletContext dependentServletContext=new DependentServletContext(hotDeployEvent.getContextClassLoader(),servletContextEvent,servletContextListener);
    dependentServletContexts.add(dependentServletContext);
  }
}
