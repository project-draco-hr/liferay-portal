{
  Layout layout=_layoutTypePortlet.getLayout();
  _user=UserTestUtil.addUser(RandomTestUtil.randomString(),layout.getGroupId());
  String portletId=_layoutTypePortlet.addPortletId(_user.getUserId(),PortletKeys.TEST);
  List<Portlet> portlets=_layoutTypePortlet.getAllPortlets();
  Assert.assertEquals(1,portlets.size());
  Portlet portlet=PortletLocalServiceUtil.getPortletById(TestPropsValues.getCompanyId(),portletId);
  PortletInstanceFactoryUtil.destroy(portlet);
  portlets=_layoutTypePortlet.getAllPortlets();
  Assert.assertEquals(0,portlets.size());
}
