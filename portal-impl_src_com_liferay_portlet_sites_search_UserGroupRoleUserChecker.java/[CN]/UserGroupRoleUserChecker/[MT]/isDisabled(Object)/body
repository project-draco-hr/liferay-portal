{
  User user=(User)obj;
  Set<Role> mandatoryRoles=MembershipPolicyUtil.getMandatoryRoles(_group,user);
  if ((!MembershipPolicyUtil.isMembershipAllowed(_group,_role,user) && !isChecked(user)) || (mandatoryRoles.contains(_role) && isChecked(user))) {
    return true;
  }
 else {
    return super.isDisabled(obj);
  }
}
