{
  User user=(User)obj;
  try {
    if ((!isChecked(user) && !SiteMembershipPolicyUtil.isRoleAllowed(user.getUserId(),_group.getGroupId(),_role.getRoleId())) || (isChecked(user) && SiteMembershipPolicyUtil.isRoleRequired(user.getUserId(),_group.getGroupId(),_role.getRoleId()))) {
      return true;
    }
  }
  finally {
    return super.isDisabled(obj);
  }
}
