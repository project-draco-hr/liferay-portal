{
  if (Validator.isNull(path)) {
    return false;
  }
  String resourcePath=getResourcePath(servletContext,theme,portletId,path);
  String extension=theme.getTemplateExtension();
  if (extension.equals(TEMPLATE_EXTENSION_FTL)) {
    return TemplateResourceLoaderUtil.hasTemplateResource(TemplateConstants.LANG_TYPE_FTL,resourcePath);
  }
 else   if (extension.equals(TEMPLATE_EXTENSION_VM)) {
    return TemplateResourceLoaderUtil.hasTemplateResource(TemplateConstants.LANG_TYPE_VM,resourcePath);
  }
 else {
    URL url=null;
    if (theme.isWARFile()) {
      ServletContext themeServletContext=servletContext.getContext(theme.getContextPath());
      url=themeServletContext.getResource(resourcePath);
    }
 else {
      url=servletContext.getResource(resourcePath);
    }
    if (url == null) {
      return false;
    }
 else {
      return true;
    }
  }
}
