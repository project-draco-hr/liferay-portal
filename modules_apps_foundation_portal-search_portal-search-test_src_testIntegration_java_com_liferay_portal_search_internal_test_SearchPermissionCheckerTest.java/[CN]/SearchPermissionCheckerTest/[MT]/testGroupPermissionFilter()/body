{
  _user=UserTestUtil.addGroupAdminUser(_group);
  PermissionThreadLocal.setPermissionChecker(PermissionCheckerFactoryUtil.create(_user));
  Role role=RoleLocalServiceUtil.getRole(TestPropsValues.getCompanyId(),RoleConstants.SITE_ADMINISTRATOR);
  addViewPermission(ResourceConstants.SCOPE_GROUP,_group.getGroupId(),role.getRoleId());
  assertFieldValue(null,Field.GROUP_ID,String.valueOf(_group.getGroupId()));
  assertFieldValue(null,Field.ROLE_ID,String.valueOf(role.getRoleId()));
}
