{
  Revision revision=findByPrimaryKey(revisionId);
  Session session=null;
  try {
    session=openSession();
    Revision[] array=new RevisionImpl[3];
    array[0]=getByB_P_PrevAndNext(session,revision,branchId,plid,orderByComparator,true);
    array[1]=revision;
    array[2]=getByB_P_PrevAndNext(session,revision,branchId,plid,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
