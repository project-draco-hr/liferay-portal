{
  int count=countByB_P_S(branchId,plid,status);
  List<Revision> list=findByB_P_S(branchId,plid,status,count - 1,count,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(8);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("branchId=");
    msg.append(branchId);
    msg.append(", plid=");
    msg.append(plid);
    msg.append(", status=");
    msg.append(status);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchRevisionException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
