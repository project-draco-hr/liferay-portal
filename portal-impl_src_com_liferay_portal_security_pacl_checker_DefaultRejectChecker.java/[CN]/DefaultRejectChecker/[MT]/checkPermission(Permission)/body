{
  if (_log.isDebugEnabled()) {
    Thread.dumpStack();
  }
  Class<?> clazz=permission.getClass();
  String name=permission.getName();
  String actions=permission.getActions();
  if (Validator.isNotNull(actions)) {
    throwSecurityException(_log,"Permission " + clazz.getName() + " attempted to "+ name+ " on "+ actions);
  }
 else {
    throwSecurityException(_log,"Permission " + clazz.getName() + " attempted to "+ name);
  }
}
