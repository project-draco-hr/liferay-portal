{
  int length=value.length();
  if (length <= 0) {
    return defaultValue;
  }
  int result=0;
  boolean negative=false;
  int index=0;
  int limit=-Integer.MAX_VALUE;
  int multmin;
  int digit;
  char firstChar=value.charAt(0);
  if (firstChar < '0') {
    if (firstChar == '-') {
      negative=true;
      limit=Integer.MIN_VALUE;
    }
 else     if (firstChar != '+') {
      return defaultValue;
    }
    if (length == 1) {
      return defaultValue;
    }
    index++;
  }
  multmin=limit / 10;
  while (index < length) {
    digit=Character.digit(value.charAt(index++),10);
    if (digit < 0) {
      return defaultValue;
    }
    if (result < multmin) {
      return defaultValue;
    }
    result*=10;
    if (result < limit + digit) {
      return defaultValue;
    }
    result-=digit;
  }
  return negative ? result : -result;
}
