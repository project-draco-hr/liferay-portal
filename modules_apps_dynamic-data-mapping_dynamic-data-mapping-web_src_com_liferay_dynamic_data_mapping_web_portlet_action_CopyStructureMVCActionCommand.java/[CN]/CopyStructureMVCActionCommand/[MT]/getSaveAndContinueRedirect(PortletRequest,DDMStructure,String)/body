{
  ThemeDisplay themeDisplay=(ThemeDisplay)portletRequest.getAttribute(WebKeys.THEME_DISPLAY);
  PortletURLImpl portletURL=new PortletURLImpl(portletRequest,themeDisplay.getPpid(),themeDisplay.getPlid(),PortletRequest.RENDER_PHASE);
  portletURL.setParameter("mvcPath","/copy_structure");
  long classNameId=PortalUtil.getClassNameId(DDMStructure.class);
  portletURL.setParameter("classNameId",String.valueOf(classNameId),false);
  portletURL.setParameter("classPK",String.valueOf(structure.getStructureId()),false);
  portletURL.setParameter("copyFormTemplates",ParamUtil.getString(portletRequest,"copyFormTemplates"),false);
  portletURL.setParameter("copyDisplayTemplates",ParamUtil.getString(portletRequest,"copyDisplayTemplates"),false);
  portletURL.setWindowState(portletRequest.getWindowState());
  return portletURL.toString();
}
