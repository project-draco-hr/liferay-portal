{
  if (_ddmStructure == null) {
    _ddmStructure=DDMStructureTestUtil.addStructure(serviceContext.getScopeGroupId(),JournalArticle.class.getName());
  }
  if (_ddmTemplate == null) {
    _ddmTemplate=DDMTemplateTestUtil.addTemplate(serviceContext.getScopeGroupId(),_ddmStructure.getStructureId());
  }
  String content=DDMStructureTestUtil.getSampleStructuredContent();
  return JournalTestUtil.addArticleWithXMLContent(serviceContext.getScopeGroupId(),content,_ddmStructure.getStructureKey(),_ddmTemplate.getTemplateKey());
}
