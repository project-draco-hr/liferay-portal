{
  Session session=null;
  try {
    session=getSessionFactory().openSession();
    try {
      CyrusVirtualHBM hbm=(CyrusVirtualHBM)session.load(CyrusVirtualHBM.class,user.getEmailAddress());
      hbm.setUserId(user.getUserId());
      session.flush();
    }
 catch (    ObjectNotFoundException onfe) {
      CyrusVirtualHBM hbm=new CyrusVirtualHBM(user.getEmailAddress(),user.getUserId());
      session.save(hbm);
      session.flush();
    }
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    session.close();
  }
}
