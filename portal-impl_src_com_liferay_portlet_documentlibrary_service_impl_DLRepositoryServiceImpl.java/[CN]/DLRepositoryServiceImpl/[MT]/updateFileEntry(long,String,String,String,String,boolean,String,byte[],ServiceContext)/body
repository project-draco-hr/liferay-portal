{
  DLFileEntryPermission.check(getPermissionChecker(),fileEntryId,ActionKeys.UPDATE);
  boolean hasLock=hasFileEntryLock(fileEntryId);
  if (!hasLock) {
    lockFileEntry(fileEntryId);
  }
  DLFileEntry fileEntry=null;
  try {
    fileEntry=dlRepositoryLocalService.updateFileEntry(getUserId(),fileEntryId,sourceFileName,title,description,changeLog,majorVersion,extraSettings,bytes,serviceContext);
  }
  finally {
    if (!hasLock) {
      unlockFileEntry(fileEntryId);
    }
  }
  return fileEntry;
}
