{
  DLFolder dlFolder=dlRepositoryLocalService.getFolder(folderId);
  DLFolderPermission.check(getPermissionChecker(),dlFolder,ActionKeys.UPDATE);
  boolean hasLock=lockLocalService.hasLock(getUserId(),DLFolder.class.getName(),folderId);
  Lock lock=null;
  if (!hasLock) {
    lock=lockFolder(folderId);
  }
  try {
    return dlRepositoryLocalService.updateFolder(folderId,name,description,serviceContext);
  }
  finally {
    if (!hasLock) {
      unlockFolder(dlFolder.getGroupId(),folderId,lock.getUuid());
    }
  }
}
