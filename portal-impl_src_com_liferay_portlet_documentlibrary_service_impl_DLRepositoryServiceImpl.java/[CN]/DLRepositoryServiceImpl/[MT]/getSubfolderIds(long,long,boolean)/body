{
  List<Long> folderIds=new ArrayList<Long>();
  List<DLFolder> folders=dlFolderPersistence.filterFindByG_P(groupId,folderId);
  for (  DLFolder folder : folders) {
    List<Long> subFolderIds=getSubfolderIds(folder.getGroupId(),folder.getFolderId(),recurse);
    folderIds.add(folder.getFolderId());
    folderIds.addAll(subFolderIds);
  }
  return folderIds;
}
