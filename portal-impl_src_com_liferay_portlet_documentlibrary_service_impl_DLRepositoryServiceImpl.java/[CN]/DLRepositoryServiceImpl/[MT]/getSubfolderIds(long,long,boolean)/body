{
  List<Long> folderIds=new ArrayList<Long>();
  List<DLFolder> dlFolders=dlFolderPersistence.filterFindByG_P(groupId,folderId);
  for (  DLFolder dlFolder : dlFolders) {
    List<Long> subFolderIds=getSubfolderIds(dlFolder.getGroupId(),dlFolder.getFolderId(),recurse);
    folderIds.add(dlFolder.getFolderId());
    folderIds.addAll(subFolderIds);
  }
  return folderIds;
}
