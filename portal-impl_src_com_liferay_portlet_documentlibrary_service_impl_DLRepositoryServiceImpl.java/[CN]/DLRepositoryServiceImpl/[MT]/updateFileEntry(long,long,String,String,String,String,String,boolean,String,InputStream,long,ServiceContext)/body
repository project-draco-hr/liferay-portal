{
  DLFileEntryPermission.check(getPermissionChecker(),groupId,folderId,name,ActionKeys.UPDATE);
  boolean hasLock=hasFileEntryLock(groupId,folderId,name);
  if (!hasLock) {
    lockFileEntry(groupId,folderId,name);
  }
  DLFileEntry fileEntry=null;
  try {
    fileEntry=dlRepositoryLocalService.updateFileEntry(getUserId(),groupId,folderId,name,sourceFileName,title,description,changeLog,majorVersion,extraSettings,is,size,serviceContext);
  }
  finally {
    if (!hasLock) {
      unlockFileEntry(groupId,folderId,name);
    }
  }
  return fileEntry;
}
