{
  PreparedStatement ps=null;
  try {
    DDMForm ddmForm=fetchDDMForm(ddmStructureId);
    String ddmContentData=fetchDDMContentData(ddmContentId);
    DDMFormValues ddmFormValues=DDMFormValuesXSDDeserializer.deserialize(ddmForm,ddmContentData);
    String sql="update DDMContent set data_=? where contentId=?";
    ps=con.prepareStatement(sql);
    ps.setString(1,DDMFormValuesJSONSerializerUtil.serialize(ddmFormValues));
    ps.setLong(2,ddmContentId);
    ps.executeUpdate();
  }
  finally {
    DataAccess.cleanUp(ps);
  }
}
