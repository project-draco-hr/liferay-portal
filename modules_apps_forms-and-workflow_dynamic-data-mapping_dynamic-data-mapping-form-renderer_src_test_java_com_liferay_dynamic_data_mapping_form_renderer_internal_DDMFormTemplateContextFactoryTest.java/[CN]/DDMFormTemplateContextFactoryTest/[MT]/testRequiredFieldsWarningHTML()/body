{
  when(_language.format(Matchers.any(ResourceBundle.class),Matchers.eq("all-fields-marked-with-x-are-required"),Matchers.anyString(),Matchers.eq(false))).thenReturn("All fields marked with '*' are required.");
  DDMForm ddmForm=DDMFormTestUtil.createDDMForm();
  DDMFormRenderingContext ddmFormRenderingContext=new DDMFormRenderingContext();
  ddmFormRenderingContext.setReadOnly(true);
  Map<String,Object> templateContext=_ddmFormTemplateContextFactory.create(ddmForm,ddmFormRenderingContext);
  String expectedRequiredFieldsWarningHTML="<label class=\"required-warning\">All fields marked with '*' " + "are required.</label>";
  Assert.assertEquals(expectedRequiredFieldsWarningHTML,templateContext.get("requiredFieldsWarningMessageHTML"));
}
