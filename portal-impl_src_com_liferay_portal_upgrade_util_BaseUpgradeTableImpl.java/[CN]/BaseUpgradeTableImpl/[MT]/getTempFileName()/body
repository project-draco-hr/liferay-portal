{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  boolean isEmpty=true;
  String tempFileName=SystemProperties.get(SystemProperties.TMP_DIR) + "/temp-db-" + _tableName+ "-"+ System.currentTimeMillis();
  String selectSQL=getSelectSQL();
  BufferedWriter bw=new BufferedWriter(new FileWriter(tempFileName));
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement(selectSQL);
    rs=ps.executeQuery();
    while (rs.next()) {
      String data=null;
      try {
        data=getExportedData(rs);
        bw.write(data);
        isEmpty=false;
      }
 catch (      StagnantRowException sre) {
        if (_log.isWarnEnabled()) {
          _log.warn("Skipping stagnant data in " + _tableName + ": "+ sre.getMessage());
        }
      }
    }
    if (_log.isInfoEnabled()) {
      _log.info(_tableName + " table backed up to file " + tempFileName);
    }
  }
 catch (  Exception e) {
    FileUtil.delete(tempFileName);
    throw e;
  }
 finally {
    DataAccess.cleanUp(con,ps,rs);
    bw.close();
  }
  if (!isEmpty) {
    return tempFileName;
  }
 else {
    FileUtil.delete(tempFileName);
    return null;
  }
}
