{
  Options options=new Options();
  Option fileNamesOption=new Option("f","fileNames",true,"Set the files you would like to include in the WAR.");
  fileNamesOption.setRequired(true);
  options.addOption(fileNamesOption);
  options.addOption(new Option("h","help",false,"Print this message."));
  Option outputFileOption=new Option("o","outputFile",true,"Set the name of the output file.");
  outputFileOption.setRequired(true);
  options.addOption(outputFileOption);
  options.addOption(new Option("p","path",true,"Set the path the files will be deployed. If this is not " + "set, it will deploy to the value set in the portal " + "property \"auto.deploy.deploy.dir\"."));
  return options;
}
