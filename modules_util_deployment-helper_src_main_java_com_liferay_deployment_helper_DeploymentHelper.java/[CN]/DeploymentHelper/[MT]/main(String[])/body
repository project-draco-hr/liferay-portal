{
  try {
    Options options=_getOptions();
    CommandLineParser commandLineParser=new DefaultParser();
    CommandLine commandLine=commandLineParser.parse(options,args);
    if (commandLine.hasOption("help")) {
      _printOptions();
      return;
    }
    String deploymentFileNames=commandLine.getOptionValue("fileNames");
    String deploymentPath=commandLine.getOptionValue("path","");
    String outputFileName=commandLine.getOptionValue("outputFile");
    new DeploymentHelper(deploymentFileNames,deploymentPath,outputFileName);
  }
 catch (  ParseException pe) {
    System.err.println(pe.getMessage());
    _printOptions();
  }
catch (  Exception e) {
    System.err.println("Error running deployment helper");
    e.printStackTrace();
  }
}
