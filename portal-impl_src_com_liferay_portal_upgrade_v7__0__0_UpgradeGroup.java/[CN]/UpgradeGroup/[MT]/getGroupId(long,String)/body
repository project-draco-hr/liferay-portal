{
  try (PreparedStatement ps=connection.prepareStatement("select groupId from Group_ where companyId = ? and " + "friendlyURL = ?")){
    ps.setLong(1,companyId);
    ps.setString(2,friendlyURL);
    try (ResultSet rs=ps.executeQuery()){
      if (rs.next()) {
        return rs.getLong(1);
      }
    }
   }
   return 0;
}
