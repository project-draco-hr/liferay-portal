{
  if (community) {
    PermissionLocalServiceUtil.setContainerResourcePermissions(name,RoleConstants.ORGANIZATION_USER,ActionKeys.VIEW);
    PermissionLocalServiceUtil.setContainerResourcePermissions(name,RoleConstants.SITE_MEMBER,ActionKeys.VIEW);
  }
  if (guest) {
    PermissionLocalServiceUtil.setContainerResourcePermissions(name,RoleConstants.GUEST,ActionKeys.VIEW);
  }
  PermissionLocalServiceUtil.setContainerResourcePermissions(name,RoleConstants.OWNER,ActionKeys.VIEW);
}
