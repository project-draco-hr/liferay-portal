{
  if (Validator.isNull(_springDataSourceFileName)) {
    return;
  }
  String content=StringUtil.read(getClass().getClassLoader(),"META-INF/data-source-spring.xml");
  content=StringUtil.replace(content,new String[]{"com.liferay.portal.spring.hibernate.","com.liferay.util.spring.jndi.JndiObjectFactoryBean"},new String[]{_springHibernatePackage + ".","com.liferay.util.spring.jndi.PortalDataSourceFactoryBean"});
  File ejbFile=new File(_springDataSourceFileName);
  FileUtil.write(ejbFile,content,true);
}
