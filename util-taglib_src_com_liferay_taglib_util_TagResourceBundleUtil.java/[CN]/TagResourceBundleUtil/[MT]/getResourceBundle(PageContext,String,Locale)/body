{
  ResourceBundle pageResourceBundle=getPageResourceBundle(pageContext,baseName,locale);
  HttpServletRequest request=(HttpServletRequest)pageContext.getRequest();
  ResourceBundle portletResourceBundle=getPortletResourceBundle(request,locale);
  ResourceBundle portalResourceBundle=PortalUtil.getResourceBundle(locale);
  if (pageResourceBundle.equals(portletResourceBundle)) {
    return new AggregateResourceBundle(portletResourceBundle,portalResourceBundle);
  }
  return new AggregateResourceBundle(pageResourceBundle,portletResourceBundle,portalResourceBundle);
}
