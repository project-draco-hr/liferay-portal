{
  _multiDataCenterBits=getBits(dataCenterCount - 1);
  if (_multiDataCenterBits > _BYTE_SHIFTS_MAX) {
    throw new IllegalArgumentException("Unable to shift more than 8 bits");
  }
  if (getBits(dataCenterDeploymentId) > _multiDataCenterBits) {
    throw new IllegalArgumentException("Invalid data center count " + dataCenterCount + " or data center deployment ID "+ dataCenterDeploymentId);
  }
  _mostSignificantByte=(byte)(dataCenterDeploymentId << (_BYTE_SHIFTS_MAX - _multiDataCenterBits));
}
