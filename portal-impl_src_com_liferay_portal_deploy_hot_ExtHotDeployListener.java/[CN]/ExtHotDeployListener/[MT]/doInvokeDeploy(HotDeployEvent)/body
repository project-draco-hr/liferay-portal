{
  ServletContext servletContext=event.getServletContext();
  String servletContextName=servletContext.getServletContextName();
  if (_log.isDebugEnabled()) {
    _log.debug("Invoking deploy for " + servletContextName);
  }
  if (_log.isInfoEnabled()) {
    _log.info("Registering extension environment for " + servletContextName);
  }
  InputStream is=servletContext.getResourceAsStream(_EXT_DEPLOYMENT);
  if (is != null) {
    is.close();
    if (_log.isInfoEnabled()) {
      _log.info("Extension environment for " + servletContextName + " has been applied. No reboot or redeploy of plugins "+ "is required.");
    }
  }
 else {
    installExt(servletContext,event.getContextClassLoader());
    if (_log.isInfoEnabled()) {
      _log.info("Extension environment for " + servletContextName + " has been applied. You must reboot the server and "+ "redeploy all other plugins.");
    }
  }
}
