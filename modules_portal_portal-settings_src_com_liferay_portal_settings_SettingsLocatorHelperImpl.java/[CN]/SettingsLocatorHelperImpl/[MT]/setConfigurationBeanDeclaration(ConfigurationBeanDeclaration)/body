{
  Class<?> configurationBeanClass=configurationBeanDeclaration.getConfigurationBeanClass();
  if (_configurationBeanManagedServices.containsKey(configurationBeanClass)) {
    _log.error("ConfigurationBeanDeclaration for configuration bean class " + configurationBeanClass.getName() + " has been already "+ "started: only one ConfigurationBeanDeclaration per "+ "configuration bean is allowed.");
    return;
  }
  ConfigurationBeanManagedService configurationBeanManagedService=new ConfigurationBeanManagedService(_bundleContext,configurationBeanClass);
  _configurationBeanManagedServices.put(configurationBeanClass,configurationBeanManagedService);
  _configurationBeanClasses.put(configurationBeanManagedService.getConfigurationPid(),configurationBeanClass);
  configurationBeanManagedService.register();
}
