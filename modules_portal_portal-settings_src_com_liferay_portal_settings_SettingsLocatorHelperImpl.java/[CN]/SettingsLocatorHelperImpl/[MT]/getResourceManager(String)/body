{
  settingsId=PortletConstants.getRootPortletId(settingsId);
  Class<?> configurationBeanClass=_configurationBeanClasses.get(settingsId);
  if (configurationBeanClass == null) {
    return new ClassLoaderResourceManager(PortalClassLoaderUtil.getClassLoader());
  }
  return new ClassLoaderResourceManager(configurationBeanClass.getClassLoader());
}
