{
  PortletPreferences portletPreferences=PrefsPropsUtil.getPreferences(_user.getCompanyId(),false);
  portletPreferences.setValue(PropsKeys.COMPANY_SECURITY_SEND_PASSWORD,Boolean.FALSE.toString());
  portletPreferences.setValue(PropsKeys.COMPANY_SECURITY_SEND_PASSWORD_RESET_LINK,Boolean.TRUE.toString());
  portletPreferences.store();
  return portletPreferences;
}
