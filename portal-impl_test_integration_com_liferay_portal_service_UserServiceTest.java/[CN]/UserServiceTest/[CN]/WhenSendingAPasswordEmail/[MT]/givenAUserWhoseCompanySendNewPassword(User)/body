{
  PortletPreferences portletPreferences=PrefsPropsUtil.getPreferences(user.getCompanyId(),false);
  portletPreferences.setValue(PropsKeys.COMPANY_SECURITY_SEND_PASSWORD,Boolean.TRUE.toString());
  portletPreferences.setValue(PropsKeys.COMPANY_SECURITY_SEND_PASSWORD_RESET_LINK,Boolean.FALSE.toString());
  portletPreferences.store();
}
