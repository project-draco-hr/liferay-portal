{
  final LiferayExtension liferayExtension=GradleUtil.getExtension(project,LiferayExtension.class);
  boolean startupRequired=getPluginPackageProperty(project,"startup-required");
  if (startupRequired) {
    liferayExtension.setDeployDir(new Callable<File>(){
      @Override public File call() throws Exception {
        return new File(liferayExtension.getLiferayHome(),"osgi/war");
      }
    }
);
  }
 else {
    liferayExtension.setDeployDir(new Callable<File>(){
      @Override public File call() throws Exception {
        return new File(liferayExtension.getLiferayHome(),"deploy");
      }
    }
);
  }
}
