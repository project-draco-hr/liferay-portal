{
  _verifyProcessTrackerConfiguration=Configurable.createConfigurable(VerifyProcessTrackerConfiguration.class,properties);
  try {
    VerifyServiceTrackerMapListener verifyServiceTrackerMapListener=null;
    if (_verifyProcessTrackerConfiguration.autoVerify()) {
      verifyServiceTrackerMapListener=new VerifyServiceTrackerMapListener();
    }
    _verifyProcesses=ServiceTrackerMapFactory.singleValueMap(bundleContext,VerifyProcess.class,"verify.process.name",verifyServiceTrackerMapListener);
    _verifyProcesses.open();
  }
 catch (  InvalidSyntaxException ise) {
    throw new IllegalStateException(ise);
  }
