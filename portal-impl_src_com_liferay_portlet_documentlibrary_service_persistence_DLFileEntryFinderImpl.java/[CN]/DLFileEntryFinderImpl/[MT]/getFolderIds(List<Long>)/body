{
  if (folderIds.isEmpty()) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(folderIds.size() * 2 - 1);
  for (int i=0; i < folderIds.size(); i++) {
    sb.append("folderId = ? ");
    if ((i + 1) != folderIds.size()) {
      sb.append("OR ");
    }
  }
  return sb.toString();
}
