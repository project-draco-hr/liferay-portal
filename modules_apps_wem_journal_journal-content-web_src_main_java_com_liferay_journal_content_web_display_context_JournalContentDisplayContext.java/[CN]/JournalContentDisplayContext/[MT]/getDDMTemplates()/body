{
  if (_ddmTemplates != null) {
    return _ddmTemplates;
  }
  JournalArticle article=getArticle();
  if (article == null) {
    return Collections.emptyList();
  }
  try {
    DDMStructure ddmStructure=DDMStructureLocalServiceUtil.fetchStructure(article.getGroupId(),PortalUtil.getClassNameId(JournalArticle.class),article.getDDMStructureKey(),true);
    _ddmTemplates=DDMTemplateLocalServiceUtil.getTemplates(article.getGroupId(),PortalUtil.getClassNameId(DDMStructure.class),ddmStructure.getStructureId(),true);
  }
 catch (  PortalException pe) {
    _log.error("Unable to obtain ddm temmplate for article " + article.getId());
  }
  return _ddmTemplates;
}
