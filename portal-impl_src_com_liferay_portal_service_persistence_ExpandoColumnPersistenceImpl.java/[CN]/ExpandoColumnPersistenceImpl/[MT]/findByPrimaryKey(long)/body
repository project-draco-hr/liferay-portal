{
  ExpandoColumn expandoColumn=fetchByPrimaryKey(columnId);
  if (expandoColumn == null) {
    if (_log.isWarnEnabled()) {
      _log.warn("No ExpandoColumn exists with the primary key " + columnId);
    }
    throw new NoSuchExpandoColumnException("No ExpandoColumn exists with the primary key " + columnId);
  }
  return expandoColumn;
}
