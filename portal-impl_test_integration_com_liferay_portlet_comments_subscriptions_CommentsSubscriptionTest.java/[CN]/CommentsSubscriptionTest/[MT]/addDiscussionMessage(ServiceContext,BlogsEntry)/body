{
  MBMessageDisplay messageDisplay=MBMessageLocalServiceUtil.getDiscussionMessageDisplay(TestPropsValues.getUserId(),_group.getGroupId(),BlogsEntry.class.getName(),entry.getEntryId(),WorkflowConstants.STATUS_APPROVED);
  MBThread thread=messageDisplay.getThread();
  MBTestUtil.populateNotificationsServiceContext(serviceContext,Constants.ADD);
  return MBMessageLocalServiceUtil.addDiscussionMessage(TestPropsValues.getUserId(),RandomTestUtil.randomString(),_group.getGroupId(),BlogsEntry.class.getName(),entry.getEntryId(),thread.getThreadId(),MBMessageConstants.DEFAULT_PARENT_MESSAGE_ID,RandomTestUtil.randomString(),RandomTestUtil.randomString(),serviceContext);
}
