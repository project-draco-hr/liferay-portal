{
  BlogsEntry blogsEntry=BlogsTestUtil.addEntry(_contextUser.getUserId(),_group,true);
  MBDiscussionLocalServiceUtil.subscribeDiscussion(_contextUser.getUserId(),_group.getGroupId(),BlogsEntry.class.getName(),blogsEntry.getEntryId());
  MBTestUtil.addDiscussionMessage(_contextUser,_group.getGroupId(),BlogsEntry.class.getName(),blogsEntry.getEntryId());
  Assert.assertEquals(0,MailServiceTestUtil.getInboxSize());
}
