{
  BlogsEntry blogsEntry=BlogsTestUtil.addEntry(_contextUser.getUserId(),_group,true);
  MBMessage mbMessage=MBTestUtil.addDiscussionMessage(_contextUser,_group.getGroupId(),BlogsEntry.class.getName(),blogsEntry.getEntryId());
  MBDiscussionLocalServiceUtil.subscribeDiscussion(_user.getUserId(),_group.getGroupId(),BlogsEntry.class.getName(),blogsEntry.getEntryId());
  MBTestUtil.updateDiscussionMessage(_contextUser.getUserId(),_group.getGroupId(),mbMessage.getMessageId(),BlogsEntry.class.getName(),blogsEntry.getEntryId());
  Assert.assertEquals(1,MailServiceTestUtil.getInboxSize());
}
