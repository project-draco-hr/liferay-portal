{
  mdrRule.setNew(false);
  mdrRule=mdrRulePersistence.update(mdrRule,merge);
  Indexer indexer=IndexerRegistryUtil.getIndexer(getModelClassName());
  if (indexer != null) {
    try {
      indexer.reindex(mdrRule);
    }
 catch (    SearchException se) {
      if (_log.isWarnEnabled()) {
        _log.warn(se,se);
      }
    }
  }
  return mdrRule;
}
