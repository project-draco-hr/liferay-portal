{
  StringBuffer sb=new StringBuffer();
  if (Validator.isNull(middleName)) {
    sb.append(firstName);
    sb.append(StringPool.SPACE);
    sb.append(lastName);
  }
 else {
    sb.append(firstName);
    sb.append(StringPool.SPACE);
    sb.append(middleName);
    sb.append(StringPool.SPACE);
    sb.append(lastName);
  }
  return sb.toString();
}
