{
  byte[] bytes=new byte[size];
  generation:   for (int i=0; i < _RANDOMIZER_BUMPER_TRIES_MAX; i++) {
    _random.nextBytes(bytes);
    for (    RandomizerBumper<byte[]> randomizerBumper : randomizerBumpers) {
      if (!randomizerBumper.accept(bytes)) {
        continue generation;
      }
    }
    return bytes;
  }
  throw new IllegalStateException("Unable to generate a random byte array that is acceptable by " + "all randomizer bumpers " + Arrays.toString(randomizerBumpers) + " after "+ _RANDOMIZER_BUMPER_TRIES_MAX+ " tries");
}
