{
  Object[] finderArgs=new Object[]{new Long(pk)};
  Long count=(Long)FinderCacheUtil.getResult(FINDER_PATH_GET_ROLES_SIZE,finderArgs,this);
  if (count == null) {
    Session session=null;
    try {
      session=openSession();
      SQLQuery q=session.createSQLQuery(_SQL_GETROLESSIZE);
      q.addScalar(COUNT_COLUMN_NAME,Type.LONG);
      QueryPos qPos=QueryPos.getInstance(q);
      qPos.add(pk);
      count=(Long)q.uniqueResult();
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      if (count == null) {
        count=Long.valueOf(0);
      }
      FinderCacheUtil.putResult(FINDER_PATH_GET_ROLES_SIZE,finderArgs,count);
      closeSession(session);
    }
  }
  return count.intValue();
}
