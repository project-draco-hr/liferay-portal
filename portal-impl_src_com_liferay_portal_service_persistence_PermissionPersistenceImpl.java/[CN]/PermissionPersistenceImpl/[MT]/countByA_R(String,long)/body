{
  Object[] finderArgs=new Object[]{actionId,new Long(resourceId)};
  Long count=(Long)FinderCacheUtil.getResult(FINDER_PATH_COUNT_BY_A_R,finderArgs,this);
  if (count == null) {
    Session session=null;
    try {
      session=openSession();
      StringBundler query=new StringBundler();
      query.append(_SQL_COUNT_PERMISSION_WHERE);
      if (actionId == null) {
        query.append("permission.actionId IS NULL");
      }
 else {
        if (actionId.equals(StringPool.BLANK)) {
          query.append("(permission.actionId IS NULL OR ");
        }
        query.append("permission.actionId = ?");
        if (actionId.equals(StringPool.BLANK)) {
          query.append(")");
        }
      }
      query.append(" AND ");
      query.append("permission.resourceId = ?");
      Query q=session.createQuery(query.toString());
      QueryPos qPos=QueryPos.getInstance(q);
      if (actionId != null) {
        qPos.add(actionId);
      }
      qPos.add(resourceId);
      count=(Long)q.uniqueResult();
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      if (count == null) {
        count=Long.valueOf(0);
      }
      FinderCacheUtil.putResult(FINDER_PATH_COUNT_BY_A_R,finderArgs,count);
      closeSession(session);
    }
  }
  return count.intValue();
}
