{
  Object[] finderArgs=new Object[]{actionId,new Long(resourceId)};
  Long count=(Long)FinderCacheUtil.getResult(FINDER_PATH_COUNT_BY_A_R,finderArgs,this);
  if (count == null) {
    Session session=null;
    try {
      session=openSession();
      StringBuilder query=new StringBuilder();
      query.append("SELECT COUNT(*) ");
      query.append("FROM com.liferay.portal.model.Permission WHERE ");
      if (actionId == null) {
        query.append("actionId IS NULL");
      }
 else {
        query.append("actionId = ?");
      }
      query.append(" AND ");
      query.append("resourceId = ?");
      query.append(" ");
      Query q=session.createQuery(query.toString());
      QueryPos qPos=QueryPos.getInstance(q);
      if (actionId != null) {
        qPos.add(actionId);
      }
      qPos.add(resourceId);
      count=(Long)q.uniqueResult();
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      if (count == null) {
        count=Long.valueOf(0);
      }
      FinderCacheUtil.putResult(FINDER_PATH_COUNT_BY_A_R,finderArgs,count);
      closeSession(session);
    }
  }
  return count.intValue();
}
