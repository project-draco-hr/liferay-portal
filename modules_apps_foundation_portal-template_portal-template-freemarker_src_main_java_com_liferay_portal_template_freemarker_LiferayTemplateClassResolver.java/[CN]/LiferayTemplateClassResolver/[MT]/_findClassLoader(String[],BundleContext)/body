{
  if (allowedClasses == null) {
    allowedClasses=new String[0];
  }
  for (  String allowedClass : allowedClasses) {
    ClassLoader classLoader=_findClassLoader(allowedClass,bundleContext);
    if (classLoader != null) {
      return classLoader;
    }
    if (_log.isWarnEnabled()) {
      Bundle bundle=bundleContext.getBundle();
      _log.warn("Bundle " + bundle.getSymbolicName() + " does not export "+ allowedClass);
    }
  }
  return null;
}
