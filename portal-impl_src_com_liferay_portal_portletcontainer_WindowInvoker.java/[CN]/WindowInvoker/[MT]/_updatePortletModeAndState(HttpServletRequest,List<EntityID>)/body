{
  ThemeDisplay themeDisplay=(ThemeDisplay)request.getAttribute(WebKeys.THEME_DISPLAY);
  User user=themeDisplay.getUser();
  Layout layout=themeDisplay.getLayout();
  for (  EntityID entityID : eventUpdatedPortlets) {
    PortalUtil.updatePortletMode(entityID.getPortletWindowName(),user,layout,PortletMode.VIEW,request);
    PortalUtil.updateWindowState(entityID.getPortletWindowName(),user,layout,WindowState.NORMAL,request);
  }
}
