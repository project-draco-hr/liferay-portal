{
  ActionableDynamicQuery actionableDynamicQuery=new MBCategoryActionableDynamicQuery(){
    @Override protected void performAction(    Object object) throws PortalException, SystemException {
      MBCategory category=(MBCategory)object;
      reindexThreads(companyId,category.getGroupId(),category.getCategoryId());
    }
  }
;
  actionableDynamicQuery.setCompanyId(companyId);
  actionableDynamicQuery.performActions();
}
