{
  String body=_content.toString();
  if (replaceLinks) {
    for (int i=0; i < _LINK_REGEXP.length; i++) {
      body=body.replaceAll(_LINK_REGEXP[i],_LINK_REPLACEMENT[i]);
    }
    if (popup) {
      body=body.replaceAll(_MAILTO_REGEXP,"<a href=\"javascript: opener.compose('$2')");
    }
 else {
      body=body.replaceAll(_MAILTO_REGEXP,"<a href=\"javascript: parent.compose('$2')");
    }
  }
  return body;
}
