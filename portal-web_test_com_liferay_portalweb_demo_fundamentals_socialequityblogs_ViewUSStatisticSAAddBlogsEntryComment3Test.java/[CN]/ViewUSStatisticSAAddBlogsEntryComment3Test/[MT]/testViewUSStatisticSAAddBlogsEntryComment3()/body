{
  selenium.open("/web/guest/home/");
  selenium.clickAt("link=User Statistics Test Page",RuntimeVariables.replace("User Statistics Test Page"));
  selenium.waitForPageToLoad("30000");
  assertEquals(RuntimeVariables.replace("Joe Bloggs"),selenium.getText("xPath=(//span[@class='user-name'])[1]"));
  assertEquals(RuntimeVariables.replace("Contribution Score: 2 (Total: 2)"),selenium.getText("xPath=(//div[@class='contribution-score'])[1]"));
  assertEquals(RuntimeVariables.replace("Participation Score: 9 (Total: 9)"),selenium.getText("xPath=(//div[@class='participation-score'])[1]"));
  assertEquals(RuntimeVariables.replace("userfn userln"),selenium.getText("xPath=(//span[@class='user-name'])[2]"));
  assertEquals(RuntimeVariables.replace("Contribution Score: 0 (Total: 0)"),selenium.getText("xPath=(//div[@class='contribution-score'])[2]"));
  assertEquals(RuntimeVariables.replace("Participation Score: 2 (Total: 2)"),selenium.getText("xPath=(//div[@class='participation-score'])[2]"));
}
