{
  DDMFormValuesQuery ddmFormValuesQuery=ddmFormValuesQueryFactory.create(ddmFormValues,"/workflowDefinition");
  DDMFormFieldValue ddmFormFieldValue=ddmFormValuesQuery.selectSingleDDMFormFieldValue();
  Value value=ddmFormFieldValue.getValue();
  return value.getString(ddmFormValues.getDefaultLocale());
}
