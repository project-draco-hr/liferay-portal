{
  Layout layout=LayoutLocalServiceUtil.fetchLayoutByUuidAndGroupId(uuid,groupId,privateLayout);
  if (layout != null) {
    return layout;
  }
  try {
    Group group=GroupLocalServiceUtil.getGroup(groupId);
    while ((group=group.getParentGroup()) != null) {
      layout=LayoutLocalServiceUtil.fetchLayoutByUuidAndGroupId(uuid,group.getGroupId(),privateLayout);
      if (layout != null) {
        break;
      }
    }
    return layout;
  }
 catch (  Exception e) {
    if (_log.isDebugEnabled()) {
      _log.debug(e,e);
    }
 else     if (_log.isWarnEnabled()) {
      _log.warn("Unable to fetch layout from group " + groupId);
    }
    return null;
  }
}
