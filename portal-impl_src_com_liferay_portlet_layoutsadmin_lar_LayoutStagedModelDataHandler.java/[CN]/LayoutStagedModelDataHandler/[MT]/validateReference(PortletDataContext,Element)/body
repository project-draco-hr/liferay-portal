{
  if (!validateMissingGroupReference(portletDataContext,referenceElement)) {
    return false;
  }
  String uuid=referenceElement.attributeValue("uuid");
  Map<Long,Long> groupIds=(Map<Long,Long>)portletDataContext.getNewPrimaryKeysMap(Group.class);
  long liveGroupId=GetterUtil.getLong(referenceElement.attributeValue("live-group-id"));
  liveGroupId=MapUtil.getLong(groupIds,liveGroupId,liveGroupId);
  boolean privateLayout=GetterUtil.getBoolean(referenceElement.attributeValue("private-layout"));
  try {
    Layout existingLayout=LayoutLocalServiceUtil.fetchLayoutByUuidAndGroupId(uuid,liveGroupId,privateLayout);
    if (existingLayout == null) {
      return false;
    }
    return true;
  }
 catch (  SystemException se) {
    return false;
  }
}
