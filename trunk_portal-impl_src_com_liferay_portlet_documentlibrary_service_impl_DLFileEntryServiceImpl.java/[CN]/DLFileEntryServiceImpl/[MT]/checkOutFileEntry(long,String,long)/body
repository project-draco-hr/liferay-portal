{
  DLFileEntryPermission.check(getPermissionChecker(),fileEntryId,ActionKeys.UPDATE);
  if ((expirationTime <= 0) || (expirationTime > DLFileEntryImpl.LOCK_EXPIRATION_TIME)) {
    expirationTime=DLFileEntryImpl.LOCK_EXPIRATION_TIME;
  }
  return dlFileEntryLocalService.checkOutFileEntry(getUserId(),fileEntryId,owner,expirationTime);
}
