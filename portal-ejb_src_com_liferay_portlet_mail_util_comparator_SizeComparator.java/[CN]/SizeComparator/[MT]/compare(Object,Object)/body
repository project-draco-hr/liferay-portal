{
  Message msg1=(Message)obj1;
  Message msg2=(Message)obj2;
  try {
    if (msg1.getSize() > msg2.getSize()) {
      if (_asc) {
        return 1;
      }
 else {
        return -1;
      }
    }
 else     if (msg1.getSize() < msg2.getSize()) {
      if (_asc) {
        return -1;
      }
 else {
        return 1;
      }
    }
  }
 catch (  MessagingException me) {
    me.printStackTrace();
  }
  return 0;
}
