{
  MBMessage mbMessage=MBMessageLocalServiceUtil.fetchMBMessage(jsonObject.getLong("classPK"));
  AssetRendererFactory<?> assetRendererFactory=AssetRendererFactoryRegistryUtil.getAssetRendererFactoryByClassName(assetRenderer.getClassName());
  String typeName=assetRendererFactory.getTypeName(serviceContext.getLocale());
  ResourceBundle resourceBundle=ResourceBundle.getBundle("content.Language",serviceContext.getLocale());
  if ((mbMessage != null) && mbMessage.isDiscussion()) {
    return LanguageUtil.format(resourceBundle,"x-mentioned-you-in-a-comment-in-a-x",new String[]{HtmlUtil.escape(assetRenderer.getUserName()),StringUtil.toLowerCase(HtmlUtil.escape(typeName))},false);
  }
 else {
    return LanguageUtil.format(resourceBundle,"x-mentioned-you-in-a-x",new String[]{HtmlUtil.escape(assetRenderer.getUserName()),StringUtil.toLowerCase(HtmlUtil.escape(typeName))},false);
  }
}
