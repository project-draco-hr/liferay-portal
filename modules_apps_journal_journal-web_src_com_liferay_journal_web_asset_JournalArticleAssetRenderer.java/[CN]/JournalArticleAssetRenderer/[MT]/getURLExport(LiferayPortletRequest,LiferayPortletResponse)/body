{
  PortletURL portletURL=liferayPortletResponse.createLiferayPortletURL(getControlPanelPlid(liferayPortletRequest),JournalPortletKeys.JOURNAL,PortletRequest.RESOURCE_PHASE);
  portletURL.setParameter(ActionRequest.ACTION_NAME,"exportArticle");
  portletURL.setParameter("groupId",String.valueOf(_article.getGroupId()));
  portletURL.setParameter("articleId",_article.getArticleId());
  return portletURL;
}
