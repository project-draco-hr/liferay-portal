{
  long groupId=message.getGroupId();
  if (MBBanLocalServiceUtil.hasBan(groupId,permissionChecker.getUserId())) {
    return false;
  }
  long categoryId=message.getCategoryId();
  if ((categoryId != MBCategoryConstants.DEFAULT_PARENT_CATEGORY_ID) && (categoryId != MBCategoryConstants.DISCUSSION_CATEGORY_ID)) {
    MBCategory category=MBCategoryLocalServiceUtil.getCategory(categoryId);
    if (PropsValues.PERMISSIONS_VIEW_DYNAMIC_INHERITANCE) {
      if (!MBCategoryPermission.contains(permissionChecker,category,ActionKeys.VIEW)) {
        return false;
      }
    }
  }
  MBThread thread=MBThreadLocalServiceUtil.getThread(message.getThreadId());
  if (permissionChecker.hasOwnerPermission(message.getCompanyId(),MBMessage.class.getName(),thread.getRootMessageId(),message.getUserId(),actionId)) {
    return true;
  }
  return permissionChecker.hasPermission(groupId,MBMessage.class.getName(),thread.getRootMessageId(),actionId);
}
