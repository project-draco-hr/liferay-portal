{
  Map<String,Object> helperUtilities=_templateContextHelper.getHelperUtilities(restricted);
  VelocityContext velocityContext=getVelocityContext(helperUtilities);
  if (restricted) {
    return new RestrictedTemplate(new VelocityTemplate(templateResource,errorTemplateResource,velocityContext,_velocityEngine,_templateContextHelper),_templateContextHelper.getRestrictedVariables());
  }
  return new VelocityTemplate(templateResource,errorTemplateResource,velocityContext,_velocityEngine,_templateContextHelper);
}
