{
  boolean emailMessageUpdatedEnabled=ParamUtil.getBoolean(req,"emailMessageUpdatedEnabled");
  String emailMessageUpdatedSubjectPrefix=ParamUtil.getString(req,"emailMessageUpdatedSubjectPrefix");
  String emailMessageUpdatedBody=ParamUtil.getString(req,"emailMessageUpdatedBody");
  String emailMessageUpdatedSignature=ParamUtil.getString(req,"emailMessageUpdatedSignature");
  if (Validator.isNull(emailMessageUpdatedSubjectPrefix)) {
    SessionErrors.add(req,"emailMessageUpdatedSubjectPrefix");
  }
 else   if (Validator.isNull(emailMessageUpdatedBody)) {
    SessionErrors.add(req,"emailMessageUpdatedBody");
  }
 else {
    prefs.setValue("email-message-updated-enabled",String.valueOf(emailMessageUpdatedEnabled));
    prefs.setValue("email-message-updated-subject-prefix",emailMessageUpdatedSubjectPrefix);
    prefs.setValue("email-message-updated-body",emailMessageUpdatedBody);
    prefs.setValue("email-message-updated-signature",emailMessageUpdatedSignature);
  }
}
