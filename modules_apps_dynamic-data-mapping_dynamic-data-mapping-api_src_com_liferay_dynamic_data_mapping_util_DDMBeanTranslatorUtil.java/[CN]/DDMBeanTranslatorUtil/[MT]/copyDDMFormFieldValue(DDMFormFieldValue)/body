{
  if (ddmFormFieldValue == null) {
    return null;
  }
  com.liferay.portlet.dynamicdatamapping.storage.DDMFormFieldValue copyDDMFormFieldValue=new com.liferay.portlet.dynamicdatamapping.storage.DDMFormFieldValue();
  copyDDMFormFieldValue.setInstanceId(ddmFormFieldValue.getInstanceId());
  copyDDMFormFieldValue.setName(ddmFormFieldValue.getName());
  copyDDMFormFieldValue.setValue(copyValue(ddmFormFieldValue.getValue()));
  for (  DDMFormFieldValue nestedFormFieldValue : ddmFormFieldValue.getNestedDDMFormFieldValues()) {
    copyDDMFormFieldValue.addNestedDDMFormFieldValue(copyDDMFormFieldValue(nestedFormFieldValue));
  }
  return copyDDMFormFieldValue;
}
