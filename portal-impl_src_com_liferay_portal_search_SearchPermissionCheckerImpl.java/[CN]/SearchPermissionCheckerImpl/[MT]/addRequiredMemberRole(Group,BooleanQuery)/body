{
  if (group.isSite()) {
    Role communityMemberRole=RoleLocalServiceUtil.getRole(group.getCompanyId(),RoleConstants.SITE_MEMBER);
    permissionQuery.addTerm(Field.GROUP_ROLE_ID,group.getGroupId() + StringPool.DASH + communityMemberRole.getRoleId());
  }
  if (group.isOrganization()) {
    Role organizationMemberRole=RoleLocalServiceUtil.getRole(group.getCompanyId(),RoleConstants.ORGANIZATION_USER);
    permissionQuery.addTerm(Field.GROUP_ROLE_ID,group.getGroupId() + StringPool.DASH + organizationMemberRole.getRoleId());
  }
}
