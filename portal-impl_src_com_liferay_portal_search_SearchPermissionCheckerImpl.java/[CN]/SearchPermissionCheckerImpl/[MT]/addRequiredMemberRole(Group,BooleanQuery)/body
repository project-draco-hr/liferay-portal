{
  if (group.isCommunity()) {
    Role communityMemberRole=RoleLocalServiceUtil.getRole(group.getCompanyId(),RoleConstants.COMMUNITY_MEMBER);
    permissionQuery.addTerm(Field.GROUP_ROLE_ID,group.getGroupId() + StringPool.DASH + communityMemberRole.getRoleId());
  }
 else   if (group.isOrganization()) {
    Role organizationMemberRole=RoleLocalServiceUtil.getRole(group.getCompanyId(),RoleConstants.ORGANIZATION_MEMBER);
    permissionQuery.addTerm(Field.GROUP_ROLE_ID,group.getGroupId() + StringPool.DASH + organizationMemberRole.getRoleId());
  }
}
