{
  try {
    long groupId=GetterUtil.getLong(document.get(Field.GROUP_ID));
    String className=document.get(Field.ENTRY_CLASS_NAME);
    String classPK=document.get(Field.ROOT_ENTRY_CLASS_PK);
    if (Validator.isNull(classPK)) {
      classPK=document.get(Field.ENTRY_CLASS_PK);
    }
    Indexer indexer=IndexerRegistryUtil.getIndexer(className);
    if (Validator.isNotNull(className) && Validator.isNotNull(classPK) && indexer.isFilterSearch()) {
      if (PropsValues.PERMISSIONS_USER_CHECK_ALGORITHM == 5) {
        doAddPermissionFields_5(companyId,groupId,className,classPK,document);
      }
 else       if (PropsValues.PERMISSIONS_USER_CHECK_ALGORITHM == 6) {
        doAddPermissionFields_6(companyId,groupId,className,classPK,document);
      }
    }
  }
 catch (  NoSuchResourceException nsre) {
  }
catch (  Exception e) {
    _log.error(e,e);
  }
}
