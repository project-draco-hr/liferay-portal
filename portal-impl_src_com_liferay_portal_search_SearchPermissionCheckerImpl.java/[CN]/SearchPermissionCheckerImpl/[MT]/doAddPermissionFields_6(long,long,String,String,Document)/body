{
  Group group=GroupLocalServiceUtil.getGroup(groupId);
  List<Role> roles=ResourceActionsUtil.getRoles(group,className);
  List<Long> roleIds=new ArrayList<Long>();
  for (  Role role : roles) {
    long roleId=role.getRoleId();
    if (ResourcePermissionLocalServiceUtil.hasResourcePermission(companyId,className,ResourceConstants.SCOPE_INDIVIDUAL,classPK,roleId,ActionKeys.VIEW)) {
      roleIds.add(roleId);
    }
  }
  doc.addKeyword(Field.ROLE_ID,roleIds.toArray(new Long[roleIds.size()]));
}
