{
  WorkflowTask workflowTask=WorkflowTaskManagerUtil.getWorkflowTask(themeDisplay.getCompanyId(),workflowTaskId);
  if (!_workflowTaskPermissionChecker.hasPermission(themeDisplay.getScopeGroupId(),workflowTask,themeDisplay.getPermissionChecker())) {
    throw new PrincipalException(String.format("User %d does not have permissions to assign the task " + "%d to someone.",themeDisplay.getUserId(),workflowTaskId));
  }
}
