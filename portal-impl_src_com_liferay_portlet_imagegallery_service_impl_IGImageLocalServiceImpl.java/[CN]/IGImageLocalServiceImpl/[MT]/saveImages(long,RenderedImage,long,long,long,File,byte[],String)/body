{
  try {
    ImageLocalUtil.updateImage(largeImageId,bytes);
    saveScaledImage(renderedImage,smallImageId,contentType,PropsValues.IG_IMAGE_THUMBNAIL_MAX_HEIGHT,PropsValues.IG_IMAGE_THUMBNAIL_MAX_WIDTH);
    if (custom1ImageId > 0) {
      saveScaledImage(renderedImage,custom1ImageId,contentType,PropsValues.IG_IMAGE_CUSTOM_1_MAX_HEIGHT,PropsValues.IG_IMAGE_CUSTOM_1_MAX_WIDTH);
    }
    if (custom2ImageId > 0) {
      saveScaledImage(renderedImage,custom2ImageId,contentType,PropsValues.IG_IMAGE_CUSTOM_2_MAX_HEIGHT,PropsValues.IG_IMAGE_CUSTOM_2_MAX_WIDTH);
    }
  }
 catch (  IOException ioe) {
    throw new SystemException(ioe);
  }
}
