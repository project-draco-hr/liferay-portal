{
  igImagePersistence.remove(image);
  resourceLocalService.deleteResource(image.getCompanyId(),IGImage.class.getName(),ResourceConstants.SCOPE_INDIVIDUAL,image.getImageId());
  imageLocalService.deleteImage(image.getSmallImageId());
  imageLocalService.deleteImage(image.getLargeImageId());
  assetEntryLocalService.deleteEntry(IGImage.class.getName(),image.getImageId());
  expandoValueLocalService.deleteValues(IGImage.class.getName(),image.getImageId());
  socialActivityLocalService.deleteActivities(IGImage.class.getName(),image.getImageId());
  try {
    Indexer.deleteImage(image.getCompanyId(),image.getImageId());
  }
 catch (  SearchException se) {
    _log.error("Deleting index " + image.getImageId(),se);
  }
}
