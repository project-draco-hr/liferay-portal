{
  _mainLock.lock();
  try {
    long count=_completedTaskCount;
    for (    WorkerTask workerTask : _workerTasks) {
      count+=workerTask._localCompletedTaskCount;
      if (workerTask._isLocked()) {
        count++;
      }
    }
    return count + _taskQueue.size();
  }
  finally {
    _mainLock.unlock();
  }
}
