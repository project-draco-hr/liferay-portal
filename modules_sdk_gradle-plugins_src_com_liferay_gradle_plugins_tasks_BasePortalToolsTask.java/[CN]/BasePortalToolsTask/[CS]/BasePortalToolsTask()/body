{
  project=getProject();
  liferayExtension=GradleUtil.getExtension(project,LiferayExtension.class);
  Configuration configuration=GradleUtil.addConfiguration(project,getConfigurationName());
  configuration.setDescription("The " + getToolName() + " tool to be used in this project.");
  configuration.setVisible(false);
  GradleUtil.executeIfEmpty(configuration,new Action<Configuration>(){
    @Override public void execute(    Configuration configuration){
      addDependencies();
    }
  }
);
}
