{
  List<Role> roles=new ArrayList<>();
  long[] siteRolesRoleIds=StringUtil.split(ParamUtil.getString(portletRequest,"siteRolesRoleIds"),0L);
  for (  long siteRolesRoleId : siteRolesRoleIds) {
    if (siteRolesRoleId == 0) {
      continue;
    }
    Role role=roleLocalService.getRole(siteRolesRoleId);
    roles.add(role);
  }
  return roles;
}
