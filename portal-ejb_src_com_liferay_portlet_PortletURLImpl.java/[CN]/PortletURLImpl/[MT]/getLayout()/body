{
  if (_layout == null) {
    try {
      String layoutId=Layout.getLayoutId(_plid);
      String ownerId=Layout.getOwnerId(_plid);
      _layout=LayoutLocalServiceUtil.getLayout(layoutId,ownerId);
    }
 catch (    Exception e) {
      _log.warn("Layout cannot be found for " + _plid);
    }
  }
  return _layout;
}
