{
  ResourceBundle portalResourceBundle=ResourceBundleUtil.getBundle("content.Language",locale,PortalClassLoaderUtil.getClassLoader());
  String resourceBundleBaseName=getResourceBundleBaseName(_clazz);
  return new AggregateResourceBundle(portalResourceBundle,ResourceBundleUtil.getBundle(resourceBundleBaseName,locale,_clazz.getClassLoader()));
}
