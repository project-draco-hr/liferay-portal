{
  for (  Class<?> interfaceClass : clazz.getInterfaces()) {
    mountResourceBundleHierarchy(interfaceClass,resourceBundles,locale);
  }
  String baseName=getResourceBundleBaseName(clazz);
  if (Validator.isNull(baseName)) {
    return;
  }
  ResourceBundle resourceBundle=ResourceBundleUtil.getBundle(baseName,locale,clazz.getClassLoader());
  if (resourceBundle != null) {
    resourceBundles.add(resourceBundle);
  }
}
