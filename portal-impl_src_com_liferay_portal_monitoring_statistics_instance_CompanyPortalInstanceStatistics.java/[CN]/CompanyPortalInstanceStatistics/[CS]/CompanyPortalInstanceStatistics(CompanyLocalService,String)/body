{
  try {
    Company company=companyLocalService.getCompanyByWebId(webId);
    _companyId=company.getCompanyId();
    _portalInstanceName=webId;
    _requestStatistics=new RequestStatistics(_portalInstanceName);
  }
 catch (  Exception ex) {
    throw new IllegalStateException("Unable to obtain company details for: " + webId,ex);
  }
}
