{
  PreparedStatement ps=null;
  try {
    ps=connection.prepareStatement("update " + tableName + " set workflowContext = ? where "+ primaryKeyName+ " = ?");
    ps.setString(1,workflowContext);
    ps.setLong(2,primaryKeyValue);
    ps.executeUpdate();
  }
  finally {
    DataAccess.cleanUp(ps);
  }
}
