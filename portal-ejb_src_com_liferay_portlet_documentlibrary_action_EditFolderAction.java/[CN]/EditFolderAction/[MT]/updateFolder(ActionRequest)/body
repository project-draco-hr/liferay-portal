{
  Layout layout=(Layout)req.getAttribute(WebKeys.LAYOUT);
  String folderId=ParamUtil.getString(req,"folderId");
  String parentFolderId=ParamUtil.getString(req,"parentFolderId");
  String name=ParamUtil.getString(req,"name");
  String description=ParamUtil.getString(req,"description");
  String[] communityPermissions=req.getParameterValues("communityPermissions");
  String[] guestPermissions=req.getParameterValues("guestPermissions");
  if (Validator.isNull(folderId)) {
    DLFolderServiceUtil.addFolder(layout.getPlid(),parentFolderId,name,description,communityPermissions,guestPermissions);
  }
 else {
    DLFolderServiceUtil.updateFolder(folderId,parentFolderId,name,description);
  }
}
