{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("select count(*) from ResourcePermission where name = ? and " + "scope = ? and roleId = ? and ownerId = 0");
    ps.setString(1,name);
    ps.setInt(2,ResourceConstants.SCOPE_INDIVIDUAL);
    ps.setLong(3,role.getRoleId());
    rs=ps.executeQuery();
    rs.next();
    return rs.getLong(1);
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
