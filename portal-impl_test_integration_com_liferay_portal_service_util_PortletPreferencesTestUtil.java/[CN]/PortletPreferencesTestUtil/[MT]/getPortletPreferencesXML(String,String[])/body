{
  StringBundler sb=new StringBundler(7 + (values.length * 3));
  sb.append("<portlet-preferences>");
  sb.append("<preference>");
  sb.append("<name>");
  sb.append(name);
  sb.append("</name>");
  for (  String value : values) {
    sb.append("<value>");
    sb.append(value);
    sb.append("</value>");
  }
  sb.append("</preference>");
  sb.append("</portlet-preferences>");
  return sb.toString();
}
