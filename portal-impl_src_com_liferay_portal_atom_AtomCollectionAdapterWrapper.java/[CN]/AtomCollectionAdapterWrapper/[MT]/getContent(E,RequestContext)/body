{
  Abdera abdera=requestContext.getAbdera();
  AtomEntryContent atomContent=_atomCollectionAdapter.getEntryContent(entry,new AtomRequestContextImpl(requestContext));
  Factory factory=abdera.getFactory();
  Content content=null;
switch (atomContent.getType()) {
case HTML:
    content=factory.newContent(Content.Type.HTML);
  break;
case MEDIA:
content=factory.newContent(Content.Type.MEDIA);
break;
case TEXT:
content=factory.newContent(Content.Type.TEXT);
break;
case XHTML:
content=factory.newContent(Content.Type.XHTML);
break;
case XML:
content=factory.newContent(Content.Type.XML);
break;
}
content.setText(atomContent.getText());
if (atomContent.getSrcLink() != null) {
content.setSrc(atomContent.getSrcLink());
}
if (atomContent.getMimeType() != null) {
content.setMimeType(atomContent.getMimeType());
}
return content;
}
