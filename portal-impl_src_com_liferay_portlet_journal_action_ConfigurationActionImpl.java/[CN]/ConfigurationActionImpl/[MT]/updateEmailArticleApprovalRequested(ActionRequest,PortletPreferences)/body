{
  boolean emailArticleApprovalRequestedEnabled=ParamUtil.getBoolean(actionRequest,"emailArticleApprovalRequestedEnabled");
  String emailArticleApprovalRequestedSubject=ParamUtil.getString(actionRequest,"emailArticleApprovalRequestedSubject");
  String emailArticleApprovalRequestedBody=ParamUtil.getString(actionRequest,"emailArticleApprovalRequestedBody");
  if (Validator.isNull(emailArticleApprovalRequestedSubject)) {
    SessionErrors.add(actionRequest,"emailArticleApprovalRequestedSubject");
  }
 else   if (Validator.isNull(emailArticleApprovalRequestedBody)) {
    SessionErrors.add(actionRequest,"emailArticleApprovalRequestedBody");
  }
 else {
    preferences.setValue("email-article-approval-requested-enabled",String.valueOf(emailArticleApprovalRequestedEnabled));
    preferences.setValue("email-article-approval-requested-subject",emailArticleApprovalRequestedSubject);
    preferences.setValue("email-article-approval-requested-body",emailArticleApprovalRequestedBody);
  }
}
