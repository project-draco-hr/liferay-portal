{
  boolean emailArticleReviewEnabled=ParamUtil.getBoolean(actionRequest,"emailArticleReviewEnabled");
  String emailArticleReviewSubject=ParamUtil.getString(actionRequest,"emailArticleReviewSubject");
  String emailArticleReviewBody=ParamUtil.getString(actionRequest,"emailArticleReviewBody");
  if (Validator.isNull(emailArticleReviewSubject)) {
    SessionErrors.add(actionRequest,"emailArticleReviewSubject");
  }
 else   if (Validator.isNull(emailArticleReviewBody)) {
    SessionErrors.add(actionRequest,"emailArticleReviewBody");
  }
 else {
    prefs.setValue("email-article-review-enabled",String.valueOf(emailArticleReviewEnabled));
    prefs.setValue("email-article-review-subject",emailArticleReviewSubject);
    prefs.setValue("email-article-review-body",emailArticleReviewBody);
  }
}
