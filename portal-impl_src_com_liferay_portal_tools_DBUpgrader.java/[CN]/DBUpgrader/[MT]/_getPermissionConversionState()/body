{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    DatabaseMetaData metaData=con.getMetaData();
    String catalog=con.getCatalog();
    ResultSet tables=metaData.getTables(catalog,null,"ResourceCode",null);
    if (!tables.next()) {
      return 0;
    }
    ps=con.prepareStatement("select count(*) as total from ResourceCode");
    rs=ps.executeQuery();
    if (rs.next()) {
      return rs.getInt("total");
    }
    return 0;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
