{
  LocalRepository localRepository=repositoryProvider.getFolderLocalRepository(folderId);
  List<FileEntry> fileEntries=localRepository.getRepositoryFileEntries(UserConstants.USER_ID_DEFAULT,folderId,QueryUtil.ALL_POS,QueryUtil.ALL_POS,null);
  for (  FileEntry fileEntry : fileEntries) {
    dlAppHelperLocalService.deleteFileEntry(fileEntry);
  }
  Folder folder=getFolder(folderId);
  localRepository.deleteFolder(folderId);
  dlAppHelperLocalService.deleteFolder(folder);
}
