{
  super(CommentPortletKeys.COMMENT,0,UserNotificationDefinition.NOTIFICATION_TYPE_ADD_ENTRY,"receive-a-notification-when-someone-adds-a-new-comment-to-" + "comments-you-are-subscribed-to");
  addUserNotificationDeliveryType(new UserNotificationDeliveryType("email",UserNotificationDeliveryConstants.TYPE_EMAIL,true,true));
