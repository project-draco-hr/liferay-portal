{
  ActionableDynamicQuery actionableDynamicQuery=_ddmTemplateLinkLocalService.getActionableDynamicQuery();
  actionableDynamicQuery.setPerformActionMethod(new ActionableDynamicQuery.PerformActionMethod(){
    @Override public void performAction(    Object object) throws PortalException {
      DDMTemplateLink templateLink=(DDMTemplateLink)object;
      verifyTemplateLink(templateLink);
    }
  }
);
}
