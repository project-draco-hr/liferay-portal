{
  selenium.click("link=Post Reply");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("_36_postReplyBody0")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.typeKeys("_36_postReplyBody0",RuntimeVariables.replace("This is a test Post Repl."));
  selenium.type("_36_postReplyBody0",RuntimeVariables.replace("This is a test Post Reply."));
  selenium.click(RuntimeVariables.replace("_36_postReplyButton0"));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isTextPresent("This is a test Post Reply."));
}
