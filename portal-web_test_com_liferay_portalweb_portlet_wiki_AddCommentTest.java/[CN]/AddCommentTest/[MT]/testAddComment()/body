{
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Wiki Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.click(RuntimeVariables.replace("link=Wiki Test Page"));
  selenium.waitForPageToLoad("30000");
  selenium.click("link=Add Comment");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("_36_postReplyBody0")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.typeKeys("_36_postReplyBody0",RuntimeVariables.replace("This is a test comment."));
  selenium.type("_36_postReplyBody0",RuntimeVariables.replace("This is a test comment."));
  selenium.click(RuntimeVariables.replace("_36_postReplyButton0"));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isTextPresent("Your request processed successfully."));
  assertTrue(selenium.isElementPresent("link=This is a test comment."));
  assertEquals("This is a test comment.",selenium.getText("//td[2]/div[1]"));
}
