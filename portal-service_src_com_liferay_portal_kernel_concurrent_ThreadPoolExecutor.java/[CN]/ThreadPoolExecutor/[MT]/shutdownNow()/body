{
  _mainLock.lock();
  try {
    int state=_runState;
    if (state < _STOP) {
      _runState=_STOP;
    }
    for (    WorkerTask worker : _workerTaskSet) {
      worker._thread.interrupt();
    }
    List<Runnable> tasks=new ArrayList<Runnable>();
    _taskQueue.drainTo(tasks);
    _tryTerminate();
    return tasks;
  }
  finally {
    _mainLock.unlock();
  }
}
