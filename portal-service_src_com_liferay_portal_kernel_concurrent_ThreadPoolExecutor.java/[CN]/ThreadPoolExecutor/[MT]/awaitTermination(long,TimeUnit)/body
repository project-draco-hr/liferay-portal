{
  long nanos=timeUnit.toNanos(timeout);
  _mainLock.lock();
  try {
    while (true) {
      if (_runState == _TERMINATED) {
        return true;
      }
      if (nanos <= 0) {
        return false;
      }
      nanos=_terminationCondition.awaitNanos(nanos);
    }
  }
  finally {
    _mainLock.unlock();
  }
}
