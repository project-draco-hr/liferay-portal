{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(mbMessage);
    }
 else {
      if (mbMessage.isNew()) {
        session.save(mbMessage);
      }
    }
    session.flush();
    mbMessage.setNew(false);
    return mbMessage;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
