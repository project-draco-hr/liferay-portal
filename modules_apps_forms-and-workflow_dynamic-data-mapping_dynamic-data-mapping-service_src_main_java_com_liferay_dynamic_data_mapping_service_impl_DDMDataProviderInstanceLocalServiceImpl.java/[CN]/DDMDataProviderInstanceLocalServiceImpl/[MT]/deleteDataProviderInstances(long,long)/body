{
  ActionableDynamicQuery actionableDynamicQuery=ddmDataProviderInstanceLocalService.getActionableDynamicQuery();
  actionableDynamicQuery.setAddCriteriaMethod(new ActionableDynamicQuery.AddCriteriaMethod(){
    @Override public void addCriteria(    DynamicQuery dynamicQuery){
      Property groupIdProperty=PropertyFactoryUtil.forName("groupId");
      dynamicQuery.add(groupIdProperty.eq(groupId));
    }
  }
);
  actionableDynamicQuery.setPerformActionMethod(new ActionableDynamicQuery.PerformActionMethod<DDMDataProviderInstance>(){
    @Override public void performAction(    DDMDataProviderInstance ddmDataProviderInstance) throws PortalException {
      deleteDataProviderInstance(ddmDataProviderInstance);
    }
  }
);
  actionableDynamicQuery.setCompanyId(companyId);
  actionableDynamicQuery.performActions();
}
