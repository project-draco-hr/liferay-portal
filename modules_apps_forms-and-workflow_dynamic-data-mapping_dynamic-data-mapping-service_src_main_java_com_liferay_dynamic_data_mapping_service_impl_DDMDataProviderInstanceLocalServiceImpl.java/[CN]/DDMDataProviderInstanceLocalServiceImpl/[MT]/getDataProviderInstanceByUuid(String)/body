{
  List<DDMDataProviderInstance> ddmDataProviderInstances=ddmDataProviderInstancePersistence.findByUuid(uuid);
  if (ddmDataProviderInstances.isEmpty()) {
    throw new NoSuchDataProviderInstanceException("No DataProviderInstance found with uuid: " + uuid);
  }
  return ddmDataProviderInstances.get(0);
}
