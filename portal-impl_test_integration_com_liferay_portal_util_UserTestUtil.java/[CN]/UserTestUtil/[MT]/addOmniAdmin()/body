{
  User user=addUser();
  user.setCompanyId(PortalInstances.getDefaultCompanyId());
  UserLocalServiceUtil.updateUser(user);
  Role administratorRole=RoleLocalServiceUtil.getRole(PortalInstances.getDefaultCompanyId(),RoleConstants.ADMINISTRATOR);
  UserLocalServiceUtil.setRoleUsers(administratorRole.getRoleId(),new long[]{user.getUserId()});
  return user;
}
