{
  Resource resource=null;
  try {
    resource=ResourceLocalServiceUtil.getResource(companyId,resourceName,scope,resourcePrimKey);
  }
 catch (  NoSuchResourceException nsre) {
    ResourceLocalServiceUtil.addResources(companyId,groupId,null,resourceName,resourcePrimKey,portletActions,true,true);
    resource=ResourceLocalServiceUtil.getResource(companyId,resourceName,scope,resourcePrimKey);
  }
  return resource;
}
