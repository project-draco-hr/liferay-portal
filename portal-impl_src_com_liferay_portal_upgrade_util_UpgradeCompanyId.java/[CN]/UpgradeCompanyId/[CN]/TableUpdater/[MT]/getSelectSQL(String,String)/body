{
  StringBundler sb=new StringBundler(10);
  sb.append("select companyId from ");
  sb.append(foreignTableName);
  sb.append(" where ");
  sb.append(foreignTableName);
  sb.append(".");
  sb.append(foreignColumnName);
  sb.append(" = ");
  sb.append(_tableName);
  sb.append(".");
  sb.append(_columnName);
  return sb.toString();
}
