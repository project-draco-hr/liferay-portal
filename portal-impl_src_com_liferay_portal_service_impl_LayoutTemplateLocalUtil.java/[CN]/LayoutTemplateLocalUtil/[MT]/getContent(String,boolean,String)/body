{
  LayoutTemplate layoutTemplate=getLayoutTemplate(layoutTemplateId,standard,themeId);
  if (layoutTemplate == null) {
    if (_log.isWarnEnabled()) {
      _log.warn("Layout template " + layoutTemplateId + " does not exist");
    }
    layoutTemplate=getLayoutTemplate(PropsValues.DEFAULT_USER_LAYOUT_TEMPLATE_ID,standard,themeId);
    if (layoutTemplate == null) {
      _log.error("Layout template " + layoutTemplateId + " and default user layout template "+ PropsValues.DEFAULT_USER_LAYOUT_TEMPLATE_ID+ " does not exist");
      return StringPool.BLANK;
    }
  }
  if (PropsValues.LAYOUT_TEMPLATE_CACHE_ENABLED) {
    return layoutTemplate.getContent();
  }
 else {
    try {
      return layoutTemplate.getUncachedContent();
    }
 catch (    IOException ioe) {
      throw new SystemException(ioe);
    }
  }
}
