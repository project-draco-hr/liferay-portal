{
  ThemeDisplay themeDisplay=(ThemeDisplay)_request.getAttribute(WebKeys.THEME_DISPLAY);
  PortletURL editLayoutURL=PortletProviderUtil.getPortletURL(_request,Layout.class.getName(),PortletProvider.Action.EDIT);
  editLayoutURL.setParameter("redirect",themeDisplay.getURLCurrent());
  editLayoutURL.setParameter("groupId",String.valueOf(themeDisplay.getScopeGroupId()));
  editLayoutURL.setParameter("viewLayout",Boolean.TRUE.toString());
  return editLayoutURL;
}
