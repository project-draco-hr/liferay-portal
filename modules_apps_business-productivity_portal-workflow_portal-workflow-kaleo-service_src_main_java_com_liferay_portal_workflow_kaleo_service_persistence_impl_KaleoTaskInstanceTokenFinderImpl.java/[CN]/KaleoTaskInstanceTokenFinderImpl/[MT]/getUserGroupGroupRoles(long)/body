{
  List<UserGroupGroupRole> userGroupGroupRoles=new ArrayList<>();
  List<UserGroup> userGroups=UserGroupLocalServiceUtil.getUserUserGroups(userId);
  for (  UserGroup userGroup : userGroups) {
    userGroupGroupRoles.addAll(UserGroupGroupRoleLocalServiceUtil.getUserGroupGroupRoles(userGroup.getUserGroupId()));
  }
  return userGroupGroupRoles;
}
