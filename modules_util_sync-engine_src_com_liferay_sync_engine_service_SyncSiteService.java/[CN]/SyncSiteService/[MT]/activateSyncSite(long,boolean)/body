{
  SyncSite syncSite=fetchSyncSite(syncSiteId);
  if (syncSite.isActive()) {
    return syncSite;
  }
  syncSite.setActive(true);
  if (reset) {
    syncSite.setRemoteSyncTime(-1);
    syncSite.setState(SyncSite.STATE_SYNCED);
    syncSite.setUiEvent(SyncSite.UI_EVENT_NONE);
  }
  update(syncSite);
  return syncSite;
}
