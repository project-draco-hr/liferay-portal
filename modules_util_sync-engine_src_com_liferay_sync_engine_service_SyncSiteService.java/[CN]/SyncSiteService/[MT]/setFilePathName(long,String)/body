{
  SyncSite syncSite=fetchSyncSite(syncSiteId);
  String filePathName=syncSite.getFilePathName();
  SyncAccount syncAccount=SyncAccountService.fetchSyncAccount(syncSite.getSyncAccountId());
  syncSite.setFilePathName(FileUtil.getFilePathName(syncAccount.getFilePathName(),name));
  update(syncSite);
  SyncFileService.renameSyncFiles(filePathName,FileUtil.getFilePathName(syncAccount.getFilePathName(),name));
  return syncSite;
}
