{
  Session session=null;
  try {
    session=HibernateUtil.openSession();
    String sql=CustomSQLUtil.get(COUNT_BY_USERS_ROLES);
    sql=StringUtil.replace(sql,"[$PERMISSION_IDS$]",_getPermissionIds(permissions,"Roles_Permissions"));
    SQLQuery q=session.createSQLQuery(sql);
    q.addScalar(HibernateUtil.getCountColumnName(),Hibernate.INTEGER);
    QueryPos qPos=QueryPos.getInstance(q);
    _setPermissionIds(qPos,permissions);
    qPos.add(userId);
    Iterator itr=q.list().iterator();
    if (itr.hasNext()) {
      Integer count=(Integer)itr.next();
      if (count != null) {
        return count.intValue();
      }
    }
    return 0;
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
 finally {
    HibernateUtil.closeSession(session);
  }
}
