{
  LocalizationUtil localizationUtil=new LocalizationUtil();
  localizationUtil.setLocalization(new LocalizationImpl());
  _settings=mock(Settings.class);
  when(_settings.getValue(_KEY,null)).thenReturn("valueDefault");
  when(_settings.getValue(_KEY + "_en_GB",null)).thenReturn("value_en_GB");
  when(_settings.getValue(_KEY + "_en_US",null)).thenReturn("value_en_US");
  when(_settings.getValue(_KEY + "_es_ES",null)).thenReturn("value_es_ES");
  _typedSettings=new TypedSettings(_settings,_DEFAULT_LOCALE,_AVAILABLE_LOCALES);
}
