{
  try {
    while (_connected) {
      _socket.receive(_inboundPacket);
      _handler.process(_inboundPacket);
    }
  }
 catch (  IOException ioe) {
    if (!_connected) {
      if (_log.isDebugEnabled()) {
        _log.debug("Unable to disconnect",ioe);
      }
      return;
    }
    _log.error("Unable to process ",ioe);
    _socket.disconnect();
    _connected=false;
    _handler.errorReceived(ioe);
  }
}
