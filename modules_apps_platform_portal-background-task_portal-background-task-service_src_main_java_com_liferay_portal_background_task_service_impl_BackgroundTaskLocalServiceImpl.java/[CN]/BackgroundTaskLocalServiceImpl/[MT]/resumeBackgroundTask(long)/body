{
  BackgroundTask backgroundTask=backgroundTaskPersistence.fetchByPrimaryKey(backgroundTaskId);
  if ((backgroundTask == null) || (backgroundTask.getStatus() != BackgroundTaskConstants.STATUS_QUEUED)) {
    if (_log.isDebugEnabled()) {
      _log.debug("No background task found with queued status for " + "background task ID " + backgroundTaskId);
    }
    return;
  }
  if (_log.isDebugEnabled()) {
    _log.debug("Attempting to resume background task " + backgroundTaskId);
  }
  Message message=new Message();
  message.put(BackgroundTaskConstants.BACKGROUND_TASK_ID,backgroundTaskId);
  MessageBusUtil.sendMessage(DestinationNames.BACKGROUND_TASK,message);
}
