{
  ModelListener listener=null;
  if (Validator.isNotNull(_LISTENER)) {
    try {
      listener=(ModelListener)Class.forName(_LISTENER).newInstance();
    }
 catch (    Exception e) {
      _log.error(e);
    }
  }
  if (listener != null) {
    listener.onBeforeRemove(findByPrimaryKey(mbMessagePK));
  }
  com.liferay.portlet.messageboards.model.MBMessage mbMessage=getPersistence().remove(mbMessagePK);
  if (listener != null) {
    listener.onAfterRemove(mbMessage);
  }
  return mbMessage;
}
