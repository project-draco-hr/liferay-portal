{
  try {
    WorkflowResultContainer<List<TaskInstanceInfo>> response=(WorkflowResultContainer<List<TaskInstanceInfo>>)_synchronousMessageSender.send(TaskInstanceRequest.createGetTaskInstanceInfosByRoleRequest(roleId));
    if (response.hasError()) {
      throw response.getException();
    }
 else {
      return response.getResult();
    }
  }
 catch (  MessageBusException ex) {
    throw new WorkflowException("Unable to get task instances information by role.",ex);
  }
}
