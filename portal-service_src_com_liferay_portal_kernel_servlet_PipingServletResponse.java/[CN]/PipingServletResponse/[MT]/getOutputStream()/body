{
  if (_servletOutputStream == null) {
    if (_log.isWarnEnabled()) {
      _log.warn("Getting an output stream when a writer is available is " + "not recommended because it is slow");
    }
    _servletOutputStream=new PipingServletOutputStream(new WriterOutputStream(_printWriter,getCharacterEncoding(),true));
  }
  return _servletOutputStream;
}
