{
  JournalStructure journalStructure=findByPrimaryKey(id);
  Session session=null;
  try {
    session=openSession();
    JournalStructure[] array=new JournalStructureImpl[3];
    array[0]=getByParentStructureId_PrevAndNext(session,journalStructure,parentStructureId,orderByComparator,true);
    array[1]=journalStructure;
    array[2]=getByParentStructureId_PrevAndNext(session,journalStructure,parentStructureId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
