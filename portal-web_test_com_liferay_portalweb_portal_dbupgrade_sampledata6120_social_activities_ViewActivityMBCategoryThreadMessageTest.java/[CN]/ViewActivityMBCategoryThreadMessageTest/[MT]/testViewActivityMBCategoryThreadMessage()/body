{
  selenium.selectWindow("null");
  selenium.selectFrame("relative=top");
  selenium.open("/web/joebloggs/home/");
  selenium.waitForVisible("link=Activities Page");
  selenium.clickAt("link=Activities Page",RuntimeVariables.replace("Activities Page"));
  selenium.waitForPageToLoad("30000");
  assertEquals(RuntimeVariables.replace("Joe wrote a new message board post, MB Category Thread Message Subject, in Liferay."),selenium.getText("xPath=(//div[@class='activity-title'])[1]"));
  assertEquals(RuntimeVariables.replace("MB Category Thread Message Subject"),selenium.getText("xPath=(//div[@class='activity-title'])[1]/a"));
}
