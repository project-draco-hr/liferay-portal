{
  if (JournalServiceConfigurationValues.JOURNAL_ARTICLE_EXPIRE_ALL_VERSIONS) {
    List<JournalArticle> articles=journalArticlePersistence.findByG_A(groupId,articleId,QueryUtil.ALL_POS,QueryUtil.ALL_POS,new ArticleVersionComparator(true));
    for (    JournalArticle article : articles) {
      journalArticleLocalService.expireArticle(userId,groupId,article.getArticleId(),article.getVersion(),articleURL,serviceContext);
    }
  }
 else {
    JournalArticle article=getLatestArticle(groupId,articleId,WorkflowConstants.STATUS_APPROVED);
    journalArticleLocalService.expireArticle(userId,groupId,article.getArticleId(),article.getVersion(),articleURL,serviceContext);
  }
}
