{
  if (!autoArticleId) {
    validate(articleId);
  }
  JournalArticle article=journalArticlePersistence.fetchByG_A_V(groupId,articleId,version);
  if (article != null) {
    StringBundler sb=new StringBundler(7);
    sb.append("{groupId=");
    sb.append(groupId);
    sb.append(", articleId=");
    sb.append(articleId);
    sb.append(", version=");
    sb.append(version);
    sb.append("}");
    throw new DuplicateArticleIdException(sb.toString());
  }
  validate(companyId,groupId,classNameId,titleMap,content,ddmStructureKey,ddmTemplateKey,expirationDate,smallImage,smallImageURL,smallImageFile,smallImageBytes,serviceContext);
}
