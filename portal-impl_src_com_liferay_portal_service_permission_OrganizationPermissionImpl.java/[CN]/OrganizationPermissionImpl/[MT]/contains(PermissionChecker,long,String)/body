{
  PermissionCheckerImpl permissionCheckerImpl=(PermissionCheckerImpl)permissionChecker;
  if (permissionChecker.hasPermission(0,Organization.class.getName(),organizationId,actionId) || (!actionId.equals(ActionKeys.PERMISSIONS) && hasGroupAdministratePermission(permissionChecker,organizationId))) {
    return true;
  }
 else   if (actionId.equals(ActionKeys.VIEW)) {
    User user=permissionCheckerImpl.getUser();
    long[] organizationIds=user.getOrganizationIds();
    for (int i=0; i < organizationIds.length; i++) {
      if (organizationId == organizationIds[i]) {
        return true;
      }
    }
    return false;
  }
 else   if (actionId.endsWith("_USER")) {
    while (organizationId != OrganizationImpl.DEFAULT_PARENT_ORGANIZATION_ID) {
      Organization organization=OrganizationLocalServiceUtil.getOrganization(organizationId);
      organizationId=organization.getParentOrganizationId();
      if (permissionChecker.hasPermission(0,Organization.class.getName(),organizationId,actionId) || (!actionId.equals(ActionKeys.PERMISSIONS) && hasGroupAdministratePermission(permissionChecker,organization))) {
        return true;
      }
    }
    return false;
  }
 else {
    return false;
  }
}
