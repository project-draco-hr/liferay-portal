{
  DLFileEntry dlFileEntry=DLFileEntryLocalServiceUtil.getDLFileEntry(fileEntryId);
  if (dlFileEntry.isCheckedOut()) {
    return null;
  }
  DLFileVersion dlFileVersion=DLFileVersionLocalServiceUtil.getLatestFileVersion(fileEntryId,true);
  if (dlFileVersion.isApproved() || (serviceContext.getWorkflowAction() == WorkflowConstants.ACTION_PUBLISH)) {
    return dlFileVersion;
  }
  return null;
}
