{
  _log.info("Dropping MySQL indexes");
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("select distinct(index_name), table_name from " + "information_schema.statistics where index_name like " + "'LIFERAY_%' or index_name like 'IX_%'");
    rs=ps.executeQuery();
    while (rs.next()) {
      String indexName=rs.getString("index_name");
      String tableName=rs.getString("table_name");
      ps=con.prepareStatement("drop index " + indexName + " on "+ tableName);
      ps.executeUpdate();
      ps.close();
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
