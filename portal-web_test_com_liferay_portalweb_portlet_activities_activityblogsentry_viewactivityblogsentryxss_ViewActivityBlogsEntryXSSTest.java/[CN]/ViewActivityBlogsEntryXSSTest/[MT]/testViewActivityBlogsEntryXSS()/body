{
  selenium.open("/group/joebloggs/home/");
  for (int second=0; ; second++) {
    if (second >= 90) {
      fail("timeout");
    }
    try {
      if (selenium.isVisible("link=Activities Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.clickAt("link=Activities Test Page",RuntimeVariables.replace("Activities Test Page"));
  selenium.waitForPageToLoad("30000");
  assertEquals(RuntimeVariables.replace("Joe wrote a new blog entry, <script>alert(hello)</script>, in Liferay."),selenium.getText("//td[2]/div[1]"));
  assertEquals(RuntimeVariables.replace("<script>alert(hello)</script>"),selenium.getText("//td[2]/div[1]/a[1]"));
  assertEquals(RuntimeVariables.replace("Liferay"),selenium.getText("//td[2]/div[1]/a[2]"));
}
