{
  if ((name == null) || (name.contains("\\\\")) || (name.contains("\\"))|| (name.contains("//"))|| (name.contains(":"))|| (name.contains("*"))|| (name.contains("?"))|| (name.contains("\""))|| (name.contains("<"))|| (name.contains(">"))|| (name.contains("|"))|| (name.contains("["))|| (name.contains("]"))|| (name.contains("'"))|| (name.contains("..\\"))|| (name.contains("../"))|| (name.contains("\\.."))|| (name.contains("/.."))) {
    return false;
  }
  if (directory && name.contains("/")) {
    return false;
  }
  return true;
}
