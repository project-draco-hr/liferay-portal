{
  if (Validator.isNull(value)) {
    return;
  }
  if (like) {
    value=StringUtil.replace(value,StringPool.PERCENT,StringPool.BLANK);
  }
  String[] values=null;
  if (parseKeywords) {
    values=parseKeywords(value);
  }
 else {
    values=new String[]{value};
  }
  LuceneHelperUtil.addRequiredTerm(_booleanQuery,field,values,like);
}
