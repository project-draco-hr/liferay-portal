{
  Class<?> baseDDMDisplayClazz=BaseDDMDisplay.class;
  ResourceBundle baseDDMDisplayResourceBundle=ResourceBundleUtil.getBundle("content.Language",locale,baseDDMDisplayClazz.getClassLoader());
  Class<?> clazz=getClass();
  ResourceBundle resourceBundle=ResourceBundleUtil.getBundle("content.Language",locale,clazz.getClassLoader());
  return new AggregateResourceBundle(baseDDMDisplayResourceBundle,resourceBundle,ResourceBundleUtil.getBundle("content.Language",locale,PortalClassLoaderUtil.getClassLoader()));
}
