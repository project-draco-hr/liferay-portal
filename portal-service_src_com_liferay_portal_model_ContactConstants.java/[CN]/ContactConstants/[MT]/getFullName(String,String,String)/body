{
  if (Validator.isNull(middleName)) {
    return firstName.concat(StringPool.SPACE).concat(lastName);
  }
 else {
    StringBundler sb=new StringBundler(5);
    sb.append(firstName);
    sb.append(StringPool.SPACE);
    sb.append(middleName);
    sb.append(StringPool.SPACE);
    sb.append(lastName);
    return sb.toString();
  }
}
