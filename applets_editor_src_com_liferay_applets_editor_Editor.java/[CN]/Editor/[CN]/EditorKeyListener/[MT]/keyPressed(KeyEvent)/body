{
  if (e.isControlDown()) {
switch (e.getKeyCode()) {
case KeyEvent.VK_A:
      selectAll();
    e.consume();
  break;
case KeyEvent.VK_C:
copy();
e.consume();
break;
case KeyEvent.VK_X:
cut();
e.consume();
break;
case KeyEvent.VK_V:
paste();
e.consume();
break;
case KeyEvent.VK_Z:
undo();
e.consume();
break;
case KeyEvent.VK_Y:
redo();
e.consume();
break;
case KeyEvent.VK_F:
_findField.requestFocus();
e.consume();
break;
case KeyEvent.VK_R:
_replaceField.requestFocus();
e.consume();
break;
}
}
}
