{
  Dimension widest=null;
  for (int ii=0; ii < buttons.length; ++ii) {
    Dimension dim=buttons[ii].getPreferredSize();
    if (widest == null || dim.width > widest.width) {
      widest=dim;
    }
  }
  for (int ii=0; ii < buttons.length; ++ii) {
    buttons[ii].setPreferredSize(widest);
    buttons[ii].setMinimumSize(widest);
  }
}
