{
  try {
    ActionUtil.getInstance(req);
  }
 catch (  Exception e) {
    if (e instanceof NoSuchCompanyException || e instanceof PrincipalException) {
      SessionErrors.add(req,e.getClass().getName());
      return mapping.findForward("portlet.admin.error");
    }
 else {
      throw e;
    }
  }
  return mapping.findForward(getForward(req,"portlet.admin.edit_instance"));
}
