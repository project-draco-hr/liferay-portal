{
  LDAPConfiguration ldapConfiguration=_ldapConfigurationSettingsUtil.getLDAPConfiguration(companyId);
  if (Validator.equals(ldapConfiguration.importUserSyncStrategy(),_USER_SYNC_STRATEGY_UUID)) {
    ServiceContext serviceContext=ldapUser.getServiceContext();
    return _userLocalService.fetchUserByUuidAndCompanyId(serviceContext.getUuid(),companyId);
  }
  String authType=PrefsPropsUtil.getString(companyId,PropsKeys.COMPANY_SECURITY_AUTH_TYPE,PropsValues.COMPANY_SECURITY_AUTH_TYPE);
  if (authType.equals(CompanyConstants.AUTH_TYPE_SN) && !ldapUser.isAutoScreenName()) {
    return _userLocalService.fetchUserByScreenName(companyId,ldapUser.getScreenName());
  }
  return _userLocalService.fetchUserByEmailAddress(companyId,ldapUser.getEmailAddress());
}
