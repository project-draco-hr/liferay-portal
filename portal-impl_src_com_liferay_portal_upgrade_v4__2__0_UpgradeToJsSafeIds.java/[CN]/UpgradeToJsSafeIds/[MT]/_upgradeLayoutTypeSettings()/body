{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement(_SELECT_ALL_LAYOUTS);
    rs=ps.executeQuery();
    while (rs.next()) {
      String layoutId=rs.getString("layoutId");
      String layoutType=rs.getString("type_");
      String ownerId=rs.getString("ownerId");
      String oldTypeSettings=rs.getString("typeSettings");
      if (!layoutType.equals(LayoutConstants.TYPE_PORTLET)) {
        continue;
      }
      try {
        String newTypeSettings=_getNewTypeSettings(oldTypeSettings);
        ps=con.prepareStatement(_UPDATE_LAYOUT_TYPE_SETTINGS);
        ps.setString(1,newTypeSettings);
        ps.setString(2,layoutId);
        ps.setString(3,ownerId);
        ps.executeUpdate();
      }
 catch (      IOException ioe) {
        _log.error("Unable to read settings for layout " + layoutId + " "+ ownerId,ioe);
      }
catch (      PortalException pe) {
        _log.error("Unable to update layout " + layoutId + " "+ ownerId,pe);
      }
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
