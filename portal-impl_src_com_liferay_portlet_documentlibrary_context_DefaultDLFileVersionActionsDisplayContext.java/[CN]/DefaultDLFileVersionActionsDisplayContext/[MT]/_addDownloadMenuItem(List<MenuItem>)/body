{
  if (isDownloadButtonVisible()) {
    String message=LanguageUtil.get(_request,"download") + " (" + TextFormatter.formatStorageSize(_fileEntry.getSize(),_themeDisplay.getLocale())+ ")";
    String url=DLUtil.getDownloadURL(_fileEntry,_fileVersion,_themeDisplay,StringPool.BLANK,false,true);
    URLMenuItem urlMenuItem=new URLMenuItem();
    urlMenuItem.setIconCssClass("icon-download");
    urlMenuItem.setId(DLMenuItems.MENU_ITEM_ID_DOWNLOAD);
    urlMenuItem.setMessage(message);
    urlMenuItem.setTarget("_blank");
    urlMenuItem.setURL(url);
    menuItems.add(urlMenuItem);
  }
}
