{
  if (_dlActionsDisplayContext.isShowActions() && isCheckoutDocumentButtonVisible()) {
    PortletURL checkoutURL=_liferayPortletResponse.createActionURL();
    checkoutURL.setParameter("struts_action","/document_library/edit_file_entry");
    checkoutURL.setParameter(Constants.CMD,Constants.CHECKOUT);
    checkoutURL.setParameter("redirect",_currentURL);
    checkoutURL.setParameter("fileEntryId",String.valueOf(_fileEntry.getFileEntryId()));
    menuItems.add(new URLMenuItem(DLMenuItems.MENU_ITEM_ID_CHECKOUT,"icon-unlock","checkout[document]",checkoutURL.toString()));
  }
}
