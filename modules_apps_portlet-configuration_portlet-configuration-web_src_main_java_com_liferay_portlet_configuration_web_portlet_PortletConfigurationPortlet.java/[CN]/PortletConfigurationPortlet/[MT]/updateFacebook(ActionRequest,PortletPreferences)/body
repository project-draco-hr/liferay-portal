{
  String facebookAPIKey=ParamUtil.getString(actionRequest,"facebookAPIKey");
  String facebookCanvasPageURL=ParamUtil.getString(actionRequest,"facebookCanvasPageURL");
  boolean facebookShowAddAppLink=ParamUtil.getBoolean(actionRequest,"facebookShowAddAppLink");
  portletPreferences.setValue("lfrFacebookApiKey",facebookAPIKey);
  portletPreferences.setValue("lfrFacebookCanvasPageUrl",facebookCanvasPageURL);
  portletPreferences.setValue("lfrFacebookShowAddAppLink",String.valueOf(facebookShowAddAppLink));
}
