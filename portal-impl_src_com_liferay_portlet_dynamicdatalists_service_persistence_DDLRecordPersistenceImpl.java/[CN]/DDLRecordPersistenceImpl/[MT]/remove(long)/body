{
  Session session=null;
  try {
    session=openSession();
    DDLRecord ddlRecord=(DDLRecord)session.get(DDLRecordImpl.class,Long.valueOf(recordId));
    if (ddlRecord == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + recordId);
      }
      throw new NoSuchRecordException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + recordId);
    }
    return ddlRecordPersistence.remove(ddlRecord);
  }
 catch (  NoSuchRecordException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
