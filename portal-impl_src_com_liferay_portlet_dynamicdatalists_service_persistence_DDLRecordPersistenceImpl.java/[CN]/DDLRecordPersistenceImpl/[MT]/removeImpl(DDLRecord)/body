{
  ddlRecord=toUnwrappedModel(ddlRecord);
  Session session=null;
  try {
    session=openSession();
    BatchSessionUtil.delete(session,ddlRecord);
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
  clearCache(ddlRecord);
  return ddlRecord;
}
