{
  Session session=null;
  try {
    session=openSession();
    PollsQuestion pollsQuestion=(PollsQuestion)session.get(PollsQuestion.class,questionId);
    if (pollsQuestion == null) {
      if (_log.isWarnEnabled()) {
        _log.warn("No PollsQuestion exists with the primary key " + questionId.toString());
      }
      throw new NoSuchQuestionException("No PollsQuestion exists with the primary key " + questionId.toString());
    }
    return pollsQuestion;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
