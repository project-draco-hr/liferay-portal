{
  int initialCount=BlogsEntryLocalServiceUtil.getGroupEntriesCount(_group.getGroupId(),_statusApprovedQueryDefinition);
  BlogsEntry entry=null;
  if (smallImage) {
    entry=addEntryWithSmallImage(_user.getUserId());
  }
 else {
    entry=addEntry(false);
  }
  int actualCount=BlogsEntryLocalServiceUtil.getGroupEntriesCount(_group.getGroupId(),_statusApprovedQueryDefinition);
  Assert.assertEquals(initialCount + 1,actualCount);
  if (smallImage) {
    Assert.assertTrue(entry.isSmallImage());
  }
 else {
    Assert.assertFalse(entry.isSmallImage());
  }
  return entry;
}
