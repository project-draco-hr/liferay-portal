{
  for (  BlogsEntry entry : entries) {
    if (statusInTrash && (WorkflowConstants.STATUS_IN_TRASH != entry.getStatus())) {
      Assert.fail("The blogs entry " + entry.getEntryId() + " should be in trash");
    }
 else     if (!statusInTrash && (WorkflowConstants.STATUS_IN_TRASH == entry.getStatus())) {
      Assert.fail("The blogs entry " + entry.getEntryId() + " shouldn't be in trash");
    }
  }
}
