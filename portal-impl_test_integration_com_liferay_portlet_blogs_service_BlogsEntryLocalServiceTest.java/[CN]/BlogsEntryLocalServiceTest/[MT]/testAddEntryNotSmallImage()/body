{
  int initialCount=BlogsEntryLocalServiceUtil.getGroupEntriesCount(group.getGroupId(),QUERY_STATUS_APPROVED);
  BlogsEntry blogsEntry=BlogsTestUtil.addEntry(TestPropsValues.getUserId(),group,true);
  int actualCount=BlogsEntryLocalServiceUtil.getGroupEntriesCount(group.getGroupId(),QUERY_STATUS_APPROVED);
  Assert.assertEquals(initialCount + 1,actualCount);
  BlogsEntry blogsEntryObtained=BlogsEntryLocalServiceUtil.getBlogsEntry(blogsEntry.getEntryId());
  BlogsTestUtil.assertEqualEntry(blogsEntry,blogsEntryObtained);
}
