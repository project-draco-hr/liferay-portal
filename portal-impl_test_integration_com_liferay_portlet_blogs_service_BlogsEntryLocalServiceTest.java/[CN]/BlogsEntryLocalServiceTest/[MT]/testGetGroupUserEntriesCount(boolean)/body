{
  QueryDefinition queryDefinition=_queryStatusInTrash;
  if (!isInTrash) {
    queryDefinition=_queryStatusNotInTrash;
  }
  int initialCount=BlogsEntryLocalServiceUtil.getGroupUserEntriesCount(_group.getGroupId(),_user.getUserId(),new Date(),queryDefinition);
  addEntryInTrashAndEntryNotInTrash();
  int actualCount=BlogsEntryLocalServiceUtil.getGroupUserEntriesCount(_group.getGroupId(),_user.getUserId(),new Date(),queryDefinition);
  Assert.assertEquals(initialCount + 1,actualCount);
}
