{
  QueryDefinition queryDefinition=_queryStatusInTrash;
  if (!statusInTrash) {
    queryDefinition=_queryStatusNotInTrash;
  }
  int initialCount=0;
  if (displayDate) {
    initialCount=BlogsEntryLocalServiceUtil.getGroupEntriesCount(_group.getGroupId(),new Date(),queryDefinition);
  }
 else {
    initialCount=BlogsEntryLocalServiceUtil.getGroupEntriesCount(_group.getGroupId(),queryDefinition);
  }
  addEntryInTrashAndEntryNotInTrash();
  int actualCount=0;
  if (displayDate) {
    actualCount=BlogsEntryLocalServiceUtil.getGroupEntriesCount(_group.getGroupId(),new Date(),queryDefinition);
  }
 else {
    actualCount=BlogsEntryLocalServiceUtil.getGroupEntriesCount(_group.getGroupId(),queryDefinition);
  }
  Assert.assertEquals(initialCount + 1,actualCount);
}
