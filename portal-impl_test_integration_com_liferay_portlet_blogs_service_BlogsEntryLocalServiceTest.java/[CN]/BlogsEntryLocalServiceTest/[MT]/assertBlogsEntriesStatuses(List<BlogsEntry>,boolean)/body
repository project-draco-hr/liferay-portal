{
  for (  BlogsEntry entry : entries) {
    if (isInTrash && (WorkflowConstants.STATUS_IN_TRASH != entry.getStatus())) {
      Assert.fail("The blogEntry " + entry.getEntryId() + " should be in trash");
    }
 else     if (!isInTrash && (WorkflowConstants.STATUS_IN_TRASH == entry.getStatus())) {
      Assert.fail("The blogEntry " + entry.getEntryId() + " shouldn't be in trash");
    }
  }
}
