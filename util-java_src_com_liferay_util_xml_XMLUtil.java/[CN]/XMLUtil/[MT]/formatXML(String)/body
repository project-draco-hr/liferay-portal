{
  try {
    xml=StringUtil.replace(xml,"&#","[$SPECIAL_CHARACTER$]");
    xml=XMLFormatter.toString(xml,_XML_INDENT);
    xml=StringUtil.replace(xml,"[$SPECIAL_CHARACTER$]","&#");
    return xml;
  }
 catch (  IOException ioe) {
    throw new SystemException(ioe);
  }
catch (  org.dom4j.DocumentException de) {
    throw new SystemException(de);
  }
}
