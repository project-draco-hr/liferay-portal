{
  DirectDeployTask directDeployTask=GradleUtil.addTask(project,DIRECT_DEPLOY_TASK_NAME,DirectDeployTask.class);
  directDeployTask.dependsOn(WarPlugin.WAR_TASK_NAME);
  directDeployTask.setDescription("Assembles the project into a WAR file and directly deploys it " + "to Liferay, skipping the auto deploy directory.");
  directDeployTask.setGroup(WarPlugin.WEB_APP_GROUP);
  return directDeployTask;
}
