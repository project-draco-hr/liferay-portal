{
  selenium.open("/web/joebloggs/home/");
  for (int second=0; ; second++) {
    if (second >= 90) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Activities Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.clickAt("link=Activities Page",RuntimeVariables.replace(""));
  selenium.waitForPageToLoad("30000");
  assertEquals(RuntimeVariables.replace("Joe wrote a new message board post, MB Category Thread Message Subject."),selenium.getText("xPath=(//div[@class='activity-title'])[1]"));
  assertEquals(RuntimeVariables.replace("MB Category Thread Message Subject"),selenium.getText("xPath=(//div[@class='activity-title'])[1]/a"));
}
