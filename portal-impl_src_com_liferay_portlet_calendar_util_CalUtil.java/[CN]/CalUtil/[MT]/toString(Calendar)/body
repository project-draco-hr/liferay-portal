{
  StringBundler sb=new StringBundler(7);
  sb.append(cal.get(Calendar.YEAR));
  sb.append(StringPool.PERIOD);
  sb.append(cal.get(Calendar.MONTH));
  sb.append(StringPool.PERIOD);
  sb.append(cal.get(Calendar.DATE));
  sb.append(StringPool.PERIOD);
  sb.append(cal.getTimeZone().getRawOffset());
  return sb.toString();
}
