{
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Wiki Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.click(RuntimeVariables.replace("link=Wiki Test Page"));
  selenium.waitForPageToLoad("30000");
  selenium.click("link=Post Reply");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("_36_postReplyBody1")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.typeKeys("_36_postReplyBody1",RuntimeVariables.replace("This is a second test comment."));
  selenium.type("_36_postReplyBody1",RuntimeVariables.replace("This is a second test comment."));
  selenium.click(RuntimeVariables.replace("_36_postReplyButton1"));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isTextPresent("Your request processed successfully."));
  assertEquals("This is a second test comment.",selenium.getText("//tr[5]/td[2]/div[1]"));
}
