{
  final List<Path> paths=new ArrayList<>();
  try {
    Files.walkFileTree(Paths.get(_dir),new SimpleFileVisitor<Path>(){
      @Override public FileVisitResult preVisitDirectory(      Path dirPath,      BasicFileAttributes basicFileAttributes){
        if (Files.exists(dirPath.resolve(_snapshotFileName))) {
          paths.add(dirPath);
          return FileVisitResult.SKIP_SUBTREE;
        }
        return FileVisitResult.CONTINUE;
      }
    }
);
  }
 catch (  IOException ioe) {
    throw new BuildException(ioe);
  }
  return paths;
}
