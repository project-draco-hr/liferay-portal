{
  TaskContainer taskContainer=project.getTasks();
  taskContainer.withType(BuildServiceTask.class,new Action<BuildServiceTask>(){
    @Override public void execute(    BuildServiceTask buildServiceTask){
      Task buildServiceCompileTask=addTaskBuildServiceCompile(buildServiceTask);
      Task buildServiceJarTask=addTaskBuildServiceJar(buildServiceTask,buildServiceCompileTask);
      buildServiceTask.finalizedBy(buildServiceJarTask);
    }
  }
);
}
