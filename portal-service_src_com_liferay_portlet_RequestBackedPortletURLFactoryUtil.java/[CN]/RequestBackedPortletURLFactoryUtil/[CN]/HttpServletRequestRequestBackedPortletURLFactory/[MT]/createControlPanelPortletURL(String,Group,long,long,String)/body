{
  ThemeDisplay themeDisplay=(ThemeDisplay)_request.getAttribute(WebKeys.THEME_DISPLAY);
  if (group == null) {
    group=themeDisplay.getScopeGroup();
  }
  LiferayPortletURL liferayPortletURL=PortletURLFactoryUtil.create(_request,portletId,PortalUtil.getControlPanelLayout(themeDisplay.getCompanyId(),group),lifecycle);
  return _populateControlPanelPortletURL(liferayPortletURL,refererGroupId,refererPlid);
}
