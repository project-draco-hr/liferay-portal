{
  if (_showArticle != null) {
    return _showArticle;
  }
  JournalArticle article=getArticle();
  if (article == null) {
    _showArticle=false;
    return _showArticle;
  }
  JournalArticleDisplay articleDisplay=getArticleDisplay();
  if (articleDisplay == null) {
    _showArticle=false;
    return _showArticle;
  }
  if (!hasViewPermission() || isExpired() || article.isScheduled()|| article.isPending()) {
    _showArticle=false;
    return _showArticle;
  }
  _showArticle=true;
  return _showArticle;
}
