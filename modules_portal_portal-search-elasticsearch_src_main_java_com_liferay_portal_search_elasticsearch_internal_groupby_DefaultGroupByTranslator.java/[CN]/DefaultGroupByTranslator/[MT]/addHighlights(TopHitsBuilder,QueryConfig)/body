{
  if (!queryConfig.isHighlightEnabled()) {
    return;
  }
  for (  String highlightFieldName : queryConfig.getHighlightFieldNames()) {
    addHighlightedField(topHitsBuilder,queryConfig,highlightFieldName);
  }
  topHitsBuilder.setHighlighterPostTags(HighlightUtil.HIGHLIGHT_TAG_CLOSE);
  topHitsBuilder.setHighlighterPreTags(HighlightUtil.HIGHLIGHT_TAG_OPEN);
  topHitsBuilder.setHighlighterRequireFieldMatch(queryConfig.isHighlightRequireFieldMatch());
}
