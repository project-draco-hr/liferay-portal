{
  try {
    com.liferay.portal.kernel.xml.Document contentDocument=SAXReaderUtil.read(content);
    String path="//dynamic-element" + "[@type='text' or @type='text_area' or @type='text_box']" + "/dynamic-content";
    List<Node> nodes=contentDocument.selectNodes(path);
    if (!nodes.isEmpty()) {
      StringBundler sb=new StringBundler();
      for (      Node node : nodes) {
        sb.append(node.getText());
        sb.append(StringPool.SPACE);
      }
      content=sb.toString();
    }
  }
 catch (  DocumentException e) {
    _log.error(e);
  }
  content=HtmlUtil.extractText(content);
  return content;
}
