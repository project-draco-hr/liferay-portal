{
  if (orderByCol.equals("modified-date")) {
    return Field.MODIFIED;
  }
 else   if (orderByCol.equals("id")) {
    return Field.ENTRY_CLASS_PK;
  }
 else   if (orderByCol.equals("title")) {
    return Field.TITLE;
  }
 else   if (orderByCol.equals("display-date")) {
    return "displayDate";
  }
 else {
    return orderByCol;
  }
}
