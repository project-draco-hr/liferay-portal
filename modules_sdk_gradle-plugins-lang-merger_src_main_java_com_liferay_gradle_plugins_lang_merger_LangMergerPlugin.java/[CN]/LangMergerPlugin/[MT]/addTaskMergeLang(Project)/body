{
  final MergePropertiesTask mergePropertiesTask=GradleUtil.addTask(project,MERGE_LANG_TASK_NAME,MergePropertiesTask.class);
  mergePropertiesTask.setDescription("Merges language property files.");
  PluginContainer pluginContainer=project.getPlugins();
  pluginContainer.withType(JavaPlugin.class,new Action<JavaPlugin>(){
    @Override public void execute(    JavaPlugin javaPlugin){
      configureTaskMergeLangForJavaPlugin(mergePropertiesTask);
    }
  }
);
  return mergePropertiesTask;
}
