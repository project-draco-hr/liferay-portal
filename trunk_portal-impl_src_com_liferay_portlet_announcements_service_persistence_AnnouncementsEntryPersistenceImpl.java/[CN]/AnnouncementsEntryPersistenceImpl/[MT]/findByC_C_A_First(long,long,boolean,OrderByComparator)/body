{
  List<AnnouncementsEntry> list=findByC_C_A(classNameId,classPK,alert,0,1,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(8);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("classNameId=");
    msg.append(classNameId);
    msg.append(", classPK=");
    msg.append(classPK);
    msg.append(", alert=");
    msg.append(alert);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchEntryException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
