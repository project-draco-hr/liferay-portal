{
  _filePath=filePath;
  _watchEventListener=watchEventListener;
  if (OSDetector.isWindows() || OSDetector.isApple()) {
    _recursive=false;
  }
 else {
    _recursive=true;
  }
  initWatchService();
  walkFileTree(_filePath);
  WatcherRegistry.register(_watchEventListener.getSyncAccountId(),this);
}
