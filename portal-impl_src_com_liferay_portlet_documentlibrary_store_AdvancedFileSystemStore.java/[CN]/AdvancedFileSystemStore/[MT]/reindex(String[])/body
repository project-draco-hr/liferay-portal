{
  long companyId=GetterUtil.getLong(ids[0]);
  String portletId=ids[1];
  long groupId=GetterUtil.getLong(ids[2]);
  long repositoryId=GetterUtil.getLong(ids[3]);
  File repositoryDir=getRepositoryDir(companyId,repositoryId);
  String[] fileNames=FileUtil.listDirs(repositoryDir);
  for (  String fileName : fileNames) {
    Collection<Document> documents=getDocuments(companyId,portletId,groupId,repositoryId,repositoryDir.getPath() + StringPool.SLASH + fileName);
    SearchEngineUtil.updateDocuments(companyId,documents);
  }
}
