{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  long fileVersionId=0;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("select fileVersionId from DLFileVersion where folderId = ? " + "and groupId = ? and name = ? order by version desc");
    ps.setLong(1,folderId);
    ps.setLong(2,groupId);
    ps.setString(3,name);
    rs=ps.executeQuery();
    while (rs.next()) {
      fileVersionId=rs.getLong("fileVersionId");
      break;
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
  return fileVersionId;
}
