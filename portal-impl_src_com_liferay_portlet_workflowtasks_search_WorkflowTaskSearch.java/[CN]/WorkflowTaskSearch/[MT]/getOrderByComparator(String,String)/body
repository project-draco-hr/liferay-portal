{
  boolean orderByAsc=false;
  if (orderByType.equals("asc")) {
    orderByAsc=true;
  }
  OrderByComparator orderByComparator=null;
  if (orderByCol.equals("name")) {
    orderByComparator=WorkflowComparatorFactoryUtil.getTaskNameComparator(orderByAsc);
  }
 else   if (orderByCol.equals("due-date")) {
    orderByComparator=WorkflowComparatorFactoryUtil.getTaskDueDateComparator(orderByAsc);
  }
  return orderByComparator;
}
