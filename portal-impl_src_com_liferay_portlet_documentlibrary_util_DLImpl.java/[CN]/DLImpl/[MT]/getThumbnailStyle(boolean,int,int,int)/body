{
  StringBundler sb=new StringBundler(5);
  if (max) {
    sb.append("max-height: ");
  }
 else {
    sb.append("height: ");
  }
  sb.append(height + 2 * margin);
  if (max) {
    sb.append("px; max-width: ");
  }
 else {
    sb.append("px; width: ");
  }
  sb.append(width + 2 * margin);
  sb.append("px;");
  return sb.toString();
}
