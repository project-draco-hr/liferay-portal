{
  ThemeDisplay themeDisplay=(ThemeDisplay)request.getAttribute(WebKeys.THEME_DISPLAY);
  PortletURL portletURL=liferayPortletResponse.createRenderURL();
  portletURL.setParameter("struts_action","/document_library/view");
  Map<String,Object> data=new HashMap<String,Object>();
  data.put("direction-right",Boolean.TRUE.toString());
  PortletDisplay portletDisplay=themeDisplay.getPortletDisplay();
  DLPortletInstanceSettings dlPortletInstanceSettings=new DLPortletInstanceSettings(portletDisplay.getPortletInstanceSettings());
  data.put("folder-id",dlPortletInstanceSettings.getDefaultFolderId());
  PortalUtil.addPortletBreadcrumbEntry(request,themeDisplay.translate("home"),portletURL.toString(),data);
  addPortletBreadcrumbEntries(folder,request,portletURL);
}
