{
  String localeLanguageId=LocaleUtil.toLanguageId(locale);
  if (Validator.isNotNull(description)) {
    setDescription(LocalizationUtil.updateLocalization(getDescription(),"description",description,localeLanguageId));
  }
 else {
    setDescription(LocalizationUtil.removeLocalization(getDescription(),"description",localeLanguageId));
  }
}
