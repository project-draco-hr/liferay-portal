{
  boolean remoteInvoke=AggregatedCacheListener.isRemoteInvoke();
  if (!remoteInvoke) {
    AggregatedCacheListener.setRemoteInvoke(true);
  }
  try {
    portalCache.put(key,value,timeToLive);
  }
  finally {
    if (!remoteInvoke) {
      AggregatedCacheListener.setRemoteInvoke(false);
    }
  }
}
