{
  boolean remoteInvoke=AggregatedPortalCacheListener.isRemoteInvoke();
  if (!remoteInvoke) {
    AggregatedPortalCacheListener.setRemoteInvoke(true);
  }
  try {
    portalCache.removeAll();
  }
  finally {
    if (!remoteInvoke) {
      AggregatedPortalCacheListener.setRemoteInvoke(false);
    }
  }
}
