{
  StringBuilder sb=new StringBuilder();
  DLFolder folder=this;
  while (true) {
    sb.insert(0,folder.getName());
    sb.insert(0,StringPool.SLASH);
    if (folder.getParentFolderId() != DLFolderConstants.DEFAULT_PARENT_FOLDER_ID) {
      folder=DLRepositoryLocalServiceUtil.getFolder(folder.getParentFolderId());
    }
 else {
      break;
    }
  }
  return sb.toString();
}
