{
  Group group=GroupLocalServiceUtil.fetchGroup(_workflowableComment.getGroupId());
  PortletURL editPortletURL=PortalUtil.getControlPanelPortletURL(liferayPortletRequest,group,CommentPortletKeys.COMMENT,0,0,PortletRequest.RENDER_PHASE);
  editPortletURL.setParameter("mvcPath","/edit_discussion.jsp");
  editPortletURL.setParameter("commentId",String.valueOf(_workflowableComment.getCommentId()));
  return editPortletURL;
}
