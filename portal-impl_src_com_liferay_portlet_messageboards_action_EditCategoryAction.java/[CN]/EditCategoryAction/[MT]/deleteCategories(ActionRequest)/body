{
  ThemeDisplay themeDisplay=(ThemeDisplay)actionRequest.getAttribute(WebKeys.THEME_DISPLAY);
  long categoryId=ParamUtil.getLong(actionRequest,"mbCategoryId");
  if (categoryId > 0) {
    MBCategoryServiceUtil.deleteCategory(themeDisplay.getScopeGroupId(),categoryId);
  }
 else {
    long[] deleteCategoryIds=StringUtil.split(ParamUtil.getString(actionRequest,"deleteCategoryIds"),0L);
    for (int i=0; i < deleteCategoryIds.length; i++) {
      MBCategoryServiceUtil.deleteCategory(themeDisplay.getScopeGroupId(),deleteCategoryIds[i]);
    }
  }
}
