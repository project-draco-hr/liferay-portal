{
  if (_log.isDebugEnabled()) {
    _log.debug("Get resource for " + source);
  }
  InputStream is=null;
  for (int i=0; (is == null) && (i < _velocityResourceListeners.length); i++) {
    VelocityResourceListener velocityResourceListener=_velocityResourceListeners[i];
    if (velocityResourceListener != null) {
      is=velocityResourceListener.getResourceStream(source);
    }
  }
  return is;
}
