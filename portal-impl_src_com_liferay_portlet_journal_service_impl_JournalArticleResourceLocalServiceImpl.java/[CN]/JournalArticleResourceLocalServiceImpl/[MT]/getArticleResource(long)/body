{
  JournalArticleResource articleResource=new JournalArticleResourceImpl();
  articleResource.setResourcePrimKey(articleResourcePrimKey);
  MirageArticleResource mirageArticleResource=new MirageArticleResource(articleResource);
  BinaryContentService binaryContentService=MirageServiceFactory.getArticleResourceService();
  try {
    mirageArticleResource=(MirageArticleResource)binaryContentService.getBinaryContent(mirageArticleResource);
  }
 catch (  CMSException cmse) {
    ExceptionTranslator.translate(cmse);
  }
  return mirageArticleResource.getArticleResource();
}
