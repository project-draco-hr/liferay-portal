{
  ServiceContext serviceContext=new ServiceContext();
  BackgroundTask backgroundTask=BackgroundTaskLocalServiceUtil.addBackgroundTask(_user.getUserId(),_group.getGroupId(),_BACKGROUND_TASK_NAME,null,_TASK_EXECUTOR_CLASS,getTaskContextMap(),serviceContext);
  Map map=getTaskContextMap();
  BackgroundTask ammendBackgroundTask=BackgroundTaskLocalServiceUtil.amendBackgroundTask(backgroundTask.getBackgroundTaskId(),map,backgroundTask.getStatus(),serviceContext);
  AssertUtils.assertEquals(ammendBackgroundTask.getTaskContextMap(),map);
}
