{
  ServiceContext serviceContext=new ServiceContext();
  BackgroundTask backgroundTask=BackgroundTaskLocalServiceUtil.addBackgroundTask(_user.getUserId(),_group.getGroupId(),_BACKGROUND_TASK_NAME,null,_TASK_EXECUTOR_CLASS,getTaskContextMap(),serviceContext);
  Assert.assertEquals(BackgroundTaskConstants.STATUS_NEW,backgroundTask.getStatus());
  BackgroundTask ammendBackgroundTask=BackgroundTaskLocalServiceUtil.amendBackgroundTask(backgroundTask.getBackgroundTaskId(),backgroundTask.getTaskContextMap(),BackgroundTaskConstants.STATUS_IN_PROGRESS,serviceContext);
  Assert.assertEquals(BackgroundTaskConstants.STATUS_IN_PROGRESS,ammendBackgroundTask.getStatus());
  Assert.assertFalse(ammendBackgroundTask.isCompleted());
}
