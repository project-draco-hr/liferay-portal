{
  initalizeThreadLocals();
  ServiceContext serviceContext=new ServiceContext();
  BackgroundTask backgroundTask=BackgroundTaskLocalServiceUtil.addBackgroundTask(_user.getUserId(),_group.getGroupId(),_BACKGROUND_TASK_NAME,null,_TASK_EXECUTOR_CLASS,getTaskContextMap(),serviceContext);
  Assert.assertEquals(BackgroundTaskConstants.STATUS_NEW,backgroundTask.getStatus());
  backgroundTask=BackgroundTaskLocalServiceUtil.amendBackgroundTask(backgroundTask.getBackgroundTaskId(),backgroundTask.getTaskContextMap(),BackgroundTaskConstants.STATUS_IN_PROGRESS,serviceContext);
  Assert.assertEquals(BackgroundTaskConstants.STATUS_IN_PROGRESS,backgroundTask.getStatus());
  Assert.assertFalse(backgroundTask.isCompleted());
  assertThreadLocalValues(backgroundTask);
}
