{
  Date oldestDate=null;
  oldestDate=ParamUtil.getDate(request,"oldestDate",DateFormatFactoryUtil.getSimpleDateFormat("yyyy.MM.dd"),null);
  if (oldestDate == null) {
    int daysOld=ParamUtil.getInteger(request,"maxAge",-1);
    if (daysOld != -1) {
      Calendar cal=Calendar.getInstance();
      cal.add(Calendar.DATE,(0 - daysOld));
      oldestDate=cal.getTime();
    }
  }
  return oldestDate;
}
