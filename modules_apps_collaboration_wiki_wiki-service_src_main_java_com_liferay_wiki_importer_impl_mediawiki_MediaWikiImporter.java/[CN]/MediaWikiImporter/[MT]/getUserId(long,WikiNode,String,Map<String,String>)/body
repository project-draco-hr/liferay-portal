{
  User user=null;
  String emailAddress=usersMap.get(author);
  if (Validator.isNotNull(emailAddress)) {
    user=_userLocalService.fetchUserByEmailAddress(node.getCompanyId(),emailAddress);
  }
 else {
    user=_userLocalService.fetchUserByScreenName(node.getCompanyId(),StringUtil.toLowerCase(author));
  }
  if (user != null) {
    return user.getUserId();
  }
  return userId;
}
