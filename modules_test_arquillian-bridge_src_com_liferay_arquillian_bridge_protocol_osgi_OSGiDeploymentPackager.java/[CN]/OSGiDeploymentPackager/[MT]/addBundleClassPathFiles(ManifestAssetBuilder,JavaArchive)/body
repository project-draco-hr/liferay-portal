{
  for (  String bundleClassPathFile : StringUtil.split(PropsUtil.get("bundle.classpath.files"),CharPool.SEMICOLON)) {
    String[] coordinates=StringUtil.split(bundleClassPathFile,CharPool.COMMA);
    if (coordinates.length != 3) {
      throw new IllegalArgumentException("Malformed maven coordinates " + bundleClassPathFile);
    }
    File file=fetchMavenFile(coordinates[0],coordinates[1],coordinates[2]);
    String path="lib/" + file.getName();
    javaArchive.addAsResource(new FileAsset(file),path);
    manifestAssetBuilder.addBundleClassPathFile(path);
  }
}
