{
  if (_request != null) {
    HttpSession session=_request.getSession(true);
    session.setAttribute(PERCENT + _progressId,new Integer(percentage));
  }
 else {
    PortletSession portletSession=_portletRequest.getPortletSession(true);
    portletSession.setAttribute(PERCENT + _progressId,new Integer(percentage),PortletSession.APPLICATION_SCOPE);
  }
}
