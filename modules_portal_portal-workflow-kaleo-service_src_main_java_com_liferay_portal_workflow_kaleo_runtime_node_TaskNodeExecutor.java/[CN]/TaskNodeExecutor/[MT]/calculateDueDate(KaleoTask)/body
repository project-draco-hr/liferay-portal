{
  List<KaleoTimer> kaleoTimers=kaleoTimerLocalService.getKaleoTimers(KaleoNode.class.getName(),kaleoTask.getKaleoNodeId());
  if (kaleoTimers.isEmpty()) {
    return null;
  }
  TreeSet<Date> sortedDueDates=new TreeSet<>();
  for (  KaleoTimer kaleoTimer : kaleoTimers) {
    DelayDuration delayDuration=new DelayDuration(kaleoTimer.getDuration(),DurationScale.valueOf(StringUtil.toUpperCase(kaleoTimer.getScale())));
    Date dueDate=_dueDateCalculator.getDueDate(new Date(),delayDuration);
    sortedDueDates.add(dueDate);
  }
  return sortedDueDates.first();
}
