{
  Map<Locale,String> map=LocalizationUtil.getLocalizationMap(preferences,"emailEntryAddedBody");
  Locale defaultLocale=LocaleUtil.getDefault();
  String defaultValue=map.get(defaultLocale);
  if (Validator.isNotNull(defaultValue)) {
    return map;
  }
  map.put(defaultLocale,ContentUtil.get(PropsUtil.get(PropsKeys.BLOGS_EMAIL_ENTRY_ADDED_BODY)));
  return map;
}
