{
  if (urlPattern.equals(uri) || urlPattern.equals(_SLASH_STAR)) {
    return true;
  }
  if (urlPattern.endsWith(_SLASH_STAR)) {
    if (uri.equals(urlPattern.substring(0,urlPattern.length() - 2)) || uri.startsWith(urlPattern.substring(0,urlPattern.length() - 1))) {
      return true;
    }
  }
 else   if (urlPattern.startsWith(_STAR_PERIOD) && (uri.indexOf(CharPool.SLASH) != -1) && uri.endsWith(urlPattern.substring(1))) {
    return true;
  }
  return false;
}
