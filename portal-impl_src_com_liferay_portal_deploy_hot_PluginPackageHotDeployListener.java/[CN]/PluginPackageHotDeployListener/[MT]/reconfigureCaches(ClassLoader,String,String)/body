{
  if (Validator.isNull(cacheConfigurationPath)) {
    return;
  }
  URL cacheConfigurationURL=classLoader.getResource(cacheConfigurationPath);
  if (cacheConfigurationURL != null) {
    PortalCacheManager portalCacheManager=(PortalCacheManager)PortalBeanLocatorUtil.locate(portalCacheManagerBeanId);
    if (_log.isInfoEnabled()) {
      _log.info("Reconfiguring caches in cache manager " + portalCacheManagerBeanId + " using "+ cacheConfigurationURL);
    }
    portalCacheManager.reconfigureCaches(cacheConfigurationURL);
  }
}
