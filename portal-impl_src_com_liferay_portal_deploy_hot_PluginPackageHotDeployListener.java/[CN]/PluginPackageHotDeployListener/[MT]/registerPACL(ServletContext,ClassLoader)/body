{
  Properties properties=null;
  String propertiesString=HttpUtil.URLtoString(servletContext.getResource("/WEB-INF/liferay-plugin-package.properties"));
  if (propertiesString != null) {
    properties=PropertiesUtil.load(propertiesString);
  }
 else {
    properties=new Properties();
  }
  PACLPolicy paclPolicy=PACLPolicyManager.buildPACLPolicy(servletContext.getServletContextName(),properties);
  PACLPolicyManager.register(classLoader,paclPolicy);
}
