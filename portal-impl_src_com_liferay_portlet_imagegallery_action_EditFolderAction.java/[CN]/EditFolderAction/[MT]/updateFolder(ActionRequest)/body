{
  Layout layout=(Layout)req.getAttribute(WebKeys.LAYOUT);
  long folderId=ParamUtil.getLong(req,"folderId");
  long parentFolderId=ParamUtil.getLong(req,"parentFolderId");
  String name=ParamUtil.getString(req,"name");
  String description=ParamUtil.getString(req,"description");
  boolean mergeWithParentFolder=ParamUtil.getBoolean(req,"mergeWithParentFolder");
  String[] communityPermissions=req.getParameterValues("communityPermissions");
  String[] guestPermissions=req.getParameterValues("guestPermissions");
  if (folderId <= 0) {
    IGFolderServiceUtil.addFolder(layout.getPlid(),parentFolderId,name,description,communityPermissions,guestPermissions);
  }
 else {
    IGFolderServiceUtil.updateFolder(folderId,parentFolderId,name,description,mergeWithParentFolder);
  }
}
