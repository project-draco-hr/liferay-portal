{
  int val=0;
  for (int i=0; (i < 4); i++) {
    val<<=6;
    val|=bytes[i];
  }
  if (padNumber == 2) {
    val>>=16;
    outbuf[pos]=(byte)(val & 0xff);
    return 1;
  }
 else   if (padNumber == 1) {
    val>>=8;
    outbuf[pos + 1]=(byte)(val & 0xff);
    val>>=8;
    outbuf[pos]=(byte)(val & 0xff);
    return 2;
  }
 else   if (padNumber == 0) {
    outbuf[pos + 2]=(byte)(val & 0xff);
    val>>=8;
    outbuf[pos + 1]=(byte)(val & 0xff);
    val>>=8;
    outbuf[pos]=(byte)(val & 0xff);
    return 3;
  }
 else {
    return -1;
  }
}
