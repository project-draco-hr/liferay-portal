{
  ActionableDynamicQuery actionableDynamicQuery=_journalArticleResourceLocalService.getActionableDynamicQuery();
  if (_log.isDebugEnabled()) {
    long count=actionableDynamicQuery.performCount();
    _log.debug("Processing " + count + " article resources for create and modified dates");
  }
  actionableDynamicQuery.setPerformActionMethod(new ActionableDynamicQuery.PerformActionMethod(){
    @Override public void performAction(    Object object){
      JournalArticleResource articleResource=(JournalArticleResource)object;
      updateCreateDate(articleResource);
      updateModifiedDate(articleResource);
    }
  }
);
  actionableDynamicQuery.performActions();
  if (_log.isDebugEnabled()) {
    _log.debug("Create and modified dates verified for articles");
  }
}
