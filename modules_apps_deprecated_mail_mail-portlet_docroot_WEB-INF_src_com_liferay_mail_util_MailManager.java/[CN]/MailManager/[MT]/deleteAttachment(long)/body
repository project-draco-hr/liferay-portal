{
  try {
    Attachment attachment=AttachmentLocalServiceUtil.getAttachment(attachmentId);
    Mailbox mailbox=MailboxFactoryUtil.getMailbox(_user.getUserId(),attachment.getAccountId(),_passwordRetriever.getPassword(attachment.getAccountId()));
    mailbox.deleteAttachment(attachmentId);
    return createJSONResult("success","attachment-has-been-deleted");
  }
 catch (  MailException me) {
    _log.error(me,me);
    return createJSONResult("failure","unable-to-delete-attachment");
  }
}
