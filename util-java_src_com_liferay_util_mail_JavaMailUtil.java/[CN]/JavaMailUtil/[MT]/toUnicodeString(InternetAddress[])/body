{
  StringMaker sm=new StringMaker();
  if (addresses != null) {
    for (int i=0; i < addresses.length; i++) {
      if (addresses[i] != null) {
        sm.append(addresses[i].toUnicodeString());
      }
      if ((i + 1) != addresses.length) {
        sm.append(", ");
      }
    }
  }
  return sm.toString();
}
