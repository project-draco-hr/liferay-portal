{
  for (  Field field : fields) {
    if (name.equals(field.getName())) {
      if ((field.getType() != clazz) || (Modifier.isStatic(field.getModifiers()) != isStatic)) {
        throw new IllegalArgumentException("Field violation \"" + field + "\", expected to be type of "+ clazz+ " and "+ (isStatic ? "static" : "non-static"));
      }
      break;
    }
  }
}
