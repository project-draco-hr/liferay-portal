{
  String destDir=PrefsPropsUtil.getString("auto.deploy." + ServerDetector.getServerId() + ".dest.dir");
  if (Validator.isNull(destDir)) {
    destDir=PrefsPropsUtil.getString(PropsUtil.AUTO_DEPLOY_DEFAULT_DEST_DIR);
  }
  destDir=StringUtil.replace(destDir,StringPool.BACK_SLASH,StringPool.SLASH);
  return destDir;
}
