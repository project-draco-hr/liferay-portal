{
  Class<?> clazz=getClass();
  InputStream inputStream=clazz.getResourceAsStream("dependencies/" + resource);
  if (inputStream == null) {
    return null;
  }
  String tmpDir=SystemProperties.get(SystemProperties.TMP_DIR);
  File file=new File(tmpDir + "/liferay/com/liferay/portal/deploy/dependencies/" + resource);
  File parentFile=file.getParentFile();
  if (parentFile != null) {
    parentFile.mkdirs();
  }
  StreamUtil.transfer(inputStream,new FileOutputStream(file));
  return FileUtil.getAbsolutePath(file);
}
