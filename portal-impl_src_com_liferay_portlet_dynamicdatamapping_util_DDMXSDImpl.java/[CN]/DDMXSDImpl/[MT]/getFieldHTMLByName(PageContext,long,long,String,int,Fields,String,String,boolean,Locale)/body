{
  String xsd=getXSD(classNameId,classPK);
  Document document=SAXReaderUtil.read(xsd);
  String xPathExpression="//dynamic-element[@name=".concat(HtmlUtil.escapeXPathAttribute(fieldName)).concat("]");
  XPath xPathSelector=SAXReaderUtil.createXPath(xPathExpression);
  Node node=xPathSelector.selectSingleNode(document.getRootElement());
  Element element=(Element)node.asXPathResult(node.getParent());
  if (repeatableIndex > 0) {
    element.addAttribute("repeatableIndex",String.valueOf(repeatableIndex));
  }
  return getFieldHTML(pageContext,element,fields,namespace,mode,readOnly,locale);
}
