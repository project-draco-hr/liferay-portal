{
  int total=0;
  String fieldName=StringUtil.extractFirst(fieldsTree[offset],DDMImpl.INSTANCE_SEPARATOR);
  for (; offset < fieldsTree.length; offset++) {
    String fieldNameValue=StringUtil.extractFirst(fieldsTree[offset],DDMImpl.INSTANCE_SEPARATOR);
    if (fieldNameValue.equals(fieldName)) {
      total++;
    }
    if (fieldNameValue.equals(parentFieldName)) {
      break;
    }
  }
  return total;
}
