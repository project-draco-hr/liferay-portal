{
  try {
    _socialRelationLocalService.addRelation(request.getUserId(),request.getReceiverUserId(),SocialRelationConstants.TYPE_BI_CONNECTION);
    _socialActivityLocalService.addActivity(request.getUserId(),0,User.class.getName(),request.getUserId(),SocialRelationConstants.TYPE_BI_CONNECTION,StringPool.BLANK,request.getReceiverUserId());
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
  return true;
}
