{
  String fullName=buildLocalizedFullName(firstName,middleName,lastName,locale,prefixId,suffixId,false);
  if (!exceedFullNameMaxLength(fullName)) {
    return fullName;
  }
  fullName=buildLocalizedFullName(firstName,middleName,lastName,locale,prefixId,suffixId,true);
  if (!exceedFullNameMaxLength(fullName)) {
    return fullName;
  }
  return shortenFullName(fullName);
}
