{
  String fullName=buildFullName(firstName,middleName,lastName,false);
  if (!exceedFullNameMaxLength(fullName)) {
    return fullName;
  }
  fullName=buildFullName(firstName,middleName,lastName,true);
  if (!exceedFullNameMaxLength(fullName)) {
    return fullName;
  }
  return shortenFullName(fullName);
}
