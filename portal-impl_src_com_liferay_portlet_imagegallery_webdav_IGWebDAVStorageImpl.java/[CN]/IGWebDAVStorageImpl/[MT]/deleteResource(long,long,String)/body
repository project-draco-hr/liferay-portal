{
  boolean deleted=false;
  try {
    IGFolder destFolder=IGFolderServiceUtil.getFolder(groupId,parentFolderId,name);
    IGFolderServiceUtil.deleteFolder(destFolder.getFolderId());
    deleted=true;
  }
 catch (  NoSuchFolderException nsfe) {
    try {
      if (name.indexOf(StringPool.PERIOD) != -1) {
        IGImage image=IGImageServiceUtil.getImageByFolderIdAndNameWithExtension(parentFolderId,name);
        IGImageServiceUtil.deleteImage(image.getImageId());
        deleted=true;
      }
    }
 catch (    NoSuchImageException nsfee) {
    }
  }
  return deleted;
}
