{
  selenium.open("/web/guest/home/");
  selenium.clickAt("link=Invitation Test Page",RuntimeVariables.replace("Invitation Test Page"));
  selenium.waitForPageToLoad("30000");
  selenium.clickAt("//img[@alt='Remove']",RuntimeVariables.replace("Remove"));
  for (int second=0; ; second++) {
    if (second >= 90) {
      fail("timeout");
    }
    try {
      if ("Are you sure you want to remove this component?".equals(selenium.getConfirmation())) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  for (int second=0; ; second++) {
    if (second >= 90) {
      fail("timeout");
    }
    try {
      if (selenium.isElementNotPresent("//section")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  assertTrue(selenium.isElementNotPresent("//section"));
}
