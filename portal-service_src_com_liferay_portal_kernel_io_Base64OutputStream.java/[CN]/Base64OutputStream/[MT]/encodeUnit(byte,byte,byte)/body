{
  int val=b1 & 0xff;
  val<<=8;
  val|=b2 & 0xff;
  val<<=8;
  val|=b3 & 0xff;
  _outPutBuffer[3]=(byte)getChar(val & 0x3f);
  val>>=6;
  _outPutBuffer[2]=(byte)getChar(val & 0x3f);
  val>>=6;
  _outPutBuffer[1]=(byte)getChar(val & 0x3f);
  val>>=6;
  _outPutBuffer[0]=(byte)getChar(val & 0x3f);
  _out.write(_outPutBuffer);
}
