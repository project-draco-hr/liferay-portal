{
  String assetTagName=RandomTestUtil.randomString();
  int initialScopeGroupAssetTagsCount=AssetTagFinderUtil.filterCountByG_N(_scopeGroup.getGroupId(),assetTagName);
  int initialTagsCountSiteGroup=AssetTagFinderUtil.filterCountByG_N(_scopeGroup.getParentGroupId(),assetTagName);
  addBlogsEntry(_scopeGroup.getGroupId(),assetTagName);
  int scopeGroupAssetTagsCount=AssetTagFinderUtil.filterCountByG_N(_scopeGroup.getGroupId(),assetTagName);
  Assert.assertEquals(initialScopeGroupAssetTagsCount + 1,scopeGroupAssetTagsCount);
  int siteGroupAssetTagsCount=AssetTagFinderUtil.filterCountByG_N(_scopeGroup.getParentGroupId(),assetTagName);
  Assert.assertEquals(initialTagsCountSiteGroup,siteGroupAssetTagsCount);
}
