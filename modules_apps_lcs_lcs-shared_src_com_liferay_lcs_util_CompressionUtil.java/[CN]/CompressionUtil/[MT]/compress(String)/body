{
  if ((uncompressedString == null) || (uncompressedString.length() == 0)) {
    return uncompressedString;
  }
  if (_log.isDebugEnabled()) {
    _log.debug("Uncompressed string length " + uncompressedString.length());
  }
  ByteArrayOutputStream byteArrayOutputStream=new ByteArrayOutputStream();
  GZIPOutputStream gzipOutputStream=new GZIPOutputStream(byteArrayOutputStream);
  gzipOutputStream.write(uncompressedString.getBytes());
  gzipOutputStream.close();
  String compressedString=byteArrayOutputStream.toString(LCSConstants.CHARSET_ISO_8859_1);
  if (_log.isDebugEnabled()) {
    _log.debug("Compressed string length " + compressedString.length());
  }
  return compressedString;
}
