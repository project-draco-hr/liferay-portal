{
  DDMForm ddmForm=createDDMForm();
  DDMFormField ddmFormField=createTextDDMFormField("name","",true,false,false);
  addDDMFormFields(ddmForm,ddmFormField);
  DDMFormValues ddmFormValues=createDDMFormValues(ddmForm);
  ddmFormValues.addDDMFormFieldValue(createDDMFormFieldValue("name",new UnlocalizedValue("Joe")));
  DDMFormValuesValidatorUtil.validate(ddmFormValues);
}
