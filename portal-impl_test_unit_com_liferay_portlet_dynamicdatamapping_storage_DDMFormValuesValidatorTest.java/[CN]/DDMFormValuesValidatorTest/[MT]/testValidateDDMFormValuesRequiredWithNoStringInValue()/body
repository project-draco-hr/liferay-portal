{
  DDMForm ddmForm=createDDMForm(createAvailableLocales(LocaleUtil.US),LocaleUtil.US);
  DDMFormField ddmFormField=createTextDDMFormField("name","Name",true,false,true);
  addDDMFormFields(ddmForm,ddmFormField);
  DDMFormValues ddmFormValues=createDDMFormValues(ddmForm);
  LocalizedValue localizedValue=new LocalizedValue(LocaleUtil.US);
  DDMFormFieldValue ddmFormFieldValue=createDDMFormFieldValue("name",localizedValue);
  ddmFormValues.addDDMFormFieldValue(ddmFormFieldValue);
  DDMFormValuesValidatorUtil.validate(ddmFormValues);
}
