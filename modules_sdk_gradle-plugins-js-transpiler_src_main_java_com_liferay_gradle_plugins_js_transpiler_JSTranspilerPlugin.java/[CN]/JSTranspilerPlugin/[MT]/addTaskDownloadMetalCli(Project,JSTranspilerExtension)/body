{
  DownloadNodeModuleTask downloadNodeModuleTask=GradleUtil.addTask(project,DOWNLOAD_METAL_CLI_TASK_NAME,DownloadNodeModuleTask.class);
  downloadNodeModuleTask.setModuleName("metal-cli");
  downloadNodeModuleTask.setModuleVersion(new Callable<String>(){
    @Override public String call() throws Exception {
      return jsTranspilerExtension.getMetalCliVersion();
    }
  }
);
  return downloadNodeModuleTask;
}
