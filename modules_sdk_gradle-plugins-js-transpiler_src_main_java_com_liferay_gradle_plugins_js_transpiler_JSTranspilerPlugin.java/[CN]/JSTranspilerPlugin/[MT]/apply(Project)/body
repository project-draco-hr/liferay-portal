{
  GradleUtil.applyPlugin(project,NodePlugin.class);
  final ExecuteNpmTask npmInstallTask=(ExecuteNpmTask)GradleUtil.getTask(project,NodePlugin.NPM_INSTALL_TASK_NAME);
  JSTranspilerExtension jsTranspilerExtension=GradleUtil.addExtension(project,EXTENSION_NAME,JSTranspilerExtension.class);
  final DownloadNodeModuleTask downloadLfrAmdLoaderTask=addTaskDownloadLfrAmdLoader(project,jsTranspilerExtension);
  final DownloadNodeModuleTask downloadMetalCliTask=addTaskDownloadMetalCli(project,jsTranspilerExtension);
  addTaskTranspileJS(project);
  project.afterEvaluate(new Action<Project>(){
    @Override public void execute(    Project project){
      configureTasksTranspileJS(project,downloadLfrAmdLoaderTask,downloadMetalCliTask,npmInstallTask);
    }
  }
);
}
