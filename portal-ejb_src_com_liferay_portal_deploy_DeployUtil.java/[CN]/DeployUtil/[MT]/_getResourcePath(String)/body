{
  String tmpDir=SystemProperties.get("java.io.tmpdir");
  File file=new File(tmpDir + "/liferay/com/liferay/portal/deploy/dependencies/" + resource);
  File parentFile=file.getParentFile();
  if (parentFile != null) {
    parentFile.mkdirs();
  }
  byte[] byteArray=FileUtil.getBytes(getClass().getResourceAsStream("dependencies/" + resource));
  OutputStream os=new FileOutputStream(file);
  os.write(byteArray);
  return StringUtil.replace(file.getAbsolutePath(),"\\","/");
}
