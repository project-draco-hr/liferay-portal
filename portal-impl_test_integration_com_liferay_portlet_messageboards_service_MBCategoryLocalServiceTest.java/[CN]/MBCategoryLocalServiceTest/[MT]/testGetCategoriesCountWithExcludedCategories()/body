{
  int initialCategoriesCount=MBCategoryLocalServiceUtil.getCategoriesCount(_groupId,MBCategoryConstants.DEFAULT_PARENT_CATEGORY_ID);
  MBTestUtil.addCategory(_groupId);
  MBCategory excludedCategory1=MBTestUtil.addCategory(_groupId);
  MBCategory excludedCategory2=MBTestUtil.addCategory(_groupId);
  Assert.assertEquals(initialCategoriesCount + 3,MBCategoryLocalServiceUtil.getCategoriesCount(_groupId,MBCategoryConstants.DEFAULT_PARENT_CATEGORY_ID,WorkflowConstants.STATUS_ANY));
  Assert.assertEquals(initialCategoriesCount + 1,MBCategoryLocalServiceUtil.getCategoriesCount(_groupId,new long[]{excludedCategory1.getCategoryId(),excludedCategory2.getCategoryId()},new long[]{MBCategoryConstants.DEFAULT_PARENT_CATEGORY_ID},WorkflowConstants.STATUS_ANY));
}
