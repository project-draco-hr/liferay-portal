{
  int initialCategoriesCount=MBCategoryLocalServiceUtil.getCategoriesCount(_group.getGroupId(),MBCategoryConstants.DEFAULT_PARENT_CATEGORY_ID);
  MBTestUtil.addCategory(_group.getGroupId());
  MBTestUtil.addCategory(_group.getGroupId());
  MBCategory excludedCategory=MBTestUtil.addCategory(_group.getGroupId());
  Assert.assertEquals(initialCategoriesCount + 3,MBCategoryLocalServiceUtil.getCategoriesCount(_group.getGroupId(),MBCategoryConstants.DEFAULT_PARENT_CATEGORY_ID,WorkflowConstants.STATUS_ANY));
  Assert.assertEquals(initialCategoriesCount + 2,MBCategoryLocalServiceUtil.getCategoriesCount(_group.getGroupId(),excludedCategory.getCategoryId(),MBCategoryConstants.DEFAULT_PARENT_CATEGORY_ID,WorkflowConstants.STATUS_ANY));
}
