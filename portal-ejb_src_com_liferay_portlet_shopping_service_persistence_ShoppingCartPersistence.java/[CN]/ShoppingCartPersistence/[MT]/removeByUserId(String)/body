{
  Session session=null;
  try {
    session=openSession();
    StringBuffer query=new StringBuffer();
    query.append("FROM ShoppingCart IN CLASS com.liferay.portlet.shopping.service.persistence.ShoppingCartHBM WHERE ");
    query.append("userId = ?");
    query.append(" ");
    Query q=session.createQuery(query.toString());
    int queryPos=0;
    q.setString(queryPos++,userId);
    Iterator itr=q.list().iterator();
    while (itr.hasNext()) {
      ShoppingCartHBM shoppingCartHBM=(ShoppingCartHBM)itr.next();
      ShoppingCartPool.remove((String)shoppingCartHBM.getPrimaryKey());
      session.delete(shoppingCartHBM);
    }
    session.flush();
  }
 catch (  HibernateException he) {
    if (he instanceof ObjectNotFoundException) {
      String msg="No ShoppingCart exists with the key ";
      msg+=StringPool.OPEN_CURLY_BRACE;
      msg+="userId=";
      msg+=userId;
      msg+=StringPool.CLOSE_CURLY_BRACE;
      throw new NoSuchCartException(msg);
    }
 else {
      throw new SystemException(he);
    }
  }
 finally {
    closeSession(session);
  }
}
