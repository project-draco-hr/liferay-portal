{
  xContentBuilder.field(fieldName);
  if (field.isArray() || (values.length > 1)) {
    xContentBuilder.startArray();
  }
  for (  String value : values) {
    xContentBuilder.value(translateValue(field,value));
  }
  if (field.isArray() || (values.length > 1)) {
    xContentBuilder.endArray();
  }
}
