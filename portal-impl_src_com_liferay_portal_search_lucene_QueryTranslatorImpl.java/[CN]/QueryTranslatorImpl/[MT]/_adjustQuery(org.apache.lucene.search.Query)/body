{
  if (query instanceof BooleanQuery) {
    BooleanQuery booleanQuery=(BooleanQuery)query;
    for (    BooleanClause clause : booleanQuery.getClauses()) {
      _adjustQuery(clause.getQuery());
    }
  }
 else   if (query instanceof TermQuery) {
    TermQuery termQuery=(TermQuery)query;
    Term term=termQuery.getTerm();
    try {
      String termText=term.text();
      if (termText.matches("^\\s*[^\"].*\\s+.*[^\"]\\s*$(?m)")) {
        termText=StringPool.QUOTE.concat(termText).concat(StringPool.QUOTE);
        _termField.set(term,termText);
      }
    }
 catch (    Exception e) {
      e.printStackTrace();
    }
  }
 else   if (query instanceof WildcardQuery) {
    WildcardQuery wildcardQuery=(WildcardQuery)query;
    Term term=wildcardQuery.getTerm();
    try {
      String termText=term.text();
      if (termText.matches("^\\s*\\*.*(?m)")) {
        termText=term.text().replaceFirst("\\*",StringPool.BLANK);
        _termField.set(term,termText);
      }
    }
 catch (    Exception e) {
      e.printStackTrace();
    }
  }
}
