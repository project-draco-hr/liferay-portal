{
  if (arg.length == 0) {
    System.out.println(Localizer.getMessage("jspc.usage"));
  }
 else {
    JspC jspc=new JspC();
    try {
      jspc.setArgs(arg);
      if (jspc.helpNeeded) {
        System.out.println(Localizer.getMessage("jspc.usage"));
      }
 else {
        jspc.execute();
      }
    }
 catch (    JasperException je) {
      System.err.println(je);
      if (jspc.getDieLevel() != NO_DIE_LEVEL) {
        System.exit(jspc.getDieLevel());
      }
    }
  }
}
