{
  StringBundler sb=new StringBundler(8);
  sb.append(portletDataContext.getRootPath());
  sb.append("/comments/");
  sb.append(PortalUtil.getClassNameId(className));
  sb.append(CharPool.FORWARD_SLASH);
  sb.append(classPK);
  sb.append(CharPool.FORWARD_SLASH);
  sb.append(mbMessage.getMessageId());
  sb.append(".xml");
  return sb.toString();
}
