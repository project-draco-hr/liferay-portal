{
  LDAPConfiguration ldapCompanyServiceSettings=LDAPConfigurationUtil.getLDAPConfiguration(companyId);
  boolean defaultLDAPPasswordPolicyEnabled=ldapCompanyServiceSettings.passwordPolicyEnabled();
  if (PrefsPropsUtil.getBoolean(companyId,PropsKeys.LDAP_PASSWORD_POLICY_ENABLED,defaultLDAPPasswordPolicyEnabled)) {
    return true;
  }
 else {
    return false;
  }
}
