{
  final BuildLangTask buildLangTask=GradleUtil.addTask(project,BUILD_LANG_TASK_NAME,BuildLangTask.class);
  buildLangTask.setDescription("Runs Liferay Lang Builder to translate language property files.");
  PluginContainer pluginContainer=project.getPlugins();
  pluginContainer.withType(JavaPlugin.class,new Action<JavaPlugin>(){
    @Override public void execute(    JavaPlugin javaPlugin){
      configureTaskBuildLangForJavaPlugin(buildLangTask);
    }
  }
);
  return buildLangTask;
}
