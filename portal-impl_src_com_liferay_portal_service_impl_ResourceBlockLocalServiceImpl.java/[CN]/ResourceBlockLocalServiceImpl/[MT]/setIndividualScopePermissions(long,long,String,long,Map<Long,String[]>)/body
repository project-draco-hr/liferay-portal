{
  boolean flushEnabled=PermissionThreadLocal.isFlushEnabled();
  PermissionThreadLocal.setIndexEnabled(false);
  try {
    PermissionedModel permissionedModel=getPermissionedModel(name,primKey);
    for (    Map.Entry<Long,String[]> entry : roleIdsToActionIds.entrySet()) {
      long roleId=entry.getKey();
      String[] actionIds=entry.getValue();
      updateIndividualScopePermissions(companyId,groupId,name,permissionedModel,roleId,getActionIds(name,ListUtil.fromArray(actionIds)),ResourceBlockConstants.OPERATOR_SET);
    }
  }
  finally {
    PermissionThreadLocal.setIndexEnabled(flushEnabled);
    PermissionCacheUtil.clearCache();
  }
}
