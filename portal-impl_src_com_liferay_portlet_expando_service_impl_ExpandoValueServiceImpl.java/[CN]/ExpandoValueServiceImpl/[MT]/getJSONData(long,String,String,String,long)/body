{
  ExpandoColumn column=expandoColumnLocalService.getColumn(companyId,className,tableName,columnName);
  if (ExpandoColumnPermission.contains(getPermissionChecker(),column,ActionKeys.VIEW)) {
    String data=expandoValueLocalService.getData(companyId,className,tableName,columnName,classPK,StringPool.BLANK);
    if (Validator.isNotNull(data)) {
      StringBundler sb=new StringBundler(3);
      sb.append("{data=");
      sb.append(data);
      sb.append("}");
      return JSONFactoryUtil.createJSONObject(sb.toString());
    }
 else {
      return null;
    }
  }
 else {
    return null;
  }
}
