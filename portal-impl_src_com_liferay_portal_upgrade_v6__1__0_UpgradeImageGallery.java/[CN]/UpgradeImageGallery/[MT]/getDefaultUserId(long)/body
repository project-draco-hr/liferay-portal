{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  long userId=0;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select userId from User_ where defaultUser = ? and " + "companyId = ?");
    ps.setInt(1,1);
    ps.setLong(2,companyId);
    rs=ps.executeQuery();
    if (rs.next()) {
      userId=rs.getLong("userId");
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
  return userId;
}
