{
  String finderClassName="Users_Groups";
  String finderMethodName="getGroupsSize";
  String[] finderParams=new String[]{Long.class.getName()};
  Object[] finderArgs=new Object[]{new Long(pk)};
  Object result=FinderCache.getResult(finderClassName,finderMethodName,finderParams,finderArgs);
  if (result == null) {
    Session session=null;
    try {
      session=openSession();
      SQLQuery q=session.createSQLQuery(_SQL_GETGROUPSSIZE);
      q.addScalar(HibernateUtil.getCountColumnName(),Hibernate.LONG);
      QueryPos qPos=QueryPos.getInstance(q);
      qPos.add(pk);
      Long count=null;
      Iterator itr=q.list().iterator();
      if (itr.hasNext()) {
        count=(Long)itr.next();
      }
      if (count == null) {
        count=new Long(0);
      }
      FinderCache.putResult(finderClassName,finderMethodName,finderParams,finderArgs,count);
      return count.intValue();
    }
 catch (    Exception e) {
      throw HibernateUtil.processException(e);
    }
 finally {
      closeSession(session);
    }
  }
 else {
    return ((Long)result).intValue();
  }
}
