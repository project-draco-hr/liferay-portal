{
  User user=findByPrimaryKey(userId);
  Session session=null;
  try {
    session=openSession();
    User[] array=new UserImpl[3];
    array[0]=getByC_A_PrevAndNext(session,user,companyId,status,orderByComparator,true);
    array[1]=user;
    array[2]=getByC_A_PrevAndNext(session,user,companyId,status,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
