{
  path=getPath(path,name);
  sb.append("<tr>\n");
  sb.append("<td><a href=\"" + path + "/\">"+ name+ "/</a></td>\n");
  if (modifiedDate == null) {
    sb.append("<td> - </td>\n");
  }
 else {
    sb.append("<td>" + _dateFormat.format(modifiedDate) + "</td>\n");
  }
  sb.append("<td> - </td>\n");
  sb.append("<td>" + description + "</td>\n");
  sb.append("</tr>\n");
}
