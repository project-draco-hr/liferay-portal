{
  String portletName=_dlRequestHelper.getPortletName();
  if (portletName.equals(PortletKeys.DOCUMENT_LIBRARY) || portletName.equals(PortletKeys.DOCUMENT_LIBRARY_ADMIN)) {
    return true;
  }
  DLPortletInstanceSettings dlPortletInstanceSettings=_dlRequestHelper.getDLPortletInstanceSettings();
  return dlPortletInstanceSettings.isShowFolderMenu();
}
