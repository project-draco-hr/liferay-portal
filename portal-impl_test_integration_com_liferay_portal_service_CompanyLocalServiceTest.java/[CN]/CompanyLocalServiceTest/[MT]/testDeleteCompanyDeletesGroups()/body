{
  Company company=addCompany();
  CompanyLocalServiceUtil.deleteCompany(company);
  int count=GroupLocalServiceUtil.getGroupsCount(company.getCompanyId(),GroupConstants.ANY_PARENT_GROUP_ID,true);
  Assert.assertEquals(0,count);
  count=GroupLocalServiceUtil.getGroupsCount(company.getCompanyId(),GroupConstants.ANY_PARENT_GROUP_ID,false);
  Assert.assertEquals(0,count);
}
