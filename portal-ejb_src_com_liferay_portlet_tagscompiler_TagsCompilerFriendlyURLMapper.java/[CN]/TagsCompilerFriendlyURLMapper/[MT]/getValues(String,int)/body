{
  String friendlyURL=url.substring(0,pos);
  String queryString=_QUERY_STRING;
  int x=url.indexOf(StringPool.SLASH,pos + 1);
  int y=url.length();
  String[] entries=StringUtil.split(url.substring(x + 1,y),StringPool.SLASH);
  if (entries.length > 0) {
    StringBuffer sb=new StringBuffer();
    sb.append(queryString);
    sb.append(StringPool.AMPERSAND);
    sb.append(PortalUtil.getPortletNamespace(PortletKeys.TAGS_COMPILER));
    sb.append("entries=");
    for (int i=0; i < entries.length; i++) {
      String entry=StringUtil.replace(entries[i],StringPool.PLUS,StringPool.SPACE);
      if (i != 0) {
        sb.append(StringPool.COMMA);
      }
      sb.append(entry);
    }
    queryString=sb.toString();
  }
  return new String[]{friendlyURL,queryString};
}
