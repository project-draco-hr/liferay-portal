      }
      qPos.add(cities,2);
      qPos.add(zips,2);
    }
    int count=0;
    Iterator<Long> itr=q.list().iterator();
    while (itr.hasNext()) {
      Long l=itr.next();
      if (l != null) {
        count+=l.intValue();
      }
    }
    return count;
