{
  final WSDLBuilderExtension wsdlBuilderExtension=GradleUtil.addExtension(project,"wsdlBuilder",WSDLBuilderExtension.class);
  addWSDLBuilderConfiguration(project);
  addTaskBuildWSDL(project);
  project.afterEvaluate(new Action<Project>(){
    @Override public void execute(    Project project){
      addTaskBuildWSDLTasks(project,wsdlBuilderExtension);
    }
  }
);
}
