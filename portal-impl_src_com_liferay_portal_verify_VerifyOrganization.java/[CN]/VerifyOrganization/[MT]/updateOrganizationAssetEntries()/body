{
  ActionableDynamicQuery actionableDynamicQuery=new OrganizationActionableDynamicQuery(){
    @Override protected void performAction(    Object object){
      Organization organization=(Organization)object;
      try {
        AssetEntry assetEntry=AssetEntryLocalServiceUtil.fetchEntry(Organization.class.getName(),organization.getOrganizationId());
        if (assetEntry != null) {
          assetEntry.setClassUuid(organization.getUuid());
          AssetEntryLocalServiceUtil.updateAssetEntry(assetEntry);
        }
 else {
          OrganizationLocalServiceUtil.updateAsset(organization.getUserId(),organization,null,null);
        }
      }
 catch (      Exception e) {
        if (_log.isWarnEnabled()) {
          _log.warn("Unable to update asset entry for organization " + organization.getOrganizationId(),e);
        }
      }
    }
  }
;
  actionableDynamicQuery.performActions();
}
