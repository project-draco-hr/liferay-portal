{
  if (isEmpty(array)) {
    return false;
  }
  for (int i=0; i < array.length; i++) {
    if (ignoreCase) {
      if (StringUtil.equalsIgnoreCase(array[i],value)) {
        return true;
      }
    }
 else {
      if (Objects.equals(array[i],value)) {
        return true;
      }
    }
  }
  return false;
}
