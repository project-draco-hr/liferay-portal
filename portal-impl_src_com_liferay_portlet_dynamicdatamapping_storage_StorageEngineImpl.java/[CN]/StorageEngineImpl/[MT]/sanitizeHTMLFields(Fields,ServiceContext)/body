{
  try {
    for (    Field field : fields) {
      String dataType=field.getDataType();
      if (!dataType.equals(FieldConstants.HTML)) {
        continue;
      }
      for (      Locale locale : field.getAvailableLocales()) {
        List<Serializable> values=field.getValues(locale);
        if (values == null) {
          continue;
        }
        List<Serializable> sanitizedValues=new ArrayList<>(values.size());
        for (        Serializable value : values) {
          String sanitizedValue=SanitizerUtil.sanitize(serviceContext.getCompanyId(),serviceContext.getScopeGroupId(),serviceContext.getUserId(),Field.class.getName(),0,ContentTypes.TEXT_HTML,Sanitizer.MODE_ALL,value.toString(),null);
          sanitizedValues.add(sanitizedValue);
        }
        field.setValues(locale,sanitizedValues);
      }
    }
  }
 catch (  Exception e) {
    throw new StorageException("Unable to sanitize DDM Field",e);
  }
}
