{
  RenderResponse renderResponse=PowerMockito.mock(RenderResponse.class);
  long requiredRoleId=addRequiredRoles()[0];
  Role role=RoleLocalServiceUtil.getRole(requiredRoleId);
  UserGroupRoleUserChecker userGroupRoleUserChecker=new UserGroupRoleUserChecker(renderResponse,group,role);
  User user=UserTestUtil.addUser(ServiceTestUtil.randomString(),TestPropsValues.getGroupId());
  UserGroupRoleLocalServiceUtil.addUserGroupRoles(user.getUserId(),group.getGroupId(),new long[]{requiredRoleId});
  Assert.assertTrue(userGroupRoleUserChecker.isDisabled(user));
}
