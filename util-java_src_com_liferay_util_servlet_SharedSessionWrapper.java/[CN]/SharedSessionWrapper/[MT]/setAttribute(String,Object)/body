{
  if (_requireSerializable && (!value.getClass().isAssignableFrom(Serializable.class))) {
    _log.error("Attempting to store non-serializable object: " + value + " of type: "+ value.getClass().getName());
    return;
  }
  try {
    _session.setAttribute(name,value);
  }
 catch (  IllegalArgumentException e) {
    if (_log.isErrorEnabled()) {
      _log.error("Attempting to store non-serializable object: " + value + " of type: "+ value.getClass().getName());
    }
  }
}
