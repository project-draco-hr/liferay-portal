{
  final ElasticsearchUpdateDocumentCommand updateDocumentCommand=new ElasticsearchUpdateDocumentCommandImpl(){
{
      setElasticsearchConnectionManager(elasticsearchConnectionManager);
      setElasticsearchDocumentFactory(new DefaultElasticsearchDocumentFactory());
      activate(_properties);
    }
  }
;
  return new ElasticsearchIndexWriter(){
{
      setElasticsearchConnectionManager(elasticsearchConnectionManager);
      setElasticsearchUpdateDocumentCommand(updateDocumentCommand);
    }
  }
;
}
