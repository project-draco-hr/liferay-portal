{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(shoppingItem);
    }
 else {
      if (shoppingItem.isNew()) {
        session.save(shoppingItem);
      }
 else {
        shoppingItem=(ShoppingItem)session.merge(shoppingItem);
      }
    }
    session.flush();
    shoppingItem.setNew(false);
    return shoppingItem;
  }
 catch (  Exception e) {
    throw HibernateUtil.processException(e);
  }
 finally {
    closeSession(session);
    FinderCache.clearCache(ShoppingItem.class.getName());
  }
}
