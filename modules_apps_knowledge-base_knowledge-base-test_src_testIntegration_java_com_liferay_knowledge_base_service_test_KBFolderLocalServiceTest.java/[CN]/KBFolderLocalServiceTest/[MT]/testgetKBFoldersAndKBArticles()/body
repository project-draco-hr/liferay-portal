{
  QueryDefinition<Object> queryDefinition=new QueryDefinition<>();
  queryDefinition.setStatus(WorkflowConstants.STATUS_ANY);
  queryDefinition.setOrderByComparator(new KBEntriesTitleComparator<>(false,true));
  KBArticle kbArticle=addKBArticle(KBFolderConstants.DEFAULT_PARENT_FOLDER_ID,RandomTestUtil.randomString());
  List<Object> kbFolderAndArticles=KBFolderLocalServiceUtil.getKBFoldersAndKBArticles(_group.getGroupId(),KBFolderConstants.DEFAULT_PARENT_FOLDER_ID,queryDefinition);
  KBFolder currentkbFolder=(KBFolder)kbFolderAndArticles.get(0);
  KBArticle currentkbArticle=(KBArticle)kbFolderAndArticles.get(1);
  Assert.assertEquals(_kbFolder.getKbFolderId(),currentkbFolder.getKbFolderId());
  Assert.assertEquals(kbArticle.getKbArticleId(),currentkbArticle.getKbArticleId());
}
