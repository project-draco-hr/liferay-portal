{
  long[] categoryIds=getCategoryIds(groupId,MBCategoryConstants.DEFAULT_PARENT_CATEGORY_ID);
  if (categoryIds.length == 0) {
    return 0;
  }
  QueryDefinition<MBCategory> queryDefinition=new QueryDefinition<MBCategory>(WorkflowConstants.STATUS_ANY);
  return mbCategoryFinder.filterCountByS_G_U_P(groupId,userId,categoryIds,queryDefinition);
}
