{
  boolean visible=false;
  if (entry.getStatus() == WorkflowConstants.STATUS_APPROVED) {
    visible=true;
  }
  String summary=HtmlUtil.extractText(StringUtil.shorten(entry.getContent(),500));
  assetEntryLocalService.updateEntry(userId,entry.getGroupId(),BlogsEntry.class.getName(),entry.getEntryId(),entry.getUuid(),assetCategoryIds,assetTagNames,visible,null,null,entry.getDisplayDate(),null,ContentTypes.TEXT_HTML,entry.getTitle(),null,summary,null,null,0,0,null,false);
}
