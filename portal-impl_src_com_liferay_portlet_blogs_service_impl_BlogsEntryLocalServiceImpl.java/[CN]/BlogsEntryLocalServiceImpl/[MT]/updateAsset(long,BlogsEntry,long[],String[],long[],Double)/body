{
  boolean visible=false;
  if (entry.isApproved()) {
    visible=true;
  }
  String summary=HtmlUtil.extractText(StringUtil.shorten(entry.getContent(),500));
  AssetEntry assetEntry=assetEntryLocalService.updateEntry(userId,entry.getGroupId(),entry.getCreateDate(),entry.getModifiedDate(),BlogsEntry.class.getName(),entry.getEntryId(),entry.getUuid(),0,assetCategoryIds,assetTagNames,true,visible,null,null,null,ContentTypes.TEXT_HTML,entry.getTitle(),entry.getDescription(),summary,null,null,0,0,priority);
  assetLinkLocalService.updateLinks(userId,assetEntry.getEntryId(),assetLinkEntryIds,AssetLinkConstants.TYPE_RELATED);
}
