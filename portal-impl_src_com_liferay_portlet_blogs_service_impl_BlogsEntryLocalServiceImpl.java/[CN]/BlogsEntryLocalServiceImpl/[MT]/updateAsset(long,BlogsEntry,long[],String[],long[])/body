{
  boolean visible=false;
  if (entry.isApproved()) {
    visible=true;
  }
  String summary=HtmlUtil.extractText(StringUtil.shorten(entry.getContent(),500));
  AssetEntry assetEntry=assetEntryLocalService.updateEntry(userId,entry.getGroupId(),BlogsEntry.class.getName(),entry.getEntryId(),entry.getUuid(),0,assetCategoryIds,assetTagNames,visible,null,null,null,ContentTypes.TEXT_HTML,entry.getTitle(),null,summary,null,null,0,0,null,false);
  assetLinkLocalService.updateLinks(userId,assetEntry.getEntryId(),assetLinkEntryIds,AssetLinkConstants.TYPE_RELATED);
}
