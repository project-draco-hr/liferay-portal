{
  blogsEntryPersistence.remove(entry);
  resourceLocalService.deleteResource(entry.getCompanyId(),BlogsEntry.class.getName(),ResourceConstants.SCOPE_INDIVIDUAL,entry.getEntryId());
  blogsStatsUserLocalService.updateStatsUser(entry.getGroupId(),entry.getUserId());
  assetEntryLocalService.deleteEntry(BlogsEntry.class.getName(),entry.getEntryId());
  expandoValueLocalService.deleteValues(BlogsEntry.class.getName(),entry.getEntryId());
  mbMessageLocalService.deleteDiscussionMessages(BlogsEntry.class.getName(),entry.getEntryId());
  ratingsStatsLocalService.deleteStats(BlogsEntry.class.getName(),entry.getEntryId());
  socialActivityLocalService.deleteActivities(BlogsEntry.class.getName(),entry.getEntryId());
  try {
    BlogsIndexer.deleteEntry(entry.getCompanyId(),entry.getEntryId());
  }
 catch (  SearchException se) {
    _log.error("Deleting index " + entry.getEntryId(),se);
  }
}
