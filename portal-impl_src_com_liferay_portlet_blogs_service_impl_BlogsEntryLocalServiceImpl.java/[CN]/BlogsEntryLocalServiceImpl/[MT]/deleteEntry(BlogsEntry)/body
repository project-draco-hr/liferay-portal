{
  try {
    Indexer.deleteEntry(entry.getCompanyId(),entry.getEntryId());
  }
 catch (  IOException ioe) {
    _log.error("Deleting index " + entry.getEntryId(),ioe);
  }
  TagsAssetLocalServiceUtil.deleteAsset(BlogsEntry.class.getName(),String.valueOf(entry.getEntryId()));
  MBMessageLocalServiceUtil.deleteDiscussionMessages(BlogsEntry.class.getName(),String.valueOf(entry.getEntryId()));
  ResourceLocalServiceUtil.deleteResource(entry.getCompanyId(),BlogsEntry.class.getName(),ResourceImpl.SCOPE_INDIVIDUAL,entry.getEntryId());
  BlogsEntryUtil.remove(entry.getEntryId());
}
