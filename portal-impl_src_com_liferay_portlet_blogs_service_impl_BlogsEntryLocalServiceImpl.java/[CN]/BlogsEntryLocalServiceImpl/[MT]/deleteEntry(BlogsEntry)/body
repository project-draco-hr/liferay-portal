{
  try {
    Indexer.deleteEntry(entry.getCompanyId(),entry.getEntryId());
  }
 catch (  IOException ioe) {
    _log.error("Deleting index " + entry.getEntryId(),ioe);
  }
  tagsAssetLocalService.deleteAsset(BlogsEntry.class.getName(),entry.getEntryId());
  socialActivityLocalService.deleteActivities(BlogsEntry.class.getName(),entry.getEntryId());
  ratingsStatsLocalService.deleteStats(BlogsEntry.class.getName(),entry.getEntryId());
  mbMessageLocalService.deleteDiscussionMessages(BlogsEntry.class.getName(),entry.getEntryId());
  resourceLocalService.deleteResource(entry.getCompanyId(),BlogsEntry.class.getName(),ResourceConstants.SCOPE_INDIVIDUAL,entry.getEntryId());
  blogsEntryPersistence.remove(entry.getEntryId());
}
