{
  TrashEntry trashEntry=trashEntryLocalService.getEntry(BlogsEntry.class.getName(),entryId);
  updateStatus(userId,entryId,trashEntry.getStatus(),new ServiceContext());
  socialActivityCounterLocalService.enableActivityCounters(BlogsEntry.class.getName(),entryId);
  socialActivityLocalService.addActivity(userId,trashEntry.getGroupId(),BlogsEntry.class.getName(),entryId,SocialActivityConstants.TYPE_RESTORE_FROM_TRASH,StringPool.BLANK,0);
}
