{
  ServiceContext serviceContext=new ServiceContext();
  serviceContext.setAddGroupPermissions(true);
  serviceContext.setAddGuestPermissions(true);
  Repository repository=PortletFileRepositoryUtil.addPortletRepository(groupId,PortletKeys.BLOGS,serviceContext);
  Folder folder=PortletFileRepositoryUtil.addPortletFolder(userId,repository.getRepositoryId(),DLFolderConstants.DEFAULT_PARENT_FOLDER_ID,PortletKeys.BLOGS,serviceContext);
  return folder;
}
