{
  JSONArray jsonArray=JSONFactoryUtil.createJSONArray();
  String firstRowButtons="fontselect fontsizeselect | forecolor backcolor | " + "bold italic underline strikethrough | " + "alignleft aligncenter alignright alignjustify";
  jsonArray.put(firstRowButtons);
  String secondRowButtons="cut copy paste bullist numlist | blockquote | undo redo | " + "link unlink image ";
  if (showSource) {
    secondRowButtons+="code ";
  }
  secondRowButtons+="| hr removeformat | preview print fullscreen";
  jsonArray.put(secondRowButtons);
  return jsonArray;
}
