{
  while (true) {
    if (filePath == null) {
      return false;
    }
    SyncFile syncFile=SyncFileService.fetchSyncFile(filePath.toString());
    if (syncFile != null) {
      if (syncFile.isSystem()) {
        break;
      }
      if (syncFile.getState() == SyncFile.STATE_ERROR) {
        return true;
      }
    }
    filePath=filePath.getParent();
  }
  return false;
}
