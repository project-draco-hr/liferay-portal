{
  Group grandparentGroup=GroupTestUtil.addGroup();
  Group parentGroup=GroupTestUtil.addGroup(grandparentGroup.getGroupId());
  _group=GroupTestUtil.addGroup(parentGroup.getGroupId());
  _groups.add(_group);
  _groups.add(parentGroup);
  _groups.add(grandparentGroup);
  _user=UserTestUtil.addGroupAdminUser(_group);
  _users.add(_user);
  long[] groupIds=getSharedContentSiteGroupIds();
  Assert.assertTrue(ArrayUtil.contains(groupIds,grandparentGroup.getGroupId()));
  Assert.assertTrue(ArrayUtil.contains(groupIds,parentGroup.getGroupId()));
}
