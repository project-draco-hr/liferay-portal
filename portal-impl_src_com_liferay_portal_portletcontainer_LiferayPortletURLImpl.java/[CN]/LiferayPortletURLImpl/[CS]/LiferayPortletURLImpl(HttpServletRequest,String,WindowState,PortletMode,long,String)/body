{
  super(request,portletId,plid,lifecycle);
  setLifecycle(getLifecyclePhase(lifecycle));
  setURLType(getChannelURlType(lifecycle));
  try {
    setWindowState(windowState);
  }
 catch (  WindowStateException ex) {
    if (_log.isWarnEnabled()) {
      _log.warn("Exception while setting window state for " + portletId,ex);
    }
    try {
      setWindowState(WindowState.NORMAL);
    }
 catch (    WindowStateException ignored) {
    }
  }
  try {
    setPortletMode(portletMode);
  }
 catch (  PortletModeException ex) {
    if (_log.isWarnEnabled()) {
      _log.warn("Exception while setting portlet mode for " + portletId,ex);
    }
    try {
      setPortletMode(PortletMode.VIEW);
    }
 catch (    PortletModeException ignored) {
    }
  }
}
