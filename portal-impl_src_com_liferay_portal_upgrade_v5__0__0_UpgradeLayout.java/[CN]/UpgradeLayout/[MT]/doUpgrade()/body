{
  String languageId=LocaleUtil.toLanguageId(LocaleUtil.getDefault());
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("select plid, typeSettings from Layout where typeSettings " + "like '%meta-description=%'");
    rs=ps.executeQuery();
    while (rs.next()) {
      long plid=rs.getLong("plid");
      String typeSettings=rs.getString("typeSettings");
      typeSettings=StringUtil.replace(typeSettings,new String[]{"meta-description=","meta-keywords=","meta-robots="},new String[]{"meta-description_" + languageId + "=","meta-keywords_" + languageId + "=","meta-robots_" + languageId + "="});
      updateTypeSettings(plid,typeSettings);
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
