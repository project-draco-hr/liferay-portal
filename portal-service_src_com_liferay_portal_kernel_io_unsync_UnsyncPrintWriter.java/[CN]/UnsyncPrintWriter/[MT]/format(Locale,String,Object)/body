{
  if (_out == null) {
    _hasError=true;
  }
 else {
    try {
      if ((_formatter == null) || (_formatter.locale() != l)) {
        _formatter=new Formatter(this,l);
      }
      _formatter.format(l,format,args);
      if (_autoFlush) {
        _out.flush();
      }
    }
 catch (    InterruptedIOException x) {
      Thread.currentThread().interrupt();
    }
catch (    IOException x) {
      _hasError=true;
    }
  }
  return this;
}
