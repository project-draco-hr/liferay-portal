{
  WikiPage wikiPage=findByPrimaryKey(pageId);
  Session session=null;
  try {
    session=openSession();
    WikiPage[] array=new WikiPageImpl[3];
    array[0]=getByR_N_S_PrevAndNext(session,wikiPage,resourcePrimKey,nodeId,status,orderByComparator,true);
    array[1]=wikiPage;
    array[2]=getByR_N_S_PrevAndNext(session,wikiPage,resourcePrimKey,nodeId,status,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
