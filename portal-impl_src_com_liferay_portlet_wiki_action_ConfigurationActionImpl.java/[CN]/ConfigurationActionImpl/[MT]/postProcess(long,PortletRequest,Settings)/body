{
  WikiSettings wikiSettings=new WikiSettings(settings);
  removeDefaultValue(portletRequest,settings,"emailFromAddress",wikiSettings.getEmailFromAddress());
  removeDefaultValue(portletRequest,settings,"emailFromName",wikiSettings.getEmailFromName());
  String languageId=LocaleUtil.toLanguageId(LocaleUtil.getSiteDefault());
  removeDefaultValue(portletRequest,settings,"emailPageAddedBody_" + languageId,wikiSettings.getEmailPageAddedBody());
  removeDefaultValue(portletRequest,settings,"emailPageAddedSubject_" + languageId,wikiSettings.getEmailPageAddedSubject());
  removeDefaultValue(portletRequest,settings,"emailPageUpdatedBody_" + languageId,wikiSettings.getEmailPageUpdatedBody());
  removeDefaultValue(portletRequest,settings,"emailPageUpdatedSubject_" + languageId,wikiSettings.getEmailPageUpdatedSubject());
}
