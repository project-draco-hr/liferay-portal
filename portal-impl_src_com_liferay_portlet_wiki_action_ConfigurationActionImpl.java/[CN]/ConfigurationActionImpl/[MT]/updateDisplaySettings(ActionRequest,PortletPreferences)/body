{
  boolean enableComments=ParamUtil.getBoolean(actionRequest,"enableComments");
  boolean enableCommentRatings=ParamUtil.getBoolean(actionRequest,"enableCommentRatings");
  String visibleNodes=ParamUtil.getString(actionRequest,"visibleNodes");
  String hiddenNodes=ParamUtil.getString(actionRequest,"hiddenNodes");
  if (Validator.isNull(visibleNodes)) {
    SessionErrors.add(actionRequest,"visibleNodesCount");
  }
 else {
    preferences.setValue("enable-comments",String.valueOf(enableComments));
    preferences.setValue("enable-comment-ratings",String.valueOf(enableCommentRatings));
    preferences.setValue("visible-nodes",visibleNodes);
    preferences.setValue("hidden-nodes",hiddenNodes);
  }
}
