{
  boolean emailPageUpdatedEnabled=ParamUtil.getBoolean(actionRequest,"emailPageUpdatedEnabled");
  String emailPageUpdatedSubjectPrefix=ParamUtil.getString(actionRequest,"emailPageUpdatedSubjectPrefix");
  String emailPageUpdatedBody=ParamUtil.getString(actionRequest,"emailPageUpdatedBody");
  String emailPageUpdatedSignature=ParamUtil.getString(actionRequest,"emailPageUpdatedSignature");
  if (Validator.isNull(emailPageUpdatedSubjectPrefix)) {
    SessionErrors.add(actionRequest,"emailPageUpdatedSubjectPrefix");
  }
 else   if (Validator.isNull(emailPageUpdatedBody)) {
    SessionErrors.add(actionRequest,"emailPageUpdatedBody");
  }
 else {
    prefs.setValue("email-page-updated-enabled",String.valueOf(emailPageUpdatedEnabled));
    prefs.setValue("email-page-updated-subject-prefix",emailPageUpdatedSubjectPrefix);
    prefs.setValue("email-page-updated-body",emailPageUpdatedBody);
    prefs.setValue("email-page-updated-signature",emailPageUpdatedSignature);
  }
}
