{
  List<AssetVocabulary> vocabularies=AssetVocabularyLocalServiceUtil.getGroupVocabularies(groupId,false);
  Group group=GroupLocalServiceUtil.getGroup(groupId);
  if (!group.isCompany()) {
    Group companyGroup=GroupLocalServiceUtil.fetchCompanyGroup(group.getCompanyId());
    if (companyGroup != null) {
      vocabularies=ListUtil.copy(vocabularies);
      vocabularies.addAll(AssetVocabularyLocalServiceUtil.getGroupVocabularies(companyGroup.getGroupId()));
    }
  }
  long classNameId=ClassNameLocalServiceUtil.getClassNameId(className);
  for (  AssetVocabulary vocabulary : vocabularies) {
    validate(classNameId,classTypePK,categoryIds,vocabulary);
  }
}
