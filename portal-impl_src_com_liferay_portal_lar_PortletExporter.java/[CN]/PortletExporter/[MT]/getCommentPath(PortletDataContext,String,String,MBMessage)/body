{
  StringBuilder sb=new StringBuilder();
  sb.append(context.getRootPath());
  sb.append("/comments/");
  sb.append(PortalUtil.getClassNameId(className));
  sb.append(CharPool.FORWARD_SLASH);
  sb.append(classPK);
  sb.append(CharPool.FORWARD_SLASH);
  sb.append(message.getMessageId());
  sb.append(".xml");
  return sb.toString();
}
