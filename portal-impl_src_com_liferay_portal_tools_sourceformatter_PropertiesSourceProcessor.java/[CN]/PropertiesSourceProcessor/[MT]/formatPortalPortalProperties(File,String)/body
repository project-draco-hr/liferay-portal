{
  StringBundler sb=new StringBundler();
  UnsyncBufferedReader unsyncBufferedReader=new UnsyncBufferedReader(new UnsyncStringReader(_portalPortalProperties));
  String line=null;
  while ((line=unsyncBufferedReader.readLine()) != null) {
    line=trimLine(line,true);
    if (line.startsWith(StringPool.TAB)) {
      line=line.replaceFirst(StringPool.TAB,StringPool.FOUR_SPACES);
    }
    sb.append(line);
    sb.append("\n");
  }
  unsyncBufferedReader.close();
  String newContent=sb.toString();
  if (newContent.endsWith("\n")) {
    newContent=newContent.substring(0,newContent.length() - 1);
  }
  if ((newContent != null) && !_portalPortalProperties.equals(newContent)) {
    fileUtil.write(file,newContent);
    sourceFormatterHelper.printError(fileName,file);
  }
}
