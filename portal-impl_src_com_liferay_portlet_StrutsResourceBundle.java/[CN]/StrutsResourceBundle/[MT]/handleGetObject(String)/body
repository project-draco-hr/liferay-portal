{
  if (key == null) {
    throw new NullPointerException();
  }
  if ((key.equals(JavaConstants.JAVAX_PORTLET_TITLE) || key.equals(JavaConstants.JAVAX_PORTLET_SHORT_TITLE) || key.equals(JavaConstants.JAVAX_PORTLET_KEYWORDS)|| key.equals(JavaConstants.JAVAX_PORTLET_DESCRIPTION))) {
    key=key.concat(StringPool.PERIOD).concat(_portletName);
  }
  String value=LanguageUtil.get(_locale,key);
  if ((value == null) && ResourceBundleReplaceThreadLocal.isReplace()) {
    value=ResourceBundleUtil.NULL_VALUE_PLACE_HOLDER;
  }
  return value;
}
