{
  JournalArticle existingArticle=null;
  if (!preloaded) {
    JournalArticleResource journalArticleResource=_journalArticleResourceLocalService.fetchJournalArticleResourceByUuidAndGroupId(articleResourceUuid,groupId);
    if (journalArticleResource == null) {
      return null;
    }
    return _journalArticleLocalService.fetchArticle(groupId,journalArticleResource.getArticleId());
  }
  if (Validator.isNotNull(newArticleId)) {
    existingArticle=_journalArticleLocalService.fetchArticle(groupId,newArticleId);
  }
  if ((existingArticle == null) && Validator.isNull(newArticleId)) {
    existingArticle=_journalArticleLocalService.fetchArticle(groupId,articleId);
  }
  return existingArticle;
}
