{
  String languageId=LocaleUtil.toLanguageId(LocaleUtil.getSiteDefault());
  DLSettings dlSettings=new DLSettings(settings);
  removeDefaultValue(portletRequest,settings,"emailFileEntryAddedBody_" + languageId,dlSettings.getEmailFileEntryAddedBody());
  removeDefaultValue(portletRequest,settings,"emailFileEntryAddedSubject_" + languageId,dlSettings.getEmailFileEntryAddedSubject());
  removeDefaultValue(portletRequest,settings,"emailFileEntryUpdatedBody_" + languageId,dlSettings.getEmailFileEntryUpdatedBody());
  removeDefaultValue(portletRequest,settings,"emailFileEntryUpdatedSubject_" + languageId,dlSettings.getEmailFileEntryUpdatedSubject());
}
