{
  DiscussionPermission discussionPermission=_commentManager.getDiscussionPermission(getPermissionChecker());
  long companyId=getCompanyId(groupId);
  discussionPermission.checkAddPermission(companyId,groupId,className,classPK);
  return _commentManager.addComment(getUserId(),groupId,className,classPK,body,createServiceContextFunction(companyId));
}
