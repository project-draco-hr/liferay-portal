{
  content=ExportImportUtil.replaceExportLayoutReferences(portletDataContext,content);
  content=ExportImportUtil.replaceExportLinksToLayouts(portletDataContext,content);
  content=ExportImportUtil.replaceExportDLReferences(portletDataContext,entityStagedModel,entityElement,content);
  Element groupElement=entityElement.getParent();
  String groupElementName=groupElement.getName();
  if (!groupElementName.equals(JournalArticle.class.getSimpleName())) {
    content=StringUtil.replace(content,StringPool.AMPERSAND_ENCODED,StringPool.AMPERSAND);
  }
  return content;
}
