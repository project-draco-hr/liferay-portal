{
  PermissionChecker permissionChecker=getPermissionChecker();
  if (parentLayoutId == LayoutConstants.DEFAULT_PARENT_LAYOUT_ID) {
    GroupPermissionUtil.check(permissionChecker,groupId,ActionKeys.ADD_LAYOUT);
  }
 else {
    LayoutPermissionUtil.check(permissionChecker,groupId,privateLayout,parentLayoutId,ActionKeys.ADD_LAYOUT);
  }
  return layoutLocalService.addLayout(getUserId(),groupId,privateLayout,parentLayoutId,localeNamesMap,localeTitlesMap,descriptionMap,keywordsMap,robotsMap,type,hidden,friendlyURLMap,serviceContext);
}
