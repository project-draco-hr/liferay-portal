{
  GroupPermissionUtil.check(getPermissionChecker(),sourceGroupId,ActionKeys.MANAGE_LAYOUTS);
  LayoutsRemotePublisherRequest publisherRequest=new LayoutsRemotePublisherRequest(getUserId(),sourceGroupId,privateLayout,layoutIdMap,parameterMap,remoteAddress,remotePort,secureConnection,remoteGroupId,remotePrivateLayout,startDate,endDate);
  SchedulerEngineUtil.schedule(groupName,cronText,schedulerStartDate,schedulerEndDate,description,DestinationNames.LAYOUTS_REMOTE_PUBLISHER,JSONUtil.serialize(publisherRequest));
}
