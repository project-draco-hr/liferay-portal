{
  GroupPermissionUtil.check(getPermissionChecker(),sourceGroupId,ActionKeys.MANAGE_LAYOUTS);
  LayoutsRemotePublisherRequest publisherRequest=new LayoutsRemotePublisherRequest(getUserId(),sourceGroupId,privateLayout,layoutIdMap,parameterMap,remoteAddress,remotePort,secureConnection,remoteGroupId,remotePrivateLayout,exportStartDate,exportEndDate);
  SchedulerEngineUtil.schedule(groupName,cronText,startDate,endDate,description,DestinationNames.LAYOUTS_REMOTE_PUBLISHER,JSONUtil.serialize(publisherRequest));
}
