{
  GroupPermissionUtil.check(getPermissionChecker(),sourceGroupId,ActionKeys.MANAGE_LAYOUTS);
  LayoutsPublisherRequest layoutsPublisherRequest=new LayoutsPublisherRequest(null,getUserId(),sourceGroupId,remoteGroupId,privateLayout,layoutIdMap,parameterMap,remoteAddress,remotePort,secure,exportStartDate,exportEndDate,remotePrivateLayout);
  SchedulerEngineUtil.schedule(groupName,cronText,startDate,endDate,description,DestinationNames.LAYOUTS_REMOTE_EXPORTER,JSONUtil.serialize(layoutsPublisherRequest));
}
