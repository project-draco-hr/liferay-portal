{
  PermissionChecker permissionChecker=getPermissionChecker();
  Group group=groupLocalService.getGroup(groupId);
  if (group.isStagingGroup()) {
    group=group.getLiveGroup();
  }
  if (group.isWorkflowEnabled() && !GroupPermissionUtil.contains(permissionChecker,groupId,ActionKeys.MANAGE_STAGING) && !GroupPermissionUtil.contains(permissionChecker,groupId,ActionKeys.PUBLISH_STAGING)) {
    throw new PrincipalException();
  }
 else {
    GroupPermissionUtil.check(permissionChecker,groupId,ActionKeys.MANAGE_LAYOUTS);
  }
  SchedulerEngineUtil.unschedule(jobName,groupName);
}
