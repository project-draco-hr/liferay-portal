{
  long rootFolderId=GetterUtil.getLong(portletPreferences.getValue("rootFolderId",null));
  if (rootFolderId != BookmarksFolderConstants.DEFAULT_PARENT_FOLDER_ID) {
    BookmarksFolder folder=BookmarksFolderLocalServiceUtil.getFolder(rootFolderId);
    Portlet portlet=PortletLocalServiceUtil.getPortletById(portletDataContext.getCompanyId(),portletId);
    portletDataContext.addReferenceElement(portlet,portletDataContext.getExportDataRootElement(),folder,PortletDataContext.REFERENCE_TYPE_DEPENDENCY,!portletDataContext.getBooleanParameter(NAMESPACE,"entries"));
  }
  return portletPreferences;
}
