{
  ExpandoTable table=expandoTableLocalService.getTable(className,tableName);
  ExpandoColumn column=expandoColumnLocalService.getColumn(table.getTableId(),columnName);
  ExpandoValue expandoValue=new ExpandoValueImpl();
  expandoValue.setColumnId(column.getColumnId());
  expandoValue.setShort(data);
  return addValue(table.getClassNameId(),table.getTableId(),column.getColumnId(),classPK,expandoValue.getData());
