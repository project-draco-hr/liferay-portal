{
  DirectoryScanner ds=new DirectoryScanner();
  if (module) {
    ds.setBasedir(_modulePrefix);
  }
 else {
    ds.setBasedir(".");
  }
  ds.setIncludes(new String[]{"**\\" + modelName + "ModelImpl.java"});
  ds.scan();
  String[] fileNames=ds.getIncludedFiles();
  if (fileNames.length > 0) {
    return fileNames[0];
  }
 else {
    return null;
  }
}
