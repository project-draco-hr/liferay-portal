{
  DDMStorageLink ddmStorageLink=findByPrimaryKey(storageLinkId);
  Session session=null;
  try {
    session=openSession();
    DDMStorageLink[] array=new DDMStorageLinkImpl[3];
    array[0]=getByStructureId_PrevAndNext(session,ddmStorageLink,structureId,orderByComparator,true);
    array[1]=ddmStorageLink;
    array[2]=getByStructureId_PrevAndNext(session,ddmStorageLink,structureId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
