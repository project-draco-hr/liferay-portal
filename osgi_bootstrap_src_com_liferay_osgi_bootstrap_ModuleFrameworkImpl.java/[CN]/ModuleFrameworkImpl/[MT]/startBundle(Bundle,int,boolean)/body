{
  if (checkPermissions) {
    _checkPermission();
  }
  if (_isFragmentBundle(bundle) || ((bundle.getState() & Bundle.ACTIVE) == Bundle.ACTIVE)) {
    return;
  }
  try {
    bundle.start(options);
  }
 catch (  BundleException be) {
    _log.error(be,be);
    throw new PortalException(be);
  }
}
