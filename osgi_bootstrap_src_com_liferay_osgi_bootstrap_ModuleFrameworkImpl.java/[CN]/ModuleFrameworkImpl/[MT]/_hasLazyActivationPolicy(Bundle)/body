{
  Dictionary<String,String> headers=bundle.getHeaders();
  String fragmentHost=headers.get(Constants.FRAGMENT_HOST);
  if (fragmentHost != null) {
    return false;
  }
  String activationPolicy=headers.get(Constants.BUNDLE_ACTIVATIONPOLICY);
  if (activationPolicy != null) {
    Map<String,Map<String,String>> header=OSGiHeader.parseHeader(activationPolicy);
    if ((header.size() > 0) && header.containsKey(Constants.ACTIVATION_LAZY)) {
      return true;
    }
  }
  return false;
}
