{
  if (event.getType() != FrameworkEvent.PACKAGES_REFRESHED) {
    return;
  }
  for (  Bundle bundle : _startBundles) {
    try {
      startBundle(bundle,0,false);
    }
 catch (    Exception e) {
      _log.error(e,e);
    }
  }
  for (  Bundle bundle : _lazyActivationBundles) {
    try {
      startBundle(bundle,Bundle.START_ACTIVATION_POLICY,false);
    }
 catch (    Exception e) {
      _log.error(e,e);
    }
  }
  try {
    BundleContext bundleContext=event.getBundle().getBundleContext();
    bundleContext.removeFrameworkListener(this);
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
}
