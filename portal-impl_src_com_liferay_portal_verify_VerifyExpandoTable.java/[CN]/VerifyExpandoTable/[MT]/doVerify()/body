{
  List<ExpandoTable> tables=ExpandoTableLocalServiceUtil.getExpandoTables(QueryUtil.ALL_POS,QueryUtil.ALL_POS);
  if (_log.isDebugEnabled()) {
    _log.debug("Processing " + tables.size() + " ExpandoTables");
  }
  for (  ExpandoTable table : tables) {
    if (table.getName().equals(_OLD_DEFAULT_TABLE_NAME)) {
      try {
        ExpandoTableLocalServiceUtil.updateTable(table.getTableId(),ExpandoTableConstants.DEFAULT_TABLE_NAME);
      }
 catch (      Exception e) {
        if (_log.isWarnEnabled()) {
          _log.warn("Unable to update table name for table " + table.getTableId() + ": "+ e.getMessage());
        }
      }
    }
  }
}
