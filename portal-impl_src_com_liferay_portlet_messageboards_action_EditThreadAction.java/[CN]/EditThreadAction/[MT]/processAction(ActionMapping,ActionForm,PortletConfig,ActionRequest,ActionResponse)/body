{
  try {
    moveThread(req,res);
  }
 catch (  Exception e) {
    if (e instanceof PrincipalException || e instanceof RequiredMessageException) {
      SessionErrors.add(req,e.getClass().getName());
      setForward(req,"portlet.message_boards.error");
    }
 else     if (e instanceof MessageBodyException || e instanceof MessageSubjectException || e instanceof NoSuchThreadException) {
      SessionErrors.add(req,e.getClass().getName());
    }
 else {
      throw e;
    }
  }
}
