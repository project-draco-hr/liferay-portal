{
  if (_isCurrentMajorStep(element)) {
    _causeBodyLoggerElement.setText(message);
    _warnStepLoggerElement(_majorStepLoggerElement);
    _stopMajorStep();
  }
  if (_isCurrentMinorStep(element)) {
    _causeBodyLoggerElement.setText(message);
    _warnStepLoggerElement(_minorStepLoggerElement);
    _stopMinorStep();
  }
}
