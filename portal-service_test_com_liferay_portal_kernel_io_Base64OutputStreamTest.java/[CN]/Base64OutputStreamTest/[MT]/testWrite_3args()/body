{
  File testFile=new File(_testFilePath);
  byte[] bytes={CharPool.UPPER_CASE_A,CharPool.UPPER_CASE_B,CharPool.UPPER_CASE_C,CharPool.UPPER_CASE_A,CharPool.UPPER_CASE_B,CharPool.UPPER_CASE_C};
  int offset=0;
  int length=1;
  Base64OutputStream base64OutputStream=new Base64OutputStream(new FileOutputStream(testFile));
  base64OutputStream.write(bytes,offset,length);
  length=2;
  offset=1;
  base64OutputStream.write(bytes,offset,length);
  length=3;
  offset=3;
  base64OutputStream.write(bytes,offset,length);
  base64OutputStream.close();
  FileInputStream fileInputStream=new FileInputStream(testFile);
  byte[] buffer=new byte[8];
  int returnValue=fileInputStream.read(buffer);
  fileInputStream.close();
  assertEquals(8,returnValue);
  testFile.delete();
}
