{
  File testFile=new File(_testFilePath);
  Base64OutputStream base64OutputStream=new Base64OutputStream(new FileOutputStream(testFile));
  byte[] bytes={CharPool.UPPER_CASE_A,CharPool.UPPER_CASE_B,CharPool.UPPER_CASE_C};
  base64OutputStream.write(bytes);
  base64OutputStream.close();
  FileInputStream fileInputStream=new FileInputStream(testFile);
  byte[] buffer=new byte[4];
  int result=fileInputStream.read(buffer);
  fileInputStream.close();
  assertEquals(4,result);
  testFile.delete();
}
