{
  updateDDMFormFieldOptionsDefaultLocale(ddmFormField.getDDMFormFieldOptions(),newDefaultLocale);
  updateLocalizedValueDefaultLocale(ddmFormField.getLabel(),newDefaultLocale);
  updateLocalizedValueDefaultLocale(ddmFormField.getPredefinedValue(),newDefaultLocale);
  updateLocalizedValueDefaultLocale(ddmFormField.getStyle(),newDefaultLocale);
  updateLocalizedValueDefaultLocale(ddmFormField.getTip(),newDefaultLocale);
}
