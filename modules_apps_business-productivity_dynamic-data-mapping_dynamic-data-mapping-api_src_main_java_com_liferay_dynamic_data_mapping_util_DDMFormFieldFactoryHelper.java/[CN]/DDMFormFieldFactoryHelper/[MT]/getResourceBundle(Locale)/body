{
  List<ResourceBundle> resourceBundles=new ArrayList<>();
  ResourceBundle portalResourceBundle=ResourceBundleUtil.getBundle("content.Language",locale,PortalClassLoaderUtil.getClassLoader());
  resourceBundles.add(portalResourceBundle);
  collectResourceBundles(_method.getDeclaringClass(),resourceBundles,locale);
  ResourceBundle[] resourceBundlesArray=resourceBundles.toArray(new ResourceBundle[resourceBundles.size()]);
  return new AggregateResourceBundle(resourceBundlesArray);
}
