{
  Document doc=getAddArticleDocument(companyId,groupId,articleId,version,title,description,content,type,displayDate);
  IndexWriter writer=null;
  try {
    writer=LuceneUtil.getWriter(companyId);
    writer.addDocument(doc);
  }
  finally {
    if (writer != null) {
      LuceneUtil.write(companyId);
    }
  }
}
