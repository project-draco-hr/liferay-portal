{
  int timeout=PropsValues.TIMEOUT_EXPLICIT_WAIT / PropsValues.TIMEOUT_IMPLICIT_WAIT;
  for (int second=0; ; second++) {
    if (second >= timeout) {
      assertConfirmation(liferaySelenium,pattern);
    }
    try {
      if (isConfirmation(liferaySelenium,pattern)) {
        break;
      }
    }
 catch (    Exception e) {
    }
  }
}
