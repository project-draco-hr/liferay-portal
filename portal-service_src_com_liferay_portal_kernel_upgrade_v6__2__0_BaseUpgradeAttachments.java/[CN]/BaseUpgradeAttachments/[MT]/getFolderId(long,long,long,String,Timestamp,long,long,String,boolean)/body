{
  if ((repositoryId < 0) || (parentFolderId < 0)) {
    return -1;
  }
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select folderId from DLFolder where repositoryId = ? and " + "parentFolderId = ? and name = ?");
    ps.setLong(1,repositoryId);
    ps.setLong(2,parentFolderId);
    ps.setString(3,name);
    rs=ps.executeQuery();
    while (rs.next()) {
      long folderId=rs.getLong(1);
      return folderId;
    }
  }
  finally {
    DataAccess.cleanUp(con,ps);
  }
  return addDLFolder(increment(),groupId,companyId,userId,userName,createDate,repositoryId,false,parentFolderId,name,hidden);
}
