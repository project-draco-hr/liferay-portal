{
  String roleIdsKey=companyId + StringPool.POUND + name;
  Long roleId=_roleIds.get(roleIdsKey);
  if (roleId != null) {
    return roleId;
  }
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select roleId from Role_ where companyId = ? and name = ?");
    ps.setLong(1,companyId);
    ps.setString(2,name);
    rs=ps.executeQuery();
    if (rs.next()) {
      roleId=rs.getLong("roleId");
    }
    _roleIds.put(roleIdsKey,roleId);
    return roleId;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
