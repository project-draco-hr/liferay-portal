{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  String currentShardName=null;
  try {
    currentShardName=ShardUtil.setTargetSource(PropsUtil.get(PropsKeys.SHARD_DEFAULT_NAME));
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select actionId, bitwiseValue from ResourceAction " + "where name = ?");
    ps.setString(1,name);
    rs=ps.executeQuery();
    Map<String,Long> bitwiseValues=new HashMap<String,Long>();
    while (rs.next()) {
      String actionId=rs.getString("actionId");
      long bitwiseValue=rs.getLong("bitwiseValue");
      bitwiseValues.put(actionId,bitwiseValue);
    }
    return bitwiseValues;
  }
  finally {
    if (Validator.isNotNull(currentShardName)) {
      ShardUtil.setTargetSource(currentShardName);
    }
    DataAccess.cleanUp(con,ps,rs);
  }
}
