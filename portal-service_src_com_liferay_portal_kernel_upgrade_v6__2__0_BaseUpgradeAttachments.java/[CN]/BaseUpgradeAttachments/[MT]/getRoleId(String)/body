{
  Long roleId=_roleIds.get(name);
  if (roleId != null) {
    return roleId;
  }
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select roleId from role_ where name = ?");
    ps.setString(1,name);
    rs=ps.executeQuery();
    while (rs.next()) {
      roleId=rs.getLong(1);
    }
    _roleIds.put(name,roleId);
    return roleId;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
