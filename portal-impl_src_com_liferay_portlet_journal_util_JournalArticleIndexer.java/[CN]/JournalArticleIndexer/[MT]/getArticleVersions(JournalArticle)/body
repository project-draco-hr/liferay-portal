{
  Collection<Document> documents=new ArrayList<Document>();
  List<JournalArticle> articles=null;
  if (PropsValues.JOURNAL_ARTICLE_INDEX_ALL_VERSIONS) {
    articles=JournalArticleLocalServiceUtil.getIndexableArticlesByResourcePrimKey(article.getResourcePrimKey());
  }
 else {
    articles=new ArrayList<JournalArticle>();
    JournalArticle latestIndexableArticle=JournalArticleLocalServiceUtil.fetchLatestIndexableArticle(article.getResourcePrimKey());
    if (latestIndexableArticle != null) {
      articles.add(latestIndexableArticle);
    }
  }
  for (  JournalArticle curArticle : articles) {
    Document document=getDocument(curArticle);
    documents.add(document);
  }
  return documents;
}
