{
  String[] ddmStructureKeys=new String[ddmStructureIds.size()];
  for (int i=0; i < ddmStructureIds.size(); i++) {
    long structureId=ddmStructureIds.get(i);
    DDMStructure ddmStructure=DDMStructureLocalServiceUtil.getDDMStructure(structureId);
    ddmStructureKeys[i]=ddmStructure.getStructureKey();
  }
  List<JournalArticle> articles=JournalArticleLocalServiceUtil.getStructureArticles(ddmStructureKeys);
  for (  JournalArticle article : articles) {
    doReindex(article,false);
  }
}
