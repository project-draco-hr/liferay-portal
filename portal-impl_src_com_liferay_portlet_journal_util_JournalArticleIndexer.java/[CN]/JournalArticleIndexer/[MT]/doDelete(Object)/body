{
  JournalArticle article=(JournalArticle)obj;
  deleteDocument(article.getCompanyId(),article.getId());
  if (article.isApproved()) {
    JournalArticle currentlyPublishedInDBButNotInIndexes=JournalArticleLocalServiceUtil.fetchLatestIndexableArticle(article.getResourcePrimKey());
    if ((currentlyPublishedInDBButNotInIndexes != null) && (article.getVersion() > currentlyPublishedInDBButNotInIndexes.getVersion())) {
      SearchEngineUtil.updateDocument(getSearchEngineId(),article.getCompanyId(),getDocument(currentlyPublishedInDBButNotInIndexes));
    }
  }
}
