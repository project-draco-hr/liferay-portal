{
  String[] structureKeys=new String[structureIds.size()];
  for (int i=0; i < structureIds.size(); i++) {
    long structureId=structureIds.get(i);
    DDMStructure structure=DDMStructureLocalServiceUtil.getDDMStructure(structureId);
    structureKeys[i]=structure.getStructureKey();
  }
  List<JournalArticle> articles=JournalArticleLocalServiceUtil.getStructureArticles(structureKeys);
  for (  JournalArticle article : articles) {
    doReindex(article);
  }
}
