{
  _destroy=true;
  while (!_destroyed) {
    try {
      if (_log.isInfoEnabled()) {
        _log.info("Waiting for background thread to destroy");
      }
      Thread.sleep(getThreadDestroyInterval());
    }
 catch (    InterruptedException ie) {
      _log.error(ie,ie);
    }
  }
  if (_log.isInfoEnabled()) {
    _log.info("Background thread is destroyed");
  }
  super.destroy();
}
