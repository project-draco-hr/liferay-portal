{
  String[] assetTypes=CustomSQLUtil.keywords(kaleoTaskInstanceTokenQuery.getAssetTypes());
  if (ArrayUtil.isEmpty(assetTypes)) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(assetTypes.length * 2 + 1);
  if (!firstCriteria) {
    sb.append(" AND (");
  }
 else {
    sb.append("(");
  }
  for (int i=0; i < assetTypes.length; i++) {
    sb.append("(lower(KaleoTaskInstanceToken.className) LIKE ?)");
    if ((i + 1) < assetTypes.length) {
      sb.append(" OR ");
    }
 else {
      sb.append(")");
    }
  }
  return sb.toString();
}
