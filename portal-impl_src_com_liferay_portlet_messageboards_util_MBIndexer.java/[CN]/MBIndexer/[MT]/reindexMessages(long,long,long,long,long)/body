{
  DynamicQuery dynamicQuery=DynamicQueryFactoryUtil.forClass(MBMessage.class,PortalClassLoaderUtil.getClassLoader());
  Property property=PropertyFactoryUtil.forName("messageId");
  dynamicQuery.add(property.ge(startMessageId));
  dynamicQuery.add(property.lt(endMessageId));
  addReindexCriteria(dynamicQuery,groupId,categoryId);
  List<MBMessage> messages=MBMessageLocalServiceUtil.dynamicQuery(dynamicQuery);
  if (messages.isEmpty()) {
    return;
  }
  Collection<Document> documents=new ArrayList<Document>(messages.size());
  for (  MBMessage message : messages) {
    Document document=getDocument(message);
    documents.add(document);
  }
  SearchEngineUtil.updateDocuments(getSearchEngineId(),companyId,documents);
}
