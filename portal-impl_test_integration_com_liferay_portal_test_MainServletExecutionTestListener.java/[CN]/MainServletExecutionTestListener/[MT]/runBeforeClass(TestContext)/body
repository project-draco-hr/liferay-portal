{
  super.runBeforeClass(testContext);
  MockServletContext mockServletContext=new MockServletContext(getResourceBasePath(),new FileSystemResourceLoader());
  MockServletConfig mockServletConfig=new MockServletConfig(mockServletContext);
  _mainServlet=new MainServlet();
  try {
    _mainServlet.init(mockServletConfig);
  }
 catch (  ServletException e) {
    throw new RuntimeException("The main servlet could not be started");
  }
}
