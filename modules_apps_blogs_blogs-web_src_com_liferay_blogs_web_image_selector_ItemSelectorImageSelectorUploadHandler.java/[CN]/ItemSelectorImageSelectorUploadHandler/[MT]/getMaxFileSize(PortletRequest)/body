{
  String itemSelectorCaller=ParamUtil.getString(portletRequest,"itemSelectorCaller");
  if (Validator.isNotNull(itemSelectorCaller) && itemSelectorCaller.equals("coverImage")) {
    return PrefsPropsUtil.getLong(PropsKeys.BLOGS_IMAGE_COVER_MAX_SIZE);
  }
 else {
    return PrefsPropsUtil.getLong(PropsKeys.BLOGS_IMAGE_ALLOY_EDITOR_MAX_SIZE);
  }
}
