{
  AttributeDefinition[] requiredDefinitions=objectClassDefinition.getAttributeDefinitions(ObjectClassDefinition.REQUIRED);
  AttributeDefinition[] optionalDefinitions=objectClassDefinition.getAttributeDefinitions(ObjectClassDefinition.OPTIONAL);
  DDMForm ddmForm=new DDMForm();
  ddmForm.setAvailableLocales(SetUtil.fromArray(LanguageUtil.getAvailableLocales()));
  ddmForm.setDefaultLocale(locale);
  addFieldToForm(configuration,ddmForm,requiredDefinitions,locale,true);
  addFieldToForm(configuration,ddmForm,optionalDefinitions,locale,false);
  return ddmForm;
}
