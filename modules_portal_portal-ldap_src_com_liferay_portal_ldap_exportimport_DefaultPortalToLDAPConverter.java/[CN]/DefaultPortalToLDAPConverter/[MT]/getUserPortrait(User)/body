{
  byte[] bytes=null;
  if (user.getPortraitId() == 0) {
    return bytes;
  }
  Image image=null;
  try {
    image=_imageLocalService.getImage(user.getPortraitId());
    if (image != null) {
      bytes=image.getTextObj();
    }
  }
 catch (  Exception e) {
    if (_log.isWarnEnabled()) {
      _log.warn("Unable to get the portrait for user " + user.getUserId(),e);
    }
  }
  return bytes;
}
