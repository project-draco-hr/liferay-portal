{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(company);
    }
 else {
      if (company.isNew()) {
        session.save(company);
      }
    }
    session.flush();
    company.setNew(false);
    return company;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
