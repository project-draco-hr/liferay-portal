{
  portletDataContext.addPermissions("com.liferay.portlet.dynamicdatalist",portletDataContext.getScopeGroupId());
  Document document=SAXReaderUtil.createDocument();
  Element rootElement=document.addElement("ddl-data");
  Element recordSetsElement=rootElement.addElement("record-sets");
  List<DDLRecordSet> recordSets=DDLRecordSetLocalServiceUtil.getRecordSets(portletDataContext.getScopeGroupId());
  for (  DDLRecordSet recordSet : recordSets) {
    if (portletDataContext.isWithinDateRange(recordSet.getModifiedDate())) {
      exportRecordSet(portletDataContext,recordSetsElement,recordSet);
    }
  }
  return document.formattedString();
}
