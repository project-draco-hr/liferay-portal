{
  try {
    PermissionChecker permissionChecker=themeDisplay.getPermissionChecker();
    Organization organization=ActionUtil.getOrganization(portletRequest);
    Group organizationGroup=organization.getGroup();
    if (organizationGroup.isSite() && (GroupPermissionUtil.contains(permissionChecker,organizationGroup,ActionKeys.MANAGE_STAGING) || OrganizationPermissionUtil.contains(permissionChecker,organization,ActionKeys.UPDATE))) {
      return true;
    }
  }
 catch (  Exception e) {
  }
  return false;
}
