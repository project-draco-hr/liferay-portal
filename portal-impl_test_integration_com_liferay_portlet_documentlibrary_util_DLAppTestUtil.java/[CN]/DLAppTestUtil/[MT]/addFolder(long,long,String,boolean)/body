{
  String description=StringPool.BLANK;
  ServiceContext serviceContext=ServiceTestUtil.getServiceContext(groupId);
  if (deleteExisting) {
    try {
      DLAppServiceUtil.deleteFolder(groupId,parentFolderId,name);
    }
 catch (    NoSuchFolderException nsfe) {
    }
  }
  return DLAppServiceUtil.addFolder(groupId,parentFolderId,name,description,serviceContext);
}
