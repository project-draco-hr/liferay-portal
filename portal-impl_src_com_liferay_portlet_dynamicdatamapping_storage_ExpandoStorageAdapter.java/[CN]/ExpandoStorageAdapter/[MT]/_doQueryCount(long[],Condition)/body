{
  int count=0;
  Connection con=null;
  Statement stmt=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    stmt=con.createStatement();
    String sql=_toSQL(expandoRowIds,null,condition,true);
    rs=stmt.executeQuery(sql);
    if (rs.next()) {
      count=rs.getInt("COUNT_VALUE");
    }
  }
  finally {
    DataAccess.cleanUp(con,stmt,rs);
  }
  return count;
}
