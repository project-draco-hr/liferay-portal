{
  try {
    int count=1000;
    while (!_searchEngines.containsKey(SYSTEM_ENGINE_ID) && (--count > 0)) {
      if (_log.isDebugEnabled()) {
        _log.debug("Waiting for search engine " + SYSTEM_ENGINE_ID);
      }
      Thread.sleep(500);
    }
  }
 catch (  InterruptedException ie) {
    _log.error(ie,ie);
  }
}
