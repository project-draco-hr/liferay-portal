{
  try (PreparedStatement ps=connection.prepareStatement("select count(*) from ResourcePermission where companyId = ? " + "and name = ? and scope = ? and primKey = ? and roleId " + "= ?")){
    ps.setLong(1,companyId);
    ps.setString(2,name);
    ps.setInt(3,scope);
    ps.setString(4,primKey);
    ps.setLong(5,roleId);
    try (ResultSet rs=ps.executeQuery()){
      while (rs.next()) {
        int count=rs.getInt(1);
        if (count > 0) {
          return true;
        }
      }
      return false;
    }
   }
 }
