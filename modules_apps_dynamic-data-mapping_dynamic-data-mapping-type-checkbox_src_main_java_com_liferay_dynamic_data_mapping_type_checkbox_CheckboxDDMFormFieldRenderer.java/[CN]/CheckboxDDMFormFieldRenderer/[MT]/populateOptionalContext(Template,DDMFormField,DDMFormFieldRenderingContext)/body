{
  Locale locale=ddmFormFieldRenderingContext.getLocale();
  template.put("showAsSwitcher",ddmFormField.getProperty("showAsSwitcher"));
  LocalizedValue predefinedValue=ddmFormField.getPredefinedValue();
  String status=getStatus(ddmFormFieldRenderingContext.getValue(),predefinedValue.getString(locale));
