{
  Session session=null;
  try {
    session=openSession();
    ResourceCode resourceCode=(ResourceCode)session.get(ResourceCodeImpl.class,Long.valueOf(codeId));
    if (resourceCode == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + codeId);
      }
      throw new NoSuchResourceCodeException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + codeId);
    }
    return resourceCodePersistence.remove(resourceCode);
  }
 catch (  NoSuchResourceCodeException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
