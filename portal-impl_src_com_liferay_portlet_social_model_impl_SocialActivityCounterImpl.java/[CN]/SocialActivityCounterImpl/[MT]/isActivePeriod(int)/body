{
  if (periodLength == SocialActivityCounterConstants.PERIOD_LENGTH_INFINITE) {
    return true;
  }
  if (periodLength != SocialActivityCounterConstants.PERIOD_LENGTH_SYSTEM) {
    if (getStartPeriod() + periodLength > SocialCounterPeriodUtil.getActivityDay()) {
      return true;
    }
  }
  if ((getStartPeriod() == SocialCounterPeriodUtil.getStartPeriod()) && ((getEndPeriod() == -1) || (getEndPeriod() == SocialCounterPeriodUtil.getEndPeriod()))) {
    return true;
  }
  return false;
}
