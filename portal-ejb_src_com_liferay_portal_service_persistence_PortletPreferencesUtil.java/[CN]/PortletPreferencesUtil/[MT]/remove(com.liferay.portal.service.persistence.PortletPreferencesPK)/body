{
  ModelListener listener=null;
  if (Validator.isNotNull(LISTENER)) {
    try {
      listener=(ModelListener)Class.forName(LISTENER).newInstance();
    }
 catch (    Exception e) {
      _log.error(e);
    }
  }
  if (listener != null) {
    listener.onBeforeRemove(findByPrimaryKey(portletPreferencesPK));
  }
  com.liferay.portal.model.PortletPreferences portletPreferences=getPersistence().remove(portletPreferencesPK);
  if (listener != null) {
    listener.onAfterRemove(portletPreferences);
  }
  return portletPreferences;
}
