{
  if (clusterNode == null) {
    return;
  }
  if (_log.isInfoEnabled()) {
    _log.info("Start loading Lucene index files from cluster node " + clusterNode);
  }
  InputStream inputStream=null;
  for (  long companyId : companyIds) {
    try {
      inputStream=LuceneHelperUtil.getLoadIndexesInputStreamFromCluster(companyId,clusterNode.getClusterNodeId());
      LuceneHelperUtil.loadIndex(companyId,inputStream);
    }
 catch (    SystemException se) {
      throw se;
    }
catch (    IOException ioe) {
      throw new SystemException(ioe);
    }
 finally {
      if (inputStream != null) {
        try {
          inputStream.close();
        }
 catch (        IOException ioe) {
          throw new SystemException(ioe);
        }
      }
    }
  }
}
