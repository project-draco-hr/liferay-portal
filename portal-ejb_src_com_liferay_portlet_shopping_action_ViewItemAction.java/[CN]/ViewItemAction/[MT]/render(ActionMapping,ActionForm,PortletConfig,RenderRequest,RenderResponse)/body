{
  try {
    ActionUtil.getItem(req);
    ShoppingItem item=(ShoppingItem)req.getAttribute(WebKeys.SHOPPING_ITEM);
    if (item == null) {
      throw new NoSuchItemException();
    }
    return mapping.findForward("portlet.shopping.view_item");
  }
 catch (  Exception e) {
    if (e != null && e instanceof NoSuchItemException || e instanceof PrincipalException) {
      SessionErrors.add(req,e.getClass().getName());
      return mapping.findForward("portlet.shopping.error");
    }
 else {
      req.setAttribute(PageContext.EXCEPTION,e);
      return mapping.findForward(Constants.COMMON_ERROR);
    }
  }
}
