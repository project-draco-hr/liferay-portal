{
  if (expandoBridge == null) {
    return;
  }
  Enumeration<String> enu=expandoBridge.getAttributeNames();
  while (enu.hasMoreElements()) {
    String name=enu.nextElement();
    int type=expandoBridge.getAttributeType(name);
    UnicodeProperties properties=expandoBridge.getAttributeProperties(name);
    boolean indexable=GetterUtil.getBoolean(properties.get(ExpandoBridgeIndexer.INDEXABLE));
    if (!indexable || (type != ExpandoColumnConstants.STRING)) {
      continue;
    }
    try {
      String value=ExpandoValueLocalServiceUtil.getData(expandoBridge.getClassName(),ExpandoTableConstants.DEFAULT_TABLE_NAME,name,expandoBridge.getClassPK(),StringPool.BLANK);
      doc.addText(name,value);
    }
 catch (    Exception e) {
      _log.error("Indexing " + name,e);
    }
  }
}
