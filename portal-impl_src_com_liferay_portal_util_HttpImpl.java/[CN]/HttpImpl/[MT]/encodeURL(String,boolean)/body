{
  if (url == null) {
    return null;
  }
  if (url.length() == 0) {
    return StringPool.BLANK;
  }
  try {
    url=URLEncoder.encode(url,StringPool.UTF8);
    if (escapeSpaces) {
      url=StringUtil.replace(url,StringPool.PLUS,"%20");
    }
    return url;
  }
 catch (  UnsupportedEncodingException uee) {
    _log.error(uee,uee);
    return StringPool.BLANK;
  }
}
