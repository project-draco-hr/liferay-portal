{
  ServiceContext serviceContext=new ServiceContext();
  serviceContext.setAddGroupPermissions(true);
  serviceContext.setAddGuestPermissions(true);
  Folder tmpFolder=_addFolder(userId,DLFolderConstants.DEFAULT_PARENT_FOLDER_ID,FOLDER_NAME_TMP,serviceContext);
  Folder callerFolder=_addFolder(userId,tmpFolder.getFolderId(),invokerUuid.toString(),serviceContext);
  return _addFolders(userId,callerFolder.getFolderId(),folderPath,serviceContext);
}
