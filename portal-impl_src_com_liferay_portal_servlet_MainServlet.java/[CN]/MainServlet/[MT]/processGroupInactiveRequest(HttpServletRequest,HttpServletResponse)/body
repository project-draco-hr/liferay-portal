{
  long plid=ParamUtil.getLong(request,"p_l_id");
  if (plid <= 0) {
    return false;
  }
  Layout layout=LayoutLocalServiceUtil.getLayout(plid);
  Group group=layout.getGroup();
  if (group.isActive()) {
    return false;
  }
  InactiveRequestHandlerUtil.processInactiveRequest(request,response,"this-site-is-inactive-please-contact-the-administrator");
  return true;
}
