{
  SchedulerEntry schedulerEntry=new SchedulerEntryImpl();
  schedulerEntry.setEventListenerClass(CounterCacheFlushMessageListener.class.getName());
  schedulerEntry.setTimeUnit(TimeUnit.SECOND);
  schedulerEntry.setTriggerType(TriggerType.SIMPLE);
  schedulerEntry.setTriggerValue(PropsValues.COUNTER_WRITE_BACK_INTERVAL);
  SchedulerEngineUtil.schedule(schedulerEntry,PortalClassLoaderUtil.getClassLoader());
}
