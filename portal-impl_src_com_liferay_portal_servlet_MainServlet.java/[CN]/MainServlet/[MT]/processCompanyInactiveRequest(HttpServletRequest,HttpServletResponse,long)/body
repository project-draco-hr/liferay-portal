{
  if (PortalInstances.isCompanyActive(companyId)) {
    return false;
  }
  response.setContentType(ContentTypes.TEXT_HTML_UTF8);
  Locale locale=LocaleUtil.getDefault();
  String shutdownMessage=LanguageUtil.get(locale,"this-instance-is-inactive-please-contact-with-your-administrator");
  String html=ContentUtil.get("com/liferay/portal/dependencies/company_inactive.html");
  html=StringUtil.replace(html,"[$COMPANY_INACTIVE_MESSAGE$]",shutdownMessage);
  ServletOutputStream servletOutputStream=response.getOutputStream();
  servletOutputStream.print(html);
  return true;
}
