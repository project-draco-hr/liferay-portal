{
  Group group=_socialActivitiesRequestHelper.getScopeGroup();
  Layout layout=_socialActivitiesRequestHelper.getLayout();
  SocialActivitiesQueryHelper.Scope scope=SocialActivitiesQueryHelper.Scope.fromValue(getSelectedTabName());
  return _socialActivitiesQueryHelper.getSocialActivitySets(group,layout,scope,0,_socialActivitiesRequestHelper.getMax());
}
