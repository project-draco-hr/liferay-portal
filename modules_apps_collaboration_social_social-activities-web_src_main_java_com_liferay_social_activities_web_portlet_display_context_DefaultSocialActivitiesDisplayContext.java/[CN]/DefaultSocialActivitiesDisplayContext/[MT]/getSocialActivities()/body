{
  Group group=_socialActivitiesRequestHelper.getScopeGroup();
  Layout layout=_socialActivitiesRequestHelper.getLayout();
  SocialActivityQueryHelper.Scope scope=SocialActivityQueryHelper.Scope.fromValue(getSelectedTabName());
  return _socialActivityQueryHelper.getSocialActivities(group,layout,scope,0,_socialActivitiesRequestHelper.getMax());
}
