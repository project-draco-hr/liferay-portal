{
  SecurityManager securityManager=System.getSecurityManager();
  if (securityManager == null) {
    return;
  }
  Permission permission;
  if (Validator.isNotNull(classLoaderReferenceId)) {
    permission=new RuntimePermission(PACLConstants.RUNTIME_PERMISSION_GET_CLASSLOADER,classLoaderReferenceId);
  }
 else {
    permission=new RuntimePermission(PACLConstants.RUNTIME_PERMISSION_GET_CLASSLOADER);
  }
  securityManager.checkPermission(permission);
}
