{
  PortletPreferences portletPreferences=PortletPreferencesFactoryUtil.fromXML(companyId,ownerId,ownerType,plid,portletId,xml);
  String fileEntryColumns=portletPreferences.getValue("fileEntryColumns",StringPool.BLANK);
  if (Validator.isNotNull(fileEntryColumns)) {
    fileEntryColumns=StringUtil.replace(fileEntryColumns,"document","name");
    portletPreferences.setValue("fileEntryColumns",fileEntryColumns);
  }
  return PortletPreferencesFactoryUtil.toXML(portletPreferences);
}
