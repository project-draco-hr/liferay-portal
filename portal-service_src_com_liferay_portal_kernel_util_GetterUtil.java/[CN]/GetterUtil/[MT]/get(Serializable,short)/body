{
  if (value == null) {
    return defaultValue;
  }
  if (value instanceof String) {
    return get((String)value,defaultValue);
  }
 else   if (value.getClass().isAssignableFrom(Short.class)) {
    return (Short)value;
  }
 else   if (value instanceof Number) {
    return ((Number)value).shortValue();
  }
  return defaultValue;
}
