{
  List<String> args=new ArrayList<>();
  args.add("sass.dir=/");
  File dir=getPortalWebDir();
  if (dir == null) {
    if (getPortalWebFile() != null) {
      dir=_tmpDir;
    }
 else {
      throw new GradleException("Unable to find the portal web files");
    }
  }
  File cssPortalCommonDir=new File(dir,"html/css/common");
  args.add("sass.portal.common.dir=" + FileUtil.getAbsolutePath(cssPortalCommonDir));
  return args;
}
