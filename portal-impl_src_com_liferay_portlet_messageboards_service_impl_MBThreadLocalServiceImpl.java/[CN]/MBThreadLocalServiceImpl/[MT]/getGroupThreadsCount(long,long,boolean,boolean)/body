{
  if (userId <= 0) {
    return mbThreadFinder.countByGroupId(groupId);
  }
 else {
    if (subscribed) {
      return mbThreadFinder.countByS_G_U(groupId,userId);
    }
 else {
      if (includeAnonymous) {
        return mbThreadFinder.countByG_U(groupId,userId);
      }
 else {
        return mbThreadFinder.countByG_U_A(groupId,userId,false);
      }
    }
  }
}
