{
  if ((values == null) || (values.length == 0)) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(values.length * 3);
  sb.append(StringPool.OPEN_PARENTHESIS);
  for (int i=0; i < values.length; i++) {
    sb.append(field);
    sb.append(" = ?");
    if ((i + 1) < values.length) {
      sb.append(" OR ");
    }
  }
  sb.append(") AND");
  return sb.toString();
}
