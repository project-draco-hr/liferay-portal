{
  try {
    ThemeDisplay themeDisplay=(ThemeDisplay)portletRequest.getAttribute(WebKeys.THEME_DISPLAY);
    UserGroup userGroup=ActionUtil.getUserGroup(portletRequest);
    Group group=userGroup.getGroup();
    if (GroupPermissionUtil.contains(themeDisplay.getPermissionChecker(),userGroupGroup,ActionKeys.VIEW) && (group.getPublicLayoutsPageCount() > 0)) {
      return true;
    }
    return false;
  }
 catch (  Exception e) {
  }
  return false;
}
