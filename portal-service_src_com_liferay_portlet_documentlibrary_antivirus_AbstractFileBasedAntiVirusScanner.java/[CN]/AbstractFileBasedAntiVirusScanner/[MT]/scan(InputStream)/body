{
  File file=null;
  try {
    file=FileUtil.createTempFile(_ANTIVIRUS_EXTENSION);
    FileUtil.write(file,inputStream);
    scan(file);
  }
 catch (  IOException ie) {
    throw new SystemException("Unable to write temporary file",ie);
  }
 finally {
    if (file != null) {
      file.delete();
    }
  }
}
