{
  List<Role> roles=new ArrayList<>();
  long[] siteRolesRoleIds=ArrayUtil.unique(ParamUtil.getLongValues(portletRequest,"siteRolesSearchContainerPrimaryKeys"));
  for (  long siteRolesRoleId : siteRolesRoleIds) {
    if (siteRolesRoleId == 0) {
      continue;
    }
    Role role=roleLocalService.getRole(siteRolesRoleId);
    roles.add(role);
  }
  return roles;
}
