{
  if (Validator.isNull(servletContextName)) {
    if (Validator.isNull(beanIdentifier)) {
      return methodHandler.invoke(true);
    }
    Object bean=PortalBeanLocatorUtil.locate(beanIdentifier);
    return methodHandler.invoke(bean);
  }
  ClassLoader contextClassLoader=ClassLoaderUtil.getContextClassLoader();
  try {
    ClassLoader classLoader=ClassLoaderPool.getClassLoader(servletContextName);
    ClassLoaderUtil.setContextClassLoader(classLoader);
    if (Validator.isNull(beanIdentifier)) {
      return methodHandler.invoke(true);
    }
    Object bean=null;
    if (identifiableBeanServletContextName.equals(PortalUtil.getServletContextName())) {
      bean=PortalBeanLocatorUtil.locate(beanIdentifier);
    }
 else {
      bean=PortletBeanLocatorUtil.locate(servletContextName,beanIdentifier);
    }
    return methodHandler.invoke(bean);
  }
  finally {
    ClassLoaderUtil.setContextClassLoader(contextClassLoader);
  }
}
