{
  if (_twilioRestClient == null) {
    String accountSID=getAccountSID();
    if (Validator.isNull(accountSID)) {
      throw new PushNotificationsException("The property \"sms.twilio.account.sid\" is not set in " + "portlet.properties");
    }
    String authToken=getAuthToken();
    if (Validator.isNull(authToken)) {
      throw new PushNotificationsException("The property \"sms.twilio.auth.token\" is not set in " + "portlet.properties");
    }
    _twilioRestClient=new TwilioRestClient(accountSID,authToken);
  }
  return _twilioRestClient;
}
