{
  for (  String portletId : getDefaultControlPanelPortlets()) {
    List<ResourcePermission> resourcePermissions=resourcePermissionPersistence.findByC_N_S_P_R(role.getCompanyId(),portletId,ResourceConstants.SCOPE_COMPANY,String.valueOf(role.getCompanyId()),role.getRoleId());
    if (!resourcePermissions.isEmpty()) {
      continue;
    }
    ResourceAction resourceAction=resourceActionLocalService.fetchResourceAction(portletId,ActionKeys.ACCESS_IN_CONTROL_PANEL);
    if (resourceAction == null) {
      continue;
    }
    setRolePermissions(role,portletId,new String[]{ActionKeys.ACCESS_IN_CONTROL_PANEL});
  }
}
