{
  long backgroundTaskId=ParamUtil.getLong(actionRequest,"backgroundTaskId");
  BackgroundTask backgroundTask=BackgroundTaskLocalServiceUtil.getBackgroundTask(backgroundTaskId);
  Map<String,Serializable> taskContextMap=backgroundTask.getTaskContextMap();
  long exportImportConfigurationId=MapUtil.getLong(taskContextMap,"exportImportConfigurationId");
  ExportImportServiceUtil.exportLayoutsAsFileInBackground(exportImportConfigurationId);
}
