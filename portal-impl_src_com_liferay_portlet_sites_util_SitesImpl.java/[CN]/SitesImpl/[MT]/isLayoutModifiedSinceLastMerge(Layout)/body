{
  if ((layout == null) || Validator.isNull(layout.getSourcePrototypeLayoutUuid()) || layout.isLayoutPrototypeLinkActive()|| !isLayoutUpdateable(layout)) {
    return false;
  }
  long lastMergeTime=GetterUtil.getLong(layout.getTypeSettingsProperty(LAST_MERGE_TIME));
  if (lastMergeTime == 0) {
    return false;
  }
  Date existingLayoutModifiedDate=layout.getModifiedDate();
  if ((existingLayoutModifiedDate != null) && (existingLayoutModifiedDate.getTime() > lastMergeTime)) {
    return true;
  }
  return false;
}
