{
  Repository repository=getRepository(0,fileEntryId,0);
  if (!(repository instanceof LiferayRepository)) {
    throw new InvalidRepositoryException("Repository " + repository.getRepositoryId() + " does not support trash operations");
  }
  FileEntry fileEntry=repository.getFileEntry(fileEntryId);
  DLFileEntryPermission.check(getPermissionChecker(),fileEntry,ActionKeys.DELETE);
  dlAppHelperLocalService.moveFileEntryToTrash(getUserId(),fileEntry);
}
