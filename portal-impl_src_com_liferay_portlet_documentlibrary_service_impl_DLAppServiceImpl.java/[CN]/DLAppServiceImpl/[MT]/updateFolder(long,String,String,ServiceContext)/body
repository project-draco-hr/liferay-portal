{
  Repository repository=null;
  if (folderId == DLFolderConstants.DEFAULT_PARENT_FOLDER_ID) {
    repository=getRepository(serviceContext.getScopeGroupId());
  }
 else {
    repository=getFolderRepository(folderId);
  }
  Folder folder=repository.updateFolder(folderId,name,description,serviceContext);
  if (folderId != DLFolderConstants.DEFAULT_PARENT_FOLDER_ID) {
    dlAppHelperLocalService.updateFolder(getUserId(),folder,serviceContext);
  }
  return folder;
}
