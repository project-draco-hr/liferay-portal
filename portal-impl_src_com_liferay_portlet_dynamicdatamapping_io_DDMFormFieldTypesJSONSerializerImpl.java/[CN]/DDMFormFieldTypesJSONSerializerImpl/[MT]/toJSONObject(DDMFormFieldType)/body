{
  JSONObject jsonObject=JSONFactoryUtil.createJSONObject();
  jsonObject.put("icon",ddmFormFieldType.getIcon());
  jsonObject.put("javaScriptClass",ddmFormFieldType.getDDMFormFieldTypeJavaScriptClass());
  jsonObject.put("javaScriptModule",ddmFormFieldType.getDDMFormFieldTypeJavaScriptModule());
  jsonObject.put("name",ddmFormFieldType.getName());
  jsonObject.put("settings",toJSONObject(ddmFormFieldType.getDDMFormFieldTypeSettings()));
  DDMFormFieldRenderer ddmFormFieldRenderer=ddmFormFieldType.getDDMFormFieldRenderer();
  jsonObject.put("templateNamespace",ddmFormFieldRenderer.getTemplateNamespace());
  return jsonObject;
}
