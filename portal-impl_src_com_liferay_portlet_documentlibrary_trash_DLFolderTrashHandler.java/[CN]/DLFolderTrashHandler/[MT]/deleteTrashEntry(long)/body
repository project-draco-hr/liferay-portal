{
  DLFolder dlFolder=DLFolderLocalServiceUtil.getDLFolder(classPK);
  List<DLFileEntry> fileEntries=DLFileEntryLocalServiceUtil.getGroupFileEntries(dlFolder.getGroupId(),0,classPK,QueryUtil.ALL_POS,QueryUtil.ALL_POS,null);
  for (  DLFileEntry fileEntry : fileEntries) {
    DLAppHelperLocalServiceUtil.deleteFileEntry(new LiferayFileEntry(fileEntry));
  }
  DLAppHelperLocalServiceUtil.deleteFolder(new LiferayFolder(dlFolder));
  DLFolderLocalServiceUtil.deleteFolder(classPK,false);
}
