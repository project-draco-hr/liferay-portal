{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=_dataSource.getConnection();
    con.setAutoCommit(false);
    ps=con.prepareStatement(buildSQL(_RETRIEVE_CONFIGURATION_SQL_FOR_UPDATE),ResultSet.TYPE_FORWARD_ONLY,ResultSet.CONCUR_UPDATABLE);
    ps.setString(1,pid);
    rs=ps.executeQuery();
    if (rs.next()) {
      store(rs,dictionary);
      rs.updateRow();
    }
 else {
      rs.moveToInsertRow();
      rs.updateString(1,pid);
      store(rs,dictionary);
      rs.insertRow();
      rs.moveToCurrentRow();
    }
    con.commit();
  }
 catch (  SQLException se) {
    ReflectionUtil.throwException(se);
  }
 finally {
    cleanUp(con,ps,rs);
  }
}
