{
  List list=new ArrayList();
  Session session=null;
  try {
    session=HibernateUtil.openSession();
    String sql=CustomSQLUtil.get(FIND_BY_GROUP_ID);
    SQLQuery q=session.createSQLQuery(sql);
    q.addEntity("MBTopic",MBTopicHBM.class);
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(groupId);
    Iterator itr=QueryUtil.iterate(q,HibernateUtil.getDialect(),begin,end);
    while (itr.hasNext()) {
      MBTopicHBM topicHBM=(MBTopicHBM)itr.next();
      MBTopic topic=MBTopicHBMUtil.model(topicHBM);
      list.add(topic);
    }
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
 finally {
    HibernateUtil.closeSession(session);
  }
  return list;
}
