{
  try {
    try {
      acquireLock(companyId,true);
    }
  finally {
synchronized (_lockLookup) {
        _needExclusiveLock--;
      }
    }
    IndexReader reader=null;
    try {
      reader=IndexReader.open(LuceneUtil.getLuceneDir(companyId));
      reader.deleteDocuments(term);
    }
  finally {
      if (reader != null) {
        reader.close();
      }
    }
  }
  finally {
    releaseLock(companyId);
  }
}
