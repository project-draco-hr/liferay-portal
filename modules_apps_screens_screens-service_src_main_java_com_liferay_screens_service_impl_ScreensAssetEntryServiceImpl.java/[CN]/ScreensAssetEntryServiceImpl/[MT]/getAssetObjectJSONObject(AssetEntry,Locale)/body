{
  String className=assetEntry.getClassName();
  if (className.equals("com.liferay.document.library.kernel.model.DLFileEntry")) {
    return getFileEntryJSONObject(assetEntry);
  }
 else   if (className.equals("com.liferay.journal.model.JournalArticle")) {
    return getJournalArticleJSONObject(assetEntry);
  }
 else   if (className.equals("com.liferay.dynamic.data.lists.model.DDLRecord")) {
    JSONObject ddlRecord=screensDDLRecordService.getDDLRecord(assetEntry.getClassPK(),locale);
    return ddlRecord;
  }
  return JSONFactoryUtil.createJSONObject();
}
