{
  Object[] finderArgs=new Object[]{new Long(groupId),new Long(parentCategoryId)};
  Long count=(Long)FinderCacheUtil.getResult(FINDER_PATH_COUNT_BY_G_P,finderArgs,this);
  if (count == null) {
    Session session=null;
    try {
      session=openSession();
      StringBuilder query=new StringBuilder();
      query.append("SELECT COUNT(*) ");
      query.append("FROM com.liferay.portlet.messageboards.model.MBCategory WHERE ");
      query.append("groupId = ?");
      query.append(" AND ");
      query.append("parentCategoryId = ?");
      query.append(" ");
      Query q=session.createQuery(query.toString());
      QueryPos qPos=QueryPos.getInstance(q);
      qPos.add(groupId);
      qPos.add(parentCategoryId);
      count=(Long)q.uniqueResult();
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      if (count == null) {
        count=Long.valueOf(0);
      }
      FinderCacheUtil.putResult(FINDER_PATH_COUNT_BY_G_P,finderArgs,count);
      closeSession(session);
    }
  }
  return count.intValue();
}
