{
  SyndFeed syndFeed=new SyndFeedImpl();
  syndFeed.setFeedType(type + "_" + version);
  syndFeed.setTitle(name);
  syndFeed.setLink(feedURL);
  syndFeed.setDescription(description);
  List entries=new ArrayList();
  syndFeed.setEntries(entries);
  Iterator itr=messages.iterator();
  while (itr.hasNext()) {
    MBMessage message=(MBMessage)itr.next();
    String firstLine=StringUtil.shorten(Html.stripHtml(message.getBody()),80,StringPool.BLANK);
    SyndEntry syndEntry=new SyndEntryImpl();
    if (!message.isAnonymous()) {
      String userName=message.getUserName();
      try {
        User user=UserLocalServiceUtil.getUserById(message.getUserId());
        userName=user.getFullName();
      }
 catch (      Exception e) {
      }
      syndEntry.setAuthor(userName);
    }
    syndEntry.setTitle(message.getSubject());
    syndEntry.setLink(entryURL + "&messageId=" + message.getMessageId());
    syndEntry.setPublishedDate(message.getCreateDate());
    SyndContent syndContent=new SyndContentImpl();
    syndContent.setType(Constants.TEXT_PLAIN);
    syndContent.setValue(firstLine);
    syndEntry.setDescription(syndContent);
    entries.add(syndEntry);
  }
  try {
    return RSSUtil.export(syndFeed);
  }
 catch (  FeedException fe) {
    throw new SystemException(fe);
  }
catch (  IOException ioe) {
    throw new SystemException(ioe);
  }
}
