{
  MBCategoryPermission.check(getPermissionChecker(),groupId,categoryId,ActionKeys.ADD_MESSAGE);
  if (!MBCategoryPermission.contains(getPermissionChecker(),groupId,categoryId,ActionKeys.ADD_FILE)) {
    files.clear();
  }
  if (!MBCategoryPermission.contains(getPermissionChecker(),groupId,categoryId,ActionKeys.UPDATE_THREAD_PRIORITY)) {
    priority=MBThreadConstants.PRIORITY_NOT_GIVEN;
  }
  return mbMessageLocalService.addMessage(getGuestOrUserId(),null,groupId,categoryId,subject,body,files,anonymous,priority,allowPingbacks,serviceContext);
}
