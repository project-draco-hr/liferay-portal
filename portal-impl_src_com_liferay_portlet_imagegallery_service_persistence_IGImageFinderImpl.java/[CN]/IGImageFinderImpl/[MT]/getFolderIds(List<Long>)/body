{
  int folderIdsSize=folderIds.size();
  if (folderIds.isEmpty()) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(folderIdsSize * 2 - 1);
  for (int i=0; i < folderIdsSize; i++) {
    sb.append("folderId = ? ");
    if ((i + 1) != folderIdsSize) {
      sb.append("OR ");
    }
  }
  return sb.toString();
}
