{
  DDMListItem ddmListItem=findByPrimaryKey(listItemId);
  Session session=null;
  try {
    session=openSession();
    DDMListItem[] array=new DDMListItemImpl[3];
    array[0]=getByListId_PrevAndNext(session,ddmListItem,listId,orderByComparator,true);
    array[1]=ddmListItem;
    array[2]=getByListId_PrevAndNext(session,ddmListItem,listId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
