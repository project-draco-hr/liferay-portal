{
  Session session=null;
  try {
    session=openSession();
    DDMListItem ddmListItem=(DDMListItem)session.get(DDMListItemImpl.class,Long.valueOf(listItemId));
    if (ddmListItem == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + listItemId);
      }
      throw new NoSuchListItemException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + listItemId);
    }
    return ddmListItemPersistence.remove(ddmListItem);
  }
 catch (  NoSuchListItemException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
