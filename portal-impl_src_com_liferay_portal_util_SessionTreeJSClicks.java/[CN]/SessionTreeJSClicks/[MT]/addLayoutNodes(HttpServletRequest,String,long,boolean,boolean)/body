{
  try {
    List<String> layoutIds=new ArrayList<String>();
    layoutIds.add(String.valueOf(layoutId));
    if (recursive) {
      getLayoutChildrenIds(request,layoutIds,layoutId,privateLayout);
    }
    addNodes(request,treeId,layoutIds.toArray(new String[layoutIds.size()]));
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
}
