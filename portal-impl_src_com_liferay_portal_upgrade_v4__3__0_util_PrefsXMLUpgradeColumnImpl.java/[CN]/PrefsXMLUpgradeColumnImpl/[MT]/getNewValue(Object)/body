{
  String xml=(String)oldValue;
  PortletPreferences prefs=PortletPreferencesSerializer.fromDefaultXML(xml);
  String groupId=prefs.getValue("group-id",null);
  if (Validator.isNotNull(groupId)) {
    groupId=String.valueOf(_groupIdMapper.getNewValue(new Long(GetterUtil.getLong(groupId))));
    prefs.setValue("group-id",groupId);
    xml=PortletPreferencesSerializer.toXML((PortletPreferencesImpl)prefs);
  }
  return xml;
}
