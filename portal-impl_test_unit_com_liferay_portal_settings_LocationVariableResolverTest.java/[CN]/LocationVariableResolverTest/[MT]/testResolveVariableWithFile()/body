{
  String expectedValue="En un lugar de la Mancha...";
  File file=File.createTempFile("testResolveVariableForFile","txt");
  file.deleteOnExit();
  FileUtil.write(file,expectedValue.getBytes());
  LocationVariableResolver locationVariableResolver=new LocationVariableResolver(null);
  String value=locationVariableResolver.resolve("${file://" + file.getAbsolutePath() + "}");
  Assert.assertEquals(expectedValue,value);
}
