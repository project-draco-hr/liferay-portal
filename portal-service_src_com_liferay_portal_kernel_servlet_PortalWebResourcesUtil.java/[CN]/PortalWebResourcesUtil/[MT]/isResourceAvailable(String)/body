{
  String contextPath=getContextPath();
  if (path.startsWith(contextPath)) {
    path=path.substring(contextPath.length());
  }
  try {
    URL url=getPortalWebResources().getServletContext().getResource(path);
    if (url != null) {
      return true;
    }
  }
 catch (  MalformedURLException e) {
  }
  return false;
}
