{
  try {
    long classNameId=PortalUtil.getClassNameId(Group.class);
    CalendarResource calendarResource=CalendarResourceLocalServiceUtil.fetchCalendarResource(classNameId,group.getGroupId());
    if (calendarResource != null) {
      CalendarResourceLocalServiceUtil.deleteCalendarResource(calendarResource);
    }
    CalendarResourceLocalServiceUtil.deleteCalendarResources(group.getGroupId());
  }
 catch (  Exception e) {
    throw new ModelListenerException(e);
  }
}
