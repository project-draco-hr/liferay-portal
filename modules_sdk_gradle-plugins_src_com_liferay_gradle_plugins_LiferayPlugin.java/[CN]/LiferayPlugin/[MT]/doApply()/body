{
  applyPlugin(WarPlugin.class);
  addLiferayExtension();
  configureConfigurations();
  configureDependencies();
  configureRepositories();
  configureSourceSets();
  configureVersion();
  configureWebAppDirName();
  addTasks();
  project.afterEvaluate(new Action<Project>(){
    @Override public void execute(    Project project){
      configureTasks();
    }
  }
);
}
