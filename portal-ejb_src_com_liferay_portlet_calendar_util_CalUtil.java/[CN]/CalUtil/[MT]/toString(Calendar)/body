{
  StringMaker sm=new StringMaker();
  sm.append(cal.get(Calendar.YEAR));
  sm.append(StringPool.PERIOD);
  sm.append(cal.get(Calendar.MONTH));
  sm.append(StringPool.PERIOD);
  sm.append(cal.get(Calendar.DATE));
  sm.append(StringPool.PERIOD);
  sm.append(cal.getTimeZone().getRawOffset());
  return sm.toString();
}
