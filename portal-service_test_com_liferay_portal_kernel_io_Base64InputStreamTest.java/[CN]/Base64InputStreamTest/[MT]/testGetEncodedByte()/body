{
  File testFile=new File(_filePath);
  Base64InputStream instance;
  try {
    FileOutputStream fos=new FileOutputStream(testFile);
    fos.write('A');
    fos.write('=');
    fos.write('B');
    fos.write('\n');
    instance=new Base64InputStream(new FileInputStream(testFile));
    int expResult=0;
    int result=instance.getEncodedByte();
    assertEquals(expResult,result);
    expResult=-2;
    result=instance.getEncodedByte();
    assertEquals(expResult,result);
    expResult=1;
    result=instance.getEncodedByte();
    assertEquals(expResult,result);
    expResult=-1;
    result=instance.getEncodedByte();
    assertEquals(expResult,result);
    testFile.delete();
  }
 catch (  Exception ex) {
    fail("Test getEncodedByte failed.");
  }
}
