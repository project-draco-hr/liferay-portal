{
  int beginPos=0;
  int endPos=0;
  while (beginPos >= 0) {
    beginPos=content.indexOf("<" + tag,endPos);
    if (beginPos < 0) {
      break;
    }
    endPos=content.indexOf(">",beginPos);
    if (endPos < 0) {
      break;
    }
    String subContent=content.substring(beginPos,endPos);
    if (!subContent.contains(attribute)) {
      content=StringUtil.insert(content," " + attribute + "="+ attributeValue,beginPos + tag.length() + 1);
    }
  }
  return content;
}
