{
  int startIndex=0;
  int endIndex=0;
  while (startIndex >= 0) {
    startIndex=content.indexOf("<" + tag,endIndex);
    if (startIndex < 0) {
      break;
    }
    endIndex=content.indexOf(">",startIndex);
    if (endIndex < 0) {
      break;
    }
    String subContent=content.substring(startIndex,endIndex);
    if (!subContent.contains(attribute)) {
      content=StringUtil.insert(content," " + attribute + "="+ attributeValue,startIndex + tag.length() + 1);
    }
  }
  return content;
}
