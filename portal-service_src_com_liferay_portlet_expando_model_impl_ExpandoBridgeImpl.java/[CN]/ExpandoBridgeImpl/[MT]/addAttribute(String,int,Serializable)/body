{
  try {
    ExpandoTable table=null;
    try {
      table=ExpandoTableLocalServiceUtil.getDefaultTable(_className);
    }
 catch (    NoSuchTableException nste) {
      table=ExpandoTableLocalServiceUtil.addDefaultTable(_className);
    }
    ExpandoColumnLocalServiceUtil.addColumn(table.getTableId(),name,type,defaultValue);
  }
 catch (  Exception e) {
    if (e instanceof PortalException) {
      throw (PortalException)e;
    }
 else {
      _log.error(e,e);
    }
  }
}
