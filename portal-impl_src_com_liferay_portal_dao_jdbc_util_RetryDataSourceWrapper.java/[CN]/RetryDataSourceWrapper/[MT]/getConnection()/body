{
  int retries=PropsValues.RETRY_DATA_SOURCE_MAX_RETRIES;
  SQLException sqlException=null;
  while (retries-- >= 0) {
    try {
      return super.getConnection();
    }
 catch (    SQLException sqle) {
      if (sqlException == null) {
        sqlException=sqle;
      }
    }
  }
  throw sqlException;
}
