{
  validate(fileName,fileExtension,sourceFileName,validateFileExtension,StringPool.BLANK);
  try {
    if ((is != null) && (PrefsPropsUtil.getLong(PropsKeys.DL_FILE_MAX_SIZE) > 0) && (is.available() > PrefsPropsUtil.getLong(PropsKeys.DL_FILE_MAX_SIZE))) {
      throw new FileSizeException(fileName);
    }
  }
 catch (  IOException ioe) {
    throw new FileSizeException(ioe.getMessage());
  }
}
