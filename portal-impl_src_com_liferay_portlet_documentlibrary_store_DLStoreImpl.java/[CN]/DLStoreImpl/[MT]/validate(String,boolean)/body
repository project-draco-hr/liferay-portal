{
  if (!isValidName(fileName)) {
    throw new FileNameException(fileName);
  }
  if (fileName.endsWith(TempFileUtil.SUFFIX_TEMP_FILENAME)) {
    fileName=StringUtil.replaceLast(fileName,TempFileUtil.SUFFIX_TEMP_FILENAME,StringPool.BLANK);
  }
  if (validateFileExtension) {
    boolean validFileExtension=false;
    String[] fileExtensions=PrefsPropsUtil.getStringArray(PropsKeys.DL_FILE_EXTENSIONS,StringPool.COMMA);
    for (    String fileExtension : fileExtensions) {
      if (StringPool.STAR.equals(fileExtension) || fileName.endsWith(fileExtension)) {
        validFileExtension=true;
        break;
      }
    }
    if (!validFileExtension) {
      throw new FileExtensionException(fileName);
    }
  }
}
