{
  validate(fileName,validateFileExtension);
  try {
    if ((is == null) || (is.available() == 0) || ((PrefsPropsUtil.getLong(PropsKeys.DL_FILE_MAX_SIZE) > 0) && (is.available() > PrefsPropsUtil.getLong(PropsKeys.DL_FILE_MAX_SIZE)))) {
      throw new FileSizeException(fileName);
    }
  }
 catch (  IOException ioe) {
    throw new FileSizeException(ioe.getMessage());
  }
}
