{
  List<Serializable> values=_getValues(locale);
  if (values.isEmpty()) {
    return null;
  }
  try {
    DDMStructure ddmStructure=getDDMStructure();
    if (ddmStructure == null) {
      return values.get(0);
    }
    if (isRepeatable() || (values.size() > 1)) {
      return FieldConstants.getSerializable(getDataType(),values);
    }
    return values.get(0);
  }
 catch (  Exception e) {
    _log.error(e);
  }
  return null;
}
