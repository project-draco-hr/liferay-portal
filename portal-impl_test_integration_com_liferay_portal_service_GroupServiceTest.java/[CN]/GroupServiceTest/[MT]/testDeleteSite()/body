{
  Group group=ServiceTestUtil.addGroup("Test deletion");
  long groupId=group.getGroupId();
  User user=ServiceTestUtil.addUser(ServiceTestUtil.randomString(),false,new long[]{group.getGroupId()});
  BlogsEntry entry=_addBlogsEntry(groupId,user.getUserId());
  long entryId=entry.getEntryId();
  Assert.assertNotNull(BlogsEntryLocalServiceUtil.fetchBlogsEntry(entryId));
  GroupLocalServiceUtil.deleteGroup(groupId);
  BlogsEntry nullEntry=BlogsEntryLocalServiceUtil.fetchBlogsEntry(entryId);
  Assert.assertNull(nullEntry);
}
