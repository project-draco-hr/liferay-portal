{
  Group group=ServiceTestUtil.addGroup();
  User user=ServiceTestUtil.addUser(ServiceTestUtil.randomString(),false,new long[]{group.getGroupId()});
  BlogsEntry blogsEntry=BlogsTestUtil.addBlogsEntry(user.getUserId(),group,true);
  Assert.assertNotNull(BlogsEntryLocalServiceUtil.fetchBlogsEntry(blogsEntry.getEntryId()));
  GroupLocalServiceUtil.deleteGroup(group.getGroupId());
  Assert.assertNull(BlogsEntryLocalServiceUtil.fetchBlogsEntry(blogsEntry.getEntryId()));
}
