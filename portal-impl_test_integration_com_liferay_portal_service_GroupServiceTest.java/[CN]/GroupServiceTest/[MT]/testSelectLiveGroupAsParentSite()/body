{
  Group group=GroupTestUtil.addGroup("Test 1");
  GroupTestUtil.enableLocalStaging(group);
  Assert.assertTrue(group.hasStagingGroup());
  try {
    Group stagingGroup=group.getStagingGroup();
    GroupLocalServiceUtil.updateGroup(stagingGroup.getGroupId(),group.getGroupId(),stagingGroup.getName(),stagingGroup.getDescription(),stagingGroup.getType(),stagingGroup.getFriendlyURL(),stagingGroup.isActive(),ServiceTestUtil.getServiceContext());
    Assert.fail("A group cannot has its live group as parent.");
  }
 catch (  GroupParentException pe) {
    Assert.assertEquals(GroupParentException.STAGING_DESCENDANT,pe.getType());
  }
}
