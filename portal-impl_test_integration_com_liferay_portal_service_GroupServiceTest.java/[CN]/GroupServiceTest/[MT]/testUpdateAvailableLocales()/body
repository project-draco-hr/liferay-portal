{
  Group group=GroupTestUtil.addGroup();
  Locale[] availableLocales=new Locale[]{Locale.US,new Locale("es","ES"),new Locale("de","DE")};
  group=GroupTestUtil.updateDisplaySettings(group.getGroupId(),availableLocales,null);
  Assert.assertArrayEquals(availableLocales,LanguageUtil.getAvailableLocales(group.getGroupId()));
}
