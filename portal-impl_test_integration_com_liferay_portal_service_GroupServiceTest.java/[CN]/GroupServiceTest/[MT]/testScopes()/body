{
  Group group1=ServiceTestUtil.addGroup("Example 1");
  Layout layout=ServiceTestUtil.addLayout(group1.getGroupId(),"Page 1");
  Assert.assertFalse(layout.hasScopeGroup());
  Group scope=GroupLocalServiceUtil.addGroup(TestPropsValues.getUserId(),GroupConstants.DEFAULT_PARENT_GROUP_ID,Layout.class.getName(),layout.getPlid(),layout.getName(LocaleUtil.getDefault()),null,0,null,false,true,null);
  Assert.assertFalse(scope.isRoot());
  Assert.assertEquals(scope.getParentGroupId(),group1.getGroupId());
}
