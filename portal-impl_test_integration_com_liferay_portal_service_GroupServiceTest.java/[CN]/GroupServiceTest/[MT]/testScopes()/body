{
  Group group=ServiceTestUtil.addGroup();
  Layout layout=ServiceTestUtil.addLayout(group.getGroupId(),"Page 1");
  Assert.assertFalse(layout.hasScopeGroup());
  Group scope=GroupLocalServiceUtil.addGroup(TestPropsValues.getUserId(),GroupConstants.DEFAULT_PARENT_GROUP_ID,Layout.class.getName(),layout.getPlid(),GroupConstants.DEFAULT_LIVE_GROUP_ID,layout.getName(LocaleUtil.getDefault()),null,0,null,false,true,null);
  Assert.assertFalse(scope.isRoot());
  Assert.assertEquals(scope.getParentGroupId(),group.getGroupId());
}
