{
  Group group1=GroupTestUtil.addGroup();
  Group group11=GroupTestUtil.addGroup(group1.getGroupId());
  try {
    GroupLocalServiceUtil.updateGroup(group1.getGroupId(),group11.getGroupId(),group1.getName(),group1.getDescription(),group1.getType(),group1.isManualMembership(),group1.getMembershipRestriction(),group1.getFriendlyURL(),group1.isInheritContent(),group1.isActive(),ServiceContextTestUtil.getServiceContext());
    Assert.fail("A child group cannot be its parent group");
  }
 catch (  GroupParentException gpe) {
    Assert.assertEquals(GroupParentException.CHILD_DESCENDANT,gpe.getType());
  }
}
