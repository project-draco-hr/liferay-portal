{
  Group group=GroupTestUtil.addGroup();
  ServiceContext serviceContext=ServiceTestUtil.getServiceContext(group.getGroupId());
  List<AssetTag> tags=AssetTagLocalServiceUtil.getGroupTags(group.getGroupId());
  int initialTagsCount=tags.size();
  AssetTagLocalServiceUtil.addTag(TestPropsValues.getUserId(),ServiceTestUtil.randomString(),null,serviceContext);
  tags=AssetTagLocalServiceUtil.getGroupTags(group.getGroupId());
  Assert.assertEquals(initialTagsCount + 1,tags.size());
  GroupLocalServiceUtil.deleteGroup(group.getGroupId());
  tags=AssetTagLocalServiceUtil.getGroupTags(group.getGroupId());
  Assert.assertEquals(initialTagsCount,tags.size());
}
