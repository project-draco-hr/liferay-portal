{
  DLFolder dlFolder=dlFolderPersistence.findByPrimaryKey(folderId);
  if (ExportImportThreadLocal.isImportInProcess() || (folderId == DLFolderConstants.DEFAULT_PARENT_FOLDER_ID) || (lastPostDate == null)|| lastPostDate.before(dlFolder.getLastPostDate())) {
    return dlFolder;
  }
  dlFolder.setLastPostDate(lastPostDate);
  dlFolderPersistence.update(dlFolder);
  return dlFolder;
}
