{
  if (status == WorkflowConstants.STATUS_ANY) {
    return getFoldersCount(groupId,parentFolderId,includeMountfolders);
  }
 else   if (includeMountfolders) {
    return dlFolderPersistence.countByG_P_H_S(groupId,parentFolderId,false,status);
  }
 else {
    return dlFolderPersistence.countByG_M_P_H_S(groupId,false,parentFolderId,false,status);
  }
}
