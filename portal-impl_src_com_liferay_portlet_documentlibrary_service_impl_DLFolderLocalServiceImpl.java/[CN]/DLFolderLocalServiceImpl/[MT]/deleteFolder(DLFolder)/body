{
  Iterator itr=DLFolderUtil.findByG_P(folder.getGroupId(),folder.getFolderId()).iterator();
  while (itr.hasNext()) {
    DLFolder curFolder=(DLFolder)itr.next();
    deleteFolder(curFolder);
  }
  DLFileEntryLocalServiceUtil.deleteFileEntries(folder.getFolderId());
  ResourceLocalServiceUtil.deleteResource(folder.getCompanyId(),DLFolder.class.getName(),ResourceImpl.SCOPE_INDIVIDUAL,folder.getFolderId());
  DLFolderUtil.remove(folder.getFolderId());
}
