{
  Session session=null;
  try {
    session=openSession();
    DDLEntryItem ddlEntryItem=(DDLEntryItem)session.get(DDLEntryItemImpl.class,Long.valueOf(entryItemId));
    if (ddlEntryItem == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + entryItemId);
      }
      throw new NoSuchEntryItemException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + entryItemId);
    }
    return ddlEntryItemPersistence.remove(ddlEntryItem);
  }
 catch (  NoSuchEntryItemException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
