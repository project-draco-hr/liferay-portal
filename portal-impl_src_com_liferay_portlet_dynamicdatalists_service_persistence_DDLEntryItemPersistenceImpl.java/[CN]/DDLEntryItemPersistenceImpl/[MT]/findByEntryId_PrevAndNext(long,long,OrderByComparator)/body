{
  DDLEntryItem ddlEntryItem=findByPrimaryKey(entryItemId);
  Session session=null;
  try {
    session=openSession();
    DDLEntryItem[] array=new DDLEntryItemImpl[3];
    array[0]=getByEntryId_PrevAndNext(session,ddlEntryItem,entryId,orderByComparator,true);
    array[1]=ddlEntryItem;
    array[2]=getByEntryId_PrevAndNext(session,ddlEntryItem,entryId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
