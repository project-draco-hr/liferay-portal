{
  ddlEntryItem=toUnwrappedModel(ddlEntryItem);
  if (Validator.isNull(ddlEntryItem.getUuid())) {
    String uuid=PortalUUIDUtil.generate();
    ddlEntryItem.setUuid(uuid);
  }
  Session session=null;
  try {
    session=openSession();
    BatchSessionUtil.update(session,ddlEntryItem,merge);
    ddlEntryItem.setNew(false);
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
  FinderCacheUtil.clearCache(FINDER_CLASS_NAME_LIST);
  EntityCacheUtil.putResult(DDLEntryItemModelImpl.ENTITY_CACHE_ENABLED,DDLEntryItemImpl.class,ddlEntryItem.getPrimaryKey(),ddlEntryItem);
  return ddlEntryItem;
}
