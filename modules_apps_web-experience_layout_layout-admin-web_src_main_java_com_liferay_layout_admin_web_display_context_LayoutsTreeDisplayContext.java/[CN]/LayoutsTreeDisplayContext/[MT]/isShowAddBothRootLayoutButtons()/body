{
  if (!super.isShowAddRootLayoutButton()) {
    return false;
  }
  Group selGroup=getSelGroup();
  if (selGroup.hasPublicLayouts() && selGroup.hasPrivateLayouts()) {
    return false;
  }
  if (!selGroup.hasPublicLayouts() && !selGroup.hasPrivateLayouts()) {
    return false;
  }
  return true;
}
