{
  DDMTemplate ddmTemplate=findByPrimaryKey(templateId);
  Session session=null;
  try {
    session=openSession();
    DDMTemplate[] array=new DDMTemplateImpl[3];
    array[0]=getByC_T_M_PrevAndNext(session,ddmTemplate,classPK,type,mode,orderByComparator,true);
    array[1]=ddmTemplate;
    array[2]=getByC_T_M_PrevAndNext(session,ddmTemplate,classPK,type,mode,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
