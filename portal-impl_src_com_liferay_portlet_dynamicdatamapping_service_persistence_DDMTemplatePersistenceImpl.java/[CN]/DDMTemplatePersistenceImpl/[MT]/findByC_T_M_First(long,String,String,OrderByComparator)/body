{
  List<DDMTemplate> list=findByC_T_M(classPK,type,mode,0,1,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(8);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("classPK=");
    msg.append(classPK);
    msg.append(", type=");
    msg.append(type);
    msg.append(", mode=");
    msg.append(mode);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchTemplateException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
