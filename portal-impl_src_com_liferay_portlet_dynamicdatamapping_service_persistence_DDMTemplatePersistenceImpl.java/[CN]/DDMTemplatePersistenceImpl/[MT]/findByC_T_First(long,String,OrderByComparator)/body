{
  List<DDMTemplate> list=findByC_T(classPK,type,0,1,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(6);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("classPK=");
    msg.append(classPK);
    msg.append(", type=");
    msg.append(type);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchTemplateException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
