{
  Registry registry=RegistryUtil.getRegistry();
  Object strutsActionObj=InstanceFactory.newInstance(portletClassLoader,strutsActionClassName);
  Map<String,Object> properties=new HashMap<String,Object>();
  properties.put("path",strutsActionPath);
  ServiceRegistration<?> serviceRegistration=null;
  if (strutsActionObj instanceof StrutsAction) {
    StrutsAction strutsAction=(StrutsAction)ProxyUtil.newProxyInstance(portletClassLoader,new Class[]{StrutsAction.class},new ClassLoaderBeanHandler(strutsActionObj,portletClassLoader));
    serviceRegistration=registry.registerService(StrutsAction.class,strutsAction,properties);
  }
 else {
    StrutsPortletAction strutsPortletAction=(StrutsPortletAction)ProxyUtil.newProxyInstance(portletClassLoader,new Class[]{StrutsPortletAction.class},new ClassLoaderBeanHandler(strutsActionObj,portletClassLoader));
    serviceRegistration=registry.registerService(StrutsPortletAction.class,strutsPortletAction,properties);
  }
  serviceRegistrations.put(strutsActionClassName,serviceRegistration);
}
