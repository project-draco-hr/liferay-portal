{
  ModelListener<BaseModel<?>> modelListener=(ModelListener<BaseModel<?>>)portletClassLoader.loadClass(modelListenerClassName).newInstance();
  modelListener=(ModelListener<BaseModel<?>>)Proxy.newProxyInstance(portletClassLoader,new Class[]{ModelListener.class},new ContextClassLoaderBeanHandler(modelListener,portletClassLoader));
  BasePersistence persistence=getPersistence(modelName);
  persistence.registerListener(modelListener);
  return modelListener;
}
