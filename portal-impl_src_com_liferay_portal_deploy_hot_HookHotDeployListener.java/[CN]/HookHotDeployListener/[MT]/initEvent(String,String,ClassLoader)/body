{
  if (eventName.equals(APPLICATION_STARTUP_EVENTS)) {
    SimpleAction simpleAction=new InvokerSimpleAction((SimpleAction)portletClassLoader.loadClass(eventClass).newInstance());
    simpleAction=new SimpleActionWrapper(simpleAction,portletClassLoader);
    long companyId=CompanyThreadLocal.getCompanyId();
    long[] companyIds=PortalInstances.getCompanyIds();
    for (    long curCompanyId : companyIds) {
      CompanyThreadLocal.setCompanyId(curCompanyId);
      simpleAction.run(new String[]{String.valueOf(curCompanyId)});
    }
    CompanyThreadLocal.setCompanyId(companyId);
    return null;
  }
  if (ArrayUtil.contains(_PROPS_KEYS_EVENTS,eventName)) {
    Action action=(Action)portletClassLoader.loadClass(eventClass).newInstance();
    action=new ActionWrapper(action,portletClassLoader);
    EventsProcessor.registerEvent(eventName,action);
    return action;
  }
  if (ArrayUtil.contains(_PROPS_KEYS_SESSION_EVENTS,eventName)) {
    SessionAction sessionAction=(SessionAction)portletClassLoader.loadClass(eventClass).newInstance();
    sessionAction=new SessionActionWrapper(sessionAction,portletClassLoader);
    EventsProcessor.registerEvent(eventName,sessionAction);
    return sessionAction;
  }
  return null;
}
