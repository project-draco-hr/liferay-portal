{
  String dlHookClassName=portalProperties.getProperty(PropsKeys.DL_HOOK_IMPL);
  if (Validator.isNull(dlHookClassName)) {
    return;
  }
  Hook dlHook=(Hook)portletClassLoader.loadClass(dlHookClassName).newInstance();
  dlHook=(Hook)Proxy.newProxyInstance(portletClassLoader,new Class[]{Hook.class},new ContextClassLoaderBeanHandler(dlHook,portletClassLoader));
  _dlHooksMap.put(servletContextName,dlHook);
}
