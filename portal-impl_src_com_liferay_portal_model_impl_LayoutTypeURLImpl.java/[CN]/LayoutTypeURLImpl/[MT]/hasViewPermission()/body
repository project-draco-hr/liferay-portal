{
  Layout layout=getLayout();
  LayoutTypeAccessPolicy layoutTypeAccessPolicy=getLayoutTypeAccessPolicy();
  PermissionChecker permissionChecker=PermissionThreadLocal.getPermissionChecker();
  try {
    return layoutTypeAccessPolicy.isViewLayoutAllowed(permissionChecker,layout);
  }
 catch (  PortalException pe) {
    _log.error(pe);
    return false;
  }
}
