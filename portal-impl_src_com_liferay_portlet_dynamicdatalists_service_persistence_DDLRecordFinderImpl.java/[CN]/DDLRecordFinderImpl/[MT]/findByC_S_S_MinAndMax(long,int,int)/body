{
  Session session=null;
  try {
    session=openSession();
    String sql=CustomSQLUtil.get(COUNT_BY_C_S_S);
    sql=StringUtil.replace(sql,"COUNT(DISTINCT DDLRecord.recordId) AS COUNT_VALUE","MIN(DDLRecord.recordId) AS MIN_RECORD_ID, " + "MAX(DDLRecord.recordId) AS MAX_RECORD_ID");
    if (status == WorkflowConstants.STATUS_ANY) {
      sql=StringUtil.replace(sql,"(DDLRecordVersion.status = ?) AND",StringPool.BLANK);
    }
    SQLQuery q=session.createSQLQuery(sql);
    q.addScalar("MIN_RECORD_ID",Type.LONG);
    q.addScalar("MAX_RECORD_ID",Type.LONG);
    QueryPos qPos=QueryPos.getInstance(q);
    if (status != WorkflowConstants.STATUS_ANY) {
      qPos.add(status);
    }
    qPos.add(scope);
    qPos.add(companyId);
    Object[] array=(Object[])q.iterateNext();
    if (array == null) {
      return null;
    }
    return ArrayUtil.toLongArray(array);
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
 finally {
    closeSession(session);
  }
}
