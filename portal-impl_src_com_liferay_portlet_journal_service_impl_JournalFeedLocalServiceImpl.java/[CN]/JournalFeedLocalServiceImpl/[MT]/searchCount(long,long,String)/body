{
  SmartCriteria criteria=new SmartCriteria();
  criteria.add(MirageFeedCriteria.QUERY,MirageFeedCriteria.COUNT_BY_KEYWORDS);
  criteria.add(MirageFeedCriteria.COMPANY_ID,companyId);
  criteria.add(MirageFeedCriteria.GROUP_ID,groupId);
  criteria.add(MirageFeedCriteria.KEYWORDS,keywords);
  ContentFeedService contentFeedService=MirageServiceFactory.getContentFeedService();
  try {
    return contentFeedService.getContentFeedSearchCount(criteria.getCriteria());
  }
 catch (  CMSException cmse) {
    throw (SystemException)cmse.getCause();
  }
}
