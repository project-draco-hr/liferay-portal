{
  if (contentField.equals(JournalFeedConstants.WEB_CONTENT_DESCRIPTION) || contentField.equals(JournalFeedConstants.RENDERED_WEB_CONTENT)) {
    return true;
  }
 else {
    try {
      DDMStructure ddmStructure=DDMStructureLocalServiceUtil.getStructure(groupId,structureId);
      Document document=SAXReaderUtil.read(ddmStructure.getXsd());
      contentField=HtmlUtil.escapeXPathAttribute(contentField);
      XPath xPathSelector=SAXReaderUtil.createXPath("//dynamic-element[@name=" + contentField + "]");
      Node node=xPathSelector.selectSingleNode(document);
      if (node != null) {
        return true;
      }
    }
 catch (    Exception e) {
      _log.error(e,e);
    }
  }
  return false;
}
