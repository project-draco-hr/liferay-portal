{
  boolean verified=false;
  try {
    String lockId=DLUtil.getLockId(groupId,folderId,name);
    Lock lock=lockLocalService.getLock(DLFileEntry.class.getName(),lockId);
    if (lock.getUuid().equals(lockUuid)) {
      verified=true;
    }
  }
 catch (  PortalException pe) {
    if (pe instanceof ExpiredLockException || pe instanceof NoSuchLockException) {
      verified=dlFolderService.verifyInheritableLock(folderId,lockUuid);
    }
 else {
      throw pe;
    }
  }
  return verified;
}
