{
  if (rootFolderId == DLFolderConstants.DEFAULT_PARENT_FOLDER_ID) {
    return dlFileEntryFinder.filterCountByG_U_F_M(groupId,userId,new ArrayList<Long>(),mimeTypes,new QueryDefinition(status));
  }
  List<Long> folderIds=dlFolderService.getFolderIds(groupId,rootFolderId);
  if (folderIds.isEmpty()) {
    return 0;
  }
  return dlFileEntryFinder.filterCountByG_U_F_M(groupId,userId,folderIds,mimeTypes,new QueryDefinition(status));
}
