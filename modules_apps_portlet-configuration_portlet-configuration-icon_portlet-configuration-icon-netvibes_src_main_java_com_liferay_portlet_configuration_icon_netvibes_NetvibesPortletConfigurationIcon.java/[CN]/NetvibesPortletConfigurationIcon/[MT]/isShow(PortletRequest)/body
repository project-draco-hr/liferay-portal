{
  ThemeDisplay themeDisplay=(ThemeDisplay)portletRequest.getAttribute(WebKeys.THEME_DISPLAY);
  PortletDisplay portletDisplay=themeDisplay.getPortletDisplay();
  PortletPreferences portletSetup=PortletPreferencesFactoryUtil.getStrictLayoutPortletSetup(themeDisplay.getLayout(),portletDisplay.getId());
  boolean lfrNetvibesShowAddAppLink=GetterUtil.getBoolean(portletSetup.getValue("lfrNetvibesShowAddAppLink",StringPool.BLANK));
  if (lfrNetvibesShowAddAppLink) {
    return true;
  }
  return false;
}
