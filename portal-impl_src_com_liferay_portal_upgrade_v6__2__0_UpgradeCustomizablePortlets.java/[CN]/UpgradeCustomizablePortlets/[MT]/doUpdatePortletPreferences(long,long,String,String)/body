{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("update PortletPreferences set ownerId = ?, ownerType = ?, " + "plid = ?, portletId = ? where ownerId = ? and " + "ownerType = ? and portletId = ?");
    ps.setLong(1,userId);
    ps.setInt(2,PortletKeys.PREFS_OWNER_TYPE_USER);
    ps.setLong(3,plid);
    ps.setString(4,newPortletId);
    ps.setLong(5,0L);
    ps.setInt(6,PortletKeys.PREFS_OWNER_TYPE_LAYOUT);
    ps.setString(7,portletId);
    ps.executeUpdate();
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
