{
  try (PreparedStatement ps=connection.prepareStatement("select ownerId, ownerType, preferences from " + "PortalPreferences where preferences like " + "'%com.liferay.portal.model.CustomizedPages%'");ResultSet rs=ps.executeQuery()){
    while (rs.next()) {
      long ownerId=rs.getLong("ownerId");
      int ownerType=rs.getInt("ownerType");
      String preferences=rs.getString("preferences");
      PortalPreferencesWrapper portalPreferencesWrapper=getPortalPreferencesInstance(ownerId,ownerType,preferences);
      upgradeCustomizablePreferences(portalPreferencesWrapper,ownerId,ownerType,preferences);
      portalPreferencesWrapper.store();
    }
  }
 }
