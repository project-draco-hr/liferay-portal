{
  ClassLoader portletClassLoader=PortalClassLoaderUtil.getClassLoader();
  PortletBag portletBag=PortletBagPool.get(portletId);
  if (portletBag != null) {
    ServletContext servletContext=portletBag.getServletContext();
    portletClassLoader=(ClassLoader)servletContext.getAttribute(PortletServlet.PORTLET_CLASS_LOADER);
  }
  Thread currentThread=Thread.currentThread();
  ClassLoader contextClassLoader=currentThread.getContextClassLoader();
  try {
    currentThread.setContextClassLoader(portletClassLoader);
    MethodWrapper methodWrapper=new MethodWrapper(className,methodName,args);
    return MethodInvoker.invoke(methodWrapper,newInstance);
  }
  finally {
    currentThread.setContextClassLoader(contextClassLoader);
  }
}
