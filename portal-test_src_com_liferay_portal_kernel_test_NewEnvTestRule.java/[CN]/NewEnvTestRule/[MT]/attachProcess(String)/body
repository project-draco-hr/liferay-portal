{
  if (Boolean.getBoolean("attached")) {
    return;
  }
  ProcessContext.attach(message,1000,new ShutdownHook(){
    @Override public boolean shutdown(    int shutdownCode,    Throwable shutdownThrowable){
      System.exit(shutdownCode);
      return true;
    }
  }
);
  System.setProperty("attached",StringPool.TRUE);
}
