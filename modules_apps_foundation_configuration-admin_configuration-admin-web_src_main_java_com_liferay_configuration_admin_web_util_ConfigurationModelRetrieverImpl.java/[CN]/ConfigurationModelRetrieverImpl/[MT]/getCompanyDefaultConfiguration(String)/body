{
  Configuration configuration=null;
  try {
    Configuration[] factoryConfigurations=getFactoryConfigurations(factoryPid,ConfigurationModel.PROPERTY_KEY_COMPANY_ID,ConfigurationModel.PROPERTY_VALUE_COMPANY_ID_DEFAULT);
    if (ArrayUtil.isNotEmpty(factoryConfigurations)) {
      configuration=factoryConfigurations[0];
    }
  }
 catch (  IOException ioe) {
    ReflectionUtil.throwException(ioe);
  }
  return configuration;
}
