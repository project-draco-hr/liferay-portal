{
  long ownerId=portletItemId;
  int ownerType=PortletKeys.PREFS_OWNER_TYPE_SAVED;
  long plid=0;
  PortletItem portletItem=portletItemLocalService.getPortletItem(portletItemId);
  GroupPermissionUtil.check(getPermissionChecker(),portletItem.getGroupId(),ActionKeys.MANAGE_SAVED_SETUPS);
  portletPreferencesLocalService.deletePortletPreferences(ownerId,ownerType,plid,portletItem.getPortletId());
  portletItemLocalService.deletePortletItem(portletItemId);
}
