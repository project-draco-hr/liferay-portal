{
  Session session=null;
  try {
    session=openSession();
    Group group=(Group)session.get(Group.class,groupId);
    if (group == null) {
      _log.warn("No Group exists with the primary key " + groupId.toString());
      throw new NoSuchGroupException("No Group exists with the primary key " + groupId.toString());
    }
    session.delete(group);
    session.flush();
    clearOrganizations.clear(groupId);
    clearPermissions.clear(groupId);
    clearRoles.clear(groupId);
    clearUserGroups.clear(groupId);
    clearUsers.clear(groupId);
    return group;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
