{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(group);
    }
 else {
      if (group.isNew()) {
        session.save(group);
      }
    }
    session.flush();
    group.setNew(false);
    return group;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
