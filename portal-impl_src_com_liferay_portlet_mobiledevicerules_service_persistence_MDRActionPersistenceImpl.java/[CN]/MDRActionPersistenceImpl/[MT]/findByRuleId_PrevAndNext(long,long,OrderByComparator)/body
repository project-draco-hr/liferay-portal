{
  MDRAction mdrAction=findByPrimaryKey(actionId);
  Session session=null;
  try {
    session=openSession();
    MDRAction[] array=new MDRActionImpl[3];
    array[0]=getByRuleId_PrevAndNext(session,mdrAction,ruleId,orderByComparator,true);
    array[1]=mdrAction;
    array[2]=getByRuleId_PrevAndNext(session,mdrAction,ruleId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
