{
  validate(version,changeLog,downloadPageURL,directDownloadURL,frameworkVersionIds);
  Date now=new Date();
  SCProductVersion productVersion=SCProductVersionUtil.findByPrimaryKey(productVersionId);
  productVersion.setModifiedDate(now);
  productVersion.setVersion(version);
  productVersion.setChangeLog(changeLog);
  productVersion.setDownloadPageURL(downloadPageURL);
  productVersion.setDirectDownloadURL(directDownloadURL);
  productVersion.setRepoStoreArtifact(repoStoreArtifact);
  SCProductVersionUtil.update(productVersion);
  SCProductVersionUtil.setSCFrameworkVersions(productVersionId,frameworkVersionIds);
  SCProductEntry productEntry=SCProductEntryUtil.findByPrimaryKey(productVersion.getProductEntryId());
  productEntry.setModifiedDate(now);
  SCProductEntryUtil.update(productEntry);
  return productVersion;
}
