{
  try {
    long authorUserId=getUserId(userId,node,author);
    content=_translator.translate(content);
    WikiPage page;
    try {
      page=WikiPageLocalServiceUtil.getPage(node.getNodeId(),title);
    }
 catch (    NoSuchPageException nspe) {
      page=WikiPageLocalServiceUtil.addPage(authorUserId,node.getNodeId(),title,null,null);
    }
    WikiPageLocalServiceUtil.updatePage(authorUserId,node.getNodeId(),title,page.getVersion(),content,"creole",StringPool.BLANK,StringPool.BLANK,new String[0],null,null);
  }
 catch (  Exception e) {
    throw new PortalException("Error handling page " + title,e);
  }
}
