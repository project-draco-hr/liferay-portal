{
  int count=0;
  if (teamId > 0) {
    count=userLocalService.getTeamUsersCount(teamId);
  }
 else {
    count=userLocalService.searchCount(company.getCompanyId(),null,WorkflowConstants.STATUS_APPROVED,params);
  }
  IntervalAction intervalAction=new IntervalAction();
  intervalAction.setPerformActionMethod(new IntervalAction.PerformIntervalActionMethod(){
    @Override public void performAction(    int start,    int end) throws PortalException {
      List<User> users=null;
      if (teamId > 0) {
        users=userLocalService.getTeamUsers(teamId,start,end);
      }
 else {
        users=userLocalService.search(company.getCompanyId(),null,WorkflowConstants.STATUS_APPROVED,params,start,end,(OrderByComparator<User>)null);
      }
      notifyUsers(users,entry,company.getLocale(),toAddress,toName);
    }
  }
);
  intervalAction.setTotal(count);
  intervalAction.performActions();
}
