{
  List<JournalArticle> expectedArticles=addGroupArticles(2);
  _article=updateArticleStatus(WorkflowConstants.STATUS_DRAFT);
  expectedArticles.add(_article);
  int articlesCount=JournalArticleServiceUtil.getGroupArticlesCount(_group.getGroupId(),_article.getUserId(),JournalFolderConstants.DEFAULT_PARENT_FOLDER_ID);
  Assert.assertEquals(3,articlesCount);
  List<JournalArticle> articles=JournalArticleServiceUtil.getGroupArticles(_group.getGroupId(),_article.getUserId(),JournalFolderConstants.DEFAULT_PARENT_FOLDER_ID,QueryUtil.ALL_POS,QueryUtil.ALL_POS,null);
  Assert.assertEquals(expectedArticles,articles);
}
