{
  User user=userPersistence.findByPrimaryKey(userId);
  Date dueDate=PortalUtil.getDate(dueDateMonth,dueDateDay,dueDateYear,dueDateHour,dueDateMinute,user.getTimeZone(),new ProposalDueDateException());
  TasksProposal proposal=tasksProposalPersistence.findByPrimaryKey(proposalId);
  proposal.setModifiedDate(new Date());
  proposal.setDescription(description);
  proposal.setDueDate(dueDate);
  tasksProposalPersistence.update(proposal,false);
  return proposal;
}
