{
  Map<String,String[]> parameters=getItemSelectorParameters(itemSelectorCriteria);
  ThemeDisplay themeDisplay=(ThemeDisplay)portletRequest.getAttribute(WebKeys.THEME_DISPLAY);
  PortletURL portletURL=PortletURLFactoryUtil.create(portletRequest,DocumentSelectorPortletKeys.DOCUMENT_SELECTOR,themeDisplay.getPlid(),PortletRequest.ACTION_PHASE);
  try {
    portletURL.setPortletMode(PortletMode.VIEW);
    portletURL.setWindowState(LiferayWindowState.POP_UP);
  }
 catch (  PortletModeException pme) {
    throw new SystemException(pme);
  }
catch (  WindowStateException wse) {
    throw new SystemException(wse);
  }
  portletURL.setParameter(ActionRequest.ACTION_NAME,"showItemSelector");
  for (  Map.Entry<String,String[]> entry : parameters.entrySet()) {
    portletURL.setParameter(entry.getKey(),entry.getValue());
  }
  return portletURL;
}
