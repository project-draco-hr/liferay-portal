{
  StringBundler sb=new StringBundler();
  boolean first=true;
  for (  T item : items) {
    if (first) {
      first=false;
    }
 else {
      sb.append(",");
    }
    Object mappedItem=item;
    if (mapper != null) {
      mappedItem=mapper.apply(item);
    }
    sb.append(mappedItem.toString());
  }
  return sb.toString();
}
