{
  PermissionChecker permissionChecker=mock(PermissionChecker.class);
  when(permissionChecker.getUserId()).thenReturn(userId);
  when(permissionChecker.getRoleIds(Matchers.anyLong(),Matchers.anyLong())).thenReturn(roleIds);
  when(permissionChecker.isCompanyAdmin()).thenReturn(companyAdmin);
  when(permissionChecker.isContentReviewer(Matchers.anyLong(),Matchers.anyLong())).thenReturn(contentReviewer);
  when(permissionChecker.isOmniadmin()).thenReturn(omniadmin);
  return permissionChecker;
}
