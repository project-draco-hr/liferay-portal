{
  PermissionChecker permissionChecker=mock(PermissionChecker.class);
  when(permissionChecker.isOmniadmin()).thenReturn(isOmniadmin);
  when(permissionChecker.isCompanyAdmin()).thenReturn(isCompanyAdmin);
  when(permissionChecker.isContentReviewer(Matchers.anyLong(),Matchers.anyLong())).thenReturn(isContentReviewer);
  when(permissionChecker.getUserId()).thenReturn(RandomTestUtil.randomLong());
  long[] roleIds=new long[]{RandomTestUtil.randomLong(),RandomTestUtil.randomLong(),RandomTestUtil.randomLong()};
  when(permissionChecker.getRoleIds(Matchers.anyLong(),Matchers.anyLong())).thenReturn(roleIds);
  return permissionChecker;
}
