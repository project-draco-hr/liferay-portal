{
  Binding groupBinding=_portalLDAP.getGroup(ldapServerId,userGroup.getCompanyId(),userGroup.getName());
  if (groupBinding != null) {
    return _portalLDAP.getNameInNamespace(ldapServerId,userGroup.getCompanyId(),groupBinding);
  }
  StringBundler sb=new StringBundler(5);
  sb.append(GetterUtil.getString(groupMappings.getProperty(GroupConverterKeys.GROUP_NAME),_DEFAULT_DN));
  sb.append(StringPool.EQUAL);
  sb.append(userGroup.getName());
  sb.append(StringPool.COMMA);
  sb.append(_portalLDAP.getGroupsDN(ldapServerId,userGroup.getCompanyId()));
  return sb.toString();
}
