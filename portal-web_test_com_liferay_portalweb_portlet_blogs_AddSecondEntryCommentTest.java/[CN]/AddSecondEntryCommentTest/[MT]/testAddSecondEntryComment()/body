{
  selenium.click("link=0 Comments");
  selenium.waitForPageToLoad("30000");
  selenium.click("link=Post Reply");
  selenium.typeKeys("_33_postReplyBody0",RuntimeVariables.replace("This is a second entr comment!"));
  selenium.type("_33_postReplyBody0",RuntimeVariables.replace("This is a second entry comment!"));
  selenium.click("_33_postReplyButton0");
  selenium.waitForPageToLoad("30000");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isTextPresent("This is a second entry comment!")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
}
