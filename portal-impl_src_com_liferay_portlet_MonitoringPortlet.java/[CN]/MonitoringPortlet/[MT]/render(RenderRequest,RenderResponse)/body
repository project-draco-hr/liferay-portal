{
  DataSample dataSample=null;
  try {
    if (_portletMonitoringControl.isMonitorPortletRenderRequest()) {
      dataSample=DataSampleFactoryUtil.createPortletRequestDataSample(PortletRequestType.RENDER,renderRequest,renderResponse);
      dataSample.setTimeout(_renderTimeout);
      dataSample.prepare();
      DataSampleThreadLocal.initialize();
    }
    _invokerPortlet.render(renderRequest,renderResponse);
    if (_portletMonitoringControl.isMonitorPortletRenderRequest()) {
      dataSample.capture(RequestStatus.SUCCESS);
    }
  }
 catch (  Exception e) {
    _processException(_portletMonitoringControl.isMonitorPortletRenderRequest(),dataSample,e);
  }
 finally {
    if (dataSample != null) {
      DataSampleThreadLocal.addDataSample(dataSample);
    }
  }
}
