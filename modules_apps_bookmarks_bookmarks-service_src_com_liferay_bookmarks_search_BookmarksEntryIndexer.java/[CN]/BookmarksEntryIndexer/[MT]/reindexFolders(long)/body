{
  final ActionableDynamicQuery actionableDynamicQuery=BookmarksFolderLocalServiceUtil.getActionableDynamicQuery();
  actionableDynamicQuery.setCompanyId(companyId);
  actionableDynamicQuery.setPerformActionMethod(new ActionableDynamicQuery.PerformActionMethod<BookmarksFolder>(){
    @Override public void performAction(    BookmarksFolder folder) throws PortalException {
      long groupId=folder.getGroupId();
      long folderId=folder.getFolderId();
      reindexEntries(companyId,groupId,folderId);
    }
  }
);
  actionableDynamicQuery.performActions();
}
