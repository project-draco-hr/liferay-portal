{
  if (((shortDescription == null) && (_shortDescription != null)) || ((shortDescription != null) && (_shortDescription == null)) || ((shortDescription != null) && (_shortDescription != null) && !shortDescription.equals(_shortDescription))) {
    if (!XSS_ALLOW_SHORTDESCRIPTION) {
      shortDescription=XSSUtil.strip(shortDescription);
    }
    _shortDescription=shortDescription;
  }
}
