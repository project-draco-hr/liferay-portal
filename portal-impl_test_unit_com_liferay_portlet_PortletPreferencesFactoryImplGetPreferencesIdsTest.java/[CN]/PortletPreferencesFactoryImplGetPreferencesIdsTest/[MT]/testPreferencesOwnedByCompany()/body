{
  PowerMockito.mockStatic(PortletLocalServiceUtil.class);
  Mockito.when(PortletLocalServiceUtil.getPortletById(_layout.getCompanyId(),_PORTLET_ID)).thenReturn(_getCompanyPortlet());
  boolean modeEditGuest=false;
  long siteGroupId=_layout.getGroupId();
  PortletPreferencesIds portletPreferencesIds=PortletPreferencesFactoryUtil.getPortletPreferencesIds(siteGroupId,_USER_ID,_layout,_PORTLET_ID,modeEditGuest);
  Assert.assertEquals("The owner type should be of type company",PortletKeys.PREFS_OWNER_TYPE_COMPANY,portletPreferencesIds.getOwnerType());
  Assert.assertEquals("The ownerId should be the id of the company",_layout.getCompanyId(),portletPreferencesIds.getOwnerId());
  Assert.assertEquals("The plid shouldn't have a real value",PortletKeys.PREFS_PLID_SHARED,portletPreferencesIds.getPlid());
}
