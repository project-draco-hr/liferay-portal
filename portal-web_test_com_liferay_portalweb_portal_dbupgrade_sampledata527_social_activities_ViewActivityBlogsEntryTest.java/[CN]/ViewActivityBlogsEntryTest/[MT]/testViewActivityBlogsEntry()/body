{
  selenium.open("/web/joebloggs/home/");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Activities Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.saveScreenShotAndSource();
  selenium.clickAt("link=Activities Page",RuntimeVariables.replace(""));
  selenium.waitForPageToLoad("30000");
  selenium.saveScreenShotAndSource();
  assertEquals(RuntimeVariables.replace("Joe wrote a new blog entry, Blogs Entry Title."),selenium.getText("xPath=(//div[@class='activity-title'])[2]"));
  assertEquals(RuntimeVariables.replace("Blogs Entry Title"),selenium.getText("xPath=(//div[@class='activity-title'])[2]/a"));
}
