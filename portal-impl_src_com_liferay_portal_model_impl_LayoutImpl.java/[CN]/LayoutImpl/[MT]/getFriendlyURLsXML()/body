{
  List<LayoutFriendlyURL> layoutFriendlyURLs=LayoutFriendlyURLLocalServiceUtil.getLayoutFriendlyURLs(getPlid());
  Map<Locale,String> friendlyURLMap=new HashMap<Locale,String>();
  for (  LayoutFriendlyURL layoutFriendlyURL : layoutFriendlyURLs) {
    friendlyURLMap.put(LocaleUtil.fromLanguageId(layoutFriendlyURL.getLanguageId()),layoutFriendlyURL.getFriendlyURL());
  }
  return LocalizationUtil.updateLocalization(friendlyURLMap,StringPool.BLANK,"friendlyURL",LocaleUtil.toLanguageId(LocaleUtil.getDefault()));
}
