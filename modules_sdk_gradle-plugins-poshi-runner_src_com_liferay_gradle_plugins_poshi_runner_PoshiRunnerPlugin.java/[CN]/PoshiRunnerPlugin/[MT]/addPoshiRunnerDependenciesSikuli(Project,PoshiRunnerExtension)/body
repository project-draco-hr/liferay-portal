{
  String bitMode=OSDetector.getBitmode();
  if (bitMode.equals("32")) {
    bitMode="x86";
  }
 else {
    bitMode="x86_64";
  }
  String os="linux";
  if (OSDetector.isApple()) {
    os="macosx";
  }
 else   if (OSDetector.isWindows()) {
    os="windows";
  }
  String classifier=os + "-" + bitMode;
  GradleUtil.addDependency(project,CONFIGURATION_NAME,"org.bytedeco.javacpp-presets","opencv",poshiRunnerExtension.getOpenCVVersion(),classifier,true);
}
