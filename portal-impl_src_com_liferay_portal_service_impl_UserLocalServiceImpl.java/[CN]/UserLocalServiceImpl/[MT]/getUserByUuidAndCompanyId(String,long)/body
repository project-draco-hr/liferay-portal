{
  List<User> users=userPersistence.findByUuid_C(uuid,companyId);
  if (users.isEmpty()) {
    StringBundler sb=new StringBundler(5);
    sb.append("{uuid=");
    sb.append(uuid);
    sb.append(", companyId=");
    sb.append(companyId);
    sb.append("}");
    throw new NoSuchUserException(sb.toString());
  }
 else {
    return users.get(0);
  }
}
