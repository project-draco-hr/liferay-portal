{
  int orgGroupPermissionsCount=PermissionUserFinder.countByOrgGroupPermissions(companyId,name,primKey,actionId);
  if (orgGroupPermissionsCount > 0) {
    return PermissionUserFinder.countByUserAndOrgGroupPermission(companyId,name,primKey,actionId,firstName,middleName,lastName,emailAddress,andOperator);
  }
 else {
    return PermissionUserFinder.countByPermissionAndRole(companyId,groupId,name,primKey,actionId,firstName,middleName,lastName,emailAddress,andOperator);
  }
}
