{
  if (Validator.isNull(question) && PropsValues.USERS_REMINDER_QUERIES_ENABLED) {
    throw new UserReminderQueryException("Reminder query question cannot be empty");
  }
  if (Validator.isNull(answer) && PropsValues.USERS_REMINDER_QUERIES_ENABLED) {
    throw new UserReminderQueryException("Reminder query answer cannot be empty");
  }
}
