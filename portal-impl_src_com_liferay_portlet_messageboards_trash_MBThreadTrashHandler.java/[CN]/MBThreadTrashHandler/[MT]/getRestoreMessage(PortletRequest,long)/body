{
  ThemeDisplay themeDisplay=(ThemeDisplay)portletRequest.getAttribute(WebKeys.THEME_DISPLAY);
  String restorePath=StringPool.SLASH + themeDisplay.translate("home");
  MBThread thread=MBThreadLocalServiceUtil.getThread(classPK);
  if (thread.getCategoryId() == MBCategoryConstants.DEFAULT_PARENT_CATEGORY_ID) {
    return restorePath;
  }
  MBCategory category=MBCategoryLocalServiceUtil.fetchMBCategory(thread.getCategoryId());
  return restorePath + category.getAbsolutePath();
}
