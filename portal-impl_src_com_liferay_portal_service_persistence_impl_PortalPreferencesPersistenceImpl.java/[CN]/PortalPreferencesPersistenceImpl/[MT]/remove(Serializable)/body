{
  Session session=null;
  try {
    session=openSession();
    PortalPreferences portalPreferences=(PortalPreferences)session.get(PortalPreferencesImpl.class,primaryKey);
    if (portalPreferences == null) {
      if (_log.isDebugEnabled()) {
        _log.debug(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + primaryKey);
      }
      throw new NoSuchPreferencesException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + primaryKey);
    }
    return remove(portalPreferences);
  }
 catch (  NoSuchPreferencesException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
