{
  Map<String,String[]> parameterMap=getDefaultPublishingParameters();
  Map<String,Serializable> settingsMap=ExportImportConfigurationSettingsMapFactory.buildSettingsMap(user.getUserId(),sourceGroupId,privateLayout,null,parameterMap,remoteAddress,remotePort,remotePathContext,secureConnection,remoteGroupId,privateLayout,null,null,user.getLocale(),user.getTimeZone());
  return ExportImportConfigurationLocalServiceUtil.addExportImportConfiguration(user.getUserId(),sourceGroupId,StringPool.BLANK,StringPool.BLANK,ExportImportConfigurationConstants.TYPE_PUBLISH_LAYOUT_REMOTE,settingsMap,WorkflowConstants.STATUS_DRAFT,new ServiceContext());
}
