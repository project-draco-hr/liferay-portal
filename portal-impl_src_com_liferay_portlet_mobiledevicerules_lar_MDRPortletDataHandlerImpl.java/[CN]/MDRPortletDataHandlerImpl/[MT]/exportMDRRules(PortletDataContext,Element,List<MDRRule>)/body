{
  for (  MDRRule mdrRule : mdrRules) {
    String mdrRulePath=getMDRRulePath(portletDataContext,mdrRule);
    if (!portletDataContext.isPathNotProcessed(mdrRulePath)) {
      continue;
    }
    if (_log.isDebugEnabled()) {
      _log.debug("Exporting action " + mdrRule.getRuleId() + " for rule group: "+ mdrRule.getRuleGroupId());
    }
    Element mdrRuleElement=mdrRulesElement.addElement(_MDR_RULE_ELEMENT);
    portletDataContext.addClassedModel(mdrRuleElement,mdrRulePath,mdrRule,_NAMESPACE);
  }
}
