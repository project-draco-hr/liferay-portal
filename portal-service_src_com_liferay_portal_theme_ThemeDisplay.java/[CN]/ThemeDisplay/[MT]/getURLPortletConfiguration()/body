{
  try {
    if (_urlPortletConfiguration == null) {
      _urlPortletConfiguration=PortletProviderUtil.getPortletURL(getRequest(),PortletConfigurationApplicationType.PortletConfiguration.CLASS_NAME,PortletProvider.Action.VIEW);
    }
    return _urlPortletConfiguration;
  }
 catch (  PortalException pe) {
    throw new SystemException(pe);
  }
}
