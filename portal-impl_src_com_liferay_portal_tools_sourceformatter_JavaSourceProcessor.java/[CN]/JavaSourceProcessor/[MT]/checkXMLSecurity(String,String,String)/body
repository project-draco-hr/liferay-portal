      processErrorMessage(fileName,"Possible XXE or Quadratic Blowup security vulnerablity " + "using new SAXReader: " + fileName);
    }
 else {
      processErrorMessage(fileName,"Use SecureXMLBuilderUtil.newXMLReader instead of " + "new SAXReader: " + fileName);
    }
