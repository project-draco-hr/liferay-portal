    }
  }
  if (content.contains("new SAXParser") || content.contains("new javax.xml.parsers.SAXParser") || content.contains("new org.apache.xerces.parsers.SAXParser")) {
    if (outsidePortalCore) {
      processErrorMessage(fileName,"Possible XXE or Quadratic Blowup security vulnerablity " + "using new SAXParser: " + fileName);
    }
 else {
      processErrorMessage(fileName,"Use SecureXMLBuilderUtil.newXMLReader instead of " + "new SAXParser: " + fileName);
    }
