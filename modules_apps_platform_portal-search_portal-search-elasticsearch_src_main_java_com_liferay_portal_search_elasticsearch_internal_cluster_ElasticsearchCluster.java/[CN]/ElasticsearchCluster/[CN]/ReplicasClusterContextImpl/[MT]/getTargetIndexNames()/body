{
  List<Company> companies=_companyLocalService.getCompanies();
  String[] targetIndexNames=new String[companies.size() + 1];
  for (int i=0; i < targetIndexNames.length - 1; i++) {
    Company company=companies.get(i);
    targetIndexNames[i]=indexNameBuilder.getIndexName(company.getCompanyId());
  }
  targetIndexNames[targetIndexNames.length - 1]=indexNameBuilder.getIndexName(CompanyConstants.SYSTEM);
  return targetIndexNames;
}
