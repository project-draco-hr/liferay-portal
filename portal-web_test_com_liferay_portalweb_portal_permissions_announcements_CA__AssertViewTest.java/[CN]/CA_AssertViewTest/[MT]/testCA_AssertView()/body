{
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Announcements Permissions Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.click(RuntimeVariables.replace("link=Announcements Permissions Page"));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isTextPresent("Test General Announcement"));
  assertTrue(selenium.isTextPresent("This is a test General Announcement."));
  selenium.click(RuntimeVariables.replace("link=Manage Entries"));
  selenium.waitForPageToLoad("30000");
  selenium.select("_84_distributionScope","label=Community Admin");
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isElementPresent("link=Test CA Announcement"));
  selenium.select("_84_distributionScope","label=Member");
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isElementPresent("link=Test Member Announcement"));
}
