{
  try (PreparedStatement ps1=connection.prepareStatement("update DLFileEntry set title = ? where fileEntryId = ?")){
    ps1.setString(1,title);
    ps1.setLong(2,fileEntryId);
    ps1.executeUpdate();
    try (PreparedStatement ps2=connection.prepareStatement("update DLFileVersion set title = ? where fileEntryId = " + "? and version = ?")){
      ps2.setString(1,title);
      ps2.setLong(2,fileEntryId);
      ps2.setString(3,version);
      ps2.executeUpdate();
    }
   }
 }
