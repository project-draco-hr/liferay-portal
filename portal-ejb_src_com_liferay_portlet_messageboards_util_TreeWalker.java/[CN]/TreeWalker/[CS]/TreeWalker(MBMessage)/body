{
  _messageIdsMap=CollectionFactory.getHashMap();
  try {
    _messages=MBMessageLocalServiceUtil.getThreadMessages(message.getThreadId());
    for (int i=0; i < _messages.size(); i++) {
      MBMessage curMessage=(MBMessage)_messages.get(i);
      String parentMessageId=curMessage.getParentMessageId();
      if (!curMessage.isRoot() && !_messageIdsMap.containsKey(parentMessageId)) {
        _messageIdsMap.put(parentMessageId,new Integer(i));
      }
    }
  }
 catch (  Exception e) {
    _log.error(e);
  }
}
