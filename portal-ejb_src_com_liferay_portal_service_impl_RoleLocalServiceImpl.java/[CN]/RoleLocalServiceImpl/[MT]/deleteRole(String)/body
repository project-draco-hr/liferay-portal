{
  Role role=RoleUtil.findByPrimaryKey(roleId);
  if (PortalUtil.isSystemRole(role.getName())) {
    throw new RequiredRoleException();
  }
  ResourceLocalServiceUtil.deleteResource(role.getCompanyId(),Role.class.getName(),Resource.TYPE_CLASS,Resource.SCOPE_INDIVIDUAL,role.getPrimaryKey().toString());
  RoleUtil.remove(roleId);
}
