{
  Role role=RoleUtil.findByPrimaryKey(roleId);
  if (PortalUtil.isSystemRole(role.getName())) {
    throw new RequiredRoleException();
  }
  if (Validator.isNull(role.getClassName()) && Validator.isNull(role.getClassPK())) {
    ResourceLocalServiceUtil.deleteResource(role.getCompanyId(),Role.class.getName(),ResourceImpl.TYPE_CLASS,ResourceImpl.SCOPE_INDIVIDUAL,role.getPrimaryKey().toString());
  }
  if (role.getScope() == RoleImpl.COMMUNITY_SCOPE) {
    UserGroupRoleLocalServiceUtil.deleteByRoleId(role.getRoleId());
  }
  RoleUtil.remove(roleId);
}
