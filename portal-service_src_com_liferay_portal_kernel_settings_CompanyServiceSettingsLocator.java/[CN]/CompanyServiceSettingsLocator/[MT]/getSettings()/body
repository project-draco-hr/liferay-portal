{
  Settings portalPropertiesSettings=_settingsLocatorHelper.getPortalPropertiesSettings();
  Settings configurationBeanSettings=_settingsLocatorHelper.getConfigurationBeanSettings(_configurationPid,portalPropertiesSettings);
  Settings portalPreferencesSettings=_settingsLocatorHelper.getPortalPreferencesSettings(_companyId,configurationBeanSettings);
  return _settingsLocatorHelper.getCompanyPortletPreferencesSettings(_companyId,_settingsId,portalPreferencesSettings);
}
