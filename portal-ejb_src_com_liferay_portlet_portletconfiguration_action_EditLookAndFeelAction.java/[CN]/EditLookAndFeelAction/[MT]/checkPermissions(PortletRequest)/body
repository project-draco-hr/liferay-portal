{
  ThemeDisplay themeDisplay=(ThemeDisplay)req.getAttribute(WebKeys.THEME_DISPLAY);
  PermissionChecker permissionChecker=themeDisplay.getPermissionChecker();
  String portletId=ParamUtil.getString(req,"portletResource");
  if (!GroupPermission.contains(permissionChecker,themeDisplay.getPortletGroupId(),ActionKeys.MANAGE_LAYOUTS) && !LayoutPermission.contains(permissionChecker,themeDisplay.getLayout(),ActionKeys.UPDATE) && !PortletPermission.contains(permissionChecker,themeDisplay.getPlid(),portletId,ActionKeys.CONFIGURATION)) {
    throw new PrincipalException();
  }
}
