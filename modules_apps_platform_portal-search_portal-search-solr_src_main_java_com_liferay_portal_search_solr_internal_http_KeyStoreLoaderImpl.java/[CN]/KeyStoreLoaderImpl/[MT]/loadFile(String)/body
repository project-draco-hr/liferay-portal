{
  if (_log.isDebugEnabled()) {
    _log.debug("Loading file " + fileName);
  }
  InputStream inputStream=null;
  if (fileName.startsWith("classpath:")) {
    fileName=fileName.substring(10);
    Class<?> clazz=KeyStoreLoaderImpl.class;
    inputStream=clazz.getResourceAsStream(fileName);
  }
  if (inputStream != null) {
    return inputStream;
  }
  if (_log.isInfoEnabled()) {
    _log.info("Attempting to laod from the file system because " + fileName + " is not in the class path");
  }
  return new FileInputStream(fileName);
}
