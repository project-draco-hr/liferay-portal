{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=HibernateUtil.getConnection();
    ps=con.prepareStatement(_UPGRADE_GROUP);
    rs=ps.executeQuery();
    while (rs.next()) {
      String roleId=rs.getString("roleId");
      String companyId=rs.getString("companyId");
      long groupId=rs.getLong("classPK");
      List users=UserLocalServiceUtil.getRoleUsers(roleId);
      for (int i=0; i < users.size(); i++) {
        User user=(User)users.get(i);
        Resource resource=ResourceLocalServiceUtil.addResource(companyId,Group.class.getName(),ResourceImpl.TYPE_CLASS,ResourceImpl.SCOPE_INDIVIDUAL,String.valueOf(groupId));
        PermissionLocalServiceUtil.addUserPermissions(user.getUserId(),new String[]{ActionKeys.ADMINISTRATE},resource.getResourceId());
      }
      RoleLocalServiceUtil.deleteRole(roleId);
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
