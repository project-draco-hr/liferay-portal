{
  ThemeDisplay themeDisplay=(ThemeDisplay)portletRequest.getAttribute(WebKeys.THEME_DISPLAY);
  try {
    Folder folder=ActionUtil.getFolder(portletRequest);
    if (DLFolderPermission.contains(themeDisplay.getPermissionChecker(),themeDisplay.getScopeGroupId(),folder.getFolderId(),ActionKeys.UPDATE) && !folder.isMountPoint()) {
      return true;
    }
  }
 catch (  Exception e) {
  }
  return false;
}
