{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(igImage);
    }
 else {
      if (igImage.isNew()) {
        session.save(igImage);
      }
    }
    session.flush();
    igImage.setNew(false);
    return igImage;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
