{
  MockPortletRequest request=new MockPortletRequest();
  request.setParameter("greeting_" + _englishId,_englishHello);
  request.setParameter("greeting_" + _germanId,_germanHello);
  PortletPreferences preferences=new PortletPreferencesImpl();
  LocalizationUtil.setLocalizedPreferencesValues(request,preferences,"greeting");
  Assert.assertEquals(_englishHello,LocalizationUtil.getPreferencesValue(preferences,"greeting",_englishId));
  Assert.assertEquals(_germanHello,LocalizationUtil.getPreferencesValue(preferences,"greeting",_germanId));
}
