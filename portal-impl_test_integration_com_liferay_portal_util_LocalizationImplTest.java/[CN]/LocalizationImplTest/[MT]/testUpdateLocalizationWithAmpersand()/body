{
  Map<Locale,String> localizationMap=new HashMap<>();
  String spanishValue="bar&foo";
  localizationMap.put(LocaleUtil.SPAIN,spanishValue);
  String englishValue="foo&bar";
  localizationMap.put(LocaleUtil.US,englishValue);
  String xml=LocalizationUtil.updateLocalization(localizationMap,_xml,"static-content","en_US");
  Assert.assertEquals(spanishValue,LocalizationUtil.getLocalization(xml,_SPANISH_LANGUAGE_ID));
  Assert.assertEquals(englishValue,LocalizationUtil.getLocalization(xml,_ENGLISH_LANGUAGE_ID));
}
