{
  ThemeDisplay themeDisplay=(ThemeDisplay)actionRequest.getAttribute(WebKeys.THEME_DISPLAY);
  long wsrpConsumerId=ParamUtil.getLong(actionRequest,"wsrpConsumerId");
  String adminPortletId=PortalUtil.getPortletId(actionRequest);
  String name=ParamUtil.getString(actionRequest,"name");
  String url=ParamUtil.getString(actionRequest,"url");
  String forwardCookies=ParamUtil.getString(actionRequest,"forwardCookies");
  String forwardHeaders=ParamUtil.getString(actionRequest,"forwardHeaders");
  String markupCharacterSets=MarkupCharacterSetsUtil.getSupportedMarkupCharacterSets(ParamUtil.getString(actionRequest,"markupCharacterSets"));
  if (wsrpConsumerId <= 0) {
    ServiceContext serviceContext=ServiceContextFactory.getInstance(WSRPConsumer.class.getName(),actionRequest);
    _wSRPConsumerLocalService.addWSRPConsumer(themeDisplay.getCompanyId(),adminPortletId,name,url,forwardCookies,forwardHeaders,markupCharacterSets,serviceContext);
  }
 else {
    _wSRPConsumerLocalService.updateWSRPConsumer(wsrpConsumerId,adminPortletId,name,url,forwardCookies,forwardHeaders,markupCharacterSets);
  }
}
