{
  HotDeployUtil.fireUndeployEvent(new HotDeployEvent(event.getServletContext(),Thread.currentThread().getContextClassLoader()));
  try {
    if (_log.isDebugEnabled()) {
      _log.debug("Dynamically unbinding the Liferay data source");
    }
    Context ctx=new InitialContext();
    ctx.unbind(_JNDI_JDBC_LIFERAY_POOL);
    ctx.destroySubcontext(_JNDI_JDBC);
  }
 catch (  Exception e) {
    if (_log.isWarnEnabled()) {
      _log.warn("Unable to dynamically unbind the Liferay data source: " + e.getMessage());
    }
  }
}
