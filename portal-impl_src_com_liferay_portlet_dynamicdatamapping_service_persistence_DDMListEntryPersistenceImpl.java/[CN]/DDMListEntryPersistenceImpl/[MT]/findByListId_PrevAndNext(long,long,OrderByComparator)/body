{
  DDMListEntry ddmListEntry=findByPrimaryKey(listEntryId);
  Session session=null;
  try {
    session=openSession();
    DDMListEntry[] array=new DDMListEntryImpl[3];
    array[0]=getByListId_PrevAndNext(session,ddmListEntry,listId,orderByComparator,true);
    array[1]=ddmListEntry;
    array[2]=getByListId_PrevAndNext(session,ddmListEntry,listId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
