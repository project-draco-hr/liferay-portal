{
  if (_log.isDebugEnabled()) {
    _log.debug("Lucene store type " + luceneConfiguration.storeType());
  }
  if (luceneConfiguration.storeType().equals(_LUCENE_STORE_TYPE_FILE) || luceneConfiguration.storeType().equals(_LUCENE_STORE_TYPE_RAM)) {
    _deleteAll();
  }
 else   if (luceneConfiguration.storeType().equals(_LUCENE_STORE_TYPE_JDBC)) {
    throw new IllegalArgumentException("Store type JDBC is no longer supported in favor of SOLR");
  }
 else {
    throw new RuntimeException("Invalid store type " + luceneConfiguration.storeType());
  }
}
