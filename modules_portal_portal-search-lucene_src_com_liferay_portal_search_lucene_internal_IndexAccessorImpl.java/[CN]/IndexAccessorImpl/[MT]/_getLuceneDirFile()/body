{
  Directory directory=null;
  try {
    if (luceneConfiguration.storeTypeFileForceMMap()) {
      directory=new MMapDirectory(new File(_path));
    }
 else {
      directory=FSDirectory.open(new File(_path));
    }
  }
 catch (  IOException ioe) {
    if (directory != null) {
      try {
        directory.close();
      }
 catch (      Exception e) {
      }
    }
  }
  return directory;
}
