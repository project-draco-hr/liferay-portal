{
  JournalStructure structure=getStructure(groupId,structureId);
  String xsd=structure.getXsd();
  if ((xsd != null) && (xsd.indexOf("\\n") != -1)) {
    xsd=StringUtil.replace(xsd,new String[]{"\\n","\\r"},new String[]{"\n","\r"});
    structure.setXsd(xsd);
    JournalStructureContentType contentType=new JournalStructureContentType(structure);
    ContentTypeService ctService=MirageServiceFactory.getContentTypeService();
    try {
      ctService.updateContentType(contentType,null);
    }
 catch (    CMSException cmse) {
      _throwException(cmse);
    }
  }
}
