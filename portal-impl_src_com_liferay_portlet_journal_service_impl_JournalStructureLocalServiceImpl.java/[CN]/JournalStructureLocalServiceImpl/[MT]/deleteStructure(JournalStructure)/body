{
  if (JournalArticleUtil.countByC_G_S(structure.getCompanyId(),structure.getGroupId(),structure.getStructureId()) > 0) {
    throw new RequiredStructureException();
  }
  if (JournalTemplateUtil.countByC_G_S(structure.getCompanyId(),structure.getGroupId(),structure.getStructureId()) > 0) {
    throw new RequiredStructureException();
  }
  ResourceLocalServiceUtil.deleteResource(structure.getCompanyId(),JournalStructure.class.getName(),ResourceImpl.SCOPE_INDIVIDUAL,structure.getPrimaryKey().toString());
  JournalStructureUtil.remove(structure.getPrimaryKey());
}
