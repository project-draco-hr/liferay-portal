{
  Iterator itr=shoppingCategoryPersistence.findByG_P(category.getGroupId(),category.getCategoryId()).iterator();
  while (itr.hasNext()) {
    ShoppingCategory curCategory=(ShoppingCategory)itr.next();
    deleteCategory(curCategory);
  }
  shoppingItemLocalService.deleteItems(category.getCategoryId());
  resourceLocalService.deleteResource(category.getCompanyId(),ShoppingCategory.class.getName(),ResourceImpl.SCOPE_INDIVIDUAL,category.getCategoryId());
  shoppingCategoryPersistence.remove(category.getCategoryId());
}
