{
  JournalArticleImage journalArticleImage=findByPrimaryKey(articleImageId);
  int count=countByG_A_V(groupId,articleId,version);
  Session session=null;
  try {
    session=openSession();
    StringBuilder query=new StringBuilder();
    query.append("FROM com.liferay.portlet.journal.model.JournalArticleImage WHERE ");
    query.append("groupId = ?");
    query.append(" AND ");
    if (articleId == null) {
      query.append("articleId IS NULL");
    }
 else {
      query.append("articleId = ?");
    }
    query.append(" AND ");
    query.append("version = ?");
    query.append(" ");
    if (obc != null) {
      query.append("ORDER BY ");
      query.append(obc.getOrderBy());
    }
    Query q=session.createQuery(query.toString());
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(groupId);
    if (articleId != null) {
      qPos.add(articleId);
    }
    qPos.add(version);
    Object[] objArray=QueryUtil.getPrevAndNext(q,count,obc,journalArticleImage);
    JournalArticleImage[] array=new JournalArticleImageImpl[3];
    array[0]=(JournalArticleImage)objArray[0];
    array[1]=(JournalArticleImage)objArray[1];
    array[2]=(JournalArticleImage)objArray[2];
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
