{
  Layout layout=findByPrimaryKey(plid);
  Session session=null;
  try {
    session=openSession();
    Layout[] array=new LayoutImpl[3];
    array[0]=getByLayoutsByLayoutPrototypeUuid_PrevAndNext(session,layout,layoutPrototypeUuid,orderByComparator,true);
    array[1]=layout;
    array[2]=getByLayoutsByLayoutPrototypeUuid_PrevAndNext(session,layout,layoutPrototypeUuid,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
