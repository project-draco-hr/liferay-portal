{
  Session session=null;
  try {
    session=openSession();
    if (merge) {
      session.merge(layout);
    }
 else {
      if (layout.isNew()) {
        session.save(layout);
      }
    }
    session.flush();
    layout.setNew(false);
    return layout;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
    FinderCacheUtil.clearCache(Layout.class.getName());
  }
}
