{
  Set<String> portalProfileNames=SetUtil.fromArray(StringUtil.split(bundleContext.getProperty("portal.profile.names")));
  if (portalProfileNames.isEmpty()) {
    String name=ReleaseInfo.getName();
    if (name.contains("Community")) {
      portalProfileNames.add(PortalProfile.PORTAL_PROFILE_NAME_CE);
    }
 else {
      portalProfileNames.add(PortalProfile.PORTAL_PROFILE_NAME_DXP);
    }
  }
  _serviceTracker=new ServiceTracker<>(bundleContext,PortalProfile.class,new PortalProfileServiceTrackerCustomizer(bundleContext,portalProfileNames));
  _serviceTracker.open();
}
