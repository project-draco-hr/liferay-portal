{
  if (ArrayUtil.isEmpty(methodInterceptorBeanIds)) {
    throw new IllegalArgumentException("Method interceptor bean IDs array is empty");
  }
  ServiceBeanMethodInvocation serviceBeanMethodInvocation=create(target,targetClass,method,arguments);
  List<MethodInterceptor> methodInterceptors=getMethodInterceptors(methodInterceptorBeanIds);
  serviceBeanMethodInvocation.setMethodInterceptors(methodInterceptors);
  try {
    return serviceBeanMethodInvocation.proceed();
  }
 catch (  Throwable t) {
    if (t instanceof Exception) {
      throw (Exception)t;
    }
    throw new Exception(t);
  }
}
