{
  Group group=GroupTestUtil.addGroup();
  Folder grandParentFolder=DLAppTestUtil.addFolder(group.getGroupId(),DLFolderConstants.DEFAULT_PARENT_FOLDER_ID,"grandParentFolder");
  Folder parentFolder=DLAppTestUtil.addFolder(group.getGroupId(),grandParentFolder.getFolderId(),"parentFolder");
  DLAppTestUtil.addFolder(group.getGroupId(),parentFolder.getFolderId(),"folder");
  DLAppServiceUtil.moveFolderToTrash(parentFolder.getFolderId());
  DLFolderLocalServiceUtil.deleteFolder(grandParentFolder.getFolderId(),false);
  doVerify();
}
