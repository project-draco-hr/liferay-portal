{
  Folder grandparentFolder=DLAppTestUtil.addFolder(_group.getGroupId(),DLFolderConstants.DEFAULT_PARENT_FOLDER_ID);
  Folder parentFolder=DLAppTestUtil.addFolder(_group.getGroupId(),grandparentFolder.getFolderId());
  DLAppTestUtil.addFileEntry(_group.getGroupId(),parentFolder.getFolderId(),RandomTestUtil.randomString());
  DLAppServiceUtil.moveFolderToTrash(parentFolder.getFolderId());
  DLFolderLocalServiceUtil.deleteFolder(grandparentFolder.getFolderId(),false);
  doVerify();
}
