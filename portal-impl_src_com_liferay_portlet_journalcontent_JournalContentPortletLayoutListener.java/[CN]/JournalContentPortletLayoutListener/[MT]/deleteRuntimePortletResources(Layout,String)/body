{
  long companyId=layout.getCompanyId();
  List<String> runtimePortletIds=getRuntimePortletIds(companyId,layout.getGroupId(),articleId);
  if ((runtimePortletIds != null) && !runtimePortletIds.isEmpty()) {
    PortletLocalServiceUtil.deletePortlets(companyId,runtimePortletIds.toArray(new String[runtimePortletIds.size()]),layout.getPlid());
  }
}
