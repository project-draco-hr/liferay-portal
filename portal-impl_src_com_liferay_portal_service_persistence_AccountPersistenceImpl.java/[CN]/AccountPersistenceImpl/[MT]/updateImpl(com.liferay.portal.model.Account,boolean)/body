{
  Session session=null;
  try {
    session=openSession();
    if (merge) {
      session.merge(account);
    }
 else {
      if (account.isNew()) {
        session.save(account);
      }
    }
    session.flush();
    account.setNew(false);
    return account;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
    FinderCacheUtil.clearCache(Account.class.getName());
  }
}
