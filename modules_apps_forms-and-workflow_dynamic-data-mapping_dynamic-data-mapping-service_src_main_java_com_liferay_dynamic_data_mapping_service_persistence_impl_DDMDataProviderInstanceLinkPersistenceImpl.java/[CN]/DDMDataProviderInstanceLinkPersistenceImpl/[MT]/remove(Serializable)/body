{
  Session session=null;
  try {
    session=openSession();
    DDMDataProviderInstanceLink ddmDataProviderInstanceLink=(DDMDataProviderInstanceLink)session.get(DDMDataProviderInstanceLinkImpl.class,primaryKey);
    if (ddmDataProviderInstanceLink == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + primaryKey);
      }
      throw new NoSuchDataProviderInstanceLinkException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + primaryKey);
    }
    return remove(ddmDataProviderInstanceLink);
  }
 catch (  NoSuchDataProviderInstanceLinkException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
