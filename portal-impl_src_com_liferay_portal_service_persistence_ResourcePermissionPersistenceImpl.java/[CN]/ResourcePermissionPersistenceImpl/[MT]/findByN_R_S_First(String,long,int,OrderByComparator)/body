{
  List<ResourcePermission> list=findByN_R_S(name,roleId,scope,0,1,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(8);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("name=");
    msg.append(name);
    msg.append(", roleId=");
    msg.append(roleId);
    msg.append(", scope=");
    msg.append(scope);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchResourcePermissionException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
