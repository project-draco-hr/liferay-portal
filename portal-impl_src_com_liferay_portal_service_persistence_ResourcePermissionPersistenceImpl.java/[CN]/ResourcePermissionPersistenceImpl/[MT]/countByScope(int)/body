{
  Object[] finderArgs=new Object[]{scope};
  Long count=(Long)FinderCacheUtil.getResult(FINDER_PATH_COUNT_BY_SCOPE,finderArgs,this);
  if (count == null) {
    StringBundler query=new StringBundler(2);
    query.append(_SQL_COUNT_RESOURCEPERMISSION_WHERE);
    query.append(_FINDER_COLUMN_SCOPE_SCOPE_2);
    String sql=query.toString();
    Session session=null;
    try {
      session=openSession();
      Query q=session.createQuery(sql);
      QueryPos qPos=QueryPos.getInstance(q);
      qPos.add(scope);
      count=(Long)q.uniqueResult();
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      if (count == null) {
        count=Long.valueOf(0);
      }
      FinderCacheUtil.putResult(FINDER_PATH_COUNT_BY_SCOPE,finderArgs,count);
      closeSession(session);
    }
  }
  return count.intValue();
}
