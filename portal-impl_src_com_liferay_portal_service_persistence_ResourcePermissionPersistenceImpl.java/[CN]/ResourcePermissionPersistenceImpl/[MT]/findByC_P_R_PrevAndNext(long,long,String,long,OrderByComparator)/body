{
  ResourcePermission resourcePermission=findByPrimaryKey(resourcePermissionId);
  Session session=null;
  try {
    session=openSession();
    ResourcePermission[] array=new ResourcePermissionImpl[3];
    array[0]=getByC_P_R_PrevAndNext(session,resourcePermission,companyId,primKey,roleId,orderByComparator,true);
    array[1]=resourcePermission;
    array[2]=getByC_P_R_PrevAndNext(session,resourcePermission,companyId,primKey,roleId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
