{
  ResourcePermission resourcePermission=findByPrimaryKey(resourcePermissionId);
  int count=countByC_N_S(companyId,name,scope);
  Session session=null;
  try {
    session=openSession();
    StringBuilder query=new StringBuilder();
    query.append("FROM com.liferay.portal.model.ResourcePermission WHERE ");
    query.append("companyId = ?");
    query.append(" AND ");
    if (name == null) {
      query.append("name IS NULL");
    }
 else {
      query.append("name = ?");
    }
    query.append(" AND ");
    query.append("scope = ?");
    query.append(" ");
    if (obc != null) {
      query.append("ORDER BY ");
      query.append(obc.getOrderBy());
    }
    Query q=session.createQuery(query.toString());
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(companyId);
    if (name != null) {
      qPos.add(name);
    }
    qPos.add(scope);
    Object[] objArray=QueryUtil.getPrevAndNext(q,count,obc,resourcePermission);
    ResourcePermission[] array=new ResourcePermissionImpl[3];
    array[0]=(ResourcePermission)objArray[0];
    array[1]=(ResourcePermission)objArray[1];
    array[2]=(ResourcePermission)objArray[2];
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
