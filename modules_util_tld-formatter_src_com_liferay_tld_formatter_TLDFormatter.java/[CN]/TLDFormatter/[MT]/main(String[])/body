{
  Map<String,String> arguments=ArgumentsUtil.parseArguments(args);
  String baseDirName=GetterUtil.getString(arguments.get("tld.base.dir"),TLDFormatterArgs.BASE_DIR_NAME);
  boolean plugin=GetterUtil.getBoolean(arguments.get("tld.plugin"),TLDFormatterArgs.PLUGIN);
  try {
    new TLDFormatter(baseDirName,plugin);
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}
