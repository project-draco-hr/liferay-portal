{
  String sortField=doGetSortField(orderByCol);
  String[] sortableTextFields=PropsUtil.getArray(PropsKeys.LUCENE_SORTABLE_TEXT_FIELDS);
  if (ArrayUtil.contains(sortableTextFields,sortField)) {
    sortField=PropsUtil.get(PropsKeys.LUCENE_COPY_FIELDS,new Filter(sortField));
  }
  return sortField;
}
