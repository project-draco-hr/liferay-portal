{
  Group group=null;
  try {
    group=GroupLocalServiceUtil.getGroup(groupId);
    if (group.isLayout()) {
      group=group.getParentGroup();
    }
  }
 catch (  PortalException pe) {
    if (_log.isDebugEnabled()) {
      _log.debug("Unable to retrieve site group",pe);
    }
  }
  return group;
}
