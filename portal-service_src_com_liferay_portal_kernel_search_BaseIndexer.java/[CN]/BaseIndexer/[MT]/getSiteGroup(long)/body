{
  Group group=null;
  try {
    group=GroupLocalServiceUtil.getGroup(groupId);
    if (group.isLayout()) {
      group=group.getParentGroup();
    }
  }
 catch (  PortalException e) {
    if (_log.isDebugEnabled()) {
      _log.debug("Unable to retrieve site group",e);
    }
  }
  return group;
}
