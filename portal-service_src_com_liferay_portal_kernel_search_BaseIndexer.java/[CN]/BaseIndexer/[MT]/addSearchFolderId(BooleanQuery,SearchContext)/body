{
  MultiValueFacet multiValueFacet=new MultiValueFacet(searchContext);
  multiValueFacet.setFieldName(Field.FOLDER_ID);
  multiValueFacet.setStatic(true);
  long[] folderIds=searchContext.getFolderIds();
  if (folderIds != null) {
    JSONArray valuesJSONArray=JSONFactoryUtil.createJSONArray();
    for (    long folderId : folderIds) {
      valuesJSONArray.put(folderId);
    }
    FacetConfiguration facetConfiguration=multiValueFacet.getFacetConfiguration();
    JSONObject dataJSONObject=facetConfiguration.getData();
    dataJSONObject.put("values",valuesJSONArray);
  }
  searchContext.addFacet(multiValueFacet);
}
