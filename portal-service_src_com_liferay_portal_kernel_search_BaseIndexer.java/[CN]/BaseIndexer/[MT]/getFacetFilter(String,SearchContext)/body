{
  BooleanFilter facetFilter=new BooleanFilter();
  facetFilter.addTerm(Field.ENTRY_CLASS_NAME,className);
  if (searchContext.getUserId() > 0) {
    SearchPermissionChecker searchPermissionChecker=SearchEngineUtil.getSearchPermissionChecker();
    long[] groupIds=searchContext.getGroupIds();
    long groupId=GetterUtil.getLong(searchContext.getAttribute("groupId"));
    if (groupId > 0) {
      groupIds=new long[]{groupId};
    }
    BooleanQuery permissionQuery=(BooleanQuery)searchPermissionChecker.getPermissionQuery(searchContext.getCompanyId(),groupIds,searchContext.getUserId(),className,null,searchContext);
    if ((permissionQuery != null) && permissionQuery.hasClauses()) {
      QueryFilter queryFilter=new QueryFilter(permissionQuery);
      facetFilter.add(queryFilter,BooleanClauseOccur.MUST);
    }
  }
  return facetFilter;
}
