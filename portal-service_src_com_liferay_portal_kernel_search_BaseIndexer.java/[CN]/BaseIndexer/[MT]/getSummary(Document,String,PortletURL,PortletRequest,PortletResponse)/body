{
  Locale locale=getLocale(portletRequest);
  try {
    Summary summary=doGetSummary(document,locale,snippet,portletURL,portletRequest,portletResponse);
    for (    IndexerPostProcessor indexerPostProcessor : _indexerPostProcessors) {
      indexerPostProcessor.postProcessSummary(summary,document,locale,snippet,portletURL);
    }
    return summary;
  }
 catch (  SearchException se) {
    throw se;
  }
catch (  Exception e) {
    throw new SearchException(e);
  }
}
