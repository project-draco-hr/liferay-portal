{
  try {
    Project project=getProject();
    TLDFormatter tldFormatter=TLDFormatterInvoker.invoke(project.getBaseDir(),_tldFormatterArgs);
    Set<String> modifiedFileNames=tldFormatter.getModifiedFileNames();
    project.addIdReference(TLDFormatterArgs.OUTPUT_KEY_MODIFIED_FILES,modifiedFileNames);
  }
 catch (  Exception e) {
    throw new BuildException(e);
  }
}
