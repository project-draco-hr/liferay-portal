{
  try (LoggingTimer loggingTimer=new LoggingTimer();PreparedStatement ps=connection.prepareStatement("select name from Shard");ResultSet rs=ps.executeQuery()){
    List<String> shardNames=new ArrayList<>();
    while (rs.next()) {
      shardNames.add(rs.getString("name"));
    }
    return shardNames;
