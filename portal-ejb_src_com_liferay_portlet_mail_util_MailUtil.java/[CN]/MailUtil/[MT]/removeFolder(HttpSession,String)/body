{
  try {
    if (!folderName.equals(MAIL_INBOX_NAME) && !folderName.startsWith(MAIL_BOX_STYLE)) {
      folderName=MAIL_BOX_STYLE + folderName;
    }
    for (int i=0; i < DEFAULT_FOLDERS.length; i++) {
      if (DEFAULT_FOLDERS[i].equals(folderName)) {
        _log.error("The folder " + folderName + " is a system-defined folder and cannot be changed");
        throw new FolderException();
      }
    }
    Store store=_getStore(ses);
    Folder folder=store.getFolder(folderName);
    if (!folder.exists()) {
      _log.error("The folder " + folderName + " does not currently exist in the system");
      throw new FolderException();
    }
    folder.delete(true);
  }
 catch (  MessagingException ex) {
    _log.error("Error trying to remove the folder: " + folderName);
    throw new FolderException(ex);
  }
}
