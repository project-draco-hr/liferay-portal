{
  LDAPServerConfiguration ldapServerConfiguration=_ldapServerConfigurationProvider.getConfiguration(companyId,ldapServerId);
  String baseProviderURL=ldapServerConfiguration.baseProviderURL();
  String securityPrincipal=ldapServerConfiguration.securityPrincipal();
  String securityCredential=ldapServerConfiguration.securityCredential();
  return getContext(companyId,baseProviderURL,securityPrincipal,securityCredential);
}
