{
  if (Validator.isNull(value)) {
    return;
  }
  try {
    QueryParser queryParser=new QueryParser(field,_analyzer);
    queryParser.setAllowLeadingWildcard(true);
    queryParser.setLowercaseExpandedTerms(false);
    org.apache.lucene.search.Query query=null;
    try {
      query=queryParser.parse(value);
    }
 catch (    Exception e) {
      query=queryParser.parse(KeywordsUtil.escape(value));
    }
    translateQuery(booleanQuery,searchContext,query,org.apache.lucene.search.BooleanClause.Occur.SHOULD);
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
}
