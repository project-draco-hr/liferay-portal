{
  if (_log.isInfoEnabled()) {
    _log.info("Updating " + tableName + "."+ columnName+ " to use nvarchar");
  }
  StringBundler sb=new StringBundler(8);
  sb.append("alter table ");
  sb.append(tableName);
  sb.append(" alter column ");
  sb.append(columnName);
  sb.append(" nvarchar(");
  sb.append(length);
  sb.append(")");
  if (!nullable) {
    sb.append(" not null");
  }
  runSQL(sb.toString());
}
