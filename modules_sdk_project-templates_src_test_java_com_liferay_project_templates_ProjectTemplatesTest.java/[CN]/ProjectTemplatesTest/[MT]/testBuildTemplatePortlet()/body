{
  File projectDir=_buildTemplateWithGradle("portlet","foo.test","--class-name","Foo");
  _testExists(projectDir,"bnd.bnd");
  _testContains(projectDir,"build.gradle","apply plugin: \"com.liferay.plugin\"");
  _testContains(projectDir,"src/main/java/foo/test/portlet/FooPortlet.java","package foo.test.portlet;","javax.portlet.display-name=foo.test","public class FooPortlet extends GenericPortlet {","printWriter.print(\"foo.test Portlet");
  _executeGradle(projectDir,_TASK_PATH_BUILD);
  _testExists(projectDir,"build/libs/foo.test-1.0.0.jar");
  File gradleBundleFile=new File(projectDir,"build/libs/foo.test-1.0.0.jar");
  File mavenProjectDir=_buildTemplateWithMaven("portlet","foo.test","-Dpackage=foo.test","-DclassName=Foo");
  _executeMaven(mavenProjectDir,new String[]{_TASK_PATH_PACKAGE});
  _testExists(mavenProjectDir,"target/foo.test-1.0.0.jar");
  File mavenBundleFile=new File(mavenProjectDir,"target/foo.test-1.0.0.jar");
  _executeBndDiff(gradleBundleFile,mavenBundleFile);
}
