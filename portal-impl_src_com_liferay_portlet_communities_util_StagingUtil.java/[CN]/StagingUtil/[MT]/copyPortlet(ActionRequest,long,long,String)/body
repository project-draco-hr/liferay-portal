{
  Map<String,String[]> parameterMap=getStagingParameters(actionRequest);
  Layout sourceLayout=LayoutLocalServiceUtil.getLayout(sourcePlid);
  byte[] bytes=LayoutLocalServiceUtil.exportPortletInfo(sourcePlid,sourceLayout.getGroupId(),portletId,parameterMap,null,null);
  ByteArrayInputStream bais=new ByteArrayInputStream(bytes);
  LayoutServiceUtil.importPortletInfo(targetPlid,sourceLayout.getGroupId(),portletId,parameterMap,bais);
}
