{
  Map<String,String[]> parameterMap=getStagingParameters(actionRequest);
  Layout sourceLayout=LayoutLocalServiceUtil.getLayout(sourcePlid);
  byte[] bytes=LayoutLocalServiceUtil.exportPortletInfo(sourceLayout.getGroupId(),sourcePlid,portletId,parameterMap,null,null);
  ByteArrayInputStream bais=new ByteArrayInputStream(bytes);
  LayoutServiceUtil.importPortletInfo(sourceLayout.getGroupId(),targetPlid,portletId,parameterMap,bais);
}
