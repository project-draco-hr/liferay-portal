{
  long plid=ParamUtil.getLong(actionRequest,"plid");
  Layout targetLayout=LayoutLocalServiceUtil.getLayout(plid);
  Group stagingGroup=targetLayout.getGroup();
  Group liveGroup=stagingGroup.getLiveGroup();
  Layout sourceLayout=LayoutLocalServiceUtil.getLayout(liveGroup.getGroupId(),targetLayout.isPrivateLayout(),targetLayout.getLayoutId());
  copyPortlet(actionRequest,sourceLayout.getPlid(),targetLayout.getPlid(),portlet.getPortletId());
}
