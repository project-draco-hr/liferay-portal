{
  Thread currentThread=Thread.currentThread();
  ClassLoader contextClassLoader=currentThread.getContextClassLoader();
  ClassLoader portalClassLoader=PortalClassLoaderUtil.getClassLoader();
  try {
    currentThread.setContextClassLoader(portalClassLoader);
    String servletClass=_servletConfig.getInitParameter("servlet-class");
    _servlet=(HttpServlet)portalClassLoader.loadClass(servletClass).newInstance();
    boolean usePortletClassLoader=GetterUtil.getBoolean(_servletConfig.getInitParameter("use-portlet-class-loader"));
    if (usePortletClassLoader) {
      ServletContext servletContext=_servletConfig.getServletContext();
      servletContext.setAttribute(PortletServlet.PORTLET_CLASS_LOADER,_portletClassLoader);
    }
    _servlet.init(_servletConfig);
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
 finally {
    currentThread.setContextClassLoader(contextClassLoader);
  }
}
