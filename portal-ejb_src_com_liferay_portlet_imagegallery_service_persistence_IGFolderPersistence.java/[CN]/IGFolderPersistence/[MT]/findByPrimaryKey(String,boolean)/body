{
  Session session=null;
  try {
    session=openSession();
    IGFolder igFolder=(IGFolder)session.get(IGFolder.class,folderId);
    if (igFolder == null) {
      _log.warn("No IGFolder exists with the primary key " + folderId.toString());
      if (throwNoSuchObjectException) {
        throw new NoSuchFolderException("No IGFolder exists with the primary key " + folderId.toString());
      }
    }
    return igFolder;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
