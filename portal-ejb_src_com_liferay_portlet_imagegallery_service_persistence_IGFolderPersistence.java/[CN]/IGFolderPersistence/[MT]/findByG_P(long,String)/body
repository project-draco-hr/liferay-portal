{
  Session session=null;
  try {
    session=openSession();
    StringMaker query=new StringMaker();
    query.append("FROM com.liferay.portlet.imagegallery.model.IGFolder WHERE ");
    query.append("groupId = ?");
    query.append(" AND ");
    if (parentFolderId == null) {
      query.append("parentFolderId IS NULL");
    }
 else {
      query.append("parentFolderId = ?");
    }
    query.append(" ");
    query.append("ORDER BY ");
    query.append("folderId ASC").append(", ");
    query.append("name ASC");
    Query q=session.createQuery(query.toString());
    q.setCacheable(true);
    int queryPos=0;
    q.setLong(queryPos++,groupId);
    if (parentFolderId != null) {
      q.setString(queryPos++,parentFolderId);
    }
    return q.list();
  }
 catch (  Exception e) {
    throw HibernateUtil.processException(e);
  }
 finally {
    closeSession(session);
  }
}
