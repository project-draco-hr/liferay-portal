{
  List<DDMTemplate> newTemplates=new ArrayList<DDMTemplate>();
  List<DDMTemplate> oldTemplates=getTemplates(classNameId,oldClassPK,type);
  for (  DDMTemplate oldTemplate : oldTemplates) {
    DDMTemplate newTemplate=addTemplate(userId,oldTemplate.getGroupId(),oldTemplate.getClassNameId(),newClassPK,oldTemplate.getTemplateKey(),oldTemplate.getNameMap(),oldTemplate.getDescriptionMap(),oldTemplate.getType(),oldTemplate.getMode(),oldTemplate.getLanguage(),oldTemplate.getScript(),serviceContext);
    newTemplates.add(newTemplate);
  }
  return newTemplates;
}
