{
  List<DDMTemplate> newTemplates=new ArrayList<DDMTemplate>();
  List<DDMTemplate> oldTemplates=ddmTemplatePersistence.findByC_C_T(classNameId,oldClassPK,type);
  for (  DDMTemplate oldTemplate : oldTemplates) {
    DDMTemplate newTemplate=copyTemplate(userId,oldTemplate.getTemplateId(),oldTemplate.getNameMap(),oldTemplate.getDescriptionMap(),serviceContext);
    newTemplates.add(newTemplate);
  }
  return newTemplates;
}
