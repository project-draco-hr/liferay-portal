{
  if (Validator.isNull(contentType)) {
    throw new IllegalArgumentException("Content type cannot be null");
  }
  if (getLifecycle().equals(PortletRequest.RESOURCE_PHASE) || _portletRequestImpl.getWindowState().equals(LiferayWindowState.EXCLUSIVE) || contentType.startsWith(_portletRequestImpl.getResponseContentType())) {
    _contentType=contentType;
    _response.setContentType(contentType);
  }
}
