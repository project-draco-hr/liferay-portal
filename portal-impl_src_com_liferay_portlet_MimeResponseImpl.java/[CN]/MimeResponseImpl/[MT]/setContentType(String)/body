{
  if (Validator.isNull(contentType)) {
    throw new IllegalArgumentException("Content type is null");
  }
  String lifecycle=getLifecycle();
  WindowState windowState=_portletRequestImpl.getWindowState();
  if (contentType.startsWith(_portletRequestImpl.getResponseContentType()) || lifecycle.equals(PortletRequest.RESOURCE_PHASE) || windowState.equals(LiferayWindowState.EXCLUSIVE)) {
    _contentType=contentType;
    _response.setContentType(contentType);
  }
}
