{
  boolean memoryClusteredSlaveJob=isMemoryClusteredSlaveJob(storageType);
  _readLock.lock();
  try {
    if (memoryClusteredSlaveJob) {
      updateMemoryClusteredJob(jobName,groupName,TriggerState.PAUSED);
    }
 else {
      _schedulerEngine.pause(jobName,groupName,storageType);
    }
  }
  finally {
    _readLock.unlock();
  }
  setClusterableThreadLocal(storageType);
}
