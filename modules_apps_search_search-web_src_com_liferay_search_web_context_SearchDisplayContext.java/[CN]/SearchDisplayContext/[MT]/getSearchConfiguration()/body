{
  if (_searchConfiguration != null) {
    return _searchConfiguration;
  }
  _searchConfiguration=_portletPreferences.getValue("searchConfiguration",StringPool.BLANK);
  if (!isAdvancedConfiguration() && Validator.isNull(_searchConfiguration)) {
    _searchConfiguration=ContentUtil.get(SearchWebConfigurationValues.FACET_CONFIGURATION);
  }
  return _searchConfiguration;
}
