{
  String[] filters=aggregate.split(",");
  List<ServiceTracker<ResourceBundleLoader,ResourceBundleLoader>> serviceTrackers=new ArrayList<>(filters.length);
  for (  String filter : filters) {
    filter="(&(objectClass=" + ResourceBundleLoader.class.getName() + ")"+ filter+ ")";
    ServiceTracker<ResourceBundleLoader,ResourceBundleLoader> serviceTracker=ServiceTrackerFactory.open(_bundleContext,filter);
    serviceTrackers.add(serviceTracker);
  }
  return new ServiceTrackerResourceBundleLoader(serviceTrackers);
}
