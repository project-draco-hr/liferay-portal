{
  String[] filterStrings=aggregate.split(",");
  List<ServiceTracker<ResourceBundleLoader,ResourceBundleLoader>> serviceTrackers=new ArrayList<>(filterStrings.length);
  for (  String filterString : filterStrings) {
    filterString="(&(objectClass=" + ResourceBundleLoader.class.getName() + ")"+ filterString+ ")";
    ServiceTracker<ResourceBundleLoader,ResourceBundleLoader> serviceTracker=ServiceTrackerFactory.open(_bundleContext,filterString);
    serviceTrackers.add(serviceTracker);
  }
  return new ServiceTrackerResourceBundleLoader(serviceTrackers);
}
