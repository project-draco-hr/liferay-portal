{
  List<DLDocumentType> list=findByG_N_D(groupId,name,description,0,1,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(8);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("groupId=");
    msg.append(groupId);
    msg.append(", name=");
    msg.append(name);
    msg.append(", description=");
    msg.append(description);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchDocumentTypeException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
