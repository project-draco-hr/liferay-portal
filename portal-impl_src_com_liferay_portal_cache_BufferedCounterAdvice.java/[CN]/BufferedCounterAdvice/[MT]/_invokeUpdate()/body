{
  if (!MessageBusUtil.hasMessageListener(_INCREASE_COUNTER_MESSAGE_DESTINATION)) {
    SerialDestination destination=new SerialDestination();
    destination.setName(_INCREASE_COUNTER_MESSAGE_DESTINATION);
    destination.setWorkersCoreSize(1);
    destination.setWorkersMaxSize(1);
    MessageBusUtil.addDestination(destination);
    destination.open();
    MessageBusUtil.registerMessageListener(_INCREASE_COUNTER_MESSAGE_DESTINATION,new IncreaseCounterMessageListener());
  }
  Message message=new Message();
  message.setPayload(_pipe);
  MessageBusUtil.sendMessage(_INCREASE_COUNTER_MESSAGE_DESTINATION,message);
}
