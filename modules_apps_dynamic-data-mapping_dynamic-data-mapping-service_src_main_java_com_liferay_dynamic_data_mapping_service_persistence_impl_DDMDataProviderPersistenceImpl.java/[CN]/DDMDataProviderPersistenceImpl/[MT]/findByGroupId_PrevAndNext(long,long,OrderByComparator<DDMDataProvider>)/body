{
  DDMDataProvider ddmDataProvider=findByPrimaryKey(dataProviderId);
  Session session=null;
  try {
    session=openSession();
    DDMDataProvider[] array=new DDMDataProviderImpl[3];
    array[0]=getByGroupId_PrevAndNext(session,ddmDataProvider,groupId,orderByComparator,true);
    array[1]=ddmDataProvider;
    array[2]=getByGroupId_PrevAndNext(session,ddmDataProvider,groupId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
