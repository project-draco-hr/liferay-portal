{
  DDMDataProvider ddmDataProvider=findByPrimaryKey(dataProviderId);
  Session session=null;
  try {
    session=openSession();
    DDMDataProvider[] array=new DDMDataProviderImpl[3];
    array[0]=getByCompanyId_PrevAndNext(session,ddmDataProvider,companyId,orderByComparator,true);
    array[1]=ddmDataProvider;
    array[2]=getByCompanyId_PrevAndNext(session,ddmDataProvider,companyId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
