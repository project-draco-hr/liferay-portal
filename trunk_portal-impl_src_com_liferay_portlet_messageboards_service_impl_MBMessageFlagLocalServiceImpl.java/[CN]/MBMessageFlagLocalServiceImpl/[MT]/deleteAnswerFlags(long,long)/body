{
  List<MBMessageFlag> messageFlags=mbMessageFlagPersistence.findByM_F(messageId,MBMessageFlagConstants.ANSWER_FLAG);
  for (  MBMessageFlag messageFlag : messageFlags) {
    deleteFlag(messageFlag);
  }
  List<MBMessage> messages=mbMessagePersistence.findByT_P(threadId,messageId);
  for (  MBMessage message : messages) {
    deleteAnswerFlags(threadId,message.getMessageId());
  }
}
