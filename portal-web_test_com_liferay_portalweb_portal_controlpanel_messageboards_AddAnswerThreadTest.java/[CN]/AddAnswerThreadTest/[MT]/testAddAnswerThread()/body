  selenium.waitForPageToLoad("30000");
  selenium.click("//div[5]/table/tbody/tr[1]/td[2]/div[1]/ul/li[1]/span/a[2]");
  selenium.click(RuntimeVariables.replace("link=T\u00e9st Cat\u00e9gory Edit\u00e9d"));
