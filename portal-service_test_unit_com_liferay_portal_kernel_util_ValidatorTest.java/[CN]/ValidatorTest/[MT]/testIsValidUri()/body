{
  String[] validUris={"ftp://ftp.liferay.com/file.txt","gopher://gopher.liferay.com/California/Los%20Angeles","http://liferay.com:valid","http://www.ietf.org/rfc/rfc2396.txt","mailto:info@liferay.com.broken","my-androidapp://liferay.com/authorize","myiosapp://liferay.com/application-page/.app","news:comp.infosystems.www.servers.unix","telnet://in.liferay.com/"};
  for (  String validUri : validUris) {
    if (!Validator.isUri(validUri)) {
      Assert.fail(validUri);
    }
  }
  String[] invalidUris={"android-app://test.lif>ray.com","android-app:|test(@lifray.com","ios@app://liferay.com/authorize"};
  for (  String invalidUri : invalidUris) {
    if (Validator.isUri(invalidUri)) {
      Assert.fail(invalidUri);
    }
  }
}
