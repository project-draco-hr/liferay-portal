{
  BuildXSDTask buildXSDTask=GradleUtil.addTask(project,BUILD_XSD_TASK_NAME,BuildXSDTask.class);
  buildXSDTask.setArchiveName(project.getName() + "-xbean." + Jar.DEFAULT_EXTENSION);
  buildXSDTask.setDescription("Generates XMLBeans bindings.");
  buildXSDTask.setDestinationDir(project.file("lib"));
  buildXSDTask.setGroup(BasePlugin.BUILD_GROUP);
  return buildXSDTask;
}
