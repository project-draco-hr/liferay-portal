{
  String portletId=_portletDisplay.getId();
  if (portletId.equals(PortletKeys.DOCUMENT_LIBRARY) || portletId.equals(PortletKeys.DOCUMENT_LIBRARY_ADMIN)) {
    return true;
  }
  DLPortletInstanceSettings dlPortletInstanceSettings=new DLPortletInstanceSettings(_portletDisplay.getPortletInstanceSettings());
  return dlPortletInstanceSettings.getShowFolderMenu();
}
