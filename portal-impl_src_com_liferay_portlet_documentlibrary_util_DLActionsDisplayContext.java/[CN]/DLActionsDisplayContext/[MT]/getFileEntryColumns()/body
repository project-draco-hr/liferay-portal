{
  DLPortletInstanceSettings dlPortletInstanceSettings=new DLPortletInstanceSettings(_portletDisplay.getPortletInstanceSettings());
  String[] fileEntryColumns=StringUtil.split(dlPortletInstanceSettings.getFileEntryColumns());
  if (!isShowActions()) {
    fileEntryColumns=ArrayUtil.remove(fileEntryColumns,"action");
  }
  return fileEntryColumns;
}
