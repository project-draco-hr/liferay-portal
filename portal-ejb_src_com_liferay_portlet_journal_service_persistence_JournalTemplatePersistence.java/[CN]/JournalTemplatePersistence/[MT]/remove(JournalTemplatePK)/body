{
  Session session=null;
  try {
    session=openSession();
    JournalTemplate journalTemplate=(JournalTemplate)session.get(JournalTemplate.class,journalTemplatePK);
    if (journalTemplate == null) {
      if (_log.isWarnEnabled()) {
        _log.warn("No JournalTemplate exists with the primary key " + journalTemplatePK);
      }
      throw new NoSuchTemplateException("No JournalTemplate exists with the primary key " + journalTemplatePK);
    }
    return remove(journalTemplate);
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
