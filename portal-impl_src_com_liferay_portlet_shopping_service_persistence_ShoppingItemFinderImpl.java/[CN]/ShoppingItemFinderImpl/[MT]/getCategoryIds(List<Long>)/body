{
  if (categoryIds.isEmpty()) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(categoryIds.size() * 2 - 1);
  for (int i=0; i < categoryIds.size(); i++) {
    sb.append("categoryId = ? ");
    if ((i + 1) != categoryIds.size()) {
      sb.append("OR ");
    }
  }
  return sb.toString();
}
