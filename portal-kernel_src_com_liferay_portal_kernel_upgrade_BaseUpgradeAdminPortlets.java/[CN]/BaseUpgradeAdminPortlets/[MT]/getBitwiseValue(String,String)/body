{
  try (PreparedStatement ps=connection.prepareStatement("select bitwiseValue from ResourceAction where name = ? and " + "actionId = ?")){
    ps.setString(1,name);
    ps.setString(2,actionId);
    try (ResultSet rs=ps.executeQuery()){
      if (rs.next()) {
        return rs.getLong("bitwiseValue");
      }
      return 0;
    }
   }
 }
