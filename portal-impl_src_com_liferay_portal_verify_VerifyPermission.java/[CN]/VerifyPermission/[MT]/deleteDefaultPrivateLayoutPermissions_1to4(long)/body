{
  long defaultUserId=UserLocalServiceUtil.getDefaultUserId(companyId);
  List<Permission> permissions=PermissionLocalServiceUtil.getUserPermissions(defaultUserId);
  for (  Permission permission : permissions) {
    Resource resource=ResourceLocalServiceUtil.getResource(permission.getResourceId());
    ResourceCode resourceCode=ResourceCodeLocalServiceUtil.getResourceCode(resource.getCodeId());
    if (isPrivateLayout(resourceCode.getName(),resource.getPrimKey())) {
      String[] actionIds=new String[]{permission.getActionId()};
      PermissionLocalServiceUtil.unsetUserPermissions(defaultUserId,actionIds,permission.getResourceId());
    }
  }
}
