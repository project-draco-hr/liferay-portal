{
  if (_sync == null) {
    return;
  }
  ProxyModeThreadLocal.setForceSync(true);
  MessageBus messageBus=MessageBusUtil.getMessageBus();
  Destination destination=messageBus.getDestination(DestinationNames.ASYNC_SERVICE);
  if (destination instanceof BaseAsyncDestination) {
    _asyncServiceDestination=destination;
    SynchronousDestination synchronousDestination=new SynchronousDestination();
    synchronousDestination.setName(DestinationNames.ASYNC_SERVICE);
    messageBus.replace(synchronousDestination);
  }
}
