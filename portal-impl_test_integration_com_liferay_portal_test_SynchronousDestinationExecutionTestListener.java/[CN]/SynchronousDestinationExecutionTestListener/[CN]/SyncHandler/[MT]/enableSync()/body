{
  if (_sync == null) {
    return;
  }
  ProxyModeThreadLocal.setForceSync(true);
  MessageBus messageBus=MessageBusUtil.getMessageBus();
  if (messageBus.hasDestination(_TARGET_ASYNC_DESTINATION_NAME)) {
    return;
  }
  _oldAsyncDestination=(BaseDestination)messageBus.getDestination(DestinationNames.ASYNC_SERVICE);
  MessageBusUtil.addDestination(new SynchronizedAsyncDestination(_TARGET_ASYNC_DESTINATION_NAME));
  _oldAsyncDestination.setName(_TARGET_ASYNC_DESTINATION_NAME);
  MessageBusUtil.addDestination(_oldAsyncDestination);
}
