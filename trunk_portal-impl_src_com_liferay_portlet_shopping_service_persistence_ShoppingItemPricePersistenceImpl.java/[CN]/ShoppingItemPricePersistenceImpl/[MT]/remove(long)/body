{
  Session session=null;
  try {
    session=openSession();
    ShoppingItemPrice shoppingItemPrice=(ShoppingItemPrice)session.get(ShoppingItemPriceImpl.class,Long.valueOf(itemPriceId));
    if (shoppingItemPrice == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + itemPriceId);
      }
      throw new NoSuchItemPriceException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + itemPriceId);
    }
    return shoppingItemPricePersistence.remove(shoppingItemPrice);
  }
 catch (  NoSuchItemPriceException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
