{
  boolean isCompanyAdmin=permissionChecker.isCompanyAdmin();
  boolean isGroupOwner=permissionChecker.isGroupOwner(groupId);
  Group group=GroupLocalServiceUtil.getGroup(groupId);
  if (!isCompanyAdmin && !isGroupOwner && !GroupPermissionUtil.contains(permissionChecker,groupId,ActionKeys.ASSIGN_USER_ROLES)&& !OrganizationPermissionUtil.contains(permissionChecker,group.getOrganizationId(),ActionKeys.ASSIGN_USER_ROLES)) {
    return Collections.emptyList();
  }
  List<Role> filteredGroupRoles=ListUtil.copy(roles);
  Iterator<Role> itr=filteredGroupRoles.iterator();
  while (itr.hasNext()) {
    Role groupRole=itr.next();
    String name=groupRole.getName();
    if (name.equals(RoleConstants.ORGANIZATION_USER) || name.equals(RoleConstants.SITE_MEMBER)) {
      itr.remove();
    }
  }
  if (isCompanyAdmin || isGroupOwner) {
    return filteredGroupRoles;
  }
  itr=filteredGroupRoles.iterator();
  while (itr.hasNext()) {
    Role groupRole=itr.next();
    String groupRoleName=groupRole.getName();
    if (groupRoleName.equals(RoleConstants.ORGANIZATION_ADMINISTRATOR) || groupRoleName.equals(RoleConstants.ORGANIZATION_OWNER) || groupRoleName.equals(RoleConstants.SITE_ADMINISTRATOR)|| groupRoleName.equals(RoleConstants.SITE_OWNER)) {
      itr.remove();
    }
  }
  return filteredGroupRoles;
}
