{
  long classNameId=PortalUtil.getClassNameId(DDMStructure.class);
  ServiceContext serviceContext=ServiceContextFactory.getInstance(DDMTemplate.class.getName(),actionRequest);
  boolean copyDetailTemplates=ParamUtil.getBoolean(actionRequest,"copyDetailTemplates");
  if (copyDetailTemplates) {
    DDMTemplateServiceUtil.copyTemplates(classNameId,structureId,newStructureId,DDMTemplateConstants.TEMPLATE_TYPE_DETAIL,serviceContext);
  }
  boolean copyListTemplates=ParamUtil.getBoolean(actionRequest,"copyListTemplates");
  if (copyListTemplates) {
    DDMTemplateServiceUtil.copyTemplates(classNameId,structureId,newStructureId,DDMTemplateConstants.TEMPLATE_TYPE_LIST,serviceContext);
  }
}
