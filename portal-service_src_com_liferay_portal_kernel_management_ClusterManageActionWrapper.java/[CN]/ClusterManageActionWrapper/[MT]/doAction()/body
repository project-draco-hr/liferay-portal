{
  MethodHandler manageActionMethodHandler=PortalManagerUtil.createManageActionMethodHandler(_manageAction);
  ClusterRequest clusterRequest=null;
  if (_clusterGroup.isWholeCluster()) {
    clusterRequest=ClusterRequest.createMulticastRequest(manageActionMethodHandler);
  }
 else {
    verifyClusterGroup();
    clusterRequest=ClusterRequest.createUnicastRequest(manageActionMethodHandler,_clusterGroup.getClusterNodeIdsArray());
  }
  ClusterExecutorUtil.execute(clusterRequest);
}
