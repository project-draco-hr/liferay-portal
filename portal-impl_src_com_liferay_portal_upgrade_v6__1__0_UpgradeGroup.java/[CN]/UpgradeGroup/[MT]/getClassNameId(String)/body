{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  String currentShardName=null;
  try {
    currentShardName=ShardUtil.setTargetSource(PropsValues.SHARD_DEFAULT_NAME);
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select classNameId from ClassName_ where value = ?");
    ps.setString(1,className);
    rs=ps.executeQuery();
    if (rs.next()) {
      return rs.getLong("classNameId");
    }
    return 0;
  }
  finally {
    if (Validator.isNotNull(currentShardName)) {
      ShardUtil.setTargetSource(currentShardName);
    }
    DataAccess.cleanUp(con,ps,rs);
  }
}
