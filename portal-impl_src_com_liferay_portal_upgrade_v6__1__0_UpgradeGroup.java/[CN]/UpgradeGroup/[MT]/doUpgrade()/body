{
  long groupClassNameId=getClassNameId(Group.class.getName());
  runSQL("update Group_ set site = TRUE where classNameId = " + groupClassNameId);
  long organizationClassNameId=getClassNameId(Organization.class.getName());
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    String sql="select distinct Group_.groupId from Group_ inner join " + "Layout on Layout.groupId = Group_.groupId where " + "classNameId = ?";
    ps=con.prepareStatement(sql);
    ps.setLong(1,organizationClassNameId);
    rs=ps.executeQuery();
    while (rs.next()) {
      long groupId=rs.getLong("groupId");
      runSQL("update Group_ set site = TRUE where groupId = " + groupId);
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
