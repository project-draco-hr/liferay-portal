{
  try {
    User user=getUser(actionRequest);
    if (PropsValues.USERS_REMINDER_QUERIES_ENABLED && (PropsValues.CAPTCHA_CHECK_PORTAL_SEND_PASSWORD || user.hasReminderQuery())) {
      actionRequest.setAttribute(ForgotPasswordAction.class.getName(),user);
      int step=ParamUtil.getInteger(actionRequest,"step");
      if (step == 2) {
        if (PropsValues.CAPTCHA_CHECK_PORTAL_SEND_PASSWORD) {
          CaptchaUtil.check(actionRequest);
        }
        sendPassword(actionRequest,actionResponse);
      }
    }
 else {
      if (PropsValues.CAPTCHA_CHECK_PORTAL_SEND_PASSWORD) {
        CaptchaUtil.check(actionRequest);
      }
      sendPassword(actionRequest,actionResponse);
    }
  }
 catch (  Exception e) {
    if (e instanceof CaptchaException || e instanceof NoSuchUserException || e instanceof RequiredReminderQueryException|| e instanceof SendPasswordException|| e instanceof UserEmailAddressException|| e instanceof UserReminderQueryException) {
      SessionErrors.add(actionRequest,e.getClass().getName());
    }
 else {
      PortalUtil.sendError(e,actionRequest,actionResponse);
    }
  }
}
