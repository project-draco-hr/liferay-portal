{
  if (type == SocialActivityConstants.TYPE_SUBSCRIBE) {
    if (classPK != groupId) {
      getSocialActivityLocalService().addActivity(userId,groupId,className,classPK,SocialActivityConstants.TYPE_SUBSCRIBE,extraData,0);
    }
  }
 else {
    getSocialActivityLocalService().addActivity(userId,groupId,className,classPK,type,extraData,receiverUserId);
  }
}
