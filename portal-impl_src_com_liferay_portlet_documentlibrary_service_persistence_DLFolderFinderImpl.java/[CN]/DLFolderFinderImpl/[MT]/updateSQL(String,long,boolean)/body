{
  if (includeMountFolders) {
    sql=StringUtil.replace(sql,"(DLFolder.mountPoint = ?) AND",StringPool.BLANK);
  }
  sql=StringUtil.replace(sql,"[$FOLDER_PARENT_FOLDER_ID$]",getFolderId(folderId,"DLFolder"));
  sql=StringUtil.replace(sql,"[$FILE_ENTRY_FOLDER_ID$]",getFolderId(folderId,"DLFileEntry"));
  sql=StringUtil.replace(sql,"[$FILE_VERSION_FOLDER_ID$]",getFolderId(folderId,"DLFileVersion"));
  return StringUtil.replace(sql,"[$FILE_SHORTCUT_FOLDER_ID$]",getFolderId(folderId,"DLFileShortcut"));
}
