{
  if (folderIds.isEmpty()) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(folderIds.size() * 5 - 1);
  for (int i=0; i < folderIds.size(); i++) {
    sb.append(table);
    sb.append(".");
    if (table.equals("DLFolder")) {
      sb.append("parentFolderId");
    }
 else {
      sb.append("folderId");
    }
    sb.append("= ? ");
    if ((i + 1) != folderIds.size()) {
      sb.append("OR ");
    }
  }
  return sb.toString();
}
