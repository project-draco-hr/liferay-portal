{
  Session session=null;
  try {
    session=openSession();
    String sql=getFileEntriesSQL(COUNT_FE_BY_G_F,groupId,null,queryDefinition,inlineSQLHelper);
    sql=StringUtil.replace(sql,"[$FILE_ENTRY_FOLDER_ID$]",getFolderId(folderId,DLFileEntryImpl.TABLE_NAME));
    SQLQuery q=session.createSQLQuery(sql);
    q.addScalar(COUNT_COLUMN_NAME,Type.LONG);
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(groupId);
    qPos.add(queryDefinition.getStatus());
    qPos.add(folderId);
    Iterator<Long> itr=q.iterate();
    if (itr.hasNext()) {
      Long count=itr.next();
      if (count != null) {
        return count.intValue();
      }
    }
    return 0;
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
 finally {
    closeSession(session);
  }
}
