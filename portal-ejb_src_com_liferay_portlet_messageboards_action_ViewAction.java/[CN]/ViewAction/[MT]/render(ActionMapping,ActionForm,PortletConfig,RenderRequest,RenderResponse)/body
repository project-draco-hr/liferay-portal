{
  try {
    ActionUtil.getCategory(req);
  }
 catch (  Exception e) {
    if (e instanceof BanUserException || e instanceof NoSuchCategoryException || e instanceof PrincipalException) {
      SessionErrors.add(req,e.getClass().getName());
      return mapping.findForward("portlet.message_boards.error");
    }
 else {
      throw e;
    }
  }
  return mapping.findForward("portlet.message_boards.view");
}
