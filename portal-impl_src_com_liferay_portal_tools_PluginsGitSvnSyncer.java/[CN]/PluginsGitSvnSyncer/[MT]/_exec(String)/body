{
  Future<ObjectValuePair<String[],String[]>> future=ProcessUtil.execute(new LineSpliterOutputProcessor(),cmd);
  ObjectValuePair<String[],String[]> results=future.get();
  String[] stdout=results.getKey();
  String[] stderr=results.getValue();
  if (stderr.length > 0) {
    StringBundler sb=new StringBundler(stderr.length * 3 + 3);
    sb.append("Received errors in executing '");
    sb.append(cmd);
    sb.append("'\n");
    for (    String err : stderr) {
      sb.append("\t");
      sb.append(err);
      sb.append("\n");
    }
    throw new Exception(sb.toString());
  }
  return stdout;
}
