{
  Session session=null;
  try {
    session=openSession();
    StringBuffer query=new StringBuffer();
    query.append("SELECT COUNT(*) ");
    query.append("FROM com.liferay.portlet.documentlibrary.model.DLFileShortcut WHERE ");
    if (toFolderId == null) {
      query.append("toFolderId IS NULL");
    }
 else {
      query.append("toFolderId = ?");
    }
    query.append(" AND ");
    if (toName == null) {
      query.append("toName IS NULL");
    }
 else {
      query.append("toName = ?");
    }
    query.append(" ");
    Query q=session.createQuery(query.toString());
    q.setCacheable(true);
    int queryPos=0;
    if (toFolderId != null) {
      q.setString(queryPos++,toFolderId);
    }
    if (toName != null) {
      q.setString(queryPos++,toName);
    }
    Iterator itr=q.list().iterator();
    if (itr.hasNext()) {
      Long count=(Long)itr.next();
      if (count != null) {
        return count.intValue();
      }
    }
    return 0;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
