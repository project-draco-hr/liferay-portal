{
  int count=countByUserId(userId);
  if (count == 0) {
    return Collections.EMPTY_LIST;
  }
  Object[] finderArgs=new Object[]{new Long(userId),String.valueOf(start),String.valueOf(end),String.valueOf(obc)};
  List<SocialActivity> list=(List<SocialActivity>)FinderCacheUtil.getResult(FINDER_PATH_FIND_BY_OBC_USERID,finderArgs,this);
  if (list == null) {
    Session session=null;
    try {
      session=openSession();
      StringBuilder query=new StringBuilder();
      query.append("FROM com.liferay.portlet.social.model.SocialActivity WHERE ");
      query.append("userId = ?");
      query.append(" ");
      if (obc != null) {
        query.append("ORDER BY ");
        query.append(obc.getOrderBy());
      }
 else {
        query.append("ORDER BY ");
        query.append("createDate DESC");
      }
      Query q=session.createQuery(query.toString());
      QueryPos qPos=QueryPos.getInstance(q);
      qPos.add(userId);
      list=(List<SocialActivity>)QueryUtil.list(q,getDialect(),start,end);
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      if (list == null) {
        list=new ArrayList<SocialActivity>();
      }
      cacheResult(list);
      FinderCacheUtil.putResult(FINDER_PATH_FIND_BY_OBC_USERID,finderArgs,list);
      closeSession(session);
    }
  }
  return list;
}
