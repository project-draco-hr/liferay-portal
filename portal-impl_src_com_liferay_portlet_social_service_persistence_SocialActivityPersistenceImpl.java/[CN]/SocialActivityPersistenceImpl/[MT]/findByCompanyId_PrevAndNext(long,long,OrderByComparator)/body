{
  SocialActivity socialActivity=findByPrimaryKey(activityId);
  int count=countByCompanyId(companyId);
  Session session=null;
  try {
    session=openSession();
    StringMaker query=new StringMaker();
    query.append("FROM com.liferay.portlet.social.model.SocialActivity WHERE ");
    query.append("companyId = ?");
    query.append(" ");
    if (obc != null) {
      query.append("ORDER BY ");
      query.append(obc.getOrderBy());
    }
 else {
      query.append("ORDER BY ");
      query.append("createDate DESC");
    }
    Query q=session.createQuery(query.toString());
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(companyId);
    Object[] objArray=QueryUtil.getPrevAndNext(q,count,obc,socialActivity);
    SocialActivity[] array=new SocialActivityImpl[3];
    array[0]=(SocialActivity)objArray[0];
    array[1]=(SocialActivity)objArray[1];
    array[2]=(SocialActivity)objArray[2];
    return array;
  }
 catch (  Exception e) {
    throw HibernateUtil.processException(e);
  }
 finally {
    closeSession(session);
  }
}
