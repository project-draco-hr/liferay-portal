{
  selenium.open("/web/guest/home/");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Recent Bloggers Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.clickAt("link=Recent Bloggers Test Page",RuntimeVariables.replace(""));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isElementPresent("link=Joe Bloggs"));
  assertTrue(selenium.isTextPresent("Posts: 1"));
  assertTrue(selenium.isElementPresent("//img[@alt='Joe Bloggs']"));
}
