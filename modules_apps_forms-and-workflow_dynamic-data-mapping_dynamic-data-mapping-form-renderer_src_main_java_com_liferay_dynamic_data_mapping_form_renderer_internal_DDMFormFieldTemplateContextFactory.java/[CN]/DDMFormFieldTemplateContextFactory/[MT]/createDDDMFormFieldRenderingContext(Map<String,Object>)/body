{
  DDMFormFieldRenderingContext ddmFormFieldRenderingContext=new DDMFormFieldRenderingContext();
  ddmFormFieldRenderingContext.setHttpServletRequest(_ddmFormRenderingContext.getHttpServletRequest());
  ddmFormFieldRenderingContext.setHttpServletResponse(_ddmFormRenderingContext.getHttpServletResponse());
  ddmFormFieldRenderingContext.setLocale(_locale);
