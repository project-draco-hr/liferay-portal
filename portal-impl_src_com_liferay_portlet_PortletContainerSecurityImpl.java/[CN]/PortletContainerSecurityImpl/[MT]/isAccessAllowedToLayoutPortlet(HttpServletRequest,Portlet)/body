{
  if (isAccessGrantedByRuntimePortlet(request,portlet)) {
    return true;
  }
  if (isAccessGrantedByPortletOnPage(request,portlet)) {
    return true;
  }
  if (isLayoutConfigurationAllowed(request,portlet)) {
    return true;
  }
  if (isAccessGrantedByPPAuthToken(request,portlet)) {
    return true;
  }
  return false;
}
