{
  int activityType=activity.getType();
  if ((activityType == JournalActivityKeys.ADD_ARTICLE) && !JournalPermission.contains(permissionChecker,activity.getGroupId(),ActionKeys.ADD_ARTICLE)) {
    return false;
  }
 else   if ((activityType == JournalActivityKeys.UPDATE_ARTICLE) && !JournalArticlePermission.contains(permissionChecker,activity.getClassPK(),ActionKeys.UPDATE)) {
    return false;
  }
  return JournalArticlePermission.contains(permissionChecker,activity.getClassPK(),actionId);
}
