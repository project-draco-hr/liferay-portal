{
  AddressLocalServiceUtil.deleteAddresses(contact.getCompanyId(),Contact.class.getName(),String.valueOf(contact.getContactId()));
  EmailAddressLocalServiceUtil.deleteEmailAddresses(contact.getCompanyId(),Contact.class.getName(),String.valueOf(contact.getContactId()));
  PhoneLocalServiceUtil.deletePhones(contact.getCompanyId(),Contact.class.getName(),String.valueOf(contact.getContactId()));
  WebsiteLocalServiceUtil.deleteWebsites(contact.getCompanyId(),Contact.class.getName(),String.valueOf(contact.getContactId()));
  ContactUtil.remove(contact.getContactId());
}
