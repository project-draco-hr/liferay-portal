{
  if (_columns.size() == 1) {
    return _columns.get(0).getHumanCondition(arrayable);
  }
  StringBundler sb=new StringBundler(_columns.size() * 2);
  for (  EntityColumn column : _columns) {
    sb.append(column.getHumanCondition(arrayable));
    sb.append(" and ");
  }
  if (!_columns.isEmpty()) {
    sb.setIndex(sb.index() - 1);
  }
  return sb.toString();
}
