{
  try {
    Contact contact=user.getContact();
    Document doc=getUserDocument(user.getCompanyId(),user.getUserId(),user.getScreenName(),user.getEmailAddress(),contact.getFirstName(),contact.getMiddleName(),contact.getLastName(),contact.getJobTitle(),user.getActive(),user.getGroupIds(),user.getOrganizationIds(),user.getRoleIds(),user.getUserGroupIds(),user.getExpandoBridge());
    SearchEngineUtil.updateDocument(user.getCompanyId(),doc.get(Field.UID),doc);
  }
 catch (  Exception e) {
    throw new SearchException(e);
  }
}
