{
  try {
    if (user.isDefaultUser()) {
      return;
    }
    String[] assetTagNames=AssetTagLocalServiceUtil.getTagNames(User.class.getName(),user.getUserId());
    Document document=getUserDocument(user.getCompanyId(),user.getUserId(),user.getScreenName(),user.getEmailAddress(),user.getFirstName(),user.getMiddleName(),user.getLastName(),user.getJobTitle(),user.getActive(),user.getGroupIds(),user.getOrganizationIds(),user.getRoleIds(),user.getUserGroupIds(),assetTagNames,user.getExpandoBridge());
    SearchEngineUtil.updateDocument(user.getCompanyId(),document.get(Field.UID),document);
  }
 catch (  Exception e) {
    throw new SearchException(e);
  }
}
