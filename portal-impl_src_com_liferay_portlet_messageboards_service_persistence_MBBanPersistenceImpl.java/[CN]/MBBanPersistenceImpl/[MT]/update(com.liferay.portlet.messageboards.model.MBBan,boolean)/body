{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(mbBan);
    }
 else {
      if (mbBan.isNew()) {
        session.save(mbBan);
      }
 else {
        mbBan=(MBBan)session.merge(mbBan);
      }
    }
    session.flush();
    mbBan.setNew(false);
    return mbBan;
  }
 catch (  Exception e) {
    throw HibernateUtil.processException(e);
  }
 finally {
    closeSession(session);
    FinderCache.clearCache(MBBan.class.getName());
  }
}
