{
  if (parentFolderId.equals(IGFolder.DEFAULT_PARENT_FOLDER_ID)) {
    return parentFolderId;
  }
  if (folder.getFolderId().equals(parentFolderId)) {
    return folder.getParentFolderId();
  }
 else {
    IGFolder parentFolder=IGFolderUtil.fetchByPrimaryKey(parentFolderId);
    if ((parentFolder == null) || (!folder.getGroupId().equals(parentFolder.getGroupId()))) {
      return folder.getParentFolderId();
    }
    List subfolderIds=new ArrayList();
    getSubfolderIds(subfolderIds,folder.getGroupId(),folder.getFolderId());
    if (subfolderIds.contains(parentFolderId)) {
      return folder.getParentFolderId();
    }
    return parentFolderId;
  }
}
