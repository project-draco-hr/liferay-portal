{
  Iterator itr=IGFolderUtil.findByG_P(folder.getGroupId(),folder.getFolderId()).iterator();
  while (itr.hasNext()) {
    IGFolder curFolder=(IGFolder)itr.next();
    deleteFolder(curFolder);
  }
  IGImageLocalServiceUtil.deleteImages(folder.getFolderId());
  ResourceLocalServiceUtil.deleteResource(folder.getCompanyId(),IGFolder.class.getName(),Resource.TYPE_CLASS,Resource.SCOPE_INDIVIDUAL,folder.getPrimaryKey().toString());
  IGFolderUtil.remove(folder.getFolderId());
}
