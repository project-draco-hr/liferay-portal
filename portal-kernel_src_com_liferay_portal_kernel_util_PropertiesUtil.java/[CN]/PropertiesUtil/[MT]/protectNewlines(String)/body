{
  if (value != null) {
    value=StringUtil.replace((String)value,StringPool.RETURN_NEW_LINE,_LIFERAY_NEW_LINE);
    value=StringUtil.replace((String)value,StringPool.NEW_LINE,_LIFERAY_NEW_LINE);
    value=StringUtil.replace((String)value,StringPool.RETURN,_LIFERAY_NEW_LINE);
  }
  return value;
}
