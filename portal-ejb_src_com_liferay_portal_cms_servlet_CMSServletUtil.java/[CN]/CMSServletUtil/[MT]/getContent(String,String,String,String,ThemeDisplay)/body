{
  String content=null;
  if (Validator.isNull(articleId)) {
    return null;
  }
  articleId=articleId.trim().toUpperCase();
  String key=_encodeKey(articleId + LANGUAGE + languageId);
  try {
    content=(String)_cache.getFromCache(key);
  }
 catch (  NeedsRefreshException nre) {
    try {
      content=JournalArticleLocalServiceUtil.getArticleContent(companyId,groupId,articleId,languageId,themeDisplay);
    }
 catch (    Exception e) {
      _log.warn(e.getMessage());
    }
    if (content != null) {
      _cache.putInCache(key,content,GROUP_NAME_ARRAY);
    }
  }
 finally {
    if (content == null) {
      _cache.cancelUpdate(key);
    }
  }
  return content;
}
