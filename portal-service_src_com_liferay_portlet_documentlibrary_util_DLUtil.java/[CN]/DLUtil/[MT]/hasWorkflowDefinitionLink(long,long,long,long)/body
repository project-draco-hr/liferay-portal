{
  while (folderId != DLFolderConstants.DEFAULT_PARENT_FOLDER_ID) {
    try {
      DLFolder dlFolder=DLFolderLocalServiceUtil.getFolder(folderId);
      if (dlFolder.isOverrideFileEntryTypes()) {
        break;
      }
      folderId=dlFolder.getParentFolderId();
    }
 catch (    NoSuchFolderException nsfe) {
      return false;
    }
  }
  if (WorkflowDefinitionLinkLocalServiceUtil.hasWorkflowDefinitionLink(companyId,groupId,DLFolderConstants.getClassName(),folderId,fileEntryTypeId) || WorkflowDefinitionLinkLocalServiceUtil.hasWorkflowDefinitionLink(companyId,groupId,DLFolderConstants.getClassName(),folderId,DLFileEntryTypeConstants.FILE_ENTRY_TYPE_ID_ALL)) {
    return true;
  }
  return false;
}
