{
  while (folderId != DLFolderConstants.DEFAULT_PARENT_FOLDER_ID) {
    DLFolder dlFolder=DLFolderLocalServiceUtil.getFolder(folderId);
    if (dlFolder.isOverrideFileEntryTypes()) {
      break;
    }
    folderId=dlFolder.getParentFolderId();
  }
  boolean hasWorkflowDefinitionLink=WorkflowDefinitionLinkLocalServiceUtil.hasWorkflowDefinitionLink(companyId,groupId,DLFolderConstants.getClassName(),folderId,fileEntryTypeId);
  if (hasWorkflowDefinitionLink == false) {
    hasWorkflowDefinitionLink=WorkflowDefinitionLinkLocalServiceUtil.hasWorkflowDefinitionLink(companyId,groupId,DLFolderConstants.getClassName(),folderId,DLFileEntryTypeConstants.FILE_ENTRY_TYPE_ID_ALL);
  }
  return hasWorkflowDefinitionLink;
}
