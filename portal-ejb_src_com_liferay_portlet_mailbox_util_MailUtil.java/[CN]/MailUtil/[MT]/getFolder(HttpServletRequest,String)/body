{
  if (Validator.isNull(folderName)) {
    folderName=MAIL_INBOX_NAME;
  }
  Folder folder=getCurrentFolder(req);
  if (folder != null) {
    if (!folder.getName().equals(folderName)) {
      closeFolder(req);
    }
  }
  if (folder == null) {
    folder=getStore(req).getFolder(folderName);
    folder.open(Folder.READ_WRITE);
  }
  return folder;
}
