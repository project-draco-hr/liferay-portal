{
  Session session=null;
  try {
    session=openSession();
    MailReceipt mailReceipt=(MailReceipt)session.get(MailReceipt.class,receiptId);
    if (mailReceipt == null) {
      if (_log.isWarnEnabled()) {
        _log.warn("No MailReceipt exists with the primary key " + receiptId.toString());
        throw new NoSuchReceiptException("No MailReceipt exists with the primary key " + receiptId.toString());
      }
    }
    return mailReceipt;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
