{
  com.liferay.portlet.mail.model.MailReceipt mailReceipt=MailReceiptPool.get(receiptId);
  Session session=null;
  try {
    if (mailReceipt == null) {
      session=openSession();
      MailReceiptHBM mailReceiptHBM=(MailReceiptHBM)session.get(MailReceiptHBM.class,receiptId);
      if (mailReceiptHBM == null) {
        _log.warn("No MailReceipt exists with the primary key " + receiptId.toString());
        throw new NoSuchReceiptException("No MailReceipt exists with the primary key " + receiptId.toString());
      }
      mailReceipt=MailReceiptHBMUtil.model(mailReceiptHBM,false);
    }
    return mailReceipt;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
