{
  PortalPermission.check(getPermissionChecker(),ActionKeys.ADD_PASSWORD_POLICY);
  return PasswordPolicyLocalServiceUtil.addPolicy(getUserId(),name,description,changeable,changeRequired,minAge,storageScheme,checkSyntax,allowDictionaryWords,minLength,history,historyCount,expireable,maxAge,warningTime,graceLimit,lockout,maxFailure,requireUnlock,lockoutDuration,resetFailureCount);
}
