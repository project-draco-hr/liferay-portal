{
  if ((s == null) || (oldSub == null) || (newSub == null)) {
    return null;
  }
  int y=s.indexOf(oldSub);
  if (y >= 0) {
    StringMaker sm=new StringMaker();
    int length=oldSub.length();
    int x=0;
    while (x <= y) {
      sm.append(s.substring(x,y));
      sm.append(newSub);
      x=y + length;
      y=s.indexOf(oldSub,x);
    }
    sm.append(s.substring(x));
    return sm.toString();
  }
 else {
    return s;
  }
}
