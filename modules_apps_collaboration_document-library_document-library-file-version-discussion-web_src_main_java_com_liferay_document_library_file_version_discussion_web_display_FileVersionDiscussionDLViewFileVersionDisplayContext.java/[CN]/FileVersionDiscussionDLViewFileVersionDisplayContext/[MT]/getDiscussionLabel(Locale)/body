{
  ResourceBundle resourceBundle=_resourceBundleLoader.loadResourceBundle(LanguageUtil.getLanguageId(locale));
  String label="comments-for-version-x";
  String version=fileVersion.getVersion();
  if (version.equals(DLFileEntryConstants.PRIVATE_WORKING_COPY_VERSION)) {
    label="comments-for-draft";
  }
  return LanguageUtil.format(resourceBundle,label,fileVersion.getVersion());
}
