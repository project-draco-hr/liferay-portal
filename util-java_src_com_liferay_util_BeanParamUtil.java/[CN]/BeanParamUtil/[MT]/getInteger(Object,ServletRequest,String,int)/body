{
  Integer beanValue=null;
  if (bean != null) {
    try {
      beanValue=(Integer)PropertyUtils.getSimpleProperty(bean,param);
    }
 catch (    Exception e) {
      _log.error(e);
    }
  }
  if (beanValue == null) {
    return ParamUtil.get(req,param,defaultValue);
  }
 else {
    return ParamUtil.get(req,param,beanValue.intValue());
  }
}
