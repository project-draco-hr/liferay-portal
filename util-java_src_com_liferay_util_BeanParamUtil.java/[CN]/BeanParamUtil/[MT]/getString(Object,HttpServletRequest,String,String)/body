{
  String beanValue=null;
  if (bean != null) {
    try {
      beanValue=(String)PropertyUtils.getSimpleProperty(bean,param);
    }
 catch (    Exception e) {
      _log.error(param + " " + e.getMessage());
    }
  }
  if (beanValue == null) {
    return ParamUtil.get(request,param,defaultValue);
  }
 else {
    return ParamUtil.get(request,param,beanValue);
  }
}
