{
  if (_originalScreenNameValidator == null) {
    if (_log.isDebugEnabled()) {
      _log.debug("Instantiate " + PropsValues.USERS_SCREEN_NAME_VALIDATOR);
    }
    ClassLoader classLoader=PACLClassLoaderUtil.getPortalClassLoader();
    try {
      _originalScreenNameValidator=(ScreenNameValidator)InstanceFactory.newInstance(classLoader,PropsValues.USERS_SCREEN_NAME_VALIDATOR);
    }
 catch (    Exception e) {
      _log.error(e,e);
    }
  }
  if (_screenNameValidator == null) {
    _screenNameValidator=_originalScreenNameValidator;
  }
  if (_log.isDebugEnabled()) {
    _log.debug("Return " + ClassUtil.getClassName(_screenNameValidator));
  }
  return _screenNameValidator;
}
