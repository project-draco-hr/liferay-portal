{
  JournalTemplate journalTemplate=new JournalTemplateImpl();
  journalTemplate.setGroupId(groupId);
  journalTemplate.setStructureId(structureId);
  MirageTemplate mirageTemplate=new MirageTemplate(journalTemplate);
  MirageTemplateCriteria criteria=new MirageTemplateCriteria(MirageTemplateCriteria.FIND_BY_G_S);
  ContentTypeService contentTypeService=MirageServiceFactory.getContentTypeService();
  List<Template> templates=null;
  try {
    templates=contentTypeService.getTemplates(null,mirageTemplate,criteria);
  }
 catch (  TemplateNotFoundException tnfe) {
    throw (SystemException)tnfe.getCause();
  }
  if (templates == null) {
    return null;
  }
  List<JournalTemplate> journalTemplates=new ArrayList<JournalTemplate>(templates.size());
  for (  Template template : templates) {
    journalTemplates.add(((MirageTemplate)template).getTemplate());
  }
  return journalTemplates;
}
