{
  JournalTemplate template=new JournalTemplateImpl();
  template.setGroupId(groupId);
  template.setTemplateId(templateId);
  MirageTemplate mirageTemplate=new MirageTemplate(template);
  MirageTemplateCriteria criteria=new MirageTemplateCriteria(MirageTemplateCriteria.FIND_BY_G_T);
  ContentTypeService contentTypeService=MirageServiceFactory.getContentTypeService();
  try {
    mirageTemplate=(MirageTemplate)contentTypeService.getTemplate(mirageTemplate,criteria);
  }
 catch (  TemplateNotFoundException tnfe) {
    ExceptionTranslator.translate(tnfe);
  }
  return mirageTemplate.getTemplate();
}
