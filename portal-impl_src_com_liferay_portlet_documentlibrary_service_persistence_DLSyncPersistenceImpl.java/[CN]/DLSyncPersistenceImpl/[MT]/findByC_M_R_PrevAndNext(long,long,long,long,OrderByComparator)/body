{
  DLSync dlSync=findByPrimaryKey(syncId);
  Session session=null;
  try {
    session=openSession();
    DLSync[] array=new DLSyncImpl[3];
    array[0]=getByC_M_R_PrevAndNext(session,dlSync,companyId,modifiedDate,repositoryId,orderByComparator,true);
    array[1]=dlSync;
    array[2]=getByC_M_R_PrevAndNext(session,dlSync,companyId,modifiedDate,repositoryId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
