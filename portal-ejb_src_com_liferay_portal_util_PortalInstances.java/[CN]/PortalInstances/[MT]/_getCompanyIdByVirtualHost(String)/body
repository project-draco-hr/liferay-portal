{
  if (Validator.isNull(host)) {
    return 0;
  }
  try {
    Iterator itr=CompanyLocalServiceUtil.getCompanies().iterator();
    while (itr.hasNext()) {
      Company company=(Company)itr.next();
      if (company.getVirtualHost().equals(host)) {
        return company.getCompanyId();
      }
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
  return 0;
}
