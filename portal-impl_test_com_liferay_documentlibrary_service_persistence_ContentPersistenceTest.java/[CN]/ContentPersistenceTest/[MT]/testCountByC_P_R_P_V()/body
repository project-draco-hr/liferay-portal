{
  Content content=createContent();
  int count=_persistence.countByC_P_R_P_V(content.getCompanyId(),content.getPortletId(),content.getRepositoryId(),content.getPath(),content.getVersion());
  assertEquals(0,count);
  _persistence.update(content);
  count=_persistence.countByC_P_R_P_V(content.getCompanyId(),content.getPortletId(),content.getRepositoryId(),content.getPath(),content.getVersion());
  assertEquals(1,count);
  _persistence.remove(content.getContentId());
  count=_persistence.countByC_P_R_P_V(content.getCompanyId(),content.getPortletId(),content.getRepositoryId(),content.getPath(),content.getVersion());
  assertEquals(0,count);
}
