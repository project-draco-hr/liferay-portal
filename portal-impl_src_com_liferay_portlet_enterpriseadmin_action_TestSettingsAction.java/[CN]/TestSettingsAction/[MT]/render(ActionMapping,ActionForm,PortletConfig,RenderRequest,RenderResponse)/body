{
  String type=ParamUtil.getString(req,"type");
  if (type.equals("ldapConnection")) {
    return mapping.findForward(getForward(req,"portlet.enterprise_admin.test_settings_ldap_connection"));
  }
 else   if (type.equals("ldapGroups")) {
    return mapping.findForward(getForward(req,"portlet.enterprise_admin.test_settings_ldap_groups"));
  }
 else   if (type.equals("ldapUsers")) {
    return mapping.findForward(getForward(req,"portlet.enterprise_admin.test_settings_ldap_users"));
  }
 else {
    SessionErrors.add(req,"unknownTest");
    return mapping.findForward("portlet.enterprise_admin.error");
  }
}
