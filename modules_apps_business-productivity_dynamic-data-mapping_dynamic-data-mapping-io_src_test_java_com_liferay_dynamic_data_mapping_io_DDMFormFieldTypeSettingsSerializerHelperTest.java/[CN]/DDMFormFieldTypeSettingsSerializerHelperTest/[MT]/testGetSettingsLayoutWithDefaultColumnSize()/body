{
  JSONFactory jsonFactory=new JSONFactoryImpl();
  DDMFormFieldTypeSettingsSerializerHelper ddmFormFieldTypeSettingsSerializerHelper=new DDMFormFieldTypeSettingsSerializerHelper(SampleDDMFormFieldTypeSettingsWithDefaultColumnSize.class,new DDMFormJSONSerializerImpl(),new DDMFormLayoutJSONSerializerImpl(),jsonFactory);
