{
  if (_message.isDiscussion()) {
    return MBDiscussionPermission.contains(permissionChecker,_message.getClassName(),_message.getClassPK(),_message.getMessageId(),_message.getUserId(),ActionKeys.VIEW);
  }
 else {
    return MBMessagePermission.contains(permissionChecker,_message,ActionKeys.VIEW);
  }
}
