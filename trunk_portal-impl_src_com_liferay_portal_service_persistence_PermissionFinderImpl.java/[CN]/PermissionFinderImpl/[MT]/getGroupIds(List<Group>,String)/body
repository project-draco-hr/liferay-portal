{
  if (groups.isEmpty()) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(groups.size() * 3 - 1);
  for (int i=0; i < groups.size(); i++) {
    sb.append(table);
    sb.append(".groupId = ?");
    if ((i + 1) < groups.size()) {
      sb.append(" OR ");
    }
  }
  return sb.toString();
}
