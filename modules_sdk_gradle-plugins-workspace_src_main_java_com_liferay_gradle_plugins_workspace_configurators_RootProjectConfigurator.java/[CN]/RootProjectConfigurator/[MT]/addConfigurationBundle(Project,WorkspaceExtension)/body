{
  Configuration configuration=GradleUtil.addConfiguration(project,BUNDLE_CONFIGURATION_NAME);
  configuration.defaultDependencies(new Action<DependencySet>(){
    @Override public void execute(    DependencySet dependencySet){
      GradleUtil.addDependency(project,BUNDLE_CONFIGURATION_NAME,workspaceExtension.getBundleArtifactGroup(),workspaceExtension.getBundleArtifactName(),workspaceExtension.getBundleArtifactVersion());
    }
  }
);
  configuration.setDescription("Configures the Liferay bundle to use for your project.");
  return configuration;
}
