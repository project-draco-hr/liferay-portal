{
  Download download=GradleUtil.addTask(project,DOWNLOAD_BUNDLE_TASK_NAME,Download.class);
  File destinationDir=new File(System.getProperty("user.home"),".liferay/bundles");
  destinationDir.mkdirs();
  download.dest(destinationDir);
  download.setDescription("Downloads the Liferay bundle zip file.");
  try {
    download.src(new Closure<String>(null){
      @SuppressWarnings("unused") public String doCall(){
        return workspaceExtension.getBundleUrl();
      }
    }
);
  }
 catch (  MalformedURLException murle) {
    throw new GradleException(murle.getMessage(),murle);
  }
  return download;
}
