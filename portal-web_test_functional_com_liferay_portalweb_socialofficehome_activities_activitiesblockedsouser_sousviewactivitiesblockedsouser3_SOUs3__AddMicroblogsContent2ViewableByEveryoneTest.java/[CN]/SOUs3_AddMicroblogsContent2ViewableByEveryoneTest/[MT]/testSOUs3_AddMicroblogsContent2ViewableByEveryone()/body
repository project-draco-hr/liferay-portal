{
  selenium.selectWindow("null");
  selenium.selectFrame("relative=top");
  selenium.open("/user/socialoffice03/so/dashboard");
  selenium.clickAt("//nav/ul/li[contains(.,'Microblogs')]/a/span",RuntimeVariables.replace("Microblogs"));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isElementPresent("//div[contains(@id,'_1_WAR_microblogsportlet_autocompleteContent')]"));
  assertEquals(RuntimeVariables.replace("Microblogs Post1"),selenium.getText("//div[@class='content']"));
  selenium.clickAt("//div[contains(@id,'_1_WAR_microblogsportlet_autocompleteContent')]",RuntimeVariables.replace("Update your status..."));
  selenium.waitForElementPresent("//textarea");
  selenium.clickAt("//textarea",RuntimeVariables.replace("Text area"));
  selenium.sendKeys("//textarea",RuntimeVariables.replace("Microblogs Post2"));
  selenium.waitForText("//span[@class='microblogs-countdown']","134");
  assertEquals(RuntimeVariables.replace("134"),selenium.getText("//span[@class='microblogs-countdown']"));
  selenium.select("//select[@id='_1_WAR_microblogsportlet_socialRelationType']",RuntimeVariables.replace("Everyone"));
  selenium.clickAt("//input[@value='Post']",RuntimeVariables.replace("Post"));
  selenium.waitForVisible("xPath=(//div[@class='content'])[contains(.,'Microblogs Post2')]");
  assertEquals(RuntimeVariables.replace("Microblogs Post2"),selenium.getText("xPath=(//div[@class='content'])[1]"));
  assertEquals(RuntimeVariables.replace("Comment"),selenium.getText("xPath=(//span[@class='action comment']/a)[1]"));
  assertEquals(RuntimeVariables.replace("Microblogs Post1"),selenium.getText("xPath=(//div[@class='content'])[2]"));
  assertEquals(RuntimeVariables.replace("Comment"),selenium.getText("xPath=(//span[@class='action comment']/a)[2]"));
  assertTrue(selenium.isElementNotPresent("//span[@class='action repost']/a"));
}
