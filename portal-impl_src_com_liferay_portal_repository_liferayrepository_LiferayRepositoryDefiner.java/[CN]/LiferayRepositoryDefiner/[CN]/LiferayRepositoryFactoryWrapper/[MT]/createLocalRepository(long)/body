{
  LocalRepository localRepository=_repositoryFactory.createLocalRepository(repositoryId);
  ModelValidator<ContentReference> modelValidator=ModelValidatorUtil.getDefaultFileSizeModelValidator();
  LocalRepository localRepositoryWrapper=new ModelValidatorLocalRepositoryWrapper(localRepository,modelValidator);
  return new LiferayWorkflowLocalRepositoryWrapper(localRepositoryWrapper,_liferayWorkflowCapability);
}
