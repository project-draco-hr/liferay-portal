{
  Iterator itr=MBCategoryUtil.findByG_P(category.getGroupId(),category.getCategoryId()).iterator();
  while (itr.hasNext()) {
    MBCategory curCategory=(MBCategory)itr.next();
    deleteCategory(curCategory);
  }
  MBTopicLocalServiceUtil.deleteTopics(category.getCategoryId());
  ResourceLocalServiceUtil.deleteResource(category.getCompanyId(),MBCategory.class.getName(),Resource.TYPE_CLASS,Resource.SCOPE_INDIVIDUAL,category.getPrimaryKey().toString());
  MBCategoryUtil.remove(category.getCategoryId());
}
