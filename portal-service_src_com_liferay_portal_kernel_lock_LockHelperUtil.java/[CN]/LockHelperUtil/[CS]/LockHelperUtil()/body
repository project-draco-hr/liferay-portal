{
  Registry registry=RegistryUtil.getRegistry();
  registry.registerService(LockHelper.class,new LockHelperImpl());
  ServiceTracker<LockHelper,LockHelper> serviceTracker=registry.trackServices(LockHelper.class);
  serviceTracker.open();
  try {
    _lockHelper=serviceTracker.waitForService(0);
  }
 catch (  Exception e) {
    throw new IllegalStateException("Unable to initialize lock helper util",e);
  }
 finally {
    serviceTracker.close();
  }
}
