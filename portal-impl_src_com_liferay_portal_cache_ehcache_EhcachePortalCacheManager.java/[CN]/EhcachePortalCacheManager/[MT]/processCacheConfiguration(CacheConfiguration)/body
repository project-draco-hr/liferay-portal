{
  cacheConfiguration.addBootstrapCacheLoaderFactory(null);
  cacheConfiguration.getCacheEventListenerConfigurations().clear();
  CacheEventListenerFactoryConfiguration configuration=new CacheEventListenerFactoryConfiguration();
  configuration.setClass(EhcachePortalCacheClusterReplicatorFactory.class.getName());
  cacheConfiguration.addCacheEventListenerFactory(configuration);
}
