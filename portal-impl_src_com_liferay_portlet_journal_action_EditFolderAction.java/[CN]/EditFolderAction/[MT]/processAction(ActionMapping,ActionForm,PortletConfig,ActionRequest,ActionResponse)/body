{
  String cmd=ParamUtil.getString(actionRequest,Constants.CMD);
  try {
    if (cmd.equals(Constants.ADD) || cmd.equals(Constants.UPDATE)) {
      updateFolder(actionRequest);
    }
 else     if (cmd.equals(Constants.DELETE)) {
      deleteFolder(actionRequest);
    }
 else     if (cmd.equals(Constants.MOVE)) {
      moveFolder(actionRequest);
    }
    sendRedirect(actionRequest,actionResponse);
  }
 catch (  Exception e) {
    if (e instanceof NoSuchFolderException || e instanceof PrincipalException) {
      SessionErrors.add(actionRequest,e.getClass());
      setForward(actionRequest,"portlet.journal.error");
    }
 else     if (e instanceof DuplicateFolderNameException || e instanceof FolderNameException) {
      SessionErrors.add(actionRequest,e.getClass());
    }
 else {
      throw e;
    }
  }
}
