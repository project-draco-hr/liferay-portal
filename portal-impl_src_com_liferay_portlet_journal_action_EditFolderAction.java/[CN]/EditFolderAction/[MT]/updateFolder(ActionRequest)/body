{
  long folderId=ParamUtil.getLong(actionRequest,"folderId");
  long parentFolderId=ParamUtil.getLong(actionRequest,"parentFolderId");
  String name=ParamUtil.getString(actionRequest,"name");
  String description=ParamUtil.getString(actionRequest,"description");
  ServiceContext serviceContext=ServiceContextFactory.getInstance(JournalFolder.class.getName(),actionRequest);
  if (folderId <= 0) {
    JournalFolderServiceUtil.addFolder(serviceContext.getScopeGroupId(),parentFolderId,name,description,serviceContext);
  }
 else {
    JournalFolderServiceUtil.updateFolder(folderId,parentFolderId,name,description,false,serviceContext);
  }
}
