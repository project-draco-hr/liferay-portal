{
  int addMinutes=((second < 0) ? (second - 59) : second) / 60;
  second-=addMinutes * 60;
  minute+=addMinutes;
  int addHours=((minute < 0) ? (minute - 59) : minute) / 60;
  minute-=addHours * 60;
  hour+=addHours;
  int addDays=((hour < 0) ? (hour - 23) : hour) / 24;
  hour-=addDays * 24;
  day+=addDays;
}
