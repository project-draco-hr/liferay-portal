{
  try {
    long userId=PortalUtil.getUserId(req);
    String messageId=ParamUtil.getString(req,"messageId");
    MBMessageDisplay messageDisplay=MBMessageServiceUtil.getMessageDisplay(messageId,userId);
    req.setAttribute(WebKeys.MESSAGE_BOARDS_MESSAGE,messageDisplay);
    return mapping.findForward("portlet.message_boards.view_message");
  }
 catch (  Exception e) {
    if (e instanceof NoSuchMessageException || e instanceof PrincipalException) {
      SessionErrors.add(req,e.getClass().getName());
      return mapping.findForward("portlet.message_boards.error");
    }
 else {
      throw e;
    }
  }
}
