{
  Map<String,Serializable> publishLayoutLocalSettingsMap=ExportImportConfigurationSettingsMapFactory.buildPublishLayoutLocalSettingsMap(user.getUserId(),sourceGroupId,targetGroupId,privateLayout,ExportImportHelperUtil.getAllLayoutIds(sourceGroupId,privateLayout),parameterMap,user.getLocale(),user.getTimeZone());
  return ExportImportConfigurationLocalServiceUtil.addExportImportConfiguration(user.getUserId(),sourceGroupId,StringPool.BLANK,StringPool.BLANK,ExportImportConfigurationConstants.TYPE_PUBLISH_LAYOUT_LOCAL,publishLayoutLocalSettingsMap,WorkflowConstants.STATUS_DRAFT,new ServiceContext());
}
