{
  long templateId=ParamUtil.getLong(portletRequest,"templateId");
  Map<Locale,String> nameMap=LocalizationUtil.getLocalizationMap(portletRequest,"name");
  Map<Locale,String> descriptionMap=LocalizationUtil.getLocalizationMap(portletRequest,"description");
  ServiceContext serviceContext=ServiceContextFactory.getInstance(DDMTemplate.class.getName(),portletRequest);
  return _ddmTemplateService.copyTemplate(templateId,nameMap,descriptionMap,serviceContext);
}
