{
  if (!InlineSQLHelperUtil.isEnabled(companyId,0)) {
    return findByC_T_PrevAndNext(organizationId,companyId,treePath,orderByComparator);
  }
  Organization organization=findByPrimaryKey(organizationId);
  Session session=null;
  try {
    session=openSession();
    Organization[] array=new OrganizationImpl[3];
    array[0]=filterGetByC_T_PrevAndNext(session,organization,companyId,treePath,orderByComparator,true);
    array[1]=organization;
    array[2]=filterGetByC_T_PrevAndNext(session,organization,companyId,treePath,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
