{
  WorkflowDefinitionLink workflowDefinitionLink=findByPrimaryKey(workflowDefinitionLinkId);
  Session session=null;
  try {
    session=openSession();
    WorkflowDefinitionLink[] array=new WorkflowDefinitionLinkImpl[3];
    array[0]=getByCompanyId_PrevAndNext(session,workflowDefinitionLink,companyId,orderByComparator,true);
    array[1]=workflowDefinitionLink;
    array[2]=getByCompanyId_PrevAndNext(session,workflowDefinitionLink,companyId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
