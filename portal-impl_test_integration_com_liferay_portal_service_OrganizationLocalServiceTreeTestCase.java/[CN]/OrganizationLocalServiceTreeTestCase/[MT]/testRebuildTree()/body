{
  createOrganizationTree();
  Field field=ReflectionUtil.getDeclaredField(PropsValues.class,"MODEL_TREE_REBUILD_QUERY_RESULTS_BATCH_SIZE");
  int oldSize=field.getInt(null);
  field.setInt(null,3);
  try {
    OrganizationLocalServiceUtil.rebuildTree(TestPropsValues.getCompanyId());
    for (    Organization organization : _organizations) {
      Assert.assertEquals(organization.buildTreePath(),organization.getTreePath());
    }
  }
  finally {
    field.setInt(null,oldSize);
  }
}
