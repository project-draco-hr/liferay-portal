{
  Session session=null;
  try {
    session=openSession();
    StringBuffer query=new StringBuffer();
    query.append("FROM ShoppingCategory IN CLASS com.liferay.portlet.shopping.service.persistence.ShoppingCategoryHBM ");
    query.append("ORDER BY ");
    query.append("parentCategoryId ASC").append(", ");
    query.append("name ASC");
    Query q=session.createQuery(query.toString());
    Iterator itr=q.iterate();
    List list=new ArrayList();
    while (itr.hasNext()) {
      ShoppingCategoryHBM shoppingCategoryHBM=(ShoppingCategoryHBM)itr.next();
      list.add(ShoppingCategoryHBMUtil.model(shoppingCategoryHBM));
    }
    return list;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
