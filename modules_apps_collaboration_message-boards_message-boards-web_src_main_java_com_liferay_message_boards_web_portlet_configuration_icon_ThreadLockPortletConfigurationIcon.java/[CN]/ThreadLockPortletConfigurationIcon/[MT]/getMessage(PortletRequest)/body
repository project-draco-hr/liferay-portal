{
  try {
    MBMessage message=ActionUtil.getMessage(portletRequest);
    MBThread thread=message.getThread();
    String key="lock";
    if (thread.isLocked()) {
      key="unlock";
    }
    return LanguageUtil.get(getResourceBundle(getLocale(portletRequest)),key);
  }
 catch (  Exception e) {
    return null;
  }
}
