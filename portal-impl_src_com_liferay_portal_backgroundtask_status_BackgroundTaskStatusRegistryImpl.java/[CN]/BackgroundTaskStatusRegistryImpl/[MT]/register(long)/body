{
  Lock writeLock=_readWriteLock.writeLock();
  writeLock.lock();
  try {
    BackgroundTaskStatus backgroundTaskStatus=_backgroundTaskStatusMap.get(backgroundTaskId);
    if (backgroundTaskStatus == null) {
      backgroundTaskStatus=new BackgroundTaskStatus();
      _backgroundTaskStatusMap.put(backgroundTaskId,backgroundTaskStatus);
    }
    return backgroundTaskStatus;
  }
  finally {
    writeLock.unlock();
  }
}
