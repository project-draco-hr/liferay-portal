{
  List<Long> folderIds=new ArrayList<Long>();
  if (rootFolderId != JournalFolderConstants.DEFAULT_PARENT_FOLDER_ID) {
    folderIds=journalFolderService.getFolderIds(groupId,rootFolderId);
  }
  QueryDefinition<JournalArticle> queryDefinition=new QueryDefinition<JournalArticle>(status);
  return journalArticleFinder.filterCountByG_U_F_C(groupId,userId,folderIds,JournalArticleConstants.CLASSNAME_ID_DEFAULT,queryDefinition);
}
