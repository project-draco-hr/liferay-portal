{
  DDMContent ddmContent=_ddmContentLocalService.getContent(classPK);
  DDMStorageLink ddmStorageLink=_ddmStorageLinkLocalService.getClassStorageLink(ddmContent.getPrimaryKey());
  DDMStructure ddmStructure=_ddmStructureLocalService.getStructure(ddmStorageLink.getStructureId());
  DDMFormValues ddmFormValues=_ddmFormValuesJSONDeserializer.deserialize(ddmStructure.getDDMForm(),ddmContent.getData());
  return ddmFormValues;
}
