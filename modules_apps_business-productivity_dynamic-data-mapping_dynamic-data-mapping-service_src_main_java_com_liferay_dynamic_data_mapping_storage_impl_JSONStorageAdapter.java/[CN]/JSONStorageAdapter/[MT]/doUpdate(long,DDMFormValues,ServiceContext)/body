{
  validate(ddmFormValues,serviceContext);
  DDMContent ddmContent=_ddmContentLocalService.getContent(classPK);
  ddmContent.setModifiedDate(serviceContext.getModifiedDate(null));
  String serializedDDMFormValues=_ddmFormValuesJSONSerializer.serialize(ddmFormValues);
  ddmContent.setData(serializedDDMFormValues);
  _ddmContentLocalService.updateContent(ddmContent.getPrimaryKey(),ddmContent.getName(),ddmContent.getDescription(),ddmContent.getData(),serviceContext);
}
