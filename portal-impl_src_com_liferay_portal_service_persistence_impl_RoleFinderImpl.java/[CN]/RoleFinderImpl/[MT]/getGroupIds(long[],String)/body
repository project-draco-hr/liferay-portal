{
  if (groupIds.length == 0) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(groupIds.length * 3 - 1);
  for (int i=0; i < groupIds.length; i++) {
    sb.append(table);
    sb.append(".groupId = ?");
    if ((i + 1) < groupIds.length) {
      sb.append(" OR ");
    }
  }
  return sb.toString();
}
