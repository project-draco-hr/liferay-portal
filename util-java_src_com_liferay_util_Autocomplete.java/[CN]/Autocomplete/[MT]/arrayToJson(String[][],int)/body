{
  if (max <= 0) {
    max=array.length;
  }
  JSONArray jsonArray=JSONFactoryUtil.createJSONArray();
  for (int i=0; (i < array.length) && (i < max); i++) {
    String text=array[i][0];
    String value=array[i][1];
    Map<String,String> map=new HashMap<>();
    map.put("text",text);
    map.put("value",value);
    jsonArray.put(map);
  }
  return jsonArray;
}
