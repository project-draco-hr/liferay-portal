{
  String className=targetClass.getName();
  if (className.contains("com.liferay") && className.contains("Util")) {
    throw new JSONException(context.getCurrentPath() + ": Unable to instantiate class for security reasons: " + className);
  }
  try {
    Object target=instantiate(targetClass);
    Map values=(Map)value;
    if (PropsValues.JSON_DESERIALIZER_STRICT_MODE) {
      validateBeanValues(values,targetClass);
    }
    return context.bindIntoObject(values,target,targetType);
  }
 catch (  Exception e) {
    throw new JSONException(context.getCurrentPath() + ": Unable to instantiate an instance of " + targetClass.getName(),e);
  }
}
