{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection(Constants.DATA_SOURCE);
    ps=con.prepareStatement(_CHECK_PASSWORD);
    ps.setString(1,userId);
    rs=ps.executeQuery();
    if (rs.next()) {
      if (!password.equals(rs.getString(1))) {
        throw new PasswordCheckFailedException("Passwords do not match");
      }
    }
 else {
      throw new PasswordCheckFailedException("User with the id " + userId + " does not exist");
    }
  }
 catch (  NamingException ne) {
    return userId;
  }
catch (  Exception e) {
    throw new CustomRegistryException(e);
  }
 finally {
    DataAccess.cleanUp(con,ps,rs);
  }
  return userId;
}
