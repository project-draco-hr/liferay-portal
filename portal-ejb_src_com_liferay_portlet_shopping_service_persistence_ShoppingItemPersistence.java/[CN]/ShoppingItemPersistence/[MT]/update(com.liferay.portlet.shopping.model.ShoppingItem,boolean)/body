{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(shoppingItem);
    }
 else {
      if (shoppingItem.isNew()) {
        session.save(shoppingItem);
      }
    }
    session.flush();
    shoppingItem.setNew(false);
    return shoppingItem;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
