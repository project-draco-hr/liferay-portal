{
  Group group=GroupLocalServiceUtil.fetchGroup(companyId,name);
  if (group != null) {
    return group;
  }
  int type=GroupConstants.TYPE_SITE_OPEN;
  String friendlyURL=StringPool.SLASH + FriendlyURLNormalizerUtil.normalize(name);
  boolean site=true;
  boolean active=true;
  boolean manualMembership=true;
  int membershipRestriction=GroupConstants.DEFAULT_MEMBERSHIP_RESTRICTION;
  return GroupLocalServiceUtil.addGroup(userId,parentGroupId,null,0,GroupConstants.DEFAULT_LIVE_GROUP_ID,name,description,type,manualMembership,membershipRestriction,friendlyURL,site,active,ServiceTestUtil.getServiceContext());
}
