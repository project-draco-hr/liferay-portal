{
  for (int i=0; i < BaseSourceProcessor.PORTAL_MAX_DIR_LEVEL; i++) {
    File file=new File(baseDirName + ".git");
    if (file.exists()) {
      return i;
    }
    baseDirName="../" + baseDirName;
  }
  System.out.println("Unable to retrieve files because .git directory is missing.");
  return -1;
}
