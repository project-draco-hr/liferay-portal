{
  ServletContext servletContext=((PortletContextImpl)_portletContext).getServletContext();
  String servletContextName=servletContext.getServletContextName();
  if (servletContextName != null && ServletContextPool.containsKey(servletContextName)) {
    servletContext=ServletContextPool.get(servletContextName);
    return servletContext.getContextPath();
  }
  return StringPool.SLASH.concat(_portletContext.getPortletContextName());
}
