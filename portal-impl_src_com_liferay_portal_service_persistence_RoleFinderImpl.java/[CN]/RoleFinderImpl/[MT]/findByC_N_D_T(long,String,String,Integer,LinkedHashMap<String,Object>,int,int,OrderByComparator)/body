{
  name=StringUtil.lowerCase(name);
  description=StringUtil.lowerCase(description);
  Session session=null;
  try {
    session=openSession();
    String sql=CustomSQLUtil.get(FIND_BY_C_N_D_T);
    if (type == null) {
      sql=StringUtil.replace(sql,"AND (Role_.type_ = ?)","");
    }
    sql=StringUtil.replace(sql,"[$JOIN$]",getJoin(params));
    sql=StringUtil.replace(sql,"[$WHERE$]",getWhere(params));
    sql=CustomSQLUtil.replaceOrderBy(sql,obc);
    SQLQuery q=session.createSQLQuery(sql);
    q.addEntity("Role_",RoleImpl.class);
    QueryPos qPos=QueryPos.getInstance(q);
    setJoin(qPos,params);
    qPos.add(companyId);
    qPos.add(name);
    qPos.add(name);
    qPos.add(description);
    qPos.add(description);
    if (type != null) {
      qPos.add(type);
    }
    return Collections.unmodifiableList((List<Role>)QueryUtil.list(q,getDialect(),start,end));
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
 finally {
    closeSession(session);
  }
}
