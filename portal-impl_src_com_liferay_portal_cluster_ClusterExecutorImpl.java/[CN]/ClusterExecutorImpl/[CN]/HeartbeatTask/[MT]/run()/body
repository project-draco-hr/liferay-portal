{
  long expirationTime=System.currentTimeMillis() + (PropsValues.CLUSTER_EXECUTOR_HEARTBEAT_INTERVAL * 2);
  try {
    ClusterRequest clusterNotifyRequest=ClusterRequest.createClusterNotifyRequest(expirationTime,_localClusterNode);
    sendMulticastRequest(clusterNotifyRequest);
  }
 catch (  Exception e) {
    if (_log.isDebugEnabled()) {
      _log.debug("Unable to send check in request",e);
    }
    _scheduledExecutorService.scheduleWithFixedDelay(new HeartbeatTask(),0,PropsValues.CLUSTER_EXECUTOR_HEARTBEAT_INTERVAL,TimeUnit.MILLISECONDS);
  }
}
