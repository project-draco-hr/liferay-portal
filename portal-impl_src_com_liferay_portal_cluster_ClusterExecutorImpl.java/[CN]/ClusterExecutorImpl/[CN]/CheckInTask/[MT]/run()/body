{
  long expirationTime=System.currentTimeMillis() + _CHECK_IN_INTERVAL * 2;
  try {
    ClusterRequest clusterNotifyRequest=ClusterRequest.createClusterNotifyRequest(expirationTime,_localClusterNode);
    sendMulticastRequest(clusterNotifyRequest);
  }
 catch (  Exception e) {
    if (_log.isDebugEnabled()) {
      _log.debug("unable to send check in request, will reschedule " + "this task",e);
    }
    _scheduledExecutorService.scheduleWithFixedDelay(new CheckInTask(),0,_CHECK_IN_INTERVAL,TimeUnit.MILLISECONDS);
  }
}
