{
  Repository repository=repositoryPersistence.findByPrimaryKey(repositoryId);
  repository.setModifiedDate(new Date());
  repository.setName(name);
  repository.setDescription(description);
  repository.setTypeSettingsProperties(typeSettingsProperties);
  repositoryPersistence.update(repository,false);
  com.liferay.portal.kernel.repository.Repository repositoryImpl=getRepositoryImpl(repositoryId);
  repositoryImpl.updateRepository(typeSettingsProperties);
}
