{
  ReindexBackgroundTaskStatusMessage reindexBackgroundTaskStatusMessage=new ReindexBackgroundTaskStatusMessage();
  reindexBackgroundTaskStatusMessage.put(ReindexBackgroundTaskConstants.PHASE,phase);
  reindexBackgroundTaskStatusMessage.put(ReindexBackgroundTaskConstants.COMPANY_ID,companyId);
  reindexBackgroundTaskStatusMessage.put(ReindexBackgroundTaskConstants.COMPANY_IDS,companyIds);
