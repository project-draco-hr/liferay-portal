{
  if (Validator.isNotNull(value)) {
    Field field=new Field(name,value);
    field.setTokenized(true);
    _fields.put(name,field);
    String[] sortableTextFields=PropsUtil.getArray(PropsKeys.LUCENE_SORTABLE_TEXT_FIELDS);
    if (ArrayUtil.contains(sortableTextFields,name)) {
      String sortableName=PropsUtil.get(PropsKeys.LUCENE_COPY_FIELDS,new Filter(name));
      field=new Field(sortableName,value);
      _fields.put(sortableName,field);
    }
  }
}
