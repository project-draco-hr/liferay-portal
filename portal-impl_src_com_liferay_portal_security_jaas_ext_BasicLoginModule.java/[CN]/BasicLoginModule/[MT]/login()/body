{
  String[] credentials=null;
  try {
    credentials=authenticate();
  }
 catch (  Exception e) {
    _log.error(e);
    throw new LoginException();
  }
  if (credentials != null && credentials.length == 2) {
    setPrincipal(getPortalPrincipal(credentials[0]));
    setPassword(credentials[1]);
    return true;
  }
 else {
    throw new LoginException();
  }
}
