{
  DocumentBuilderFactory documentBuilderFactory=newDocumentBuilderFactory();
  if (!PropsValues.XML_SECURITY_ENABLED) {
    return documentBuilderFactory;
  }
  try {
    documentBuilderFactory.setFeature(_FEATURES_DISALLOW_DOCTYPE_DECL,false);
  }
 catch (  Exception e) {
    _log.error("Unable to initialize unsafe DocumentBuilderFactory!",e);
  }
  return documentBuilderFactory;
}
