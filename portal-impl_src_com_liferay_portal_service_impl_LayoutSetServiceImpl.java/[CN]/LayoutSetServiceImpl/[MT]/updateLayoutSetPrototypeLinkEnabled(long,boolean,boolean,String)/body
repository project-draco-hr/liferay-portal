{
  GroupPermissionUtil.check(getPermissionChecker(),groupId,ActionKeys.UPDATE);
  LayoutSet layoutSet=layoutSetLocalService.getLayoutSet(groupId,privateLayout);
  if (layoutSet.isLayoutSetPrototypeLinkEnabled() && !layoutSetPrototypeLinkEnabled) {
    PortalPermissionUtil.check(getPermissionChecker(),ActionKeys.UNLINK_LAYOUT_SET_PROTOTYPE);
  }
  layoutSetLocalService.updateLayoutSetPrototypeLinkEnabled(groupId,privateLayout,layoutSetPrototypeLinkEnabled,layoutSetPrototypeUuid);
}
