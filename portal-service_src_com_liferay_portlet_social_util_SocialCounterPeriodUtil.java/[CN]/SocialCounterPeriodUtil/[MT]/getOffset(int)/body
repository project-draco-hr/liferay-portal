{
  if (_isMonthlyPeriod()) {
    GregorianCalendar calendar=new GregorianCalendar();
    GregorianCalendar calendar2=new GregorianCalendar();
    calendar2.setTimeInMillis(_BASE_TIME + activityDay * Time.DAY);
    int yearDiff=calendar.get(Calendar.YEAR) - calendar2.get(Calendar.YEAR);
    int monthDiff=calendar.get(Calendar.MONTH) - calendar2.get(Calendar.MONTH);
    return -(yearDiff * 12 + monthDiff);
  }
  return -((getStartPeriod() - activityDay) / getPeriodLength());
}
