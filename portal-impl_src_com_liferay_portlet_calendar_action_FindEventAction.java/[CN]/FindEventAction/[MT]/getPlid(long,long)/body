{
  if (plid != LayoutConstants.DEFAULT_PLID) {
    try {
      Layout layout=LayoutLocalServiceUtil.getLayout(plid);
      LayoutTypePortlet layoutTypePortlet=(LayoutTypePortlet)layout.getLayoutType();
      if (layoutTypePortlet.hasPortletId(PortletKeys.CALENDAR)) {
        return plid;
      }
    }
 catch (    NoSuchLayoutException nsle) {
    }
  }
  CalEvent event=CalEventLocalServiceUtil.getEvent(eventId);
  plid=PortalUtil.getPlidFromPortletId(event.getGroupId(),false,PortletKeys.CALENDAR);
  if (plid == LayoutConstants.DEFAULT_PLID) {
    throw new NoSuchLayoutException("No public page was found with the Calendar portlet.");
  }
 else {
    return plid;
  }
}
