{
  DDMStructure structure=addStructure(_recordSetClassNameId,StringUtil.randomString());
  addDisplayTemplate(structure.getStructureId(),StringUtil.randomString(),WorkflowConstants.STATUS_APPROVED);
  addDisplayTemplate(structure.getStructureId(),StringUtil.randomString(),WorkflowConstants.STATUS_APPROVED);
  addDisplayTemplate(structure.getStructureId(),StringUtil.randomString(),WorkflowConstants.STATUS_DRAFT);
  List<DDMTemplate> templates=DDMTemplateServiceUtil.getTemplates(TestPropsValues.getCompanyId(),group.getGroupId(),_structureClassNameId,structure.getStructureId(),_recordSetClassNameId,DDMTemplateConstants.TEMPLATE_TYPE_DISPLAY,WorkflowConstants.STATUS_APPROVED);
  Assert.assertEquals(2,templates.size());
  templates=DDMTemplateServiceUtil.getTemplates(TestPropsValues.getCompanyId(),group.getGroupId(),_structureClassNameId,structure.getStructureId(),_recordSetClassNameId,DDMTemplateConstants.TEMPLATE_TYPE_DISPLAY,WorkflowConstants.STATUS_DRAFT);
  Assert.assertEquals(1,templates.size());
}
