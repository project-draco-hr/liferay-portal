{
  int initialCount=DDMTemplateLocalServiceUtil.searchCount(TestPropsValues.getCompanyId(),group.getGroupId(),_classNameId,0,0,null,null,null,WorkflowConstants.STATUS_APPROVED);
  addDisplayTemplate(_classNameId,0,_resourceClassNameId,"Test Template","Test Template",WorkflowConstants.STATUS_APPROVED);
