{
  int y=s.indexOf(oldSub);
  if (y >= 0) {
    StringBuilder sb=new StringBuilder();
    int length=oldSub.length();
    int x=0;
    while (x <= y) {
      sb.append(s.substring(x,y));
      sb.append(newSub);
      x=y + length;
      y=s.indexOf(oldSub,x);
    }
    sb.append(s.substring(x));
    return sb.toString();
  }
  return s;
}
