{
  String cmd=ParamUtil.getString(actionRequest,Constants.CMD);
  try {
    if (cmd.equals(Constants.ADD)) {
      addDefinition(actionRequest);
    }
    sendRedirect(actionRequest,actionResponse);
  }
 catch (  Exception e) {
    if (e instanceof NoSuchDefinitionException || e instanceof PrincipalException) {
      SessionErrors.add(actionRequest,e.getClass().getName());
      setForward(actionRequest,"portlet.workflow.error");
    }
 else {
      _log.error(e,e);
      SessionErrors.add(actionRequest,DefinitionXmlException.class.getName());
      setForward(actionRequest,"portlet.workflow.edit_definition");
    }
  }
}
