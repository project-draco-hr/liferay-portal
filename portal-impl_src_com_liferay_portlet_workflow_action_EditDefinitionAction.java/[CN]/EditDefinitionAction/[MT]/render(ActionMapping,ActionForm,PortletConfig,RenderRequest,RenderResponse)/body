{
  try {
    ActionUtil.getDefinition(req);
  }
 catch (  Exception e) {
    if (e instanceof NoSuchDefinitionException || e instanceof PrincipalException) {
      SessionErrors.add(req,e.getClass().getName());
      return mapping.findForward("portlet.workflow.error");
    }
 else {
      throw e;
    }
  }
  return mapping.findForward(getForward(req,"portlet.workflow.edit_definition"));
}
