{
  int diff=nodeLevel - _currentNodeLevel;
  if (diff > 0) {
    for (int i=0; i < diff; i++) {
      if (ordered) {
        append("<ol>");
      }
 else {
        append("<ul>");
      }
    }
  }
 else   if (diff < 0) {
    for (int i=0; i > diff; i--) {
      if (ordered) {
        append("</ol>");
      }
 else {
        append("</ul>");
      }
    }
  }
  _currentNodeLevel=nodeLevel;
}
