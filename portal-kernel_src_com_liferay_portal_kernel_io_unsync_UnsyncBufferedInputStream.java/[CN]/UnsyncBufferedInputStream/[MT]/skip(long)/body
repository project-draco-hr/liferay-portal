{
  if (inputStream == null) {
    throw new IOException("Input stream is null");
  }
  if (skip <= 0) {
    return 0;
  }
  long available=firstInvalidIndex - index;
  if (available > 0) {
    if (available < skip) {
      skip=available;
    }
  }
 else {
    if (markIndex < 0) {
      skip=inputStream.skip(skip);
    }
 else {
      readUnderlyingInputStream();
      available=firstInvalidIndex - index;
      if (available > 0) {
        if (available < skip) {
          skip=available;
        }
      }
    }
  }
  index+=skip;
  return skip;
}
