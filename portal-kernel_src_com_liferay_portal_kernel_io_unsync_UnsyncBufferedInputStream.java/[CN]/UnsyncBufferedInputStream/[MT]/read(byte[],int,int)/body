{
  if (inputStream == null) {
    throw new IOException("Input stream is null");
  }
  if (length <= 0) {
    return 0;
  }
  int read=0;
  while (true) {
    int currentRead=readOnce(bytes,offset + read,length - read);
    if (currentRead <= 0) {
      if (read == 0) {
        read=currentRead;
      }
      break;
    }
    read+=currentRead;
    if ((read >= length) || (inputStream.available() <= 0)) {
      break;
    }
  }
  return read;
}
