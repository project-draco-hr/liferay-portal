{
  File destinationDir=buildXsdTask.getDestinationDir();
  BasePluginConvention basePluginConvention=GradleUtil.getConvention(buildXsdTask.getProject(),BasePluginConvention.class);
  if ((destinationDir == null) || destinationDir.equals(basePluginConvention.getDistsDir())) {
    buildXsdTask.setDestinationDir(getLibDir(buildXsdTask.getProject()));
  }
}
