{
  TaskContainer taskContainer=project.getTasks();
  taskContainer.withType(AppServerTask.class,new Action<AppServerTask>(){
    @Override public void execute(    AppServerTask appServerTask){
      String appServerType=appServerTask.getAppServerType();
      if (Validator.isNull(appServerType)) {
        return;
      }
      AppServer appServer=liferayExtension.getAppServer(appServerType);
      appServerTask.merge(appServer);
    }
  }
);
}
