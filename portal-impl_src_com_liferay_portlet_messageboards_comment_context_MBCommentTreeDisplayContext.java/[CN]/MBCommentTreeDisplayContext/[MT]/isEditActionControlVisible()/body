{
  return MBDiscussionPermission.contains(_discussionRequestHelper.getPermissionChecker(),_discussionRequestHelper.getCompanyId(),_discussionRequestHelper.getScopeGroupId(),_discussionTaglibHelper.getPermissionClassName(),_discussionTaglibHelper.getPermissionClassPK(),_message.getMessageId(),_message.getUserId(),ActionKeys.UPDATE_DISCUSSION);
}
