{
  String publishButtonLabel=LanguageUtil.get(_discussionRequestHelper.getRequest(),"publish");
  if (WorkflowDefinitionLinkLocalServiceUtil.hasWorkflowDefinitionLink(_discussionRequestHelper.getCompanyId(),_discussionRequestHelper.getScopeGroupId(),CommentConstants.getDiscussionClassName())) {
    if (_message.isPending()) {
      publishButtonLabel="save";
    }
 else {
      publishButtonLabel=LanguageUtil.get(_discussionRequestHelper.getRequest(),"submit-for-publication");
    }
  }
  return publishButtonLabel;
}
