{
  Map<Locale,String> titleMap=new HashMap<Locale,String>();
  for (  Locale locale : _locales) {
    titleMap.put(locale,title);
  }
  return JournalArticleLocalServiceUtil.updateArticle(article.getUserId(),article.getGroupId(),article.getFolderId(),article.getArticleId(),article.getVersion(),titleMap,article.getDescriptionMap(),createLocalizedContent(content,LocaleUtil.getSiteDefault()),article.getLayoutUuid(),serviceContext);
}
