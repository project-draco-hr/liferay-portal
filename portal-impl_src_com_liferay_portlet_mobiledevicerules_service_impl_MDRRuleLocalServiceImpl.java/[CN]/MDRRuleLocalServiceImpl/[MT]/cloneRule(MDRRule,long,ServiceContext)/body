{
  MDRRuleGroup ruleGroup=mdrRuleGroupLocalService.getMDRRuleGroup(targetRuleGroupId);
  MDRRule newRule=addRule(ruleGroup.getGroupId(),ruleGroup.getRuleGroupId(),rule.getNameMap(),rule.getDescriptionMap(),rule.getType(),rule.getTypeSettings(),serviceContext);
  for (  MDRAction action : rule.getActions()) {
    serviceContext.setUuid(PortalUUIDUtil.generate());
    mdrActionLocalService.cloneAction(action,newRule.getRuleId(),serviceContext);
  }
  return newRule;
}
