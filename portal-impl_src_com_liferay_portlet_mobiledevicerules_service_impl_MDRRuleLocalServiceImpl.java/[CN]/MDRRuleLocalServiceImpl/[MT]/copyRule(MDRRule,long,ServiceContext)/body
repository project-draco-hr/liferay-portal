{
  MDRRuleGroup ruleGroup=mdrRuleGroupPersistence.findByPrimaryKey(ruleGroupId);
  MDRRule newRule=addRule(ruleGroup.getGroupId(),ruleGroup.getRuleGroupId(),rule.getNameMap(),rule.getDescriptionMap(),rule.getType(),rule.getTypeSettings(),serviceContext);
  List<MDRAction> actions=mdrActionPersistence.findByRuleId(rule.getRuleId());
  for (  MDRAction action : actions) {
    serviceContext.setUuid(PortalUUIDUtil.generate());
    mdrActionLocalService.copyAction(action,newRule.getRuleId(),serviceContext);
  }
  return newRule;
}
