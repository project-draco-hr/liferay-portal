{
  mdrRulePersistence.remove(rule);
  systemEventLocalService.addSystemEvent(0,rule.getGroupId(),MDRRule.class.getName(),rule.getRuleId(),rule.getUuid(),null,SystemEventConstants.TYPE_DELETE,null);
  MDRRuleGroup ruleGroup=mdrRuleGroupPersistence.fetchByPrimaryKey(rule.getRuleGroupId());
  if (ruleGroup != null) {
    ruleGroup.setModifiedDate(new Date());
    mdrRuleGroupPersistence.update(ruleGroup);
  }
}
