{
  if (plid != LayoutConstants.DEFAULT_PLID) {
    try {
      Layout layout=LayoutLocalServiceUtil.getLayout(plid);
      LayoutTypePortlet layoutTypePortlet=(LayoutTypePortlet)layout.getLayoutType();
      if (layoutTypePortlet.hasPortletId(PortletKeys.IMAGE_GALLERY)) {
        return plid;
      }
    }
 catch (    NoSuchLayoutException nsle) {
    }
  }
  if (groupId <= 0) {
    IGFolder folder=IGFolderLocalServiceUtil.getFolder(folderId);
    groupId=folder.getGroupId();
  }
  plid=PortalUtil.getPlidFromPortletId(groupId,PortletKeys.IMAGE_GALLERY);
  if (plid != LayoutConstants.DEFAULT_PLID) {
    return plid;
  }
 else {
    throw new NoSuchLayoutException("No page was found with the Image Gallery portlet.");
  }
}
