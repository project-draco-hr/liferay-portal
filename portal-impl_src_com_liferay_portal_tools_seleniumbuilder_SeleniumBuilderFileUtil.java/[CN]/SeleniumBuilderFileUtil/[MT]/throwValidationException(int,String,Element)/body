{
  String prefix="Error " + errorCode + ": ";
  String suffix=fileName + ":" + element.attributeValue("line-number");
  if (errorCode == 1000) {
    throw new IllegalArgumentException(prefix + "Invalid root element in " + suffix);
  }
 else   if (errorCode == 1001) {
    throw new IllegalArgumentException(prefix + "Missing child elements in " + suffix);
  }
 else   if (errorCode == 1002) {
    throw new IllegalArgumentException(prefix + "Invalid element in " + suffix);
  }
 else   if (errorCode == 1003) {
    throw new IllegalArgumentException(prefix + "Missing name attribute in " + suffix);
  }
 else {
    throw new IllegalArgumentException(prefix + suffix);
  }
}
