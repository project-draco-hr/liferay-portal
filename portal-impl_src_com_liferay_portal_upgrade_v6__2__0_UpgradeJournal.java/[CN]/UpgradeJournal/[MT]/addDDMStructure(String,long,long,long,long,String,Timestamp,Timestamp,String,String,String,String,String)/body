{
  long parentDDMStructureId=0;
  if (Validator.isNotNull(parentStructureId)) {
    parentDDMStructureId=updateStructure(parentStructureId);
  }
  Locale defaultLocale=JournalConverterUtil.getStructureNameDefaultLocale(name);
  long insertedDDMStructureId=getDDMStructureId(groupId,ddmStructureKey,false);
  if (insertedDDMStructureId == 0) {
    addDDMStructure(uuid_,ddmStructureId,groupId,companyId,userId,userName,createDate,modifiedDate,parentDDMStructureId,PortalUtil.getClassNameId(JournalArticle.class.getName()),ddmStructureKey,name,description,xsd,defaultLocale,PropsValues.JOURNAL_ARTICLE_STORAGE_TYPE,DDMStructureConstants.TYPE_DEFAULT);
  }
}
