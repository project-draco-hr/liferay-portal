{
  long parentDDMStructureId=0;
  if (Validator.isNotNull(parentStructureId)) {
    parentDDMStructureId=updateStructure(parentStructureId);
  }
  long insertedDDMStructureId=getDDMStructureId(groupId,ddmStructureKey,false);
  if (insertedDDMStructureId == 0) {
    addDDMStructure(uuid,ddmStructureId,groupId,companyId,userId,userName,createDate,modifiedDate,parentDDMStructureId,PortalUtil.getClassNameId("com.liferay.portlet.journal.model.JournalArticle"),ddmStructureKey,name,description,xsd,"xml",_DDM_STRUCTURE_TYPE_DEFAULT);
  }
}
