{
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    ps=connection.prepareStatement("select * from JournalStructure where structureId = ?");
    ps.setString(1,structureId);
    rs=ps.executeQuery();
    if (rs.next()) {
      return updateStructure(rs);
    }
    return 0;
  }
 catch (  Exception e) {
    _log.error("Unable to update journal structure with structure ID " + structureId);
    throw e;
  }
 finally {
    DataAccess.cleanUp(ps,rs);
  }
}
