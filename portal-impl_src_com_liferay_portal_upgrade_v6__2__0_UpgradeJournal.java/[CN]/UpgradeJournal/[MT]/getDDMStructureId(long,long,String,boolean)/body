{
  String globalGroupOr="";
  if (Validator.isNull(structureId)) {
    return 0;
  }
  Long ddmStructureId=_ddmStructureIds.get(groupId + "#" + structureId);
  if ((ddmStructureId == null) && (companyGroupId != 0)) {
    ddmStructureId=_ddmStructureIds.get(companyGroupId + "#" + structureId);
    globalGroupOr=" or global group";
  }
  if (ddmStructureId == null) {
    if (warn) {
      if (_log.isWarnEnabled()) {
        _log.warn("Unable to get the DDM structure ID for group " + groupId + globalGroupOr+ " and journal "+ "structure ID "+ structureId);
      }
    }
    return 0;
  }
  return ddmStructureId;
}
