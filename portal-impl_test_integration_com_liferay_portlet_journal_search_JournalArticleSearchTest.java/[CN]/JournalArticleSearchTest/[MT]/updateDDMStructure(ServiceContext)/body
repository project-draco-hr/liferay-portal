{
  String definition=DDMStructureTestUtil.getSampleStructureDefinition("title");
  DDMForm ddmForm=DDMFormXSDDeserializerUtil.deserialize(definition);
  DDMFormLayout ddmFormLayout=DDMUtil.getDefaultDDMFormLayout(ddmForm);
  DDMStructureLocalServiceUtil.updateStructure(_ddmStructure.getStructureId(),_ddmStructure.getParentStructureId(),_ddmStructure.getNameMap(),_ddmStructure.getDescriptionMap(),ddmForm,ddmFormLayout,serviceContext);
