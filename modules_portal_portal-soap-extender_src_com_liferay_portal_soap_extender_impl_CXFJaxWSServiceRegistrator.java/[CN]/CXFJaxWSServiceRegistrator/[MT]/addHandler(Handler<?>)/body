{
  _handlers.add(handler);
  for (  Map<Object,Server> servers : _serversPerBus.values()) {
    for (    Server server : servers.values()) {
      JaxWsEndpointImpl jaxWsEndpoint=(JaxWsEndpointImpl)server.getEndpoint();
      Binding binding=jaxWsEndpoint.getJaxwsBinding();
      @SuppressWarnings("rawtypes") List<Handler> handlers=binding.getHandlerChain();
      handlers.add(handler);
      binding.setHandlerChain(handlers);
    }
  }
}
