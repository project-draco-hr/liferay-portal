{
  PortalHibernateConfiguration newHibernateConfiguration=new PortalHibernateConfiguration();
  newHibernateConfiguration.setDataSource(dataSource);
  newHibernateConfiguration.afterPropertiesSet();
  SessionFactoryImplementor newSessionFactoryImplementor=(SessionFactoryImplementor)newHibernateConfiguration.getObject();
  SessionFactoryImpl sessionFactory=(SessionFactoryImpl)PortalBeanLocatorUtil.locate(name);
  sessionFactory.setSessionFactoryImplementor(newSessionFactoryImplementor);
}
