{
  long smallImageMaxFileSize=PrefsPropsUtil.getLong(PropsKeys.BLOGS_IMAGE_SMALL_MAX_SIZE);
  if (size > smallImageMaxFileSize) {
    throw new CoverImageSizeException();
  }
  String extension=FileUtil.getExtension(fileName);
  String[] imageExtensions=PrefsPropsUtil.getStringArray(PropsKeys.BLOGS_IMAGE_EXTENSIONS,StringPool.COMMA);
  for (  String imageExtension : imageExtensions) {
    if (StringPool.STAR.equals(imageExtension) || imageExtension.equals(StringPool.PERIOD + extension)) {
      return;
    }
  }
  throw new CoverImageNameException("Invalid cover image for fileName " + fileName);
}
