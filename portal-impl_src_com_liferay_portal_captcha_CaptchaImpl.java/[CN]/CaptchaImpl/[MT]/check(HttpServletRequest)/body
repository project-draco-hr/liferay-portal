{
  if (!isEnabled(request)) {
    return;
  }
  HttpSession session=request.getSession();
  String captchaText=(String)session.getAttribute(WebKeys.CAPTCHA_TEXT);
  if (captchaText == null) {
    if (_log.isErrorEnabled()) {
      _log.error("Captcha text is null. User " + request.getRemoteUser() + " may be trying to circumvent the captcha.");
    }
    throw new CaptchaTextException();
  }
  if (!captchaText.equals(ParamUtil.getString(request,"captchaText"))) {
    throw new CaptchaTextException();
  }
  if (_log.isDebugEnabled()) {
    _log.debug("Captcha text is valid");
  }
  session.removeAttribute(WebKeys.CAPTCHA_TEXT);
  if ((PropsValues.CAPTCHA_MAX_CHALLENGES > 0) && (Validator.isNotNull(request.getRemoteUser()))) {
    Integer count=(Integer)session.getAttribute(WebKeys.CAPTCHA_COUNT);
    if (count == null) {
      count=new Integer(1);
    }
 else {
      count=new Integer(count.intValue() + 1);
    }
    session.setAttribute(WebKeys.CAPTCHA_COUNT,count);
  }
}
