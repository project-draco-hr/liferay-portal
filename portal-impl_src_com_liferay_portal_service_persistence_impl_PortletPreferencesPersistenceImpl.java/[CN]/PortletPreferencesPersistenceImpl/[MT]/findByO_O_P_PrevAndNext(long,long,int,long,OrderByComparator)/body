{
  PortletPreferences portletPreferences=findByPrimaryKey(portletPreferencesId);
  Session session=null;
  try {
    session=openSession();
    PortletPreferences[] array=new PortletPreferencesImpl[3];
    array[0]=getByO_O_P_PrevAndNext(session,portletPreferences,ownerId,ownerType,plid,orderByComparator,true);
    array[1]=portletPreferences;
    array[2]=getByO_O_P_PrevAndNext(session,portletPreferences,ownerId,ownerType,plid,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
