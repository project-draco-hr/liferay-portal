{
  try {
    DDMFormRuleEvaluatorHelper ddmFormRuleEvaluatorHelper=new DDMFormRuleEvaluatorHelper(_ddmExpressionFactory,ddmForm,ddmFormValues,locale);
    List<DDMFormFieldEvaluationResult> ddmFormFieldEvaluationResults=ddmFormRuleEvaluatorHelper.evaluate();
    DDMFormEvaluationResult ddmFormEvaluationResult=new DDMFormEvaluationResult();
    ddmFormEvaluationResult.setDDMFormFieldEvaluationResults(ddmFormFieldEvaluationResults);
    return ddmFormEvaluationResult;
  }
 catch (  PortalException pe) {
    throw new DDMFormEvaluationException(pe);
  }
}
