{
  if (Validator.isNotNull(templateContent) && (!PropsValues.LAYOUT_TEMPLATE_CACHE_ENABLED || !_velocityEngine.resourceExists(templateId))) {
    StringResourceRepository stringResourceRepository=StringResourceLoader.getRepository();
    stringResourceRepository.putStringResource(templateId,templateContent);
    if (_log.isDebugEnabled()) {
      _log.debug("Added " + templateId + " to the Velocity template repository");
    }
  }
}
