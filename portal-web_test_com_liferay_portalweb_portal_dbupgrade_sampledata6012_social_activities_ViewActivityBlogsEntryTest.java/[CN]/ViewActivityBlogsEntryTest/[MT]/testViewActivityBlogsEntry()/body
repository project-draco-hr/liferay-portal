{
  selenium.selectWindow("null");
  selenium.selectFrame("relative=top");
  selenium.open("/web/joebloggs/home/");
  selenium.clickAt("link=Activities Page",RuntimeVariables.replace("Activities Page"));
  selenium.waitForPageToLoad("30000");
  assertEquals(RuntimeVariables.replace("Joe wrote a new blog entry, Blogs Entry Title, in Liferay."),selenium.getText("xPath=(//div[@class='activity-title'])[2]"));
  assertEquals(RuntimeVariables.replace("Blogs Entry Title"),selenium.getText("xPath=(//div[@class='activity-title'])[2]/a"));
}
