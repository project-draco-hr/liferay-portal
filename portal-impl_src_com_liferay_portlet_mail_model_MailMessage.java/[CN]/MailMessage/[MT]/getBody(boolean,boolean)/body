{
  String body=_content.toString();
  if (replaceLinks) {
    for (int i=0; i < _LINK_REGEXP.length; i++) {
      body=Pattern.compile(_LINK_REGEXP[i],Pattern.CASE_INSENSITIVE).matcher(body).replaceAll(_LINK_REPLACEMENT[i]);
    }
    String mailtoReplacement="<a href=\"javascript: ";
    if (popup) {
      mailtoReplacement+="opener.compose('$2')";
    }
 else {
      mailtoReplacement+="parent.compose('$2')";
    }
    body=Pattern.compile(_MAILTO_REGEXP,Pattern.CASE_INSENSITIVE).matcher(body).replaceAll(mailtoReplacement);
  }
  return body;
}
