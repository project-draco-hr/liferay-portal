{
  ThemeDisplay themeDisplay=(ThemeDisplay)liferayPortletRequest.getAttribute(com.liferay.portal.kernel.util.WebKeys.THEME_DISPLAY);
  StringBundler sb=new StringBundler(5);
  try {
    Layout layout=LayoutLocalServiceUtil.getLayout(_layoutRevision.getPlid());
    sb.append(PortalUtil.getLayoutFriendlyURL(layout,themeDisplay));
    sb.append("?layoutSetBranchId=");
    sb.append(_layoutRevision.getLayoutSetBranchId());
    sb.append("&layoutRevisionId=");
    sb.append(_layoutRevision.getLayoutRevisionId());
  }
 catch (  Exception e) {
  }
  return sb.toString();
}
