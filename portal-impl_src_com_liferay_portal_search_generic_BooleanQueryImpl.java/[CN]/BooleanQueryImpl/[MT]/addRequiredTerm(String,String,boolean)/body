{
  Query query=null;
  if (like) {
    query=new WildcardQueryImpl(new QueryTermImpl(field,String.valueOf(value)));
  }
 else {
    query=new TermQueryImpl(new QueryTermImpl(field,String.valueOf(value)));
  }
  try {
    add(query,BooleanClauseOccur.MUST);
  }
 catch (  ParseException pe) {
    throw new IllegalStateException("Bad query implementation",pe);
  }
}
