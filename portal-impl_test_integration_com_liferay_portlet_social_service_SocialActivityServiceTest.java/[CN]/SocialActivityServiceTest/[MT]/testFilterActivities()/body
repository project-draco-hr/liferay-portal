{
  FileEntry fileEntry=DLAppTestUtil.addFileEntry(group.getGroupId(),DLFolderConstants.DEFAULT_PARENT_FOLDER_ID,ServiceTestUtil.randomString() + ".txt",ServiceTestUtil.randomString(),true);
  removeGuestPermission(fileEntry);
  List<SocialActivity> activities=SocialActivityLocalServiceUtil.getGroupActivities(group.getGroupId(),QueryUtil.ALL_POS,QueryUtil.ALL_POS);
  Assert.assertEquals(1,activities.size());
  ServiceTestUtil.setUser(user);
  activities=SocialActivityServiceUtil.getGroupActivities(group.getGroupId(),QueryUtil.ALL_POS,QueryUtil.ALL_POS);
  Assert.assertEquals(0,activities.size());
  ServiceTestUtil.setUser(TestPropsValues.getUser());
}
