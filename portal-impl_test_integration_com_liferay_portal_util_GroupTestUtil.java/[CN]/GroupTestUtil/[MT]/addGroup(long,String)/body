{
  Group group=GroupLocalServiceUtil.fetchGroup(TestPropsValues.getCompanyId(),name);
  if (group != null) {
    return group;
  }
  String description="This is a test group.";
  int type=GroupConstants.TYPE_SITE_OPEN;
  String friendlyURL=StringPool.SLASH + FriendlyURLNormalizerUtil.normalize(name);
  boolean site=true;
  boolean active=true;
  boolean manualMembership=true;
  int membershipRestriction=GroupConstants.DEFAULT_MEMBERSHIP_RESTRICTION;
  return GroupLocalServiceUtil.addGroup(TestPropsValues.getUserId(),parentGroupId,null,0,GroupConstants.DEFAULT_LIVE_GROUP_ID,name,description,type,friendlyURL,site,active,manualMembership,membershipRestriction,ServiceTestUtil.getServiceContext());
}
