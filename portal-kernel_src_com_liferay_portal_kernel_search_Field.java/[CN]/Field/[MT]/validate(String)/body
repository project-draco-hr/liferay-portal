{
  if (name.contains(StringPool.COMMA)) {
    throw new IllegalArgumentException("Name must not contain " + StringPool.COMMA + ": "+ name);
  }
  if (name.contains(StringPool.PERIOD)) {
    throw new IllegalArgumentException("Name must not contain " + StringPool.PERIOD + ": "+ name);
  }
  if (name.contains(StringPool.POUND)) {
    throw new IllegalArgumentException("Name must not contain " + StringPool.POUND + ": "+ name);
  }
  if (name.contains(StringPool.SLASH)) {
    throw new IllegalArgumentException("Name must not contain " + StringPool.SLASH + ": "+ name);
  }
  if (name.contains(StringPool.STAR)) {
    throw new IllegalArgumentException("Name must not contain " + StringPool.STAR + ": "+ name);
  }
  if (name.startsWith(StringPool.UNDERLINE)) {
    throw new IllegalArgumentException("Name must not start with " + StringPool.UNDERLINE + ": "+ name);
  }
}
