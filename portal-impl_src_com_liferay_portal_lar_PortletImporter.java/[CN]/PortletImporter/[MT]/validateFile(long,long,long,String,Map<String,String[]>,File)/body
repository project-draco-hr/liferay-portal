{
  try {
    ExportImportThreadLocal.setPortletValidationInProcess(true);
    Layout layout=LayoutLocalServiceUtil.getLayout(plid);
    ZipReader zipReader=ZipReaderFactoryUtil.getZipReader(file);
    PortletDataContext portletDataContext=PortletDataContextFactoryUtil.createImportPortletDataContext(layout.getCompanyId(),groupId,parameterMap,null,zipReader);
    validateFile(portletDataContext,portletId);
    MissingReferences missingReferences=ExportImportHelperUtil.validateMissingReferences(userId,groupId,parameterMap,file);
    Map<String,MissingReference> dependencyMissingReferences=missingReferences.getDependencyMissingReferences();
    if (!dependencyMissingReferences.isEmpty()) {
      throw new MissingReferenceException(missingReferences);
    }
    return missingReferences;
  }
  finally {
    ExportImportThreadLocal.setPortletValidationInProcess(false);
  }
}
