{
  selenium.open("/web/guest/home");
  for (int second=0; ; second++) {
    if (second >= 90) {
      fail("timeout");
    }
    try {
      if (selenium.isVisible("link=Blogs Portlet Permissions Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.clickAt("link=Blogs Portlet Permissions Page",RuntimeVariables.replace("Blogs Portlet Permissions Page"));
  selenium.waitForPageToLoad("30000");
  assertEquals(RuntimeVariables.replace("You do not have the roles required to access this portlet."),selenium.getText("//div[@class='portlet-msg-error']"));
}
