{
  Session session=null;
  try {
    session=openSession();
    if (role.isNew()) {
      session.save(role);
    }
    session.flush();
    role.setNew(false);
    return role;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
