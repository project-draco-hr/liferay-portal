{
  selenium.selectWindow("null");
  selenium.selectFrame("relative=top");
  selenium.open("/user/joebloggs/so/dashboard");
  assertEquals(RuntimeVariables.replace("Microblogs Status Update"),selenium.getText("//span[@class='portlet-title-default']"));
  assertTrue(selenium.isElementPresent("//div[contains(@id,'_2_WAR_microblogsportlet_autocompleteContent')]"));
  assertEquals(RuntimeVariables.replace("Microblogs Post"),selenium.getText("//div[@class='content']"));
  selenium.waitForVisible("//nav/ul/li[contains(.,'Microblogs')]/a/span");
  selenium.clickAt("//nav/ul/li[contains(.,'Microblogs')]/a/span",RuntimeVariables.replace("Microblogs"));
  selenium.waitForPageToLoad("30000");
  assertEquals(RuntimeVariables.replace("Joe Bloggs"),selenium.getText("//div[@class='user-name']/span"));
  assertEquals(RuntimeVariables.replace("Microblogs Post"),selenium.getText("//div[@class='content']"));
}
