{
  if (Validator.isNull(host)) {
    return 0;
  }
  try {
    List<Company> companies=CompanyLocalServiceUtil.getCompanies();
    for (    Company company : companies) {
      if (company.getVirtualHost().equals(host)) {
        return company.getCompanyId();
      }
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
  return 0;
}
