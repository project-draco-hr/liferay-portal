{
  ThemeDisplay themeDisplay=(ThemeDisplay)request.getAttribute(WebKeys.THEME_DISPLAY);
  PortletPreferences companyPortletPreferences=PrefsPropsUtil.getPreferences(themeDisplay.getCompanyId(),true);
  boolean companyMentionsEnabled=PrefsParamUtil.getBoolean(companyPortletPreferences,request,"mentionsEnabled",true);
  request.setAttribute(WebKeys.COMPANY_MENTIONS_ENABLED,companyMentionsEnabled);
  super.render(request,response);
}
