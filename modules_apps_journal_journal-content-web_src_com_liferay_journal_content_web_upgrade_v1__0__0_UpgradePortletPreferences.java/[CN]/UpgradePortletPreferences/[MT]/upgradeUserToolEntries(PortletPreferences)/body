{
  String[] userToolEntries=new String[0];
  userToolEntries=upgradeBooleanSelectableEntry(userToolEntries,portletPreferences,"enablePrint");
  Map<String,String> extensions=new HashMap<>();
  extensions.put("pdf","enablePDF");
  extensions.put("odt","enableODT");
  extensions.put("doc","enableDOC");
  extensions.put("txt","enableTXT");
  userToolEntries=upgradeMultiValueSelectableEntry(userToolEntries,portletPreferences,"extensions",extensions);
  userToolEntries=upgradeBooleanSelectableEntry(userToolEntries,portletPreferences,"showAvailableLocales");
  portletPreferences.setValue("userToolEntries",StringUtil.merge(userToolEntries));
}
