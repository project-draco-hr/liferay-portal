{
  int expireInterval=GetterUtil.getInteger(PropsUtil.get(PropsUtil.MESSAGE_BOARDS_EXPIRE_BAN_INTERVAL));
  if (expireInterval <= 0) {
    if (_log.isDebugEnabled()) {
      _log.debug("Auto expire of banned message board users is disabled");
    }
  }
 else {
    JobScheduler.schedule(new ExpireBanJob());
  }
}
