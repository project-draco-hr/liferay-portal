{
  long roleId=kaleoTaskAssignment.getAssigneeClassPK();
  Role role=RoleLocalServiceUtil.getRole(roleId);
  if (role.getType() == RoleConstants.TYPE_REGULAR) {
    return true;
  }
 else   if ((group != null) && group.isOrganization() && (role.getType() == RoleConstants.TYPE_ORGANIZATION)) {
    return true;
  }
 else   if ((group != null) && group.isSite() && (role.getType() == RoleConstants.TYPE_SITE)) {
    return true;
  }
  return false;
}
