{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(className);
    }
 else {
      if (className.isNew()) {
        session.save(className);
      }
    }
    session.flush();
    className.setNew(false);
    return className;
  }
 catch (  Exception e) {
    throw HibernateUtil.processException(e);
  }
 finally {
    closeSession(session);
  }
}
