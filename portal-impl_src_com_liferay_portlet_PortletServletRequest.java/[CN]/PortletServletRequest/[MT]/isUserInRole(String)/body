{
  if (_remoteUserId <= 0) {
    return false;
  }
 else {
    try {
      long companyId=PortalUtil.getCompanyId(_request);
      return RoleLocalServiceUtil.hasUserRole(_remoteUserId,companyId,role,true);
    }
 catch (    Exception e) {
      _log.error(e);
    }
    return _request.isUserInRole(role);
  }
}
