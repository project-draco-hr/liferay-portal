{
  if (_lifecycle.equals(PortletRequest.ACTION_PHASE) || _lifecycle.equals(PortletRequest.RESOURCE_PHASE)) {
    ClientDataRequest clientDataRequest=_getClientDataRequest();
    InputStream portletInputStream=clientDataRequest.getPortletInputStream();
    ServletInputStream servletInputStream=new ServletInputStreamAdapter(portletInputStream);
    return servletInputStream;
  }
 else {
    return null;
  }
}
