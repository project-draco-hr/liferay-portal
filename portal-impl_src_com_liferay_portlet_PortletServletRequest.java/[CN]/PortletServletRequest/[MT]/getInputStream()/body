{
  if (_lifecycle.equals(PortletRequest.ACTION_PHASE) || _lifecycle.equals(PortletRequest.RESOURCE_PHASE)) {
    InputStream portletInputStream=_getClientDataRequest().getPortletInputStream();
    ServletInputStream servletInputStream=new GenericServletInputStream(portletInputStream);
    return servletInputStream;
  }
 else {
    return null;
  }
}
