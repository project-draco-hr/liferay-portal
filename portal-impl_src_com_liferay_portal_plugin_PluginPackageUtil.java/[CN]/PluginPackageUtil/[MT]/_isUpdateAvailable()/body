{
  if (!PrefsPropsUtil.getBoolean(PropsUtil.PLUGIN_NOTIFICATIONS_ENABLED,PropsValues.PLUGIN_NOTIFICATIONS_ENABLED)) {
    return false;
  }
  if (_updateAvailable != null) {
    return _updateAvailable.booleanValue();
  }
 else   if (!_settingUpdateAvailable) {
    _settingUpdateAvailable=true;
    Thread indexerThread=indexerThread=new Thread(new UpdateAvailableRunner(),PluginPackageUtil.class.getName());
    indexerThread.setPriority(Thread.MIN_PRIORITY);
    indexerThread.start();
  }
  return false;
}
