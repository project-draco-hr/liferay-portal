{
  File docrootDir=project.file("docroot");
  if (!docrootDir.exists()) {
    super.configureSourceSetMain(project,legacyDirStructure);
    return;
  }
  File classesDir=new File(docrootDir,"WEB-INF/classes");
  File srcDir=new File(docrootDir,"WEB-INF/src");
  configureSourceSet(project,SourceSet.MAIN_SOURCE_SET_NAME,classesDir,srcDir);
}
