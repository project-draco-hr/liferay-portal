{
  try {
    Role oldRole=RoleLocalServiceUtil.getRole(role.getRoleId());
    Collection<ProfileAttribute> attributes=getAttributes(role,oldRole);
    if (attributes.size() > 0) {
      AuditMessageSenderUtil.send(RoleModificationAuditMessageBuilder.build(role,attributes));
    }
  }
 catch (  Exception e) {
    throw new ModelListenerException(e);
  }
}
