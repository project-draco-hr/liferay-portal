{
  DDMForm ddmForm=new DDMForm();
  ddmForm.setAvailableLocales(SetUtil.fromArray(LanguageUtil.getAvailableLocales()));
  ddmForm.setDefaultLocale(locale);
  AttributeDefinition[] requiredAttributeDefinitions=objectClassDefinition.getAttributeDefinitions(ObjectClassDefinition.REQUIRED);
  addFieldToForm(configuration,ddmForm,requiredAttributeDefinitions,locale,true);
  AttributeDefinition[] optionalAttributeDefinitions=objectClassDefinition.getAttributeDefinitions(ObjectClassDefinition.OPTIONAL);
  addFieldToForm(configuration,ddmForm,optionalAttributeDefinitions,locale,false);
  return ddmForm;
}
