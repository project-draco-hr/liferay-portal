{
  try {
    long groupId=ParamUtil.getLong(req,"groupId");
    String articleId=ParamUtil.getString(req,"articleId");
    String languageId=LanguageUtil.getLanguageId(req);
    JournalArticle article=JournalArticleLocalServiceUtil.getLatestArticle(groupId,articleId,Boolean.TRUE);
    String fileName="content.xml";
    byte[] byteArray=article.getContentByLocale(languageId).getBytes();
    ServletResponseUtil.sendFile(res,fileName,byteArray,ContentTypes.TEXT_XML_UTF8);
    return null;
  }
 catch (  Exception e) {
    PortalUtil.sendError(e,req,res);
    return null;
  }
}
