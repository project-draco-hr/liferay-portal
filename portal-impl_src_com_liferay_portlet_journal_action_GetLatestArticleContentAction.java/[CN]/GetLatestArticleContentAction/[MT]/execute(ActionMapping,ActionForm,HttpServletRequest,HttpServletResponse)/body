{
  try {
    long groupId=ParamUtil.getLong(request,"groupId");
    String articleId=ParamUtil.getString(request,"articleId");
    String languageId=LanguageUtil.getLanguageId(request);
    JournalArticle article=JournalArticleLocalServiceUtil.getLatestArticle(groupId,articleId,Boolean.TRUE);
    String fileName="content.xml";
    byte[] bytes=article.getContentByLocale(languageId).getBytes();
    ServletResponseUtil.sendFile(response,fileName,bytes,ContentTypes.TEXT_XML_UTF8);
    return null;
  }
 catch (  Exception e) {
    PortalUtil.sendError(e,request,response);
    return null;
  }
}
