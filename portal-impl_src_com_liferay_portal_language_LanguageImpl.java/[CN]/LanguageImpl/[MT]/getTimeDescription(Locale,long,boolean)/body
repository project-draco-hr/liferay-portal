{
  String description=Time.getDescription(milliseconds,approximate);
  String value=null;
  try {
    int pos=description.indexOf(CharPool.SPACE);
    String x=description.substring(0,pos);
    value=x.concat(StringPool.SPACE).concat(get(locale,description.substring(pos + 1,description.length()).toLowerCase()));
  }
 catch (  Exception e) {
    if (_log.isWarnEnabled()) {
      _log.warn(e,e);
    }
  }
  return value;
}
