{
  String value=null;
  try {
    HttpServletRequest request=(HttpServletRequest)pageContext.getRequest();
    String portletResource=ParamUtil.getString(request,"portletResource");
    long companyId=PortalUtil.getCompanyId(request);
    Portlet portlet=PortletLocalServiceUtil.getPortletById(companyId,portletResource);
    PortletConfig portletConfig=PortletConfigFactory.create(portlet,pageContext.getServletContext());
    Locale locale=request.getLocale();
    ResourceBundle bundle=portletConfig.getResourceBundle(locale);
    value=bundle.getString(key);
  }
 catch (  Exception e) {
    if (_log.isWarnEnabled()) {
      _log.warn(e,e);
    }
  }
  return value;
}
