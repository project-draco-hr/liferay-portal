{
  DDMDataProviderSearchTerms searchTerms=(DDMDataProviderSearchTerms)searchContainer.getSearchTerms();
  if (searchTerms.isAdvancedSearch()) {
    return _ddmDataProviderInstanceService.searchCount(_ddmDataProviderRequestHelper.getCompanyId(),new long[]{_ddmDataProviderRequestHelper.getScopeGroupId()},searchTerms.getName(),searchTerms.getDescription(),searchTerms.isAndOperator());
  }
 else {
    return _ddmDataProviderInstanceService.searchCount(_ddmDataProviderRequestHelper.getCompanyId(),new long[]{_ddmDataProviderRequestHelper.getScopeGroupId()},searchTerms.getKeywords());
  }
}
