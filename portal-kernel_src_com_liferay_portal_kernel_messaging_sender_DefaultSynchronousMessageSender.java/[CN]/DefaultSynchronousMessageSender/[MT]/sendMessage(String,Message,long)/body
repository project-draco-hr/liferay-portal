{
  message.setDestination(destination);
  String responseDestination=message.getResponseDestination();
  if (!_messageBus.hasDestination(responseDestination)) {
    throw new MessageBusException("Response destination " + responseDestination + " is not configured");
  }
  message.setDestination(destination);
  String responseId=_portalUUID.generate();
  message.setResponseId(responseId);
  SynchronousMessageListener synchronousMessageListener=new SynchronousMessageListener(_messageBus,message,timeout);
  return synchronousMessageListener.send();
}
