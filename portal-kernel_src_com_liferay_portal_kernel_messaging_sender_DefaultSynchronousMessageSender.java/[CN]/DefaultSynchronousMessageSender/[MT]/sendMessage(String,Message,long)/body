{
  String replyTo=message.getResponseDestination();
  if (!_bus.hasDestination(replyTo)) {
    throw new MessageBusException("No response destination configured: " + replyTo);
  }
  message.setDestination(destination);
  String responseId=_uuidGenerator.generate();
  message.setResponseId(responseId);
  _SynchronousMessageListener listener=new _SynchronousMessageListener(message,timeout);
  return listener.send();
}
