{
  ThemeDisplay themeDisplay=(ThemeDisplay)req.getAttribute(WebKeys.THEME_DISPLAY);
  Layout layout=themeDisplay.getLayout();
  long plid=ParamUtil.getLong(req,"p_l_id");
  long companyId=ParamUtil.getLong(req,"companyId");
  long groupId=ParamUtil.getLong(req,"groupId");
  long organizationId=ParamUtil.getLong(req,"organizationId");
  int max=ParamUtil.getInteger(req,"max",SearchContainer.DEFAULT_DELTA);
  String type=ParamUtil.getString(req,"type",RSSUtil.DEFAULT_TYPE);
  double version=ParamUtil.getDouble(req,"version",RSSUtil.DEFAULT_VERSION);
  String displayStyle=ParamUtil.getString(req,"displayStyle",RSSUtil.DISPLAY_STYLE_FULL_CONTENT);
  String feedURL=themeDisplay.getURLPortal() + themeDisplay.getPathMain() + "/blogs/find_entry?";
  String entryURL=feedURL;
  String rss=StringPool.BLANK;
  if (companyId > 0) {
    feedURL=StringPool.BLANK;
    try {
      rss=BlogsEntryServiceUtil.getCompanyEntriesRSS(companyId,max,type,version,displayStyle,feedURL,entryURL);
    }
 catch (    NoSuchCompanyException nsce) {
      if (_log.isWarnEnabled()) {
        _log.warn(nsce);
      }
    }
  }
 else   if (groupId > 0) {
    feedURL+="p_l_id=" + plid;
    entryURL=feedURL;
    try {
      rss=BlogsEntryServiceUtil.getGroupEntriesRSS(groupId,max,type,version,displayStyle,feedURL,entryURL);
    }
 catch (    NoSuchGroupException nsge) {
      if (_log.isWarnEnabled()) {
        _log.warn(nsge);
      }
    }
  }
 else   if (organizationId > 0) {
    feedURL=StringPool.BLANK;
    try {
      rss=BlogsEntryServiceUtil.getOrganizationEntriesRSS(organizationId,max,type,version,displayStyle,feedURL,entryURL);
    }
 catch (    NoSuchOrganizationException nsge) {
      if (_log.isWarnEnabled()) {
        _log.warn(nsge);
      }
    }
  }
 else   if (layout != null) {
    groupId=layout.getGroupId();
    feedURL=PortalUtil.getLayoutURL(themeDisplay) + "/blogs/rss";
    entryURL=feedURL;
    try {
      rss=BlogsEntryServiceUtil.getGroupEntriesRSS(groupId,max,type,version,displayStyle,feedURL,entryURL);
    }
 catch (    NoSuchGroupException nsge) {
      if (_log.isWarnEnabled()) {
        _log.warn(nsge);
      }
    }
  }
  return rss.getBytes();
}
