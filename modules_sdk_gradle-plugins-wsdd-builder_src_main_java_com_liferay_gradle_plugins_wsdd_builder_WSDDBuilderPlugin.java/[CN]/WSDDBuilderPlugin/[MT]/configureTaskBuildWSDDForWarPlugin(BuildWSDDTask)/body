{
  buildWSDDTask.setInputFile(new Callable<File>(){
    @Override public File call() throws Exception {
      return new File(getWebAppDir(buildWSDDTask.getProject()),"WEB-INF/service.xml");
    }
  }
);
  buildWSDDTask.setServerConfigFile(new Callable<File>(){
    @Override public File call() throws Exception {
      return new File(getWebAppDir(buildWSDDTask.getProject()),"WEB-INF/server-config.wsdd");
    }
  }
);
}
