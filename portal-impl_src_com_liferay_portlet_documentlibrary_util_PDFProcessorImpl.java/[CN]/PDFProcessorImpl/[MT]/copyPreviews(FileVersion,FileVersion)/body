{
  if (PropsValues.DL_FILE_ENTRY_PREVIEW_ENABLED) {
    try {
      if (hasPreview(srcVersion) && !hasPreview(destVersion)) {
        int total=getPreviewFileCount(srcVersion);
        for (int i=0; i < total; i++) {
          String previewFilePath=getPreviewFilePath(destVersion,i + 1);
          InputStream is=doGetPreviewAsStream(srcVersion,i + 1,PREVIEW_TYPE);
          addFileToStore(destVersion.getCompanyId(),PREVIEW_PATH,previewFilePath,is);
        }
      }
    }
 catch (    Exception e) {
      _log.error(e,e);
    }
  }
}
