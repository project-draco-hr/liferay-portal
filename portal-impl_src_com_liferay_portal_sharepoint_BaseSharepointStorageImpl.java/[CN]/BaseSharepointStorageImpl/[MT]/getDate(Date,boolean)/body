{
  if (date == null) {
    return StringPool.BLANK;
  }
  StringBuilder sb=new StringBuilder();
  if (xml) {
    sb.append(DateUtil.getDate(date,"yyyy-mm-dd HH:mm:ss Z",Locale.US));
  }
 else {
    sb.append("TR|");
    sb.append(DateUtil.getDate(date,"dd MMM yyyy HH:mm:ss Z",Locale.US));
  }
  return sb.toString();
}
