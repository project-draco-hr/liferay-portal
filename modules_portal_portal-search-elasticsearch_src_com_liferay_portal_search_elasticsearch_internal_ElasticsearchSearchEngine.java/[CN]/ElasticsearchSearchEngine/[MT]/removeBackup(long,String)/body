{
  ClusterAdminClient clusterAdminClient=_elasticsearchConnectionManager.getClusterAdminClient();
  try {
    if (!hasBackupRepository(clusterAdminClient)) {
      return;
    }
    DeleteSnapshotRequestBuilder deleteSnapshotRequestBuilder=clusterAdminClient.prepareDeleteSnapshot(_BACKUP_REPOSITORY_NAME,backupName);
    DeleteSnapshotResponse deleteSnapshotResponse=deleteSnapshotRequestBuilder.get();
    LogUtil.logActionResponse(_log,deleteSnapshotResponse);
  }
 catch (  Exception e) {
    throw new SearchException(e);
  }
}
