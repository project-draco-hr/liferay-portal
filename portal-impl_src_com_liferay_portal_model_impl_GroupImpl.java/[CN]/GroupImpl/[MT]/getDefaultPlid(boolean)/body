{
  try {
    Layout firstLayout=LayoutLocalServiceUtil.fetchFirstLayout(getGroupId(),privateLayout,LayoutConstants.DEFAULT_PARENT_LAYOUT_ID);
    if (firstLayout != null) {
      return firstLayout.getPlid();
    }
  }
 catch (  Exception e) {
    if (_log.isWarnEnabled()) {
      _log.warn(e.getMessage());
    }
  }
  return LayoutConstants.DEFAULT_PLID;
}
