{
  ThemeDisplay themeDisplay=(ThemeDisplay)actionRequest.getAttribute(WebKeys.THEME_DISPLAY);
  long teamId=ParamUtil.getLong(actionRequest,"teamId");
  String name=ParamUtil.getString(actionRequest,"name");
  String description=ParamUtil.getString(actionRequest,"description");
  if (teamId <= 0) {
    ServiceContext serviceContext=ServiceContextFactory.getInstance(Team.class.getName(),actionRequest);
    TeamServiceUtil.addTeam(themeDisplay.getSiteGroupId(),name,description,serviceContext);
  }
 else {
    TeamServiceUtil.updateTeam(teamId,name,description);
  }
}
