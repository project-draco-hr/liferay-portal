{
  String portletId=portlet.getPortletId();
  if ((layout != null) && layout.isTypeControlPanel()) {
    String category=portlet.getControlPanelEntryCategory();
    if (Validator.equals(category,PortletCategoryKeys.CONTENT)) {
      layout=null;
    }
  }
  boolean access=contains(permissionChecker,scopeGroupId,layout,portletId,ActionKeys.VIEW);
  if (access && !PropsValues.TCK_URL && portletMode.equals(PortletMode.EDIT)) {
    access=contains(permissionChecker,scopeGroupId,layout,portletId,ActionKeys.PREFERENCES);
  }
  return access;
}
