{
  LayoutTypePortlet layoutTypePortlet=(LayoutTypePortlet)layout.getLayoutType();
  for (  Portlet portlet : layoutTypePortlet.getAllPortlets()) {
    if (contains(permissionChecker,groupId,layout,portlet.getPortletId(),actionId)) {
      return true;
    }
    if (contains(permissionChecker,groupId,null,portlet.getRootPortletId(),actionId)) {
      return true;
    }
  }
  return false;
}
