{
  ServiceContext serviceContext=ServiceContextTestUtil.getServiceContext(groupId);
  if (deleteExisting) {
    try {
      Folder folder=DLAppLocalServiceUtil.getFolder(groupId,parentFolderId,name);
      DLAppLocalServiceUtil.deleteFolder(folder.getFolderId());
    }
 catch (    NoSuchFolderException nsfe) {
    }
  }
  return DLAppLocalServiceUtil.addFolder(TestPropsValues.getUserId(),groupId,parentFolderId,name,StringPool.BLANK,serviceContext);
}
