{
  Map<String,TemplateVariableGroup> templateVariableGroups=new LinkedHashMap<String,TemplateVariableGroup>();
  if (classPK > 0) {
    templateVariableGroups.put("fields",getStructureFieldsTemplateVariableGroup(classPK,locale));
  }
  templateVariableGroups.put("general-variables",getGeneralVariablesTemplateVariableGroup());
  templateVariableGroups.put("util",getUtilTemplateVariableGroup());
  return templateVariableGroups;
}
