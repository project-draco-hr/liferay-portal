{
  selenium.open("/web/site-name/");
  loadRequiredJavaScriptModules();
  for (int second=0; ; second++) {
    if (second >= 90) {
      fail("timeout");
    }
    try {
      if (selenium.isVisible("link=User Statistics Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.clickAt("link=User Statistics Test Page",RuntimeVariables.replace("User Statistics Test Page"));
  selenium.waitForPageToLoad("30000");
  loadRequiredJavaScriptModules();
  assertEquals(RuntimeVariables.replace("Joe Bloggs"),selenium.getText("//span[@class='user-name']"));
  assertEquals(RuntimeVariables.replace("Rank: 1"),selenium.getText("//div[@class='user-rank']"));
  assertEquals(RuntimeVariables.replace("Contribution Score: 0"),selenium.getText("//div[@class='contribution-score']"));
  assertEquals(RuntimeVariables.replace("Participation Score: 5"),selenium.getText("//div[@class='participation-score']"));
  assertEquals(RuntimeVariables.replace("User's Blog Entries: 1"),selenium.getText("//div[@class='social-counter-user.blogs']"));
}
