{
  if (_includeRootInTree != null) {
    return _includeRootInTree;
  }
  _includeRootInTree=_siteMapPortletInstanceConfiguration.includeRootInTree();
  if (Validator.isNull(_siteMapPortletInstanceConfiguration.rootLayoutUuid()) || (getRootLayoutId() == LayoutConstants.DEFAULT_PARENT_LAYOUT_ID)) {
    _includeRootInTree=false;
  }
  return _includeRootInTree;
}
