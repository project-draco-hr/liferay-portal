{
  if (_includeRootInTree != null) {
    return _includeRootInTree;
  }
  _includeRootInTree=_siteNavigationSiteMapPortletInstanceConfiguration.includeRootInTree();
  if (Validator.isNull(_siteNavigationSiteMapPortletInstanceConfiguration.rootLayoutUuid()) || (getRootLayoutId() == LayoutConstants.DEFAULT_PARENT_LAYOUT_ID)) {
    _includeRootInTree=false;
  }
  return _includeRootInTree;
}
