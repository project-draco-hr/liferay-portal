{
  PortletPreferences portletPreferences=PortletPreferencesFactoryUtil.fromXML(companyId,ownerId,ownerType,plid,portletId,xml);
  boolean showBorders=GetterUtil.getBoolean(portletPreferences.getValue("portletSetupShowBorders",null),true);
  if (!showBorders) {
    portletPreferences.setValue("portletSetupPortletDecoratorId","borderless");
  }
  portletPreferences.reset("portletSetupShowBorders");
  return PortletPreferencesFactoryUtil.toXML(portletPreferences);
}
