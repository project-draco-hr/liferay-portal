{
  BlogsEntry blogsEntry=findByPrimaryKey(entryId);
  Session session=null;
  try {
    session=openSession();
    BlogsEntry[] array=new BlogsEntryImpl[3];
    array[0]=getByG_U_D_PrevAndNext(session,blogsEntry,groupId,userId,displayDate,orderByComparator,true);
    array[1]=blogsEntry;
    array[2]=getByG_U_D_PrevAndNext(session,blogsEntry,groupId,userId,displayDate,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
