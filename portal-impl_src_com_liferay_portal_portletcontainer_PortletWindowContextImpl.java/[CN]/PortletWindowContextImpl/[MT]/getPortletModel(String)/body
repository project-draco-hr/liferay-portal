{
  if (portletWindowName.equalsIgnoreCase(_portlet.getPortletId())) {
    return _portlet;
  }
  try {
    List<Portlet> remotePortlets=getAllPortletWindows(PortletType.REMOTE);
    for (    Portlet portlet : remotePortlets) {
      if (portlet.isRemote() && portletWindowName.equals(portlet.getPortletId())) {
        return portlet;
      }
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
  return null;
}
