{
  int count=countByO_P_P(ownerType,plid,portletId);
  List<PortletPreferences> list=findByO_P_P(ownerType,plid,portletId,count - 1,count,orderByComparator);
  if (list.isEmpty()) {
    StringBundler msg=new StringBundler(8);
    msg.append(_NO_SUCH_ENTITY_WITH_KEY);
    msg.append("ownerType=");
    msg.append(ownerType);
    msg.append(", plid=");
    msg.append(plid);
    msg.append(", portletId=");
    msg.append(portletId);
    msg.append(StringPool.CLOSE_CURLY_BRACE);
    throw new NoSuchPortletPreferencesException(msg.toString());
  }
 else {
    return list.get(0);
  }
}
