{
  ServletContextHelper servletContextHelper=new ServletContextHelper(bundle){
    @Override public URL getResource(    String name){
      return super.getResource("/META-INF/resources" + name);
    }
  }
;
  BundleContext bundleContext=bundle.getBundleContext();
  Dictionary<String,Object> properties=new HashMapDictionary<>();
  properties.put(HttpWhiteboardConstants.HTTP_WHITEBOARD_CONTEXT_NAME,_servletContextName);
  properties.put(HttpWhiteboardConstants.HTTP_WHITEBOARD_CONTEXT_PATH,"/" + bundle.getSymbolicName());
  return bundleContext.registerService(ServletContextHelper.class,servletContextHelper,properties);
}
