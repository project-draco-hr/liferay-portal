{
  DDMForm ddmForm=DDMFormFactory.create(clazz);
  if (!ddmForm.equals(ddmFormValues.getDDMForm())) {
    throw new IllegalArgumentException("DDMFormValues does not match with the given class " + clazz);
  }
  DDMFormInstanceFactoryHelper ddmFormInstanceFactoryHelper=new DDMFormInstanceFactoryHelper(clazz,ddmFormValues,locale);
  Map<String,Object> properties=ddmFormInstanceFactoryHelper.getProperties();
  return Configurable.createConfigurable(clazz,properties);
}
