{
  long categoryId=ParamUtil.getLong(actionRequest,"categoryId");
  long parentCategoryId=ParamUtil.getLong(actionRequest,"parentCategoryId");
  String name=ParamUtil.getString(actionRequest,"name");
  String description=ParamUtil.getString(actionRequest,"description");
  boolean mergeWithParentCategory=ParamUtil.getBoolean(actionRequest,"mergeWithParentCategory");
  ServiceContext serviceContext=ServiceContextFactory.getInstance(ShoppingCategory.class.getName(),actionRequest);
  if (categoryId <= 0) {
    ShoppingCategoryServiceUtil.addCategory(parentCategoryId,name,description,serviceContext);
  }
 else {
    ShoppingCategoryServiceUtil.updateCategory(categoryId,parentCategoryId,name,description,mergeWithParentCategory,serviceContext);
  }
}
