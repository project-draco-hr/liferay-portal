{
  if (!LDAPUserTransactionThreadLocal.isOriginatesFromLDAP()) {
    ServiceContext context=ServiceContextThreadLocal.getServiceContext();
    Map<String,Serializable> expandoBridgeAttributes=null;
    if (context != null) {
      expandoBridgeAttributes=context.getExpandoBridgeAttributes();
    }
    PortalLDAPExporterUtil.exportToLDAP(contact,expandoBridgeAttributes);
  }
}
