{
  Properties properties=null;
  String propertiesString=HttpUtil.URLtoString(_servletContext.getResource("/WEB-INF/liferay-plugin-package.properties"));
  if (propertiesString != null) {
    properties=PropertiesUtil.load(propertiesString);
  }
 else {
    properties=new Properties();
  }
  PACLPolicy paclPolicy=PACLPolicyManager.buildPACLPolicy(_servletContext.getServletContextName(),_classLoader,properties);
  PACLPolicyManager.register(_classLoader,paclPolicy);
}
