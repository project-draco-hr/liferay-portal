{
  long entryClassPK=GetterUtil.getLong(document.get(Field.ENTRY_CLASS_PK));
  MBMessage mbMessage=mbMessageLocalService.getMessage(entryClassPK);
  Comment comment=CommentManagerUtil.fetchComment(mbMessage.getMessageId());
  Summary summary=new Summary(null,mbMessage.getBody());
  summary.setEscape(false);
  searchResult.addComment(comment,summary);
}
