{
  String targetURL="";
  if (url.startsWith("/")) {
    targetURL=PropsValues.PORTAL_URL + url;
  }
 else {
    targetURL=url;
  }
  for (int i=0; i < 2; i++) {
    try {
      webDriver.get(targetURL);
      if (PropsValues.BROWSER_TYPE.equals("internetexplorer")) {
        refresh(webDriver);
      }
      if (targetURL.equals(getLocation(webDriver))) {
        return;
      }
      Thread.sleep(1000);
    }
 catch (    Exception e) {
    }
  }
  throw new Exception("Unable to open " + url);
}
