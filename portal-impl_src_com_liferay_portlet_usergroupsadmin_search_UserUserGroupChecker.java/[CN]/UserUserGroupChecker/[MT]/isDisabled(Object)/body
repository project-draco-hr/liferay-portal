{
  User user=(User)obj;
  Set<UserGroup> mandatoryGroups=MembershipPolicyUtil.getMandatoryUserGroups(user);
  if ((isChecked(user) && mandatoryGroups.contains(_userGroup)) || (!isChecked(user) && !MembershipPolicyUtil.isMembershipAllowed(_userGroup,user))) {
    return true;
  }
 else {
    return super.isDisabled(obj);
  }
}
