{
  StringMaker sm=new StringMaker();
  sm.append("{\"javaClass\":\"");
  sm.append(SearchRequest.class.getName());
  sm.append("\",\"command\":\"");
  sm.append(SearchRequest.COMMAND_INDEX_ONLY);
  sm.append("\"}");
  String message=null;
  try {
    message=MessageBusUtil.sendSynchronizedMessage(DestinationNames.SEARCH,sm.toString());
  }
 catch (  SystemException e) {
    if (_log.isErrorEnabled()) {
      _log.error("Unbale to check index status",e);
    }
    return false;
  }
  if ((message.indexOf("true") != -1)) {
    return true;
  }
  return false;
}
