{
  SCProductEntry scProductEntry=findByPrimaryKey(productEntryId);
  Session session=null;
  try {
    session=openSession();
    SCProductEntry[] array=new SCProductEntryImpl[3];
    array[0]=getByCompanyId_PrevAndNext(session,scProductEntry,companyId,orderByComparator,true);
    array[1]=scProductEntry;
    array[2]=getByCompanyId_PrevAndNext(session,scProductEntry,companyId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
