{
  String className=properties.getProperty(EhcacheConstants.BOOTSTRAP_CACHE_LOADER_FACTORY_CLASS_NAME);
  if (Validator.isNull(className)) {
    return null;
  }
  BootstrapCacheLoaderFactory<?> bootstrapCacheLoaderFactory=_bootstrapCacheLoaderFactories.get(className);
  if (bootstrapCacheLoaderFactory == null) {
    try {
      bootstrapCacheLoaderFactory=(BootstrapCacheLoaderFactory)InstanceFactory.newInstance(ClassLoaderUtil.getPortalClassLoader(),className);
    }
 catch (    Exception e) {
      _log.error("Unable to instantiate bootstrap cache loader factory " + className,e);
      return null;
    }
    _bootstrapCacheLoaderFactories.put(className,bootstrapCacheLoaderFactory);
  }
  return new EhcacheBootstrapLoaderAdapter(bootstrapCacheLoaderFactory.createBootstrapCacheLoader(properties));
}
