{
  testClassGroupIndex=GetterUtil.getInteger(System.getProperty("test.class.group.index"),-1);
  if (testClassGroupIndex >= 0) {
    String[] testClassGroupArray=StringUtil.split(System.getProperty("test.class.groups"),CharPool.SPACE);
    testClassGroupsSize=testClassGroupArray.length;
  }
  if (isCIMode()) {
    System.out.println("Running in CI mode with " + (testClassGroupIndex + 1) + "/"+ testClassGroupsSize);
  }
}
