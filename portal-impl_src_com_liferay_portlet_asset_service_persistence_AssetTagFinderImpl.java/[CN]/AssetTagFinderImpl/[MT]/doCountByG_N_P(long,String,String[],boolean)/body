{
  Session session=null;
  try {
    session=openSession();
    String sql=CustomSQLUtil.get(COUNT_BY_G_N_P);
    sql=StringUtil.replace(sql,"[$JOIN$]",getJoin(tagProperties));
    if (inlineSQLHelper) {
      sql=InlineSQLHelperUtil.replacePermissionCheck(sql,AssetTag.class.getName(),"AssetTag.tagId",groupId);
    }
    SQLQuery q=session.createSQLQuery(sql);
    q.addScalar(COUNT_COLUMN_NAME,Type.LONG);
    QueryPos qPos=QueryPos.getInstance(q);
    setJoin(qPos,tagProperties);
    qPos.add(groupId);
    String lowerCaseName=StringUtil.toLowerCase(name);
    qPos.add(lowerCaseName);
    qPos.add(lowerCaseName);
    Iterator<Long> itr=q.iterate();
    if (itr.hasNext()) {
      Long count=itr.next();
      if (count != null) {
        return count.intValue();
      }
    }
    return 0;
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
 finally {
    closeSession(session);
  }
}
