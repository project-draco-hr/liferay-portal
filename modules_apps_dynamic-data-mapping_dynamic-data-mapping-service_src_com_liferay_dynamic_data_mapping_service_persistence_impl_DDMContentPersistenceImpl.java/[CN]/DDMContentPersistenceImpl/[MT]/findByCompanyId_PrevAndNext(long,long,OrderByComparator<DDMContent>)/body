{
  DDMContent ddmContent=findByPrimaryKey(contentId);
  Session session=null;
  try {
    session=openSession();
    DDMContent[] array=new DDMContentImpl[3];
    array[0]=getByCompanyId_PrevAndNext(session,ddmContent,companyId,orderByComparator,true);
    array[1]=ddmContent;
    array[2]=getByCompanyId_PrevAndNext(session,ddmContent,companyId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
