{
  Session session=null;
  try {
    session=openSession();
    DDMContent ddmContent=(DDMContent)session.get(DDMContentImpl.class,primaryKey);
    if (ddmContent == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + primaryKey);
      }
      throw new NoSuchContentException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + primaryKey);
    }
    return remove(ddmContent);
  }
 catch (  NoSuchContentException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
