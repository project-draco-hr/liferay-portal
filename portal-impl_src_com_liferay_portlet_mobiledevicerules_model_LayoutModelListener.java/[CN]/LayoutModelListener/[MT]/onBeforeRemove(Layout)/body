{
  try {
    List<MDRRuleGroupInstance> mdrRuleGroupInstances=MDRRuleGroupInstanceLocalServiceUtil.getRuleGroupInstances(Layout.class.getName(),layout.getPlid());
    for (    MDRRuleGroupInstance mdrRuleGroupInstance : mdrRuleGroupInstances) {
      MDRRuleGroupInstanceLocalServiceUtil.deleteMDRRuleGroupInstance(mdrRuleGroupInstance);
    }
  }
 catch (  Exception e) {
    throw new ModelListenerException(e);
  }
}
