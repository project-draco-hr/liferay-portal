{
  Role role=(Role)obj;
  Set<Role> mandatoryRoles=MembershipPolicyUtil.getMandatoryRoles(_group,_user);
  if ((isChecked(role) && mandatoryRoles.contains(role)) || (!isChecked(role) && !MembershipPolicyUtil.isMembershipAllowed(_group,role,_user))) {
    return true;
  }
  return super.isDisabled(obj);
}
