{
  JournalArticle article=JournalArticleUtil.findByPrimaryKey(new JournalArticlePK(companyId,groupId,articleId,version));
  if (Validator.isNotNull(article.getStructureId())) {
    String content=JournalUtil.removeArticleLocale(article.getContent(),languageId);
    article.setContent(content);
    JournalArticleUtil.update(article);
  }
  return article;
}
