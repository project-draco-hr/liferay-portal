{
  List articles=null;
  if (approved == null) {
    articles=JournalArticleUtil.findByC_G_A(companyId,groupId,articleId,0,1);
  }
 else {
    articles=JournalArticleUtil.findByC_G_A_A(companyId,groupId,articleId,approved.booleanValue(),0,1);
  }
  if (articles.size() == 0) {
    throw new NoSuchArticleException();
  }
  return (JournalArticle)articles.get(0);
}
