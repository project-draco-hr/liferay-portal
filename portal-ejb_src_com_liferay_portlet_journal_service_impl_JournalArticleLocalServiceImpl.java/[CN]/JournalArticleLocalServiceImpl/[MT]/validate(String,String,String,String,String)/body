{
  if (Validator.isNull(title)) {
    throw new ArticleTitleException();
  }
 else   if (Validator.isNull(content)) {
    throw new ArticleContentException();
  }
  if (Validator.isNotNull(structureId)) {
    JournalStructure structure=JournalStructureUtil.findByPrimaryKey(new JournalStructurePK(companyId,structureId));
    JournalTemplate template=JournalTemplateUtil.findByPrimaryKey(new JournalTemplatePK(companyId,templateId));
    if (!template.getStructureId().equals(structureId)) {
      throw new NoSuchTemplateException();
    }
  }
}
