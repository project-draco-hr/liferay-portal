{
  try {
    com.liferay.portlet.dynamicdatamapping.model.DDMStructure structure=_ddmStructureLocalService.getDDMStructureByUuidAndGroupId(uuid,groupId);
    return BeanPropertiesUtil.deepCopyProperties(structure,DDMStructureImpl.class);
  }
 catch (  PortalException pe) {
    throw pe;
  }
catch (  Exception e) {
    _log.error(e,e);
  }
  return null;
}
