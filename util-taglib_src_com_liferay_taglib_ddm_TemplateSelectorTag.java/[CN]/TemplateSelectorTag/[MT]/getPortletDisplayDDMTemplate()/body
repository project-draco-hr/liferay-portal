{
  String displayStyle=super.getDisplayStyle();
  if (Validator.isNull(displayStyle)) {
    displayStyle=getDefaultDisplayStyle();
  }
  DDMTemplate portletDisplayDDMTemplate=PortletDisplayTemplateManagerUtil.getDDMTemplate(getDisplayStyleGroupId(),PortalUtil.getClassNameId(getClassName()),displayStyle,true);
  return portletDisplayDDMTemplate;
}
