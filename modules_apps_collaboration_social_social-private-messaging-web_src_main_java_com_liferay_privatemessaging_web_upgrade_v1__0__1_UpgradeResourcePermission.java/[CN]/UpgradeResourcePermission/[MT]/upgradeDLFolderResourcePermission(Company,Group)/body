{
  Repository repository=RepositoryLocalServiceUtil.fetchRepository(group.getGroupId(),MBPortletKeys.MESSAGE_BOARDS);
  if (repository == null) {
    return;
  }
  long folderId=repository.getDlFolderId();
  Role role=RoleLocalServiceUtil.getRole(company.getCompanyId(),RoleConstants.GUEST);
  if (ResourcePermissionLocalServiceUtil.hasResourcePermission(company.getCompanyId(),DLFolder.class.getName(),ResourceConstants.SCOPE_INDIVIDUAL,String.valueOf(folderId),role.getRoleId(),ActionKeys.VIEW)) {
    return;
  }
  ResourceLocalServiceUtil.addResources(company.getCompanyId(),group.getGroupId(),0,DLFolder.class.getName(),folderId,false,true,true);
}
