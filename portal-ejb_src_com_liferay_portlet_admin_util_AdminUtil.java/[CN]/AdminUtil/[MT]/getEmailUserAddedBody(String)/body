{
  PortletPreferences prefs=getPreferences(companyId);
  String emailUserAddedBody=prefs.getValue("email-user-added-body",StringPool.BLANK);
  if (Validator.isNotNull(emailUserAddedBody)) {
    return emailUserAddedBody;
  }
 else {
    return ContentUtil.get(PropsUtil.get(PropsUtil.ADMIN_EMAIL_USER_ADDED_BODY));
  }
}
