{
  GradleUtil.applyPlugin(project,BasePlugin.class);
  GradleUtil.applyPlugin(project,GulpPlugin.class);
  GradleUtil.applyPlugin(project,LiferayBasePlugin.class);
  GradleUtil.applyPlugin(project,SourceFormatterPlugin.class);
  LiferayExtension liferayExtension=GradleUtil.getExtension(project,LiferayExtension.class);
  project.setBuildDir("build_gradle");
  Task createLiferayThemeJsonTask=addTaskCreateLiferayThemeJson(project,liferayExtension);
  configureArtifacts(project);
  configureTaskClean(project);
  configureTaskDeploy(project);
  configureTasksExecuteGulp(project,createLiferayThemeJsonTask);
}
