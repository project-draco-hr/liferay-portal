{
  if (user.isDefaultUser()) {
    return;
  }
  try {
    Contact contact=ContactLocalServiceUtil.getContact(user.getContactId());
    Document doc=getUserDocument(user.getCompanyId(),user.getUserId(),contact.getFirstName(),contact.getMiddleName(),contact.getLastName(),contact.getJobTitle(),user.getScreenName(),user.getEmailAddress(),user.getActive(),user.getOrganizationIds(),user.getExpandoBridge());
    SearchEngineUtil.updateDocument(user.getCompanyId(),doc.get(Field.UID),doc);
  }
 catch (  Exception e) {
    throw new SearchException(e);
  }
}
