{
  Task task=GradleUtil.getTask(project,WarPlugin.WAR_TASK_NAME);
  task.dependsOn(new Callable<Task>(){
    @Override public Task call() throws Exception {
      File homeDir=workspaceExtension.getHomeDir();
      if (homeDir.exists()) {
        return null;
      }
      return initBundleTask;
    }
  }
);
}
