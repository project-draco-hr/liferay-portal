{
  MDRRule mdrRule=findByPrimaryKey(ruleId);
  Session session=null;
  try {
    session=openSession();
    MDRRule[] array=new MDRRuleImpl[3];
    array[0]=getByRuleGroupId_PrevAndNext(session,mdrRule,ruleGroupId,orderByComparator,true);
    array[1]=mdrRule;
    array[2]=getByRuleGroupId_PrevAndNext(session,mdrRule,ruleGroupId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
