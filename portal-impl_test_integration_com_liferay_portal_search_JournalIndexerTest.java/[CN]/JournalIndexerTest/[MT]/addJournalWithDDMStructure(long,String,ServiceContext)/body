{
  String definition=DDMStructureTestUtil.getSampleStructureDefinition("name");
  DDMStructure ddmStructure=DDMStructureTestUtil.addStructure(serviceContext.getScopeGroupId(),JournalArticle.class.getName(),definition);
  DDMTemplate ddmTemplate=DDMTemplateTestUtil.addTemplate(serviceContext.getScopeGroupId(),ddmStructure.getStructureId());
  String content=DDMStructureTestUtil.getSampleStructuredContent("name",keywords);
  return JournalTestUtil.addArticleWithXMLContent(folderId,content,ddmStructure.getStructureKey(),ddmTemplate.getTemplateKey(),serviceContext);
}
