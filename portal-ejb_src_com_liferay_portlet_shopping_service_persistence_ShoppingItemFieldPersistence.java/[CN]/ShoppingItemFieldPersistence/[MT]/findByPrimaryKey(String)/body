{
  Session session=null;
  try {
    session=openSession();
    ShoppingItemField shoppingItemField=(ShoppingItemField)session.get(ShoppingItemField.class,itemFieldId);
    if (shoppingItemField == null) {
      if (_log.isWarnEnabled()) {
        _log.warn("No ShoppingItemField exists with the primary key " + itemFieldId.toString());
      }
      throw new NoSuchItemFieldException("No ShoppingItemField exists with the primary key " + itemFieldId.toString());
    }
    return shoppingItemField;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
