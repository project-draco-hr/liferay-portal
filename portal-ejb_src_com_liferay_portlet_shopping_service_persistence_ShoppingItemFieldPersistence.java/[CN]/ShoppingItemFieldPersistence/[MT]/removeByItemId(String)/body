{
  Session session=null;
  try {
    session=openSession();
    StringBuffer query=new StringBuffer();
    query.append("FROM ShoppingItemField IN CLASS com.liferay.portlet.shopping.service.persistence.ShoppingItemFieldHBM WHERE ");
    query.append("itemId = ?");
    query.append(" ");
    query.append("ORDER BY ");
    query.append("itemId ASC").append(", ");
    query.append("name ASC");
    Query q=session.createQuery(query.toString());
    int queryPos=0;
    q.setString(queryPos++,itemId);
    Iterator itr=q.list().iterator();
    while (itr.hasNext()) {
      ShoppingItemFieldHBM shoppingItemFieldHBM=(ShoppingItemFieldHBM)itr.next();
      session.delete(shoppingItemFieldHBM);
    }
    session.flush();
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
