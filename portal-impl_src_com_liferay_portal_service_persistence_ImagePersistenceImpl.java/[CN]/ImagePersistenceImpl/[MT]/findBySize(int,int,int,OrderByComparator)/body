{
  Object[] finderArgs=new Object[]{new Integer(size),String.valueOf(start),String.valueOf(end),String.valueOf(obc)};
  List<Image> list=(List<Image>)FinderCacheUtil.getResult(FINDER_PATH_FIND_BY_OBC_SIZE,finderArgs,this);
  if (list == null) {
    Session session=null;
    try {
      session=openSession();
      int arrayCapacity=3;
      if (obc != null) {
        arrayCapacity+=(obc.getOrderByFields().length * 4);
      }
      if (5 > arrayCapacity) {
        arrayCapacity=5;
      }
      StringBundler query=new StringBundler(arrayCapacity);
      query.append("SELECT image FROM Image image WHERE ");
      query.append("image.size < ?");
      query.append(" ");
      if (obc != null) {
        query.append("ORDER BY ");
        String[] orderByFields=obc.getOrderByFields();
        for (int i=0; i < orderByFields.length; i++) {
          query.append("image.");
          query.append(orderByFields[i]);
          if (obc.isAscending()) {
            query.append(" ASC");
          }
 else {
            query.append(" DESC");
          }
          if ((i + 1) < orderByFields.length) {
            query.append(", ");
          }
        }
      }
 else {
        query.append("ORDER BY ");
        query.append("image.imageId ASC");
      }
      Query q=session.createQuery(query.toString());
      QueryPos qPos=QueryPos.getInstance(q);
      qPos.add(size);
      list=(List<Image>)QueryUtil.list(q,getDialect(),start,end);
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      if (list == null) {
        list=new ArrayList<Image>();
      }
      cacheResult(list);
      FinderCacheUtil.putResult(FINDER_PATH_FIND_BY_OBC_SIZE,finderArgs,list);
      closeSession(session);
    }
  }
  return list;
}
