{
  try {
    AdminClient adminClient=_elasticsearchConnectionManager.getAdminClient();
    IndicesAdminClient indicesAdminClient=adminClient.indices();
    RefreshRequestBuilder refreshRequestBuilder=indicesAdminClient.prepareRefresh(String.valueOf(searchContext.getCompanyId()));
    RefreshResponse refreshResponse=refreshRequestBuilder.get();
    LogUtil.logActionResponse(_log,refreshResponse);
  }
 catch (  Exception e) {
    throw new SearchException("Unable to commit indices",e);
  }
}
