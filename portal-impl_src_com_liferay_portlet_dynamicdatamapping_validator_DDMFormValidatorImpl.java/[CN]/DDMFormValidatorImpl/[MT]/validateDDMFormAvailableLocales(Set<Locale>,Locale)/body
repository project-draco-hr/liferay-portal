{
  if ((availableLocales == null) || availableLocales.isEmpty()) {
    throw new DDMFormValidationException("The available locales property was never set for DDM Form");
  }
  if (!availableLocales.contains(defaultLocale)) {
    throw new DDMFormValidationException("The default locale '" + defaultLocale + "' should be a set"+ " as valid available locale");
  }
}
