{
  String emailEventReminderEnabled=ParamUtil.getString(req,"emailEventReminderEnabled");
  String emailEventReminderSubject=ParamUtil.getString(req,"emailEventReminderSubject");
  String emailEventReminderBody=ParamUtil.getString(req,"emailEventReminderBody");
  if (Validator.isNull(emailEventReminderSubject)) {
    SessionErrors.add(req,"emailEventReminderSubject");
  }
 else   if (Validator.isNull(emailEventReminderBody)) {
    SessionErrors.add(req,"emailEventReminderBody");
  }
 else {
    prefs.setValue("email-event-reminder-enabled",emailEventReminderEnabled);
    prefs.setValue("email-event-reminder-subject",emailEventReminderSubject);
    prefs.setValue("email-event-reminder-body",emailEventReminderBody);
  }
}
