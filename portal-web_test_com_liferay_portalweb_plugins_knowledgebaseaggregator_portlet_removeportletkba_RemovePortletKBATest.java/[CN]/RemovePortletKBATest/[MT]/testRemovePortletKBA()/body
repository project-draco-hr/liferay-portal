{
  selenium.open("/web/guest/home/");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isVisible("link=Knowledge Base Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.saveScreenShotAndSource();
  selenium.clickAt("link=Knowledge Base Test Page",RuntimeVariables.replace(""));
  selenium.waitForPageToLoad("30000");
  selenium.saveScreenShotAndSource();
  selenium.click("//span[3]/a/img");
  assertTrue(selenium.getConfirmation().matches("^Are you sure you want to remove this component[\\s\\S]$"));
  selenium.saveScreenShotAndSource();
  assertFalse(selenium.isElementPresent("//div/section"));
}
