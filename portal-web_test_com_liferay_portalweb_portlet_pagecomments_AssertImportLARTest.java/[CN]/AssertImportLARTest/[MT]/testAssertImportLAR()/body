{
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Page Comments Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.clickAt("link=Page Comments Test Page",RuntimeVariables.replace(""));
  selenium.waitForPageToLoad("30000");
  assertEquals(RuntimeVariables.replace("This is a edited test page comment!"),selenium.getText("//td[2]/div[1]"));
  assertEquals(RuntimeVariables.replace("This is a test page comment 2!"),selenium.getText("//tr[5]/td[2]/div[1]"));
}
