{
  if (s == null) {
    return null;
  }
  int x=s.indexOf(remove);
  if (x < 0) {
    return s;
  }
  int y=0;
  StringBundler sb=new StringBundler(s.length());
  while (x >= 0) {
    sb.append(s.subSequence(y,x));
    y=x + 1;
    x=s.indexOf(remove,y);
  }
  sb.append(s.substring(y));
  return sb.toString();
}
