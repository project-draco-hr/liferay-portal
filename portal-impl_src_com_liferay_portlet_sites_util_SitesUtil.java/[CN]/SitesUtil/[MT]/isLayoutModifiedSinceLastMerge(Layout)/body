{
  if ((layout == null) || Validator.isNull(layout.getSourcePrototypeLayoutUuid()) || layout.isLayoutPrototypeLinkActive()) {
    return false;
  }
  LayoutSet existingLayoutSet=layout.getLayoutSet();
  long lastMergeTime=GetterUtil.getLong(existingLayoutSet.getSettingsProperty("last-merge-time"));
  Date existingLayoutModifiedDate=layout.getModifiedDate();
  if ((existingLayoutModifiedDate != null) && (existingLayoutModifiedDate.getTime() > lastMergeTime) && isLayoutUpdateable(layout)) {
    return true;
  }
  return false;
}
