{
  configureLog4J(classLoader.getResource("META-INF/portal-log4j.xml"));
  try {
    Enumeration<URL> extConfigurations=classLoader.getResources("META-INF/portal-log4j-ext.xml");
    while (extConfigurations.hasMoreElements()) {
      configureLog4J(extConfigurations.nextElement());
    }
  }
 catch (  IOException e) {
    java.util.logging.Logger.getLogger(Log4JUtil.class.getName()).log(java.util.logging.Level.WARNING,"Cannot load portal-log4j-ext.xml",e);
  }
}
