{
  DDMFormFieldType ddmFormFieldType=DDMFormFieldTypeRegistryUtil.getDDMFormFieldType(ddmFormField.getType());
  if (ddmFormFieldType == null) {
    throw new DDMFormRenderingException("No DDM form field type registered for " + ddmFormField.getType());
  }
  try {
    DDMFormFieldRenderer ddmFormFieldRenderer=ddmFormFieldType.getDDMFormFieldRenderer();
    String ddmFormFieldHTML=ddmFormFieldRenderer.render(ddmFormField,ddmFormFieldRenderingContext);
    boolean visible=isDDMFormFieldVisible(ddmFormField);
    return wrapDDMFormFieldHTML(ddmFormFieldHTML,visible);
  }
 catch (  PortalException pe) {
    throw new DDMFormRenderingException(pe);
  }
}
