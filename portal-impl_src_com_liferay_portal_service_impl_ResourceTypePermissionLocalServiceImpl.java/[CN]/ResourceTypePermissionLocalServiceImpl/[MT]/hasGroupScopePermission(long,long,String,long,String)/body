{
  ResourceAction resourceAction=resourceActionLocalService.getResourceAction(name,actionId);
  ResourceTypePermissionPK pk=new ResourceTypePermissionPK(companyId,groupId,name,roleId);
  ResourceTypePermission resourceTypePermission=getResourceTypePermission(pk);
  long actionIdsLong=resourceTypePermission.getActionIds();
  long bitwiseValue=resourceAction.getBitwiseValue();
  if ((actionIdsLong & bitwiseValue) == bitwiseValue) {
    return true;
  }
 else {
    return false;
  }
}
