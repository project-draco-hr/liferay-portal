{
  for (int i=1; ; i++) {
    String tempScreenName=screenName + StringPool.PERIOD + i;
    if (UserLocalServiceUtil.fetchUserByScreenName(companyId,tempScreenName) != null) {
      continue;
    }
    if (GroupLocalServiceUtil.fetchFriendlyURLGroup(companyId,StringPool.SLASH + tempScreenName) == null) {
      return tempScreenName;
    }
  }
}
