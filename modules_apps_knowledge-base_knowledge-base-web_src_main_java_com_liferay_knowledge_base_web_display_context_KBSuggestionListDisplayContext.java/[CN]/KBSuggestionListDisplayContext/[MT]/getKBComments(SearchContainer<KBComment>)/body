{
  int status=_getStatus();
  if (_kbArticle == null) {
    if (status == KBCommentConstants.STATUS_ANY) {
      return KBCommentServiceUtil.getKBComments(_groupId,searchContainer.getStart(),searchContainer.getEnd(),new KBCommentStatusComparator());
    }
    return KBCommentServiceUtil.getKBComments(_groupId,status,searchContainer.getStart(),searchContainer.getEnd());
  }
 else {
    if (status == KBCommentConstants.STATUS_ANY) {
      return KBCommentServiceUtil.getKBComments(_groupId,KBArticleConstants.getClassName(),_kbArticle.getClassPK(),searchContainer.getStart(),searchContainer.getEnd(),new KBCommentStatusComparator());
    }
    return KBCommentServiceUtil.getKBComments(_groupId,KBArticleConstants.getClassName(),_kbArticle.getClassPK(),status,searchContainer.getStart(),searchContainer.getEnd());
  }
}
