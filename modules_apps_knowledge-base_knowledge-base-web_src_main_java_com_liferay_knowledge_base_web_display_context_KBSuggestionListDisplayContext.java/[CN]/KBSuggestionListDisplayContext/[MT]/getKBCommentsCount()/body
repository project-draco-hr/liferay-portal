{
  int status=_getStatus();
  if (_kbArticle == null) {
    if (status == KBCommentConstants.STATUS_ANY) {
      return KBCommentServiceUtil.getKBCommentsCount(_groupId);
    }
    return KBCommentServiceUtil.getKBCommentsCount(_groupId,status);
  }
 else {
    if (status == KBCommentConstants.STATUS_ANY) {
      return KBCommentServiceUtil.getKBCommentsCount(_groupId,KBArticleConstants.getClassName(),_kbArticle.getClassPK());
    }
    return KBCommentServiceUtil.getKBCommentsCount(_groupId,KBArticleConstants.getClassName(),_kbArticle.getClassPK(),status);
  }
}
