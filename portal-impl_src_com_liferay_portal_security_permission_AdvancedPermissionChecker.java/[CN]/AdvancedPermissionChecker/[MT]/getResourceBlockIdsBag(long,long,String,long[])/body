{
  ResourceBlockIdsBag resourceBlockIdsBag=PermissionCacheUtil.getResourceBlockIdsBag(companyId,groupId,getUserId(),name);
  if (resourceBlockIdsBag != null) {
    return resourceBlockIdsBag;
  }
  try {
    resourceBlockIdsBag=ResourceBlockLocalServiceUtil.getResourceBlockIdsBag(getCompanyId(),groupId,name,roleIds);
    PermissionCacheUtil.putResourceBlockIdsBag(companyId,groupId,getUserId(),name,resourceBlockIdsBag);
    return resourceBlockIdsBag;
  }
 catch (  Exception e) {
    PermissionCacheUtil.removeResourceBlockIdsBag(companyId,groupId,getUserId(),name);
    throw e;
  }
}
