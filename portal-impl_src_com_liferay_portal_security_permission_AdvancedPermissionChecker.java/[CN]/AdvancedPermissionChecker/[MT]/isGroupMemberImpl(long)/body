{
  if (!signedIn) {
    return false;
  }
  if (groupId <= 0) {
    return false;
  }
  Group group=GroupLocalServiceUtil.getGroup(groupId);
  Role role=RoleLocalServiceUtil.getRole(group.getCompanyId(),RoleConstants.SITE_MEMBER);
  long[] roleIds=doGetRoleIds(getUserId(),groupId);
  if (Arrays.binarySearch(roleIds,role.getRoleId()) >= 0) {
    return true;
  }
  UserBag userBag=getUserBag();
  if (userBag.hasUserGroup(group)) {
    return true;
  }
 else {
    return false;
  }
}
