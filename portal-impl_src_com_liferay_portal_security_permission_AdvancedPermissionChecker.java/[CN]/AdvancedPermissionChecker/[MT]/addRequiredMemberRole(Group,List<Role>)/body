{
  if (group.isCommunity()) {
    Role communityMemberRole=RoleLocalServiceUtil.getRole(group.getCompanyId(),RoleConstants.SITE_MEMBER);
    roles.add(communityMemberRole);
  }
 else   if (group.isOrganization()) {
    Role organizationMemberRole=RoleLocalServiceUtil.getRole(group.getCompanyId(),RoleConstants.ORGANIZATION_MEMBER);
    roles.add(organizationMemberRole);
  }
}
