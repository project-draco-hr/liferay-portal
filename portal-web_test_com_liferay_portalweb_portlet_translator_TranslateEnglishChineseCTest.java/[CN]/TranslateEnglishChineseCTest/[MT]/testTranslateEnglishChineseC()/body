      fail("timeout");
    }
    try {
      if (selenium.isTextPresent("\u6211\u7684\u540d\u5b57\u662fLiferay\u8bd1\u8005\uff0c\u6d41\u5229\u5b8c\u5168\u6210\u529f6\u901a\u4fe1\u7684\u767e\u4e07\u4e2a\u5f62\u5f0f\u3002 ")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
}
