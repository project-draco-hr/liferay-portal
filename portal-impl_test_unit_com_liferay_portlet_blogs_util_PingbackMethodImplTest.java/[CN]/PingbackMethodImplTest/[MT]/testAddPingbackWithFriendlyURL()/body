{
  long plid=RandomTestUtil.randomLong();
  when(_portal.getPlidFromFriendlyURL(_COMPANY_ID,"/__blogs__")).thenReturn(plid);
  long groupId=RandomTestUtil.randomLong();
  when(_portal.getScopeGroupId(plid)).thenReturn(groupId);
  whenFriendlyURLMapperPopulateParams("/__remainder-of-the-friendly-url__","urlTitle","__urlTitle__");
  String friendlyURL="http://liferay.com/__blogs__/-/__remainder-of-the-friendly-url__";
  whenHttpURLToString("<body><a href='" + friendlyURL + "'>Liferay</a></body>");
  execute(friendlyURL);
  verifySuccess();
  Mockito.verify(_blogsEntryLocalService).getEntry(groupId,"__urlTitle__");
}
