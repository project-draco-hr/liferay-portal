{
  Registry registry=RegistryUtil.getRegistry();
  Collection<CommentManager> services=registry.getServices(CommentManager.class,"(component.name=com.liferay.message.boards.comment.internal." + "MBCommentManagerImpl)");
  if (services.isEmpty()) {
    throw new IllegalStateException("MBMessage Comment API implementation was not found");
  }
  Iterator<CommentManager> iterator=services.iterator();
  _commentManager=iterator.next();
}
