{
  long assetEntryId=GetterUtil.getLong(getParameter(portletRequest,"assetEntryId"));
  AssetEntry assetEntry=AssetEntryLocalServiceUtil.fetchEntry(assetEntryId);
  JournalArticleAssetRendererFactory journalArticleAssetRendererFactory=(JournalArticleAssetRendererFactory)AssetRendererFactoryRegistryUtil.getAssetRendererFactoryByClassName(JournalArticle.class.getName());
  JournalArticleAssetRenderer journalArticleAssetRenderer=(JournalArticleAssetRenderer)journalArticleAssetRendererFactory.getAssetRenderer(assetEntry.getClassPK());
  JournalArticle article=journalArticleAssetRenderer.getArticle();
  return StringUtil.toUpperCase(article.getArticleId());
}
