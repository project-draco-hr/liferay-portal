{
  try {
    Indexer.deleteProductEntry(productEntry.getCompanyId(),productEntry.getProductEntryId());
  }
 catch (  IOException ioe) {
    _log.error("Deleting index " + productEntry.getProductEntryId(),ioe);
  }
  SCProductScreenshotLocalServiceUtil.deleteProductScreenshots(productEntry.getProductEntryId());
  SCProductVersionLocalServiceUtil.deleteProductVersions(productEntry.getProductEntryId());
  RatingsStatsLocalServiceUtil.deleteStats(SCProductEntry.class.getName(),productEntry.getProductEntryId());
  MBMessageLocalServiceUtil.deleteDiscussionMessages(SCProductEntry.class.getName(),productEntry.getProductEntryId());
  ResourceLocalServiceUtil.deleteResource(productEntry.getCompanyId(),SCProductEntry.class.getName(),ResourceImpl.SCOPE_INDIVIDUAL,productEntry.getProductEntryId());
  SCProductEntryUtil.remove(productEntry);
}
