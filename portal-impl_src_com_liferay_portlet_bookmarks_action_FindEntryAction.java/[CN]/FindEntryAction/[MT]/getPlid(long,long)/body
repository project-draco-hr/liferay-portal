{
  if (plid != LayoutConstants.DEFAULT_PLID) {
    try {
      Layout layout=LayoutLocalServiceUtil.getLayout(plid);
      LayoutTypePortlet layoutTypePortlet=(LayoutTypePortlet)layout.getLayoutType();
      if (layoutTypePortlet.hasPortletId(PortletKeys.BOOKMARKS)) {
        return plid;
      }
    }
 catch (    NoSuchLayoutException nsle) {
    }
  }
  BookmarksEntry entry=BookmarksEntryLocalServiceUtil.getEntry(entryId);
  plid=PortalUtil.getPlidFromPortletId(entry.getGroupId(),PortletKeys.BOOKMARKS);
  if (plid != LayoutConstants.DEFAULT_PLID) {
    return plid;
  }
  throw new NoSuchLayoutException("No page was found with the Bookmarks portlet");
}
