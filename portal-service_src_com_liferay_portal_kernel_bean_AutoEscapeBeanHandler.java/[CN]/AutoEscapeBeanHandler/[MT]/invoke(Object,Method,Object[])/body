{
  String methodName=method.getName();
  if (methodName.startsWith("set")) {
    throw new IllegalAccessException("Setter methods cannot be called on an escaped bean");
  }
  if (methodName.endsWith("isEscapedModel")) {
    return true;
  }
  Object result=null;
  try {
    result=method.invoke(_bean,args);
  }
 catch (  InvocationTargetException ite) {
    throw ite.getTargetException();
  }
  if ((method.getAnnotation(AutoEscape.class) != null) || (method.getAnnotation(com.liferay.portal.kernel.annotation.AutoEscape.class) != null)) {
    result=HtmlUtil.escape((String)result);
  }
  return result;
}
