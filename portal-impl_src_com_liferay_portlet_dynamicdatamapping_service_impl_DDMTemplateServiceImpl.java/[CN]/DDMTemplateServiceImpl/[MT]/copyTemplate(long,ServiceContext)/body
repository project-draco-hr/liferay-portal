{
  DDMTemplate template=ddmTemplatePersistence.findByPrimaryKey(templateId);
  DDMDisplay ddmDisplay=DDMUtil.getDDMDisplay(template.getClassNameId());
  DDMPermission.check(getPermissionChecker(),serviceContext.getScopeGroupId(),ddmDisplay.getResourceName(template.getClassNameId()),ddmDisplay.getAddTemplateActionId());
  return ddmTemplateLocalService.copyTemplate(getUserId(),templateId,serviceContext);
}
