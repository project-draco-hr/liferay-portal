{
  DDMDisplay ddmDisplay=DDMUtil.getDDMDisplay(sourceClassNameId);
  DDMPermission.check(getPermissionChecker(),serviceContext.getScopeGroupId(),ddmDisplay.getResourceName(sourceClassNameId),ddmDisplay.getAddTemplateActionId());
  return ddmTemplateLocalService.copyTemplates(getUserId(),classNameId,oldClassPK,newClassPK,type,serviceContext);
}
