{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(portlet);
    }
 else {
      if (portlet.isNew()) {
        session.save(portlet);
      }
    }
    session.flush();
    portlet.setNew(false);
    return portlet;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
