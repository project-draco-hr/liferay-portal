{
  CompileJSPTask compileJSPTask=(CompileJSPTask)GradleUtil.getTask(project,JspCPlugin.GENERATE_JSP_JAVA_TASK_NAME);
  compileJSPTask.setWebAppDir(new Callable<File>(){
    @Override public File call() throws Exception {
      File unzippedJarDir=_getUnzippedJarDir(project);
      File resourcesDir=new File(unzippedJarDir,"META-INF/resources");
      if (resourcesDir.exists()) {
        return resourcesDir;
      }
      return unzippedJarDir;
    }
  }
);
}
