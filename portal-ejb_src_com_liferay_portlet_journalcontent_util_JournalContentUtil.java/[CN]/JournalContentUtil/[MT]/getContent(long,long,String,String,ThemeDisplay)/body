{
  String content=null;
  if (articleId == null) {
    articleId=StringPool.BLANK;
  }
  articleId=articleId.trim().toUpperCase();
  String key=_encodeKey(companyId + ARTICLE_SEPARATOR + groupId+ ARTICLE_SEPARATOR+ articleId+ LANGUAGE_SEPARATOR+ languageId);
  try {
    content=(String)_cache.getFromCache(key,_REFRESH_TIME);
  }
 catch (  NeedsRefreshException nre) {
    try {
      content=JournalArticleLocalServiceUtil.getArticleContent(companyId,groupId,articleId,languageId,themeDisplay);
    }
 catch (    Exception e) {
      _log.error("Uanble to get content for " + companyId + " "+ groupId+ " "+ articleId+ " "+ languageId,e);
    }
    if (content != null) {
      _cache.putInCache(key,content,GROUP_NAME_ARRAY);
    }
  }
 finally {
    if (content == null) {
      _cache.cancelUpdate(key);
    }
  }
  return content;
}
