{
  String message=e.getMessage();
  if (e instanceof PySyntaxError) {
    PySyntaxError pySyntaxError=(PySyntaxError)e;
    ByteArrayOutputStream baos=new ByteArrayOutputStream();
    PrintStream ps=new PrintStream(new StringServletOutputStream(baos));
    Py.displayException(pySyntaxError.type,pySyntaxError.value,pySyntaxError.traceback,new PyFile(ps));
    message=baos.toString();
  }
  return message;
}
