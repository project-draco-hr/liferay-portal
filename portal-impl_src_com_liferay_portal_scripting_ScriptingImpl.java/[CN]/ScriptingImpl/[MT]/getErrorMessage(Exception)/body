{
  String message=e.getMessage();
  if (e instanceof PySyntaxError) {
    PySyntaxError syntaxError=(PySyntaxError)e;
    ByteArrayMaker bam=new ByteArrayMaker();
    PrintStream ps=new PrintStream(new StringServletOutputStream(bam));
    Py.displayException(syntaxError.type,syntaxError.value,syntaxError.traceback,new PyFile(ps));
    message=bam.toString();
  }
  return message;
}
