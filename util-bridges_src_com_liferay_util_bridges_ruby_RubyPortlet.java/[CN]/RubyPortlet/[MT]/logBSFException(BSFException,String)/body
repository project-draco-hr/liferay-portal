{
  String message="The script at " + path + " or one of the global files has errors.";
  Throwable t=bsfe.getTargetException();
  if (t instanceof RaiseException) {
    RubyException re=((RaiseException)t).getException();
    message+=re.message + " (" + re.getMetaClass().toString()+ ")";
    _log.error(message);
    if (_log.isDebugEnabled()) {
      _log.debug(t,t);
    }
  }
 else {
    _log.error(message,t);
  }
}
