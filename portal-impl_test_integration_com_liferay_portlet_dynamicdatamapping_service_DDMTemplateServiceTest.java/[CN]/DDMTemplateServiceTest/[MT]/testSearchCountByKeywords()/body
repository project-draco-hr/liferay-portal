{
  int initialCount=DDMTemplateLocalServiceUtil.searchCount(TestPropsValues.getCompanyId(),group.getGroupId(),_classNameId,0,null,null,null);
  addDisplayTemplate(_classNameId,0,"Test Template");
  int count=DDMTemplateLocalServiceUtil.searchCount(TestPropsValues.getCompanyId(),group.getGroupId(),_classNameId,0,null,null,null);
  Assert.assertEquals(initialCount + 1,count);
}
