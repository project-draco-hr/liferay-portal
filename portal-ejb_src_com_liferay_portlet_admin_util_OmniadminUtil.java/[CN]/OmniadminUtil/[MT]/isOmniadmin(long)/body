{
  if (userId <= 0) {
    return false;
  }
  long[] omniAdminUsers=StringUtil.split(PropsUtil.get(PropsUtil.OMNIADMIN_USERS),0L);
  if (omniAdminUsers.length > 0) {
    for (int i=0; i < omniAdminUsers.length; i++) {
      if (omniAdminUsers[i] == userId) {
        return true;
      }
    }
    return false;
  }
 else {
    try {
      User user=UserLocalServiceUtil.getUserById(userId);
      return RoleLocalServiceUtil.hasUserRole(userId,user.getCompanyId(),RoleImpl.ADMINISTRATOR,true);
    }
 catch (    Exception e) {
      _log.error(e);
      return false;
    }
  }
}
