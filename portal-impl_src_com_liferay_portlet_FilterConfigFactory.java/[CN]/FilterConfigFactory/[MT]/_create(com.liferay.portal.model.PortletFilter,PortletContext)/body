{
  Map<String,FilterConfig> filterConfigs=_pool.get(portletFilter.getServletContextName());
  if (filterConfigs == null) {
    filterConfigs=new ConcurrentHashMap<String,FilterConfig>();
    _pool.put(portletFilter.getServletContextName(),filterConfigs);
  }
  FilterConfig filterConfig=filterConfigs.get(portletFilter.getFilterName());
  if (filterConfig == null) {
    filterConfig=new FilterConfigImpl(portletFilter.getFilterName(),ctx,portletFilter.getInitParams());
    filterConfigs.put(portletFilter.getFilterName(),filterConfig);
  }
  return filterConfig;
}
