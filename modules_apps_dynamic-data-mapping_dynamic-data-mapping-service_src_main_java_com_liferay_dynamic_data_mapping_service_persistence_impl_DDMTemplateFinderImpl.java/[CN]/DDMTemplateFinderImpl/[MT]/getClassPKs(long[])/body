{
  if (ArrayUtil.isEmpty(classPKs)) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(classPKs.length * 2 + 1);
  sb.append(StringPool.OPEN_PARENTHESIS);
  for (int i=0; i < classPKs.length; i++) {
    sb.append("classPK = ?");
    sb.append(" OR ");
  }
  sb.setIndex(sb.index() - 1);
  sb.append(") AND");
  return sb.toString();
}
