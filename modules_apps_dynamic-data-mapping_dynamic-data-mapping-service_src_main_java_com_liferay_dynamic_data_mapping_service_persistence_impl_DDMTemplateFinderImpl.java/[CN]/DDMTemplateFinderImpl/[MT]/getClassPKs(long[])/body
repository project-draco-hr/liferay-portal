{
  if (ArrayUtil.isEmpty(classPKs)) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(classPKs.length * 2);
  sb.append(StringPool.OPEN_PARENTHESIS);
  for (int i=0; i < classPKs.length; i++) {
    sb.append("classPK = ?");
    if ((i + 1) < classPKs.length) {
      sb.append(" OR ");
    }
  }
  sb.append(") AND");
  return sb.toString();
}
