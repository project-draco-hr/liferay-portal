{
  if (_user == null) {
    Role role=RoleLocalServiceUtil.getRole(getCompanyId(),RoleConstants.ADMINISTRATOR);
    List<User> users=UserLocalServiceUtil.getRoleUsers(role.getRoleId(),0,2);
    if (!users.isEmpty()) {
      _user=users.get(0);
      _userId=_user.getUserId();
    }
  }
  return _user;
}
