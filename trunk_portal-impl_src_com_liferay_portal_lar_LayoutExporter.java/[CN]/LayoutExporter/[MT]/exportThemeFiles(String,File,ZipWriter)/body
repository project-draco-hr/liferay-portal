{
  if ((dir == null) || (!dir.exists())) {
    return;
  }
  File[] files=dir.listFiles();
  for (  File file : files) {
    if (file.isDirectory()) {
      exportThemeFiles(path + StringPool.SLASH + file.getName(),file,zipWriter);
    }
 else {
      zipWriter.addEntry(path + StringPool.SLASH + file.getName(),FileUtil.getBytes(file));
    }
  }
}
