{
  Session session=null;
  try {
    session=openSession();
    if (merge) {
      session.merge(portlet);
    }
 else {
      if (portlet.isNew()) {
        session.save(portlet);
      }
    }
    session.flush();
    portlet.setNew(false);
    return portlet;
  }
 catch (  Exception e) {
    throw HibernateUtil.processException(e);
  }
 finally {
    closeSession(session);
    FinderCache.clearCache(Portlet.class.getName());
  }
}
