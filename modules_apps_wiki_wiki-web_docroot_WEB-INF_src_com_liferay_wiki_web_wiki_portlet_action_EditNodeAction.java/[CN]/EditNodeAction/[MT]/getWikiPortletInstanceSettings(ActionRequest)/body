{
  ThemeDisplay themeDisplay=(ThemeDisplay)actionRequest.getAttribute(WebKeys.THEME_DISPLAY);
  PortletDisplay portletDisplay=themeDisplay.getPortletDisplay();
  WikiWebSettingsProvider wikiWebSettingsProvider=WikiWebSettingsProvider.getWikiWebSettingsProvider();
  PortletInstanceSettingsProvider<WikiPortletInstanceSettings> portletIntanceSettingsProvider=wikiWebSettingsProvider.getPortletInstanceSettingsProvider();
  WikiPortletInstanceSettings wikiPortletInstanceSettings=portletIntanceSettingsProvider.getPortletInstanceSettings(themeDisplay.getLayout(),portletDisplay.getId());
  return wikiPortletInstanceSettings;
}
