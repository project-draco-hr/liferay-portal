{
  ThemeDisplay themeDisplay=(ThemeDisplay)actionRequest.getAttribute(WebKeys.THEME_DISPLAY);
  long folderId=ParamUtil.getLong(actionRequest,"folderId");
  long repositoryId=ParamUtil.getLong(actionRequest,"repositoryId");
  String name=ParamUtil.getString(actionRequest,"name");
  String description=ParamUtil.getString(actionRequest,"description");
  UnicodeProperties typeSettingsProperties=PropertiesParamUtil.getProperties(actionRequest,"settings--");
  ServiceContext serviceContext=ServiceContextFactory.getInstance(DLFolder.class.getName(),actionRequest);
  String portletId=themeDisplay.getPortletDisplay().getPortletName();
  if (repositoryId <= 0) {
    RepositoryServiceUtil.addRepository(themeDisplay.getScopeGroupId(),folderId,name,description,portletId,0,typeSettingsProperties);
  }
 else {
    RepositoryServiceUtil.updateRepository(repositoryId,name,description,typeSettingsProperties);
  }
}
