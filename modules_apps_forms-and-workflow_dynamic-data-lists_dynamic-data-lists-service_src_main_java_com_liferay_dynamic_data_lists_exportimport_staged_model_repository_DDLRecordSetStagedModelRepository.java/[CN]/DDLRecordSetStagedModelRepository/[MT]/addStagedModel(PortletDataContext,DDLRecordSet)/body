{
  long userId=portletDataContext.getUserId(ddlRecordSet.getUserUuid());
  ServiceContext serviceContext=portletDataContext.createServiceContext(ddlRecordSet);
  if (portletDataContext.isDataStrategyMirror()) {
    serviceContext.setUuid(ddlRecordSet.getUuid());
  }
  return _ddlRecordSetLocalService.addRecordSet(userId,ddlRecordSet.getGroupId(),ddlRecordSet.getDDMStructureId(),ddlRecordSet.getRecordSetKey(),ddlRecordSet.getNameMap(),ddlRecordSet.getDescriptionMap(),ddlRecordSet.getMinDisplayRows(),ddlRecordSet.getScope(),serviceContext);
}
