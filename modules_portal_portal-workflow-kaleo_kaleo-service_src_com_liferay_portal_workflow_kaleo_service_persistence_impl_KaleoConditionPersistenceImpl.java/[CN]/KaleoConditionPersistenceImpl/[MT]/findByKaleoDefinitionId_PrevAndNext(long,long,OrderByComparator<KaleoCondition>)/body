{
  KaleoCondition kaleoCondition=findByPrimaryKey(kaleoConditionId);
  Session session=null;
  try {
    session=openSession();
    KaleoCondition[] array=new KaleoConditionImpl[3];
    array[0]=getByKaleoDefinitionId_PrevAndNext(session,kaleoCondition,kaleoDefinitionId,orderByComparator,true);
    array[1]=kaleoCondition;
    array[2]=getByKaleoDefinitionId_PrevAndNext(session,kaleoCondition,kaleoDefinitionId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
