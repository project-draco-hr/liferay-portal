{
  if (portletClassLoader.getResourceAsStream("portlet-service.properties") == null) {
    return;
  }
  Properties serviceBuilderProps=new Properties();
  PropertiesUtil.load(serviceBuilderProps,StringUtil.read(portletClassLoader,"portlet-service.properties"));
  String buildNamespace=GetterUtil.getString(serviceBuilderProps.getProperty("build.namespace"));
  long buildNumber=GetterUtil.getLong(serviceBuilderProps.getProperty("build.number"));
  long buildDate=GetterUtil.getLong(serviceBuilderProps.getProperty("build.date"));
  if (_log.isDebugEnabled()) {
    _log.debug("Build namespace " + buildNamespace);
    _log.debug("Build number " + buildNumber);
    _log.debug("Build date " + buildDate);
  }
  ServiceComponentLocalServiceUtil.updateServiceComponent(ctx,portletClassLoader,buildNamespace,buildNumber,buildDate);
}
