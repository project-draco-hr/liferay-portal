{
  try {
    HttpServletRequest request=PortalUtil.getHttpServletRequest(portletRequest);
    FileVersion fileVersion=getFileVersion(request);
    ImageEditorDLDisplayContextHelper imageEditorDLDisplayContextHelper=new ImageEditorDLDisplayContextHelper(fileVersion,request);
    if (imageEditorDLDisplayContextHelper.isEditWithImageEditorActionAvailable() && ArrayUtil.contains(PropsValues.DL_FILE_ENTRY_PREVIEW_IMAGE_MIME_TYPES,fileVersion.getMimeType())) {
      return true;
    }
    return false;
  }
 catch (  Exception pe) {
  }
  return false;
}
