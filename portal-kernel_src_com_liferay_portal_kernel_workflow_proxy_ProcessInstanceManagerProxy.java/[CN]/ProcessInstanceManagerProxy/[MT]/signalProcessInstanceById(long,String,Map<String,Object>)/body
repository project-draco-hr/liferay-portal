{
  try {
    return (ProcessInstanceInfo)_synchronousMessageSender.send(ProcessInstanceRequest.createSignalProcessInstanceByIdRequest(processInstanceId,activityName,contextInfo));
  }
 catch (  MessageBusException ex) {
    throw new WorkflowException("Unable to signal by " + "processInstanceId:" + processInstanceId + " to activityName:"+ activityName,ex);
  }
}
