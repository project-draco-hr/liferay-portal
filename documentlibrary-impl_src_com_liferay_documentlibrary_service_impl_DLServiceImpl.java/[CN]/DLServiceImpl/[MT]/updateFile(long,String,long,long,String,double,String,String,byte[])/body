{
  if ((FILE_MAX_SIZE > 0) && ((byteArray == null) || (byteArray.length > FILE_MAX_SIZE))) {
    throw new FileSizeException(fileName);
  }
  Hook hook=HookFactory.getInstance();
  hook.updateFile(companyId,portletId,groupId,repositoryId,fileName,versionNumber,sourceFileName,properties,byteArray);
}
