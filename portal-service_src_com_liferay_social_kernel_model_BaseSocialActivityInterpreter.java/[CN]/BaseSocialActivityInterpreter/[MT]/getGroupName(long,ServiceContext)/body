{
  try {
    if (groupId <= 0) {
      return StringPool.BLANK;
    }
    Group group=GroupLocalServiceUtil.getGroup(groupId);
    String groupName=group.getDescriptiveName();
    if (group.getGroupId() == serviceContext.getScopeGroupId()) {
      return HtmlUtil.escape(groupName);
    }
    String groupDisplayURL=StringPool.BLANK;
    if (group.hasPublicLayouts()) {
      groupDisplayURL=group.getDisplayURL(serviceContext.getThemeDisplay(),false);
    }
 else     if (group.hasPrivateLayouts()) {
      groupDisplayURL=group.getDisplayURL(serviceContext.getThemeDisplay(),true);
    }
 else {
      return HtmlUtil.escape(groupName);
    }
    groupName="<a class=\"group\" href=\"" + groupDisplayURL + "\">"+ HtmlUtil.escape(groupName)+ "</a>";
    return groupName;
  }
 catch (  Exception e) {
    return StringPool.BLANK;
  }
}
