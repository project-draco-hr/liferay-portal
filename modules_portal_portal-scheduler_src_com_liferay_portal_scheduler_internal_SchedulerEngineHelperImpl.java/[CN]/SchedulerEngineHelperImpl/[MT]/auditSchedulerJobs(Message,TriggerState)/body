{
  if (!PropsValues.AUDIT_MESSAGE_SCHEDULER_JOB) {
    return;
  }
  try {
    AuditMessage auditMessage=new AuditMessage(SchedulerEngine.SCHEDULER,CompanyConstants.SYSTEM,0,StringPool.BLANK,SchedulerEngine.class.getName(),"0",triggerState.toString(),new Date(),JSONFactoryUtil.createJSONObject(JSONFactoryUtil.serialize(message)));
    auditMessage.setServerName(InetAddressUtil.getLocalHostName());
    auditMessage.setServerPort(PortalUtil.getPortalLocalPort(false));
    AuditRouterUtil.route(auditMessage);
  }
 catch (  Exception e) {
    throw new SchedulerException(e);
  }
}
