{
  if (message == null) {
    message=new Message();
  }
  message.put(SchedulerEngine.EXCEPTIONS_MAX_SIZE,exceptionsMaxSize);
  trigger=TriggerFactoryUtil.buildTrigger(trigger.getTriggerType(),trigger.getJobName(),_formatGroupName(trigger.getGroupName(),jobType),trigger.getStartDate(),trigger.getEndDate(),trigger.getTriggerContent());
  _schedulerEngine.schedule(trigger,description,destinationName,message);
}
