{
  SchedulerRequest schedulerRequest=_getScheduledJob(jobName,groupName);
  if (schedulerRequest == null) {
    return;
  }
  Trigger trigger=schedulerRequest.getTrigger();
  if (trigger == null) {
    return;
  }
  boolean isPermanent=isPermanent(schedulerRequest.getDestinationName(),schedulerRequest.getMessage());
  _addScriptingJob(trigger,description,language,script,isPermanent);
}
