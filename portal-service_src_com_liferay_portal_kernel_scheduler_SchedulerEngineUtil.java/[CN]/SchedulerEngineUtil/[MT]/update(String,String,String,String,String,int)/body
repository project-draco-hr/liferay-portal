{
  SchedulerResponse schedulerResponse=getScheduledJob(jobName,groupName);
  if (schedulerResponse == null) {
    return;
  }
  Trigger trigger=schedulerResponse.getTrigger();
  if (trigger == null) {
    return;
  }
  Message message=schedulerResponse.getMessage();
  if (message == null) {
    return;
  }
  boolean permanent=message.getBoolean(SchedulerEngine.PERMANENT);
  _unregisterMessageListener(schedulerResponse);
  addScriptingJob(trigger,description,language,script,permanent,exceptionsMaxSize);
}
