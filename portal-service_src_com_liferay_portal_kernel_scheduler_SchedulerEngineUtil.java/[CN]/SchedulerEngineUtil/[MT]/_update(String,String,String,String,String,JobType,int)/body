{
  SchedulerResponse schedulerResponse=_getScheduledJob(jobName,groupName,jobType);
  if (schedulerResponse == null) {
    return;
  }
  Trigger trigger=schedulerResponse.getTrigger();
  if (trigger == null) {
    return;
  }
  Message message=schedulerResponse.getMessage();
  if (message == null) {
    return;
  }
  _unregisterMessageListener(schedulerResponse);
  _addScriptingJob(trigger,description,language,script,jobType,exceptionsMaxSize);
}
