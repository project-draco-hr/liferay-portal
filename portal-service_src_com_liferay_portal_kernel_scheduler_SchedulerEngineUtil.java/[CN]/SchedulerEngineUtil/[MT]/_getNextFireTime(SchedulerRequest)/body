{
  JobState jobState=(JobState)schedulerRequest.getMessage().get(SchedulerEngine.JOB_STATE);
  TriggerState triggerState=jobState.getTriggerState();
  if (triggerState == TriggerState.NORMAL || triggerState == TriggerState.PAUSED) {
    return (Date)schedulerRequest.getMessage().get(SchedulerEngine.NEXT_FIRE_TIME);
  }
 else {
    return jobState.getTriggerTimeInfomation(SchedulerEngine.NEXT_FIRE_TIME);
  }
}
