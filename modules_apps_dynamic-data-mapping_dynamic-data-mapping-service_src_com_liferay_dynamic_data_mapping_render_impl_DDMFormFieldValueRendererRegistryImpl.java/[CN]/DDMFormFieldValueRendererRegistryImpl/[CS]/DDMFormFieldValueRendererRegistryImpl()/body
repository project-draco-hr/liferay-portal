{
  Class<?> clazz=getClass();
  Bundle bundle=FrameworkUtil.getBundle(clazz);
  _bundleContext=bundle.getBundleContext();
  Filter filter=null;
  try {
    filter=FrameworkUtil.createFilter("(&(objectClass=" + DDMFormFieldValueRenderer.class.getName() + ")(!(objectClass="+ clazz.getName()+ ")))");
  }
 catch (  InvalidSyntaxException ex) {
  }
  _serviceTracker=new ServiceTracker<>(_bundleContext,filter,new DDMFormFieldValueRendererServiceTrackerCustomizer());
  _serviceTracker.open();
}
