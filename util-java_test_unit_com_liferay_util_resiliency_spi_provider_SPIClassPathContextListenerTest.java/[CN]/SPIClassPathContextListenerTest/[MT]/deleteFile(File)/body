{
  Queue<File> fileQueue=new LinkedList<File>();
  fileQueue.offer(file);
  while ((file=fileQueue.poll()) != null) {
    if (file.isFile()) {
      file.delete();
    }
 else     if (file.isDirectory()) {
      File[] files=file.listFiles();
      if (files.length == 0) {
        file.delete();
      }
 else {
        fileQueue.addAll(Arrays.asList(files));
        fileQueue.add(file);
      }
    }
  }
}
