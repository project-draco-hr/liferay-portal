{
  deleteFile(new File(_CONTEXT_PATH,dirName));
  SPIClassPathContextListener spiClassPathContextListener=new SPIClassPathContextListener();
  try {
    spiClassPathContextListener.contextInitialized(new ServletContextEvent(_mockServletContext));
    Assert.fail();
  }
 catch (  RuntimeException re) {
    Assert.assertEquals("Unable to find directory " + _CONTEXT_PATH + dirName,re.getMessage());
  }
  File file=new File(_CONTEXT_PATH,dirName);
  file.deleteOnExit();
  file.createNewFile();
  try {
    spiClassPathContextListener.contextInitialized(new ServletContextEvent(_mockServletContext));
    Assert.fail();
  }
 catch (  RuntimeException re) {
    Assert.assertEquals("Unable to find directory " + _CONTEXT_PATH + dirName,re.getMessage());
  }
 finally {
    file.delete();
  }
}
