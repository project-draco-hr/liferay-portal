{
  File file=new File(_fileName);
  Queue<File> queue=new LinkedList<File>();
  queue.offer(file);
  while ((file=queue.poll()) != null) {
    if (file.isFile()) {
      file.delete();
    }
 else     if (file.isDirectory()) {
      File[] files=file.listFiles();
      if (files.length == 0) {
        file.delete();
      }
 else {
        queue.addAll(Arrays.asList(files));
        queue.add(file);
      }
    }
  }
}
