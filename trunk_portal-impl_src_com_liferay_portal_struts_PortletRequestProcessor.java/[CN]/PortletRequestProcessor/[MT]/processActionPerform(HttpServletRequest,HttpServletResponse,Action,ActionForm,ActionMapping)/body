{
  PortletConfigImpl portletConfigImpl=(PortletConfigImpl)request.getAttribute(JavaConstants.JAVAX_PORTLET_CONFIG);
  String exceptionId=WebKeys.PORTLET_STRUTS_EXCEPTION + StringPool.PERIOD + portletConfigImpl.getPortletId();
  Exception e=(Exception)request.getAttribute(exceptionId);
  if (e != null) {
    return processException(request,response,e,actionForm,actionMapping);
  }
 else {
    return super.processActionPerform(request,response,action,actionForm,actionMapping);
  }
}
