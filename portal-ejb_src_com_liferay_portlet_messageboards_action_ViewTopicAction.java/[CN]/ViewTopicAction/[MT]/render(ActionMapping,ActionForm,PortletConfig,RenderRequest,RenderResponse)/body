{
  try {
    ActionUtil.getTopic(req);
  }
 catch (  Exception e) {
    if (e != null && e instanceof NoSuchTopicException || e instanceof PrincipalException) {
      SessionErrors.add(req,e.getClass().getName());
      return mapping.findForward("portlet.message_boards.error");
    }
 else {
      throw e;
    }
  }
  return mapping.findForward("portlet.message_boards.view_topic");
}
