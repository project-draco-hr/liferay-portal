{
  BeanPostProcessor beanPostProcessor=new ServiceReferenceAnnotationBeanPostProcessor(_bundleContext);
  configurableListableBeanFactory.registerSingleton(ServiceReferenceAnnotationBeanPostProcessor.class.getName(),beanPostProcessor);
  configurableListableBeanFactory.addBeanPostProcessor(beanPostProcessor);
  configurableListableBeanFactory.addBeanPostProcessor(new BeanReferenceAnnotationBeanPostProcessor(configurableListableBeanFactory));
  super.postProcessBeanFactory(configurableListableBeanFactory);
}
