{
  if (Validator.isNull(workflowDefinition)) {
    deleteWorkflowDefinitionLink(companyId,groupId,className,classPK);
  }
 else {
    String[] workflowDefinitionParts=StringUtil.split(workflowDefinition,StringPool.AT);
    String workflowDefinitionName=workflowDefinitionParts[0];
    int workflowDefinitionVersion=GetterUtil.getInteger(workflowDefinitionParts[1]);
    updateWorkflowDefinitionLink(userId,companyId,groupId,className,classPK,workflowDefinitionName,workflowDefinitionVersion);
  }
}
