{
  if (LuceneUtil.INDEX_READ_ONLY) {
    return;
  }
  long companyId=GetterUtil.getLong(ids[0]);
  IndexWriter writer=null;
  try {
    writer=LuceneUtil.getWriter(companyId);
    Iterator<IGFolder> itr1=igFolderPersistence.findByCompanyId(companyId).iterator();
    while (itr1.hasNext()) {
      IGFolder folder=itr1.next();
      long folderId=folder.getFolderId();
      Iterator<IGImage> itr2=igImagePersistence.findByFolderId(folderId).iterator();
      while (itr2.hasNext()) {
        IGImage image=itr2.next();
        long groupId=folder.getGroupId();
        long imageId=image.getImageId();
        String description=image.getDescription();
        String[] tagsEntries=tagsEntryLocalService.getEntryNames(IGImage.class.getName(),imageId);
        try {
          Document doc=Indexer.getAddImageDocument(companyId,groupId,folderId,imageId,description,tagsEntries);
          writer.addDocument(doc);
        }
 catch (        Exception e1) {
          _log.error("Reindexing " + imageId,e1);
        }
      }
    }
  }
 catch (  SystemException se) {
    throw se;
  }
catch (  Exception e2) {
    throw new SystemException(e2);
  }
 finally {
    try {
      if (writer != null) {
        LuceneUtil.write(companyId);
      }
    }
 catch (    Exception e) {
      _log.error(e);
    }
  }
}
