{
  if ((Validator.isNull(name)) || (name.indexOf("\\\\") != -1) || (name.indexOf("//") != -1)) {
    throw new FolderNameException();
  }
  try {
    igFolderPersistence.findByG_P_N(groupId,parentFolderId,name);
    throw new DuplicateFolderNameException();
  }
 catch (  NoSuchFolderException nsfe) {
  }
  if (name.indexOf(StringPool.PERIOD) != -1) {
    String nameWithExtension=name;
    name=FileUtil.stripExtension(nameWithExtension);
    List<IGImage> images=igImagePersistence.findByF_N(parentFolderId,name);
    for (    IGImage image : images) {
      if (nameWithExtension.equals(image.getNameWithExtension())) {
        throw new DuplicateFolderNameException();
      }
    }
  }
}
