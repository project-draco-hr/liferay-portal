{
  Iterator itr=igFolderPersistence.findByG_P(folder.getGroupId(),folder.getFolderId()).iterator();
  while (itr.hasNext()) {
    IGFolder curFolder=(IGFolder)itr.next();
    deleteFolder(curFolder);
  }
  igImageLocalService.deleteImages(folder.getFolderId());
  resourceLocalService.deleteResource(folder.getCompanyId(),IGFolder.class.getName(),ResourceImpl.SCOPE_INDIVIDUAL,folder.getFolderId());
  igFolderPersistence.remove(folder.getFolderId());
}
