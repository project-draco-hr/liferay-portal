{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    String sql="select groupId from Layout where plid = ?";
    ps=con.prepareStatement(sql);
    ps.setLong(1,plid);
    rs=ps.executeQuery();
    if (rs.next()) {
      return rs.getLong("groupId");
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
  return 0;
}
