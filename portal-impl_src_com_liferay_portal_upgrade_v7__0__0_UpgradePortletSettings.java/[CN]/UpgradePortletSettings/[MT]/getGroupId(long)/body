{
  PreparedStatement ps=null;
  ResultSet rs=null;
  long groupId=0;
  try {
    ps=connection.prepareStatement("select groupId from Layout where plid = ?");
    ps.setLong(1,plid);
    rs=ps.executeQuery();
    if (rs.next()) {
      groupId=rs.getLong("groupId");
    }
  }
  finally {
    DataAccess.cleanUp(null,ps,rs);
  }
  return groupId;
}
