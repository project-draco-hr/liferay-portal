{
  boolean pending=false;
  if (_comment instanceof WorkflowableComment) {
    WorkflowableComment workflowableComment=(WorkflowableComment)_comment;
    if (workflowableComment.getStatus() == WorkflowConstants.STATUS_PENDING) {
      pending=true;
    }
 else {
      pending=false;
    }
  }
  return pending;
}
