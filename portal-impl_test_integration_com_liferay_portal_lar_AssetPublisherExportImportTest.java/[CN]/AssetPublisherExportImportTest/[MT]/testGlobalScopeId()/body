{
  Map<String,String[]> preferenceMap=new HashMap<String,String[]>();
  preferenceMap.put("defaultScope",new String[]{Boolean.TRUE.toString()});
  PortletPreferences portletPreferences=getImportedPortletPreferences(_layout,preferenceMap);
  Assert.assertEquals(Boolean.TRUE.toString(),portletPreferences.getValue("defaultScope",null));
  Assert.assertEquals(null,portletPreferences.getValue("scopeId",null));
  Assert.assertEquals(null,portletPreferences.getValue("scopeIds",null));
}
