{
  Map<String,String[]> preferenceMap=new HashMap<String,String[]>();
  Company company=CompanyLocalServiceUtil.getCompany(layout.getCompanyId());
  Group companyGroup=company.getGroup();
  preferenceMap.put("scopeIds",new String[]{AssetPublisher.SCOPE_ID_GROUP_PREFIX + companyGroup.getGroupId()});
  PortletPreferences portletPreferences=getImportedPortletPreferences(layout,preferenceMap);
  Assert.assertEquals(AssetPublisher.SCOPE_ID_GROUP_PREFIX + companyGroup.getGroupId(),portletPreferences.getValue("scopeIds",null));
  Assert.assertEquals(null,portletPreferences.getValue("scopeId",null));
}
