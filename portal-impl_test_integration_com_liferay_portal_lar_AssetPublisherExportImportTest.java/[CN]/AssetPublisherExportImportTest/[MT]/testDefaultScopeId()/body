{
  Map<String,String[]> preferenceMap=new HashMap<String,String[]>();
  Company company=CompanyLocalServiceUtil.getCompany(_layout.getCompanyId());
  Group companyGroup=company.getGroup();
  preferenceMap.put("defaultScope",new String[]{AssetPublisherUtil.SCOPE_ID_GROUP_PREFIX + companyGroup.getGroupId()});
  PortletPreferences portletPreferences=getImportedPortletPreferences(_layout,preferenceMap);
  Assert.assertEquals(AssetPublisherUtil.SCOPE_ID_GROUP_PREFIX + companyGroup.getGroupId(),portletPreferences.getValue("defaultScope",null));
  Assert.assertEquals(null,portletPreferences.getValue("scopeId",null));
  Assert.assertEquals(null,portletPreferences.getValue("scopeIds",null));
}
