{
  Map<String,String[]> preferenceMap=new HashMap<String,String[]>();
  addGroup(TestPropsValues.getUserId(),_layout);
  preferenceMap.put("defaultScope",new String[]{AssetPublisherUtil.SCOPE_ID_LAYOUT_PREFIX + _layout.getLayoutId()});
  PortletPreferences portletPreferences=getImportedPortletPreferences(_layout,preferenceMap);
  Assert.assertEquals(AssetPublisherUtil.SCOPE_ID_LAYOUT_UUID_PREFIX + _importedLayout.getUuid(),portletPreferences.getValue("defaultScope",null));
  Assert.assertEquals(null,portletPreferences.getValue("scopeId",null));
  Assert.assertEquals(null,portletPreferences.getValue("scopeIds",null));
}
