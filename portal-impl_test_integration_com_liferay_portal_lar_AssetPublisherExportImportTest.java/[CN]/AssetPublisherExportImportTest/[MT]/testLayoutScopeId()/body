{
  Map<String,String[]> preferenceMap=new HashMap<String,String[]>();
  GroupTestUtil.addGroup(TestPropsValues.getUserId(),_layout);
  preferenceMap.put("scopeIds",new String[]{AssetPublisherUtil.SCOPE_ID_LAYOUT_UUID_PREFIX + _layout.getUuid()});
  PortletPreferences portletPreferences=getImportedPortletPreferences(_layout,preferenceMap);
  Assert.assertEquals(AssetPublisherUtil.SCOPE_ID_LAYOUT_UUID_PREFIX + _importedLayout.getUuid(),portletPreferences.getValue("scopeIds",null));
  Assert.assertEquals(null,portletPreferences.getValue("scopeId",null));
}
