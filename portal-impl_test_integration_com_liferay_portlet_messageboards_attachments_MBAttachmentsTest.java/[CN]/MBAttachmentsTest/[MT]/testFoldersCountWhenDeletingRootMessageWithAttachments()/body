{
  int initialFoldersCount=DLFolderLocalServiceUtil.getDLFoldersCount();
  addMessageAttachment();
  Assert.assertEquals(initialFoldersCount + 3,DLFolderLocalServiceUtil.getDLFoldersCount());
  MBMessageLocalServiceUtil.deleteMessage(_message);
  Assert.assertEquals(initialFoldersCount + 1,DLFolderLocalServiceUtil.getDLFoldersCount());
}
