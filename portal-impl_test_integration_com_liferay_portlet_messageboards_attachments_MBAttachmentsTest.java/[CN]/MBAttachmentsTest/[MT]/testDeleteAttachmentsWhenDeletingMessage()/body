{
  int initialFileEntryCount=DLFileEntryLocalServiceUtil.getFileEntriesCount();
  addMessageAttachment();
  Assert.assertEquals(initialFileEntryCount + 1,DLFileEntryLocalServiceUtil.getFileEntriesCount());
  MBMessageLocalServiceUtil.deleteMessage(_message.getMessageId());
  Assert.assertEquals(initialFileEntryCount,DLFileEntryLocalServiceUtil.getFileEntriesCount());
}
