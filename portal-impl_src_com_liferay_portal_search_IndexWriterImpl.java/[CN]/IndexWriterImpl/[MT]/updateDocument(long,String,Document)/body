{
  try {
    IndexWriterRequestMessage req=new IndexWriterRequestMessage(IndexWriterRequestMessage.UPDATE,companyId,uid,doc);
    MessageBusUtil.sendMessage(DestinationNames.SEARCH_INDEX_WRITER_REQUEST,JSONUtil.serialize(req));
  }
 catch (  MarshallException me) {
    throw new SearchException(me);
  }
}
