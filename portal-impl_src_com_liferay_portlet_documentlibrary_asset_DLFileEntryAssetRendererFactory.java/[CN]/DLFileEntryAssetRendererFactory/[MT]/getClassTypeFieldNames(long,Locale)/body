{
  Map<String,Map<String,String>> filterFields=new HashMap<String,Map<String,String>>();
  DLFileEntryType dlFileEntryType=DLFileEntryTypeLocalServiceUtil.getDLFileEntryType(classTypeId);
  List<DDMStructure> ddmStructures=dlFileEntryType.getDDMStructures();
  for (  DDMStructure ddmStructure : ddmStructures) {
    filterFields.putAll(filterDDMStructureFields(ddmStructure,locale));
  }
  return filterFields;
}
