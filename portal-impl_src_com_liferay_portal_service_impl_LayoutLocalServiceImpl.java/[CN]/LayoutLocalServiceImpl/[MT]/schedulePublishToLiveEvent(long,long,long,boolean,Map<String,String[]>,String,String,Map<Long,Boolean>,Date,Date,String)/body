{
  try {
    PublishToLiveEvent event=new PublishToLiveEvent(userId,stagingGroupId,liveGroupId,privateLayout,parameterMap,scope,layoutIdMap);
    SchedulingRequest sr=new SchedulingRequest(cronText,DestinationNames.STAGING,getSchedulerGroupName(liveGroupId),JSONUtil.serialize(event),startDate,endDate,SchedulingRequest.REGISTER_TYPE,description);
    MessageBusUtil.sendMessage(DestinationNames.SCHEDULER,JSONUtil.serialize(sr));
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
}
