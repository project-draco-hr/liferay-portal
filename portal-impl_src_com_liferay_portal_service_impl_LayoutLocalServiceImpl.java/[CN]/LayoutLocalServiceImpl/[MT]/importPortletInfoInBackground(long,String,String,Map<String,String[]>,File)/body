{
  User user=userPersistence.findByPrimaryKey(userId);
  Group companyGroup=groupLocalService.getCompanyGroup(user.getCompanyId());
  Group controlPanelGroup=groupPersistence.findByC_F(user.getCompanyId(),GroupConstants.CONTROL_PANEL_FRIENDLY_URL);
  Layout controlPanelLayout=layoutPersistence.findByG_P_T_First(controlPanelGroup.getGroupId(),true,LayoutConstants.TYPE_CONTROL_PANEL,null);
  return importPortletInfoInBackground(userId,taskName,controlPanelLayout.getPlid(),companyGroup.getGroupId(),portletId,parameterMap,file);
}
