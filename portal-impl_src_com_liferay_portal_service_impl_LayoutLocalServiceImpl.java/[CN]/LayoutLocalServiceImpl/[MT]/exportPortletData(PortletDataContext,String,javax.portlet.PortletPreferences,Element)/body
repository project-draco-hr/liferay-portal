{
  Portlet portlet=portletLocalService.getPortletById(context.getCompanyId(),portletId);
  if (portlet == null) {
    if (_log.isDebugEnabled()) {
      _log.debug("Do not export portlet data for " + portletId + " because the portlet does not exist");
    }
    return;
  }
  PortletDataHandler portletDataHandler=portlet.getPortletDataHandlerInstance();
  if (portletDataHandler == null) {
    return;
  }
  if (_log.isDebugEnabled()) {
    _log.debug("Exporting data for " + portletId);
  }
  Map parameterMap=context.getParameterMap();
  boolean exportData=false;
  if (MapUtil.getBoolean(parameterMap,PortletDataHandlerKeys.PORTLET_DATA + "_" + portlet.getRootPortletId()) || MapUtil.getBoolean(parameterMap,PortletDataHandlerKeys.PORTLET_DATA_ALL)) {
    exportData=true;
  }
  if (!exportData) {
    if (_log.isDebugEnabled()) {
      _log.debug("Not exporting data for " + portletId + " because it was not selected by the user");
    }
    return;
  }
  String data=portletDataHandler.exportData(context,portletId,portletPreferences);
  if (data == null) {
    if (_log.isDebugEnabled()) {
      _log.debug("Not exporting data for " + portletId + " because null data was returned");
    }
    return;
  }
  String portletDataPath=getPortletDataPath(context,portletId);
  parentEl.addElement("portlet-data").addAttribute("path",portletDataPath);
  context.addZipEntry(portletDataPath,data);
}
