{
  layout.setName(name,LocaleUtil.fromLanguageId(languageId));
  LayoutUtil.update(layout);
  try {
    if (layout.getDlFolderId() > 0) {
      DLFolder folder=DLFolderLocalServiceUtil.getFolder(layout.getDlFolderId());
      DLFolderLocalServiceUtil.updateFolder(folder.getFolderId(),folder.getParentFolderId(),name,folder.getDescription());
    }
  }
 catch (  NoSuchFolderException nsfe) {
  }
  return layout;
}
