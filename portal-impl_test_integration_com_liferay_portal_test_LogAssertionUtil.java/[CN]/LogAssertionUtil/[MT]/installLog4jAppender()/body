{
  org.apache.log4j.Logger log4jLogger=org.apache.log4j.Logger.getRootLogger();
  Appender appender=log4jLogger.getAppender("logAssertionAppender");
  if (appender == null) {
    LogAssertionAppender logAssertionAppender=new LogAssertionAppender(log4jLogger);
    logAssertionAppender.setName("logAssertionAppender");
    log4jLogger.addAppender(logAssertionAppender);
  }
}
