{
  try {
    if (group.isSite()) {
      AnnouncementsEntryLocalServiceUtil.deleteEntries(group.getClassNameId(),group.getGroupId());
    }
 else {
      AnnouncementsEntryLocalServiceUtil.deleteEntries(group.getClassNameId(),group.getClassPK());
      if (group.isOrganization()) {
        long classNameId=ClassNameLocalServiceUtil.getClassNameId(Group.class);
        AnnouncementsEntryLocalServiceUtil.deleteEntries(classNameId,group.getGroupId());
      }
    }
  }
 catch (  Exception e) {
    throw new ModelListenerException(e);
  }
}
