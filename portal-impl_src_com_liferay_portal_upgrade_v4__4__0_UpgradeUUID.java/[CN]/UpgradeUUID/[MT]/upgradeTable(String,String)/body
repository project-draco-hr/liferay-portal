{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("SELECT " + pkColName + " FROM "+ tableName+ " WHERE uuid_ IS NULL or uuid_ = ''");
    rs=ps.executeQuery();
    while (rs.next()) {
      long pkColValue=rs.getLong(pkColName);
      String uuid=PortalUUIDUtil.generate();
      ps=con.prepareStatement("UPDATE " + tableName + " SET uuid_ = '"+ uuid+ "' WHERE "+ pkColName+ " = "+ pkColValue);
      ps.executeUpdate();
      ps.close();
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
