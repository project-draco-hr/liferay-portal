{
  String parentOrganizationComparator=StringPool.EQUAL;
  if (parentOrganizationId == OrganizationImpl.ANY_PARENT_ORGANIZATION_ID) {
    parentOrganizationComparator=StringPool.NOT_EQUAL;
  }
  if (location) {
    if (parentOrganizationId == OrganizationImpl.ANY_PARENT_ORGANIZATION_ID) {
      parentOrganizationId=OrganizationImpl.DEFAULT_PARENT_ORGANIZATION_ID;
    }
    List organizations=null;
    if (parentOrganizationId == OrganizationImpl.DEFAULT_PARENT_ORGANIZATION_ID) {
      organizations=OrganizationFinder.findByC_PO_N_L_S_C_Z_R_C(companyId,parentOrganizationId,parentOrganizationComparator,name,location,street,city,zip,regionId,countryId,params,andOperator,begin,end,obc);
    }
 else {
      Organization grandParentOrganization=OrganizationUtil.findByPrimaryKey(parentOrganizationId);
      long grandParentOrganizationId=grandParentOrganization.getParentOrganizationId();
      organizations=search(companyId,grandParentOrganizationId,name,location,street,city,zip,regionId,countryId,params,andOperator,begin,end,obc);
      organizations.addAll(OrganizationFinder.findByC_PO_N_L_S_C_Z_R_C(companyId,parentOrganizationId,parentOrganizationComparator,name,location,street,city,zip,regionId,countryId,params,andOperator,begin,end,obc));
    }
    return organizations;
  }
 else {
    return OrganizationFinder.findByC_PO_N_L_S_C_Z_R_C(companyId,parentOrganizationId,parentOrganizationComparator,name,location,street,city,zip,regionId,countryId,params,andOperator,begin,end,obc);
  }
}
