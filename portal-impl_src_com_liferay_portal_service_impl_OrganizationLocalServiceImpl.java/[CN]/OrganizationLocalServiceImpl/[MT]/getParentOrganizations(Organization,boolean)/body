{
  List organizations=new ArrayList();
  if (!lastOrganization) {
    organizations.add(organization);
  }
  long parentOrganizationId=organization.getParentOrganizationId();
  if (parentOrganizationId == OrganizationImpl.DEFAULT_PARENT_ORGANIZATION_ID) {
    return organizations;
  }
  Organization parentOrganization=organizationPersistence.findByPrimaryKey(parentOrganizationId);
  List parentOrganizatons=getParentOrganizations(parentOrganization,false);
  organizations.addAll(parentOrganizatons);
  return organizations;
}
