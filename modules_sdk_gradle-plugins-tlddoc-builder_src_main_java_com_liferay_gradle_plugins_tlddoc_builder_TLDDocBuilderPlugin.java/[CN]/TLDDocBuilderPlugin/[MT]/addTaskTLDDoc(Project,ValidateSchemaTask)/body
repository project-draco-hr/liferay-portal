{
  final TLDDocTask tlddocTask=GradleUtil.addTask(project,TLDDOC_TASK_NAME,TLDDocTask.class);
  tlddocTask.dependsOn(validateTLDTask);
  tlddocTask.setDescription("Runs Tag Library Documentation Generator.");
  tlddocTask.setGroup(JavaBasePlugin.DOCUMENTATION_GROUP);
  PluginContainer pluginContainer=project.getPlugins();
  pluginContainer.withType(JavaPlugin.class,new Action<JavaPlugin>(){
    @Override public void execute(    JavaPlugin javaPlugin){
      configureTaskTLDDocForJavaPlugin(tlddocTask);
    }
  }
);
  return tlddocTask;
}
