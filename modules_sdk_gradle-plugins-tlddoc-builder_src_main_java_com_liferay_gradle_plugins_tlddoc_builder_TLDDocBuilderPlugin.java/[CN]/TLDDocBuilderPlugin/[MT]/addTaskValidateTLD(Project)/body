{
  final ValidateSchemaTask validateSchemaTask=GradleUtil.addTask(project,VALIDATE_TLD_TASK_NAME,ValidateSchemaTask.class);
  validateSchemaTask.setDescription("Validates TLD files.");
  PluginContainer pluginContainer=project.getPlugins();
  pluginContainer.withType(JavaPlugin.class,new Action<JavaPlugin>(){
    @Override public void execute(    JavaPlugin javaPlugin){
      configureTaskValidateSchemaForJavaPlugin(validateSchemaTask);
    }
  }
);
  return validateSchemaTask;
}
