{
  markdown=markdown.replace("\\","\\\\");
  markdown=markdown.replace("`","\\`");
  markdown=markdown.replace("*","\\*");
  markdown=markdown.replace("_","\\_");
  markdown=markdown.replace("{","\\{");
  markdown=markdown.replace("}","\\}");
  markdown=markdown.replace("[","\\[");
  markdown=markdown.replace("]","\\]");
  markdown=markdown.replace("(","\\(");
  markdown=markdown.replace(")","\\)");
  markdown=markdown.replace("#","\\#");
  markdown=markdown.replace("+","\\+");
  markdown=markdown.replace("-","\\-");
  markdown=markdown.replace(".","\\.");
  markdown=markdown.replace("!","\\!");
  return markdown;
}
