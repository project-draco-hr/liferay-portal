{
  String mvcRenderCommandName=ParamUtil.getString(_request,"mvcRenderCommandName");
  if (mvcRenderCommandName.equals("/message_boards/view_recent_posts")) {
    return true;
  }
  String entriesNavigation=ParamUtil.getString(_request,"entriesNavigation");
  if (entriesNavigation.equals("recent")) {
    return true;
  }
  return false;
}
