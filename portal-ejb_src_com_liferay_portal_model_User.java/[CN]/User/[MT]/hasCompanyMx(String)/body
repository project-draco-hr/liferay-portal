{
  String mx=emailAddress.substring(emailAddress.indexOf(StringPool.AT) + 1,emailAddress.length());
  if (mx.equals(getCompanyMx())) {
    return true;
  }
  try {
    String[] mailHostNames=PrefsPropsUtil.getStringArray(getCompanyId(),PropsUtil.ADMIN_MAIL_HOST_NAMES);
    for (int i=0; i < mailHostNames.length; i++) {
      if (mx.equalsIgnoreCase(mailHostNames[i])) {
        return true;
      }
    }
  }
 catch (  Exception e) {
    _log.error(e);
  }
  return false;
}
