{
  Group group=groupLocalService.getGroup(groupId);
  long companyId=group.getCompanyId();
  List<DLFolder> folders=dlFolderPersistence.findByG_P(groupId,DLFolderConstants.DEFAULT_PARENT_FOLDER_ID);
  for (  DLFolder folder : folders) {
    deleteFolder(folder);
  }
  deleteFileEntries(groupId,DLFolderConstants.DEFAULT_PARENT_FOLDER_ID);
  try {
    dlLocalService.deleteDirectory(companyId,PortletKeys.DOCUMENT_LIBRARY,groupId,StringPool.BLANK);
  }
 catch (  NoSuchDirectoryException nsde) {
    if (_log.isDebugEnabled()) {
      _log.debug(nsde.getMessage());
    }
  }
}
