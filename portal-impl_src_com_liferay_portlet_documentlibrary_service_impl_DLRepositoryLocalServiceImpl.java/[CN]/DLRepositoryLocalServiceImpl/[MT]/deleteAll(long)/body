{
  Group group=groupLocalService.getGroup(groupId);
  List<DLFolder> dlFolders=dlFolderPersistence.findByG_P(groupId,DLFolderConstants.DEFAULT_PARENT_FOLDER_ID);
  for (  DLFolder dlFolder : dlFolders) {
    deleteFolder(dlFolder);
  }
  deleteFileEntries(groupId,DLFolderConstants.DEFAULT_PARENT_FOLDER_ID);
  try {
    dlLocalService.deleteDirectory(group.getCompanyId(),PortletKeys.DOCUMENT_LIBRARY,groupId,StringPool.BLANK);
  }
 catch (  NoSuchDirectoryException nsde) {
    if (_log.isDebugEnabled()) {
      _log.debug(nsde.getMessage());
    }
  }
}
