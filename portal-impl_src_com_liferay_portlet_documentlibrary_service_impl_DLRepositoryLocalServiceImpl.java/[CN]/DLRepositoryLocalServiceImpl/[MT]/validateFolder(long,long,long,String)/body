{
  if (!AssetUtil.isValidWord(name)) {
    throw new FolderNameException();
  }
  try {
    getFileEntry(groupId,parentFolderId,name);
    throw new DuplicateFileException();
  }
 catch (  NoSuchFileEntryException nsfee) {
  }
  if (parentFolderId != DLFolderConstants.MAPPED_PARENT_FOLDER_ID) {
    DLFolder folder=dlFolderPersistence.fetchByG_P_N(groupId,parentFolderId,name);
    if ((folder != null) && (folder.getFolderId() != folderId)) {
      throw new DuplicateFolderNameException();
    }
  }
}
