{
  Group group=GroupTestUtil.addGroup();
  Layout layout=LayoutTestUtil.addLayout(group.getGroupId(),ServiceTestUtil.randomString());
  LinkedHashMap<String,Object> params=new LinkedHashMap<String,Object>();
  if (includeGlobalGroup) {
    params.put("includeGlobalScope",true);
  }
  List<MDRRuleGroup> ruleGroups=MDRRuleGroupLocalServiceUtil.searchByKeywords(layout.getGroupId(),StringPool.BLANK,params,false,QueryUtil.ALL_POS,QueryUtil.ALL_POS);
  if (includeGlobalGroup) {
    Assert.assertTrue(ruleGroups.contains(_companyRuleGroup));
  }
 else {
    Assert.assertFalse(ruleGroups.contains(_companyRuleGroup));
  }
}
