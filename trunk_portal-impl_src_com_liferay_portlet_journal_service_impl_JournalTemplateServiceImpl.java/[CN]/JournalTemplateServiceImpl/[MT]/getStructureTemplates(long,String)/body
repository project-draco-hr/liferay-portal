{
  if (!JournalStructurePermission.contains(getPermissionChecker(),groupId,structureId,ActionKeys.VIEW)) {
    return new ArrayList<JournalTemplate>();
  }
  List<JournalTemplate> list=journalTemplateLocalService.getStructureTemplates(groupId,structureId);
  list=ListUtil.copy(list);
  Iterator<JournalTemplate> itr=list.iterator();
  while (itr.hasNext()) {
    JournalTemplate template=itr.next();
    if (!JournalTemplatePermission.contains(getPermissionChecker(),template,ActionKeys.VIEW)) {
      itr.remove();
    }
  }
  return list;
}
