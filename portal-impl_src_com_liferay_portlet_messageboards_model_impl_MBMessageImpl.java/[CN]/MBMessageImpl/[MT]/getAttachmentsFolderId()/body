{
  if (_attachmentsFolderId > 0) {
    return _attachmentsFolderId;
  }
  ServiceContext serviceContext=new ServiceContext();
  serviceContext.setAddGroupPermissions(true);
  serviceContext.setAddGuestPermissions(true);
  long repositoryId=PortletFileRepositoryUtil.getPortletRepositoryId(getGroupId(),PortletKeys.MESSAGE_BOARDS,serviceContext);
  Folder folder=PortletFileRepositoryUtil.getPortletFolder(getUserId(),repositoryId,getThreadAttachmentsFolderId(),String.valueOf(getMessageId()),serviceContext);
  _attachmentsFolderId=folder.getFolderId();
  return _attachmentsFolderId;
}
