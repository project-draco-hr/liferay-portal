{
  int attachmentsFileEntriesCount=0;
  long attachmentsFolderId=getAttachmentsFolderId();
  if (attachmentsFolderId != DLFolderConstants.DEFAULT_PARENT_FOLDER_ID) {
    attachmentsFileEntriesCount=PortletFileRepositoryUtil.getPortletFileEntriesCount(getGroupId(),attachmentsFolderId,WorkflowConstants.STATUS_APPROVED);
  }
  return attachmentsFileEntriesCount;
}
