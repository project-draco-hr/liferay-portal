{
  int deletedAttachmentsFileEntriesCount=0;
  long attachmentsFolderId=getAttachmentsFolderId();
  if (attachmentsFolderId != DLFolderConstants.DEFAULT_PARENT_FOLDER_ID) {
    deletedAttachmentsFileEntriesCount=PortletFileRepositoryUtil.getPortletFileEntriesCount(getGroupId(),attachmentsFolderId,WorkflowConstants.STATUS_IN_TRASH);
  }
  return deletedAttachmentsFileEntriesCount;
}
