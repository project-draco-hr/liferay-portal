{
  mbThreadFlag.setNew(false);
  mbThreadFlag=mbThreadFlagPersistence.update(mbThreadFlag,merge);
  Indexer indexer=IndexerRegistryUtil.getIndexer(getModelClassName());
  if (indexer != null) {
    try {
      indexer.reindex(mbThreadFlag);
    }
 catch (    SearchException se) {
      if (_log.isWarnEnabled()) {
        _log.warn(se,se);
      }
    }
  }
  return mbThreadFlag;
}
