{
  if (plid != LayoutConstants.DEFAULT_PLID) {
    try {
      Layout layout=LayoutLocalServiceUtil.getLayout(plid);
      LayoutTypePortlet layoutTypePortlet=(LayoutTypePortlet)layout.getLayoutType();
      if (layoutTypePortlet.hasPortletId(PortletKeys.MESSAGE_BOARDS)) {
        return plid;
      }
    }
 catch (    NoSuchLayoutException nsle) {
    }
  }
  MBMessage message=MBMessageLocalServiceUtil.getMessage(messageId);
  plid=PortalUtil.getPlidFromPortletId(message.getCategory().getGroupId(),false,PortletKeys.MESSAGE_BOARDS);
  if (plid == LayoutConstants.DEFAULT_PLID) {
    throw new NoSuchLayoutException("No public page was found with the Message Boards portlet.");
  }
 else {
    return plid;
  }
}
