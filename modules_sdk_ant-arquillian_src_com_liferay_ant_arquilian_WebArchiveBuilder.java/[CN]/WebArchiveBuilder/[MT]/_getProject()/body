{
  Project project=new Project();
  DefaultLogger defaultLogger=new DefaultLogger(){
    @Override public void buildFinished(    BuildEvent buildEvent){
      System.out.println("[BUILD FINISHED]");
    }
    @Override public void buildStarted(    BuildEvent buildEvent){
      System.out.println("[BUILD STARTED]");
    }
    @Override public void messageLogged(    BuildEvent buildEvent){
      System.out.println(buildEvent.getMessage());
    }
  }
;
  defaultLogger.setErrorPrintStream(System.err);
  defaultLogger.setMessageOutputLevel(Project.MSG_INFO);
  defaultLogger.setOutputPrintStream(System.out);
  project.addBuildListener(defaultLogger);
  File buildFile=new File("build.xml");
  project.setUserProperty("ant.file",buildFile.getAbsolutePath());
  project.init();
  ProjectHelper projectHelper=ProjectHelper.getProjectHelper();
  project.addReference("ant.projectHelper",projectHelper);
  projectHelper.parse(project,buildFile);
  return project;
}
