{
  User user=AtomUtil.getUser(atomRequestContext);
  long userId=user.getUserId();
  long groupId=journalArticle.getGroupId();
  String articleId=journalArticle.getArticleId();
  double version=journalArticle.getVersion();
  ServiceContext serviceContext=new ServiceContext();
  serviceContext.setScopeGroupId(groupId);
  journalArticle=JournalArticleServiceUtil.updateArticle(groupId,articleId,version,content,serviceContext);
  int status=WorkflowConstants.STATUS_APPROVED;
  String articleURL=StringPool.BLANK;
  JournalArticleLocalServiceUtil.updateStatus(userId,groupId,journalArticle.getArticleId(),journalArticle.getVersion(),status,articleURL,serviceContext);
}
