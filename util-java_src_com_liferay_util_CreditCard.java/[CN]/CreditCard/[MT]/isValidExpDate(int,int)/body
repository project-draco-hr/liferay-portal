{
  Calendar curCal=CalendarFactoryUtil.getCalendar(TimeZoneUtil.getDefault(),LocaleUtil.getDefault());
  if (CalendarUtil.isFuture(ccExpMonth,ccExpYear)) {
    return true;
  }
 else   if ((ccExpMonth == curCal.get(Calendar.MONTH)) && (ccExpYear == curCal.get(Calendar.YEAR))) {
    return true;
  }
  return false;
}
