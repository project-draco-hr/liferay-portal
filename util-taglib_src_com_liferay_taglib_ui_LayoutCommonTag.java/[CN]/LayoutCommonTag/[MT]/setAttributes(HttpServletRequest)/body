{
  ThemeDisplay themeDisplay=(ThemeDisplay)request.getAttribute(WebKeys.THEME_DISPLAY);
  if (!themeDisplay.isFacebook() && !themeDisplay.isStateExclusive() && !themeDisplay.isStatePopUp()&& !themeDisplay.isWidget()) {
    _includeStaticPortlets=true;
  }
  request.setAttribute("liferay-ui:layout-common:includeStaticPortlets",_includeStaticPortlets);
  if (_WEB_SERVER_DISPLAY_NODE && !themeDisplay.isStatePopUp()) {
    _includeWebServerDisplayNode=true;
  }
  request.setAttribute("liferay-ui:layout-common:includeWebServerDisplayNode",_includeWebServerDisplayNode);
}
