{
  try {
    new MultiDataCenterCounterFinderImpl(2,2);
    Assert.fail();
  }
 catch (  IllegalArgumentException iae) {
    Assert.assertEquals("Invalid data center count (2) or data center deployment id " + "(2). Please consult the appropriate documentation.",iae.getMessage());
  }
  try {
    new MultiDataCenterCounterFinderImpl(1 << 8,2);
    Assert.fail();
  }
 catch (  IllegalArgumentException iae) {
    Assert.assertEquals("Unable to shift more than 8 bits",iae.getMessage());
  }
}
