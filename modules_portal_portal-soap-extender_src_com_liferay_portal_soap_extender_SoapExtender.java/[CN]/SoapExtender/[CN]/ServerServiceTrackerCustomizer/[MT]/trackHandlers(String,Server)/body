{
  String filterString="(&(objectClass=" + Handler.class.getName() + ")(soap.address="+ address+ "))";
  Filter filter=null;
  try {
    filter=_bundleContext.createFilter(filterString);
  }
 catch (  InvalidSyntaxException ise) {
    throw new RuntimeException(ise);
  }
  ServiceTracker<Handler<?>,Handler<?>> serviceTracker=new ServiceTracker<>(_bundleContext,filter,new HandlerServiceTrackerCustomizer(server));
  serviceTracker.open();
  return serviceTracker;
}
