  CXFNonSpringServlet cxfNonSpringServlet=new CXFNonSpringServlet();
  cxfNonSpringServlet.setBus(bus);
  _servletServiceRegistration=_bundleContext.registerService(Servlet.class,cxfNonSpringServlet,properties);
