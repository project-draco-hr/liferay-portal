{
  if (!_highlight || Validator.isNull(text) || ArrayUtil.isEmpty(_queryTerms)) {
    return HtmlUtil.escape(text);
  }
  text=SearchUtil.highlight(text,_queryTerms,ESCAPE_SAFE_HIGHLIGHT_1,ESCAPE_SAFE_HIGHLIGHT_2);
  text=HtmlUtil.escape(text);
  return StringUtil.replace(text,new String[]{ESCAPE_SAFE_HIGHLIGHT_1,ESCAPE_SAFE_HIGHLIGHT_2},new String[]{SearchUtil.HIGHLIGHT_1,SearchUtil.HIGHLIGHT_2});
}
