{
  if (!_highlight || Validator.isNull(text) || ArrayUtil.isEmpty(_queryTerms)) {
    return HtmlUtil.escape(text);
  }
  text=SearchUtil.highlight(text,_queryTerms,_ESCAPE_SAFE_HIGHLIGHTS[0],_ESCAPE_SAFE_HIGHLIGHTS[1]);
  text=HtmlUtil.escape(text);
  return StringUtil.replace(text,_ESCAPE_SAFE_HIGHLIGHTS,SearchUtil.HIGHLIGHTS);
}
