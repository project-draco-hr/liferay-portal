{
  DLFolderPermission.check(getPermissionChecker(),folderId,ActionKeys.UPDATE);
  boolean hasLock=lockService.hasLock(DLFolder.class.getName(),folderId,getUserId());
  Lock lock=null;
  if (!hasLock) {
    lock=lockFolder(folderId);
  }
  try {
    return dlFolderLocalService.updateFolder(folderId,parentFolderId,name,description,serviceContext);
  }
  finally {
    if (!hasLock) {
      unlockFolder(folderId,lock.getUuid());
    }
  }
}
