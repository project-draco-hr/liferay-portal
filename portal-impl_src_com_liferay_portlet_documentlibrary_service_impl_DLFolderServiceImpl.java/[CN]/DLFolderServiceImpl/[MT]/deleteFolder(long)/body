{
  DLFolderPermission.check(getPermissionChecker(),folderId,ActionKeys.DELETE);
  boolean hasLock=lockService.hasLock(DLFolder.class.getName(),folderId,getUserId());
  Lock lock=null;
  if (!hasLock) {
    lock=lockFolder(folderId);
  }
  try {
    dlFolderLocalService.deleteFolder(folderId);
  }
  finally {
    if (!hasLock) {
      unlockFolder(folderId,lock.getUuid());
    }
  }
}
