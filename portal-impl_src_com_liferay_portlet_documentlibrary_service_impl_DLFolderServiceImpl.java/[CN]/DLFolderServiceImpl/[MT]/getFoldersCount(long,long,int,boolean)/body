{
  if (!DLFolderPermission.contains(getPermissionChecker(),groupId,parentFolderId,ActionKeys.VIEW)) {
    return 0;
  }
  if (includeMountfolders) {
    return dlFolderPersistence.filterCountByG_P_H_S(groupId,parentFolderId,false,status);
  }
 else {
    return dlFolderPersistence.filterCountByG_M_P_H_S(groupId,false,parentFolderId,false,status);
  }
}
