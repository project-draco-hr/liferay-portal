{
  Attachment attachment=findByPrimaryKey(attachmentId);
  Session session=null;
  try {
    session=openSession();
    Attachment[] array=new AttachmentImpl[3];
    array[0]=getByMessageId_PrevAndNext(session,attachment,messageId,orderByComparator,true);
    array[1]=attachment;
    array[2]=getByMessageId_PrevAndNext(session,attachment,messageId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
