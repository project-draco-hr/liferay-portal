{
  String ifClauseSingleLine=StringUtil.replace(ifClause,new String[]{StringPool.TAB + StringPool.SPACE,StringPool.TAB,StringPool.OPEN_PARENTHESIS + StringPool.NEW_LINE,StringPool.NEW_LINE},new String[]{StringPool.TAB,StringPool.BLANK,StringPool.OPEN_PARENTHESIS,StringPool.SPACE});
  checkIfClauseParentheses(ifClauseSingleLine,fileName,lineCount);
  return formatIfClause(ifClause);
}
