{
  Matcher matcher=_ddmFormFieldNamePattern.matcher(ddmFormField.getName());
  if (!matcher.matches()) {
    throw new DDMFormValidationException("Invalid characters were defined for field name " + ddmFormField.getName());
  }
  if (ddmFormFieldNames.contains(StringUtil.toLowerCase(ddmFormField.getName()))) {
    throw new DDMFormValidationException("The field name " + ddmFormField.getName() + " was defined more than once");
  }
  ddmFormFieldNames.add(StringUtil.toLowerCase(ddmFormField.getName()));
}
