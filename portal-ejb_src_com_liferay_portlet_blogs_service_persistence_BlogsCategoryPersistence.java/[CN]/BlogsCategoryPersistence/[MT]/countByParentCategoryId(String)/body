{
  Session session=null;
  try {
    session=openSession();
    StringBuffer query=new StringBuffer();
    query.append("SELECT COUNT(*) ");
    query.append("FROM BlogsCategory IN CLASS com.liferay.portlet.blogs.service.persistence.BlogsCategoryHBM WHERE ");
    if (parentCategoryId == null) {
      query.append("parentCategoryId is null");
    }
 else {
      query.append("parentCategoryId = ?");
    }
    query.append(" ");
    Query q=session.createQuery(query.toString());
    int queryPos=0;
    if (parentCategoryId != null) {
      q.setString(queryPos++,parentCategoryId);
    }
    Iterator itr=q.list().iterator();
    if (itr.hasNext()) {
      Long count=(Long)itr.next();
      if (count != null) {
        return count.intValue();
      }
    }
    return 0;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
