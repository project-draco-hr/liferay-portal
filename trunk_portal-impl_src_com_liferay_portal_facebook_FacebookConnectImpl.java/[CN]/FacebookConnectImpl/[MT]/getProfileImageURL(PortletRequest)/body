{
  HttpServletRequest request=PortalUtil.getHttpServletRequest(portletRequest);
  request=PortalUtil.getOriginalServletRequest(request);
  HttpSession session=request.getSession();
  String facebookId=(String)session.getAttribute(WebKeys.FACEBOOK_USER_ID);
  if (Validator.isNull(facebookId)) {
    return null;
  }
  long companyId=PortalUtil.getCompanyId(request);
  String token=(String)session.getAttribute(WebKeys.FACEBOOK_ACCESS_TOKEN);
  JSONObject jsonObject=getGraphResources(companyId,"/me",token,"id,picture");
  return jsonObject.getString("picture");
}
