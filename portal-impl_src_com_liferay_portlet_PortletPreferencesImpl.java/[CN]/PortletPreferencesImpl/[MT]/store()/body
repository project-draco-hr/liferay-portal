{
  if (_portletId == null) {
    throw new UnsupportedOperationException();
  }
  try {
    Portlet portlet=PortletLocalServiceUtil.getPortletById(_companyId,_portletId);
    if (!_portletId.equals(PortletKeys.LIFERAY_PORTAL)) {
      PreferencesValidator preferencesValidator=PortalUtil.getPreferencesValidator(portlet);
      if (preferencesValidator != null) {
        preferencesValidator.validate(this);
      }
    }
    PortletPreferencesLocalServiceUtil.updatePreferences(_ownerId,_ownerType,_plid,_portletId,this);
  }
 catch (  SystemException se) {
    throw new IOException(se.getMessage());
  }
}
