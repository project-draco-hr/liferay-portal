{
  try {
    splitThread(actionRequest,actionResponse);
  }
 catch (  Exception e) {
    if (e instanceof PrincipalException || e instanceof RequiredMessageException) {
      SessionErrors.add(actionRequest,e.getClass());
      actionResponse.setRenderParameter("mvcPath","/html/portlet/message_boards/error.jsp");
    }
 else     if (e instanceof MessageBodyException || e instanceof MessageSubjectException || e instanceof NoSuchThreadException|| e instanceof SplitThreadException) {
      SessionErrors.add(actionRequest,e.getClass());
    }
 else {
      throw e;
    }
  }
}
