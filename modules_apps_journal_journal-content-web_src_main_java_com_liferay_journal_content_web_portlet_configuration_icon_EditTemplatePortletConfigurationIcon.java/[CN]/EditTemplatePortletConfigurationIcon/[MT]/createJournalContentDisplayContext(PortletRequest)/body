{
  try {
    PortletResponse portletResponse=RenderResponseFactory.create((RenderRequestImpl)portletRequest,themeDisplay.getResponse(),portletDisplay.getPortletName(),themeDisplay.getCompanyId());
    JournalContentPortletInstanceConfiguration journalContentPortletInstanceConfiguration=portletDisplay.getPortletInstanceConfiguration(JournalContentPortletInstanceConfiguration.class);
    _journalContentDisplayContext=new JournalContentDisplayContext(portletRequest,portletResponse,journalContentPortletInstanceConfiguration);
  }
 catch (  Exception e) {
    _log.error("Unable to create display context",e);
  }
}
