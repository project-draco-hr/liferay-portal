{
  BooleanQueryImpl booleanQueryImpl=new BooleanQueryImpl();
  booleanQueryImpl.add(new MatchQuery(field,value),BooleanClauseOccur.MUST);
  booleanQueryImpl.add(doCreateQueryForFullTextExactMatch(field,value),BooleanClauseOccur.SHOULD);
  booleanQueryImpl.add(doCreateQueryForFullTextProximity(field,value),BooleanClauseOccur.SHOULD);
  return booleanQueryImpl;
}
