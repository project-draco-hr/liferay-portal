{
  ClassLoader portletClassLoader=(ClassLoader)servletContext.getAttribute(PortletServlet.PORTLET_CLASS_LOADER);
  String portletServletContextName=null;
  PortletApp portletApp=(PortletApp)servletContext.getAttribute(PortletServlet.PORTLET_APP);
  if (portletApp != null) {
    portletServletContextName=portletApp.getServletContextName();
  }
  _jsonAction=new JSONWebServiceServiceAction(portletClassLoader,portletServletContextName);
  _jsonAction.setServletContext(servletContext);
  return _jsonAction;
}
