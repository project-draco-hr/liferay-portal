{
  LdapContext ctx=getContext(companyId);
  if (ctx == null) {
    return null;
  }
  Properties userMappings=getUserMappings(companyId);
  String name=getUsersDN(companyId);
  String filter="(" + userMappings.getProperty(PortalLDAPUtil.USER_MAPPING_SCREEN_NAME) + "="+ screenName+ ")";
  SearchControls cons=new SearchControls(SearchControls.SUBTREE_SCOPE,1,0,null,false,false);
  NamingEnumeration enu=ctx.search(name,filter,cons);
  if (enu.hasMore()) {
    Binding binding=(Binding)enu.next();
    return binding;
  }
 else {
    return null;
  }
}
