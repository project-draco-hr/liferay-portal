{
  List<Long> newUserGroupIds=new ArrayList<Long>(attr.size());
  for (int i=0; i < attr.size(); i++) {
    String fullGroupDN=(String)attr.get(i);
    Attributes groupAttributes=null;
    try {
      groupAttributes=getGroupAttributes(companyId,ctx,fullGroupDN);
    }
 catch (    NameNotFoundException nnfe) {
      _log.error("LDAP group not found with fullGroupDN " + fullGroupDN);
      _log.error(nnfe,nnfe);
      continue;
    }
    UserGroup userGroup=importLDAPGroup(companyId,ctx,groupAttributes,false);
    if (userGroup != null) {
      if (_log.isDebugEnabled()) {
        _log.debug("Adding " + userId + " to group "+ userGroup.getUserGroupId());
      }
      newUserGroupIds.add(userGroup.getUserGroupId());
    }
  }
  UserGroupLocalServiceUtil.setUserUserGroups(userId,ArrayUtil.toArray(newUserGroupIds.toArray(new Long[newUserGroupIds.size()])));
}
