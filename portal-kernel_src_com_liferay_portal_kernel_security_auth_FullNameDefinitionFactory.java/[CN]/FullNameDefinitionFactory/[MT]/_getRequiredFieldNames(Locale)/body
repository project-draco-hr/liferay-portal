{
  String[] requiredFieldNames=StringUtil.split(LanguageUtil.get(locale,LanguageConstants.KEY_USER_NAME_REQUIRED_FIELD_NAMES));
  if (!ArrayUtil.contains(requiredFieldNames,LanguageConstants.VALUE_FIRST_NAME)) {
    requiredFieldNames=ArrayUtil.append(new String[]{LanguageConstants.VALUE_FIRST_NAME},requiredFieldNames);
  }
  return requiredFieldNames;
}
