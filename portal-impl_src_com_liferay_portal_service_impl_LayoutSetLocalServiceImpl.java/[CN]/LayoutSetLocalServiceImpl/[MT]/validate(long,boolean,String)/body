{
  LayoutSet oppositeLayoutSet=layoutSetPersistence.findByG_P(groupId,!privateLayout);
  VirtualHost oppositeVirtualHost=virtualHostPersistence.fetchByC_L(oppositeLayoutSet.getCompanyId(),oppositeLayoutSet.getLayoutSetId());
  if (oppositeVirtualHost != null && oppositeVirtualHost.getHostname().equals(virtualHostname)) {
    throw new LayoutSetVirtualHostException();
  }
}
