{
  if (_queryIndexingThreshold != null) {
    return _queryIndexingThreshold;
  }
  _queryIndexingThreshold=GetterUtil.getInteger(_portletPreferences.getValue("queryIndexingThreshold",null),PropsValues.INDEX_SEARCH_QUERY_INDEXING_THRESHOLD);
  if (_queryIndexingThreshold < 0) {
    _queryIndexingThreshold=PropsValues.INDEX_SEARCH_QUERY_INDEXING_THRESHOLD;
  }
  return _queryIndexingThreshold;
}
