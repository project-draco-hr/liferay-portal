{
  String referringPortletResource=ParamUtil.getString(portletRequest,"referringPortletResource");
  if (Validator.isNull(referringPortletResource)) {
    return;
  }
  ThemeDisplay themeDisplay=(ThemeDisplay)portletRequest.getAttribute(WebKeys.THEME_DISPLAY);
  Layout layout=LayoutLocalServiceUtil.getLayout(themeDisplay.getRefererPlid());
  PortletPreferences preferences=PortletPreferencesFactoryUtil.getPortletSetup(layout,referringPortletResource,StringPool.BLANK);
  preferences.setValue("questionId",String.valueOf(question.getQuestionId()));
  preferences.store();
  SessionMessages.add(portletRequest,portletConfig.getPortletName() + ".doRefresh",referringPortletResource);
}
