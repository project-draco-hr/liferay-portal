{
  int maxLineLength=GradleUtil.toInteger(GradleUtil.getProperty(formatSourceTask.getProject(),"source.formatter.max.line.length",(String)null));
  formatSourceTask.setMaxLineLength(maxLineLength);
  int processorThreadCount=GradleUtil.toInteger(GradleUtil.getProperty(formatSourceTask.getProject(),"source.formatter.processor.thread.count",(String)null));
  formatSourceTask.setProcessorThreadCount(processorThreadCount);
}
