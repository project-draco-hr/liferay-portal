{
  List<String> tableNames=new ArrayList<>();
  DataSource dataSource=getDataSource();
  try (Connection con=dataSource.getConnection();PreparedStatement ps=con.prepareStatement(sql);ResultSet rs=ps.executeQuery()){
    while (rs.next()) {
      tableNames.add(rs.getString(getTableNameFieldName()));
    }
  }
 catch (  SQLException sqle) {
    _logger.error("Error retrieving the table names of the schema using " + "the query " + sql,sqle);
  }
  return tableNames;
}
