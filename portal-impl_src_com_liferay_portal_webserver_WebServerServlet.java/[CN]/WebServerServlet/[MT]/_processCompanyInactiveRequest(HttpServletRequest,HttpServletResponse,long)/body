{
  if ((companyId == CompanyConstants.SYSTEM) || PortalInstances.isCompanyActive(companyId)) {
    return false;
  }
  _inactiveRequesthandler.processInactiveRequest(request,response,"this-instance-is-inactive-please-contact-the-administrator");
  if (_log.isDebugEnabled()) {
    _log.debug("Processed company inactive request");
  }
  return true;
}
