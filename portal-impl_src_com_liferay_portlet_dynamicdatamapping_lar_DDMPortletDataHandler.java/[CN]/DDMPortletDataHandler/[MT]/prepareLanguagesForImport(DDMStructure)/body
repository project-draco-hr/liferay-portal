{
  Locale structureDefaultLocale=LocaleUtil.fromLanguageId(structure.getDefaultLanguageId());
  Locale[] structureAvailableLocales=LocaleUtil.fromLanguageIds(structure.getAvailableLanguageIds());
  Locale defaultImportLocale=LocalizationUtil.getDefaultImportLocale(DDMStructure.class.getName(),structure.getPrimaryKey(),structureDefaultLocale,structureAvailableLocales);
  structure.prepareLocalizedFieldsForImport(defaultImportLocale);
}
