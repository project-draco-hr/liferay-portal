{
  SourceSet sourceSet=GradleUtil.getSourceSet(project,SourceSet.TEST_SOURCE_SET_NAME);
  SourceDirectorySet sourceDirectorySet=sourceSet.getAllSource();
  if (!sourceDirectorySet.isEmpty()) {
    return true;
  }
  sourceSet=GradleUtil.getSourceSet(project,TestIntegrationBasePlugin.TEST_INTEGRATION_SOURCE_SET_NAME);
  sourceDirectorySet=sourceSet.getAllSource();
  if (!sourceDirectorySet.isEmpty()) {
    return true;
  }
  return false;
}
