{
  LayoutBranch layoutBranch=layoutBranchPersistence.fetchByL_P_N(layoutSetBranchId,plid,mergeBranchName);
  if (layoutBranch == null) {
    return mergeBranchName;
  }
  String originalLayoutBranchName=StringUtil.appendParentheticalSuffix(LanguageUtil.get(locale,mergeBranchName),LanguageUtil.get(locale,mergeLayoutSetBranchName));
  String layoutBranchName=originalLayoutBranchName;
  for (int i=1; ; i++) {
    layoutBranch=layoutBranchPersistence.fetchByL_P_N(layoutSetBranchId,plid,layoutBranchName);
    if (layoutBranch == null) {
      break;
    }
    layoutBranchName=originalLayoutBranchName + StringPool.SPACE + i;
  }
  return layoutBranchName;
}
