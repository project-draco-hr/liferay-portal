{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(orgGroupRole);
    }
 else {
      if (orgGroupRole.isNew()) {
        session.save(orgGroupRole);
      }
    }
    session.flush();
    orgGroupRole.setNew(false);
    return orgGroupRole;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
