{
  if (SearchEngineUtil.isIndexReadOnly()) {
    return;
  }
synchronized (this) {
    IndexReader reader=null;
    try {
      reader=IndexReader.open(LuceneUtil.getLuceneDir(companyId),false);
      reader.deleteDocuments(term);
    }
  finally {
      if (reader != null) {
        reader.close();
      }
    }
  }
}
