{
  if (e == null) {
    throw new NullPointerException();
  }
  int pendingElements=-1;
  _putLock.lockInterruptibly();
  try {
    if (_coalesceElement(e)) {
      return;
    }
    _last=_last.next=new Element<E>(e);
    pendingElements=_pendingCount.getAndIncrement();
  }
  finally {
    _putLock.unlock();
  }
  if (pendingElements == 0) {
    _takeLock.lock();
    try {
      _notEmpty.signal();
    }
  finally {
      _takeLock.unlock();
    }
  }
}
