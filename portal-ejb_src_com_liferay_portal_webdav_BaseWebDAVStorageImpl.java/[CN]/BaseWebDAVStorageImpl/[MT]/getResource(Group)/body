{
  try {
    String href=getRootPath() + StringPool.SLASH + group.getCompanyId()+ StringPool.SLASH+ group.getGroupId();
    String name=group.getName();
    if (group.isUser()) {
      long groupUserId=GetterUtil.getLong(group.getClassPK());
      User user=UserLocalServiceUtil.getUserById(groupUserId);
      name=user.getFullName();
    }
    return new BaseResourceImpl(href,name,true);
  }
 catch (  Exception e) {
    throw new WebDAVException(e);
  }
}
