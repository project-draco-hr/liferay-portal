{
  if (_remoteInvokeThreadLocal.get()) {
    if (cacheListener instanceof CacheReplicator) {
      return false;
    }
    if (cacheListenerScope.equals(cacheListenerScope.ALL) || cacheListenerScope.equals(cacheListenerScope.REMOTE)) {
      return true;
    }
    return false;
  }
  if (cacheListenerScope.equals(cacheListenerScope.ALL) || cacheListenerScope.equals(cacheListenerScope.LOCAL)) {
    return true;
  }
  return false;
}
