{
  long elapsedTime=0;
  long step=10;
  Servlet servlet=null;
  while ((servlet == null) && (elapsedTime < timeout)) {
    try {
      Thread.sleep(step);
    }
 catch (    InterruptedException ie) {
      break;
    }
    try {
      servlet=servletContext.getServlet(servletName);
    }
 catch (    ServletException se) {
    }
    elapsedTime+=step;
  }
  return servlet;
}
