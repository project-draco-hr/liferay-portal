{
  long attempts=10;
  long time=0;
  Servlet servlet=null;
  while ((servlet == null) && (time < timeout)) {
    try {
      Thread.sleep(attempts);
    }
 catch (    InterruptedException ie) {
      break;
    }
    try {
      servlet=servletContext.getServlet(servletName);
    }
 catch (    ServletException se) {
    }
    time+=attempts;
  }
  return servlet;
}
