{
  Date now=new Date();
  List<Lock> locks=lockPersistence.findByUuid(uuid);
  Lock lock=null;
  if (locks.size() > 0) {
    lock=locks.get(0);
  }
 else {
    throw new NoSuchLockException();
  }
  lock.setCreateDate(now);
  lock.setExpirationDate(new Date(now.getTime() + expirationTime));
  lockPersistence.update(lock,false);
  return lock;
}
