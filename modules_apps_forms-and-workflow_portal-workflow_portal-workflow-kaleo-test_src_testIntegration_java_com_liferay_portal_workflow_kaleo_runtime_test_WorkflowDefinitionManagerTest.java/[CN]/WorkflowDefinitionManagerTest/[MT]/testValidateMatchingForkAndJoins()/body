{
  InputStream inputStream=getResource("/META-INF/definitions/matching-fork-and-join-1.xml");
  String error=assertInvalid(inputStream);
  assertEquals("Fork fork2 and join join1 are not paired",error);
  inputStream=getResource("/META-INF/definitions/matching-fork-and-join-2.xml");
  error=assertInvalid(inputStream);
  assertEquals("Fork fork2 and join join1 are not paired",error);
  inputStream=getResource("/META-INF/definitions/matching-fork-and-join-3.xml");
  error=assertInvalid(inputStream);
  assertEquals("Fork fork3 and join join6 are not paired",error);
}
