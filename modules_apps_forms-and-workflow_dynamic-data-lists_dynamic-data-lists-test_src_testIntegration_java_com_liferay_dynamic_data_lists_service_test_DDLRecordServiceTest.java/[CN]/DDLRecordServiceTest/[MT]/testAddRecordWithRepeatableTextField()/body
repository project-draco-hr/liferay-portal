{
  DDMForm ddmForm=createDDMForm();
  ddmForm.addDDMFormField(createTextDDMFormField("Name",true,true));
  DDMFormValues expectedDDMFormValues=createDDMFormValues(ddmForm);
  expectedDDMFormValues.addDDMFormFieldValue(createLocalizedDDMFormFieldValue("Name","Joe Bloggs I"));
  expectedDDMFormValues.addDDMFormFieldValue(createLocalizedDDMFormFieldValue("Name","Joe Bloggs II"));
  expectedDDMFormValues.addDDMFormFieldValue(createLocalizedDDMFormFieldValue("Name","Joe Bloggs III"));
  assertRecordDDMFormValues(ddmForm,expectedDDMFormValues);
}
