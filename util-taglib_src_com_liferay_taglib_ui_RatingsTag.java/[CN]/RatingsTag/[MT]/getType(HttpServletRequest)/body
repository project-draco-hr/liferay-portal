{
  if (Validator.isNotNull(_type)) {
    return _type;
  }
  ThemeDisplay themeDisplay=(ThemeDisplay)request.getAttribute(WebKeys.THEME_DISPLAY);
  Group group=themeDisplay.getSiteGroup();
  if (group.isStagingGroup()) {
    group=group.getLiveGroup();
  }
  RatingsType ratingsType=null;
  if (group != null) {
    try {
      ratingsType=PortletRatingsDefinitionUtil.getRatingsType(themeDisplay.getCompanyId(),group.getGroupId(),_className);
    }
 catch (    PortalException pe) {
      _log.error("Unable to get ratings type for group " + group.getGroupId());
    }
  }
  if (ratingsType == null) {
    ratingsType=RatingsType.STARS;
  }
  return ratingsType.getValue();
}
