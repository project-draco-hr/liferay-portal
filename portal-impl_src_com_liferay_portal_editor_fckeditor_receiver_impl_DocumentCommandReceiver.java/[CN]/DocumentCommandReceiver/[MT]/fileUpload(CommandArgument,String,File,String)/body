{
  try {
    Group group=arg.getCurrentGroup();
    DLFolder folder=_getFolder(group.getGroupId(),arg.getCurrentFolder());
    long folderId=folder.getFolderId();
    String name=fileName;
    String title=fileName;
    String description=StringPool.BLANK;
    String versionDescription=StringPool.BLANK;
    String extraSettings=StringPool.BLANK;
    ServiceContext serviceContext=new ServiceContext();
    serviceContext.setAddCommunityPermissions(true);
    serviceContext.setAddGuestPermissions(true);
    DLFileEntryServiceUtil.addFileEntry(group.getGroupId(),folderId,name,title,description,versionDescription,extraSettings,file,serviceContext);
  }
 catch (  Exception e) {
    throw new FCKException(e);
  }
  return "0";
}
