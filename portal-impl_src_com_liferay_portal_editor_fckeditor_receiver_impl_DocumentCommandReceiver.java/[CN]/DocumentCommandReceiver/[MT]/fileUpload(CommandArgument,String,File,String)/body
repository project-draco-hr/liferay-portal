{
  try {
    Group group=GroupLocalServiceUtil.getGroup(arg.getCompanyId(),arg.getCurrentGroupName());
    DLFolder folder=_getFolder(group.getGroupId(),arg.getCurrentFolder());
    DLFolderPermission.check(PermissionThreadLocal.getPermissionChecker(),folder,ActionKeys.ADD_DOCUMENT);
    DLFileEntryLocalServiceUtil.addFileEntry(arg.getUserId(),folder.getFolderId(),fileName,fileName,StringPool.BLANK,new String[0],StringPool.BLANK,file,true,true);
  }
 catch (  Exception e) {
    throw new FCKException(e);
  }
  return "0";
}
