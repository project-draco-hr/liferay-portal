{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(mbBan);
    }
 else {
      if (mbBan.isNew()) {
        session.save(mbBan);
      }
    }
    session.flush();
    mbBan.setNew(false);
    return mbBan;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
