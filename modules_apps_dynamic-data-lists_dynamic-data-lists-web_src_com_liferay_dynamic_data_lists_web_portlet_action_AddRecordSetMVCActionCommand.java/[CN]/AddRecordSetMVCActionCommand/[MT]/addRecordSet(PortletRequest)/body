{
  long groupId=ParamUtil.getLong(portletRequest,"groupId");
  long ddmStructureId=ParamUtil.getLong(portletRequest,"ddmStructureId");
  Map<Locale,String> nameMap=LocalizationUtil.getLocalizationMap(portletRequest,"name");
  Map<Locale,String> descriptionMap=LocalizationUtil.getLocalizationMap(portletRequest,"description");
  int scope=ParamUtil.getInteger(portletRequest,"scope");
  ServiceContext serviceContext=ServiceContextFactory.getInstance(DDLRecordSet.class.getName(),portletRequest);
  return _ddlRecordSetService.addRecordSet(groupId,ddmStructureId,null,nameMap,descriptionMap,DDLRecordSetConstants.MIN_DISPLAY_ROWS_DEFAULT,scope,serviceContext);
}
