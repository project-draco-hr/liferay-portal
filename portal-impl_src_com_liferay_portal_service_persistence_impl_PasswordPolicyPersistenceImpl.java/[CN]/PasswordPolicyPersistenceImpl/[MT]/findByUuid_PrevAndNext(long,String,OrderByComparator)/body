{
  PasswordPolicy passwordPolicy=findByPrimaryKey(passwordPolicyId);
  Session session=null;
  try {
    session=openSession();
    PasswordPolicy[] array=new PasswordPolicyImpl[3];
    array[0]=getByUuid_PrevAndNext(session,passwordPolicy,uuid,orderByComparator,true);
    array[1]=passwordPolicy;
    array[2]=getByUuid_PrevAndNext(session,passwordPolicy,uuid,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
