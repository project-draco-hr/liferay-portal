{
  String ddmStructureKey=ParamUtil.getString(actionRequest,"ddmStructureKey");
  PortalPreferences portalPreferences=PortletPreferencesFactoryUtil.getPortalPreferences(actionRequest);
  String[] addMenuFavItems=portalPreferences.getValues(JournalPortletKeys.JOURNAL,"add-menu-fav-items");
  portalPreferences.setValues(JournalPortletKeys.JOURNAL,"add-menu-fav-items",ArrayUtil.remove(addMenuFavItems,ddmStructureKey));
}
