{
  long userId=GetterUtil.getLong((String)workflowContext.get(WorkflowConstants.CONTEXT_USER_ID));
  long resourcePrimKey=GetterUtil.getLong((String)workflowContext.get(WorkflowConstants.CONTEXT_ENTRY_CLASS_PK));
  ServiceContext serviceContext=(ServiceContext)workflowContext.get("serviceContext");
  JournalArticle article=JournalArticleLocalServiceUtil.getLatestArticle(resourcePrimKey,WorkflowConstants.STATUS_ANY,false);
  return JournalArticleLocalServiceUtil.updateStatus(userId,article,status,null,serviceContext);
}
