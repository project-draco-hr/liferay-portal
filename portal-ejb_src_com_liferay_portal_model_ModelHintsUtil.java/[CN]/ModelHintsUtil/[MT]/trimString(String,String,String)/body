{
  if (value == null) {
    return value;
  }
  Map hints=getHints(model,field);
  if (hints == null) {
    return value;
  }
  int maxLength=GetterUtil.getInteger(ModelHintsDefaults.TEXT_MAX_LENGTH);
  maxLength=GetterUtil.getInteger((String)hints.get("max-length"),maxLength);
  if (value.length() > maxLength) {
    return value.substring(0,maxLength);
  }
 else {
    return value;
  }
}
