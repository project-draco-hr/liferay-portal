{
  Session session=null;
  try {
    session=openSession();
    StringBuffer query=new StringBuffer();
    query.append("SELECT COUNT(*) ");
    query.append("FROM JournalArticle IN CLASS com.liferay.portlet.journal.service.persistence.JournalArticleHBM WHERE ");
    if (companyId == null) {
      query.append("companyId is null");
    }
 else {
      query.append("companyId = ?");
    }
    query.append(" AND ");
    if (articleId == null) {
      query.append("articleId is null");
    }
 else {
      query.append("articleId = ?");
    }
    query.append(" AND ");
    query.append("approved = ?");
    query.append(" ");
    Query q=session.createQuery(query.toString());
    int queryPos=0;
    if (companyId != null) {
      q.setString(queryPos++,companyId);
    }
    if (articleId != null) {
      q.setString(queryPos++,articleId);
    }
    q.setBoolean(queryPos++,approved);
    Iterator itr=q.list().iterator();
    if (itr.hasNext()) {
      Long count=(Long)itr.next();
      if (count != null) {
        return count.intValue();
      }
    }
    return 0;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
