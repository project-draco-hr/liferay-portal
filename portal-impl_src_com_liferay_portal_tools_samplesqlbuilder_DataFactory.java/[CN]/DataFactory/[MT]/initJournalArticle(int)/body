{
  if (maxJournalArticleSize <= 0) {
    maxJournalArticleSize=1;
  }
  char[] chars=new char[maxJournalArticleSize];
  for (int i=0; i < maxJournalArticleSize; i++) {
    chars[i]=(char)(CharPool.LOWER_CASE_A + (i % 26));
  }
  _journalArticleContent="<?xml version=\"1.0\"?><root available-locales=\"en_US\" " + "default-locale=\"en_US\"><static-content language-id=" + "\"en_US\"><![CDATA[<p>" + new String(chars) + "</p>]]>"+ "</static-content></root>";
}
