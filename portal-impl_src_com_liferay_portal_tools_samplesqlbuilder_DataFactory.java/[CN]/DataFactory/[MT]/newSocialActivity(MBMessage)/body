{
  StringBundler sb=new StringBundler(5);
  sb.append("{\"title\":\"");
  sb.append(mbMessage.getSubject());
  sb.append("\", \"messageId\":");
  sb.append(mbMessage.getMessageId());
  sb.append("}");
  return newSocialActivity(mbMessage.getGroupId(),mbMessage.getClassNameId(),mbMessage.getClassPK(),SocialActivityConstants.TYPE_ADD_COMMENT,sb.toString());
}
