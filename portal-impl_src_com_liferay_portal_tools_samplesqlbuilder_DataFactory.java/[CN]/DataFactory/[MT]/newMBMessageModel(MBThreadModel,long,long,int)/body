{
  long messageId=0;
  long parentMessageId=0;
  String subject=null;
  String body=null;
  if (index == 0) {
    messageId=mbThreadModel.getRootMessageId();
    parentMessageId=MBMessageConstants.DEFAULT_PARENT_MESSAGE_ID;
    subject=String.valueOf(classPK);
    body=String.valueOf(classPK);
  }
 else {
    messageId=_counter.get();
    parentMessageId=mbThreadModel.getRootMessageId();
    subject="N/A";
    body="This is test comment " + index + ".";
  }
  return newMBMessageModel(mbThreadModel.getGroupId(),classNameId,classPK,MBCategoryConstants.DISCUSSION_CATEGORY_ID,mbThreadModel.getThreadId(),messageId,mbThreadModel.getRootMessageId(),parentMessageId,subject,body);
}
