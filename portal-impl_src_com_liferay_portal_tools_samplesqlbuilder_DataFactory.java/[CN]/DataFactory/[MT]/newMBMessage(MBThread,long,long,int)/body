{
  long messageId=0;
  long parentMessageId=0;
  String subject=null;
  String body=null;
  if (currentIndex == 0) {
    messageId=mbThread.getRootMessageId();
    parentMessageId=MBMessageConstants.DEFAULT_PARENT_MESSAGE_ID;
    subject=StringUtil.valueOf(classPK);
    body=StringUtil.valueOf(classPK);
  }
 else {
    messageId=_counter.get();
    parentMessageId=mbThread.getRootMessageId();
    subject="N/A";
    body="This is test comment " + currentIndex + ".";
  }
  return newMBMessage(mbThread.getGroupId(),classNameId,classPK,MBCategoryConstants.DISCUSSION_CATEGORY_ID,mbThread.getThreadId(),messageId,mbThread.getRootMessageId(),parentMessageId,subject,body);
}
