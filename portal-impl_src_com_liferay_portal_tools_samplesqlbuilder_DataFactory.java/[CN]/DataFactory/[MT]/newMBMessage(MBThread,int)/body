{
  long messageId=0;
  long parentMessageId=0;
  if (index == 1) {
    messageId=mbThread.getRootMessageId();
    parentMessageId=MBMessageConstants.DEFAULT_PARENT_MESSAGE_ID;
  }
 else {
    messageId=_counter.get();
    parentMessageId=mbThread.getRootMessageId();
  }
  return newMBMessage(mbThread.getGroupId(),0,0,mbThread.getCategoryId(),mbThread.getThreadId(),messageId,mbThread.getRootMessageId(),parentMessageId,"Test Message " + index,"This is test message " + index + ".");
}
