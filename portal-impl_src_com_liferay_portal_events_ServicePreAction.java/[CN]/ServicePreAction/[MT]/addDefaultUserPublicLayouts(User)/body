{
  if (!PropsValues.LAYOUT_USER_PUBLIC_LAYOUTS_AUTO_CREATE) {
    return;
  }
  if (!user.hasPublicLayouts()) {
    Group userGroup=user.getGroup();
    if (publicLARFile != null) {
      addDefaultLayoutsByLAR(user.getUserId(),userGroup.getGroupId(),true,publicLARFile);
    }
 else {
      addDefaultUserPublicLayoutByProperties(user.getUserId(),userGroup.getGroupId());
    }
  }
}
