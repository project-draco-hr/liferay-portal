{
  if (_log.isDebugEnabled()) {
    _log.debug("Comet init triggered");
  }
  String cometHandler=config.getInitParameter(TARGET_COMET_HANDLER);
  try {
    ClassLoader classLoader=Thread.currentThread().getContextClassLoader();
    _cometHandler=(CometHandler)classLoader.loadClass(cometHandler).newInstance();
  }
 catch (  Exception e) {
    throw new ServletException("Unable to initialize Comet Processor, " + "invalid handler name: [" + cometHandler + "]",e);
  }
}
