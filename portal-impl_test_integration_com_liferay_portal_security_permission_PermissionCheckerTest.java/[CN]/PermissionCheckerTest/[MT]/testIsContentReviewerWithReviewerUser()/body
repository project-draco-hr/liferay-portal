{
  User user=UserTestUtil.addUser();
  Role portalContentReviewerRole=RoleTestUtil.addRole(RoleConstants.PORTAL_CONTENT_REVIEWER,RoleConstants.TYPE_REGULAR);
  UserLocalServiceUtil.setRoleUsers(portalContentReviewerRole.getRoleId(),new long[]{user.getUserId()});
  PermissionChecker permissionChecker=_getPermissionChecker(user);
  Assert.assertTrue(permissionChecker.isContentReviewer(user.getCompanyId(),_group.getGroupId()));
}
