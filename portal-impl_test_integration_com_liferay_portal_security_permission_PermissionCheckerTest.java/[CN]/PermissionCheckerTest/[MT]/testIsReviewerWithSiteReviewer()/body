{
  RoleTestUtil.addRole(RoleConstants.SITE_CONTENT_REVIEWER,RoleConstants.TYPE_SITE);
  User user=UserTestUtil.addGroupUser(_group,RoleConstants.SITE_CONTENT_REVIEWER);
  PermissionChecker permissionChecker=_getPermissionChecker(user);
  Assert.assertTrue(permissionChecker.isReviewer(user.getCompanyId(),_group.getGroupId()));
}
