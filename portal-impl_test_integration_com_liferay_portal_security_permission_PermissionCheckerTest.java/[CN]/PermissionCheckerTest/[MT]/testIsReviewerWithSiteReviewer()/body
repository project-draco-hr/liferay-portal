{
  _group=GroupLocalServiceUtil.getGroup(TestPropsValues.getCompanyId(),GroupConstants.GUEST);
  _group.setSite(true);
  _group=GroupLocalServiceUtil.updateGroup(_group);
  addSiteReviewerRole();
  User user=UserTestUtil.addGroupUser(_group,RoleConstants.SITE_CONTENT_REVIEWER);
  Assert.assertTrue(_getPermissionChecker(user).isReviewer(user.getCompanyId(),_group.getGroupId()));
}
