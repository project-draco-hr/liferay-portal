{
  User user=UserTestUtil.addUser();
  Role reviewerRole=RoleTestUtil.addRole(RoleConstants.PORTAL_CONTENT_REVIEWER,RoleConstants.TYPE_REGULAR);
  UserLocalServiceUtil.setRoleUsers(reviewerRole.getRoleId(),new long[]{user.getUserId()});
  PermissionChecker permissionChecker=_getPermissionChecker(user);
  Assert.assertTrue(permissionChecker.isReviewer(user.getCompanyId(),_group.getGroupId()));
}
