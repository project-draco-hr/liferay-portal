{
  _role=RoleTestUtil.addRole(RoleConstants.SITE_CONTENT_REVIEWER,RoleConstants.TYPE_SITE);
  _user=UserTestUtil.addGroupUser(_group,RoleConstants.SITE_CONTENT_REVIEWER);
  PermissionChecker permissionChecker=_getPermissionChecker(_user);
  Assert.assertTrue(permissionChecker.isContentReviewer(_user.getCompanyId(),_group.getGroupId()));
}
