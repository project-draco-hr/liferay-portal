{
  String fieldsDisplayValue=fieldName.concat(DDMImpl.INSTANCE_SEPARATOR).concat(PwdGenerator.getPassword());
  Field fieldsDisplay=ddmFields.get(DDMImpl.FIELDS_DISPLAY_NAME);
  String[] fieldsDisplayValues=StringUtil.split((String)fieldsDisplay.getValue());
  fieldsDisplayValues=ArrayUtil.append(fieldsDisplayValues,fieldsDisplayValue);
  fieldsDisplay.setValue(StringUtil.merge(fieldsDisplayValues));
}
