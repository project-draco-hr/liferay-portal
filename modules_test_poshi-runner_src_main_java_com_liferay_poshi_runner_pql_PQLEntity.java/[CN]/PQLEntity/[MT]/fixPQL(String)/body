{
  while (true) {
    pql=pql.trim();
    if (!pql.startsWith("(") || !pql.endsWith(")")) {
      break;
    }
    String subpql=pql.substring(1,pql.length() - 1);
    int parenthesisCount=0;
    for (int i=0; i < subpql.length(); i++) {
      char c=subpql.charAt(i);
      if (c == '(') {
        parenthesisCount++;
      }
      if (c == ')') {
        if (parenthesisCount < 1) {
          return pql.trim();
        }
        parenthesisCount--;
      }
    }
    if (parenthesisCount > 0) {
      return pql.trim();
    }
    pql=subpql;
  }
  return pql.trim();
}
