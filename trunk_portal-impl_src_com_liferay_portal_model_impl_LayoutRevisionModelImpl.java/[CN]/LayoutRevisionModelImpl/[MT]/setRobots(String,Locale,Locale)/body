{
  String languageId=LocaleUtil.toLanguageId(locale);
  String defaultLanguageId=LocaleUtil.toLanguageId(defaultLocale);
  if (Validator.isNotNull(robots)) {
    setRobots(LocalizationUtil.updateLocalization(getRobots(),"Robots",robots,languageId,defaultLanguageId));
  }
 else {
    setRobots(LocalizationUtil.removeLocalization(getRobots(),"Robots",languageId));
  }
}
