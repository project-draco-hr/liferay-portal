{
  Company company=null;
  String companyMX="localhost";
  try {
    company=CompanyLocalServiceUtil.getCompanyById(companyId);
    companyMX=company.getMx();
  }
 catch (  Exception e) {
  }
  return SMTP_PORTLET_PREFIX + categoryId + StringPool.AT+ PropsUtil.get(PropsUtil.SMTP_SERVER_SUBDOMAIN)+ StringPool.PERIOD+ companyMX;
}
