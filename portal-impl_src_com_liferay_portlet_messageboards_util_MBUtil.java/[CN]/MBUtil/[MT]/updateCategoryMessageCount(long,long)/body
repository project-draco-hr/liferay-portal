{
  Callable<Void> callable=new PortalCallable<Void>(companyId){
    @Override protected Void doCall() throws Exception {
      MBCategory category=MBCategoryLocalServiceUtil.fetchMBCategory(categoryId);
      if (category == null) {
        return null;
      }
      int messageCount=MBMessageLocalServiceUtil.getCategoryMessagesCount(category.getGroupId(),category.getCategoryId(),WorkflowConstants.STATUS_APPROVED);
      category.setMessageCount(messageCount);
      MBCategoryLocalServiceUtil.updateMBCategory(category);
      return null;
    }
  }
;
  TransactionCommitCallbackRegistryUtil.registerCallback(callable);
}
