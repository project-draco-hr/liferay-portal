{
  String allowAnonymousPosting=prefs.getValue("allow-anonymous-posting",StringPool.BLANK);
  if (Validator.isNotNull(allowAnonymousPosting)) {
    return GetterUtil.getBoolean(allowAnonymousPosting);
  }
 else {
    return GetterUtil.getBoolean(PropsUtil.get(PropsUtil.MESSAGE_BOARDS_ALLOW_ANONYMOUS_POSTING));
  }
}
