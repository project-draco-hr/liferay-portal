{
  StringMaker sm=new StringMaker();
  sm.append(SMTP_PORTLET_PREFIX);
  sm.append(categoryId);
  sm.append(StringPool.PERIOD);
  sm.append(messageId);
  sm.append(StringPool.AT);
  sm.append(PropsUtil.get(PropsUtil.SMTP_SERVER_SUBDOMAIN));
  sm.append(StringPool.PERIOD);
  sm.append(mx);
  return sm.toString();
}
