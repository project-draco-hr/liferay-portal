{
  String[] priorities=LocalizationUtil.getPortletSettingsValues(portletSettings,"priorities",languageId);
  String[] priorityPair=_findThreadPriority(value,themeDisplay,priorities);
  if (priorityPair == null) {
    String defaultLanguageId=LocaleUtil.toLanguageId(LocaleUtil.getSiteDefault());
    priorities=LocalizationUtil.getPortletSettingsValues(portletSettings,"priorities",defaultLanguageId);
    priorityPair=_findThreadPriority(value,themeDisplay,priorities);
  }
  return priorityPair;
}
