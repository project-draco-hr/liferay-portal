{
  PermissionChecker permissionChecker=themeDisplay.getPermissionChecker();
  if (!MBMessagePermission.contains(permissionChecker,selMessage,ActionKeys.VIEW)) {
    return false;
  }
  if ((message.getMessageId() != selMessage.getMessageId()) && !MBMessagePermission.contains(permissionChecker,message,ActionKeys.VIEW)) {
    return false;
  }
  long userId=themeDisplay.getUserId();
  long scopeGroupId=themeDisplay.getScopeGroupId();
  if (!message.isApproved() && !Validator.equals(message.getUserId(),userId) && !permissionChecker.isGroupAdmin(scopeGroupId)) {
    return false;
  }
  return true;
}
