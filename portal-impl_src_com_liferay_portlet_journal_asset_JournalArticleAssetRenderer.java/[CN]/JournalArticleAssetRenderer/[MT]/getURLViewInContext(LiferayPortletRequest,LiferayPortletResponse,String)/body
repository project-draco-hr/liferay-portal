{
  ThemeDisplay themeDisplay=(ThemeDisplay)liferayPortletRequest.getAttribute(WebKeys.THEME_DISPLAY);
  String languageId=LanguageUtil.getLanguageId(liferayPortletRequest);
  JournalArticleDisplay articleDisplay=JournalContentUtil.getDisplay(_article.getGroupId(),_article.getArticleId(),null,null,languageId,themeDisplay);
  String viewURL=StringPool.BLANK;
  if (articleDisplay != null) {
    PortletURL viewPortletURL=liferayPortletResponse.createRenderURL();
    viewPortletURL.setParameter("struts_action","/asset_publisher/view_content");
    viewPortletURL.setParameter("urlTitle",_article.getUrlTitle());
    viewPortletURL.setParameter("type",JournalArticleAssetRendererFactory.TYPE);
    viewURL=viewPortletURL.toString();
  }
  return viewURL;
}
