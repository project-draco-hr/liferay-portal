{
  String summary=HtmlUtil.escape(_article.getDescription(locale));
  if (Validator.isNull(summary)) {
    try {
      JournalArticleDisplay articleDisplay=JournalArticleLocalServiceUtil.getArticleDisplay(_article,null,null,LanguageUtil.getLanguageId(locale),1,null,null);
      summary=HtmlUtil.stripHtml(articleDisplay.getContent());
    }
 catch (    Exception e) {
    }
  }
  return summary;
}
