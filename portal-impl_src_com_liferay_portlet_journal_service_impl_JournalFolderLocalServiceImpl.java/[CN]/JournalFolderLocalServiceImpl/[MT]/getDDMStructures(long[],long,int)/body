{
  if (restrictionType == JournalFolderConstants.RESTRICTION_TYPE_DDM_STRUCTURES_AND_WORKFLOW) {
    return ddmStructureRestrictionLocalService.getStructures(JournalFolder.class.getName(),folderId);
  }
  folderId=getOverridedDDMStructuresFolderId(folderId);
  if (folderId != JournalFolderConstants.DEFAULT_PARENT_FOLDER_ID) {
    return ddmStructureRestrictionLocalService.getStructures(JournalFolder.class.getName(),folderId);
  }
  long classNameId=classNameLocalService.getClassNameId(JournalArticle.class);
  return ddmStructurePersistence.findByG_C(groupIds,classNameId);
}
