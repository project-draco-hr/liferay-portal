{
  Portlet portlet=PortletLocalServiceUtil.getPortletById(TestMVCActionCommand.TEST_PORTLET);
  MockHttpServletRequest request=new MockHttpServletRequest();
  String namespace=PortalUtil.getPortletNamespace(TestMVCActionCommand.TEST_PORTLET);
  request.setParameter(namespace + ActionRequest.ACTION_NAME,TestMVCActionCommand.TEST_MVC_COMMAND_NAME);
  ThemeDisplay themeDisplay=new ThemeDisplay();
  themeDisplay.setLifecycleAction(true);
  request.setAttribute(WebKeys.THEME_DISPLAY,themeDisplay);
  Assert.assertTrue(AuthTokenWhitelistUtil.isPortletInvocationWhitelisted(request,portlet));
}
