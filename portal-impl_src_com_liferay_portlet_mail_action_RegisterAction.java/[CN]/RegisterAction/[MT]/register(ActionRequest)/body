{
  String userName=ParamUtil.getString(req,"userName");
  User user=PortalUtil.getUser(req);
  Contact contact=user.getContact();
  String emailAddress=userName + "@" + user.getCompanyMx();
  AdminUtil.updateUser(req,user.getUserId(),user.getScreenName(),emailAddress,user.getLanguageId(),user.getTimeZoneId(),user.getGreeting(),user.getComments(),contact.getSmsSn(),contact.getAimSn(),contact.getFacebookSn(),contact.getIcqSn(),contact.getJabberSn(),contact.getMsnSn(),contact.getMySpaceSn(),contact.getSkypeSn(),contact.getTwitterSn(),contact.getYmSn());
  SessionMessages.add(req,"user_name_registered");
}
