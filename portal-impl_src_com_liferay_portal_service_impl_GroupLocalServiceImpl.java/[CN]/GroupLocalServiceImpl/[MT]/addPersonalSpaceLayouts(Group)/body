{
  long defaultUserId=userLocalService.getDefaultUserId(group.getCompanyId());
  String friendlyURL=getFriendlyURL(GroupConstants.USER_PERSONAL_SPACE_FRIENDLY_URL);
  ServiceContext serviceContext=new ServiceContext();
  layoutLocalService.addLayout(defaultUserId,group.getGroupId(),true,LayoutConstants.DEFAULT_PARENT_LAYOUT_ID,GroupConstants.USER_PERSONAL_SPACE,StringPool.BLANK,StringPool.BLANK,LayoutConstants.TYPE_PORTLET,false,friendlyURL,serviceContext);
}
