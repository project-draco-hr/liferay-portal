{
  Locale locale=LocaleUtil.getDefault();
  Map<Locale,String> nameMap=new HashMap<Locale,String>();
  nameMap.put(locale,name);
  Map<Locale,String> descriptionMap=new HashMap<Locale,String>();
  descriptionMap.put(locale,description);
  return addGroup(userId,GroupConstants.DEFAULT_PARENT_GROUP_ID,className,classPK,liveGroupId,nameMap,descriptionMap,type,true,GroupConstants.DEFAULT_MEMBERSHIP_RESTRICTION,friendlyURL,site,active,serviceContext);
}
