{
  ScheduledFuture scheduledFuture=_retryServerConnectionScheduledFutures.get(syncAccountId);
  if (scheduledFuture != null) {
    scheduledFuture.cancel(false);
  }
  RetryServerConnectionEvent retryServerConnectionEvent=new RetryServerConnectionEvent(syncAccountId,Collections.<String,Object>emptyMap());
  scheduledFuture=_scheduledExecutorService.schedule(retryServerConnectionEvent,delay,TimeUnit.MILLISECONDS);
  _retryServerConnectionScheduledFutures.put(syncAccountId,scheduledFuture);
}
