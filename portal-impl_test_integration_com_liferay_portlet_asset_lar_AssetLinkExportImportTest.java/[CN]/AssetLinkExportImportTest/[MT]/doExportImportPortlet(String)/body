{
  larFile=LayoutLocalServiceUtil.exportPortletInfoAsFile(layout.getPlid(),layout.getGroupId(),portletId,getParameterMap(),null,null);
  importedGroup=GroupTestUtil.addGroup();
  importedLayout=LayoutTestUtil.addLayout(importedGroup.getGroupId(),ServiceTestUtil.randomString());
  LayoutLocalServiceUtil.importPortletInfo(TestPropsValues.getUserId(),importedLayout.getPlid(),importedGroup.getGroupId(),portletId,getParameterMap(),larFile);
  importedLayout=LayoutLocalServiceUtil.fetchLayoutByUuidAndGroupId(layout.getUuid(),importedGroup.getGroupId(),layout.isPrivateLayout());
}
