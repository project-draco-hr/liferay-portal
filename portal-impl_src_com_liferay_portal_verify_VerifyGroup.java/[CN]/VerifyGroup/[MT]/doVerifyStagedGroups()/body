{
  List<Group> groups=GroupLocalServiceUtil.getLiveGroups();
  for (  Group group : groups) {
    if (group.hasStagingGroup()) {
      UnicodeProperties typeSettings=group.getTypeSettingsProperties();
      typeSettings.setProperty("isStaged",String.valueOf(true));
      typeSettings.setProperty("isStagedRemotely",String.valueOf(false));
      GroupLocalServiceUtil.updateGroup(group.getGroupId(),typeSettings.toString());
    }
  }
}
