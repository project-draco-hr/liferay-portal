{
  if (_querySuggestionsDisplayThreshold != null) {
    return _querySuggestionsDisplayThreshold;
  }
  _querySuggestionsDisplayThreshold=GetterUtil.getInteger(_portletPreferences.getValue("querySuggestionsDisplayThreshold",null),PropsValues.INDEX_SEARCH_QUERY_SUGGESTION_SCORES_THRESHOLD);
  if (_querySuggestionsDisplayThreshold < 0) {
    _querySuggestionsDisplayThreshold=PropsValues.INDEX_SEARCH_QUERY_SUGGESTION_SCORES_THRESHOLD;
  }
  return _querySuggestionsDisplayThreshold;
}
