{
  String relativePath=className.replace(CharPool.PERIOD,CharPool.SLASH).concat(".class");
  String fullPath=classloader.getResource(relativePath).getPath();
  int index=-1;
  if (!fullPath.startsWith("file:") || ((index=fullPath.indexOf(CharPool.EXCLAMATION)) == -1)) {
    _log.error("Class " + className + " is not loaded from jar file.");
    return StringPool.BLANK;
  }
  index=fullPath.lastIndexOf(CharPool.SLASH,index);
  File dir=new File(fullPath.substring("file:".length(),index));
  if (!dir.isDirectory()) {
    _log.error(dir.toString() + " is not a directory.");
    return StringPool.BLANK;
  }
  File[] files=dir.listFiles();
  StringBundler sb=new StringBundler(files.length * 2);
  for (  File file : files) {
    sb.append(file.getAbsolutePath());
    sb.append(StringPool.COLON);
  }
  sb.setIndex(sb.index() - 1);
  return sb.toString();
}
