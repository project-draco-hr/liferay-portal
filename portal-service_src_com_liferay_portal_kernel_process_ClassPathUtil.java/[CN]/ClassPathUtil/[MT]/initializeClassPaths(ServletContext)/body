{
  ClassLoader classLoader=PortalClassLoaderUtil.getClassLoader();
  if (classLoader == null) {
    _log.error("Portal ClassLoader is null");
    return;
  }
  _globalClassPath=_buildClassPath(classLoader,PortalException.class.getName());
  StringBundler sb=new StringBundler(5);
  sb.append(_globalClassPath);
  sb.append(StringPool.COLON);
  sb.append(_buildClassPath(classLoader,"com.liferay.portal.servlet.MainServlet"));
  sb.append(StringPool.COLON);
  sb.append(servletContext.getRealPath("").concat("/WEB-INF/classes"));
  _portalClassPath=sb.toString();
}
