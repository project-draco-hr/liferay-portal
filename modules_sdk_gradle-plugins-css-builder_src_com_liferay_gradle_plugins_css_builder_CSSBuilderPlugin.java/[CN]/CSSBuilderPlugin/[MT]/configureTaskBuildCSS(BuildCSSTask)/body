{
  Project project=buildCSSTask.getProject();
  String portalCommonDirName=buildCSSTask.getPortalCommonDirName();
  if (Validator.isNotNull(portalCommonDirName) && FileUtil.exists(project,portalCommonDirName)) {
    return;
  }
  Task expandPortalCommonCSSTask=GradleUtil.getTask(project,EXPAND_PORTAL_COMMON_CSS_TASK_NAME);
  FileCollection cssFiles=buildCSSTask.getCSSFiles();
  if (!cssFiles.isEmpty()) {
    buildCSSTask.dependsOn(expandPortalCommonCSSTask);
  }
  TaskOutputs taskOutputs=expandPortalCommonCSSTask.getOutputs();
  FileCollection fileCollection=taskOutputs.getFiles();
  buildCSSTask.setPortalCommonDirName(project.relativePath(fileCollection.getSingleFile()));
}
