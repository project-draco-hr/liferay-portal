{
  DDMContent ddmContent=(DDMContent)EntityCacheUtil.getResult(DDMContentModelImpl.ENTITY_CACHE_ENABLED,DDMContentImpl.class,contentId);
  if (ddmContent == _nullDDMContent) {
    return null;
  }
  if (ddmContent == null) {
    Session session=null;
    boolean hasException=false;
    try {
      session=openSession();
      ddmContent=(DDMContent)session.get(DDMContentImpl.class,Long.valueOf(contentId));
    }
 catch (    Exception e) {
      hasException=true;
      throw processException(e);
    }
 finally {
      if (ddmContent != null) {
        cacheResult(ddmContent);
      }
 else       if (!hasException) {
        EntityCacheUtil.putResult(DDMContentModelImpl.ENTITY_CACHE_ENABLED,DDMContentImpl.class,contentId,_nullDDMContent);
      }
      closeSession(session);
    }
  }
  return ddmContent;
}
