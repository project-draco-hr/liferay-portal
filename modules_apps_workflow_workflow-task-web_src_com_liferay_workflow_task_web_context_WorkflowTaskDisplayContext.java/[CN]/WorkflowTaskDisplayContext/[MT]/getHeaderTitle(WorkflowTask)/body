{
  String headerTitle=LanguageUtil.get(_workflowTaskRequestHelper.getRequest(),workflowTask.getName());
  WorkflowHandler<?> workflowHandler=getWorkflowHandler(workflowTask);
  long classPK=getWorkflowContextEntryClassPK(workflowTask);
  return headerTitle.concat(StringPool.COLON + StringPool.SPACE + workflowHandler.getTitle(classPK,_workflowTaskRequestHelper.getLocale()));
}
