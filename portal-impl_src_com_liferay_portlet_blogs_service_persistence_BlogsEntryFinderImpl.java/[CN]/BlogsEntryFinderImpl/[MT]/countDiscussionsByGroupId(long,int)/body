{
  Session session=null;
  try {
    session=openSession();
    String sql=CustomSQLUtil.get(COUNT_DISCUSSIONS_BY_GROUP_ID);
    if (groupId > 0) {
      sql=StringUtil.replace(sql,"[$GROUP_ID$]","AND (BlogsEntry.groupId = ?)");
    }
 else {
      sql=StringUtil.replace(sql,"[$GROUP_ID$]",StringPool.BLANK);
    }
    if (status != StatusConstants.ANY) {
      sql=StringUtil.replace(sql,"[$STATUS$]","AND (MBMessage.status = ?)");
    }
 else {
      sql=StringUtil.replace(sql,"[$STATUS$]",StringPool.BLANK);
    }
    SQLQuery q=session.createSQLQuery(sql);
    q.addScalar(COUNT_COLUMN_NAME,Type.LONG);
    QueryPos qPos=QueryPos.getInstance(q);
    if (groupId > 0) {
      qPos.add(groupId);
    }
    if (status != StatusConstants.ANY) {
      qPos.add(status);
    }
    Iterator<Long> itr=q.list().iterator();
    if (itr.hasNext()) {
      Long count=itr.next();
      if (count != null) {
        return count.intValue();
      }
    }
    return 0;
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
 finally {
    closeSession(session);
  }
}
