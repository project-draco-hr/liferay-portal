{
  List<DLFolder> folders=DLFolderLocalServiceUtil.getCompanyFolders(companyId,folderStart,folderEnd);
  for (  DLFolder folder : folders) {
    String portletId=PortletKeys.DOCUMENT_LIBRARY;
    long groupId=folder.getGroupId();
    long folderId=folder.getFolderId();
    String[] newIds={String.valueOf(companyId),portletId,String.valueOf(groupId),String.valueOf(folderId)};
    Indexer indexer=IndexerRegistryUtil.getIndexer(FileModel.class);
    indexer.reindex(newIds);
  }
}
