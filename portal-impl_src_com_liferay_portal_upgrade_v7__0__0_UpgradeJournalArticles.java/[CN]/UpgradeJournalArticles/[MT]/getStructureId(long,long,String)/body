{
  if (Validator.isNull(ddmStructureKey)) {
    return 0;
  }
  long groupId=getGroupId(plid);
  long companyGroupId=getCompanyGroupId(companyId);
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select structureId from DDMStructure where (groupId = " + groupId + " or groupId = "+ companyGroupId+ ") and "+ "structureKey = ?");
    ps.setString(1,ddmStructureKey);
    rs=ps.executeQuery();
    while (rs.next()) {
      return rs.getLong("structureId");
    }
    return 0;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
