{
  String title=(String)searchContext.getAttribute(Field.TITLE);
  if (Validator.isNotNull(title)) {
    BooleanQuery localizedQuery=BooleanQueryFactoryUtil.create(searchContext);
    localizedQuery.addTerm(Field.ASSET_CATEGORY_TITLE,title);
    localizedQuery.addTerm(DocumentImpl.getLocalizedName(searchContext.getLocale(),Field.ASSET_CATEGORY_TITLE),title,true);
    localizedQuery.addTerm(Field.TITLE,title,true);
    localizedQuery.addTerm(DocumentImpl.getLocalizedName(searchContext.getLocale(),Field.TITLE),title,true);
    searchQuery.add(localizedQuery,BooleanClauseOccur.SHOULD);
  }
}
