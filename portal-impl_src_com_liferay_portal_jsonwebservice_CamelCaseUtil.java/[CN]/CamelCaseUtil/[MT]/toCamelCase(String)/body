{
  StringBundler sb=new StringBundler(s.length());
  boolean upperCase=false;
  for (int i=0; i < s.length(); i++) {
    char c=s.charAt(i);
    if (c == CharPool.DASH) {
      upperCase=true;
    }
 else     if (upperCase) {
      sb.append(Character.toUpperCase(c));
      upperCase=false;
    }
 else {
      sb.append(c);
    }
  }
  return sb.toString();
}
