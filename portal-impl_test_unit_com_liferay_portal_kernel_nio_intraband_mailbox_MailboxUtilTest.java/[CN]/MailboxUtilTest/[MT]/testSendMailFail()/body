{
  MockIntraBand mockIntraBand=new MockIntraBand(){
    @Override protected void doSendDatagram(    RegistrationReference registrationReference,    Datagram datagram){
      throw new RuntimeException();
    }
  }
;
  try {
    MailboxUtil.sendMail(new MockRegistrationReference(mockIntraBand),ByteBuffer.allocate(0));
    Assert.fail();
  }
 catch (  MailboxException me) {
    Throwable throwable=me.getCause();
    Assert.assertEquals(RuntimeException.class,throwable.getClass());
  }
}
