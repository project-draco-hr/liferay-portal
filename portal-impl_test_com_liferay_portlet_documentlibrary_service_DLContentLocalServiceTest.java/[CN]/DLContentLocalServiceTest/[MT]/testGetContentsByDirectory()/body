{
  long companyId=nextLong();
  long repositoryId=nextLong();
  String directory=randomString();
  String subDirectory=randomString();
  String path1=directory + "/" + randomString();
  String path2=subDirectory + "/" + randomString();
  DLContent dlContent1=_dlContentLocalService.addContent(companyId,repositoryId,path1,Store.VERSION_DEFAULT,_DATA_VERSION_1);
  DLContent dlContent2=_dlContentLocalService.addContent(companyId,repositoryId,path2,Store.VERSION_DEFAULT,_DATA_VERSION_1);
  List<DLContent> dlContents=_dlContentLocalService.getContentsByDirectory(companyId,repositoryId,directory);
  assertEquals(1,dlContents.size());
  assertTrue(dlContents.contains(dlContent1));
  dlContents=_dlContentLocalService.getContentsByDirectory(companyId,repositoryId,subDirectory);
  assertEquals(1,dlContents.size());
  assertEquals(dlContent2,dlContents.get(0));
}
