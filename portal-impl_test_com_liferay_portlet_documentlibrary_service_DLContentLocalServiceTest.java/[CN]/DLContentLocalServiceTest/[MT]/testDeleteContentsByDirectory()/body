{
  long companyId=nextLong();
  long repositoryId=nextLong();
  String directory=randomString();
  String path1=directory + "/" + randomString();
  String path2=directory + "/" + randomString()+ "/"+ randomString();
  _dlContentLocalService.addContent(companyId,repositoryId,path1,Store.VERSION_DEFAULT,_DATA_VERSION_1);
  _dlContentLocalService.addContent(companyId,repositoryId,path2,Store.VERSION_DEFAULT,_DATA_VERSION_1);
  assertTrue(_dlContentLocalService.hasContent(companyId,repositoryId,path1,Store.VERSION_DEFAULT));
  assertTrue(_dlContentLocalService.hasContent(companyId,repositoryId,path2,Store.VERSION_DEFAULT));
  _dlContentLocalService.deleteContentsByDirectory(companyId,repositoryId,directory);
  assertFalse(_dlContentLocalService.hasContent(companyId,repositoryId,path1,Store.VERSION_DEFAULT));
  assertFalse(_dlContentLocalService.hasContent(companyId,repositoryId,path2,Store.VERSION_DEFAULT));
}
