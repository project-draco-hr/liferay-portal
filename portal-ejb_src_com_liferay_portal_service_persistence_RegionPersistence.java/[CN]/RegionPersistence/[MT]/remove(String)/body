{
  Session session=null;
  try {
    session=openSession();
    Region region=(Region)session.get(Region.class,regionId);
    if (region == null) {
      if (_log.isWarnEnabled()) {
        _log.warn("No Region exists with the primary key " + regionId.toString());
      }
      throw new NoSuchRegionException("No Region exists with the primary key " + regionId.toString());
    }
    return remove(region);
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
