{
  if (MapUtil.isEmpty(article.getTitleMap()) && Validator.isNotNull(article.getLegacyTitle())) {
    article.setTitleMap(LocalizationUtil.getLocalizationMap(article.getLegacyTitle()));
  }
  if (MapUtil.isEmpty(article.getDescriptionMap()) && Validator.isNotNull(article.getLegacyDescription())) {
    article.setDescriptionMap(LocalizationUtil.getLocalizationMap(article.getLegacyDescription()));
  }
}
