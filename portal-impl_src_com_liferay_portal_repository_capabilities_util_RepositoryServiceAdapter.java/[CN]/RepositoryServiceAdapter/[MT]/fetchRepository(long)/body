{
  Repository repository=null;
  if (_repositoryService != null) {
    repository=_repositoryLocalService.fetchRepository(repositoryId);
    if (repository != null) {
      repository=_repositoryService.getRepository(repositoryId);
    }
  }
 else {
    repository=_repositoryLocalService.fetchRepository(repositoryId);
  }
  return repository;
}
