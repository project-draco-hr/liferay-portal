{
  DDMForm ddmForm=createDDMForm(createAvailableLocales(LocaleUtil.US),LocaleUtil.US);
  DDMFormField ddmFormField=new DDMFormField("Text",DDMFormFieldType.TEXT);
  LocalizedValue label=ddmFormField.getLabel();
  label.addString(LocaleUtil.BRAZIL,"Portuguese Label");
  ddmForm.addDDMFormField(ddmFormField);
  DDMFormValidatorUtil.validate(ddmForm);
}
