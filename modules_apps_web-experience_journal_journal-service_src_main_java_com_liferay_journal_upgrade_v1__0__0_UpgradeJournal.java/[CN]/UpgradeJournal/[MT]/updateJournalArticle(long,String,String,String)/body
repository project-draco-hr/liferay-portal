{
  try (PreparedStatement ps=connection.prepareStatement("update JournalArticle set ddmStructureKey = ?, " + "ddmTemplateKey = ?, content = ? where id_ = ?")){
    ps.setString(1,ddmStructureKey);
    ps.setString(2,ddmTemplateKey);
    ps.setString(3,content);
    ps.setLong(4,id);
    ps.executeUpdate();
  }
 }
