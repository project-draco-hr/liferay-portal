{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select count(*) from DDMStructure where groupId = ? and " + "classNameId = ? and structureKey = ?");
    ps.setLong(1,groupId);
    ps.setLong(2,PortalUtil.getClassNameId("com.liferay.portlet.journal.model.JournalArticle"));
    ps.setString(3,ddmStructureKey);
    rs=ps.executeQuery();
    if (rs.next()) {
      int count=rs.getInt(1);
      return count;
    }
    return 0;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
