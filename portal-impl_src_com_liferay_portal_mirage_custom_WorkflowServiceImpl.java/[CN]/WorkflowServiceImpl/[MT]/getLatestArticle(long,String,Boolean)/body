{
  List<JournalArticle> articles=null;
  if (approved == null) {
    articles=_journalArticlePersistence.findByG_A(groupId,articleId,0,1);
  }
 else {
    articles=_journalArticlePersistence.findByG_A_A(groupId,articleId,approved.booleanValue(),0,1);
  }
  if (articles.size() == 0) {
    throw new NoSuchArticleException();
  }
  return articles.get(0);
}
