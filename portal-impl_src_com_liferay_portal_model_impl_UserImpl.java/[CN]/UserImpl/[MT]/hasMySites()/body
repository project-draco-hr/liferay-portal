{
  if (isDefaultUser()) {
    return false;
  }
  int max=PropsValues.MY_SITES_MAX_ELEMENTS;
  if (max == 1) {
    max++;
  }
  List<Group> groups=getMySites(true,max);
  if (groups.size() == 1) {
    Group group=groups.get(0);
    if (group.isControlPanel()) {
      return false;
    }
 else {
      return true;
    }
  }
 else   if (groups.size() > 1) {
    return true;
  }
 else {
    return false;
  }
}
