{
  try {
    List organizations=OrganizationLocalServiceUtil.getUserOrganizations(getUserId());
    Collections.sort(organizations,new OrganizationNameComparator(true));
    for (int i=0; i < organizations.size(); i++) {
      Organization organization=(Organization)organizations.get(i);
      if (!organization.isLocation()) {
        return organization;
      }
    }
  }
 catch (  Exception e) {
    _log.warn("User " + getUserId() + " does not belong to any organization");
  }
  return new OrganizationImpl();
}
