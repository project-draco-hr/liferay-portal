{
  DLFileShortcut dlFileShortcut=findByPrimaryKey(fileShortcutId);
  Session session=null;
  try {
    session=openSession();
    DLFileShortcut[] array=new DLFileShortcutImpl[3];
    array[0]=getByG_F_A_PrevAndNext(session,dlFileShortcut,groupId,folderId,active,orderByComparator,true);
    array[1]=dlFileShortcut;
    array[2]=getByG_F_A_PrevAndNext(session,dlFileShortcut,groupId,folderId,active,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
