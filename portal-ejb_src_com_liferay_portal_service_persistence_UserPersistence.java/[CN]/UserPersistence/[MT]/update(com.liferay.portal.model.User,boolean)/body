{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(user);
    }
 else {
      if (user.isNew()) {
        session.save(user);
      }
    }
    session.flush();
    user.setNew(false);
    return user;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
