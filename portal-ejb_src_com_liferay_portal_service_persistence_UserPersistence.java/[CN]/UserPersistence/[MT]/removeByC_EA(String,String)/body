{
  Session session=null;
  try {
    session=openSession();
    StringBuffer query=new StringBuffer();
    query.append("FROM com.liferay.portal.model.User WHERE ");
    if (companyId == null) {
      query.append("companyId IS NULL");
    }
 else {
      query.append("companyId = ?");
    }
    query.append(" AND ");
    if (emailAddress == null) {
      query.append("emailAddress IS NULL");
    }
 else {
      query.append("emailAddress = ?");
    }
    query.append(" ");
    Query q=session.createQuery(query.toString());
    int queryPos=0;
    if (companyId != null) {
      q.setString(queryPos++,companyId);
    }
    if (emailAddress != null) {
      q.setString(queryPos++,emailAddress);
    }
    Iterator itr=q.list().iterator();
    while (itr.hasNext()) {
      User user=(User)itr.next();
      session.delete(user);
    }
    session.flush();
  }
 catch (  HibernateException he) {
    if (he instanceof ObjectNotFoundException) {
      String msg="No User exists with the key ";
      msg+=StringPool.OPEN_CURLY_BRACE;
      msg+="companyId=";
      msg+=companyId;
      msg+=", ";
      msg+="emailAddress=";
      msg+=emailAddress;
      msg+=StringPool.CLOSE_CURLY_BRACE;
      throw new NoSuchUserException(msg);
    }
 else {
      throw new SystemException(he);
    }
  }
 finally {
    closeSession(session);
  }
}
