{
  DDLRecordVersion ddlRecordVersion=findByPrimaryKey(recordVersionId);
  Session session=null;
  try {
    session=openSession();
    DDLRecordVersion[] array=new DDLRecordVersionImpl[3];
    array[0]=getByR_V_PrevAndNext(session,ddlRecordVersion,recordId,version,orderByComparator,true);
    array[1]=ddlRecordVersion;
    array[2]=getByR_V_PrevAndNext(session,ddlRecordVersion,recordId,version,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
