{
  buildWSDLTask.setDestinationDir(new Callable<File>(){
    @Override public File call() throws Exception {
      if (buildWSDLTask.isBuildLibs()) {
        return new File(getWebAppDir(buildWSDLTask.getProject()),"WEB-INF/lib");
      }
 else {
        return getJavaDir(buildWSDLTask.getProject());
      }
    }
  }
);
  buildWSDLTask.setInputDir(new Callable<File>(){
    @Override public File call() throws Exception {
      return new File(getWebAppDir(buildWSDLTask.getProject()),"WEB-INF/wsdl");
    }
  }
);
}
