{
  TaskContainer taskContainer=project.getTasks();
  final Copy processResourcesTask=(Copy)taskContainer.findByName(JavaPlugin.PROCESS_RESOURCES_TASK_NAME);
  taskContainer.withType(BuildWSDLTask.class,new Action<BuildWSDLTask>(){
    @Override public void execute(    BuildWSDLTask buildWSDLTask){
      configureTaskBuildWSDL(buildWSDLTask,processResourcesTask,wsdlBuilderConfiguration);
    }
  }
);
}
