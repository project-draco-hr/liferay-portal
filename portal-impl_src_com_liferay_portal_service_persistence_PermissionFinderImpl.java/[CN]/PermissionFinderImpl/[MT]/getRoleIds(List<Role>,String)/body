{
  if (roles.isEmpty()) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(roles.size() * 3 - 1);
  for (int i=0; i < roles.size(); i++) {
    sb.append(table);
    sb.append(".roleId = ?");
    if ((i + 1) < roles.size()) {
      sb.append(" OR ");
    }
  }
  return sb.toString();
}
