{
  if (scopes.length == 0) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(scopes.length * 2 + 1);
  sb.append("(");
  for (int i=0; i < scopes.length; i++) {
    sb.append("ResourceCode.scope = ? ");
    if ((i + 1) != scopes.length) {
      sb.append("OR ");
    }
  }
  sb.append(")");
  return sb.toString();
}
