{
  if (resourceIds.length == 0) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(resourceIds.length * 2 - 1);
  for (int i=0; i < resourceIds.length; i++) {
    sb.append("resourceId = ?");
    if ((i + 1) < resourceIds.length) {
      sb.append(" OR ");
    }
  }
  return sb.toString();
}
