{
  if (Validator.isNull(name)) {
    return name;
  }
  char[] chars=name.toLowerCase().trim().toCharArray();
  if (chars.length > 0) {
    chars[0]=Character.toUpperCase(chars[0]);
  }
  for (int i=0; i < chars.length; i++) {
    if (chars[i] == ' ') {
      chars[i + 1]=Character.toUpperCase(chars[i + 1]);
    }
  }
  return new String(chars);
}
