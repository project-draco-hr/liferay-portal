{
  StringBuilder sb=new StringBuilder();
  sb.append(getGradleRelativePath());
  sb.append(' ');
  sb.append(task.getPath());
  if (isGradleDaemon()) {
    sb.append(" --daemon");
  }
  for (  String argument : arguments) {
    sb.append(' ');
    sb.append(argument);
  }
  return sb.toString();
}
