{
  Connection con=null;
  PreparedStatement ps=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("update ExpandoColumn set type_ = ? where type_ = ?");
    ps.setInt(1,newColumnType);
    ps.setInt(2,oldColumnType);
    ps.executeUpdate();
  }
  finally {
    DataAccess.cleanUp(con,ps);
  }
}
