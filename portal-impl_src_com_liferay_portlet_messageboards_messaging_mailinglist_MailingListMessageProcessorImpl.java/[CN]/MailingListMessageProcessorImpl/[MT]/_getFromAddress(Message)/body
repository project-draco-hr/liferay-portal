{
  String from=null;
  Address[] addresses=mailMessage.getFrom();
  if ((addresses != null) && (addresses.length > 0)) {
    Address address=addresses[0];
    if (address instanceof InternetAddress) {
      from=((InternetAddress)address).getAddress();
    }
 else {
      from=address.toString();
    }
  }
  return from;
}
