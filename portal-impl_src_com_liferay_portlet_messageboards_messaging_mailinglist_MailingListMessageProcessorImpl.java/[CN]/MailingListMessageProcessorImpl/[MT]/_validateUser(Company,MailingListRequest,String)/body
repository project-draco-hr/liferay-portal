{
  boolean anonymous=false;
  User user;
  try {
    user=_userLocalService.getUserByEmailAddress(company.getCompanyId(),from);
  }
 catch (  NoSuchUserException nsue) {
    user=_userLocalService.getUserById(company.getCompanyId(),mailingListRequest.getUserId());
    anonymous=true;
  }
  PermissionCheckerUtil.setThreadValues(user);
  return anonymous;
}
