{
  if (Validator.isNull(key) || key.equals(_RANDOM_KEY)) {
    return null;
  }
  key=_encodeKey(namespace,key);
  try {
    while (true) {
      String value=modifyOperation.call();
      if (value != null) {
        super.setValue(key,value);
      }
 else {
        reset(key);
      }
      if (_signedIn) {
        try {
          PortalPreferencesLocalServiceUtil.updatePreferences(getOwnerId(),getOwnerType(),this);
          return value;
        }
 catch (        HibernateOptimisticLockingFailureException holfe) {
        }
      }
 else {
        return value;
      }
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
    return null;
  }
}
