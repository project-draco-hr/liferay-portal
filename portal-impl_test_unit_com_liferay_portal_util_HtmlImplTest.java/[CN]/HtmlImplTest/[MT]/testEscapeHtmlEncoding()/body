{
  assertEquals("&lt;",htmlImpl.escape("<"));
  assertEquals("&gt;",htmlImpl.escape(">"));
  assertEquals("&lt;script&gt;",htmlImpl.escape("<script>"));
  assertEquals("&amp;",htmlImpl.escape("&"));
  assertEquals("You &amp; Me",htmlImpl.escape("You & Me"));
  assertEquals("&lt;span class=&#034;test&#034;&gt;Test&lt;/span&gt;",htmlImpl.escape("<span class=\"test\">Test</span>"));
  assertEquals("I&#039;m quoting: &#034;this is a quote&#034;",htmlImpl.escape("I'm quoting: \"this is a quote\""));
}
