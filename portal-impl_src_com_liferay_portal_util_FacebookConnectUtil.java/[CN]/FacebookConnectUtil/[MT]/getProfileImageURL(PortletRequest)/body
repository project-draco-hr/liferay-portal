{
  HttpServletRequest request=PortalUtil.getOriginalServletRequest(((LiferayPortletRequest)portletRequest).getHttpServletRequest());
  String facebookId=(String)request.getSession().getAttribute(WebKeys.FACEBOOK_USER_ID);
  String token=(String)request.getSession().getAttribute(WebKeys.FACEBOOK_ACCESS_TOKEN);
  if (Validator.isNotNull(facebookId)) {
    JSONObject jsonObject=getGraphResourcesAsJSON(PortalUtil.getCompanyId(request),"/me",token,"id,picture");
    return jsonObject.getString("picture");
  }
  return null;
}
