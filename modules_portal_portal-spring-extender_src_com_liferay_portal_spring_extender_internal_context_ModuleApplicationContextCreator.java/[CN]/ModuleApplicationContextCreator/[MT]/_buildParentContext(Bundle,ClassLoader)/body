{
  OsgiBundleXmlApplicationContext osgiBundleXmlApplicationContext=new OsgiBundleXmlApplicationContext(new String[]{"META-INF/spring/parent/*.xml"});
  osgiBundleXmlApplicationContext.setBundleContext(bundle.getBundleContext());
  osgiBundleXmlApplicationContext.setClassLoader(classLoader);
  osgiBundleXmlApplicationContext.refresh();
  return osgiBundleXmlApplicationContext;
}
