{
  Role role=roleLocalService.getDefaultGroupRole(groupId);
  resourceBlockLocalService.setIndividualScopePermissions(companyId,groupId,resource.getName(),Long.valueOf(resource.getPrimKey()),role.getRoleId(),Arrays.asList(groupPermissions));
  role=roleLocalService.getRole(companyId,RoleConstants.GUEST);
  resourceBlockLocalService.setIndividualScopePermissions(companyId,groupId,resource.getName(),Long.valueOf(resource.getPrimKey()),role.getRoleId(),Arrays.asList(guestPermissions));
}
