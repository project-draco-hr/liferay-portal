{
  Iterator itr=permissionPersistence.findByResourceId(resource.getResourceId()).iterator();
  while (itr.hasNext()) {
    Permission permission=(Permission)itr.next();
    orgGroupPermissionPersistence.removeByPermissionId(permission.getPermissionId());
  }
  permissionPersistence.removeByResourceId(resource.getResourceId());
  resourcePersistence.remove(resource.getResourceId());
}
