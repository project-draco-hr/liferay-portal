{
  String login=httpAuthorizationHeader.getAuthParameter(HttpAuthorizationHeader.AUTH_PARAMETER_NAME_USERNAME);
  String password=httpAuthorizationHeader.getAuthParameter(HttpAuthorizationHeader.AUTH_PARAMETER_NAME_PASSWORD);
  if (login.endsWith("@uid")) {
    int pos=login.indexOf("@uid");
    login=login.substring(0,pos);
  }
 else   if (login.endsWith("@sn")) {
    int pos=login.indexOf("@sn");
    login=login.substring(0,pos);
  }
  try {
    return AuthenticatedSessionManagerUtil.getAuthenticatedUserId(httpServletRequest,login,password,null);
  }
 catch (  AuthException ae) {
  }
  return 0;
}
