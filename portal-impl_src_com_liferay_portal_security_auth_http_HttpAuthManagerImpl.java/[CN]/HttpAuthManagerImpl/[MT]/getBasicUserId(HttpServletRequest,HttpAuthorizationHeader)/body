{
  String login=authorizationHeader.getAuthParameter(HttpAuthorizationHeader.AUTHPARAM_USERNAME);
  String password=authorizationHeader.getAuthParameter(HttpAuthorizationHeader.AUTHPARAM_PASSWORD);
  if (login.endsWith("@uid")) {
    int pos=login.indexOf("@uid");
    login=login.substring(0,pos);
  }
 else   if (login.endsWith("@sn")) {
    int pos=login.indexOf("@sn");
    login=login.substring(0,pos);
  }
  try {
    return AuthenticatedSessionManagerUtil.getAuthenticatedUserId(request,login,password,null);
  }
 catch (  AuthException ae) {
  }
  return 0;
}
