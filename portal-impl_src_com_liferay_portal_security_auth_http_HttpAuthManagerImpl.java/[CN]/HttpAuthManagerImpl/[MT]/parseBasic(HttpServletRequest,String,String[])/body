{
  String credentials=new String(Base64.decode(authorizationParts[1]));
  String[] loginAndPassword=StringUtil.split(credentials,CharPool.COLON);
  String login=HttpUtil.decodeURL(loginAndPassword[0].trim());
  String password=null;
  if (loginAndPassword.length > 1) {
    password=loginAndPassword[1].trim();
  }
  HttpAuthorizationHeader httpAuthorizationHeader=new HttpAuthorizationHeader(HttpAuthorizationHeader.SCHEME_BASIC);
  httpAuthorizationHeader.setAuthParameter(HttpAuthorizationHeader.AUTH_PARAMETER_NAME_USERNAME,login);
  httpAuthorizationHeader.setAuthParameter(HttpAuthorizationHeader.AUTH_PARAMETER_NAME_PASSWORD,password);
  return httpAuthorizationHeader;
}
