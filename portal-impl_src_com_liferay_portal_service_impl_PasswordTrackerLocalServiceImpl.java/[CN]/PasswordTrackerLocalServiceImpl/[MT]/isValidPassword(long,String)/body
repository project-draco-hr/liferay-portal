{
  PasswordPolicy passwordPolicy=passwordPolicyLocalService.getPasswordPolicyByUserId(userId);
  if ((passwordPolicy == null) || !passwordPolicy.getHistory()) {
    return true;
  }
  int historyCount=1;
  List<PasswordTracker> passwordTrackers=passwordTrackerPersistence.findByUserId(userId);
  for (  PasswordTracker passwordTracker : passwordTrackers) {
    if (historyCount >= passwordPolicy.getHistoryCount()) {
      break;
    }
    String oldEncPwd=passwordTracker.getPassword();
    String newEncPwd=PwdEncryptor.encrypt(newClearTextPwd,oldEncPwd);
    if (oldEncPwd.equals(newEncPwd)) {
      return false;
    }
    historyCount++;
  }
  return true;
}
