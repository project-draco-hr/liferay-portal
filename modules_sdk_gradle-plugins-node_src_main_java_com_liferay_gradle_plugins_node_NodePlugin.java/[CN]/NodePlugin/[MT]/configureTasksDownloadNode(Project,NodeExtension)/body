{
  TaskContainer taskContainer=project.getTasks();
  taskContainer.withType(DownloadNodeTask.class,new Action<DownloadNodeTask>(){
    @Override public void execute(    DownloadNodeTask downloadNodeTask){
      configureTaskDownloadNodeDir(downloadNodeTask,nodeExtension);
      configureTaskDownloadNodeNpmUrl(downloadNodeTask,nodeExtension);
      configureTaskDownloadNodeUrl(downloadNodeTask,nodeExtension);
    }
  }
);
}
