{
  try {
    ServiceContext serviceContext=new ServiceContext();
    serviceContext.setCompanyId(companyId);
    serviceContext.setUserId(userId);
    if (active) {
      _kaleoDefinitionLocalService.activateKaleoDefinition(name,version,serviceContext);
    }
 else {
      _kaleoDefinitionLocalService.deactivateKaleoDefinition(name,version,serviceContext);
    }
    return getWorkflowDefinition(companyId,name,version);
  }
 catch (  Exception e) {
    throw new WorkflowException(e);
  }
}
