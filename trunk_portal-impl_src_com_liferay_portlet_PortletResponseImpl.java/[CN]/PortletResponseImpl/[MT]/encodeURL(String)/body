{
  if ((path == null) || (!path.startsWith("#") && !path.startsWith("/") && (path.indexOf("://") == -1))) {
    throw new IllegalArgumentException("URL path must start with a '/' or include '://'");
  }
  if (_urlEncoder != null) {
    return _urlEncoder.encodeURL(_response,path);
  }
 else {
    return path;
  }
}
