{
  long kbFolderClassNameId=classNameLocalService.getClassNameId(KBFolder.class);
  if (parentResourceClassNameId == kbFolderClassNameId) {
    return;
  }
  KBArticle kbArticle=fetchLatestKBArticle(parentResourcePrimKey,WorkflowConstants.STATUS_APPROVED);
  if ((kbArticle == null) && (status == WorkflowConstants.STATUS_APPROVED)) {
    throw new KBArticleStatusException();
  }
}
