{
  if ((_connection == null) || (_converter == null)) {
    String host=PrefsPropsUtil.getString(PropsKeys.OPENOFFICE_SERVER_HOST,PropsValues.OPENOFFICE_SERVER_HOST);
    int port=PrefsPropsUtil.getInteger(PropsKeys.OPENOFFICE_SERVER_PORT,PropsValues.OPENOFFICE_SERVER_PORT);
    _connection=new SocketOpenOfficeConnection(host,port);
    _converter=new StreamOpenOfficeDocumentConverter(_connection);
  }
  return _converter;
}
