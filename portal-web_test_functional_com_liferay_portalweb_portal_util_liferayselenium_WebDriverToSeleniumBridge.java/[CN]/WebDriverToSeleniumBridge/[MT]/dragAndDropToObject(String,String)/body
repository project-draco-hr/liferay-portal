{
  int x=WebDriverHelper.getElementPositionCenterX(this,locatorOfDragDestinationObject);
  x-=WebDriverHelper.getElementPositionCenterX(this,locatorOfObjectToBeDragged);
  int y=WebDriverHelper.getElementPositionCenterY(this,locatorOfDragDestinationObject);
  y-=WebDriverHelper.getElementPositionCenterY(this,locatorOfObjectToBeDragged);
  dragAndDrop(locatorOfObjectToBeDragged,Integer.toString(x) + "," + Integer.toString(y));
}
