{
  String targetURL="";
  if (url.startsWith("/")) {
    targetURL=TestPropsValues.PORTAL_URL + url;
  }
 else {
    targetURL=url;
  }
  for (int second=0; ; second++) {
    if (second >= TestPropsValues.TIMEOUT_IMPLICIT_WAIT) {
      BaseTestCase.fail("Timeout: unable to open url \"" + targetURL + "\"");
    }
    try {
      get(targetURL);
      if (TestPropsValues.BROWSER_TYPE.equals("*iehta") || TestPropsValues.BROWSER_TYPE.equals("*iexplore")) {
        refresh();
      }
      if (targetURL.equals(getLocation())) {
        break;
      }
      Thread.sleep(1000);
    }
 catch (    Exception e) {
    }
  }
}
