{
  long structureId=ParamUtil.getLong(portletRequest,DDMConstants.STRUCTURE_ID);
  DDMStructure structure=DDMStructureServiceUtil.getStructure(structureId);
  String definition=structure.getDefinition();
  HttpServletRequest httpServletRequest=PortalUtil.getHttpServletRequest(portletRequest);
  HttpServletResponse httpServletResponse=PortalUtil.getHttpServletResponse(portletResponse);
  ServletResponseUtil.sendFile(httpServletRequest,httpServletResponse,null,definition.getBytes(),ContentTypes.TEXT_XML_UTF8);
}
