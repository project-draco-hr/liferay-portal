{
  if (!PropsValues.SCHEDULER_ENABLED) {
    return;
  }
  try {
    Scheduler scheduler=getScheduler(trigger.getGroupName());
    trigger=TriggerFactoryUtil.buildTrigger(trigger.getTriggerType(),trigger.getJobName(),getOriginalGroupName(trigger.getGroupName()),trigger.getStartDate(),trigger.getEndDate(),trigger.getTriggerContent());
    update(trigger,scheduler);
  }
 catch (  Exception e) {
    throw new SchedulerException("Unable to update trigger",e);
  }
}
