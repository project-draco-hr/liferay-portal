{
  final Configuration configuration=GradleUtil.addConfiguration(project,CONFIGURATION_NAME);
  configuration.defaultDependencies(new Action<DependencySet>(){
    @Override public void execute(    DependencySet dependencySet){
      addDependenciesJavadocFormatter(project);
    }
  }
);
  configuration.setDescription("Configures Liferay Javadoc Formatter for this project.");
  configuration.setVisible(false);
  PluginContainer pluginContainer=project.getPlugins();
  pluginContainer.withType(JavaPlugin.class,new Action<JavaPlugin>(){
    @Override public void execute(    JavaPlugin javaPlugin){
      configureConfigurationJavadocFormatterForJavaPlugin(project,configuration);
    }
  }
);
  return configuration;
}
