{
  ThemeDisplay themeDisplay=(ThemeDisplay)portletRequest.getAttribute(WebKeys.THEME_DISPLAY);
  KBArticle kbArticle=(KBArticle)portletRequest.getAttribute(KBWebKeys.KNOWLEDGE_BASE_KB_ARTICLE);
  PermissionChecker permissionChecker=themeDisplay.getPermissionChecker();
  if ((kbArticle.isApproved() || !kbArticle.isFirstVersion()) && KBArticlePermission.contains(permissionChecker,kbArticle,KBActionKeys.SUBSCRIBE) && _subscriptionLocalService.isSubscribed(themeDisplay.getCompanyId(),themeDisplay.getUserId(),KBArticle.class.getName(),kbArticle.getResourcePrimKey())) {
    return true;
  }
  return false;
}
