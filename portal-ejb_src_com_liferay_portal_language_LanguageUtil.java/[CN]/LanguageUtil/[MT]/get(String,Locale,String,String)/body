{
  String value=null;
  try {
    MessageResources resources=(MessageResources)WebAppPool.get(companyId,Globals.MESSAGES_KEY);
    value=resources.getMessage(locale,key);
  }
 catch (  Exception e) {
    throw new LanguageException(e);
  }
  if (value == null) {
    value=defaultValue;
  }
  return value;
}
