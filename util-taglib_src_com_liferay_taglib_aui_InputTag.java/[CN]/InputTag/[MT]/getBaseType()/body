{
  Class<?> model=getModel();
  String type=getType();
  String baseType=null;
  if ((model != null) && Validator.isNull(type)) {
    baseType=ModelHintsUtil.getType(model.getName(),getField());
  }
 else   if (Validator.isNotNull(type)) {
    if (Validator.equals(type,"checkbox") || Validator.equals(type,"radio") || Validator.equals(type,"resource")) {
      baseType=type;
    }
 else     if (Validator.equals(type,"toggle-switch")) {
      baseType="checkbox";
    }
  }
  if (Validator.isNull(baseType)) {
    baseType="text";
  }
  return baseType;
}
