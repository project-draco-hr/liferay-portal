{
  try {
    Indexer.deletePage(page.getCompanyId(),page.getNodeId(),page.getTitle());
  }
 catch (  IOException ioe) {
    _log.error("Deleting index " + page.getPrimaryKey(),ioe);
  }
  ResourceLocalServiceUtil.deleteResource(page.getCompanyId(),WikiPage.class.getName(),ResourceImpl.TYPE_CLASS,ResourceImpl.SCOPE_INDIVIDUAL,page.getResourcePK().toString());
  WikiPageUtil.removeByN_T(page.getNodeId(),page.getTitle());
}
