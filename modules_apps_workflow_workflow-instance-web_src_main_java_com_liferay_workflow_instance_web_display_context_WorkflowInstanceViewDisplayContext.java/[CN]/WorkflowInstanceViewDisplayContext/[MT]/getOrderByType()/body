{
  if (_orderByType != null) {
    return _orderByType;
  }
  _orderByType=ParamUtil.getString(request,"orderByType");
  if (Validator.isNull(_orderByType)) {
    _orderByType=portalPreferences.getValue(PortletKeys.MY_WORKFLOW_TASK,"order-by-type","asc");
  }
 else {
    boolean saveOrderBy=ParamUtil.getBoolean(request,"saveOrderBy");
    if (saveOrderBy) {
      portalPreferences.setValue(PortletKeys.MY_WORKFLOW_TASK,"order-by-type",_orderByType);
    }
  }
  return _orderByType;
}
