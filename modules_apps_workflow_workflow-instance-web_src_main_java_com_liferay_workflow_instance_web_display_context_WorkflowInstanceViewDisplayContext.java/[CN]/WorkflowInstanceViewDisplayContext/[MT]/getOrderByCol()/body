{
  if (_orderByCol != null) {
    return _orderByCol;
  }
  _orderByCol=ParamUtil.getString(request,"orderByCol");
  if (Validator.isNull(_orderByCol)) {
    _orderByCol=portalPreferences.getValue(PortletKeys.MY_WORKFLOW_TASK,"order-by-col","last-activity-date");
  }
 else {
    boolean saveOrderBy=ParamUtil.getBoolean(request,"saveOrderBy");
    if (saveOrderBy) {
      portalPreferences.setValue(PortletKeys.MY_WORKFLOW_TASK,"order-by-col",_orderByCol);
    }
  }
  return _orderByCol;
}
