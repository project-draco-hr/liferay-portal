{
  List<BookmarksFolder> folders=bookmarksFolderPersistence.findByG_P(folder.getGroupId(),folder.getFolderId());
  for (  BookmarksFolder curFolder : folders) {
    deleteFolder(curFolder);
  }
  bookmarksFolderPersistence.remove(folder);
  resourceLocalService.deleteResource(folder.getCompanyId(),BookmarksFolder.class.getName(),ResourceConstants.SCOPE_INDIVIDUAL,folder.getFolderId(),folder);
  bookmarksEntryLocalService.deleteEntries(folder.getGroupId(),folder.getFolderId());
  expandoValueLocalService.deleteValues(BookmarksFolder.class.getName(),folder.getFolderId());
}
