{
  List<BookmarksFolder> folders=bookmarksFolderPersistence.findByG_P(folder.getGroupId(),folder.getFolderId());
  for (  BookmarksFolder curFolder : folders) {
    deleteFolder(curFolder);
  }
  bookmarksEntryLocalService.deleteEntries(folder.getFolderId());
  resourceLocalService.deleteResource(folder.getCompanyId(),BookmarksFolder.class.getName(),ResourceImpl.SCOPE_INDIVIDUAL,folder.getFolderId());
  bookmarksFolderPersistence.remove(folder.getFolderId());
}
