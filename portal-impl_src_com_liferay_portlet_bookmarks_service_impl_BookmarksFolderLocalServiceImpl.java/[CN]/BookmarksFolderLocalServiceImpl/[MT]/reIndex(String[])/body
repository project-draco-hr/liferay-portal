{
  long companyId=GetterUtil.getLong(ids[0]);
  IndexWriter writer=null;
  try {
    writer=LuceneUtil.getWriter(companyId);
    Iterator itr1=bookmarksFolderPersistence.findByCompanyId(companyId).iterator();
    while (itr1.hasNext()) {
      BookmarksFolder folder=(BookmarksFolder)itr1.next();
      long folderId=folder.getFolderId();
      Iterator itr2=bookmarksEntryPersistence.findByFolderId(folderId).iterator();
      while (itr2.hasNext()) {
        BookmarksEntry entry=(BookmarksEntry)itr2.next();
        long groupId=folder.getGroupId();
        long entryId=entry.getEntryId();
        String title=entry.getName();
        String content=entry.getUrl();
        String description=entry.getComments();
        try {
          Document doc=Indexer.getAddEntryDocument(companyId,groupId,folderId,entryId,title,content,description);
          writer.addDocument(doc);
        }
 catch (        Exception e1) {
          _log.error("Reindexing " + entryId,e1);
        }
      }
    }
  }
 catch (  SystemException se) {
    throw se;
  }
catch (  Exception e2) {
    throw new SystemException(e2);
  }
 finally {
    try {
      if (writer != null) {
        LuceneUtil.write(companyId);
      }
    }
 catch (    Exception e) {
      _log.error(e);
    }
  }
}
