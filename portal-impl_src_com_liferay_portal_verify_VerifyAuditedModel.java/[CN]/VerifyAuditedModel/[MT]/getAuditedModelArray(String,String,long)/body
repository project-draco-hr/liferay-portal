{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select companyId, userId, createDate, modifiedDate from " + tableName + " where "+ pkColumnName+ " = ?");
    ps.setLong(1,primKey);
    rs=ps.executeQuery();
    if (rs.next()) {
      long companyId=rs.getLong("companyId");
      long userId=rs.getLong("userId");
      Timestamp createDate=rs.getTimestamp("createDate");
      Timestamp modifiedDate=rs.getTimestamp("modifiedDate");
      return new Object[]{companyId,userId,getUserName(userId),createDate,modifiedDate};
    }
    if (_log.isDebugEnabled()) {
      _log.debug("Unable to find " + tableName + " "+ primKey);
    }
    return null;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
