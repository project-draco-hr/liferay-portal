{
  StringBundler sb=new StringBundler(5);
  sb.append("select companyId, userId, createDate, modifiedDate from ");
  sb.append(tableName);
  sb.append(" where ");
  sb.append(pkColumnName);
  sb.append(" = ?");
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    ps=con.prepareStatement(sb.toString());
    ps.setLong(1,primKey);
    rs=ps.executeQuery();
    if (rs.next()) {
      long companyId=rs.getLong("companyId");
      long userId=rs.getLong("userId");
      Timestamp createDate=rs.getTimestamp("createDate");
      Timestamp modifiedDate=rs.getTimestamp("modifiedDate");
      return new Object[]{companyId,userId,getUserName(con,userId),createDate,modifiedDate};
    }
    if (_log.isDebugEnabled()) {
      _log.debug("Unable to find " + tableName + " "+ primKey);
    }
    return null;
  }
  finally {
    DataAccess.cleanUp(null,ps,rs);
  }
}
