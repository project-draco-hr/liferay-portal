{
  String sql="select userId, firstName, middleName, lastName from User_ where " + "companyId = ? and defaultUser = ?";
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    ps=con.prepareStatement(sql);
    ps.setLong(1,companyId);
    ps.setBoolean(2,true);
    rs=ps.executeQuery();
    if (rs.next()) {
      long userId=rs.getLong("userId");
      String firstName=rs.getString("firstName");
      String middleName=rs.getString("middleName");
      String lastName=rs.getString("lastName");
      FullNameGenerator fullNameGenerator=FullNameGeneratorFactory.getInstance();
      String userName=fullNameGenerator.getFullName(firstName,middleName,lastName);
      Timestamp createDate=new Timestamp(System.currentTimeMillis());
      return new Object[]{companyId,userId,userName,createDate,createDate};
    }
    return null;
  }
  finally {
    DataAccess.cleanUp(null,ps,rs);
  }
}
