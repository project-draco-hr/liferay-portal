{
  if (plid != LayoutConstants.DEFAULT_PLID) {
    try {
      Layout layout=LayoutLocalServiceUtil.getLayout(plid);
      LayoutTypePortlet layoutTypePortlet=(LayoutTypePortlet)layout.getLayoutType();
      if (layoutTypePortlet.hasPortletId(PortletKeys.DIRECTORY)) {
        return plid;
      }
    }
 catch (    NoSuchLayoutException nsle) {
    }
  }
  plid=PortalUtil.getPlidFromPortletId(scopeGroupId,PortletKeys.DIRECTORY);
  if (plid != LayoutConstants.DEFAULT_PLID) {
    return plid;
  }
 else {
    throw new NoSuchLayoutException("No page was found with the Directory portlet.");
  }
}
