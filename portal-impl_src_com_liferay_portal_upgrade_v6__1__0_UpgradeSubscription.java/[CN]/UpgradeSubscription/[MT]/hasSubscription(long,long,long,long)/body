{
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    ps=connection.prepareStatement("select count(*) from Subscription where companyId = ? and " + "userId = ? and classNameId = ? and classPK = ?");
    ps.setLong(1,companyId);
    ps.setLong(2,userId);
    ps.setLong(3,classNameId);
    ps.setLong(4,classPK);
    rs=ps.executeQuery();
    while (rs.next()) {
      int count=rs.getInt(1);
      if (count > 0) {
        return true;
      }
    }
    return false;
  }
  finally {
    DataAccess.cleanUp(ps,rs);
  }
}
