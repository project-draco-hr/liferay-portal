{
  _soapExtenderConfiguration=Configurable.createConfigurable(SoapExtenderConfiguration.class,properties);
  _dependencyManager=new TCCLDependencyManager(bundleContext);
  _component=_dependencyManager.createComponent();
  CXFJaxwsServiceRegistrator jaxwsServiceRegistrator=new CXFJaxwsServiceRegistrator();
  jaxwsServiceRegistrator.setSoapDescriptorBuilder(_soapDescriptorBuilder);
  _component.setImplementation(jaxwsServiceRegistrator);
  addBusDependencies();
  addHandlerDependencies();
  addServiceDependencies();
  addSoapDescriptorBuilderDependency();
  _dependencyManager.add(_component);
  _component.start();
}
