{
  WSRPConfiguredProducer configuredProducer=fetchConfiguredProducer(producerEntityId);
  configuredProducer.setServiceDescription(serviceDescriptionXML);
  try {
    WSRPConfiguredProducerLocalServiceUtil.updateWSRPConfiguredProducer(configuredProducer);
  }
 catch (  Exception e) {
    throw new WSRPConsumerException(e.getMessage());
  }
}
