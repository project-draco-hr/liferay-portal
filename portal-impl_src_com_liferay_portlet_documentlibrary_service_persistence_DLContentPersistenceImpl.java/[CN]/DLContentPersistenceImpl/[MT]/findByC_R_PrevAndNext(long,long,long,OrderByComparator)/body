{
  DLContent dlContent=findByPrimaryKey(contentId);
  Session session=null;
  try {
    session=openSession();
    DLContent[] array=new DLContentImpl[3];
    array[0]=getByC_R_PrevAndNext(session,dlContent,companyId,repositoryId,orderByComparator,true);
    array[1]=dlContent;
    array[2]=getByC_R_PrevAndNext(session,dlContent,companyId,repositoryId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
