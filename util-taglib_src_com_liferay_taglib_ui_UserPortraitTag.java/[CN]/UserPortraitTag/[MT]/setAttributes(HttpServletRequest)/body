{
  request.setAttribute("liferay-ui:user-portrait:cssClass",_cssClass);
  request.setAttribute("liferay-ui:user-portrait:imageCssClass",_imageCssClass);
  User user=getUser();
  if ((user != null) && (user.getPortraitId() > 0)) {
    ThemeDisplay themeDisplay=(ThemeDisplay)request.getAttribute(WebKeys.THEME_DISPLAY);
    try {
      request.setAttribute("liferay-ui:user-portrait:portraitURL",user.getPortraitURL(themeDisplay));
    }
 catch (    PortalException pe) {
      _log.error(pe);
    }
  }
  request.setAttribute("liferay-ui:user-portrait:user",user);
  request.setAttribute("liferay-ui:user-portrait:userInitials",getUserInitials(user));
  request.setAttribute("liferay-ui:user-portrait:userName",_userName);
}
