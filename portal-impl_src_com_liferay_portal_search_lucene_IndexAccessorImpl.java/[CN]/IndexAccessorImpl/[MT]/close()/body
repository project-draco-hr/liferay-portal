{
  if (SPIUtil.isSPI()) {
    return;
  }
  try {
    _indexSearcherManager.close();
    _indexWriter.close();
    _directory.close();
  }
 catch (  Exception e) {
    _log.error("Closing Lucene writer failed for " + _companyId,e);
  }
  if (_scheduledExecutorService != null) {
    _scheduledExecutorService.shutdownNow();
  }
}
