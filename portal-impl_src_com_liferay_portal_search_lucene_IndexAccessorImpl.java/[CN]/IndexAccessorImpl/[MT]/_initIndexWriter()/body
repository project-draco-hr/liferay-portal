{
  try {
    _indexWriter=new IndexWriter(getLuceneDir(),LuceneHelperUtil.getAnalyzer(),_dumpIndexDeletionPolicy,IndexWriter.MaxFieldLength.LIMITED);
    _indexWriter.setMergeFactor(PropsValues.LUCENE_MERGE_FACTOR);
    _indexWriter.setRAMBufferSizeMB(PropsValues.LUCENE_BUFFER_SIZE);
  }
 catch (  Exception e) {
    _log.error("Initializing Lucene writer failed for " + _companyId,e);
  }
}
