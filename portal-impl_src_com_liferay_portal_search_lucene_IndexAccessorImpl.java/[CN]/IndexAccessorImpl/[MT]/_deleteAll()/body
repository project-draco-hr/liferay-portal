{
  if (_indexWriter == null) {
    if (_log.isDebugEnabled()) {
      _log.debug("Index in read only mode");
    }
    return;
  }
  try {
    _indexWriter.deleteAll();
    _doCommit();
  }
 catch (  Exception e) {
    if (_log.isWarnEnabled()) {
      _log.warn("Unable to delete index in directory " + _path);
    }
  }
}
