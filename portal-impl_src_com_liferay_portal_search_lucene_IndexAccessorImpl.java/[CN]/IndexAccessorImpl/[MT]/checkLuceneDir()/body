{
  if (SearchEngineUtil.isIndexReadOnly()) {
    return;
  }
  if (_indexWriter == null) {
    Directory directory=getLuceneDir();
    if (IndexWriter.isLocked(directory)) {
      IndexWriter.unlock(directory);
    }
    try {
      _initIndexWriter();
    }
  finally {
      if (_indexWriter != null) {
        _indexWriter.close();
        _indexWriter=null;
      }
    }
  }
}
