{
synchronized (this) {
    _initIndexWriter();
    try {
      if (term != null) {
        _indexWriter.updateDocument(term,document);
      }
 else {
        _indexWriter.addDocument(document);
      }
      _optimizeCount++;
      if ((PropsValues.LUCENE_OPTIMIZE_INTERVAL == 0) || (_optimizeCount >= PropsValues.LUCENE_OPTIMIZE_INTERVAL)) {
        _indexWriter.optimize();
        _optimizeCount=0;
      }
      _batchCount++;
    }
  finally {
      _cleanUp();
    }
  }
}
