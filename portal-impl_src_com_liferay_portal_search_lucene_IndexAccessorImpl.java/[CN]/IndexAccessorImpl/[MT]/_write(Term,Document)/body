{
  if (_indexWriter == null) {
    if (_log.isDebugEnabled()) {
      _log.debug("Index in read only mode");
    }
    return;
  }
  try {
    if (term != null) {
      _indexWriter.updateDocument(term,document);
    }
 else {
      _indexWriter.addDocument(document);
    }
    _batchCount++;
  }
  finally {
    _commit();
  }
}
