{
  _companyId=companyId;
  _path=PropsValues.LUCENE_DIR.concat(String.valueOf(_companyId)).concat(StringPool.SLASH);
  try {
    if (!SPIUtil.isSPI()) {
      _checkLuceneDir();
      _initIndexWriter();
      _initCommitScheduler();
      _indexSearcherManager=new IndexSearcherManager(_indexWriter);
    }
 else {
      _indexSearcherManager=new IndexSearcherManager(getLuceneDir());
    }
  }
 catch (  IOException ioe) {
    _log.error("Unable to initialize index searcher manager for company " + _companyId,ioe);
  }
}
