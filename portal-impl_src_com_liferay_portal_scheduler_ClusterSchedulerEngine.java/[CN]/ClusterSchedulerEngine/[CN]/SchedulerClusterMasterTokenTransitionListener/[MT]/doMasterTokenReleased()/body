{
  _writeLock.lock();
  try {
    for (    SchedulerResponse schedulerResponse : _schedulerEngine.getScheduledJobs()) {
      if (StorageType.MEMORY_CLUSTERED == schedulerResponse.getStorageType()) {
        _schedulerEngine.delete(schedulerResponse.getJobName(),schedulerResponse.getGroupName(),schedulerResponse.getStorageType());
      }
    }
    initMemoryClusteredJobs();
    if (_log.isInfoEnabled()) {
      _log.info("MEMORY_CLUSTERED jobs stopped running on this node");
    }
  }
  finally {
    _writeLock.unlock();
  }
}
