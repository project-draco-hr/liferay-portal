{
  _writeLock.lock();
  try {
    for (    SchedulerResponse schedulerResponse : _schedulerEngine.getScheduledJobs()) {
      if (StorageType.MEMORY_CLUSTERED == schedulerResponse.getStorageType()) {
        _schedulerEngine.delete(schedulerResponse.getJobName(),schedulerResponse.getGroupName());
      }
    }
    initMemoryClusteredJobs(schedulerResponses);
    if (_log.isInfoEnabled()) {
      _log.info("Current node switched from master to slave.");
    }
  }
 catch (  Exception e) {
    throw new SchedulerException(e);
  }
 finally {
    _master=false;
    _writeLock.unlock();
  }
}
