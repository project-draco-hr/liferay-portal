{
  if (!PropsValues.SCHEDULER_ENABLED) {
    return;
  }
  try {
    if (isMemorySchedulerSlave(groupName)) {
      updateMemoryClusteredJob(jobName,groupName,TriggerState.PAUSED);
      return;
    }
  }
 catch (  Exception e) {
    throw new SchedulerException("Unable to pause job {jobName=" + jobName + ", groupName="+ groupName+ "}",e);
  }
  _readLock.lock();
  try {
    _schedulerEngine.pause(jobName,groupName);
  }
  finally {
    _readLock.unlock();
  }
  skipClusterInvoking(groupName);
}
