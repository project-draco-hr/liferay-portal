{
  StorageType storageType=getStorageType(groupName);
  try {
    if ((storageType == StorageType.MEMORY_SINGLE_INSTANCE) && !isMemorySchedulerClusterLockOwner(lockMemorySchedulerCluster(null))) {
      return (SchedulerResponse)callMaster(_getScheduledJobByJobNameGroupName,jobName,groupName);
    }
  }
 catch (  Exception e) {
    throw new SchedulerException("Unable to get job {jobName=" + jobName + ", groupName="+ groupName+ "}",e);
  }
  _readLock.lock();
  try {
    return _schedulerEngine.getScheduledJob(jobName,groupName);
  }
  finally {
    _readLock.unlock();
  }
}
