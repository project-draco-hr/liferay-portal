{
  selenium.open("/web/guest/home/");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isVisible("link=Breadcrumb Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.saveScreenShotAndSource();
  selenium.click(RuntimeVariables.replace("link=Breadcrumb Test Page"));
  selenium.waitForPageToLoad("30000");
  selenium.saveScreenShotAndSource();
  assertEquals(RuntimeVariables.replace("Liferay"),selenium.getText("//div[@class='portlet-body']/li/span/a"));
  assertEquals(RuntimeVariables.replace("Breadcrumb Test Page"),selenium.getText("//div[@class='portlet-body']/div"));
}
