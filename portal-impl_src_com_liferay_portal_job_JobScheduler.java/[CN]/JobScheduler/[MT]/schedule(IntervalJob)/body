{
  Date startTime=new Date(System.currentTimeMillis() + Time.MINUTE * 3);
  Date endTime=null;
  JobDetail jobDetail=new JobDetail(intervalJob.getClass().getName(),Scheduler.DEFAULT_GROUP,intervalJob.getClass());
  Trigger trigger=new SimpleTrigger(intervalJob.getClass().getName() + "_TRIGGER",org.quartz.Scheduler.DEFAULT_GROUP,startTime,endTime,SimpleTrigger.REPEAT_INDEFINITELY,intervalJob.getInterval());
  scheduleJob(jobDetail,trigger);
}
