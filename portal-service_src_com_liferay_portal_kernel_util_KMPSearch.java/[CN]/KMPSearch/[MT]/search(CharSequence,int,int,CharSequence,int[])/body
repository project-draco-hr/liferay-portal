{
  int patternLength=pattern.length();
  int i=0;
  int j=0;
  while ((i < length) && (j < patternLength)) {
    if (j == -1) {
      i++;
      j++;
    }
 else {
      char c1=text.charAt(i + offset);
      char c2=pattern.charAt(j);
      if ((c1 == c2) || (c1 == Character.toUpperCase(c2))) {
        i++;
        j++;
      }
 else {
        j=nexts[j];
      }
    }
  }
  if (j >= patternLength) {
    return i - patternLength + offset;
  }
 else {
    return -1;
  }
}
