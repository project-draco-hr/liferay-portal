{
  ObjectOutputStream oos=null;
  UnsyncByteArrayOutputStream ubaos=new UnsyncByteArrayOutputStream();
  try {
    oos=new ObjectOutputStream(ubaos);
    oos.writeObject(obj);
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
 finally {
    StreamUtil.cleanUp(oos);
  }
  return ubaos.toByteArray();
}
