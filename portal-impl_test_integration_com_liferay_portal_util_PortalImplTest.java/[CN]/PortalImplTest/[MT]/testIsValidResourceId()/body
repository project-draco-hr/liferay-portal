{
  Assert.assertTrue(PortalUtil.isValidResourceId("/view.jsp"));
  Assert.assertFalse(PortalUtil.isValidResourceId("/META-INF/MANIFEST.MF"));
  Assert.assertFalse(PortalUtil.isValidResourceId("/META-INF\\MANIFEST.MF"));
  Assert.assertFalse(PortalUtil.isValidResourceId("\\META-INF/MANIFEST.MF"));
  Assert.assertFalse(PortalUtil.isValidResourceId("\\META-INF\\MANIFEST.MF"));
  Assert.assertFalse(PortalUtil.isValidResourceId("/WEB-INF/web.xml"));
  Assert.assertFalse(PortalUtil.isValidResourceId("/WEB-INF\\web.xml"));
  Assert.assertFalse(PortalUtil.isValidResourceId("\\WEB-INF/web.xml"));
  Assert.assertFalse(PortalUtil.isValidResourceId("\\WEB-INF\\web.xml"));
}
