{
  ServiceDependencyManager serviceDependencyManager=new ServiceDependencyManager();
  serviceDependencyManager.addServiceDependencyListener(new ServiceDependencyListener(){
    @Override public void dependenciesFulfilled(){
      _singleDestinationMessageSender=SingleDestinationMessageSenderFactoryUtil.createSingleDestinationMessageSender(_destinationName);
    }
    @Override public void destroy(){
    }
  }
);
  serviceDependencyManager.registerDependencies(SingleDestinationMessageSenderFactory.class);
}
