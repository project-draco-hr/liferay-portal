{
  String description="This is a test group";
  int type=GroupConstants.TYPE_SITE_OPEN;
  String friendlyURL=StringPool.SLASH + FriendlyURLNormalizerUtil.normalize(name);
  boolean active=true;
  boolean site=true;
  Group group=GroupLocalServiceUtil.fetchGroup(TestPropsValues.getCompanyId(),name);
  if (group != null) {
    return group;
  }
  return GroupLocalServiceUtil.addGroup(TestPropsValues.getUserId(),null,0,name,description,type,friendlyURL,site,active,getServiceContext());
}
