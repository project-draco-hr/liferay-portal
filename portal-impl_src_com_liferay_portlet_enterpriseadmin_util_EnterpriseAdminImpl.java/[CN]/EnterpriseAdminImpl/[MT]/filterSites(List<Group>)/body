{
  List<Group> filteredSites=ListUtil.copy(sites);
  Iterator<Group> itr=filteredSites.iterator();
  while (itr.hasNext()) {
    Group group=itr.next();
    if ((group.isOrganization()) && (!group.hasPrivateLayouts()) && (!group.hasPublicLayouts())) {
      itr.remove();
    }
  }
  return filteredSites;
}
