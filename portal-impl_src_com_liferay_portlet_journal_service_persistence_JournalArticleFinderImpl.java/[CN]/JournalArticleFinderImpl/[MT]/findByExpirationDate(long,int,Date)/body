{
  Timestamp expirationDateLT_TS=CalendarUtil.getTimestamp(expirationDateLT);
  Session session=null;
  try {
    session=openSession();
    String sql=CustomSQLUtil.get(FIND_BY_EXPIRATION_DATE);
    if (status == WorkflowConstants.STATUS_ANY) {
      sql=StringUtil.replace(sql,"(status = ?) AND",StringPool.BLANK);
    }
    SQLQuery q=session.createSQLQuery(sql);
    q.addEntity(JournalArticleImpl.TABLE_NAME,JournalArticleImpl.class);
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(classNameId);
    if (status != WorkflowConstants.STATUS_ANY) {
      qPos.add(status);
    }
    qPos.add(expirationDateLT_TS);
    return q.list(true);
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
 finally {
    closeSession(session);
  }
}
