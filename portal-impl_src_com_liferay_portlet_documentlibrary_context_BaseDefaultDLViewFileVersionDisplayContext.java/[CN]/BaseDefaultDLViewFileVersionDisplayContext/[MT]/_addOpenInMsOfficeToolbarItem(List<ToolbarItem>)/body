{
  if (!isOpenInMsOfficeActionAvailable()) {
    return;
  }
  String webDavURL=DLUtil.getWebDavURL(_themeDisplay,fileEntry.getFolder(),fileEntry,PropsValues.DL_FILE_ENTRY_OPEN_IN_MS_OFFICE_MANUAL_CHECK_IN_REQUIRED);
  StringBundler sb=new StringBundler(4);
  sb.append(getNamespace());
  sb.append("openDocument('");
  sb.append(webDavURL);
  sb.append("');");
  _addJavascriptUIItem(new JavascriptToolbarItem(),toolbarItems,"icon-file-alt",DLUIItemKeys.OPEN_IN_MS_OFFICE,UnicodeLanguageUtil.get(request,"open-in-ms-office"),sb.toString());
}
