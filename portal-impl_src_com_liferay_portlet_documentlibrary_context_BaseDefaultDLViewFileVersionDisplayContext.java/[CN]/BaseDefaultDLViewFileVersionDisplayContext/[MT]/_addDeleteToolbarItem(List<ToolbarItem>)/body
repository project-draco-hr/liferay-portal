{
  if (!isDeleteActionAvailable()) {
    return;
  }
  LiferayPortletResponse liferayPortletResponse=_getLiferayPortletResponse();
  PortletURL portletURL=liferayPortletResponse.createRenderURL();
  portletURL.setParameter("struts_action","/document_library/view");
  portletURL.setParameter("folderId",String.valueOf(fileEntry.getFolderId()));
  StringBundler sb=new StringBundler(5);
  sb.append("if (confirm('");
  sb.append(UnicodeLanguageUtil.get(request,"are-you-sure-you-want-to-delete-this"));
  sb.append("')) {");
  sb.append(getSubmitFormJavascript(Constants.DELETE,portletURL.toString()));
  sb.append("}");
  _addJavascriptUIItem(new JavascriptToolbarItem(),toolbarItems,"icon-remove",DLUIItemKeys.DELETE,UnicodeLanguageUtil.get(request,"delete"),sb.toString());
}
