{
  Session session=null;
  try {
    session=openSession();
    StringBuffer query=new StringBuffer();
    query.append("FROM PollsVote IN CLASS com.liferay.portlet.polls.service.persistence.PollsVoteHBM WHERE ");
    if (questionId == null) {
      query.append("questionId is null");
    }
 else {
      query.append("questionId = ?");
    }
    query.append(" ");
    Query q=session.createQuery(query.toString());
    int queryPos=0;
    if (questionId != null) {
      q.setString(queryPos++,questionId);
    }
    Iterator itr=q.list().iterator();
    List list=new ArrayList();
    while (itr.hasNext()) {
      PollsVoteHBM pollsVoteHBM=(PollsVoteHBM)itr.next();
      list.add(PollsVoteHBMUtil.model(pollsVoteHBM));
    }
    return list;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
