{
  String value=request.getParameter(param);
  if (value != null) {
    value=value.trim();
    if (toLowerCase) {
      value=value.toLowerCase();
    }
  }
  if (Validator.isNull(value)) {
    value=defaultValue;
  }
 else {
    value=StringPool.PERCENT + value + StringPool.PERCENT;
  }
  return value;
}
