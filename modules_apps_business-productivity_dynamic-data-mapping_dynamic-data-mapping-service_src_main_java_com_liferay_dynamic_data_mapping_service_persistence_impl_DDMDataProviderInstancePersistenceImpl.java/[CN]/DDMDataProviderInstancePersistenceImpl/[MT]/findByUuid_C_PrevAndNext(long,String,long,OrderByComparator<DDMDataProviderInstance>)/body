{
  DDMDataProviderInstance ddmDataProviderInstance=findByPrimaryKey(dataProviderInstanceId);
  Session session=null;
  try {
    session=openSession();
    DDMDataProviderInstance[] array=new DDMDataProviderInstanceImpl[3];
    array[0]=getByUuid_C_PrevAndNext(session,ddmDataProviderInstance,uuid,companyId,orderByComparator,true);
    array[1]=ddmDataProviderInstance;
    array[2]=getByUuid_C_PrevAndNext(session,ddmDataProviderInstance,uuid,companyId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
