{
  String emailOrderConfirmationBody=_preferences.getValue("email-order-confirmation-body",StringPool.BLANK);
  if (Validator.isNotNull(emailOrderConfirmationBody)) {
    return emailOrderConfirmationBody;
  }
 else {
    return ContentUtil.get(PropsUtil.get(PropsKeys.SHOPPING_EMAIL_ORDER_CONFIRMATION_BODY));
  }
}
