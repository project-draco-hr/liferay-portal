{
  Session session=null;
  try {
    session=openSession();
    ShoppingOrderItem shoppingOrderItem=(ShoppingOrderItem)session.get(ShoppingOrderItemImpl.class,new Long(orderItemId));
    if (shoppingOrderItem == null) {
      if (_log.isWarnEnabled()) {
        _log.warn(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + orderItemId);
      }
      throw new NoSuchOrderItemException(_NO_SUCH_ENTITY_WITH_PRIMARY_KEY + orderItemId);
    }
    return remove(shoppingOrderItem);
  }
 catch (  NoSuchOrderItemException nsee) {
    throw nsee;
  }
catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
