{
  selenium.open("/web/guest/home/");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Page Comments Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.clickAt("link=Page Comments Test Page",RuntimeVariables.replace(""));
  selenium.waitForPageToLoad("30000");
  selenium.clickAt("link=Add Comment",RuntimeVariables.replace(""));
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isVisible("_107_postReplyBody0")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  assertTrue(selenium.isVisible("_107_postReplyBody0"));
  selenium.type("_107_postReplyBody0",RuntimeVariables.replace("This is a test page2 comment2."));
  selenium.keyPress("_107_postReplyBody0",RuntimeVariables.replace("\\48"));
  selenium.keyPress("_107_postReplyBody0",RuntimeVariables.replace("\\8"));
  selenium.clickAt("_107_postReplyButton0",RuntimeVariables.replace(""));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isTextPresent("Your request processed successfully."));
  assertFalse(selenium.isVisible("_107_postReplyBody0"));
  assertTrue(selenium.isTextPresent("This is a test page2 comment2."));
}
