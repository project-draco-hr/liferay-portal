{
  for (  String highlightFieldName : queryConfig.getHighlightFieldNames()) {
    addHighlightedField(searchRequestBuilder,queryConfig,highlightFieldName);
  }
  searchRequestBuilder.setHighlighterRequireFieldMatch(queryConfig.isHighlightRequireFieldMatch());
  searchRequestBuilder.setHighlighterPreTags(SearchUtil.HIGHLIGHT_TAG_OPEN);
  searchRequestBuilder.setHighlighterPostTags(SearchUtil.HIGHLIGHT_TAG_CLOSE);
}
