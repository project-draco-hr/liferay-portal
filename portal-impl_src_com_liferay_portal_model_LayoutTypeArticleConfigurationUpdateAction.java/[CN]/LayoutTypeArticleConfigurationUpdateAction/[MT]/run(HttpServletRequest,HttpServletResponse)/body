{
  try {
    long groupId=ParamUtil.getLong(request,"groupId");
    boolean privateLayout=ParamUtil.getBoolean(request,"privateLayout");
    long layoutId=ParamUtil.getLong(request,"layoutId");
    Layout layout=LayoutLocalServiceUtil.getLayout(groupId,privateLayout,layoutId);
    Properties typeSettingsProperties=layout.getTypeSettingsProperties();
    String articleId=typeSettingsProperties.getProperty("article-id");
    if (Validator.isNull(articleId)) {
      return;
    }
    JournalContentSearchLocalServiceUtil.updateContentSearch(layout.getGroupId(),layout.isPrivateLayout(),layout.getLayoutId(),StringPool.BLANK,articleId,true);
  }
 catch (  Exception e) {
    throw new ActionException(e);
  }
}
