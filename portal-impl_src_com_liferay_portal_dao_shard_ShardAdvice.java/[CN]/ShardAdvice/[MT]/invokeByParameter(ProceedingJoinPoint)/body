{
  Object[] arguments=proceedingJoinPoint.getArgs();
  long companyId=(Long)arguments[0];
  Shard shard=ShardLocalServiceUtil.getShard(Company.class.getName(),companyId);
  String shardName=shard.getName();
  if (_log.isInfoEnabled()) {
    _log.info("Service being set to shard " + shardName + " for "+ _getSignature(proceedingJoinPoint));
  }
  Object returnValue=null;
  pushCompanyService(shardName);
  try {
    returnValue=proceedingJoinPoint.proceed();
  }
  finally {
    popCompanyService();
  }
  return returnValue;
}
