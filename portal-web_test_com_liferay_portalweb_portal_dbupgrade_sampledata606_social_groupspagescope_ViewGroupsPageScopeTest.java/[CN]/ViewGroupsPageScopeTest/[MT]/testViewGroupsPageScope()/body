{
  selenium.selectWindow("null");
  selenium.selectFrame("relative=top");
  selenium.open("/web/joebloggs/home/");
  selenium.waitForElementPresent("link=Activities Page");
  selenium.clickAt("link=Activities Page",RuntimeVariables.replace(""));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isTextPresent("Joe wrote a new blog entry, Blogs Entry Scope Current Page, in Group Page Scope Community."));
  assertTrue(selenium.isElementPresent("link=Blogs Entry Scope Current Page"));
  assertTrue(selenium.isElementPresent("link=Group Page Scope Community"));
}
