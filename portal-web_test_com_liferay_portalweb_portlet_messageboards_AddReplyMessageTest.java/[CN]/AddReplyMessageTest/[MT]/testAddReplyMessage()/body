{
  selenium.click("//a[text()='Reply']");
  selenium.waitForPageToLoad("30000");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("_19_textArea")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.typeKeys("_19_textArea",RuntimeVariables.replace("This is a t\u00e9st r\u00e9pl m\u00e9ssag\u00e9!"));
  selenium.type("_19_textArea",RuntimeVariables.replace("This is a t\u00e9st r\u00e9ply m\u00e9ssag\u00e9!"));
  selenium.click("//input[@value='Save']");
  selenium.waitForPageToLoad("30000");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isTextPresent("This is a t\u00e9st r\u00e9ply m\u00e9ssag\u00e9!")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
}
