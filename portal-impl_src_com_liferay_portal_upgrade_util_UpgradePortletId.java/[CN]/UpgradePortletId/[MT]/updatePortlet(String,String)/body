{
  try {
    runSQL("update Portlet set portletId = '" + newRootPortletId + "' where portletId = '"+ oldRootPortletId+ "'");
    runSQL("update ResourceAction set name = '" + newRootPortletId + "' where name = '"+ oldRootPortletId+ "'");
    updateResourcePermission(oldRootPortletId,newRootPortletId,true);
    updateInstanceablePortletPreferences(oldRootPortletId,newRootPortletId);
  }
 catch (  Exception e) {
    if (_log.isWarnEnabled()) {
      _log.warn(e,e);
    }
  }
}
