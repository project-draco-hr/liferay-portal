{
  runSQL("update Portlet set portletId = '" + newRootPortletId + "' where portletId = '"+ oldRootPortletId+ "'");
  runSQL("update ResourceAction set name = '" + newRootPortletId + "' where name = '"+ oldRootPortletId+ "'");
