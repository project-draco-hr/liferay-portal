{
  try (PreparedStatement ps=connection.prepareStatement("select typeSettings from Layout where plid = " + plid);ResultSet rs=ps.executeQuery()){
    while (rs.next()) {
      String typeSettings=rs.getString("typeSettings");
      String newTypeSettings=StringUtil.replace(typeSettings,oldPortletId,newPortletId);
      updateLayout(plid,newTypeSettings);
    }
  }
 catch (  Exception e) {
    if (_log.isWarnEnabled()) {
      _log.warn(e,e);
    }
  }
}
