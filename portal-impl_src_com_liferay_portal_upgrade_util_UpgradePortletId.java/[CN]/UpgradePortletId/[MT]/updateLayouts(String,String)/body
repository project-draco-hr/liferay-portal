{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select plid, typeSettings from Layout where typeSettings " + "like '%" + oldRootPortletId + "%'");
    rs=ps.executeQuery();
    while (rs.next()) {
      long plid=rs.getLong("plid");
      String typeSettings=rs.getString("typeSettings");
      String newTypeSettings=StringUtil.replace(typeSettings,oldRootPortletId,newRootPortletId);
      updateLayout(plid,newTypeSettings);
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
