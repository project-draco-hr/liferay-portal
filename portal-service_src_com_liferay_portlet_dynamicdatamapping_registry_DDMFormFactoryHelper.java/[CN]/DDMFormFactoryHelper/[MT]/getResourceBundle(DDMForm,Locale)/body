{
  ResourceBundle resourceBundle;
  try {
    resourceBundle=ResourceBundle.getBundle(ddmForm.localization(),locale,_clazz.getClassLoader(),UTF8Control.INSTANCE);
  }
 catch (  Exception e) {
    resourceBundle=ResourceBundle.getBundle(ddmForm.localization(),locale,PortalClassLoaderUtil.getClassLoader(),UTF8Control.INSTANCE);
  }
  return resourceBundle;
}
