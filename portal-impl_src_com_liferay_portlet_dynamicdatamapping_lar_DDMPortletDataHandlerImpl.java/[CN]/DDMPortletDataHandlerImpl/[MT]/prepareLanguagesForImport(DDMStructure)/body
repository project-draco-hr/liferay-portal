{
  Locale ddmStructureDefaultLocale=LocaleUtil.fromLanguageId(ddmStructure.getDefaultLocale());
  Locale[] ddmStructureAvailableLocales=LocaleUtil.fromLanguageIds(ddmStructure.getAvailableLocales());
  Locale defaultImportLocale=LocalizationUtil.getDefaultImportLocale(DDMStructure.class.getName(),ddmStructure.getPrimaryKey(),ddmStructureDefaultLocale,ddmStructureAvailableLocales);
  ddmStructure.prepareLocalizedFieldsForImport(defaultImportLocale);
}
