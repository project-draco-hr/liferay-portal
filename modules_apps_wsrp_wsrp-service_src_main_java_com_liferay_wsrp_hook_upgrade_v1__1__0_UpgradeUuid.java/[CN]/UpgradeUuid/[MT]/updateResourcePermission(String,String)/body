{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("select resourcePermissionId, primKey from " + "ResourcePermission where name = ?");
    ps.setString(1,oldPortletId);
    rs=ps.executeQuery();
    while (rs.next()) {
      long resourcePermissionId=rs.getLong("resourcePermissionId");
      String primKey=rs.getString("primKey");
      primKey=StringUtil.replace(primKey,oldPortletId,newPortletId);
      updateResourcePermission(resourcePermissionId,newPortletId,primKey);
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
