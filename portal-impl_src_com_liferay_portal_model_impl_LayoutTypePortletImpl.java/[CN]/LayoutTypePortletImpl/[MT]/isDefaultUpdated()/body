{
  if (!isCustomizedView() || !hasUserPreferenes()) {
    return false;
  }
  String preferencesModifiedDateString=_portalPreferences.getValue(CustomizedPages.namespacePlid(getPlid()),_MODIFIED_DATE,_NULL_DATE);
  DateFormat dateFormat=DateFormatFactoryUtil.getSimpleDateFormat(PropsValues.INDEX_DATE_FORMAT_PATTERN);
  try {
    Date preferencesModifiedDate=dateFormat.parse(preferencesModifiedDateString);
    if (hasTemplate()) {
      String propertiesModifiedDateString=_templateLayout.getTypeSettingsProperties().getProperty(_MODIFIED_DATE,_NULL_DATE);
      Date propertiesModifiedDate=dateFormat.parse(propertiesModifiedDateString);
      return propertiesModifiedDate.after(preferencesModifiedDate);
    }
 else {
      Layout layout=getLayout();
      String propertiesModifiedDateString=layout.getTypeSettingsProperties().getProperty(_MODIFIED_DATE,_NULL_DATE);
      Date propertiesModifiedDate=dateFormat.parse(propertiesModifiedDateString);
      return propertiesModifiedDate.after(preferencesModifiedDate);
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
  return false;
}
