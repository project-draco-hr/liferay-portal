{
  if (!isPersonalizedView() || !hasUserPreferenes()) {
    return false;
  }
  String modifiedDateString=_portalPreferences.getValue(PersonalizedPages.namespace(getLayout().getPlid()),_MODIFIED_DATE,_NULL_DATE);
  DateFormat dateFormat=DateFormatFactoryUtil.getSimpleDateFormat(PropsValues.INDEX_TIME_FORMAT);
  try {
    Date modifiedDate=dateFormat.parse(modifiedDateString);
    if (hasTemplate()) {
      modifiedDateString=_templateLayout.getTypeSettingsProperties().getProperty(_MODIFIED_DATE,_NULL_DATE);
      Date defaultsDate=dateFormat.parse(modifiedDateString);
      return defaultsDate.after(modifiedDate);
    }
 else {
      modifiedDateString=getLayout().getTypeSettingsProperties().getProperty(_MODIFIED_DATE,_NULL_DATE);
      Date defaultsDate=dateFormat.parse(modifiedDateString);
      return defaultsDate.after(modifiedDate);
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
  return false;
}
