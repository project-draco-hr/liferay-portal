{
  String layoutTemplateId=StringPool.BLANK;
  if (hasTemplate()) {
    layoutTemplateId=getTemplateProperty(LayoutTypePortletConstants.LAYOUT_TEMPLATE_ID);
  }
 else {
    layoutTemplateId=getTypeSettingsProperties().getProperty(LayoutTypePortletConstants.LAYOUT_TEMPLATE_ID);
  }
  if (Validator.isNull(layoutTemplateId)) {
    layoutTemplateId=StringPool.BLANK;
  }
  return layoutTemplateId;
}
