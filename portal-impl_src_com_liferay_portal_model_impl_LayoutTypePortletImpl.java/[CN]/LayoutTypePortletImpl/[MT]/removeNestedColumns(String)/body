{
  Properties props=getTypeSettingsProperties();
  Iterator itr=props.keySet().iterator();
  Properties newProps=new Properties();
  while (itr.hasNext()) {
    String key=(String)itr.next();
    if (!key.startsWith(portletId)) {
      newProps.setProperty(key,props.getProperty(key));
    }
  }
  getLayout().setTypeSettingsProperties(newProps);
  String nestedColumnIds=GetterUtil.getString(getTypeSettingsProperties().getProperty(NESTED_COLUMN_IDS));
  String[] nestedColumnIdsArray=ArrayUtil.removeByPrefix(StringUtil.split(nestedColumnIds),portletId);
  getTypeSettingsProperties().setProperty(NESTED_COLUMN_IDS,StringUtil.merge(nestedColumnIdsArray));
}
