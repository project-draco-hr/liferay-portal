{
  Layout layout=getLayout();
  Portlet portlet=PortletLocalServiceUtil.getPortletById(layout.getCompanyId(),portletId);
  long scopeGroupId=PortalUtil.getScopeGroupId(getLayout(),portletId);
  if (PortletPreferencesLocalServiceUtil.getPortletPreferencesCount(scopeGroupId,PortletKeys.PREFS_OWNER_TYPE_LAYOUT,PortletKeys.PREFS_PLID_SHARED,portlet,false) < 1) {
    return false;
  }
  return true;
}
