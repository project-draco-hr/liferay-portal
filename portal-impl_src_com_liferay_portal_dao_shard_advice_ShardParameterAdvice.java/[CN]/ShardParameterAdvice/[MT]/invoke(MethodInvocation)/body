{
  Object[] arguments=methodInvocation.getArguments();
  long companyId=(Long)arguments[0];
  Shard shard=ShardLocalServiceUtil.getShard(Company.class.getName(),companyId);
  String shardName=shard.getName();
  if (_log.isInfoEnabled()) {
    _log.info("Setting service to shard " + shardName + " for "+ methodInvocation.toString());
  }
  Object returnValue=null;
  _shardAdvice.pushCompanyService(shardName);
  try {
    returnValue=methodInvocation.proceed();
  }
  finally {
    _shardAdvice.popCompanyService();
  }
  return returnValue;
}
