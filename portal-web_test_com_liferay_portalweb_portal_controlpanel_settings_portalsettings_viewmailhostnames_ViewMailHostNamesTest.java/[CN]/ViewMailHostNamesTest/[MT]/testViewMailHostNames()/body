{
  selenium.selectWindow("null");
  selenium.selectFrame("relative=top");
  selenium.open("/web/guest/home/");
  selenium.waitForElementPresent("link=Control Panel");
  selenium.clickAt("link=Control Panel",RuntimeVariables.replace("Control Panel"));
  selenium.waitForPageToLoad("30000");
  selenium.clickAt("link=Portal Settings",RuntimeVariables.replace("Portal Settings"));
  selenium.waitForPageToLoad("30000");
  selenium.waitForVisible("//a[@id='_130_mailHostNamesLink']");
  selenium.clickAt("//a[@id='_130_mailHostNamesLink']",RuntimeVariables.replace("Mail Host Names"));
  assertTrue(selenium.isTextPresent("Enter one mail host name per line for all additional mail host names besides liferay.com."));
  assertTrue(selenium.isElementPresent("//textarea[@name='_130_settings--admin.mail.host.names--']"));
}
