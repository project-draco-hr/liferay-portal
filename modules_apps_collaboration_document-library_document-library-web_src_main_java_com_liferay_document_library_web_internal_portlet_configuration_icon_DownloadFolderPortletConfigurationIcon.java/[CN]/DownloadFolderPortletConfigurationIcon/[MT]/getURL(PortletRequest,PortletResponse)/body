{
  ResourceURL portletURL=(ResourceURL)PortalUtil.getControlPanelPortletURL(portletRequest,DLPortletKeys.DOCUMENT_LIBRARY_ADMIN,PortletRequest.RESOURCE_PHASE);
  portletURL.setResourceID("/document_library/edit_folder");
  Folder folder=null;
  try {
    folder=ActionUtil.getFolder(portletRequest);
  }
 catch (  Exception e) {
    return null;
  }
  portletURL.setParameter("folderId",String.valueOf(folder.getFolderId()));
  portletURL.setParameter("repositoryId",String.valueOf(folder.getRepositoryId()));
  return portletURL.toString();
}
