{
  for (  Company company : _companyLocalService.getCompanies()) {
    long defaultUserId=_userLocalService.getDefaultUserId(company.getCompanyId());
    for (int i=0; i < POLICY_NAMES.length; i++) {
      SAPEntry sapEntry=_sapEntryLocalService.fetchSAPEntry(company.getCompanyId(),POLICY_NAMES[i]);
      if (sapEntry != null) {
        continue;
      }
      try {
        Map<Locale,String> map=new HashMap<>();
        map.put(LocaleUtil.getDefault(),POLICY_NAMES[i]);
        _sapEntryLocalService.addSAPEntry(defaultUserId,_ALLOWED_SERVICE_SIGNATURES[i],_DEFAULT_SAP_ENTRY[i],true,POLICY_NAMES[i],map,new ServiceContext());
      }
 catch (      PortalException e) {
        throw new Exception("Unable to add SAP default policy for company " + company.getCompanyId(),e);
      }
    }
  }
}
