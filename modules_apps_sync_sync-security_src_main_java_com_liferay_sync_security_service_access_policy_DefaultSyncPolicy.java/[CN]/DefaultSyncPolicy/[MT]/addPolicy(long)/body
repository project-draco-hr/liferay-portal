{
  SAPEntry sapEntry=_sapEntryLocalService.fetchSAPEntry(companyId,POLICY_NAME);
  if (sapEntry != null) {
    return;
  }
  long userId=_userLocalService.getDefaultUserId(companyId);
  String allowedServiceSignatures=_POLICY_SERVICES;
  boolean defaultSAPEntry=true;
  boolean enabled=true;
  String name=POLICY_NAME;
  Map<Locale,String> titleMap=new HashMap<>();
  titleMap.put(LocaleUtil.getDefault(),POLICY_NAME);
  ServiceContext serviceContext=new ServiceContext();
  _sapEntryLocalService.addSAPEntry(userId,allowedServiceSignatures,defaultSAPEntry,enabled,name,titleMap,serviceContext);
}
