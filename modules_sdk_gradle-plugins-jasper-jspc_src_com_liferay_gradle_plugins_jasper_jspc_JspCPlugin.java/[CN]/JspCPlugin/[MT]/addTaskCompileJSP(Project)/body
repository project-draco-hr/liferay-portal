{
  JavaCompile javaCompile=GradleUtil.addTask(project,COMPILE_JSP_TASK_NAME,JavaCompile.class);
  javaCompile.setClasspath(GradleUtil.getConfiguration(project,CONFIGURATION_NAME));
  javaCompile.setDescription("Compile JSP files to check for errors");
  javaCompile.setDestinationDir(javaCompile.getTemporaryDir());
  javaCompile.setGroup("verification");
  Task compileJSPSourcesTask=GradleUtil.getTask(project,COMPILE_JSP_SOURCES_TASK_NAME);
  javaCompile.setSource(compileJSPSourcesTask.getOutputs());
  return javaCompile;
}
