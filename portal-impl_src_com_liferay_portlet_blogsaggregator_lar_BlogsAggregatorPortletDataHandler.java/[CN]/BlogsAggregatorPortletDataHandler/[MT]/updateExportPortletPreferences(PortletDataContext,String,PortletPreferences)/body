{
  long organizationId=GetterUtil.getLong(portletPreferences.getValue("organizationId",null));
  if (organizationId > 0) {
    Portlet portlet=PortletLocalServiceUtil.getPortletById(portletDataContext.getCompanyId(),portletId);
    ExportImportHelperUtil.updateExportPortletPreferencesClassPKs(portletDataContext,portlet,portletPreferences,"organizationId",Organization.class.getName(),portletDataContext.getExportDataRootElement());
  }
  return portletPreferences;
}
