{
  Hashtable<String,Object> properties=new Hashtable<String,Object>();
  properties.put(HttpServicePropsKeys.BUNDLE_SYMBOLICNAME,_bundle.getSymbolicName());
  properties.put(HttpServicePropsKeys.BUNDLE_ID,_bundle.getBundleId());
  properties.put("bundle",_bundle);
  properties.put(HttpServicePropsKeys.BUNDLE_VERSION,_bundle.getVersion());
  properties.put(HttpServicePropsKeys.WEB_CONTEXTPATH,StringPool.SLASH.concat(_servletContextName));
  BundleContext bundleContext=_bundle.getBundleContext();
  _servletContextRegistration=bundleContext.registerService(BundleServletContext.class,this,properties);
  _httpServiceTracker=new HttpServiceTracker(bundleContext,_bundle);
  _httpServiceTracker.open();
}
