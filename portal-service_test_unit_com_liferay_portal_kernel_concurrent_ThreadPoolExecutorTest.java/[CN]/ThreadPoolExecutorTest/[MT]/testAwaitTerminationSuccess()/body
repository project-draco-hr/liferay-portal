{
  ThreadPoolExecutor threadPoolExecutor=new ThreadPoolExecutor(1,2,1,TimeUnit.SECONDS,true,3);
  threadPoolExecutor.shutdown();
  long startTime=System.currentTimeMillis();
  Assert.assertTrue(threadPoolExecutor.awaitTermination(10,TimeUnit.MILLISECONDS));
  long waitTime=System.currentTimeMillis() - startTime;
  Assert.assertTrue(waitTime < TestUtil.SHORT_WAIT);
}
