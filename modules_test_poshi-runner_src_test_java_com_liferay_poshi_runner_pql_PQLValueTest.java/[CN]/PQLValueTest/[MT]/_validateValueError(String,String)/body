{
  String actual=null;
  try {
    PQLValue pqlValue=new PQLValue(pql);
    Object valueObject=pqlValue.getValue(new Properties());
  }
 catch (  Exception e) {
    actual=e.getMessage();
    if (!actual.equals(expected)) {
      StringBuilder sb=new StringBuilder();
