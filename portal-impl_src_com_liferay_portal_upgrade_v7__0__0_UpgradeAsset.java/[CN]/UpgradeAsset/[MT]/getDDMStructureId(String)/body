{
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    ps=connection.prepareStatement("select structureId from DDMStructure where structureKey = ?");
    ps.setString(1,structureKey);
    rs=ps.executeQuery();
    if (rs.next()) {
      return rs.getLong("structureId");
    }
    return 0;
  }
  finally {
    DataAccess.cleanUp(ps,rs);
  }
}
