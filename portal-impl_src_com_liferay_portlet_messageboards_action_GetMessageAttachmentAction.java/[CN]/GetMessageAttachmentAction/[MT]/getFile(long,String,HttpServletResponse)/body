{
  InputStream is=null;
  try {
    MBMessage message=MBMessageServiceUtil.getMessage(messageId);
    is=DLLocalServiceUtil.getFileAsStream(message.getCompanyId(),CompanyConstants.SYSTEM,message.getAttachmentsDir() + "/" + fileName);
    byte[] bytes=FileUtil.getBytes(is);
    String contentType=MimeTypesUtil.getContentType(fileName);
    ServletResponseUtil.sendFile(response,fileName,bytes,contentType);
  }
  finally {
    ServletResponseUtil.cleanUp(is);
  }
}
