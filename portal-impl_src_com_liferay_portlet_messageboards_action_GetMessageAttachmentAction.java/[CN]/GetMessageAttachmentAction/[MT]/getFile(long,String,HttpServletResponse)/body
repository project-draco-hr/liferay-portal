{
  InputStream is=null;
  try {
    MBMessage message=MBMessageServiceUtil.getMessage(messageId);
    is=DLLocalServiceUtil.getFileAsStream(message.getCompanyId(),CompanyImpl.SYSTEM,message.getAttachmentsDir() + "/" + fileName);
    String contentType=MimeTypesUtil.getContentType(fileName);
    ServletResponseUtil.sendFile(res,fileName,is,contentType);
  }
  finally {
    ServletResponseUtil.cleanUp(is);
  }
}
