{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    runSQL("update JournalStructure set xsd = replace(xsd, " + "'image_gallery', 'document_library') where xsd like " + "'%image_gallery%'");
  }
 catch (  Exception e) {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("select id_, xsd from JournalStructure where xsd like " + "'%image_gallery%'");
    rs=ps.executeQuery();
    while (rs.next()) {
      long id=rs.getLong("id_");
      String xsd=rs.getString("xsd");
      updateStructureXsd(id,xsd);
    }
  }
 finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
