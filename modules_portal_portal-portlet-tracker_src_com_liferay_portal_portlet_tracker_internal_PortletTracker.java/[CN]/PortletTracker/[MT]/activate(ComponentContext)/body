{
  _componentContext=componentContext;
  BundleContext bundleContext=_componentContext.getBundleContext();
  Filter filter=null;
  try {
    filter=bundleContext.createFilter("(&(javax.portlet.name=*)(objectClass=" + Portlet.class.getName() + "))");
  }
 catch (  InvalidSyntaxException ise) {
    throw new RuntimeException("Unable to activate Liferay Portal Portlet Tracker",ise);
  }
  _serviceTracker=new ServiceTracker<Portlet,Portlet>(bundleContext,filter,this);
  _serviceTracker.open();
  if (_log.isInfoEnabled()) {
    _log.info("Activated");
  }
}
