{
  try {
    Group group=commandArgument.getCurrentGroup();
    IGFolder igFolder=_getFolder(group.getGroupId(),StringPool.SLASH + commandArgument.getCurrentFolder());
    long parentFolderId=igFolder.getFolderId();
    String name=commandArgument.getNewFolder();
    String description=StringPool.BLANK;
    ServiceContext serviceContext=new ServiceContext();
    serviceContext.setAddGroupPermissions(true);
    serviceContext.setAddGuestPermissions(true);
    serviceContext.setPlid(commandArgument.getPlid());
    serviceContext.setScopeGroupId(group.getGroupId());
    IGFolderServiceUtil.addFolder(parentFolderId,name,description,serviceContext);
  }
 catch (  Exception e) {
    throw new FCKException(e);
  }
  return "0";
}
