{
  try {
    Group group=arg.getCurrentGroup();
    IGFolder folder=_getFolder(group.getGroupId(),arg.getCurrentFolder());
    long folderId=folder.getFolderId();
    String name=fileName;
    String description=StringPool.BLANK;
    String contentType=extension.toLowerCase();
    String[] tagsEntries=null;
    boolean addCommunityPermissions=true;
    boolean addGuestPermissions=true;
    IGImageServiceUtil.addImage(folderId,name,description,file,contentType,tagsEntries,addCommunityPermissions,addGuestPermissions);
  }
 catch (  Exception e) {
    throw new FCKException(e);
  }
  return "0";
}
