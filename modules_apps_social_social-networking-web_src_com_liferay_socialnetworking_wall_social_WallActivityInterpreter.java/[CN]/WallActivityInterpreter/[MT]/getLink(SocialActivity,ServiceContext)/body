{
  User receiverUser=UserLocalServiceUtil.getUserById(activity.getReceiverUserId());
  String wallLayoutFriendlyURL=WallUtil.getWallLayoutFriendlyURL(receiverUser);
  return WallUtil.getWallLink(receiverUser,wallLayoutFriendlyURL,String.valueOf(activity.getClassPK()),serviceContext.getThemeDisplay());
}
