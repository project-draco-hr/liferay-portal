{
  DDMForm ddmForm=ConfigurationConverter.convert(objectClassDefinition,configuration,locale);
  String serializedDDMFormValues=ParamUtil.getString(portletRequest,"configFields");
  try {
    return DDMFormValuesJSONDeserializerUtil.deserialize(ddmForm,serializedDDMFormValues);
  }
 catch (  PortalException pe) {
    return ReflectionUtil.throwException(pe);
  }
}
