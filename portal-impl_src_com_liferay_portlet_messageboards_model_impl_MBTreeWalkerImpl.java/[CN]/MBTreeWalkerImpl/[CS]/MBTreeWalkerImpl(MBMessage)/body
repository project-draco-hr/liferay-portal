{
  _messageIdsMap=CollectionFactory.getHashMap();
  try {
    _messages=MBMessageLocalServiceUtil.getThreadMessages(message.getThreadId());
    for (int i=0; i < _messages.size(); i++) {
      MBMessage curMessage=(MBMessage)_messages.get(i);
      Long parentMessageIdObj=new Long(curMessage.getParentMessageId());
      if (!curMessage.isRoot() && !_messageIdsMap.containsKey(parentMessageIdObj)) {
        _messageIdsMap.put(parentMessageIdObj,new Integer(i));
      }
    }
  }
 catch (  Exception e) {
    _log.error(e);
  }
}
