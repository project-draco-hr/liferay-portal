{
  if (Validator.isNotNull(text)) {
    DateFormat dateFormat=DateFormatFactoryUtil.getSimpleDateFormat(Time.RFC822_FORMAT,Locale.US);
    try {
      return dateFormat.parse(text);
    }
 catch (    Exception e) {
      if (_log.isWarnEnabled()) {
        _log.warn("Unable to parse date " + text);
      }
    }
  }
  return new Date();
}
