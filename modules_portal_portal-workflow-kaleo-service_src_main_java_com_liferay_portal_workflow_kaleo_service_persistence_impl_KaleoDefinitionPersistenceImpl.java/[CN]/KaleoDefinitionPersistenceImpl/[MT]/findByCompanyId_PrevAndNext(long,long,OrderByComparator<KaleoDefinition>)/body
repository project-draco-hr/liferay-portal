{
  KaleoDefinition kaleoDefinition=findByPrimaryKey(kaleoDefinitionId);
  Session session=null;
  try {
    session=openSession();
    KaleoDefinition[] array=new KaleoDefinitionImpl[3];
    array[0]=getByCompanyId_PrevAndNext(session,kaleoDefinition,companyId,orderByComparator,true);
    array[1]=kaleoDefinition;
    array[2]=getByCompanyId_PrevAndNext(session,kaleoDefinition,companyId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
