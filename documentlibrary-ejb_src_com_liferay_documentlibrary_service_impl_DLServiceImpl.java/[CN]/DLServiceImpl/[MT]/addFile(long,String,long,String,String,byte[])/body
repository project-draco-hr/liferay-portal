{
  if ((FILE_MAX_SIZE > 0) && ((byteArray == null) || (byteArray.length > FILE_MAX_SIZE))) {
    throw new FileSizeException(fileName);
  }
  InputStream is=new ByteArrayInputStream(byteArray);
  try {
    DLLocalServiceUtil.addFile(companyId,portletId,groupId,repositoryId,fileName,is);
  }
  finally {
    try {
      is.close();
    }
 catch (    IOException ioe) {
      _log.error(ioe);
    }
  }
}
