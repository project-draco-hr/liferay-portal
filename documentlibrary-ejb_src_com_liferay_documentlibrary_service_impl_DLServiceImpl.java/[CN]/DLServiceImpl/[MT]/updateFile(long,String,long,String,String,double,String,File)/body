{
  if ((FILE_MAX_SIZE > 0) && ((file == null) || (file.length() > FILE_MAX_SIZE))) {
    throw new FileSizeException(fileName);
  }
  InputStream is=null;
  try {
    is=new BufferedInputStream(new FileInputStream(file));
    DLLocalServiceUtil.updateFile(companyId,portletId,groupId,repositoryId,fileName,versionNumber,sourceFileName,is);
  }
 catch (  FileNotFoundException fnfe) {
    throw new NoSuchFileException(fileName);
  }
 finally {
    try {
      if (is != null) {
        is.close();
      }
    }
 catch (    IOException ioe) {
      _log.error(ioe);
    }
  }
}
