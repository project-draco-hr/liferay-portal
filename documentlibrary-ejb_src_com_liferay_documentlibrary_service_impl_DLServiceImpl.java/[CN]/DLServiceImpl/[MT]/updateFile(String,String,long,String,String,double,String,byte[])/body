{
  if ((FILE_MAX_SIZE > 0) && ((byteArray == null) || (byteArray.length > FILE_MAX_SIZE))) {
    throw new FileSizeException(fileName);
  }
  InputStream is=new BufferedInputStream(new ByteArrayInputStream(byteArray));
  DLLocalServiceUtil.updateFile(companyId,portletId,groupId,repositoryId,fileName,versionNumber,sourceFileName,is);
}
