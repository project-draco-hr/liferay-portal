{
  long containerModelId=addContainerModel(contextUser.getUserId(),PARENT_CONTAINER_MODEL_ID_DEFAULT);
  long baseModelId=addBaseModel(contextUser.getUserId(),containerModelId);
  addSubscription(contextUser.getUserId(),containerModelId);
  updateBaseModel(contextUser.getUserId(),baseModelId);
  if (isSubscriptionForAuthorEnabled()) {
    Assert.assertEquals(1,MailServiceTestUtil.getInboxSize());
  }
 else {
    Assert.assertEquals(0,MailServiceTestUtil.getInboxSize());
  }
}
