{
  if (isSupportsAlterColumnType()) {
    runSQL("alter_column_type Layout friendlyURL VARCHAR(255) null");
  }
 else {
    UpgradeTable upgradeTable=UpgradeTableFactoryUtil.getUpgradeTable(LayoutTable.TABLE_NAME,LayoutTable.TABLE_COLUMNS);
