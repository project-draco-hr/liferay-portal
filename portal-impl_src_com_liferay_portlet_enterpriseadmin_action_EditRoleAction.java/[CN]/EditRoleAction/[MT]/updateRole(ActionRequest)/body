{
  long roleId=ParamUtil.getLong(actionRequest,"roleId");
  String name=ParamUtil.getString(actionRequest,"name");
  Map<Locale,String> localeTitlesMap=LocalizationUtil.getLocalizationMap(actionRequest,"title");
  String description=ParamUtil.getString(actionRequest,"description");
  int type=ParamUtil.getInteger(actionRequest,"type",RoleConstants.TYPE_REGULAR);
  String subtype=ParamUtil.getString(actionRequest,"subtype");
  if (roleId <= 0) {
    RoleServiceUtil.addRole(name,description,type);
  }
 else {
    RoleServiceUtil.updateRole(roleId,name,localeTitlesMap,description,subtype);
  }
}
