{
  try {
    if (_wikiPortletInstanceSettings == null) {
      String portletId=getPortletId();
      WikiWebSettingsProvider wikiWebSettingsProvider=WikiWebSettingsProvider.getWikiWebSettingsProvider();
      SettingsFactory settingsFactory=wikiWebSettingsProvider.getSettingsFactory();
      if (portletId.equals(PortletKeys.PORTLET_CONFIGURATION)) {
        _wikiPortletInstanceSettings=settingsFactory.getSettings(WikiPortletInstanceSettings.class,new ParameterMapSettingsLocator(getRequest().getParameterMap(),new PortletInstanceSettingsLocator(getLayout(),getResourcePortletId())));
      }
 else {
        _wikiPortletInstanceSettings=settingsFactory.getSettings(WikiPortletInstanceSettings.class,new PortletInstanceSettingsLocator(getLayout(),getPortletId()));
      }
    }
    return _wikiPortletInstanceSettings;
  }
 catch (  PortalException pe) {
    throw new SystemException(pe);
  }
}
