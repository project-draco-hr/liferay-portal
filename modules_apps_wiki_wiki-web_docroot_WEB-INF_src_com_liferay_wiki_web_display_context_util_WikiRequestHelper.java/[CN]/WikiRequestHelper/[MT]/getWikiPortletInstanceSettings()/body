{
  try {
    if (_wikiPortletInstanceConfiguration == null) {
      String portletResource=getPortletResource();
      if (Validator.isNotNull(portletResource)) {
        _wikiPortletInstanceConfiguration=ModuleConfigurationFactoryUtil.getConfiguration(WikiPortletInstanceOverriddenConfiguration.class,new ParameterMapSettingsLocator(getRequest().getParameterMap(),new PortletInstanceSettingsLocator(getLayout(),getResourcePortletId())));
      }
 else {
        _wikiPortletInstanceConfiguration=ModuleConfigurationFactoryUtil.getConfiguration(WikiPortletInstanceOverriddenConfiguration.class,new PortletInstanceSettingsLocator(getLayout(),getPortletId()));
      }
    }
    return _wikiPortletInstanceConfiguration;
  }
 catch (  PortalException pe) {
    throw new SystemException(pe);
  }
}
