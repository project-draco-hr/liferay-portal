{
  _destination.send(message);
synchronized (this) {
    try {
      wait(_timeout);
    }
 catch (    InterruptedException ie) {
      throw new MessageBusException("Unable to receive response for request",ie);
    }
    if (_responseValue == null) {
      throw new MessageBusException("No reply received for request: " + message);
    }
    return _responseValue;
  }
}
