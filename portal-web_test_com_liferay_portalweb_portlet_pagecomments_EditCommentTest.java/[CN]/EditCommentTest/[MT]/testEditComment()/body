{
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Page Comments Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.click(RuntimeVariables.replace("link=Page Comments Test Page"));
  selenium.waitForPageToLoad("30000");
  selenium.click("link=Edit");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("_107_editBody1")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.typeKeys("_107_editBody1",RuntimeVariables.replace("This is a edited test page comment"));
  selenium.type("_107_editBody1",RuntimeVariables.replace("This is a edited test page comment!"));
  selenium.click(RuntimeVariables.replace("_107_updateReplyButton1"));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isTextPresent("Your request processed successfully."));
  assertEquals(RuntimeVariables.replace("This is a edited test page comment!"),selenium.getText("//td[2]/div[1]"));
}
