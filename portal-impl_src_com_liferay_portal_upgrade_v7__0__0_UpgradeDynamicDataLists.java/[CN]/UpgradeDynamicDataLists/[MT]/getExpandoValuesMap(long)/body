{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select ExpandoColumn.name, ExpandoValue.data_ from " + "ExpandoValue inner join ExpandoColumn on " + "ExpandoColumn.columnId = ExpandoValue.columnId "+ "where rowId_ = ?");
    ps.setLong(1,expandoRowId);
    rs=ps.executeQuery();
    Map<String,String> fieldsMap=new HashMap<String,String>();
    while (rs.next()) {
      String name=rs.getString("name");
      String data_=rs.getString("data_");
      fieldsMap.put(name,data_);
    }
    return fieldsMap;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
