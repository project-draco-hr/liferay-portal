{
  KaleoNode kaleoNode=findByPrimaryKey(kaleoNodeId);
  Session session=null;
  try {
    session=openSession();
    KaleoNode[] array=new KaleoNodeImpl[3];
    array[0]=getByC_KDI_PrevAndNext(session,kaleoNode,companyId,kaleoDefinitionId,orderByComparator,true);
    array[1]=kaleoNode;
    array[2]=getByC_KDI_PrevAndNext(session,kaleoNode,companyId,kaleoDefinitionId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
