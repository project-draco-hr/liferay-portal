{
  if (_orderByCol != null) {
    return _orderByCol;
  }
  _orderByCol=ParamUtil.getString(_request,"orderByCol");
  if (Validator.isNull(_orderByCol)) {
    _orderByCol=_portalPreferences.getValue(WorkflowDefinitionLinkPortletKeys.WORKFLOW_DEFINITION_LINK_CONTROL_PANEL,"order-by-col","resource");
  }
 else {
    boolean saveOrderBy=ParamUtil.getBoolean(_request,"saveOrderBy");
    if (saveOrderBy) {
      _portalPreferences.setValue(WorkflowDefinitionLinkPortletKeys.WORKFLOW_DEFINITION_LINK_CONTROL_PANEL,"order-by-col",_orderByCol);
    }
  }
  return _orderByCol;
}
