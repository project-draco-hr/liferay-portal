{
  int workflowStages=ParamUtil.getInteger(portletRequest,"workflowStages");
  String workflowRoleNames;
  if (workflowStages == 0) {
    workflowRoleNames=StringPool.BLANK;
  }
 else {
    StringBundler sb=new StringBundler(workflowStages * 2 - 1);
    for (int i=1; i <= (workflowStages - 1); i++) {
      if (i > 1) {
        sb.append(",");
      }
      String workflowRoleName=ParamUtil.getString(portletRequest,"workflowRoleName_" + i);
      sb.append(workflowRoleName);
    }
    String workflowRoleName=ParamUtil.getString(portletRequest,"workflowRoleName_Last");
    sb.append(",");
    sb.append(workflowRoleName);
    workflowRoleNames=sb.toString();
  }
  return workflowRoleNames;
}
