{
  long userId=PortalUtil.getUserId(portletRequest);
  Map<String,String[]> parameterMap=getStagingParameters(portletRequest);
  DateRange dateRange=ExportImportHelperUtil.getDateRange(portletRequest,sourceGroupId,false,sourcePlid,portletId);
  LayoutLocalServiceUtil.publishPortletInBackground(userId,portletId,sourcePlid,targetPlid,sourceGroupId,targetGroupId,portletId,parameterMap,dateRange.getStartDate(),dateRange.getEndDate());
}
