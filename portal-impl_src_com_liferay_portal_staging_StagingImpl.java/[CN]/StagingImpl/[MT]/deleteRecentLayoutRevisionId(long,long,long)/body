{
  User user=UserLocalServiceUtil.fetchUser(userId);
  if (user != null) {
    deleteRecentLayoutRevisionId(user,layoutSetBranchId,plid);
  }
 else {
    PortalPreferences portalPreferences=PortletPreferencesFactoryUtil.getPortalPreferences(userId,false);
    deleteRecentLayoutRevisionId(portalPreferences,layoutSetBranchId,plid);
  }
}
