{
  parameterMap.put(PortletDataHandlerKeys.PERFORM_DIRECT_BINARY_IMPORT,new String[]{Boolean.TRUE.toString()});
  Map<String,Serializable> taskContextMap=BackgroundTaskContextMapFactory.buildTaskContextMap(userId,sourceGroupId,privateLayout,layoutIds,parameterMap,ActionKeys.PUBLISH_STAGING,startDate,endDate,StringPool.BLANK);
  taskContextMap.put("sourceGroupId",sourceGroupId);
  taskContextMap.put("targetGroupId",targetGroupId);
  BackgroundTaskLocalServiceUtil.addBackgroundTask(userId,sourceGroupId,StringPool.BLANK,null,LayoutStagingBackgroundTaskExecutor.class,taskContextMap,new ServiceContext());
}
