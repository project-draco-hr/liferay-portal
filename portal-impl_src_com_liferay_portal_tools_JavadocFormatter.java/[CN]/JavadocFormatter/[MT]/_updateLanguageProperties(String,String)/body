{
  StringBundler sb=new StringBundler();
  boolean begin=false;
  boolean firstLine=true;
  String linePrefix=key + "=";
  String line=null;
  try (UnsyncBufferedReader unsyncBufferedReader=new UnsyncBufferedReader(new FileReader(_languagePropertiesFile))){
    while ((line=unsyncBufferedReader.readLine()) != null) {
      if (line.equals(StringPool.BLANK)) {
        begin=!begin;
      }
      if (firstLine) {
        firstLine=false;
      }
 else {
        sb.append(StringPool.NEW_LINE);
      }
      if (line.startsWith(linePrefix)) {
        sb.append(linePrefix);
        sb.append(value);
      }
 else {
        sb.append(line);
      }
    }
  }
   try (Writer writer=new OutputStreamWriter(new FileOutputStream(_languagePropertiesFile,false),StringPool.UTF8)){
    writer.write(sb.toString());
  }
   System.out.println("Updating " + _languagePropertiesFile + " key "+ key);
}
