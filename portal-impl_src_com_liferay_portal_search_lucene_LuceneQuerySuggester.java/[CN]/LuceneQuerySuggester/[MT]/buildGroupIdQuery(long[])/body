{
  BooleanQuery booleanQuery=new BooleanQuery();
  addTermQuery(booleanQuery,Field.GROUP_ID,String.valueOf(0),null,BooleanClause.Occur.SHOULD);
  if ((groupIds != null) && (groupIds.length > 0)) {
    for (    long groupId : groupIds) {
      addTermQuery(booleanQuery,Field.GROUP_ID,String.valueOf(groupId),null,BooleanClause.Occur.SHOULD);
    }
  }
  return booleanQuery;
}
