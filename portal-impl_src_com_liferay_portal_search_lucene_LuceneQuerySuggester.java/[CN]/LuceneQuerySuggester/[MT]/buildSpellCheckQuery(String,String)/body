{
  BooleanQuery suggestWordQuery=new BooleanQuery();
  BooleanQuery nGramQuery=buildNGramQuery(word);
  BooleanClause booleanNGramQueryClause=new BooleanClause(nGramQuery,BooleanClause.Occur.MUST);
  suggestWordQuery.add(booleanNGramQueryClause);
  addTermQuery(suggestWordQuery,Field.LANGUAGE_ID,languageId,null,BooleanClause.Occur.MUST);
  addTermQuery(suggestWordQuery,Field.PORTLET_ID,PortletKeys.SEARCH,null,BooleanClause.Occur.MUST);
  return suggestWordQuery;
}
