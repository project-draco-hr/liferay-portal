{
  if (!_threadPoolExecutor.isShutdown() && !_threadPoolExecutor.isTerminating()) {
    if (!force) {
      _threadPoolExecutor.shutdown();
    }
 else {
      List<Runnable> pendingTasks=_threadPoolExecutor.shutdownNow();
      if (_log.isInfoEnabled()) {
        _log.info("The following " + pendingTasks.size() + " tasks "+ "were not executed due to shutown: "+ pendingTasks);
      }
    }
  }
}
