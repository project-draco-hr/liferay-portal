{
  if (workflowAction == WorkflowConstants.ACTION_SAVE_DRAFT) {
    majorVersion=false;
  }
  int[] versionParts=StringUtil.split(version,StringPool.PERIOD,0);
  if (majorVersion) {
    versionParts[0]++;
    versionParts[1]=0;
  }
 else {
    versionParts[1]++;
  }
  return versionParts[0] + StringPool.PERIOD + versionParts[1];
}
