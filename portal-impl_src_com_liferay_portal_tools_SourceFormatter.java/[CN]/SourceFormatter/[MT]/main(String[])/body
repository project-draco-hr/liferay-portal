{
  try {
    _sourceFormatterHelper=new SourceFormatterHelper(false);
    _sourceFormatterHelper.init();
    _readExclusions();
    final boolean fast=(args.length == 1 && args[0].equals("fast"));
    if (fast) {
      System.out.println("Skipping Java test files");
    }
    Thread thread1=new Thread(){
      public void run(){
        long now=System.currentTimeMillis();
        try {
          _checkPersistenceTestSuite();
          _formatJSP();
          _formatAntXML();
          _formatFriendlyURLRoutesXML();
          _formatSH();
          _formatWebXML();
        }
 catch (        Exception e) {
          e.printStackTrace();
        }
        long time=(System.currentTimeMillis() - now) / 1000;
        System.out.println("T1 completed in " + time + "s");
      }
    }
;
    Thread thread2=new Thread(){
      public void run(){
        long now=System.currentTimeMillis();
        try {
          _formatJava(fast);
        }
 catch (        Exception e) {
          e.printStackTrace();
        }
        long time=(System.currentTimeMillis() - now) / 1000;
        System.out.println("T2 completed in " + time + "s");
      }
    }
;
    thread1.start();
    thread2.start();
    thread1.join();
    thread2.join();
    _sourceFormatterHelper.close();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}
