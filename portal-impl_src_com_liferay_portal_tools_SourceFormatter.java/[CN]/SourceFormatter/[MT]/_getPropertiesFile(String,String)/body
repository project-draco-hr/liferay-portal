{
  File basedirFile=new File(basedir);
  String basedirAbsolutePath=StringUtil.replace(basedirFile.getAbsolutePath(),new String[]{".",":","/","\\"},new String[]{"_","_","_","_"});
  String propertiesFileName=System.getProperty("java.io.tmpdir") + "/SourceFormatter." + basedirAbsolutePath+ ext;
  return new File(propertiesFileName);
}
