{
  TaskContainer taskContainer=project.getTasks();
  taskContainer.withType(BuildCSSTask.class,new Action<BuildCSSTask>(){
    @Override public void execute(    BuildCSSTask buildCSSTask){
      configureTaskBuildCSSClasspath(buildCSSTask,cssBuilderConfiguration);
      configureTaskBuildCSSDependsOn(buildCSSTask,expandPortalCommonCSSTask);
      configureTaskBuildCSSPortalCommonDir(buildCSSTask,expandPortalCommonCSSTask);
    }
  }
);
}
