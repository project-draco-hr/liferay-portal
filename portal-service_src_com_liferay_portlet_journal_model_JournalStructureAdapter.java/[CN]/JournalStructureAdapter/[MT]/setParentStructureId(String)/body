{
  if (parentStructureId == null) {
    _ddmStructure.setParentStructureId(0);
  }
  try {
    DDMStructure parentDDMStructure=DDMStructureLocalServiceUtil.getStructure(getGroupId(),PortalUtil.getClassNameId(JournalArticle.class.getName()),parentStructureId);
    _ddmStructure.setParentStructureId(parentDDMStructure.getStructureId());
  }
 catch (  Exception e) {
    _log.error(e);
  }
}
