{
  if (Validator.isNotNull(defaultValue)) {
    return defaultValue;
  }
 else {
    try {
      User user=UserLocalServiceUtil.getUserById(userId);
      return BeanPropertiesUtil.getString(user,param,defaultValue);
    }
 catch (    PortalException pe) {
      return StringPool.BLANK;
    }
  }
}
