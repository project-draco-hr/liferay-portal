{
  PortletPreferences portletPreferences=PortletPreferencesFactoryUtil.getStrictPortletSetup(layout,getServiceName());
  LocalizationUtil.setPreferencesValue(portletPreferences,bodyPreferenceName,LocaleUtil.toLanguageId(LocaleUtil.GERMANY),GERMAN_BODY);
  LocalizationUtil.setPreferencesValue(portletPreferences,bodyPreferenceName,LocaleUtil.toLanguageId(LocaleUtil.SPAIN),SPANISH_BODY);
  PortletPreferencesLocalServiceUtil.updatePreferences(group.getGroupId(),PortletKeys.PREFS_OWNER_TYPE_GROUP,PortletKeys.PREFS_PLID_SHARED,getServiceName(),portletPreferences);
}
