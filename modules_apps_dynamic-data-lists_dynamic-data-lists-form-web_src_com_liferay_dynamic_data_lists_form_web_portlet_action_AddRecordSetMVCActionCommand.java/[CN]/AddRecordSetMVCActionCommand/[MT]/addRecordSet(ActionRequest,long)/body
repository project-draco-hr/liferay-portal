{
  ThemeDisplay themeDisplay=(ThemeDisplay)actionRequest.getAttribute(WebKeys.THEME_DISPLAY);
  long groupId=ParamUtil.getLong(actionRequest,"groupId");
  String recordSetKey=ParamUtil.getString(actionRequest,"recordSetKey");
  String name=ParamUtil.getString(actionRequest,"name");
  String description=ParamUtil.getString(actionRequest,"description");
  int scope=ParamUtil.getInteger(actionRequest,"scope");
  ServiceContext serviceContext=ServiceContextFactory.getInstance(DDLRecordSet.class.getName(),actionRequest);
  _ddlRecordSetService.addRecordSet(groupId,ddmStructureId,recordSetKey,getLocalizedMap(themeDisplay.getLocale(),name),getLocalizedMap(themeDisplay.getLocale(),description),DDLRecordSetConstants.MIN_DISPLAY_ROWS_DEFAULT,scope,serviceContext);
}
