{
  Group group=groupPersistence.findByPrimaryKey(groupId);
  List<Permission> permissions=permissionFinder.findByG_R(groupId,resourceId);
  for (  Permission permission : permissions) {
    groupPersistence.removePermission(groupId,permission);
  }
  permissions=getPermissions(group.getCompanyId(),actionIds,resourceId);
  groupPersistence.addPermissions(groupId,permissions);
  PermissionCacheUtil.clearCache();
}
