{
  Group group=GroupUtil.findByPrimaryKey(groupId);
  Iterator itr=permissionFinder.findByG_R(groupId,resourceId).iterator();
  while (itr.hasNext()) {
    Permission permission=(Permission)itr.next();
    GroupUtil.removePermission(groupId,permission);
  }
  List permissions=getPermissions(group.getCompanyId(),actionIds,resourceId);
  GroupUtil.addPermissions(groupId,permissions);
  PermissionCacheUtil.clearCache();
}
