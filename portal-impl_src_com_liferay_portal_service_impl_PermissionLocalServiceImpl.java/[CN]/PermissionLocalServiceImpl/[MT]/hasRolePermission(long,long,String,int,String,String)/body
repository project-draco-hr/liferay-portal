{
  ResourceCode resourceCode=resourceCodeLocalService.getResourceCode(companyId,name,scope);
  Resource resource=resourcePersistence.fetchByC_P(resourceCode.getCodeId(),primKey);
  if (resource == null) {
    return false;
  }
  Permission permission=permissionPersistence.fetchByA_R(actionId,resource.getResourceId());
  if (permission == null) {
    return false;
  }
  return rolePersistence.containsPermission(roleId,permission.getPermissionId());
}
