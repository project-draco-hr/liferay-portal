{
  Organization organization=OrganizationUtil.findByPrimaryKey(organizationId);
  long orgGroupId=organization.getGroup().getGroupId();
  Iterator itr=PermissionUtil.findByResourceId(resourceId).iterator();
  while (itr.hasNext()) {
    Permission permission=(Permission)itr.next();
    GroupUtil.removePermission(orgGroupId,permission);
  }
  itr=getPermissions(organization.getCompanyId(),actionIds,resourceId).iterator();
  orgGroupPermissionFinder.removeByO_G_R(organizationId,groupId,resourceId);
  while (itr.hasNext()) {
    Permission permission=(Permission)itr.next();
    OrgGroupPermissionPK pk=new OrgGroupPermissionPK(organizationId,groupId,permission.getPermissionId());
    OrgGroupPermission orgGroupPermission=OrgGroupPermissionUtil.create(pk);
    OrgGroupPermissionUtil.update(orgGroupPermission);
  }
  PermissionCacheUtil.clearCache();
}
