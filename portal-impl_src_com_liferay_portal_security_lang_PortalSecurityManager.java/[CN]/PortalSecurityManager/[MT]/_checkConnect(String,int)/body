{
  if (port == -1) {
    if (_log.isDebugEnabled()) {
      _log.debug("Always allow resolving of host " + host);
    }
    return;
  }
  PACLPolicy paclPolicy=getPACLPolicy(_log.isDebugEnabled());
  if (paclPolicy != null) {
    if (!paclPolicy.hasSocketConnect(host,port)) {
      throw new SecurityException("Attempted to connect to host " + host + " on port "+ port);
    }
  }
}
