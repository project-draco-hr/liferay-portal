{
  PACLPolicy paclPolicy=getPACLPolicy(_logCheckListen.isDebugEnabled());
  if (_logCheckListen.isDebugEnabled()) {
    _logCheckListen.debug("Using PACL policy " + paclPolicy + " to check permissions to listen on port "+ port);
  }
  if (paclPolicy != null) {
    if (!paclPolicy.hasSocketListenPermission(port)) {
      throw new SecurityException("Attempted to listen on port " + port);
    }
  }
  super.checkListen(port);
}
