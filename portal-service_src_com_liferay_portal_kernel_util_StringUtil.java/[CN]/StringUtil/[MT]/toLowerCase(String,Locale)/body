{
  StringBuilder sb=null;
  for (int i=0; i < s.length(); i++) {
    char c=s.charAt(i);
    if (c > 255) {
      if (locale == null) {
        locale=Locale.getDefault();
      }
      return s.toLowerCase(locale);
    }
    if ((c >= 'A') && (c <= 'Z')) {
      if (sb == null) {
        sb=new StringBuilder(s);
      }
      sb.setCharAt(i,(char)(c + 32));
    }
  }
  if (sb == null) {
    return s;
  }
  return sb.toString();
}
