{
  if (array == null) {
    return null;
  }
  if (array.length == 0) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(2 * array.length - 1);
  for (int i=0; i < array.length; i++) {
    sb.append(String.valueOf(array[i]).trim());
    if ((i + 1) != array.length) {
      sb.append(delimiter);
    }
  }
  return sb.toString();
}
