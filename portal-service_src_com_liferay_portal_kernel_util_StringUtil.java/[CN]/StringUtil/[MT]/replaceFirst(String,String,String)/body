{
  if ((s == null) || (oldSub == null) || (newSub == null)) {
    return null;
  }
  if (oldSub.equals(newSub)) {
    return s;
  }
  int y=s.indexOf(oldSub);
  if (y >= 0) {
    StringBundler sb=new StringBundler(3);
    int length=oldSub.length();
    sb.append(s.substring(0,y));
    sb.append(newSub);
    sb.append(s.substring(y + length));
    return sb.toString();
  }
 else {
    return s;
  }
}
