{
  DDMStructure ddmStructure=updateDDMStructure(actionRequest);
  DDLRecordSet recordSet=updateRecordSet(actionRequest,ddmStructure.getStructureId());
  DDMFormValues settingsDDMFormValues=getSettingsDDMFormValues(actionRequest);
  updateRecordSetSettings(actionRequest,recordSet,settingsDDMFormValues);
}
