{
  String sql="SELECT content.size FROM Content content WHERE " + "content.companyId = ? AND content.repositoryId = ? AND " + "content.path = ? ";
  StringBundler sb=new StringBundler(3);
  sb.append(sql);
  appendOrderByComparator(sb,"content.",new ContentVersionComparator());
  sql=sb.toString();
  Session session=null;
  try {
    session=openSession();
    Query q=session.createQuery(sql);
    q.setFirstResult(0);
    q.setMaxResults(1);
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(companyId);
    qPos.add(repositoryId);
    qPos.add(path);
    long size=(Long)q.uniqueResult();
    return size;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
