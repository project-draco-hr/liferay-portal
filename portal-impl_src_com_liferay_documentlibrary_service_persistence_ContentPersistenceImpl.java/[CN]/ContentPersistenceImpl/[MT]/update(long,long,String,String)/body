{
  String sql="UPDATE Content SET path_ = ? WHERE companyId = ? AND " + "repositoryId = ? AND path_ = ?";
  Session session=null;
  try {
    session=openSession();
    Query q=session.createSQLQuery(sql);
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(newPath);
    qPos.add(companyId);
    qPos.add(repositoryId);
    qPos.add(path);
    q.executeUpdate();
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
