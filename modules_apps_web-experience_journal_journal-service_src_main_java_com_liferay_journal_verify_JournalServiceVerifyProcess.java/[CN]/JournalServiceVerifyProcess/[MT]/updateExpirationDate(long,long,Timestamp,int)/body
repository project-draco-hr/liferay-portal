{
  try (PreparedStatement ps=connection.prepareStatement("update JournalArticle set expirationDate = ? where " + "groupId = ? and articleId = ? and status = ?")){
    ps.setTimestamp(1,expirationDate);
    ps.setLong(2,groupId);
    ps.setLong(3,articleId);
    ps.setInt(4,status);
    ps.executeUpdate();
  }
 }
