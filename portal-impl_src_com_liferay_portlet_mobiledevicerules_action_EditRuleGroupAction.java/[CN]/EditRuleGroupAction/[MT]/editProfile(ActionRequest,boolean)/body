{
  long groupId=ParamUtil.getLong(actionRequest,MDRPortletConstants.GROUP_ID);
  Map<Locale,String> nameMap=LocalizationUtil.getLocalizationMap(actionRequest,MDRPortletConstants.NAME);
  Map<Locale,String> descriptionMap=LocalizationUtil.getLocalizationMap(actionRequest,MDRPortletConstants.DESCRIPTION);
  MDRRuleGroup ruleGroup=null;
  ServiceContext serviceContext=ServiceContextFactory.getInstance(actionRequest);
  if (add) {
    ruleGroup=MDRRuleGroupServiceUtil.addRuleGroup(groupId,nameMap,descriptionMap,serviceContext);
  }
 else {
    long ruleGroupId=ParamUtil.getLong(actionRequest,MDRPortletConstants.MDR_RULE_GROUP_ID);
    ruleGroup=MDRRuleGroupServiceUtil.updateRuleGroup(ruleGroupId,nameMap,descriptionMap,serviceContext);
  }
  return ruleGroup;
}
