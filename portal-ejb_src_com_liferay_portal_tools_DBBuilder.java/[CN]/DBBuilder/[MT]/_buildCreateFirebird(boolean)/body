{
  String minimalSuffix=_getMinimalSuffix(minimal);
  File file=new File("../sql/create" + minimalSuffix + "/create"+ minimalSuffix+ "-firebird.sql");
  StringMaker sm=new StringMaker();
  sm.append("create database '" + _databaseName + ".gdb' page_size 8192 user 'sysdba' password 'masterkey';\n");
  sm.append("connect '" + _databaseName + ".gdb' user 'sysdba' password 'masterkey';\n");
  sm.append(_readSQL("../sql/portal" + minimalSuffix + "/portal"+ minimalSuffix+ "-firebird.sql",_FIREBIRD[0],";\n"));
  FileUtil.write(file,sm.toString());
}
