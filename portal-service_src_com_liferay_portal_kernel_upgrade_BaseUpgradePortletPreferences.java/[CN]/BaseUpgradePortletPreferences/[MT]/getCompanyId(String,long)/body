{
  long companyId=0;
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement(query);
    ps.setLong(1,id);
    rs=ps.executeQuery();
    while (rs.next()) {
      companyId=rs.getLong("companyId");
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
  return companyId;
}
