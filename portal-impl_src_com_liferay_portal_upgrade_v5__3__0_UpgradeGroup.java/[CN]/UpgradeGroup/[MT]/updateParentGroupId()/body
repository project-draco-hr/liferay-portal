{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    long classNameId=PortalUtil.getClassNameId(Layout.class.getName());
    ps=con.prepareStatement("select groupId, classPK from Group_ where classNameId = " + classNameId);
    rs=ps.executeQuery();
    while (rs.next()) {
      long groupId=rs.getLong("groupId");
      long classPK=rs.getLong("classPK");
      long layoutGroupId=getLayoutGroupId(classPK);
      runSQL("update Group_ set parentGroupId = " + layoutGroupId + " where groupId = "+ groupId);
    }
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
