{
  long[] deleteStructureIds=null;
  long structureId=ParamUtil.getLong(portletRequest,DDMConstants.CLASS_PK);
  if (structureId > 0) {
    deleteStructureIds=new long[]{structureId};
  }
 else {
    deleteStructureIds=StringUtil.split(ParamUtil.getString(portletRequest,DDMConstants.DELETE_STRUCTURE_IDS),0L);
  }
  for (  long deleteStructureId : deleteStructureIds) {
    DDMStructureServiceUtil.deleteStructure(deleteStructureId);
  }
  String redirect=ParamUtil.getString(portletRequest,DDMConstants.REDIRECT);
  super.setRedirectAttribute(portletRequest,redirect);
}
