{
  if (Validator.isNull(value)) {
    return;
  }
  try {
    QueryParser queryParser=new QueryParser(LuceneHelperUtil.getVersion(),field,_analyzer);
    queryParser.setAllowLeadingWildcard(true);
    queryParser.setLowercaseExpandedTerms(false);
    org.apache.lucene.search.Query query=queryParser.parse(value);
    translateQuery(booleanQuery,searchContext,query,org.apache.lucene.search.BooleanClause.Occur.SHOULD);
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
}
