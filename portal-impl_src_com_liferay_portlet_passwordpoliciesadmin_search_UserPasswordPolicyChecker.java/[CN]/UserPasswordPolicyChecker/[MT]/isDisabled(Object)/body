{
  User user=(User)obj;
  try {
    PasswordPolicyRel passwordPolicyRel=PasswordPolicyRelLocalServiceUtil.fetchPasswordPolicyRel(User.class.getName(),user.getUserId());
    if ((passwordPolicyRel != null) && (passwordPolicyRel.getPasswordPolicyId() != _passwordPolicy.getPasswordPolicyId())) {
      return true;
    }
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
  return false;
}
