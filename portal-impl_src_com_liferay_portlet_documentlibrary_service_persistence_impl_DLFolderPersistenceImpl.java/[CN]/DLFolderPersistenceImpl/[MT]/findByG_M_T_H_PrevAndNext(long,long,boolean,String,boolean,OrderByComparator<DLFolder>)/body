{
  DLFolder dlFolder=findByPrimaryKey(folderId);
  Session session=null;
  try {
    session=openSession();
    DLFolder[] array=new DLFolderImpl[3];
    array[0]=getByG_M_T_H_PrevAndNext(session,dlFolder,groupId,mountPoint,treePath,hidden,orderByComparator,true);
