{
  selenium.open("/web/guest/home/");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Web Content Display Test Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.clickAt("link=Web Content Display Test Page",RuntimeVariables.replace(""));
  selenium.waitForPageToLoad("30000");
  assertEquals(RuntimeVariables.replace("This is a test wcd web content comment."),selenium.getText("//td[2]/div[1]"));
  selenium.clickAt("link=Edit",RuntimeVariables.replace(""));
  selenium.type("//tr[2]/td/div/textarea",RuntimeVariables.replace("This is a test wcd web content comment. Edited."));
  selenium.keyPress("//tr[2]/td/div/textarea",RuntimeVariables.replace("\\48"));
  selenium.keyPress("//tr[2]/td/div/textarea",RuntimeVariables.replace("\\8"));
  selenium.click(RuntimeVariables.replace("//tr[2]/td/input[1]"));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isTextPresent("Your request processed successfully."));
  assertEquals(RuntimeVariables.replace("This is a test wcd web content comment. Edited."),selenium.getText("//td[2]/div[1]"));
  assertNotEquals(RuntimeVariables.replace("This is a test wcd web content comment."),selenium.getText("//td[2]/div[1]"));
}
