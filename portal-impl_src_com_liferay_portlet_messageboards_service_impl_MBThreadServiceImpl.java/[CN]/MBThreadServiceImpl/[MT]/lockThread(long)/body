{
  MBThread thread=mbThreadPersistence.findByPrimaryKey(threadId);
  MBCategoryPermission.check(getPermissionChecker(),thread.getGroupId(),thread.getCategoryId(),ActionKeys.LOCK_THREAD);
  return LockHelperUtil.lock(getUserId(),MBThread.class.getName(),threadId,String.valueOf(threadId),false,MBThreadModelImpl.LOCK_EXPIRATION_TIME);
}
