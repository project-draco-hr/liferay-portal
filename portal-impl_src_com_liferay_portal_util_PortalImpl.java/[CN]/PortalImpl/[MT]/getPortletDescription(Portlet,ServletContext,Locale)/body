{
  PortletConfig portletConfig=PortletConfigFactoryUtil.create(portlet,servletContext);
  ResourceBundle resourceBundle=portletConfig.getResourceBundle(locale);
  String portletId=portlet.getRootPortletId();
  String portletDescription=ResourceBundleUtil.getString(resourceBundle,JavaConstants.JAVAX_PORTLET_DESCRIPTION.concat(StringPool.PERIOD).concat(portletId));
  if (Validator.isNull(portletDescription)) {
    portletDescription=ResourceBundleUtil.getString(resourceBundle,JavaConstants.JAVAX_PORTLET_DESCRIPTION);
  }
  return portletDescription;
}
