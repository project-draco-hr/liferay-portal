{
  PortletConfig portletConfig=PortletConfigFactoryUtil.create(portlet,servletContext);
  ResourceBundle resourceBundle=portletConfig.getResourceBundle(locale);
  String portletDescription=LanguageUtil.get(resourceBundle,JavaConstants.JAVAX_PORTLET_DESCRIPTION.concat(StringPool.PERIOD).concat(portlet.getRootPortletId()),null);
  if (Validator.isNull(portletDescription)) {
    portletDescription=LanguageUtil.get(resourceBundle,JavaConstants.JAVAX_PORTLET_DESCRIPTION);
  }
  return portletDescription;
}
