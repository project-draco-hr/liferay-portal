{
  Portlet portlet=PortletLocalServiceUtil.getPortletById(group.getCompanyId(),portletDisplay.getId());
  if (portlet.isSystem() || !portlet.isUseDefaultTemplate()) {
    return false;
  }
  if (group.isLayoutPrototype() && layoutTypePortlet.hasPortletId(portletDisplay.getId()) && portletDisplay.isModeView()&& !portletName.equals(PortletKeys.NESTED_PORTLETS)) {
    return true;
  }
  return false;
}
