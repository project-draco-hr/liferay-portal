{
  ThemeDisplay themeDisplay=(ThemeDisplay)portletRequest.getAttribute(WebKeys.THEME_DISPLAY);
  Layout layout=getControlPanelLayout(themeDisplay);
  portletRequest.setAttribute(WebKeys.LAYOUT,layout);
  LiferayPortletURL liferayPortletURL=new PortletURLImpl(portletRequest,portletId,layout.getPlid(),lifecycle);
  try {
    liferayPortletURL.setWindowState(WindowState.MAXIMIZED);
  }
 catch (  WindowStateException wse) {
    _log.error(wse);
  }
  return liferayPortletURL;
}
