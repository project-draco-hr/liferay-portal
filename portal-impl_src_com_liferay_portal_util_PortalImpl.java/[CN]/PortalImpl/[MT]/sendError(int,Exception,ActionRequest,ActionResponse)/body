{
  StringMaker sm=new StringMaker();
  sm.append(PATH_MAIN);
  sm.append("/portal/status?status=");
  sm.append(status);
  sm.append("&exception=");
  sm.append(e.getClass().getName());
  sm.append("&previousURL=");
  sm.append(HttpUtil.encodeURL(PortalUtil.getCurrentURL(req)));
  res.sendRedirect(sm.toString());
}
