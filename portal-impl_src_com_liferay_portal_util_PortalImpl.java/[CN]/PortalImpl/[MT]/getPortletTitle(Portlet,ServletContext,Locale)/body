{
  PortletConfig portletConfig=PortletConfigFactoryUtil.create(portlet,servletContext);
  ResourceBundle resourceBundle=portletConfig.getResourceBundle(locale);
  String portletTitle=LanguageUtil.get(resourceBundle,JavaConstants.JAVAX_PORTLET_TITLE.concat(StringPool.PERIOD).concat(portlet.getRootPortletId()),null);
  if (Validator.isNull(portletTitle)) {
    portletTitle=LanguageUtil.get(resourceBundle,JavaConstants.JAVAX_PORTLET_TITLE);
  }
  return portletTitle;
}
