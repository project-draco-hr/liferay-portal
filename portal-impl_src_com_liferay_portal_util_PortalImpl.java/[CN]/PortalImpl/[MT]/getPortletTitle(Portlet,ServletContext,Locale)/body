{
  PortletConfig portletConfig=PortletConfigFactoryUtil.create(portlet,servletContext);
  ResourceBundle resourceBundle=portletConfig.getResourceBundle(locale);
  String portletTitle=ResourceBundleUtil.getString(resourceBundle,JavaConstants.JAVAX_PORTLET_TITLE.concat(StringPool.PERIOD).concat(portlet.getRootPortletId()));
  if (Validator.isNull(portletTitle)) {
    portletTitle=ResourceBundleUtil.getString(resourceBundle,JavaConstants.JAVAX_PORTLET_TITLE);
  }
  return portletTitle;
}
