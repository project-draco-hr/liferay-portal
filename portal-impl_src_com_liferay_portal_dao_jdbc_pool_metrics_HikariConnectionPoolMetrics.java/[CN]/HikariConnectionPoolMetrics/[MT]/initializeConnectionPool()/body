{
  if (_dataSource.getPoolName() == null) {
    _initializationFailed=true;
    return;
  }
  MBeanServer mBeanServer=ManagementFactory.getPlatformMBeanServer();
  try {
    ObjectName poolName=new ObjectName("com.zaxxer.hikari:type=Pool (" + _dataSource.getPoolName() + ")");
    _connectionPool=JMX.newMXBeanProxy(mBeanServer,poolName,HikariPoolMXBean.class);
  }
 catch (  Exception e) {
    _initializationFailed=true;
    if (_log.isDebugEnabled()) {
      _log.debug(e.getMessage());
    }
  }
  super.initializeConnectionPool();
}
