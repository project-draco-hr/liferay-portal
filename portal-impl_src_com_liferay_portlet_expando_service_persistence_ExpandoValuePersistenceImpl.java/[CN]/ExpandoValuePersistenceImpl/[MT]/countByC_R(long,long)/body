{
  Object[] finderArgs=new Object[]{new Long(columnId),new Long(rowId)};
  Long count=(Long)FinderCacheUtil.getResult(FINDER_PATH_COUNT_BY_C_R,finderArgs,this);
  if (count == null) {
    Session session=null;
    try {
      session=openSession();
      StringBundler query=new StringBundler(6);
      query.append("SELECT COUNT(expandoValue) ");
      query.append("FROM ExpandoValue expandoValue WHERE ");
      query.append("expandoValue.columnId = ?");
      query.append(" AND ");
      query.append("expandoValue.rowId = ?");
      query.append(" ");
      Query q=session.createQuery(query.toString());
      QueryPos qPos=QueryPos.getInstance(q);
      qPos.add(columnId);
      qPos.add(rowId);
      count=(Long)q.uniqueResult();
    }
 catch (    Exception e) {
      throw processException(e);
    }
 finally {
      if (count == null) {
        count=Long.valueOf(0);
      }
      FinderCacheUtil.putResult(FINDER_PATH_COUNT_BY_C_R,finderArgs,count);
      closeSession(session);
    }
  }
  return count.intValue();
}
