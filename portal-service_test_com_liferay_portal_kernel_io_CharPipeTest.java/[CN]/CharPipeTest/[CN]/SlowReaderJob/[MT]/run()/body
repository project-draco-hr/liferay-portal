{
  try {
    for (int i=0; i < 10; i++) {
      _randomWait(100);
      _timeStampsBeforeRead.put(System.currentTimeMillis());
      int result=_reader.read(_buffer);
      if (result == _buffer.length) {
        continue;
      }
 else       if (_close && !_force && (result == -1)) {
        return;
      }
 else {
        _failed=true;
        break;
      }
    }
    if (_close && _force) {
      _failed=true;
    }
  }
 catch (  Exception e) {
    if (!_close) {
      _failed=true;
    }
  }
}
