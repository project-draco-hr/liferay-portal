{
  Session session=null;
  try {
    session=openSession();
    UserGroup userGroup=(UserGroup)session.get(UserGroup.class,userGroupId);
    if (userGroup == null) {
      if (_log.isWarnEnabled()) {
        _log.warn("No UserGroup exists with the primary key " + userGroupId.toString());
        throw new NoSuchUserGroupException("No UserGroup exists with the primary key " + userGroupId.toString());
      }
    }
    return userGroup;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
