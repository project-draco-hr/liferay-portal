{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(userGroup);
    }
 else {
      if (userGroup.isNew()) {
        session.save(userGroup);
      }
    }
    session.flush();
    userGroup.setNew(false);
    return userGroup;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
