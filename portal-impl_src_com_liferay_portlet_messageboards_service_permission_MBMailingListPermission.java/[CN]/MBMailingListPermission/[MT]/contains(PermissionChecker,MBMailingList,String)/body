{
  long categoryId=mailingList.getCategoryId();
  while (categoryId != MBCategoryImpl.DEFAULT_PARENT_CATEGORY_ID) {
    try {
      mailingList=MBMailingListLocalServiceUtil.getMailingListByCategory(categoryId);
      if (permissionChecker.hasPermission(mailingList.getGroupId(),MBMailingList.class.getName(),mailingList.getMailingListId(),actionId)) {
        return true;
      }
    }
 catch (    NoSuchMailingListException e) {
    }
    MBCategory category=MBCategoryLocalServiceUtil.getCategory(categoryId);
    categoryId=category.getParentCategoryId();
    if (actionId.equals(ActionKeys.VIEW)) {
      break;
    }
  }
  return false;
}
