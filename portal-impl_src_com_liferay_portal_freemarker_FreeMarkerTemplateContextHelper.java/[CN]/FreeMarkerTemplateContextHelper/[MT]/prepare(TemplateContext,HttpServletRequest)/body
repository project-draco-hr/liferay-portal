{
  super.prepare(templateContext,request);
  ThemeDisplay themeDisplay=(ThemeDisplay)request.getAttribute(WebKeys.THEME_DISPLAY);
  if (themeDisplay != null) {
    Theme theme=themeDisplay.getTheme();
    String servletContextName=GetterUtil.getString(theme.getServletContextName());
    templateContext.put("fullCssPath",StringPool.SLASH + servletContextName + theme.getFreeMarkerTemplateLoader()+ theme.getCssPath());
    templateContext.put("fullTemplatesPath",StringPool.SLASH + servletContextName + theme.getFreeMarkerTemplateLoader()+ theme.getTemplatesPath());
    templateContext.put("init",StringPool.SLASH + themeDisplay.getPathContext() + TemplateResource.SERVLET_SEPARATOR+ "/html/themes/_unstyled/templates/init.ftl");
  }
  Map<String,Object> ftlVariables=(Map<String,Object>)request.getAttribute(WebKeys.FTL_VARIABLES);
  if (ftlVariables != null) {
    for (    Map.Entry<String,Object> entry : ftlVariables.entrySet()) {
      String key=entry.getKey();
      Object value=entry.getValue();
      if (Validator.isNotNull(key)) {
        templateContext.put(key,value);
      }
    }
  }
}
