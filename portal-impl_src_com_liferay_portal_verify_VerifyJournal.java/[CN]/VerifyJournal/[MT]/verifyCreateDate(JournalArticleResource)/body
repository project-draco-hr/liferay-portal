{
  List<JournalArticle> articles=JournalArticleLocalServiceUtil.getArticles(articleResource.getGroupId(),articleResource.getArticleId(),QueryUtil.ALL_POS,QueryUtil.ALL_POS,new ArticleVersionComparator(true));
  if (articles.size() <= 1) {
    return;
  }
  JournalArticle firstArticle=articles.get(0);
  Date createDate=firstArticle.getCreateDate();
  for (  JournalArticle article : articles) {
    if (!createDate.equals(article.getCreateDate())) {
      article.setCreateDate(createDate);
      JournalArticleLocalServiceUtil.updateJournalArticle(article);
    }
  }
}
