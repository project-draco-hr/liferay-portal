{
  List<JournalArticleResource> articleResources=JournalArticleResourceLocalServiceUtil.getJournalArticleResources(QueryUtil.ALL_POS,QueryUtil.ALL_POS);
  for (  JournalArticleResource articleResource : articleResources) {
    List<JournalArticle> articleVersions=JournalArticleLocalServiceUtil.getArticles(articleResource.getGroupId(),articleResource.getArticleId(),QueryUtil.ALL_POS,QueryUtil.ALL_POS,new ArticleVersionComparator(true));
    if (articleVersions.size() < 2) {
      continue;
    }
    JournalArticle firstArticleVersion=articleVersions.get(0);
    Date createDate=firstArticleVersion.getCreateDate();
    for (    JournalArticle articleVersion : articleVersions) {
      if (!createDate.equals(articleVersion.getCreateDate())) {
        articleVersion.setCreateDate(createDate);
        JournalArticleLocalServiceUtil.updateJournalArticle(articleVersion);
      }
    }
  }
}
