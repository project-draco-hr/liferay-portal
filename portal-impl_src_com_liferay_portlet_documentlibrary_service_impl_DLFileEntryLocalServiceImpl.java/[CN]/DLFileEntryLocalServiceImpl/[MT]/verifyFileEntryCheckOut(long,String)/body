{
  boolean lockVerified=false;
  try {
    Lock lock=lockLocalService.getLock(DLFileEntry.class.getName(),fileEntryId);
    if (lock.getUuid().equals(lockUuid)) {
      lockVerified=true;
    }
  }
 catch (  PortalException pe) {
    if ((pe instanceof ExpiredLockException) || (pe instanceof NoSuchLockException)) {
      DLFileEntry dlFileEntry=dlFileEntryLocalService.getFileEntry(fileEntryId);
      lockVerified=dlFolderService.verifyInheritableLock(dlFileEntry.getFolderId(),lockUuid);
    }
 else {
      throw pe;
    }
  }
  boolean verified=lockVerified && isFileEntryCheckedOut(fileEntryId);
  return verified;
}
