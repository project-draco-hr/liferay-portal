{
  long[] assetCategoryIds=assetCategoryLocalService.getCategoryIds(DLFileEntry.class.getName(),assetClassPk);
  String[] assetTagNames=assetTagLocalService.getTagNames(DLFileEntry.class.getName(),assetClassPk);
  AssetEntry assetEntry=assetEntryLocalService.getEntry(DLFileEntry.class.getName(),assetClassPk);
  List<AssetLink> assetLinks=assetLinkLocalService.getDirectLinks(assetEntry.getEntryId());
  long[] assetLinkIds=StringUtil.split(ListUtil.toString(assetLinks,AssetLink.LINKID_ACCESSOR),0L);
  return updateAsset(userId,dlFileEntry,dlFileVersion,assetCategoryIds,assetTagNames,assetLinkIds);
}
