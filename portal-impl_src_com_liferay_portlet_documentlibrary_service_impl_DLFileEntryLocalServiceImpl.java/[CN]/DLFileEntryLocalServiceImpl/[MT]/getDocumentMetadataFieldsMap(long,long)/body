{
  HashMap<Long,Fields> fieldsMap=new HashMap<Long,Fields>();
  DLDocumentType documentType=dlDocumentTypeLocalService.getDocumentType(documentTypeId);
  List<DDMStructure> ddmStructures=documentType.getDDMStructures();
  for (  DDMStructure ddmStructure : ddmStructures) {
    DLDocumentMetadataSet dlDocumentMetadataSet=dlDocumentMetadataSetLocalService.getDocumentMetadataSet(ddmStructure.getStructureId(),fileVersionId);
    Fields fields=StorageEngineUtil.getFields(dlDocumentMetadataSet.getClassPK());
    fieldsMap.put(ddmStructure.getStructureId(),fields);
  }
  return fieldsMap;
}
