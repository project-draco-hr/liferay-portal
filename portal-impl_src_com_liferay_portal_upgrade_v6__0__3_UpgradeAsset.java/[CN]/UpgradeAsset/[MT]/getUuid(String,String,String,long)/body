{
  String uuid=StringPool.BLANK;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    ps=connection.prepareStatement("select uuid_ from " + tableName + " where "+ columnName1+ " = ? or "+ columnName2+ " = ?");
    ps.setLong(1,classPK);
    ps.setLong(2,classPK);
    rs=ps.executeQuery();
    while (rs.next()) {
      uuid=rs.getString("uuid_");
    }
  }
  finally {
    DataAccess.cleanUp(ps,rs);
  }
  return uuid;
}
