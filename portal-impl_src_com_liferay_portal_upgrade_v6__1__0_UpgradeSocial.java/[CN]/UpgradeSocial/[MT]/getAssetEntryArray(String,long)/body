{
  long classNameId=PortalUtil.getClassNameId(className);
  StringBundler sb=new StringBundler(5);
  sb.append("select groupId, companyId, userId from AssetEntry ");
  sb.append("where classNameId = ");
  sb.append(classNameId);
  sb.append(" and classPK = ");
  sb.append(classPK);
  try (PreparedStatement ps=connection.prepareStatement(sb.toString());ResultSet rs=ps.executeQuery()){
    if (rs.next()) {
      long groupId=rs.getLong("groupId");
      long companyId=rs.getLong("companyId");
      long userId=rs.getLong("userId");
      return new long[]{groupId,companyId,userId,classNameId,classPK};
    }
    return null;
  }
 }
