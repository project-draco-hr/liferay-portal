{
  Session session=null;
  try {
    session=getSessionFactory().openSession();
    try {
      CyrusUserHBM hbm=(CyrusUserHBM)session.load(CyrusUserHBM.class,user.getUserId());
      hbm.setPassword(user.getPassword());
      session.flush();
    }
 catch (    ObjectNotFoundException onfe) {
      CyrusUserHBM hbm=new CyrusUserHBM(user.getUserId(),user.getPassword());
      session.save(hbm);
      session.flush();
    }
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    session.close();
  }
}
