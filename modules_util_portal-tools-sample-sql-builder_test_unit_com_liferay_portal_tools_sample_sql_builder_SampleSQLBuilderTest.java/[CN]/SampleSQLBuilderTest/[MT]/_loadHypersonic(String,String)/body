{
  Connection connection=null;
  Statement statement=null;
  try {
    connection=DriverManager.getConnection("jdbc:hsqldb:mem:testSampleSQLBuilderDB;shutdown=true","sa","");
    HypersonicLoader.loadHypersonic(connection,sqlDir + "/portal/portal-hypersonic.sql");
    HypersonicLoader.loadHypersonic(connection,sqlDir + "/indexes/indexes-hypersonic.sql");
    _loadServiceComponentsSQL(connection);
    HypersonicLoader.loadHypersonic(connection,outputDir + "/sample-hypersonic.sql");
    statement=connection.createStatement();
    statement.execute("SHUTDOWN COMPACT");
  }
  finally {
    DataAccess.cleanUp(connection,statement);
  }
}
