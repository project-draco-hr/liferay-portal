{
  long companyId=_cometSession.getCometRequest().getCompanyId();
  long userId=_cometSession.getCometRequest().getUserId();
  try {
    ChannelHubManagerUtil.unregisterChannelListener(companyId,userId,this);
  }
 catch (  ChannelException e) {
    if (_log.isWarnEnabled()) {
      _log.warn("Error while unregistering channel listener",e);
    }
  }
  PollerCometDelayedTask pollerCometDelayedTask=new PollerCometDelayedTask(_cometSession,_pollerResponseHeader);
  PollerCometDelayedJobUtil.addPollerCometDelayedTask(pollerCometDelayedTask);
}
