{
  try {
    long backgroundTaskId=ParamUtil.getLong(actionRequest,"backgroundTaskId");
    String fileName=ParamUtil.getString(actionRequest,"attachment");
    int status=ParamUtil.getInteger(actionRequest,"status",WorkflowConstants.STATUS_APPROVED);
    HttpServletRequest request=PortalUtil.getHttpServletRequest(actionRequest);
    HttpServletResponse response=PortalUtil.getHttpServletResponse(actionResponse);
    getFile(backgroundTaskId,fileName,status,request,response);
    setForward(actionRequest,ActionConstants.COMMON_NULL);
  }
 catch (  Exception e) {
    PortalUtil.sendError(e,actionRequest,actionResponse);
  }
}
