{
  int hour=0;
  int minute=0;
  int second=0;
  if (dateValue instanceof DateTimeValue) {
    DateTimeValue dateTimeValue=(DateTimeValue)dateValue;
    hour=dateTimeValue.hour();
    minute=dateTimeValue.minute();
    second=dateTimeValue.second();
  }
  return CalendarFactoryUtil.getCalendar(dateValue.year(),dateValue.month() - 1,dateValue.day(),hour,minute,second,0,TimeZone.getTimeZone(StringPool.UTC));
}
