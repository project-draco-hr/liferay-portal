{
  try {
    DDMStructure ddmStructure=DDMStructureServiceUtil.getStructure(classTypeId);
    return new DDMStructureClassType(classTypeId,ddmStructure.getName(locale),LocaleUtil.toLanguageId(locale));
  }
 catch (  NoSuchStructureException e) {
    throw new NoSuchClassTypeException(e);
  }
catch (  PortalException e) {
    throw e;
  }
catch (  SystemException e) {
    throw e;
  }
}
