{
  String tmpDir=SystemProperties.get(SystemProperties.TMP_DIR);
  File file=new File(tmpDir + "/liferay/com/liferay/portal/deploy/dependencies/" + jar);
  if (!file.exists()) {
synchronized (this) {
      String url=PropsUtil.get(PropsUtil.LIBRARY_DOWNLOAD_URL + jar);
      if (_log.isInfoEnabled()) {
        _log.info("Downloading library from " + url);
      }
      byte[] bytes=HttpUtil.URLtoByteArray(url);
      FileUtil.write(file,bytes);
    }
  }
  return FileUtil.getAbsolutePath(file);
}
