{
  if (isEmpty(list)) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(2 * list.length - 1);
  for (int i=0; i < list.length; i++) {
    T bean=list[i];
    V value=accessor.get(bean);
    if (value != null) {
      if (locale != null) {
        sb.append(LanguageUtil.get(locale,value.toString()));
      }
 else {
        sb.append(value);
      }
    }
    if ((i + 1) != list.length) {
      sb.append(delimiter);
    }
  }
  return sb.toString();
}
