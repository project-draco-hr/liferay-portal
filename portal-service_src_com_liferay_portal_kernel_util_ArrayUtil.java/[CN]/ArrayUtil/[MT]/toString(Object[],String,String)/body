{
  if ((array == null) || (array.length == 0)) {
    return StringPool.BLANK;
  }
  StringBundler sb=new StringBundler(2 * array.length - 1);
  for (int i=0; i < array.length; i++) {
    Object bean=array[i];
    Object value=BeanPropertiesUtil.getObject(bean,param);
    if (value != null) {
      sb.append(value);
    }
    if ((i + 1) != array.length) {
      sb.append(delimiter);
    }
  }
  return sb.toString();
}
