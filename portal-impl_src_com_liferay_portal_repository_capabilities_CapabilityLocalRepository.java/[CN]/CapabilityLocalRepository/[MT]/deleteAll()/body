{
  LocalRepository localRepository=getRepository();
  _repositoryEventTrigger.trigger(RepositoryEventType.Delete.class,LocalRepository.class,localRepository);
  SyncCapability syncCapability=getInternalCapability(SyncCapability.class);
  if (syncCapability != null) {
    syncCapability.destroyDocumentRepository();
  }
  localRepository.deleteAll();
}
