{
  HttpServletRequest request=liferayPortletRequest.getHttpServletRequest();
  ThemeDisplay themeDisplay=(ThemeDisplay)request.getAttribute(WebKeys.THEME_DISPLAY);
  PortletURL editPortletURL=PortletURLFactoryUtil.create(request,CommentPortletKeys.COMMENT,getControlPanelPlid(themeDisplay),PortletRequest.RENDER_PHASE);
  editPortletURL.setParameter("mvcPath","/edit_discussion.jsp");
  editPortletURL.setParameter("commentId",String.valueOf(_workflowableComment.getCommentId()));
  return editPortletURL;
}
