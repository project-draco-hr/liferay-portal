{
  if (!isCheckoutDocumentButtonVisible()) {
    return;
  }
  JavascriptToolbarItem javascriptToolbarItem=new JavascriptToolbarItem();
  javascriptToolbarItem.setKey(DLToolbarItemKeys.CHECKOUT);
  javascriptToolbarItem.setIcon("icon-unlock");
  javascriptToolbarItem.setLabel(UnicodeLanguageUtil.get(_request,"checkout[document]"));
  javascriptToolbarItem.setOnClick(getSubmitFormJavascript(Constants.CHECKOUT,null));
  toolbarItems.add(javascriptToolbarItem);
}
