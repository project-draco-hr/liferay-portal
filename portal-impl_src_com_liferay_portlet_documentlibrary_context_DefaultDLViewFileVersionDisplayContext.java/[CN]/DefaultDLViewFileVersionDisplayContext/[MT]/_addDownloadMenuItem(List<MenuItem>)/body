{
  if (!isDownloadButtonVisible()) {
    return;
  }
  String message=TextFormatter.formatStorageSize(_fileEntry.getSize(),_themeDisplay.getLocale());
  message=_themeDisplay.translate("download") + " (" + message+ ")";
  String url=DLUtil.getDownloadURL(_fileEntry,_fileVersion,_themeDisplay,StringPool.BLANK,false,true);
  URLMenuItem urlMenuItem=_addURLUIItem(new URLMenuItem(),menuItems,DLMenuItemKeys.DOWNLOAD,"icon-download",message,url);
  urlMenuItem.setTarget("_blank");
}
