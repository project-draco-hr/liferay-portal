{
  if (!DLContentLocalServiceUtil.hasContent(companyId,repositoryId,fileName,VERSION_DEFAULT)) {
    throw new NoSuchFileException(companyId,repositoryId,fileName);
  }
  if (DLContentLocalServiceUtil.hasContent(companyId,repositoryId,newFileName,VERSION_DEFAULT)) {
    throw new DuplicateFileException(companyId,repositoryId,newFileName);
  }
  DLContentLocalServiceUtil.updateDLContent(companyId,repositoryId,repositoryId,fileName,newFileName);
}
