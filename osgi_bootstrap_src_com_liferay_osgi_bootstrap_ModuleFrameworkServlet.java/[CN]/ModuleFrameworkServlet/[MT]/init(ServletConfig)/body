{
  super.init(servletConfig);
  Framework framework=ModuleFrameworkUtil.getFramework();
  if (framework == null) {
    return;
  }
  _bundleContext=framework.getBundleContext();
  try {
    Filter filter=_bundleContext.createFilter("(&(bean.id=" + HttpServlet.class.getName() + ")(original.bean=*))");
    _serviceTracker=new ServiceTracker<HttpServlet,HttpServlet>(_bundleContext,filter,this);
    _serviceTracker.open();
  }
 catch (  InvalidSyntaxException ise) {
    _log.error(ise,ise);
  }
}
