{
  _searchContext.setIncludeDiscussions(true);
  _indexer.getFullQuery(_searchContext);
  assertEntryClassNames(_CLASS_NAME,MBMessage.class.getName());
  Assert.assertEquals(Boolean.TRUE,_searchContext.getAttribute("discussion"));
  Assert.assertArrayEquals(new String[]{_CLASS_NAME},(String[])_searchContext.getAttribute("relatedEntryClassNames"));
}
