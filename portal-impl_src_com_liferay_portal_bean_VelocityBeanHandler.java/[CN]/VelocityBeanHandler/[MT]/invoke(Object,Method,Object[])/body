{
  ClassLoader contextClassLoader=PACLClassLoaderUtil.getContextClassLoader();
  try {
    if ((_classLoader != null) && (contextClassLoader != _classLoader)) {
      PACLClassLoaderUtil.setContextClassLoader(_classLoader);
    }
    return method.invoke(_bean,args);
  }
 catch (  InvocationTargetException ite) {
    return null;
  }
 finally {
    if ((_classLoader != null) && (contextClassLoader != _classLoader)) {
      PACLClassLoaderUtil.setContextClassLoader(contextClassLoader);
    }
  }
}
