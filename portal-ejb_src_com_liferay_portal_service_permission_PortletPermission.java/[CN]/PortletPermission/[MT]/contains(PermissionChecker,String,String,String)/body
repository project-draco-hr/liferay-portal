{
  String groupId=null;
  String name=null;
  String primKey=null;
  if (plid != null) {
    String layoutId=Layout.getLayoutId(plid);
    String ownerId=Layout.getOwnerId(plid);
    groupId=Layout.getGroupId(ownerId);
    name=Portlet.getRootPortletId(portletId);
    primKey=plid + Portlet.LAYOUT_SEPARATOR + portletId;
    if (LayoutPermission.contains(permissionChecker,layoutId,ownerId,ActionKeys.UPDATE)) {
      return true;
    }
  }
 else {
    name=portletId;
    primKey=portletId;
  }
  return permissionChecker.hasPermission(groupId,name,primKey,actionId);
}
