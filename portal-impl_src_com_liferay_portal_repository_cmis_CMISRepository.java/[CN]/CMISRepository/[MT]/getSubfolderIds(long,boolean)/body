{
  try {
    List<Long> subfolderIds=new ArrayList<Long>();
    List<Folder> subfolders=getFolders(folderId,false,QueryUtil.ALL_POS,QueryUtil.ALL_POS,null);
    getSubfolderIds(subfolderIds,subfolders,recurse);
