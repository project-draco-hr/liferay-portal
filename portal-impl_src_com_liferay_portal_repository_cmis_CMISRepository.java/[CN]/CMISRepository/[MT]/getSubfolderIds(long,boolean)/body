{
  try {
    Session session=getSession();
    List<Long> subfolderIds=new ArrayList<Long>();
    org.apache.chemistry.opencmis.client.api.Folder cmisFolder=getCmisFolder(session,folderId);
    int depth=1;
    if (recurse) {
      depth=10;
    }
    List<Tree<FileableCmisObject>> fileableCmisObjects=cmisFolder.getFolderTree(depth);
    getSubfolderIds(subfolderIds,fileableCmisObjects);
    return subfolderIds;
  }
 catch (  SystemException se) {
    throw se;
  }
catch (  Exception e) {
    throw new RepositoryException(e);
  }
}
