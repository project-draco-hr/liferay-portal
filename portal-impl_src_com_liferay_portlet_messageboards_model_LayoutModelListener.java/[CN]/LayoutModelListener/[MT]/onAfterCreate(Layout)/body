{
  if (PropsValues.LAYOUT_COMMENTS_ENABLED) {
    try {
      MBMessageLocalServiceUtil.addDiscussionMessage(layout.getUserId(),layout.getUserName(),layout.getGroupId(),Layout.class.getName(),layout.getPlid(),WorkflowConstants.ACTION_PUBLISH);
    }
 catch (    Exception e) {
      throw new ModelListenerException(e);
    }
  }
}
