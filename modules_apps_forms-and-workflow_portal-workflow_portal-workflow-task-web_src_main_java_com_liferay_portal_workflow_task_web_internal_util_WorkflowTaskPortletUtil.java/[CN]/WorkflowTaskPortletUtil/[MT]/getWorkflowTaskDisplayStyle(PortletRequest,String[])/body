{
  PortalPreferences portalPreferences=PortletPreferencesFactoryUtil.getPortalPreferences(portletRequest);
  String displayStyle=ParamUtil.getString(portletRequest,"displayStyle");
  if (Validator.isNull(displayStyle)) {
    WorkflowTaskWebConfiguration workflowTaskWebConfiguration=(WorkflowTaskWebConfiguration)portletRequest.getAttribute(WorkflowTaskWebConfiguration.class.getName());
    displayStyle=portalPreferences.getValue(PortletKeys.MY_WORKFLOW_TASK,"display-style",workflowTaskWebConfiguration.defaultDisplayView());
  }
 else   if (ArrayUtil.contains(displayViews,displayStyle)) {
    portalPreferences.setValue(PortletKeys.MY_WORKFLOW_TASK,"display-style",displayStyle);
  }
  if (!ArrayUtil.contains(displayViews,displayStyle)) {
    displayStyle=displayViews[0];
  }
  return displayStyle;
}
