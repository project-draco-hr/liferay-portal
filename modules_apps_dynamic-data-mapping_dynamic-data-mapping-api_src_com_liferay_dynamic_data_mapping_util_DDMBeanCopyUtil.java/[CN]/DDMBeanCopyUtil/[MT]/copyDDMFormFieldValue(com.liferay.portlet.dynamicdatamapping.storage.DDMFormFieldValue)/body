{
  if (ddmFormFieldValue == null) {
    return null;
  }
  DDMFormFieldValue formFieldValue=new DDMFormFieldValue();
  formFieldValue.setInstanceId(ddmFormFieldValue.getInstanceId());
  formFieldValue.setName(ddmFormFieldValue.getName());
  formFieldValue.setValue(copyValue(ddmFormFieldValue.getValue()));
  for (  com.liferay.portlet.dynamicdatamapping.storage.DDMFormFieldValue nestedFormFieldValue : ddmFormFieldValue.getNestedDDMFormFieldValues()) {
    formFieldValue.addNestedDDMFormFieldValue(copyDDMFormFieldValue(nestedFormFieldValue));
  }
  return formFieldValue;
}
