{
  selenium.selectWindow("null");
  selenium.selectFrame("relative=top");
  selenium.open("/web/joebloggs/home/");
  selenium.waitForVisible("//div[@id='add-page']/a/span");
  assertEquals(RuntimeVariables.replace("Add Page"),selenium.getText("//div[@id='add-page']/a/span"));
  selenium.clickAt("//div[@id='add-page']/a/span",RuntimeVariables.replace("Add Page"));
  selenium.waitForVisible("new_page");
  selenium.type("new_page",RuntimeVariables.replace("Activities Page"));
  selenium.clickAt("link=Save",RuntimeVariables.replace("Save"));
  selenium.waitForElementPresent("link=Activities Page");
  selenium.clickAt("link=Activities Page",RuntimeVariables.replace("Activities Page"));
  selenium.waitForPageToLoad("30000");
}
