{
  StringBuffer sb=new StringBuffer();
  if (portlets.isEmpty()) {
    return sb.toString();
  }
  boolean prependComma=false;
  for (  String portlet : portlets) {
    if (!prependComma) {
      sb.append(portlet);
    }
 else {
      sb.append(",").append(portlet);
    }
    prependComma=true;
  }
  return sb.toString();
}
