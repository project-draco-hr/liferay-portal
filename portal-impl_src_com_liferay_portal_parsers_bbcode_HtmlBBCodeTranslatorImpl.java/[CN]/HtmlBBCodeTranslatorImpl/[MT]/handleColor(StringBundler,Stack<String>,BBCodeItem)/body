{
  sb.append("<span style=\"color: ");
  String color=bbCodeItem.getAttribute();
  if (color == null) {
    color="inherit";
  }
 else {
    Matcher matcher=_colorPattern.matcher(color);
    if (!matcher.matches()) {
      color="inherit";
    }
  }
  sb.append(color);
  sb.append("\">");
  tags.push("</span>");
}
