{
  List<DDMStorageLink> ddmStorageLinks=DDMStorageLinkLocalServiceUtil.getStructureStorageLinks(ddmStructureId);
  for (  DDMStorageLink ddmStorageLink : ddmStorageLinks) {
    DDMContentLocalServiceUtil.deleteDDMContent(ddmStorageLink.getClassPK());
  }
  DDMStorageLinkLocalServiceUtil.deleteStructureStorageLinks(ddmStructureId);
}
