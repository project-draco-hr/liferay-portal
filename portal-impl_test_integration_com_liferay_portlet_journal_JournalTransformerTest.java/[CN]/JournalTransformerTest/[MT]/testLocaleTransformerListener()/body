{
  Map<String,String> tokens=getTokens();
  Map<Locale,String> contents=new HashMap<Locale,String>();
  contents.put(LocaleUtil.BRAZIL,"Joao da Silva");
  contents.put(LocaleUtil.US,"Joe Bloggs");
  String xml=DDMStructureTestUtil.getSampleStructuredContent(contents,LanguageUtil.getLanguageId(LocaleUtil.US));
  String script="$name.getData()";
  String content=JournalUtil.transform(null,tokens,Constants.VIEW,"en_US",xml,script,TemplateConstants.LANG_TYPE_VM);
  Assert.assertEquals("Joe Bloggs",content);
  content=JournalUtil.transform(null,tokens,Constants.VIEW,"pt_BR",xml,script,TemplateConstants.LANG_TYPE_VM);
  Assert.assertEquals("Joao da Silva",content);
  content=JournalUtil.transform(null,tokens,Constants.VIEW,"fr_CA",xml,script,TemplateConstants.LANG_TYPE_VM);
  Assert.assertEquals("Joe Bloggs",content);
}
