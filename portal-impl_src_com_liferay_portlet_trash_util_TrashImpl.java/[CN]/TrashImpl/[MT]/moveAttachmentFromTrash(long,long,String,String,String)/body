{
  if (Validator.isNull(deletedFileName)) {
    return;
  }
  if (!DLStoreUtil.hasDirectory(companyId,repositoryId,attachmentsDir)) {
    DLStoreUtil.addDirectory(companyId,repositoryId,attachmentsDir);
  }
  StringBundler sb=new StringBundler(3);
  sb.append(attachmentsDir);
  sb.append(StringPool.FORWARD_SLASH);
  sb.append(stripTrashNamespace(FileUtil.getShortFileName(deletedFileName),separator));
  String fileName=sb.toString();
  try {
    DLStoreUtil.updateFile(companyId,repositoryId,deletedFileName,fileName);
  }
 catch (  NoSuchFileException nsfe) {
  }
}
