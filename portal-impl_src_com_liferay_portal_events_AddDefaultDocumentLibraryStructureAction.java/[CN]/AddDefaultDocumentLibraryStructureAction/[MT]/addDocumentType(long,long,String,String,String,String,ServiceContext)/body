{
  List<DDMStructure> structures=DDMStructureLocalServiceUtil.getStructure(groupId,structureName,structureDescription);
  if (structures.size() == 0) {
    return;
  }
  long[] ddmStructureId=new long[]{structures.get(0).getStructureId()};
  List<DLDocumentType> documentTypes=DLDocumentTypeLocalServiceUtil.getDocumentTypes(groupId,documentTypeName,documentTypeDescription);
  if (documentTypes.size() == 0) {
    DLDocumentTypeLocalServiceUtil.addDocumentType(userId,groupId,documentTypeName,documentTypeDescription,ddmStructureId,serviceContext);
  }
}
