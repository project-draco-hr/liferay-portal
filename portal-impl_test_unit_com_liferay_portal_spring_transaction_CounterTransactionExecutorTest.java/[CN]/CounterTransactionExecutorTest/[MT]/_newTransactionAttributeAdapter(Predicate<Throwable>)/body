{
  return new TransactionAttributeAdapter((TransactionAttribute)ProxyUtil.newProxyInstance(TransactionAttribute.class.getClassLoader(),new Class<?>[]{TransactionAttribute.class},new InvocationHandler(){
    @Override public Object invoke(    Object proxy,    Method method,    Object[] args){
      if ("rollbackOn".equals(method.getName())) {
        return predicate.test((Throwable)args[0]);
      }
      throw new UnsupportedOperationException(method.toString());
    }
  }
));
}
