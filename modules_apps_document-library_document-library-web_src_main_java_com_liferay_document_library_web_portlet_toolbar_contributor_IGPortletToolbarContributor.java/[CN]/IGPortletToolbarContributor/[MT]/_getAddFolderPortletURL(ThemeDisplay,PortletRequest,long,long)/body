{
  PortletDisplay portletDisplay=themeDisplay.getPortletDisplay();
  PortletURL portletURL=PortletURLFactoryUtil.create(portletRequest,portletDisplay.getId(),themeDisplay.getPlid(),PortletRequest.RENDER_PHASE);
  portletURL.setParameter("mvcRenderCommandName","/document_library/edit_folder");
  portletURL.setParameter("redirect",themeDisplay.getURLCurrent());
  portletURL.setParameter("repositoryId",String.valueOf(repositoryId));
  portletURL.setParameter("parentFolderId",String.valueOf(folderId));
  portletURL.setParameter("ignoreRootFolder",Boolean.TRUE.toString());
  return portletURL;
}
