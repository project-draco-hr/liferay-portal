{
  Session session=null;
  try {
    session=openSession();
    StringBuffer query=new StringBuffer();
    query.append("FROM com.liferay.portal.model.PortletPreferences WHERE ");
    if (layoutId == null) {
      query.append("layoutId IS NULL");
    }
 else {
      query.append("layoutId = ?");
    }
    query.append(" ");
    Query q=session.createQuery(query.toString());
    int queryPos=0;
    if (layoutId != null) {
      q.setString(queryPos++,layoutId);
    }
    Iterator itr=q.list().iterator();
    while (itr.hasNext()) {
      PortletPreferences portletPreferences=(PortletPreferences)itr.next();
      session.delete(portletPreferences);
    }
    session.flush();
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
