{
  if (wsrpMode == null) {
    return PortletMode.VIEW;
  }
 else   if (wsrpMode.equals(Modes.edit)) {
    return PortletMode.EDIT;
  }
 else   if (wsrpMode.equals(Modes.help)) {
    return PortletMode.HELP;
  }
 else   if (wsrpMode.equals(Modes.view)) {
    return PortletMode.VIEW;
  }
  return PortletMode.VIEW;
}
