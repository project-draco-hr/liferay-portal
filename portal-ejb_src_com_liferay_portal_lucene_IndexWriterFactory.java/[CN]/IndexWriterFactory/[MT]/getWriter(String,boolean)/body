{
  IndexWriterData writerData=(IndexWriterData)_lookup.get(companyId);
  if (writerData == null) {
    IndexWriter writer=new IndexWriter(LuceneUtil.getLuceneDir(companyId),LuceneUtil.getAnalyzer(),create);
    writerData=new IndexWriterData(companyId,writer,0);
    _lookup.put(companyId,writerData);
  }
  writerData.setCount(writerData.getCount() + 1);
  return writerData.getWriter();
}
