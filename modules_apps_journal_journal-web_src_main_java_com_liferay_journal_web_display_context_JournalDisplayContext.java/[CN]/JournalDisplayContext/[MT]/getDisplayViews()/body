{
  if (_displayViews == null) {
    JournalWebConfiguration journalWebConfiguration=(JournalWebConfiguration)_request.getAttribute(JournalWebConfiguration.class.getName());
    _displayViews=StringUtil.split(PrefsParamUtil.getString(_portletPreferences,_request,"displayViews",StringUtil.merge(journalWebConfiguration.displayViews())));
  }
  return _displayViews;
}
