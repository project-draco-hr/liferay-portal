{
  DDLEntry ddlEntry=findByPrimaryKey(entryId);
  Session session=null;
  try {
    session=openSession();
    DDLEntry[] array=new DDLEntryImpl[3];
    array[0]=getByCompanyId_PrevAndNext(session,ddlEntry,companyId,orderByComparator,true);
    array[1]=ddlEntry;
    array[2]=getByCompanyId_PrevAndNext(session,ddlEntry,companyId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
