{
  Session session=null;
  try {
    session=openSession();
    StringBuffer query=new StringBuffer();
    query.append("FROM com.liferay.portlet.bookmarks.model.BookmarksFolder WHERE ");
    query.append("groupId = ?");
    query.append(" AND ");
    if (parentFolderId == null) {
      query.append("parentFolderId IS NULL");
    }
 else {
      query.append("parentFolderId = ?");
    }
    query.append(" ");
    query.append("ORDER BY ");
    query.append("parentFolderId ASC").append(", ");
    query.append("name ASC");
    Query q=session.createQuery(query.toString());
    q.setCacheable(true);
    int queryPos=0;
    q.setLong(queryPos++,groupId);
    if (parentFolderId != null) {
      q.setString(queryPos++,parentFolderId);
    }
    return q.list();
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
