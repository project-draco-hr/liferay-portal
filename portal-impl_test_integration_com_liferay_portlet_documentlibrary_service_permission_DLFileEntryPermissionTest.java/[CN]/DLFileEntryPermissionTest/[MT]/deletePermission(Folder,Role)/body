{
  if (ResourceBlockLocalServiceUtil.isSupported(DLFolder.class.getName())) {
    ResourceBlockLocalServiceUtil.setIndividualScopePermissions(_group.getCompanyId(),_group.getGroupId(),DLFolder.class.getName(),folder.getFolderId(),role.getRoleId(),new ArrayList<String>());
  }
 else {
    ResourcePermissionLocalServiceUtil.setResourcePermissions(_group.getCompanyId(),DLFolder.class.getName(),ResourceConstants.SCOPE_INDIVIDUAL,String.valueOf(folder.getFolderId()),role.getRoleId(),new String[0]);
  }
}
