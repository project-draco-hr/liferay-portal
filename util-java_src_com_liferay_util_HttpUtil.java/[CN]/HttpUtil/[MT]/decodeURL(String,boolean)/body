{
  if (url == null) {
    return null;
  }
  try {
    url=URLDecoder.decode(url,ENCODING);
    if (unescapeSpace) {
      url=StringUtil.replace(url,"%20",StringPool.PLUS);
    }
    return url;
  }
 catch (  UnsupportedEncodingException uee) {
    _log.error(uee,uee);
    return StringPool.BLANK;
  }
}
