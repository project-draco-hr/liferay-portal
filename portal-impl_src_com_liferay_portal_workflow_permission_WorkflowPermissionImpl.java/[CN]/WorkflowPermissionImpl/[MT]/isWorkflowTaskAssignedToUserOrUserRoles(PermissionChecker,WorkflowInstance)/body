{
  int count=WorkflowTaskManagerUtil.getWorkflowTaskCountByWorkflowInstance(permissionChecker.getCompanyId(),permissionChecker.getUserId(),workflowInstance.getWorkflowInstanceId(),Boolean.FALSE);
  count+=WorkflowTaskManagerUtil.getWorkflowTaskCountByUserRoles(permissionChecker.getCompanyId(),permissionChecker.getUserId(),Boolean.FALSE);
  if (count > 0) {
    return true;
  }
 else {
    return false;
  }
}
