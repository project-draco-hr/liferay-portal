{
  DDLRecordVersion recordVersion=getRecordVersion(recordId,version);
  if (!recordVersion.isApproved()) {
    return;
  }
  DDLRecord record=recordVersion.getRecord();
  DDLRecordSet recordSet=record.getRecordSet();
  DDMStructure ddmStructure=recordSet.getDDMStructure();
  Fields fields=StorageEngineUtil.getFields(ddmStructure.getStructureId(),recordVersion.getDDMStorageId());
  updateRecord(userId,recordId,true,recordVersion.getDisplayIndex(),fields,false,serviceContext);
}
