{
  if (!InlineSQLHelperUtil.isEnabled(groupId)) {
    return findByG_C_T_A_PrevAndNext(messageId,groupId,categoryId,threadId,answer,orderByComparator);
  }
  MBMessage mbMessage=findByPrimaryKey(messageId);
  Session session=null;
  try {
    session=openSession();
    MBMessage[] array=new MBMessageImpl[3];
    array[0]=filterGetByG_C_T_A_PrevAndNext(session,mbMessage,groupId,categoryId,threadId,answer,orderByComparator,true);
    array[1]=mbMessage;
    array[2]=filterGetByG_C_T_A_PrevAndNext(session,mbMessage,groupId,categoryId,threadId,answer,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
