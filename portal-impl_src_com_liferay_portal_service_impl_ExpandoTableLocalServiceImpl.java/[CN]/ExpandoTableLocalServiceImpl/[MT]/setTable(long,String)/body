{
  ExpandoTable table=expandoTablePersistence.fetchByC_N(classNameId,name);
  if (table == null) {
    validate(name);
    long tableId=counterLocalService.increment();
    table=expandoTablePersistence.create(tableId);
    table.setClassNameId(classNameId);
    table.setName(name);
    expandoTablePersistence.update(table,false);
  }
  return table;
}
