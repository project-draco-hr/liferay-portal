{
  String actualErrorMessage=null;
  try {
    if (fileName.endsWith(".action")) {
      String pathFileName=StringUtil.replace(fileName,".action",".path");
      if (FileUtil.exists(_BASE_DIR + _DIR_NAME + "/"+ pathFileName)) {
        _seleniumBuilderContext.addFile(_DIR_NAME + "/" + pathFileName);
      }
    }
    _seleniumBuilderContext.addFile(_DIR_NAME + "/" + fileName);
    _seleniumBuilderContext.validateElements(_DIR_NAME + "/" + fileName);
  }
 catch (  IllegalArgumentException iae) {
    actualErrorMessage=iae.getMessage();
  }
 finally {
    if (expectException) {
      Assert.assertEquals(expectedErrorMessage,actualErrorMessage);
    }
 else {
      Assert.assertEquals(null,actualErrorMessage);
    }
  }
}
