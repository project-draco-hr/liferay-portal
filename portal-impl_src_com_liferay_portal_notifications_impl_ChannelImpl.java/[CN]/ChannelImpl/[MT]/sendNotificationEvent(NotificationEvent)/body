{
  Lock writeLock=_channelRWLock.writeLock();
  try {
    writeLock.lock();
    long currentTime=System.currentTimeMillis();
    doLocalStoreChannelEvent(notificationEvent,currentTime);
    boolean requiresPersistent=evaluateRequiresPersistent(notificationEvent);
    if (requiresPersistent) {
      _userNotificationEventLocalService.addUserNotificationEvent(getCompanyId(),getUserId(),notificationEvent);
    }
  }
 catch (  Exception e) {
    throw new ChannelException("Unable to send event",e);
  }
 finally {
    writeLock.unlock();
  }
  notifyChannelListeners();
}
