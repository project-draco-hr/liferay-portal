{
  try {
    SourceFormatter sourceFormatter=new SourceFormatter(_sourceFormatterBean);
    sourceFormatter.format();
    List<String> processedFiles=sourceFormatter.getProcessedFiles();
    Map pluginContext=getPluginContext();
    pluginContext.put(SourceFormatter.PROCESSED_FILES_ATTRIBUTE,processedFiles);
  }
 catch (  Exception e) {
    throw new MojoExecutionException(e.getMessage(),e);
  }
}
