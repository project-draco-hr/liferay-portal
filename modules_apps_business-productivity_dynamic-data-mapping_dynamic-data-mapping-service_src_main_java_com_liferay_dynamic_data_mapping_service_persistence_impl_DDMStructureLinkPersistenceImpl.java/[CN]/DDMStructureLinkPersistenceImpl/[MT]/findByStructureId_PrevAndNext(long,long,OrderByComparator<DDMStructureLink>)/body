{
  DDMStructureLink ddmStructureLink=findByPrimaryKey(structureLinkId);
  Session session=null;
  try {
    session=openSession();
    DDMStructureLink[] array=new DDMStructureLinkImpl[3];
    array[0]=getByStructureId_PrevAndNext(session,ddmStructureLink,structureId,orderByComparator,true);
    array[1]=ddmStructureLink;
    array[2]=getByStructureId_PrevAndNext(session,ddmStructureLink,structureId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
