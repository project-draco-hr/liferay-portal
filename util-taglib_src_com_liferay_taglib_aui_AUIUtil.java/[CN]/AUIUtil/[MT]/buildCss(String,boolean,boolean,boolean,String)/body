{
  StringBundler sb=new StringBundler(8);
  sb.append(prefix);
  if (disabled) {
    sb.append(StringPool.SPACE);
    sb.append("disabled");
  }
  if (first) {
    sb.append(StringPool.SPACE);
    sb.append(prefix);
    sb.append("-first");
  }
 else   if (last) {
    sb.append(StringPool.SPACE);
    sb.append(prefix);
    sb.append("-last");
  }
  if (Validator.isNotNull(cssClass)) {
    sb.append(StringPool.SPACE);
    sb.append(cssClass);
  }
  return sb.toString();
}
