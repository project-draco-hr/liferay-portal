{
  StringBundler sb=new StringBundler(4);
  if (choiceField) {
    sb.append("class=\"" + LABEL_CHOICE_PREFIX);
  }
 else {
    sb.append("class=\"" + LABEL_FIELD_PREFIX);
    if (Validator.isNotNull(inlineLabel)) {
      sb.append("-inline-label");
    }
  }
  sb.append("\"");
  if (showForLabel) {
    sb.append(" for=\"" + forLabel + "\"");
  }
  return sb.toString();
}
