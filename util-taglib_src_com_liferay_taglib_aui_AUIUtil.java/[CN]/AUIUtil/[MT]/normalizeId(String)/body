{
  char[] chars=new char[name.length()];
  name.getChars(0,chars.length,chars,0);
  boolean modified=false;
  for (int i=0; i < chars.length; i++) {
    char c=chars[i];
    if ((_validChars.length <= c) || !_validChars[c]) {
      chars[i]=CharPool.DASH;
      modified=true;
    }
  }
  if (modified) {
    return new String(chars);
  }
  return name;
}
