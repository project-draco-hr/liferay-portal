{
  StringBundler sb=new StringBundler(7);
  if (baseType.equals("boolean")) {
    baseType="checkbox";
  }
  if (baseType.equals("checkbox") || baseType.equals("radio")) {
    sb.append("class=\"");
    sb.append(baseType);
    if (inlineField) {
      sb.append(" inline");
    }
    sb.append("\" ");
  }
 else {
    sb.append("class=\"control-label\" ");
  }
  if (showForLabel) {
    sb.append("for=\"");
    sb.append(HtmlUtil.escapeAttribute(forLabel));
    sb.append("\"");
  }
  return sb.toString();
}
