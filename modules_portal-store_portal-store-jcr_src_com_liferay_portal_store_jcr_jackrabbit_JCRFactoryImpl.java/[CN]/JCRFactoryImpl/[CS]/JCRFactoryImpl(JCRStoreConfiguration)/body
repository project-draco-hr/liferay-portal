{
  _configuration=configuration;
  try {
    _transientRepository=new TransientRepository(_configuration.jackrabbitConfigFilePath(),_configuration.jackrabbitRepositoryHome());
  }
 catch (  Exception e) {
    _log.error("Problem initializing Jackrabbit JCR.",e);
    throw e;
  }
  if (_log.isInfoEnabled()) {
    _log.info("Jackrabbit JCR intialized with config file path " + _configuration.jackrabbitConfigFilePath() + " and repository home "+ _configuration.jackrabbitRepositoryHome());
  }
}
