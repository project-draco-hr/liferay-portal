{
  Session session=null;
  try {
    session=openSession();
    if (saveOrUpdate) {
      session.saveOrUpdate(tagsSource);
    }
 else {
      if (tagsSource.isNew()) {
        session.save(tagsSource);
      }
    }
    session.flush();
    tagsSource.setNew(false);
    return tagsSource;
  }
 catch (  HibernateException he) {
    throw new SystemException(he);
  }
 finally {
    closeSession(session);
  }
}
