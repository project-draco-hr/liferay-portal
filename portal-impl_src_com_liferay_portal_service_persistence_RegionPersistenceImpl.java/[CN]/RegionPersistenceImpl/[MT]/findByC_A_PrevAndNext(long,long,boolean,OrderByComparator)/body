{
  Region region=findByPrimaryKey(regionId);
  Session session=null;
  try {
    session=openSession();
    Region[] array=new RegionImpl[3];
    array[0]=getByC_A_PrevAndNext(session,region,countryId,active,orderByComparator,true);
    array[1]=region;
    array[2]=getByC_A_PrevAndNext(session,region,countryId,active,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
