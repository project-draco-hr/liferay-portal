{
  String cssThemePath=null;
  if (themeDisplay != null) {
    cssThemePath=themeDisplay.getPathThemeCss();
  }
 else {
    boolean cdnDynamicResourcesEnabled=PortalUtil.isCDNDynamicResourcesEnabled(request);
    String cdnHost=StringPool.BLANK;
    if (cdnDynamicResourcesEnabled) {
      cdnHost=PortalUtil.getCDNHost(request);
    }
    String themeStaticResourcePath=theme.getStaticResourcePath();
    cssThemePath=cdnHost + themeStaticResourcePath + theme.getCssPath();
  }
  return cssThemePath;
}
