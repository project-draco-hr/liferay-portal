{
  while (true) {
    CoderResult coderResult=_charsetEncoder.encode(inputBuffer,_outputBuffer,true);
    if (coderResult.isOverflow()) {
      flush();
    }
 else     if (coderResult.isUnderflow()) {
      if (_autoFlush) {
        flush();
      }
      break;
    }
 else {
      throw new IOException("Unexcepted coder result " + coderResult);
    }
  }
}
