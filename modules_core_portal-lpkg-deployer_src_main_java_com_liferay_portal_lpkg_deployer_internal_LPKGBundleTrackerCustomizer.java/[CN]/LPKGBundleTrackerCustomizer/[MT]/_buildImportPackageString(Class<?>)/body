{
  StringBundler sb=new StringBundler(classes.length * 2);
  for (  Class<?> clazz : classes) {
    Package pkg=clazz.getPackage();
    sb.append(pkg.getName());
    sb.append(StringPool.COMMA);
  }
  int index=sb.index();
  if (index > 0) {
    sb.setIndex(index - 1);
  }
  return sb.toString();
}
