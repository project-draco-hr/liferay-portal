{
  PortletURL editPortletURL=PortalUtil.getControlPanelPortletURL(liferayPortletRequest,CommentPortletKeys.COMMENT,0,PortletRequest.RENDER_PHASE);
  editPortletURL.setParameter("mvcPath","/edit_discussion.jsp");
