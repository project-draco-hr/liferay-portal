{
  Assert.assertEquals(0,PortletPreferencesLocalServiceUtil.getPortletPreferencesCount(_group.getGroupId(),PortletKeys.PREFS_OWNER_TYPE_GROUP,-1,_portlet,false));
  PortletPreferencesLocalServiceUtil.addPortletPreferences(TestPropsValues.getCompanyId(),_group.getGroupId(),PortletKeys.PREFS_OWNER_TYPE_GROUP,-1,_portlet.getPortletId(),_portlet,null);
  Assert.assertEquals(1,PortletPreferencesLocalServiceUtil.getPortletPreferencesCount(_group.getGroupId(),PortletKeys.PREFS_OWNER_TYPE_GROUP,-1,_portlet,false));
}
