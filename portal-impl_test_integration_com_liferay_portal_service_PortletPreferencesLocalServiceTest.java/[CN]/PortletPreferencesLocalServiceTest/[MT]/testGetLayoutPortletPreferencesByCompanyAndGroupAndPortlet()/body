{
  Layout layout=LayoutTestUtil.addLayout(_layout.getGroup());
  PortletPreferencesTestUtil.addLayoutPortletPreferences(_layout,_portlet);
  PortletPreferencesTestUtil.addLayoutPortletPreferences(layout,_portlet);
  List<PortletPreferences> portletPreferences=PortletPreferencesLocalServiceUtil.getPortletPreferences(_layout.getCompanyId(),_layout.getGroupId(),PortletKeys.PREFS_OWNER_ID_DEFAULT,PortletKeys.PREFS_OWNER_TYPE_LAYOUT,_portlet.getPortletId(),false);
  Assert.assertEquals(2,portletPreferences.size());
  Assert.assertEquals(_portlet.getPortletId(),portletPreferences.get(0).getPortletId());
}
