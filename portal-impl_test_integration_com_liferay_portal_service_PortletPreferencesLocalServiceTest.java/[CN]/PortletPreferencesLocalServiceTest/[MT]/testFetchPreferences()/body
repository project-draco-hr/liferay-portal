{
  String portletPreferencesXML=PortletPreferencesTestUtil.getPortletPreferencesXML(_NAME,_SINGLE_VALUE);
  PortletPreferencesTestUtil.addLayoutPortletPreferences(_layout,_portlet,portletPreferencesXML);
  javax.portlet.PortletPreferences jxPortletPreferences=PortletPreferencesLocalServiceUtil.fetchPreferences(TestPropsValues.getCompanyId(),PortletKeys.PREFS_OWNER_ID_DEFAULT,PortletKeys.PREFS_OWNER_TYPE_LAYOUT,_layout.getPlid(),_portlet.getPortletId());
  assertValues(jxPortletPreferences,_NAME,_SINGLE_VALUE);
}
