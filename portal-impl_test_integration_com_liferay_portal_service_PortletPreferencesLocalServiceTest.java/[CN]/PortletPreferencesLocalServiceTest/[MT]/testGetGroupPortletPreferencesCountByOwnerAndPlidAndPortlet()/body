{
  long initialCount=PortletPreferencesLocalServiceUtil.getPortletPreferencesCount(_group.getGroupId(),PortletKeys.PREFS_OWNER_TYPE_GROUP,_layout.getPlid(),_portlet,false);
  Assert.assertEquals(0,initialCount);
  PortletPreferencesTestUtil.addGroupPortletPreferences(_layout,_portlet);
  long currentCount=PortletPreferencesLocalServiceUtil.getPortletPreferencesCount(_group.getGroupId(),PortletKeys.PREFS_OWNER_TYPE_GROUP,_layout.getPlid(),_portlet,false);
  Assert.assertEquals(1,currentCount);
}
