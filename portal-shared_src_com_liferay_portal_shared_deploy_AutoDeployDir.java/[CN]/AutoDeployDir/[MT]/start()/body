{
  if (!_deployDir.exists()) {
    _log.warn("Creating missing directory " + _deployDir);
    _deployDir.mkdirs();
  }
  if (_interval > 0) {
    try {
      _scanner=new AutoDeployScanner(Thread.currentThread().getThreadGroup(),AutoDeployScanner.class.getName(),this);
      _scanner.start();
      _log.info("Auto deploy scanner started for " + _deployDir);
    }
 catch (    Exception e) {
      _log.error(StackTraceUtil.getStackTrace(e));
      stop();
      return;
    }
  }
 else {
    _log.info("Auto deploy scanning is disabled for " + _deployDir);
  }
}
