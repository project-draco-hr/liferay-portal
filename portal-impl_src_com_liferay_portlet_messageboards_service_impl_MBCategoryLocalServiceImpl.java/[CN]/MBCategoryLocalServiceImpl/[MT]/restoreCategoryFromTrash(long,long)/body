{
  TrashEntry trashEntry=trashEntryLocalService.getEntry(MBCategory.class.getName(),categoryId);
  MBCategory category=updateStatus(userId,categoryId,WorkflowConstants.STATUS_APPROVED);
  User user=userPersistence.findByPrimaryKey(userId);
  List<Object> categoriesAndThreads=getCategoriesAndThreads(category.getGroupId(),categoryId);
  restoreDependentsFromTrash(user,categoriesAndThreads);
  trashEntryLocalService.deleteEntry(trashEntry.getEntryId());
}
