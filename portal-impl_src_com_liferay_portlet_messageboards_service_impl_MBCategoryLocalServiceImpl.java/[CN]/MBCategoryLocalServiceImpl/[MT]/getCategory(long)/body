{
  MBCategory category=null;
  if ((categoryId != MBCategoryConstants.DEFAULT_PARENT_CATEGORY_ID) && (categoryId != MBCategoryConstants.DISCUSSION_CATEGORY_ID)) {
    category=mbCategoryPersistence.findByPrimaryKey(categoryId);
  }
 else {
    category=new MBCategoryImpl();
    category.setCategoryId(categoryId);
    category.setParentCategoryId(categoryId);
  }
  return category;
}
