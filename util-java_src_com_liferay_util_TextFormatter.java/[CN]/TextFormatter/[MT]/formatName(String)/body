{
  if (Validator.isNull(name)) {
    return name;
  }
  char[] c=name.toLowerCase().trim().toCharArray();
  if (c.length > 0) {
    c[0]=Character.toUpperCase(c[0]);
  }
  for (int i=0; i < c.length; i++) {
    if (c[i] == ' ') {
      c[i + 1]=Character.toUpperCase(c[i + 1]);
    }
  }
  return new String(c);
}
