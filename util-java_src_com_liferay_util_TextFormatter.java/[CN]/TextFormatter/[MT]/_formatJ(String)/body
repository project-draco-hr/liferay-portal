{
  StringBuffer sb=new StringBuffer();
  s=StringUtil.replace(s,"-"," ");
  s=StringUtil.replace(s,"_"," ");
  char[] c=s.toCharArray();
  for (int i=0; i < c.length; i++) {
    if ((i == 0) || (c[i - 1] == ' ')) {
      sb.append(Character.toUpperCase(c[i]));
    }
 else {
      sb.append(Character.toLowerCase(c[i]));
    }
  }
  return sb.toString();
}
