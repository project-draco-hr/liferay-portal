{
  String defaultPasswordPolicyName=GetterUtil.getString(PropsUtil.get(PropsUtil.PASSWORDS_DEFAULT_POLICY_NAME));
  try {
    PasswordPolicyUtil.findByC_N(companyId,defaultPasswordPolicyName);
  }
 catch (  NoSuchPasswordPolicyException nsppe) {
