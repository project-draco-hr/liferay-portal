{
  if (LDAPSettingsUtil.isPasswordPolicyEnabled(companyId)) {
    return null;
  }
  if ((organizationIds == null) || (organizationIds.length == 0)) {
    return getDefaultPasswordPolicy(companyId);
  }
  long classNameId=classNameLocalService.getClassNameId(Organization.class.getName());
  PasswordPolicyRel passwordPolicyRel=null;
  for (int i=0; i < organizationIds.length; i++) {
    long organizationId=organizationIds[i];
    passwordPolicyRel=passwordPolicyRelPersistence.fetchByC_C(classNameId,organizationId);
    if (passwordPolicyRel != null) {
      return passwordPolicyPersistence.findByPrimaryKey(passwordPolicyRel.getPasswordPolicyId());
    }
  }
  return getDefaultPasswordPolicy(companyId);
}
