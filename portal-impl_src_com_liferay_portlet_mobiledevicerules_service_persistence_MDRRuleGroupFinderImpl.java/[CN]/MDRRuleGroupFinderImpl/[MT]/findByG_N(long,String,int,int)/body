{
  String[] names=CustomSQLUtil.keywords(name);
  Session session=null;
  try {
    session=openSession();
    String sql=CustomSQLUtil.get(FIND_BY_G_N);
    sql=CustomSQLUtil.replaceKeywords(sql,"lower(name)",StringPool.LIKE,true,names);
    sql=CustomSQLUtil.replaceAndOperator(sql,false);
    SQLQuery q=session.createSQLQuery(sql);
    q.addEntity("MDRRuleGroup",MDRRuleGroup.class);
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(groupId);
    qPos.add(names,2);
    return (List<MDRRuleGroup>)QueryUtil.list(q,getDialect(),start,end);
  }
 catch (  Exception e) {
    throw new SystemException(e);
  }
 finally {
    closeSession(session);
  }
}
