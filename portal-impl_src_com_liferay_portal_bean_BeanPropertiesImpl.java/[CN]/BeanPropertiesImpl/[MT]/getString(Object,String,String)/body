{
  String beanValue=null;
  if (bean != null) {
    try {
      beanValue=(String)PropertyUtils.getProperty(bean,param);
    }
 catch (    NoSuchMethodException nsme) {
      if (_log.isWarnEnabled()) {
        _log.warn(nsme.getMessage());
      }
    }
catch (    Exception e) {
      _log.error(e);
    }
  }
  if (beanValue == null) {
    return defaultValue;
  }
 else {
    return beanValue;
  }
}
