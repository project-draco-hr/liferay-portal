{
  String beanValue=null;
  if (bean != null) {
    try {
      Object value=BeanUtil.getProperty(bean,param);
      beanValue=Convert.toString(value,defaultValue);
    }
 catch (    Exception e) {
      _log.error(e,e);
    }
  }
  if (beanValue == null) {
    return defaultValue;
  }
 else {
    return beanValue;
  }
}
