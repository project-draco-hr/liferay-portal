{
  if (_lifecycle.equals(PortletRequest.RENDER_PHASE) || _lifecycle.equals(PortletRequest.RESOURCE_PHASE)) {
    OutputStream portletOutputStream=_getMimeResponse().getPortletOutputStream();
    ServletOutputStream servletOutputStream=new GenericServletOutputStream(portletOutputStream);
    return servletOutputStream;
  }
 else {
    return new NullServletOutputStream();
  }
}
