{
  JSONArray valuesJSONArray=JSONFactoryUtil.createJSONArray(json);
  DDMStructure ddmStructure=field.getDDMStructure();
  StringBundler sb=new StringBundler(valuesJSONArray.length() * 2);
  for (int i=0; i < valuesJSONArray.length(); i++) {
    Map<String,String> fieldsMap=ddmStructure.getFields(field.getName(),FieldConstants.VALUE,valuesJSONArray.getString(i),LocaleUtil.toLanguageId(locale));
    if (fieldsMap == null) {
      continue;
    }
    sb.append(fieldsMap.get(FieldConstants.LABEL));
    if ((i + 1) < valuesJSONArray.length()) {
      sb.append(", ");
    }
  }
  return sb.toString();
}
