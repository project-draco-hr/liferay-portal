{
  for (int x=absolutePath.length(); ; ) {
    x=absolutePath.lastIndexOf(StringPool.SLASH,x);
    if (x == -1) {
      break;
    }
    String copyright=FileUtils.readFileToString(new File(absolutePath.substring(0,x + 1) + "copyright.txt"));
    if (Validator.isNotNull(copyright)) {
      return copyright;
    }
    x=x - 1;
  }
  return null;
}
