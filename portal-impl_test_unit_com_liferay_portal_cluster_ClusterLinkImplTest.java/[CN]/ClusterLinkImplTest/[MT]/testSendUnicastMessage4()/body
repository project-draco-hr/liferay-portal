{
  Callable<Void> callable=new Callable<Void>(){
    public Void call() throws Exception {
      ClusterLinkImpl clusterLinkImpl=_getClusterLinkImpl(1,true);
      List<JChannel> jChannels=_getJChannels(clusterLinkImpl);
      Message message=_createMessage();
      CaptureHandler captureHandler=_handleLog(ClusterLinkImpl.class,Level.WARNING);
      JChannel jChannel=jChannels.get(0);
      jChannel.disconnect();
      clusterLinkImpl.sendUnicastMessage(new AddressImpl(new MockAddress()),message,Priority.LEVEL1);
      _assertLogger(captureHandler,"Unable to send unicast message " + message,Exception.class);
      clusterLinkImpl.destroy();
      return null;
    }
  }
;
  runInNewClassLoader((Class<? extends Callable<Void>>)callable.getClass());
}
