{
  Callable<Void> callable=new Callable<Void>(){
    public Void call() throws Exception {
      ObjectValuePair<ClusterLinkImpl,JChannel[]> clusterPlatform=_getClusterLinkPlatform(1,true);
      Message message=_createMessage();
      CaptureHandler captureHandler=_handleLog(ClusterLinkImpl.class,Level.WARNING);
      clusterPlatform.getValue()[0].close();
      try {
        clusterPlatform.getKey().sendUnicastMessage(new AddressImpl(new MockAddress()),message,Priority.LEVEL1);
      }
 catch (      Exception e) {
        fail();
      }
      _assertLogger(captureHandler,"Unable to send unicast message:" + message,ChannelClosedException.class);
      return null;
    }
  }
;
  runInNewClassLoader((Class<? extends Callable<Void>>)callable.getClass());
}
