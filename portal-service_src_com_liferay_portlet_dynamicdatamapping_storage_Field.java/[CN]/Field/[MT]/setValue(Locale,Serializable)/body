{
  List<Serializable> values=null;
  if (value != null) {
    Class<?> clazz=value.getClass();
    if (clazz.isArray()) {
      values=Arrays.asList((Serializable[])value);
    }
  }
  if (values == null) {
    values=new ArrayList<Serializable>();
    values.add(value);
  }
  _valuesMap.put(locale,values);
}
