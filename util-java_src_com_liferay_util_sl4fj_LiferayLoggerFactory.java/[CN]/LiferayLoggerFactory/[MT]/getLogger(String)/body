{
  Logger logger=null;
  _readLock.lock();
  try {
    logger=_loggerMap.get(name);
  }
  finally {
    _readLock.unlock();
  }
  if (logger == null) {
    _writeLock.lock();
    try {
      Log log=LogFactoryUtil.getLog(name);
      logger=new LiferayLoggerAdapter(log);
      _loggerMap.put(name,logger);
    }
  finally {
      _writeLock.unlock();
    }
  }
  return logger;
}
