{
  if (_displayViews == null) {
    DDLFormWebRequestHelper ddlFormWebRequestHelper=new DDLFormWebRequestHelper(PortalUtil.getHttpServletRequest(_renderRequest));
    DDLFormWebConfiguration ddlFormWebConfiguration=ddlFormWebRequestHelper.getDDLFormWebConfiguration();
    _displayViews=StringUtil.split(PrefsParamUtil.getString(_portletPreferences,_renderRequest,"displayViews",StringUtil.merge(ddlFormWebConfiguration.supportedDisplayView())));
  }
  return _displayViews;
}
