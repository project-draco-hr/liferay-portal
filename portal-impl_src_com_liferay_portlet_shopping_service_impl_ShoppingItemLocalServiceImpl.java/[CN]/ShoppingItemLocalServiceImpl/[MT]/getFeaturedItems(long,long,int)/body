{
  List featuredItems=shoppingItemFinder.findByFeatured(groupId,new long[]{categoryId},numOfItems);
  if (featuredItems.size() == 0) {
    List childCategories=ShoppingCategoryUtil.findByG_P(groupId,categoryId);
    if (childCategories.size() > 0) {
      long[] categoryIds=new long[childCategories.size()];
      for (int i=0; i < childCategories.size(); i++) {
        ShoppingCategory childCategory=(ShoppingCategory)childCategories.get(i);
        categoryIds[i]=childCategory.getCategoryId();
      }
      featuredItems=shoppingItemFinder.findByFeatured(groupId,categoryIds,numOfItems);
    }
  }
  return featuredItems;
}
