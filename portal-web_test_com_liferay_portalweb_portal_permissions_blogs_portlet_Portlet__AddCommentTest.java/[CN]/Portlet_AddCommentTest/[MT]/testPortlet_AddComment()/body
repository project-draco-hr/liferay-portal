{
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("link=Blogs Permissions Page")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.click(RuntimeVariables.replace("link=Blogs Permissions Page"));
  selenium.waitForPageToLoad("30000");
  selenium.click(RuntimeVariables.replace("link=Portlet1 Temporary1 Entry1"));
  selenium.waitForPageToLoad("30000");
  selenium.click("link=Add Comment");
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (selenium.isElementPresent("_33_postReplyBody0")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
  selenium.type("_33_postReplyBody0",RuntimeVariables.replace("This is a portlet comment!"));
  selenium.click(RuntimeVariables.replace("_33_postReplyButton0"));
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.isTextPresent("Your request processed successfully."));
  assertEquals(RuntimeVariables.replace("This is a portlet comment!"),selenium.getText("//td[2]/div[1]"));
}
