{
  try {
    Class<?> clazz=_bundle.loadClass(className);
    if (!EventListener.class.isAssignableFrom(clazz)) {
      throw new IllegalArgumentException();
    }
    Class<? extends EventListener> listenerClass=clazz.asSubclass(EventListener.class);
    _listeners.put(listenerClass,null);
  }
 catch (  Exception e) {
    _logger.log(Logger.LOG_ERROR,"Bundle " + _bundle + " is unable to load filter "+ className);
    throw new IllegalArgumentException(e);
  }
}
