{
  selenium.click("link=1.1");
  selenium.waitForPageToLoad("30000");
  selenium.click("//input[@value='Delete']");
  selenium.waitForPageToLoad("30000");
  assertTrue(selenium.getConfirmation().matches("^Are you sure you want to deactivate this[\\s\\S]$"));
  for (int second=0; ; second++) {
    if (second >= 60) {
      fail("timeout");
    }
    try {
      if (!selenium.isElementPresent("link=1.1")) {
        break;
      }
    }
 catch (    Exception e) {
    }
    Thread.sleep(1000);
  }
}
