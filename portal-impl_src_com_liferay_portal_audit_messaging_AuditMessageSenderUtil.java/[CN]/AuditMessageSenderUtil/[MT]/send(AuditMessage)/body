{
  try {
    if (_log.isDebugEnabled()) {
      _log.debug("Sending audit message to " + _DESTINATION_NAME + ": "+ msg.toString().toString());
    }
    MessageBusUtil.sendMessage(_DESTINATION_NAME,msg.toJSONObject().toString());
  }
 catch (  JSONException e) {
    throw new IllegalArgumentException("Unable to convert message to JSON",e);
  }
}
