{
  if (_printWriter != null) {
    return _printWriter;
  }
  if (_servletOutputStream != null) {
    throw new IllegalStateException("Cannot obtain Writer because OutputStream is already in use");
  }
  _unsyncByteArrayOutputStream=new UnsyncByteArrayOutputStream();
  _servletOutputStream=new ServletOutputStreamAdapter(_unsyncByteArrayOutputStream);
  _printWriter=UnsyncPrintWriterPool.borrow(_unsyncByteArrayOutputStream);
  return _printWriter;
}
