{
  mockStatic(DDMStructureLocalServiceUtil.class);
  when(DDMStructureLocalServiceUtil.getStructure(Matchers.anyLong())).then(new Answer<DDMStructure>(){
    @Override public DDMStructure answer(    InvocationOnMock invocation) throws Throwable {
      Object[] args=invocation.getArguments();
      Long structureId=(Long)args[0];
      return structuresMap.get(structureId);
    }
  }
);
}
