{
  selenium.selectWindow("null");
  selenium.selectFrame("relative=top");
  selenium.open("/web/guest/home/");
  selenium.waitForElementPresent("link=Control Panel");
  selenium.click(RuntimeVariables.replace("link=Control Panel"));
  selenium.waitForPageToLoad("30000");
  selenium.click(RuntimeVariables.replace("link=Workflow Configuration"));
  selenium.waitForPageToLoad("30000");
  selenium.select("_152_workflowDefinitionName@com.liferay.portlet.messageboards.model.MBDiscussion",RuntimeVariables.replace("label=Single Approver (Version 1)"));
  selenium.clickAt("//input[@value='Save']",RuntimeVariables.replace(""));
  selenium.waitForPageToLoad("30000");
  assertEquals(RuntimeVariables.replace("Your request completed successfully."),selenium.getText("//div[@class='portlet-msg-success']"));
  assertEquals("Single Approver (Version 1)",selenium.getSelectedLabel("_152_workflowDefinitionName@com.liferay.portlet.messageboards.model.MBDiscussion"));
}
