{
  return new Statement(){
    @Override public void evaluate() throws Throwable {
      ReflectionTestUtil.setFieldValue(description,"fTestClass",PACLIntegrationJUnitTestRunner.getCurrentTestClass());
      HotDeployEvent hotDeployEvent=before(description.getTestClass());
      try {
        statement.evaluate();
      }
  finally {
        after(hotDeployEvent);
      }
    }
  }
;
}
