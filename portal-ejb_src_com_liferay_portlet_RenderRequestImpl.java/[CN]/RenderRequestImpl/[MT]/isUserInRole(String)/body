{
  String remoteUser=_req.getRemoteUser();
  if (remoteUser == null) {
    return false;
  }
 else {
    String companyId=PortalUtil.getCompanyId(_req);
    try {
      return RoleLocalServiceUtil.hasUserRole(remoteUser,companyId,role);
    }
 catch (    Exception e) {
      _log.warn(e);
    }
    return _req.isUserInRole(role);
  }
}
