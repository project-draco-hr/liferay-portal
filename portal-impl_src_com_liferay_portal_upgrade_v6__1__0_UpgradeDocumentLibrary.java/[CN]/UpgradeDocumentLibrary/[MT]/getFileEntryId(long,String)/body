{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getConnection();
    ps=con.prepareStatement("select fileEntryId from DLFileEntry where folderId = ? " + "and name = ?");
    ps.setLong(1,folderId);
    ps.setString(2,name);
    rs=ps.executeQuery();
    if (rs.next()) {
      return rs.getLong("fileEntryId");
    }
    return 0;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
