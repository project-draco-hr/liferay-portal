{
  int idx=0;
  if (Validator.isNotNull(filterName)) {
    Filter filter=_filters.get(filterName);
    if (filter != null) {
      for (; idx < _filterMappings.size(); idx++) {
        if (_filterMappings.get(idx).getFilter() == filter) {
          break;
        }
      }
    }
  }
  if (after) {
    idx++;
  }
  _filterMappings.add(idx,filterMapping);
}
