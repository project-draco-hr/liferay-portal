{
  User user=PortalUtil.getSelectedUser(req);
  if (user == null) {
    return;
  }
  long groupId=ParamUtil.getLong(req,"groupId");
  String[] addRoleIds=StringUtil.split(ParamUtil.getString(req,"addRoleIds"));
  String[] removeRoleIds=StringUtil.split(ParamUtil.getString(req,"removeRoleIds"));
  UserGroupRoleServiceUtil.addUserGroupRoles(user.getUserId(),groupId,addRoleIds);
  UserGroupRoleServiceUtil.deleteUserGroupRoles(user.getUserId(),groupId,removeRoleIds);
}
