{
  long parentRevisionId=ParamUtil.getLong(serviceContext,"parentRevisionId");
  LayoutRevision parentRevision=null;
  if (parentRevisionId > 0) {
    parentRevision=layoutRevisionPersistence.findByPrimaryKey(parentRevisionId);
  }
  if (parentRevision == null) {
    List<LayoutRevision> revisions=layoutRevisionPersistence.findByB_P(branchId,plid,0,1);
    if (!revisions.isEmpty()) {
      parentRevision=revisions.get(0);
    }
  }
  return parentRevision;
}
