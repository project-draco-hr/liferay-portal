{
  List<PortletPreferences> portletPreferences=portletPreferencesLocalService.getPortletPreferencesByPlid(layoutRevision.getLayoutRevisionId());
  for (  PortletPreferences portletPreference : portletPreferences) {
    try {
      portletPreferencesLocalService.deletePortletPreferences(portletPreference.getPortletPreferencesId());
    }
 catch (    NoSuchPortletPreferencesException nsppe) {
    }
  }
  layoutRevisionPersistence.remove(layoutRevision);
}
