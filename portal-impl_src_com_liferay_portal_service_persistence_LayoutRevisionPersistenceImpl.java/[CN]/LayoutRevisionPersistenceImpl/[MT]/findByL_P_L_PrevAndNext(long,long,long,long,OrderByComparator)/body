{
  LayoutRevision layoutRevision=findByPrimaryKey(layoutRevisionId);
  Session session=null;
  try {
    session=openSession();
    LayoutRevision[] array=new LayoutRevisionImpl[3];
    array[0]=getByL_P_L_PrevAndNext(session,layoutRevision,layoutSetBranchId,plid,layoutBranchId,orderByComparator,true);
    array[1]=layoutRevision;
    array[2]=getByL_P_L_PrevAndNext(session,layoutRevision,layoutSetBranchId,plid,layoutBranchId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
