{
  StringBundler sb=new StringBundler(6);
  sb.append("(@name=");
  String name=HtmlUtil.escapeXPathAttribute(String.valueOf(fieldCondition.getName()));
  sb.append(name);
  ComparisonOperator comparisonOperator=fieldCondition.getComparisonOperator();
  if (comparisonOperator.equals(ComparisonOperator.LIKE)) {
    sb.append(" and matches(dynamic-content, ");
  }
 else {
    sb.append(" and dynamic-content= ");
  }
  String value=HtmlUtil.escapeXPathAttribute(String.valueOf(fieldCondition.getValue()));
  sb.append(value);
  if (comparisonOperator.equals(ComparisonOperator.LIKE)) {
    sb.append(StringPool.CLOSE_PARENTHESIS);
  }
  sb.append(StringPool.CLOSE_PARENTHESIS);
  return sb.toString();
}
