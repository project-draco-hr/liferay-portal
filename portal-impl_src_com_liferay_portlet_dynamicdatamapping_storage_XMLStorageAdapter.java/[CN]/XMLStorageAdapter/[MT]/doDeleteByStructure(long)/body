{
  List<DDMStorageLink> ddmStorageLinks=DDMStorageLinkLocalServiceUtil.getStructureStorageLinks(structureId);
  for (  DDMStorageLink ddmStorageLink : ddmStorageLinks) {
    DDMContentLocalServiceUtil.deleteDDMContent(ddmStorageLink.getClassPK());
  }
  DDMStorageLinkLocalServiceUtil.deleteStructureStorageLinks(structureId);
}
