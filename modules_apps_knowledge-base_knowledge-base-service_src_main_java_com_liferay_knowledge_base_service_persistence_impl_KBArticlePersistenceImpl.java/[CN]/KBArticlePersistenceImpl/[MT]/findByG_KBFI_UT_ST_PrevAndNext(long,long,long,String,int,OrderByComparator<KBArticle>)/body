{
  KBArticle kbArticle=findByPrimaryKey(kbArticleId);
  Session session=null;
  try {
    session=openSession();
    KBArticle[] array=new KBArticleImpl[3];
    array[0]=getByG_KBFI_UT_ST_PrevAndNext(session,kbArticle,groupId,kbFolderId,urlTitle,status,orderByComparator,true);
    array[1]=kbArticle;
    array[2]=getByG_KBFI_UT_ST_PrevAndNext(session,kbArticle,groupId,kbFolderId,urlTitle,status,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
