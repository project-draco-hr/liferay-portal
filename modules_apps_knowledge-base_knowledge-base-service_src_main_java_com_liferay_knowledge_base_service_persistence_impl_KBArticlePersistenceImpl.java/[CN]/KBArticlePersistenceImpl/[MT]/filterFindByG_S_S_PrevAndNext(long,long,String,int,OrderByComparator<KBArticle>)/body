{
  if (!InlineSQLHelperUtil.isEnabled(groupId)) {
    return findByG_S_S_PrevAndNext(kbArticleId,groupId,sections,status,orderByComparator);
  }
  KBArticle kbArticle=findByPrimaryKey(kbArticleId);
  Session session=null;
  try {
    session=openSession();
    KBArticle[] array=new KBArticleImpl[3];
    array[0]=filterGetByG_S_S_PrevAndNext(session,kbArticle,groupId,sections,status,orderByComparator,true);
    array[1]=kbArticle;
    array[2]=filterGetByG_S_S_PrevAndNext(session,kbArticle,groupId,sections,status,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
