{
  Configuration configuration=null;
  try {
    Configuration[] factoryConfigurations=getFactoryConfigurations(factoryPid,ConfigurationModel.PROPERTY_COMPANY_ID,ConfigurationModel.PROPERTY_COMPANY_ID_DEFAULT);
    if ((factoryConfigurations != null) && (factoryConfigurations.length > 0)) {
      configuration=factoryConfigurations[0];
    }
  }
 catch (  IOException ioe) {
    ReflectionUtil.throwException(ioe);
  }
  return configuration;
}
