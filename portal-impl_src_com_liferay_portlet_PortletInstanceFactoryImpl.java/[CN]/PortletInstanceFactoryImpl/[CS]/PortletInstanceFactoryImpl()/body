{
  _pool=new ConcurrentHashMap<>();
  Registry registry=RegistryUtil.getRegistry();
  Filter filter=registry.getFilter("(&(javax.portlet.name=" + PortletKeys.MONITORING_INVOKER + ")"+ "(objectClass="+ InvokerPortletFactory.class.getName()+ "))");
  _serviceTracker=registry.trackServices(filter,new InvokerPortletFactoryTrackerCustomizer());
  _serviceTracker.open();
}
