{
  Matcher matcher=_lineBreakPattern.matcher(javaTerm.getContent());
  while (matcher.find()) {
    if (_javaSourceProcessor.getLevel(matcher.group(2)) >= 0) {
      continue;
    }
    int lineCount=javaTerm.getLineCount() + _javaSourceProcessor.getLineCount(javaTerm.getContent(),matcher.end(1));
    _javaSourceProcessor.processErrorMessage(_fileName,"Create a new var for " + StringUtil.trim(matcher.group(1)) + " for better readability: "+ _fileName+ " "+ lineCount);
  }
}
