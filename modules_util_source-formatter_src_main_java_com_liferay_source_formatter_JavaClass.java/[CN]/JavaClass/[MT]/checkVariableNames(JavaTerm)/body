{
  Matcher matcher=_variableNameStartingWithUpperCasePattern.matcher(javaTerm.getContent());
  while (matcher.find()) {
    int lineCount=javaTerm.getLineCount() + _javaSourceProcessor.getLineCount(javaTerm.getContent(),matcher.start(1)) - 1;
    _javaSourceProcessor.processErrorMessage(_fileName,"Variable " + matcher.group(1) + " should not start with uppercase: "+ _fileName+ " "+ lineCount);
  }
}
