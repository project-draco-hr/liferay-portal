{
  StringBundler sb=new StringBundler(15);
  sb.append("\n");
  sb.append(tabs);
  sb.append("if (");
  sb.append(ifCondition);
  sb.append(") {\n\n");
  sb.append(tabs);
  sb.append("\treturn ");
  sb.append(trueValue);
  sb.append(";\n");
  sb.append(tabs);
  sb.append("}\n\n");
  sb.append(tabs);
  sb.append("return ");
  sb.append(falseValue);
  sb.append(";\n");
  String newJavaTermContent=StringUtil.replace(javaTermContent,returnStatement,sb.toString());
  _classContent=StringUtil.replace(_classContent,javaTermContent,newJavaTermContent);
}
