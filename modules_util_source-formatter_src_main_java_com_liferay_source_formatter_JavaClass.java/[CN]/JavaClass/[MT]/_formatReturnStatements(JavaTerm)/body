{
  String javaTermContent=javaTerm.getContent();
  Matcher matcher=_returnPattern.matcher(javaTermContent);
  while (matcher.find()) {
    String returnStatement=matcher.group();
    if (returnStatement.contains(" {\n") || (!returnStatement.contains("|\n") && !returnStatement.contains("&\n"))) {
      continue;
    }
    String tabs=matcher.group(1);
    StringBundler sb=new StringBundler(11);
    sb.append(javaTermContent.substring(0,matcher.end(1)));
    sb.append("if (");
    sb.append(matcher.group(2));
    sb.append(") {\n\n");
    sb.append(tabs);
    sb.append("\treturn true;\n");
    sb.append(tabs);
    sb.append("}\n\n");
    sb.append(tabs);
    sb.append("return false;\n");
    sb.append(javaTermContent.substring(matcher.end()));
    String newJavaTermContent=sb.toString();
    _classContent=_classContent.replace(javaTermContent,newJavaTermContent);
    return;
  }
}
