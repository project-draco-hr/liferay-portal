{
  StringBundler sb=new StringBundler(19);
  sb.append("\n\n");
  sb.append(tabs);
  sb.append("boolean ");
  sb.append(variableName);
  sb.append(" = ");
  sb.append(falseValue);
  sb.append(";\n\n");
  sb.append(tabs);
  sb.append("if (");
  sb.append(ifCondition);
  sb.append(") {\n\n");
  sb.append(tabs);
  sb.append("\t");
  sb.append(variableName);
  sb.append(" = ");
  sb.append(trueValue);
  sb.append(";\n");
  sb.append(tabs);
  sb.append("}\n");
  String newJavaTermContent=StringUtil.replace(javaTermContent,booleanStatement,sb.toString());
  _classContent=StringUtil.replace(_classContent,javaTermContent,newJavaTermContent);
}
