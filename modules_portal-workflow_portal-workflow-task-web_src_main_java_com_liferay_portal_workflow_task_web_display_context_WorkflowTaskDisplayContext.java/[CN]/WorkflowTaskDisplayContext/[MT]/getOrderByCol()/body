{
  if (_orderByCol != null) {
    return _orderByCol;
  }
  _orderByCol=ParamUtil.getString(_request,"orderByCol");
  if (Validator.isNull(_orderByCol)) {
    _orderByCol=_portalPreferences.getValue(PortletKeys.MY_WORKFLOW_TASK,"order-by-col","last-activity-date");
  }
 else {
    boolean saveOrderBy=ParamUtil.getBoolean(_request,"saveOrderBy");
    if (saveOrderBy) {
      _portalPreferences.setValue(PortletKeys.MY_WORKFLOW_TASK,"order-by-col",_orderByCol);
    }
  }
  return _orderByCol;
}
