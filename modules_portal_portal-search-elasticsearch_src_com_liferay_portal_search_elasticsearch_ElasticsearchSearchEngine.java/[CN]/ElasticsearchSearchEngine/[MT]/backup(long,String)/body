{
  ElasticsearchConnection elasticsearchConnection=_elasticsearchConnectionManager.getElasticsearchConnection();
  Client client=elasticsearchConnection.getClient();
  AdminClient adminClient=client.admin();
  ClusterAdminClient clusterAdminClient=adminClient.cluster();
  CreateSnapshotRequestBuilder createSnapshotRequestBuilder=clusterAdminClient.prepareCreateSnapshot(_BACKUP_REPOSITORY_NAME,backupName);
  createSnapshotRequestBuilder.setWaitForCompletion(true);
  try {
    Future<CreateSnapshotResponse> future=createSnapshotRequestBuilder.execute();
    CreateSnapshotResponse createSnapshotResponse=future.get();
    LogUtil.logActionResponse(_log,createSnapshotResponse);
  }
 catch (  Exception e) {
    throw new SearchException(e);
  }
}
