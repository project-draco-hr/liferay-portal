{
  ServiceTrackerList<Indexer> indexerInstances=getServiceTrackinList(portlet,Indexer.class);
  List<String> indexerClasses=portlet.getIndexerClasses();
  for (  String indexerClass : indexerClasses) {
    Indexer indexerInstance=(Indexer)newInstance(Indexer.class,indexerClass);
    String[] classNames=ArrayUtil.append(indexerInstance.getClassNames(),indexerInstance.getClass().getName());
    Map<String,Object> map=new HashMap<String,Object>();
    map.put("indexer.classNames",classNames);
    indexerInstances.add(indexerInstance,map);
  }
  return indexerInstances;
}
