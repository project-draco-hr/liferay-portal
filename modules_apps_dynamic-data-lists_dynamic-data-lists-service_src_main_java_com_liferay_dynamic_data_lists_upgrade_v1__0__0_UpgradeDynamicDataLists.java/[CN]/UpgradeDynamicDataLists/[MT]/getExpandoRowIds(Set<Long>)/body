{
  StringBundler sb=new StringBundler((expandoRowIds.size() * 2) + 1);
  sb.append(StringPool.OPEN_PARENTHESIS);
  for (int i=0; i < expandoRowIds.size(); i++) {
    sb.append("rowId_ = ?");
    if ((i + 1) < expandoRowIds.size()) {
      sb.append(" OR ");
    }
  }
  sb.append(StringPool.CLOSE_PARENTHESIS);
  return sb.toString();
}
