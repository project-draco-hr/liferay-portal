{
  DLFileEntry dlFileEntry=findByPrimaryKey(fileEntryId);
  Session session=null;
  try {
    session=openSession();
    DLFileEntry[] array=new DLFileEntryImpl[3];
    array[0]=getByCompanyId_PrevAndNext(session,dlFileEntry,companyId,orderByComparator,true);
    array[1]=dlFileEntry;
    array[2]=getByCompanyId_PrevAndNext(session,dlFileEntry,companyId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
