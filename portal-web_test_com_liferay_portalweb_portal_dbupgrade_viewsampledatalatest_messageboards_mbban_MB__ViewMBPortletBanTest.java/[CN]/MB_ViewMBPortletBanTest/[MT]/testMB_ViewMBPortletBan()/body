{
  selenium.selectWindow("null");
  selenium.selectFrame("relative=top");
  selenium.open("/web/mb-ban-community/message-boards-test-page/");
  selenium.waitForVisible("link=Message Boards Test Page");
  selenium.clickAt("link=Message Boards Test Page",RuntimeVariables.replace("Message Boards Test Page"));
  selenium.waitForPageToLoad("30000");
  assertEquals(RuntimeVariables.replace("You have been banned by the moderator."),selenium.getText("//div[@class='portlet-msg-error']"));
}
