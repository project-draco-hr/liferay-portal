{
  Long groupIdObj=_ownerIdColumn.getGroupId();
  Boolean privateLayoutObj=_ownerIdColumn.isPrivateLayout();
  String layoutId=(String)_layoutIdColumn.getTemp();
  if ((!layoutId.equals("SHARED")) && (groupIdObj != null) && (privateLayoutObj != null)) {
    String oldOwnerId=null;
    if (privateLayoutObj.booleanValue()) {
      oldOwnerId="PRI.";
    }
 else {
      oldOwnerId="PUB.";
    }
    oldOwnerId+=_ownerIdColumn.getOldGroupId().longValue();
    String oldPlidValue="{layoutId=" + layoutId + ", ownerId="+ oldOwnerId+ "}";
    return _layoutPlidMapper.getNewValue(oldPlidValue);
  }
 else {
    return new Long(PortletKeys.PREFS_PLID_SHARED);
  }
}
