{
  if (templateId.contains(TemplateConstants.JOURNAL_SEPARATOR) || templateId.contains(TemplateConstants.SERVLET_SEPARATOR) || templateId.contains(TemplateConstants.THEME_LOADER_SEPARATOR)) {
    return null;
  }
  Class<?> clazz=getClass();
  ClassLoader classLoader=clazz.getClassLoader();
  if (_log.isDebugEnabled()) {
    _log.debug("Loading " + templateId);
  }
  return classLoader.getResource(templateId);
}
