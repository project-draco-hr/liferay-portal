{
  if (templateId.contains(TemplateConstants.JOURNAL_SEPARATOR) || templateId.contains(TemplateConstants.SERVLET_SEPARATOR) || templateId.contains(TemplateConstants.TEMPLATE_SEPARATOR)|| templateId.contains(TemplateConstants.THEME_LOADER_SEPARATOR)) {
    return null;
  }
  if (_log.isDebugEnabled()) {
    _log.debug("Loading " + templateId);
  }
  return _classLoader.getResource(templateId);
}
