{
  Set<Locale> ddmFormAvailableLocales=ddmFormField.getDDMForm().getAvailableLocales();
  ddmFormField.setPredefinedValue(ddmFormFieldValue);
  ddmFormAvailableLocales.addAll(ddmFormFieldValue.getAvailableLocales());
  for (  Locale locale : ddmFormAvailableLocales) {
    ddmFormField.getLabel().addString(locale,ddmFormField.getLabel().getString(locale));
    ddmFormField.getStyle().addString(locale,ddmFormField.getStyle().getString(locale));
    ddmFormField.getTip().addString(locale,ddmFormField.getTip().getString(locale));
  }
}
