{
  for (  com.liferay.dynamic.data.mapping.storage.Field field : fields) {
    if (!ddmStructure.hasField(field.getName())) {
      throw new StorageFieldNameException("No field exists for {name=" + field.getName() + "}");
    }
    if (ddmStructure.getFieldRequired(field.getName()) && Validator.isNull(field.getValue(defaultlocale)) && (classNameId == JournalArticleConstants.CLASSNAME_ID_DEFAULT)) {
      throw new StorageFieldRequiredException("Required field value is not present for " + defaultlocale);
    }
  }
}
