{
  if (!InlineSQLHelperUtil.isEnabled(groupId)) {
    return countByG(groupId);
  }
  StringBundler query=new StringBundler(2);
  query.append(_FILTER_SQL_COUNT_LAYOUTBRANCH_WHERE);
  query.append(_FINDER_COLUMN_G_GROUPID_2);
  String sql=InlineSQLHelperUtil.replacePermissionCheck(query.toString(),LayoutBranch.class.getName(),_FILTER_COLUMN_PK,_FILTER_COLUMN_USERID,groupId);
  Session session=null;
  try {
    session=openSession();
    SQLQuery q=session.createSQLQuery(sql);
    q.addScalar(COUNT_COLUMN_NAME,com.liferay.portal.kernel.dao.orm.Type.LONG);
    QueryPos qPos=QueryPos.getInstance(q);
    qPos.add(groupId);
    Long count=(Long)q.uniqueResult();
    return count.intValue();
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
