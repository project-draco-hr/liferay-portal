{
  try {
    PortalPreferences preferences=PortletPreferencesFactoryUtil.getPortalPreferences(renderRequest);
    String organizationView=ParamUtil.getString(renderRequest,"organizationView");
    if (Validator.isNotNull(organizationView)) {
      preferences.setValue(PortletKeys.ENTERPRISE_ADMIN_ORGANIZATIONS,"organization-view",organizationView);
    }
 else {
      organizationView=preferences.getValue(PortletKeys.ENTERPRISE_ADMIN_ORGANIZATIONS,"organization-view",PropsValues.ORGANIZATIONS_VIEWS_DEFAULT);
    }
    if (!ArrayUtil.contains(PropsValues.ORGANIZATIONS_VIEWS,organizationView)) {
      organizationView=PropsValues.ORGANIZATIONS_VIEWS_DEFAULT;
      preferences.setValue(PortletKeys.ENTERPRISE_ADMIN_ORGANIZATIONS,"organization-view",organizationView);
    }
    renderRequest.setAttribute("tabs1","organizations");
    return mapping.findForward("portlet.enterprise_admin.view");
  }
 catch (  Exception e) {
    if (e instanceof PrincipalException) {
      SessionErrors.add(renderRequest,e.getClass().getName());
      return mapping.findForward("portlet.enterprise_admin.error");
    }
 else {
      throw e;
    }
  }
}
