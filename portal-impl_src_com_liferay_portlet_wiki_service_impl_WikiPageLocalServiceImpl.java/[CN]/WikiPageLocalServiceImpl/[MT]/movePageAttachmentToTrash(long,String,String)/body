{
  if (Validator.isNull(fileName)) {
    return;
  }
  WikiPage page=getPage(nodeId,title);
  long companyId=page.getCompanyId();
  long repositoryId=CompanyConstants.SYSTEM;
  String deletedAttachmentsDir=page.getDeletedAttachmentsDir();
  if (!DLStoreUtil.hasDirectory(companyId,repositoryId,deletedAttachmentsDir)) {
    DLStoreUtil.addDirectory(companyId,repositoryId,deletedAttachmentsDir);
  }
  String deletedFileName=deletedAttachmentsDir + StringPool.FORWARD_SLASH + DLAppUtil.appendTrashNamespace(FileUtil.getShortFileName(fileName),StringPool.UNDERLINE);
  try {
    DLStoreUtil.updateFile(companyId,repositoryId,fileName,deletedFileName);
  }
 catch (  NoSuchFileException nsfe) {
    DLStoreUtil.deleteDirectory(companyId,repositoryId,deletedAttachmentsDir);
  }
}
