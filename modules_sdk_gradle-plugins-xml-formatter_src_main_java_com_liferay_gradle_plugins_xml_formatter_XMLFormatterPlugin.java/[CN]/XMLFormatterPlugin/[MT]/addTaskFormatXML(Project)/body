{
  final FormatXMLTask formatXMLTask=GradleUtil.addTask(project,FORMAT_XML_TASK_NAME,FormatXMLTask.class);
  formatXMLTask.setDescription("Runs Liferay XML Formatter to format the project files.");
  PluginContainer pluginContainer=project.getPlugins();
  pluginContainer.withType(JavaPlugin.class,new Action<JavaPlugin>(){
    @Override public void execute(    JavaPlugin javaPlugin){
      configureTaskFormatXMLForJavaPlugin(formatXMLTask);
    }
  }
);
  return formatXMLTask;
}
