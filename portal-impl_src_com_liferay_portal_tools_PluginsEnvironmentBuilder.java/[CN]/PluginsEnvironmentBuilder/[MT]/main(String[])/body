{
  String dir=null;
  boolean svn=false;
  if (args.length > 0) {
    dir=args[0];
    if (args.length == 2) {
      svn=GetterUtil.getBoolean(args[1]);
    }
  }
  if (Validator.isNull(dir)) {
    System.err.println("Please enter a valid plugins directory.");
    return;
  }
  new PluginsEnvironmentBuilder(new File(dir),svn);
}
