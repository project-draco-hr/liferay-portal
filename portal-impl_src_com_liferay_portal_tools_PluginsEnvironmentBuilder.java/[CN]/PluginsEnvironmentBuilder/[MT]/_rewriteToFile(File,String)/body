{
  FileInputStream fis=null;
  String oldContent="";
  boolean write=true;
  if (file.exists()) {
    try {
      fis=new FileInputStream(file);
      byte[] bytes=new byte[fis.available()];
      fis.read(bytes);
      oldContent=new String(bytes,StringPool.UTF8);
    }
  finally {
      if (fis != null) {
        fis.close();
      }
    }
    if (content.equals(oldContent)) {
      write=false;
    }
  }
  if (write) {
    _writeToFile(file,content);
  }
  return write;
}
