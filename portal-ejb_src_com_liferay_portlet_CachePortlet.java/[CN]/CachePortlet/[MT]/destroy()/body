{
  if (_destroyable) {
    ClassLoader classLoader=_getPortletClassLoader();
    if (classLoader != null) {
      Thread.currentThread().setContextClassLoader(classLoader);
    }
    _portlet.destroy();
    if (classLoader != null) {
      Thread.currentThread().setContextClassLoader(classLoader.getParent());
    }
  }
  _destroyable=false;
}
