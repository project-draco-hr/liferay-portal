{
  CyrusUser user=null;
  try {
    user=CyrusUserUtil.findByPrimaryKey(userId);
  }
 catch (  NoSuchCyrusUserException nscue) {
    user=new CyrusUser(userId,password);
  }
catch (  Exception e) {
    _log.error(e,e);
  }
  try {
    user.setPassword(password);
    CyrusUserUtil.update(user);
  }
 catch (  Exception e) {
    _log.error(e,e);
  }
}
