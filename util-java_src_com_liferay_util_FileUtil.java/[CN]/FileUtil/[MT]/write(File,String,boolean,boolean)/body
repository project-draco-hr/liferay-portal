{
  if (file.getParent() != null) {
    mkdirs(file.getParent());
  }
  if (lazy && file.exists()) {
    String content=read(file);
    if (content.equals(s)) {
      return;
    }
  }
  BufferedWriter bw=new BufferedWriter(new OutputStreamWriter(new FileOutputStream(file,append),ENCODING));
  bw.write(s);
  bw.close();
}
