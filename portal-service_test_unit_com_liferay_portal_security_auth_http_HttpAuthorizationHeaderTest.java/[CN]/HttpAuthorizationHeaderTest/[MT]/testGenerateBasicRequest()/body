{
  HttpAuthorizationHeader httpAuthorizationHeader=new HttpAuthorizationHeader(HttpAuthorizationHeader.SCHEME_BASIC);
  httpAuthorizationHeader.setAuthParameter(HttpAuthorizationHeader.AUTH_PARAMETER_NAME_USERNAME,"test@liferay.com");
  httpAuthorizationHeader.setAuthParameter(HttpAuthorizationHeader.AUTH_PARAMETER_NAME_PASSWORD,"test");
  Assert.assertEquals(httpAuthorizationHeader.toString(),"Basic " + Base64.encode("test@liferay.com:test".getBytes()));
}
