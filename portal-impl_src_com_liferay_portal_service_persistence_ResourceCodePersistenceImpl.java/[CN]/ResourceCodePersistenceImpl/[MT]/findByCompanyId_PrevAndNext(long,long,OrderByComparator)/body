{
  ResourceCode resourceCode=findByPrimaryKey(codeId);
  Session session=null;
  try {
    session=openSession();
    ResourceCode[] array=new ResourceCodeImpl[3];
    array[0]=getByCompanyId_PrevAndNext(session,resourceCode,companyId,orderByComparator,true);
    array[1]=resourceCode;
    array[2]=getByCompanyId_PrevAndNext(session,resourceCode,companyId,orderByComparator,false);
    return array;
  }
 catch (  Exception e) {
    throw processException(e);
  }
 finally {
    closeSession(session);
  }
}
