{
  if (mCheckNames) {
    verifyNameValidity(target,mNsAware);
  }
  fastWriteRaw('<','?');
  fastWriteRaw(target);
  if (data != null && data.length() > 0) {
    if (mCheckContent) {
      int ix=data.indexOf('?');
      if (ix >= 0) {
        ix=data.indexOf("?>",ix);
        if (ix >= 0) {
          return ix;
        }
      }
    }
    fastWriteRaw(' ');
    writeRaw(data);
  }
  fastWriteRaw('?','>');
  return -1;
}
