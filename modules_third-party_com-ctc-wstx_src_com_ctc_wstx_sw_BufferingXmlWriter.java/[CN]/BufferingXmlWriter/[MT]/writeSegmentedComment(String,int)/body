{
  int len=content.length();
  if (index == (len - 1)) {
    fastWriteRaw("<!--");
    writeRaw(content);
    fastWriteRaw(" -->");
    return;
  }
  fastWriteRaw("<!--");
  int start=0;
  while (index >= 0) {
    writeRaw(content,start,(index + 1) - start);
    fastWriteRaw(' ');
    start=index + 1;
    index=content.indexOf("--",start);
  }
  writeRaw(content,start,len - start);
  if (content.charAt(len - 1) == '-') {
    fastWriteRaw(' ');
  }
  fastWriteRaw("-->");
}
