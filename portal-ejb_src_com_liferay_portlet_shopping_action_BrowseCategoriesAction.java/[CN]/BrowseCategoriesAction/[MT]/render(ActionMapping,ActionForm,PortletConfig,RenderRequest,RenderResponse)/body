{
  try {
    List categories=ShoppingCategoryServiceUtil.getCategories(PortalUtil.getCompanyId(req),ShoppingCategory.DEFAULT_PARENT_CATEGORY_ID);
    req.setAttribute(WebKeys.SHOPPING_CATEGORIES,categories);
    if (req.getWindowState().equals(WindowState.NORMAL)) {
      return mapping.findForward("portlet.shopping.view");
    }
 else {
      return mapping.findForward("portlet.shopping.browse_categories");
    }
  }
 catch (  Exception e) {
    req.setAttribute(PageContext.EXCEPTION,e);
    return mapping.findForward(Constants.COMMON_ERROR);
  }
}
