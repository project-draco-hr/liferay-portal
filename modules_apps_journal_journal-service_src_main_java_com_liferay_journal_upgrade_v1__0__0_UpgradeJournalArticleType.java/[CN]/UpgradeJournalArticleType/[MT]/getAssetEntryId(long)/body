{
  Connection con=null;
  PreparedStatement ps=null;
  ResultSet rs=null;
  try {
    con=DataAccess.getUpgradeOptimizedConnection();
    ps=con.prepareStatement("select entryId from AssetEntry where classNameId = ? and " + "classPK = ?");
    ps.setLong(1,PortalUtil.getClassNameId("com.liferay.portlet.journal.model.JournalArticle"));
    ps.setLong(2,classPK);
    rs=ps.executeQuery();
    while (rs.next()) {
      return rs.getLong("entryId");
    }
    return 0;
  }
  finally {
    DataAccess.cleanUp(con,ps,rs);
  }
}
