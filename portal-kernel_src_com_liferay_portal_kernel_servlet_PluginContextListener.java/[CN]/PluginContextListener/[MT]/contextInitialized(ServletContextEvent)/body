{
  servletContext=servletContextEvent.getServletContext();
  Thread currentThread=Thread.currentThread();
  pluginClassLoader=currentThread.getContextClassLoader();
  ClassLoaderPool.register(servletContext.getServletContextName(),pluginClassLoader);
  servletContext.setAttribute(PLUGIN_CLASS_LOADER,pluginClassLoader);
  ServletContextPool.put(servletContext.getServletContextName(),servletContext);
  registerPortalLifecycle();
}
